.order-item {
    padding: 0 40rpx;
    background: #fff;
}

.order-item .header {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    height: 80rpx;
}

.order-item .header ._p {
    font-size: 28rpx;
    line-height: 44rpx;
    color: #666;
}

.order-item .header ._p ._span {
    font-family: DINMedium;
    color: #272633;
}

.order-item .mallItem {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    padding: 24rpx 0;
}

.order-item .mallItem ._img {
    width: 200rpx;
    height: 200rpx;
    margin-right: 24rpx;
    -ms-flex-negative: 0;
    flex-shrink: 0;
}

.order-item .mallItem ._div {
    -webkit-box-flex: 1;
    -ms-flex-positive: 1;
    flex-grow: 1;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: start;
    -ms-flex-align: start;
    align-items: flex-start;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
}

.order-item .mallItem ._div .name {
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    line-height: 44rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.order-item .mallItem ._div .price {
    margin-top: 24rpx;
    font-family: DINMedium;
    font-size: 32rpx;
    line-height: 44rpx;
    color: #e62e4d;
}

.order-item .total {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: start;
    -ms-flex-pack: start;
    justify-content: flex-start;
    height: 80rpx;
}

.order-item .total ._span {
    font-family: DINMedium;
    font-size: 24rpx;
    line-height: 36rpx;
}

.order-item .total ._span:first-child {
    margin-right: 10rpx;
    color: #666;
}

.order-item .total ._span:nth-child(2) {
    color: #333;
}

.order-item .express {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: start;
    -ms-flex-pack: start;
    justify-content: flex-start;
    height: 80rpx;
}

.order-item .express ._span {
    font-size: 24rpx;
    line-height: 36rpx;
    color: #666;
}

.order-item .express ._span:nth-child(2) {
    color: #3081f2;
}

.vertical-line {
    position: relative;
}

.vertical-line:before {
    content: "";
    display: block;
    position: absolute;
    top: 0;
    width: 100%;
    height: 1rpx;
    background: #f5f5fa;
}