.wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    min-height: 100vh;
    background: #fafafc;
}

.wrapper form {
    margin-top: 16rpx;
    display: block;
}

.wrapper form .form-item {
    background: #fff;
    padding: 0 40rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: start;
    -ms-flex-pack: start;
    justify-content: flex-start;
    height: 80rpx;
    position: relative;
}

.wrapper form .form-item:not(:last-child):after {
    position: absolute;
    content: "";
    width: 100%;
    left: 40rpx;
    right: 40rpx;
    height: 1rpx;
    background: #f5f5fa;
    bottom: 0;
}

.wrapper form .form-item:last-child {
    margin-top: 16rpx;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
}

.wrapper form .form-item:last-child .checkbox {
    width: 64rpx;
    height: 40rpx;
    background: #999;
    border: 2rpx solid #999;
    border-radius: 20rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: start;
    -ms-flex-pack: start;
    justify-content: flex-start;
    box-sizing: border-box;
}

.wrapper form .form-item:last-child .checkbox ._span {
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    background: #fff;
}

.wrapper form .form-item:last-child .checkbox.active {
    background: #e62e4d;
    border: 2rpx solid #e62e4d;
    -webkit-box-pack: end;
    -ms-flex-pack: end;
    justify-content: flex-end;
}

.wrapper form .form-item ._p:first-child {
    font-size: 28rpx;
    line-height: 44rpx;
    color: #333;
    min-width: 160rpx;
}

.wrapper form .form-item input {
    -webkit-box-flex: 1;
    -ms-flex-positive: 1;
    flex-grow: 1;
    font-size: 28rpx;
    line-height: 44rpx;
    color: #333;
}

.wrapper form .form-item input::-webkit-input-placeholder {
    color: #999;
}

.wrapper form .form-item input::-moz-placeholder {
    color: #999;
}

.wrapper form .form-item input:-ms-input-placeholder {
    color: #999;
}

.wrapper form .form-item input::-ms-input-placeholder {
    color: #999;
}

.wrapper form .form-item input::-webkit-input-placeholder {
    color: #999;
}

.wrapper form .form-item input::placeholder {
    color: #999;
}

.wrapper form .form-item .picker {
    display: block;
    -webkit-box-flex: 1;
    -ms-flex-positive: 1;
    flex-grow: 1;
}

.wrapper form .form-item .picker .placeholder {
    font-size: 28rpx;
    line-height: 44rpx;
    color: #999;
}

.wrapper form .form-item .picker ._p,.wrapper form .form-item .picker ._span {
    display: block;
}

.wrapper .confirm {
    padding: 0 40rpx;
    margin-top: 56rpx;
}

.wrapper .confirm ._p {
    background: #e62e4d;
    height: 88rpx;
    font-size: 32rpx;
    line-height: 88rpx;
    color: #fff;
    text-align: center;
}

.back-arrow {
    position: absolute;
    left: 16rpx;
    height: 88rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
}

.back-arrow ._i {
    font-size: 48rpx;
}