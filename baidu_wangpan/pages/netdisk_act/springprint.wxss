page {
    overflow: auto;
}

.page-error {
    height: 100%;
    padding-top: 300rpx;
    padding-bottom: 300rpx;
    text-align: center;
}

.active-wrap {
    position: relative;
    width: 100%;
    height: 100%;
}

.family-position {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

.active-image {
    width: 100%;
    height: 100%;
    display: block;
}

.family-bg {
    display: block;
    width: 100%;
}

.family-wrap {
    position: absolute;
    display: flex;
    top: 0;
    right: 0;
    width: 100%;
    justify-content: flex-end;
}

.family-prize {
    display: flex;
    align-items: center;
}

.family-prize-con,.family-prize-share {
    width: 150rpx;
    height: 80rpx;
    padding: 0;
    background: rgba(0,0,0,0);
}

.family-prize-share {
    width: 100rpx;
}

.family-prize-share::after,.family-prize-con::after {
    border: none;
}

.goods-position {
    position: relative;
    margin-top: -1rpx;
}

.goods-bg {
    position: absolute;
    left: 90rpx;
    bottom: 210rpx;
    width: 574rpx;
}

.rules {
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    left: 307rpx;
    top: 476rpx;
    color: #886a40;
}

.rules image {
    width: 127rpx;
    height: 25rpx;
}

.dialog-content {
    height: 302rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 38rpx;
    line-height: 48rpx;
}

.dialog-btn {
    width: 410rpx;
    height: 104rpx;
    display: block;
    background-repeat: no-repeat;
    background-size: contain;
    color: #999999;
    font-size: 36rpx;
    background-color: transparent;
    line-height: 86rpx;
}

.retry {
    text-decoration: underline;
    color: #3888ff;
}