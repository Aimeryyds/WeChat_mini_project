.preview-audio-wrap {
    width: 100%;
    height: 100%;
}

.preview-audio-wrap .top-gap {
    width: 100%;
    height: 98rpx;
}

.preview-audio-wrap .audio-bg-wrap {
    width: 300rpx;
    height: 300rpx;
    margin: 0 auto;
}

.preview-audio-wrap .audio-bg {
    width: 300rpx;
    height: 300rpx;
    border-radius: 50%;
    background: url('https://staticwx.cdn.bcebos.com/mini-program/images/ic_music_bg.png') no-repeat center;
    background-size: 300rpx 300rpx;
}

.preview-audio-wrap .audio-bg.active {
    animation: bgRoate 3s infinite linear;
}

@-webkit-keyframes bgRoate {
    0% {
        transform: rotateZ(0deg);
    }

    25% {
        transform: rotate(90deg);
    }

    50% {
        transform: rotate(180deg);
    }

    75% {
        transform: rotate(270deg);
    }

    100% {
        transform: rotateZ(360deg);
    }
}

@keyframes bgRoate {
    0% {
        transform: rotateZ(0deg);
    }

    25% {
        transform: rotate(90deg);
    }

    50% {
        transform: rotate(180deg);
    }

    75% {
        transform: rotate(270deg);
    }

    100% {
        transform: rotateZ(360deg);
    }
}

@-webkit-keyframes around {
    from {
        transform: translateX(150%);
    }

    to {
        transform: translateX(-160%);
    }
}

@keyframes around {
    from {
        transform: translateX(150%);
    }

    to {
        transform: translateX(-160%);
    }
}

.marquee_container {
    height: 1.2em;
    position: relative;
    width: 100%;
}

.marquee_container:hover {
    animation-play-state: paused;
}

.marquee_text {
    display: inline-block;
    white-space: nowrap;
    animation-name: around;
    animation-duration: 10s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
}

