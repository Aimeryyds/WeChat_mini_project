.top-title {
    text-align: center;
    margin-top: 100rpx;
    font-size: 32rpx;
    font-weight: bold;
}

.video-title {
    margin: 200rpx 0 52rpx 0;
    color: #333;
    font-size: 40rpx;
    font-weight: bold;
    text-align: center;
}

.video-wrap {
    display: flex;
    justify-content: center;
}

.help_container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: calc(100% - 100rpx);
}

.help_poster {
    border-radius: 10rpx;
    width: 686rpx;
    height: 594rpx;
    background-color: rgba(0,0,0,0.1);
}

.video_cover {
    border-radius: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    margin-top: -594rpx;
    width: 686rpx;
    height: 594rpx;
    background-color: rgba(0,0,0,0);
}

.video_cover image {
    width: 98rpx;
    height: 98rpx;
}