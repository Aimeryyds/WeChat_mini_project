.display-block {
    display: block;
}

.display-inline-block {
    display: inline-block;
}

.inline-block-v-middle {
    display: inline-block;
    vertical-align: middle;
}

.text-center {
    text-align: center;
}

.margin-h-center {
    margin-left: auto;
    margin-right: auto;
}

.extract-code__user {
    padding-top: 96rpx;
    height: 182rpx;
}

.extract-code__user-avatar {
    width: 98rpx;
    height: 98rpx;
    border-radius: 50%;
}

.extract-code__user-name {
    font-size: 30rpx;
    color: #212732;
    margin-top: 8rpx;
}

.extract-code__user-desc {
    font-size: 24rpx;
    color: #8F949F;
}

.extract-code__form {
    margin-top: 122rpx;
    width: 590rpx;
    margin-left: 80rpx;
}

.extract-code__input {
    background: #FAFAFB;
    border-radius: 50rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    color: #212732;
    font-weight: 700;
}

.extract-code__input-placeholder {
    font-size: 28rpx;
    color: #8F949F;
    font-weight: 700;
}

.extract-code__obtain-btn {
    margin-top: 58rpx;
    text-align: center;
}

.extract-code__obtain-btn .countdown {
    color: #8F949F;
    letter-spacing: 0;
    font-size: 24rpx;
    margin-top: 24rpx;
    display: inline-block;
}

.extract-code__verify-code {
    margin-top: 58rpx;
}

.extract-code__verify-code-input {
    width: 324rpx;
    margin-right: 40rpx;
}

.extract-code__verify-code-img {
    width: 226rpx;
    height: 100rpx;
}

.extract-code__form-item {
    position: relative;
}

.extract-code__form-item-err {
    position: absolute;
    font-size: 24rpx;
    line-height: 1;
    bottom: -34rpx;
    left: 8rpx;
    color: #FF436A;
}

.extract-code__verify-code-img-tip {
    color: #06A7FF;
}

.extract-code__verify-code-img--error {
    bottom: 38rpx;
}

.extract-code__obtain-btn--disabled {
    opacity: 0.5;
}