@import "../../netdisk_templates/loading_list/loading_list.wxss";

@import "../../Components/ImagePreview/ImagePreview.wxss";

.share-header {
    width: 100%;
    height: 128rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    overflow: hidden;
    padding-left: 32rpx;
    box-shadow: 0rpx 10rpx 18rpx rgba(212,221,236,.4);
    z-index: 2;
    background-color: #fff;
}

.baidu-logo {
    width: 246rpx;
    height: 58rpx;
    background: url('https://staticwx.cdn.bcebos.com/mini-program/images/netdisk_logo.png') no-repeat;
    background-position: left center;
    background-size: 246rpx 58rpx;
}

.avatar-wrap {
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    margin-right: 32rpx;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
    background-size: 72rpx 72rpx;
    background-color: #ebebeb;
}