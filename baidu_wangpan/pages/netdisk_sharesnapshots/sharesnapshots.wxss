@import "../../netdisk_templates/snapShootList/snapShootList.wxss";

.snapshot-wrap {
    width: 100%;
    height: 100%;
    position: relative;
}

.snapshot-wrap .shot-wrap-bg.video {
    width: 100%;
    height: 600rpx;
    background: url('https://staticwx.cdn.bcebos.com/mini-program/images/bg_video_default.png') no-repeat center;
    background-size: 100% 600rpx;
}

.snapshot-wrap .shot-wrap-bg.image {
    width: 100%;
    height: 600rpx;
    background: url('https://staticwx.cdn.bcebos.com/mini-program/images/default_map.png') no-repeat center;
    background-size: 100% 600rpx;
}

.snapshot-wrap .shot-wrap-bg.list {
    width: 100%;
    height: 600rpx;
    background: url('https://staticwx.cdn.bcebos.com/mini-program/images/bg_card_file.png') no-repeat center;
    background-size: 100% 600rpx;
}

.snapshot-wrap .shot-wrap-bg .media-shot-wrap {
    width: 100%;
    height: 600rpx;
    position: relative;
    overflow: hidden;
}

.snapshot-wrap .shot-wrap-bg .media-shot-wrap .shot-show {
    position: absolute;
}

.snapshot-wrap .shot-wrap-bg .media-shot-wrap .video-head-projection {
    position: absolute;
    width: 100%;
    height: 161rpx;
    background: url('https://staticwx.cdn.bcebos.com/mini-program/images/bg_card_video_projection.png') no-repeat center;
    top: 0;
    background-size: 100% 161rpx;
}

.snapshot-wrap .shot-wrap-bg .media-shot-wrap .media-more {
    width: 60rpx;
    height: 57rpx;
    background: url('https://staticwx.cdn.bcebos.com/mini-program/images/ic_card_file.png') no-repeat center;
    background-size: 60rpx 57rpx;
    position: absolute;
    right: 40rpx;
    bottom: 40rpx;
}

.snapshot-wrap .shot-wrap-bg .media-shot-wrap .play-button {
    width: 88rpx;
    height: 88rpx;
    background: url('https://staticwx.cdn.bcebos.com/mini-program/images/bg_card_video_playing_button.png') no-repeat center;
    background-size: 88rpx 88rpx;
    position: absolute;
    left: calc(50% - 44rpx);
    top: calc(50% - 44rpx);
}

.snapshot-wrap .shot-wrap-bg .media-shot-wrap .video-size {
    display: inline-block;
    margin: 0 auto;
    color: #fff;
    font-size: 24rpx;
    width: 100%;
    text-align: center;
    position: absolute;
    top: calc(50% + 68rpx);
}

.snapshot-wrap .shot-wrap-bg .media-shot-wrap .video-name-wrap {
    position: absolute;
    top: 40rpx;
    left: 40rpx;
    width: calc(100% - 40rpx);
}

.snapshot-wrap .shot-wrap-bg .media-shot-wrap .video-name {
    display: -webkit-box;
    color: #fff;
    font-size: 32rpx;
    line-height: 36rpx;
    width: calc(100% - 40rpx);
    max-height: 72rpx;
    overflow: hidden;
    position: relative;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
}

.snapshot-wrap .shot-name-wrap {
    width: 100%;
    margin-top: 48rpx;
    text-align: center;
}

.snapshot-wrap .shot-name-wrap .shot-tip {
    line-height: 100%;
    color: #999;
    font-size: 28rpx;
}

.snapshot-wrap .shot-name-wrap .shot-name {
    color: #333;
    font-size: 40rpx;
    font-weight: bold;
    width: calc(100% - 116rpx);
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 0 auto;
    margin-top: 24rpx;
}

.snapshot-wrap .shot-share-button {
    width: 686rpx;
    height: 100rpx;
    margin: 48rpx auto;
}

.snapshot-wrap .shot-share-buttonBlock {
    width: 96%;
    height: 100rpx;
    margin: 48rpx auto;
    display: flex;
    align-items: center;
    flex-direction: row;
    align-content: space-around;
}

.share-buttonBlock__ispc {
    justify-content: center;
}

.snapshot-wrap .shot-share-buttonBlock .shareBtn {
    margin: 10rpx;
    width: 50%;
}

.snapshot-wrap .shot-warn-tips {
    width: 100%;
    text-align: center;
    position: absolute;
    bottom: 32rpx;
    color: #999;
    font-size: 24rpx;
}

.share-member-tip {
    height: 58rpx;
    width: 170rpx;
    position: absolute;
    right: 0;
    top: 24rpx;
    z-index: 1;
}

.share-member-tip.is-svip {
    width: 184rpx;
}