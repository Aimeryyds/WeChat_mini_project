.hd-logo {
    width: 276rpx;
    height: 92rpx;
    background: url(https://wappass.baidu.com/static/wpsecurity/img/wechat/baidu_logo.png) no-repeat;
    background-size: 276rpx 92rpx;
    margin: 100rpx auto 0;
}

.bd-phonenum {
    display: block;
    height: 100%;
    line-height: 100rpx;
    -webkit-box-flex: 1;
    -moz-box-flex: 1;
    flex: 1;
    flex-basis: 0;
    padding-right: 30px;
}

.bd-loginbtn {
    margin: 50rpx 0 0 0;
}

.getcode-btn {
    background: #3c76ff;
    border-radius: 2px;
    color: #90b6ff;
    font-size: 36rpx;
}

.getcode-btn[disabled]:not([type]) {
    background: #3c76ff;
    color: #90b6ff;
}

.userprotocol {
    font-size: 24rpx;
    color: #999;
    margin-top: 40rpx;
    display: block;
}

.section {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    margin-top: 70rpx;
    background-color: #fff;
    position: relative;
    height: 100rpx;
    padding-left: 34rpx;
    border: 1px solid #ddd;
}

.input-clearValue {
    width: 32rpx;
    height: 32rpx;
    background: url('https://wappass.baidu.com/static/wpsecurity/img/wechat/close.png') no-repeat center center;
    background-size: 32rpx 32rpx;
    position: absolute;
    right: 28rpx;
    top: 50%;
    margin-top: -16rpx;
    display: none;
    z-index: 1000;
}

.user-agreement {
    text-decoration: underline;
}

.bd-wechatLoginbtn {
    position: absolute;
    bottom: 48rpx;
    width: 100%;
    height: 100rpx;
    display: block;
}

.getWechatCode-btn {
    border: 1px solid #ccc;
    border-radius: 50rpx;
    margin: 0 60rpx;
    height: 100%;
    line-height: 100rpx;
}

.getWechatCode-btn::after {
    border: none;
}

.bd-wechatLogin-text::before {
    content: '';
    width: 60rpx;
    height: 60rpx;
    display: inline-block;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 100%;
    margin-right: 15rpx;
    margin-top: 20rpx;
}

.bd-wechatLogin-text {
    height: 100%;
    display: flex;
    justify-content: center;
}