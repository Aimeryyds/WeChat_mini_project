.batch-edit-holder {
    display: flex;
    justify-content: start;
    flex-direction: column;
}

.batch-edit-holder .bacth-bound {
    z-index: 10;
    height: 112rpx;
    line-height: 112rpx;
    display: flex;
    padding: 0 32rpx;
    color: #212121;
    font-weight: bold;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
}

.batch-edit-holder .bacth-bound .info-tab {
    font-size: 34rpx;
}

.batch-edit-holder .bacth-bound .info-tab.blue {
    width: 120rpx;
    font-size: 28rpx;
    color: #06A7FF;
}

.batch-edit-holder .bacth-bound .info-tab.right {
    text-align: right;
}

.foot-erea {
    position: fixed;
    width: 284rpx;
    left: 0;
    right: 0;
    bottom: -100rpx;
    margin: auto;
    z-index: 1000;
    transition: bottom .3s,opacity .3s;
}

.foot-erea.show {
    bottom: 32rpx;
}