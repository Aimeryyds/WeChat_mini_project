.swiper-tab {
    width: 100%;
    text-align: center;
    height: 112rpx;
    line-height: 112rpx;
    font-size: 34rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background: #FFF;
    z-index: 110;
    position: absolute;
}

.swiper-tab-replace {
    width: 100%;
    height: 112rpx;
    line-height: 112rpx;
    font-size: 26rpx;
    color: #979797;
    text-align: center;
    background: #fff;
}

.swiper-tab .tab-item {
    display: inline-block;
    width: 33%;
    height: 112rpx;
    padding-top: 6rpx;
    color: #212121;
    font-size: 32rpx;
    line-height: 112rpx;
    font-weight: bold;
    box-sizing: border-box;
}

.tab-item.on {
    color: #06A7FF;
    font-weight: bold;
}

.tab-item.on .on-line {
    width: 28rpx;
    height: 4rpx;
    margin: -26rpx auto 0;
    background: #06A7FF;
    border-radius: 6rpx;
}

.swiper-box {
    overflow: hidden;
}

.diffall-wrap .diffall-item {
    display: flex;
    justify-content: center;
}

.diffall-wrap .diffall-item text.ellipsis {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.group-symbol-box {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    padding: 24rpx 32rpx;
    background-color: #FFF;
}

.batch-edit-holder {
    display: flex;
    justify-content: start;
    flex-direction: column;
}

.batch-edit-holder .bacth-bound {
    z-index: 10;
    height: 112rpx;
    display: flex;
    padding: 0 32rpx;
    color: #212121;
    line-height: 112rpx;
    font-weight: bold;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
}

.batch-edit-holder .bacth-bound .info-tab {
    font-size: 34rpx;
}

.batch-edit-holder .bacth-bound .info-tab.blue {
    width: 120rpx;
    font-size: 28rpx;
    color: #06A7FF;
}

.batch-edit-holder .bacth-bound .info-tab.right {
    text-align: right;
}

.foot-erea {
    position: fixed;
    width: 284rpx;
    left: 0;
    right: 0;
    bottom: -100rpx;
    margin: auto;
    z-index: 1000;
    transition: bottom .3s,opacity .3s;
}

.foot-erea.show {
    bottom: 32rpx;
}

.show-oper-mode-dialog {
    position: absolute;
    top: 0;
    bottom: 0;
    opacity: 0;
    z-index: 0;
}

.show-oper-mode-dialog.show {
    width: 100%;
    background-color: rgba(0,0,0,0.4);
    transition: opacity 0.3s;
    opacity: 1;
    z-index: 110;
}

.bttom-btnbar.hide {
    visibility: hidden;
    opacity: 0;
}

.bttom-btnbar.show {
    visibility: visible;
    opacity: 1;
    transition: all 0s .1s;
}