.search {
    display: flex;
    padding: 32rpx 0;
    margin: 0 32rpx;
}

.search-wrap {
    margin: 0 32rpx;
    padding-top: 40rpx;
}

.search-input {
    position: relative;
    width: 100%;
    height: 78rpx;
    padding-left: 86rpx;
    padding-right: 80rpx;
    font-size: 26rpx;
    font-weight: bold;
    border-radius: 36rpx;
    background: url('https://staticwx.cdn.bcebos.com/mini-program/images/ic_search.png') #f9f9f9;
    background-repeat: no-repeat;
    background-size: 40rpx 40rpx;
    background-position: 32rpx center;
}

.ser-cancel {
    position: absolute;
    top: 0;
    right: 0;
    padding: 40rpx;
    background: url(https://staticwx.cdn.bcebos.com/mini-program/images/ic_search_cancel.png)no-repeat;
    background-size: 32rpx 32rpx;
    background-position: center;
    z-index: 1000;
}

.ser-btn {
    display: flex;
    align-items: center;
    width: 124rpx;
    font-size: 30rpx;
    font-weight: bold;
    padding-left: 32rpx;
    color: #06a7ff;
    justify-content: flex-end;
}

.ser-num {
    display: flex;
    height: 72rpx;
    align-items: center;
    padding: 0 32rpx;
    color: #9e9e9e;
    font-size: 26rpx;
    font-weight: bold;
}

.his-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 40rpx;
    font-size: 40rpx;
    font-weight: bold;
}

.his-del {
    width: 50rpx;
    height: 50rpx;
    background: url('https://staticwx.cdn.bcebos.com/mini-program/images/ic_search_delete.png')no-repeat;
    background-size: 40rpx;
    background-position: center;
}

.his-loc {
    display: flex;
    flex-wrap: wrap;
}

.his-item {
    height: 62rpx;
    line-height: 62rpx;
    padding: 0 32rpx;
    margin-right: 32rpx;
    margin-bottom: 32rpx;
    border-radius: 31rpx;
    font-size: 26rpx;
    color: #9e9e9e;
    background-color: #f9f9f9;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}