.bottom-modal-container {
    position: fixed;
    z-index: 110;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.modal-background {
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 110;
    background-color: rgba(0,0,0,0.4);
    transition: all 0.3s;
}

.modal-content {
    overflow: hidden;
    position: absolute;
    bottom: 0;
    width: 100%;
    background-color: #fff;
    z-index: 111;
    transition: all 0.3s;
    flex-direction: column;
    border-radius: 20rpx 20rpx 0 0;
}

.modal-title-wrap {
    padding: 0 18rpx;
    border-bottom: 1rpx solid rgba(189,189,189,.20);
    background-color: #FFF;
    align-items: center;
}

.modal-title {
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    overflow: hidden;
    color: #333;
    background-color: #FFF;
    white-space: nowrap;
    text-overflow: ellipsis;
    box-sizing: border-box;
    margin-top: 50rpx;
    font-size: 34rpx;
}

.modal-close {
    position: absolute;
    top: 39rpx;
    right: 20rpx;
    height: 42rpx;
    width: 42rpx;
}

.modal-close-img {
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    width: 21rpx;
    height: 21rpx;
}

.modal-cancel {
    height: 112rpx;
    line-height: 112rpx;
    font-size: 32rpx;
    text-align: center;
    color: #212121;
    background-color: #F9F9F9;
}