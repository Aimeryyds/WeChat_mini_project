.popup-repeat-item {
    color: #999;
    font-size: 24rpx;
    margin-bottom: 32rpx;
    text-align: left;
}

.repeat-item-title {
    font-weight: bold;
}

.popup-repeat-item:last-child {
    margin-bottom: 0;
}

.popup-repeat-item .repeat-item-content {
    display: flex;
    margin: 16rpx 0 28rpx;
}

.popup-repeat-item .content {
    width: 100%;
    margin-left: 18rpx;
}

.popup-repeat-item .file-name {
    width: 400rpx;
    color: #333;
    font-size: 28rpx;
    font-weight: bold;
}

.popup-repeat-item .time {
    display: flex;
    justify-content: space-between;
}

.popup-repeat-item .icon {
    width: 82rpx;
    height: 82rpx;
}

.close {
    position: absolute;
    bottom: -56rpx;
    right: 0;
    left: 0;
    margin: 0 auto;
    width: 27rpx;
    height: 27rpx;
    background-image: url('https://staticwx.cdn.bcebos.com/mini-program/images/ic_copy_cancel.png');
    background-size: 27rpx;
    background-position: center;
    background-repeat: no-repeat;
}

.ellipsis {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}