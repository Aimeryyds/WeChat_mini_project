.assist-wrap {
    width: 100%;
    height: 820rpx;
    margin-top: 539rpx;
    position: relative;
    top: 0;
    left: 0;
}

.assist-text {
    font-size: 26rpx;
    line-height: 26rpx;
    text-align: center;
    position: absolute;
    top: 156rpx;
    left: 0;
    width: 100%;
}

.invite-layer {
    width: 596rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: absolute;
    bottom: 68rpx;
    left: 78rpx;
}

.user-header {
    width: 85rpx;
    height: 85rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-style: solid;
    border-width: 1rpx;
    border-radius: 50%;
}

.user-icon {
    width: 71rpx;
    height: 71rpx;
    display: block;
    border-radius: 50%;
}

.user-name {
    font-size: 22rpx;
    text-align: center;
    line-height: 44rpx;
}

.assist-btn {
    width: 596rpx;
    height: 122rpx;
    line-height: 85rpx;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center center;
    background-color: transparent;
}

.assist-btn::after,.invite-item::after {
    content: '';
    border: none;
}

.assist-btn-wrap {
    top: 488rpx;
    position: absolute;
    width: 100%;
}

.invite-item {
    background-color: transparent;
    padding: 0;
    border-radius: 0;
    font-size: 22rpx;
    border: 0;
    line-height: 44rpx;
}

.assist-btn-info {
    width: 303rpx;
    position: absolute;
    top: -36rpx;
    right: 120rpx;
    z-index: 2;
}