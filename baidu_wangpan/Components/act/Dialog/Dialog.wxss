.mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,0.8);
}

.dialog {
    position: fixed;
    z-index: 9999;
    width: 579rpx;
    height: 420rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-repeat: no-repeat;
    background-size: contain;
    text-align: center;
    overflow: hidden;
}

.dialog-title {
    font-size: 18px;
    padding: 15px 15px 5px;
}

.dialog-content {
    padding: 58rpx 50rpx;
    min-height: 40rpx;
    font-size: 32rpx;
    line-height: 2;
    word-wrap: break-word;
    word-break: break-all;
    color: #999999;
}

.dialog-btn::after {
    border: none;
}

.dialog-shut {
    width: 84rpx;
    height: 84rpx;
    position: absolute;
    right: 0;
    top: 0;
    background-repeat: no-repeat;
    background-size: contain;
}

.double-btn {
    background-repeat: no-repeat;
    background-size: contain;
    width: 235rpx;
    height: 68rpx;
    line-height: 68rpx;
    font-size: 28rpx;
}

.single-btn {
    background-repeat: no-repeat;
    background-size: contain;
    width: 396rpx;
    height: 86rpx;
    line-height: 86rpx;
    font-size: 32rpx;
    background-color: rgba(0,0,0,0);
}

.single-btn::after {
    border: none;
}

.dialog-button {
    position: absolute;
    width: 90%;
    left: 5%;
    bottom: 8rpx;
    height: 140rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}