.active-rules-detail {
    color: red;
    position: fixed;
    left: 0;
    top: 0;
    width: 750rpx;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 999;
}

.pop-container {
    position: relative;
    width: 578rpx;
    height: 671rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center center;
    background-color: transparent;
}

.header-area {
    position: relative;
}

.close-icon {
    width: 64rpx;
    height: 64rpx;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    background-color: rgba(0,0,0,0);
    background-repeat: no-repeat;
    background-size: 50%;
    background-position: center;
}

.close-icon::after {
    border: none;
}

.title {
    height: 100rpx;
    line-height: 125rpx;
    text-align: center;
    color: #f84242;
    font-size: 30rpx;
}

.content {
    width: 476rpx;
    height: 506rpx;
    padding-left: 50rpx;
    color: #333;
    font-size: 24rpx;
    text-align: justify;
}

.font-color {
    color: #f84242;
}