<view bindtap="handleActivityClick" class="activity" wx:if="{{show}}">
    <view class="activity-image-conatiner">
        <image class="activity-feed-icon-image" src="{{activity.showImg}}"></image>
    </view>
    <view class="activity-desc">
        <view class="activity-title ellipsis">{{activity.title}}</view>
        <view class="activity-subtitle ellipsis">{{activity.subtitle}}</view>
    </view>
</view>
