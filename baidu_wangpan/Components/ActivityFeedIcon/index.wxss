.activity {
    margin: 32rpx 33rpx 0;
    padding: 27rpx 25rpx 25rpx;
    line-height: 1;
    background-color: #FAFAFB;
    border-radius: 8rpx;
}

.activity-image-conatiner,.activity-desc {
    display: inline-block;
    vertical-align: middle;
}

.activity-desc {
    margin-left: 25rpx;
    max-width: 517rpx;
}

.activity-feed-icon-image {
    width: 92rpx;
    height: 92rpx;
}

.activity-title {
    font-family: PingFangSC-Semibold;
    font-size: 30rpx;
    line-height: 42rpx;
    color: #212732;
}

.activity-subtitle {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    line-height: 33rpx;
    margin-top: 8rpx;
    color: #8F949F;
}

.ellipsis {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}