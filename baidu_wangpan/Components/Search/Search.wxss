.search {
    display: flex;
    margin: 36rpx 0 36rpx 32rpx;
}

.search-input {
    display: flex;
    align-items: center;
    width: 100%;
    height: 78rpx;
    padding-left: 86rpx;
    padding-right: 80rpx;
    font-size: 26rpx;
    font-weight: bold;
    color: #c2c2c2;
    border-radius: 36rpx;
    background: url('https://staticwx.cdn.bcebos.com/mini-program/images/ic_search.png') #f9f9f9;
    background-repeat: no-repeat;
    background-size: 40rpx 40rpx;
    background-position: 32rpx center;
}

.search-sort {
    width: 40rpx;
    padding: 0 32rpx;
    background: url('https://staticwx.cdn.bcebos.com/mini-program/images/ic_sort_view.png')no-repeat;
    background-size: 40rpx 40rpx;
    background-position: center;
}