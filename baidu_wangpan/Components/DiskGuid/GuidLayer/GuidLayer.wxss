.guidLayer {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.8);
    top: 0;
    left: 0;
    z-index: 999;
    transition: all 0.4s;
}

.guidLayer-image {
    width: 750rpx;
    height: 776rpx;
}

.guidLayer-close {
    margin-top: 124rpx;
    border: 2rpx solid #fff;
    border-radius: 35rpx;
    height: 74rpx;
    line-height: 74rpx;
    width: 230rpx;
    color: #fff;
    font-size: 28rpx;
    background-color: rgba(0,0,0,0.0);
}

.guidLayer-hover {
    opacity: 0.5;
}