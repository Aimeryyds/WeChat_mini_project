.button-guide {
    position: absolute;
    background-color: rgba(78,136,255,0.95);
    font-size: 28rpx;
    color: #fff;
    border-radius: 50rpx;
    height: 90rpx;
    line-height: 90rpx;
    bottom: -75rpx;
    z-index: 999;
    padding: 0rpx 30rpx;
    right: 88rpx;
    transition: all linear .6s;
}

.button-guide .text {
    white-space: nowrap;
}

.button-guide:before {
    display: block;
    content: '';
    border-width: 15rpx 15rpx 15rpx 15rpx;
    border-style: solid;
    border-color: transparent transparent rgba(78,136,255,0.95);
    position: absolute;
    right: 50rpx;
    top: -28rpx;
}