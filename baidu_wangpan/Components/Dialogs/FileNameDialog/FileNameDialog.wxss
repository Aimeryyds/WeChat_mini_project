.dialog-content {
    position: relative;
    text-align: left;
    padding-bottom: 20rpx;
}

.dialog-content .dialog-subtitle {
    position: absolute;
    height: 24rpx;
    margin: 20rpx 0 0 38rpx;
    color: #999;
    text-align: left;
    font-size: 24rpx;
    line-height: 24rpx;
}

.dialog-content .dialog-subtitle .error {
    color: #FF5455;
}

.dialog-input-wrap {
    position: relative;
    margin: 0 32rpx;
    padding: 0 84rpx 0 24rpx;
    background-color: #F6F7F9;
    border-radius: 8rpx;
}

.dialog-content .dialog-input {
    height: 76rpx;
    line-height: 76rpx;
    background-color: #F6F7F9;
    color: #212121;
    font-size: 30rpx;
    font-weight: bold;
}

.dialog-content .input-cancel {
    position: absolute;
    top: 0rpx;
    right: 0rpx;
    width: 84rpx;
    height: 76rpx;
    background: url('https://staticwx.cdn.bcebos.com/mini-program/images/ic_cancel.png') no-repeat 0 0;
    background-size: 36rpx;
    background-position: center;
}

.dialog-content .dialog-input-placeholder {
    height: 76rpx;
    line-height: 76rpx;
    font-size: 30rpx;
    color: #999;
    font-weight: normal;
}