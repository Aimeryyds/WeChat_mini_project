.wx-dialog-content {
    padding-bottom: 12rpx;
}

.wx-dialog-footer {
    position: relative;
    display: flex;
    height: 106rpx;
    align-items: center;
}

.wx-dialog-btn {
    position: relative;
    display: block;
    font-size: 32rpx;
    color: #9E9E9E;
    line-height: 106rpx;
    flex: 1;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
}

.wx-dialog-btn::after {
    border: none;
}

.wx-dialog-footer .btn-app {
    overflow: initial;
    padding: 0;
    border-radius: 0;
    color: #06A7FF;
}

.wx-dialog-footer .btn-app::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: auto;
    right: auto;
    top: 25%;
    height: 58rpx;
    width: 2px;
    background-color: #BDBDBD;
    opacity: 0.2;
    transform-origin: 0 0;
    transform: scaleX(0.5);
}