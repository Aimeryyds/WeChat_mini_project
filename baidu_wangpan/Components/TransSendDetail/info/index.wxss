.ellipsis {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.info-container {
    height: 150rpx;
    background: #FCFCFC;
    padding-left: 12rpx;
    padding-top: 34rpx;
    box-sizing: border-box;
}

.info-avatar,.info-intro,.info-action {
    display: inline-block;
    vertical-align: middle;
}

.info-avatar {
    height: 82rpx;
    width: 82rpx;
}

.info-avatar-img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.info-intro {
    margin-left: 20rpx;
    width: 453rpx;
}

.info-intro-name {
    font-size: 30rpx;
    color: #333333;
    font-weight: bold;
}

.info-intro-user-name {
    font-size: 30rpx;
    color: #151515;
    font-weight: normal;
}

.info-time {
    font-size: 24rpx;
    color: #999999;
}

.info-action {
    margin-left: 12rpx;
    width: 153rpx;
}

.info-action-send-btn {
    background: #E1F4FF!important;
    border-radius: 26rpx!important;
    height: 48rpx!important;
    line-height: 48rpx!important;
    font-size: 24rpx!important;
    color: #06A7FF!important;
    box-shadow: 0 0 0 0!important;
}