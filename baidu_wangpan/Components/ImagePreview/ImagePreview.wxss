.image-preview-container {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    width: 100vw;
    min-height: 100vh;
    background-color: rgba(0,0,0,0.9);
}

.image-preview-top {
    position: fixed;
    top: 0;
    width: 100%;
    height: 179rpx;
    background-image: url(https://staticwx.cdn.bcebos.com/mini-program/images/ic_top_preview.png);
    background-size: contain;
    z-index: 100;
}

.image-preview {
    display: inline-block;
    max-width: 100vw;
    overflow: scroll;
}

.swiper-item-scroll {
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    align-content: stretch;
}

.swiper-item-scroll-multi {
    width: 100vw;
    height: 100%;
}

.swiper-item-scroll-single {
    width: 100vw;
    height: 100vh;
}

.goToIndex {
    margin-left: 40rpx;
    background-color: #3788ff;
    color: #fff;
    border-radius: 50rpx;
    width: 168rpx;
    height: 64rpx;
    font-size: 26rpx;
    line-height: 64rpx;
    text-align: center;
    margin-top: 13.5rpx;
}

.goToIndex-hover {
    background-color: rgba(55,136,255,0.8);
}

.goToback-hover {
    background-color: rgba(225,225,225,0);
    opacity: 0.8;
}

.swiper-image {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    width: 100vw;
    min-height: 100vh;
    overflow: scroll;
    transition: width 2s;
}

.swiper-image .swiper-item {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100vw;
    min-height: 100vh;
    overflow: scroll;
}

.currentInfo {
    color: #fff;
    border-radius: 50rpx;
    font-size: 38rpx;
    height: 100%;
    line-height: 80rpx;
    text-align: center;
    display: inline-block;
    width: 33%;
}

.top_detail {
    display: flex;
    flex-direction: rows;
    align-items: center;
    justify-content: space-between;
    height: 80rpx;
    z-index: 9;
}

.navigateBack {
    width: 33%;
    text-align: left;
    height: 100%;
    line-height: 80rpx;
}

.back-navigate {
    padding-left: 40rpx;
    width: 100rpx;
    height: 100%;
    display: inline-block;
}

.navigateBackImg {
    width: 17rpx;
    height: 31rpx;
    vertical-align: middle;
}

.translucent-detail {
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 100vw;
    height: 179rpx;
    background-image: url(https://staticwx.cdn.bcebos.com/mini-program/images/ic_bottom_preview.png);
    background-size: contain;
    z-index: 4;
}

.translucent-detail .button {
    background-color: rgba(0,0,0,0);
    color: #fff;
    font-size: 26rpx;
    width: 33%;
}

.translucent-detail .button::after {
    border: none;
}

.downLoad::before {
    display: block;
    content: '';
    width: 58rpx;
    height: 58rpx;
    background-image: url(https://staticwx.cdn.bcebos.com/mini-program/images/ic_download_normal.png);
    background-size: contain;
    margin: 0 auto;
}

.saveFile::before {
    display: block;
    content: '';
    width: 58rpx;
    height: 58rpx;
    background-image: url(https://staticwx.cdn.bcebos.com/mini-program/images/ic_save_normal.png);
    background-size: contain;
    margin: 0 auto;
}

.share::before {
    display: block;
    content: '';
    width: 58rpx;
    height: 58rpx;
    background-image: url(https://staticwx.cdn.bcebos.com/mini-program/images/ic_share_normal.png);
    background-size: contain;
    margin: 0 auto;
}

.downLoad-hover::before {
    display: block;
    content: '';
    width: 58rpx;
    height: 58rpx;
    background-image: url(https://staticwx.cdn.bcebos.com/mini-program/images/ic_download_pressed.png);
    background-size: contain;
}

.saveFile-hover::before {
    display: block;
    content: '';
    width: 58rpx;
    height: 58rpx;
    background-image: url(https://staticwx.cdn.bcebos.com/mini-program/images/ic_save_pressed.png);
    background-size: contain;
}

.share-hover::before {
    display: block;
    content: '';
    width: 58rpx;
    height: 58rpx;
    background-image: url(https://staticwx.cdn.bcebos.com/mini-program/images/ic_share_pressed.png);
    background-size: contain;
}

.loadingimg {
    position: absolute;
    top: 0;
}

.activity-btn-class {
    padding: 0!important;
    left: 0;
    width: 160rpx;
    height: 50rpx;
    z-index: 200;
}