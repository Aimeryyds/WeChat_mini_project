.sub-container {
    background: #FFFFFF;
    box-shadow: 0 0 80rpx 0 rgba(210,213,219,0.40);
    border-radius: 20rpx;
    position: fixed;
    left: 32rpx;
    right: 32rpx;
    bottom: 174rpx;
    z-index: 1;
    padding-top: 46rpx;
    height: 128rpx;
    box-sizing: border-box;
}

.sub-desc {
    font-size: 26rpx;
    font-weight: bold;
    color: #212732;
    padding-left: 27rpx;
    float: left;
}

.sub-action {
    font-size: 26rpx;
    color: #06A7FF;
    float: right;
    margin-right: 75rpx;
    font-weight: bold;
}

.sub-close {
    width: 21rpx;
    height: 21rpx;
    right: 24rpx;
    position: absolute;
    top: 56rpx;
}