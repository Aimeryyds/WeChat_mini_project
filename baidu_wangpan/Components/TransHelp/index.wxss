.page-info {
    height: 90rpx;
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.page-info-text {
    height: 24rpx;
    line-height: 24rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #999999;
    letter-spacing: 0;
    display: flex;
    align-items: center;
}

.page-info-img {
    width: 24rpx;
    height: 24rpx;
    margin-right: 5rpx;
}