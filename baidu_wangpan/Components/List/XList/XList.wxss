@import "../../../__wuBaseWxss__/2.wxss";

@import "../../../netdisk_templates/loading_list/loading_list.wxss";

@import "../../../netdisk_templates/empty_list/emptyList.wxss";

.file-list-wrap {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.file-list-wrap.is-select-all {
    height: calc(100% - 112rpx);
}

.scroll-view-list {
    overflow-y: auto;
    overflow-x: hidden;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
}

.grid-box {
    display: flex;
    margin-bottom: 52rpx;
    padding: 0 16rpx 16rpx;
    flex-wrap: wrap;
}

.order-tip-flex {
    height: 98rpx;
    font-weight: bold;
}

.order {
    flex: 1;
    height: 98rpx;
    font-size: 24rpx;
    font-weight: bold;
}

.order-active {
    font-size: 28rpx;
    color: #212121;
}

.load-tips {
    display: none;
    height: 92rpx;
    font-size: 24rpx;
    line-height: 92rpx;
    color: #9E9E9E;
    text-align: center;
}

.order-title {
    display: flex;
    height: 98rpx;
    padding-left: 32rpx;
    line-height: 98rpx;
    font-size: 28rpx;
    color: #9E9E9E;
}