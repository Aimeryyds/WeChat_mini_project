.grid-box {
    display: flex;
    margin-bottom: 52rpx;
    padding: 0 16rpx 16rpx;
    flex-wrap: wrap;
}

.order-tip-flex {
    height: 98rpx;
    font-weight: bold;
}

.order {
    flex: 1;
    height: 98rpx;
    font-size: 24rpx;
    font-weight: bold;
}

.order-active {
    font-size: 28rpx;
    color: #212121;
}

.load-tips {
    display: none;
    height: 92rpx;
    font-size: 24rpx;
    line-height: 92rpx;
    color: #9E9E9E;
    text-align: center;
}

.order-title {
    display: flex;
    height: 98rpx;
    padding-left: 32rpx;
    line-height: 98rpx;
    font-size: 28rpx;
    color: #9E9E9E;
}

.batch-edit-holder {
    display: flex;
    justify-content: start;
    flex-direction: column;
    background-color: #000;
    z-index: 100000;
}

.batch-edit-holder .bacth-bound {
    z-index: 10;
    height: 112rpx;
    line-height: 112rpx;
    display: flex;
    padding: 0 32rpx;
    color: #212121;
    font-weight: bold;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
}

.batch-edit-holder .bacth-bound .info-tab {
    font-size: 34rpx;
}

.batch-edit-holder .bacth-bound .info-tab.blue {
    width: 120rpx;
    font-size: 28rpx;
    color: #06A7FF;
}

.batch-edit-holder .bacth-bound .info-tab.right {
    text-align: right;
}