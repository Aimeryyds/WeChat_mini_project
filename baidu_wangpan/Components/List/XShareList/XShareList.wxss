@import "../../../__wuBaseWxss__/2.wxss";

@import "../../../netdisk_templates/loading_list/loading_list.wxss";

@import "../../../netdisk_templates/empty_list/emptyList.wxss";

.share-list-wrap {
    width: 100%;
    height: 100%;
}

.share-list-wrap .share-list {
    height: calc(100% - 148rpx);
}

.share-list-wrap .share-list-item {
    width: 100%;
}

.share-list-wrap .share-list-item .share-list-item-wrap {
    display: flex;
    width: 100%;
    padding: 30rpx 0 30rpx 32rpx;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
}

.share-list-wrap .share-list-item .list-item-main {
    order: 0;
    flex-grow: 1;
    display: flex;
    height: 100%;
}

.share-list-wrap .list-item-main .group-avatar-wrap {
    width: 82rpx;
    height: 82rpx;
    margin-right: 32rpx;
}

.share-list-wrap .list-item-main .description {
    order: 1;
    flex-grow: 1;
    flex-shrink: 1;
    height: 82rpx;
}

.share-list-wrap .list-item-main .description .title {
    margin-bottom: 3rpx;
    font-weight: bold;
    font-size: 30rpx;
    color: #212121;
}

.share-list-wrap .list-item-main .description .title .text {
    max-width: 500rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    display: block;
}

.share-list-wrap .list-item-main .description .title .wechat-icon {
    width: 32rpx;
    height: 24rpx;
    margin: 7rpx 0 0 16rpx;
    background: url('https://staticwx.cdn.bcebos.com/mini-program/images/ic_wechat.png') no-repeat 0 0;
    background-size: 32rpx auto;
    background-position: center;
}

.share-list-wrap .list-item-main .description .subtitle {
    width: 100%;
    font-size: 24rpx;
    color: #9E9E9E;
}

.share-list-wrap .list-item-main .description .subtitle .member-and-date {
    white-space: nowrap;
}

.share-list-wrap .list-item-main .description .subtitle .dot {
    white-space: pre;
}

.share-list-wrap .share-list-item .list-item-more {
    order: 1;
    flex-grow: 0;
    flex-shrink: 0;
    position: relative;
    width: 95rpx;
    height: 82rpx;
}

.share-list-wrap .share-list-item .list-item-more .more-icon {
    position: absolute;
    right: 0;
    top: 0;
    left: 0;
    bottom: 0;
    margin: auto;
    width: 60rpx;
    height: 60rpx;
    background: url('https://staticwx.cdn.bcebos.com/mini-program/images/ic_More.png') no-repeat 0 0;
    background-size: 35rpx auto;
    background-position: center;
}

.list-bottom {
    padding-bottom: 80rpx;
}

.order-tip {
    display: flex;
    justify-content: space-between;
    height: 88rpx;
    line-height: 88rpx;
    background-color: #f6f7f9;
    padding: 0 24rpx;
    font-size: 24rpx;
    color: #90959e;
    font-weight: bold;
}

.order {
    position: absolute;
    color: #3888ff;
    font-size: 26rpx;
    right: 24rpx;
    top: 28rpx;
    z-index: 99;
}

.load-tips {
    display: none;
    height: 92rpx;
    background: #90959e;
    font-size: 24rpx;
    line-height: 92rpx;
    color: #90959e;
    text-align: center;
}