    margin: 0 auto;
    z-index: 2;
}

.viewOriginImg {
    position: relative;
    font-size: 22rpx;
    background-color: rgba(0,0,0,0.7);
    color: #fff;
    margin-bottom: 92rpx;
    padding: 0rpx 30rpx;
    height: 48rpx;
    line-height: 48rpx;
    border-radius: 15px;
    box-sizing: border-box;
    box-shadow: 0px 0px 0px 1px rgba(255,255,255,0.4);
}

.viewOriginImg-process {
    position: absolute;
    top: 0;
    left: 0;
    margin-bottom: 92rpx;
    width: 100%;
    height: 48rpx;
    line-height: 48rpx;
    border-radius: 15px;
    box-sizing: border-box;
    font-size: 22rpx;
    color: #fff;
    overflow: hidden;
    background-color: rgba(0,0,0,0.4);
    text-align: center;
}

.viewOriginImg .loading {
    color: rgba(0,0,0,0);
}

.viewOriginImg-loading {
    height: 100%;
    background-color: rgba(255,255,255,0.4);
    transition: 200 linear width;
}

.viewOriginImg-loading-font {
    height: 100%;
    width: 100%;
    text-align: center;
    position: absolute;
    left: 0;
}