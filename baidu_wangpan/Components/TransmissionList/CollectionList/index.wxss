@import "../../../netdisk_templates/loading_list/loading_list.wxss";

@import "../../../netdisk_templates/empty_list/emptyList.wxss";

.batch-edit-holder {
    display: flex;
    justify-content: start;
    flex-direction: column;
    background-color: #000;
}

.batch-edit-holder .bacth-bound {
    height: 112rpx;
    line-height: 112rpx;
    display: flex;
    padding: 0 32rpx;
    color: #212121;
    font-weight: bold;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
}

.batch-edit-holder .bacth-bound .info-tab {
    font-size: 34rpx;
}

.batch-edit-holder .bacth-bound .info-tab.blue {
    width: 120rpx;
    font-size: 28rpx;
    color: #06A7FF;
}

.batch-edit-holder .bacth-bound .info-tab.right {
    text-align: right;
}

.wrap {
    height: calc(100% - 112rpx);
}

.wrap-content {
    height: 100%;
}

.wrap-content.selected {
    height: calc(100% - 112rpx);
}

.wrap-content.selected-hide-bottombtn {
    height: calc(100% - 112rpx);
}

.file-list-wrap {
    height: 100%;
}

.file-list-wrap.has-tip {
    height: calc(100% - 79rpx);
}