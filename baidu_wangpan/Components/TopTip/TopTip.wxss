.toptip-container {
    position: absolute;
    top: -78rpx;
    width: 100%;
    height: 78rpx;
    text-align: center;
    line-height: 78rpx;
    color: #fff;
    font-size: 30rpx;
    font-weight: bold;
    opacity: 0.96;
    transition: top 300ms;
    z-index: 1;
}

.toptip-icon {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: -8rpx;
    margin-right: 20rpx;
}

.toptip-kind-normal {
    background-color: #3888ff;
}

.toptip-kind-err {
    background-color: rgba(255,84,85,0.96);
}

.toptip-action-entry {
    top: 0;
}

.toptip-action-exit {
    top: -78rpx;
}

.toptip-close-icon {
    width: 60rpx;
    height: 79rpx;
    position: absolute;
    top: 0rpx;
    right: 0rpx;
}

.toptip-close-icon-img {
    width: 18rpx;
    height: 18rpx;
    position: absolute;
    top: 30rpx;
    right: 22rpx;
}