.img-card-view {
    margin: 32rpx 32rpx 200rpx 32rpx;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0rpx 0rpx 40rpx 0rpx rgba(212,221,236,.45);
}

.img-card-view .img-view {
    width: 100%;
}

.img-card-view .img-info {
    display: block;
    padding: 0 32rpx;
    font-size: 28rpx;
    line-height: 118rpx;
    margin-top: -16rpx;
    height: 118rpx;
    overflow: hidden;
    border: 2rpx solid #ebedf0;
    border-top-width: 0;
    border-bottom-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
    clear: both;
}