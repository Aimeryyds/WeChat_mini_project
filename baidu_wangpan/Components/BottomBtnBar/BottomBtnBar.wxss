@import "../../__wuBaseWxss__/5.wxss";

.bottom_btn_bar_container {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 112rpx;
    z-index: 100;
}

.isIpx {
    padding-bottom: 24rpx;
}

.button_icon {
    width: 100%;
    height: 48rpx;
    background-size: 48rpx;
    background-position: center;
    background-repeat: no-repeat;
    margin-bottom: 3rpx;
    position: relative;
    display: inline-block;
}

.button_icon.is-new::after {
    content: ' ';
    position: absolute;
    top: 0;
    right: 0;
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    background: #FF436A;
    border: 2px solid #FFFFFF;
}

.bar_style {
    display: flex;
    height: 100%;
    justify-content: space-between;
    align-items: center;
    font-size: 25rpx;
    text-align: center;
}

.wpFileNonEmpty {
    margin: 0 65rpx 0 122rpx;
}

.transCollectionDetail {
    margin: 0 32rpx 0 120rpx;
}

.wpFileEmpty {
    margin: 0 198rpx;
}

.enjoyFileOtherBatch {
    margin: 0 106rpx;
}

.fileDetail,.enjoyFileDetail {
    margin: 0 58rpx;
}

.fileDetailBatch {
    margin: 0 30rpx;
}

.enjoyFileOwnBatch {
    margin: 0 80rpx;
}

.shareBatch.bar_style {
    justify-content: center;
}

.shareBatch .btn {
    width: 100%;
    text-align: center;
}

.batch_disabled {
    opacity: 0.3;
}

.transCollectionDetailList.bar_style {
    justify-content: center;
}

.transSendlList.bar_style {
    justify-content: center;
}

.icon-trans-list-withdraw {
    width: 36rpx;
    height: 30rpx;
    background-size: 100% auto;
    background-repeat: no-repeat;
}