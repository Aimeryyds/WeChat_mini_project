@import "../../__wuBaseWxss__/5.wxss";

.ellipsis {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.share-header {
    position: relative;
}

.share-header-bg {
    width: 100%;
}

.share-title {
    font-size: 34rpx;
    color: #069CFF;
    position: absolute;
    bottom: 0;
    text-align: center;
    margin-left: 50rpx;
    margin-right: 50rpx;
    width: 650rpx;
    box-sizing: border-box;
    padding-bottom: 25rpx;
    border-bottom: 1px solid #DFE1E6;
}

.share-body {
    margin-top: 122rpx;
    text-align: center;
}

.share-body-title {
    font-size: 40rpx;
    color: #212121;
    font-weight: bold;
}

.share-body-desc {
    font-size: 28rpx;
    color: #9E9E9E;
    margin-top: 10rpx;
}

.share-actions {
    margin-top: 47rpx;
    padding-left: 22rpx;
}

.share-action {
    display: inline-block;
    width: 340rpx;
}

.share-action.friend {
    margin-left: 26rpx;
}