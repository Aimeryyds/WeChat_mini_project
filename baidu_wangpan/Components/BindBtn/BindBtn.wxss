.bindBtn {
    display: flex;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 112rpx;
    padding: 0 32rpx;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    background-color: #E6F6FF;
    z-index: 100;
}

.bindBtn-text {
    font-size: 28rpx;
    color: #06A7FF;
}

.bindBtn-btn {
    display: flex;
    align-items: center;
    height: 64rpx;
    padding: 0 26rpx;
    font-size: 26rpx;
    color: #fff;
    background-color: #06A7FF;
    border-radius: 32rpx;
}

.fix-ipx-btn {
    bottom: 68rpx!important;
}

.fix-ipx-btn::after {
    content: ' ';
    position: fixed;
    bottom: 0!important;
    height: 68rpx!important;
    width: 100%;
    background: #fff;
}