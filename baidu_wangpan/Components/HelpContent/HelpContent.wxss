.help-list {
    padding: 72rpx 19rpx 80rpx 32rpx;
}

.list-item {
    padding-bottom: 88rpx;
}

.question {
    color: #212121;
    font-size: 32rpx;
    font-weight: bold;
    padding-bottom: 6rpx;
}

.answer {
    color: #9e9e9e;
    font-size: 28rpx;
    text-align: justify;
}

.content-image {
    display: flex;
    justify-content: center;
    padding: 20rpx 15rpx 48rpx 0;
}

.content-image image {
    width: 100%;
}

.content-btn {
    text-align: center;
    margin-top: 28rpx;
}

.content-btn .clearBtn {
    display: inline-block;
    width: 350rpx;
}