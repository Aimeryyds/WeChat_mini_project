.shopping {
    width: 688rpx;
    height: 366rpx;
    padding: 35.3rpx 30.4rpx 35.7rpx;
    margin-bottom: 40rpx;
    background: url(https://staticwx.cdn.bcebos.com/mini-program/images/shop_vip.png)no-repeat;
    background-size: cover;
    box-sizing: border-box;
}

.shop-title {
    display: flex;
    height: 54rpx;
    align-items: center;
    justify-content: space-between;
}

.shop-title-text {
    display: flex;
    align-items: center;
    font-size: 32rpx;
    color: #5B3F0F;
}

.shop-title-img {
    width: 116rpx;
    height: 50rpx;
}

.shop-title-btn {
    font-family: PingFangSC-Medium;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 150rpx;
    height: 100%;
    color: #333;
    font-size: 24rpx;
    border-radius: 27.08rpx;
    background: #F9D681;
}

.shop-content {
    display: flex;
    justify-content: space-between;
    margin-top: 33.7rpx;
}

.shop-img {
    margin-bottom: 12rpx;
    margin-right: 20rpx;
    background-repeat: no-repeat;
    background-size: cover;
}

.shop-cont {
    display: flex;
    align-items: center;
}

.shop-cont-name {
    max-width: 96rpx;
    font-size: 24rpx;
    color: #CA963B;
    padding-right: 6.3rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.shop-cont-money {
    max-width: 72rpx;
    font-size: 20rpx;
    color: #999999;
    text-decoration: line-through;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.shop-img {
    position: relative;
    display: flex;
    width: 166rpx;
    height: 166rpx;
    justify-content: center;
    align-items: center;
    border-radius: 20rpx;
    background-color: #d4d4d4;
}

.shop-img-media {
    padding: 30rpx;
    background: url(https://staticwx.cdn.bcebos.com/mini-program/images/shop_video.png)no-repeat;
    background-size: cover;
}

.shop-img-audio {
    background: url(https://staticwx.cdn.bcebos.com/mini-program/images/shop_audio.png)no-repeat;
    background-size: cover;
}

.shop-img-audiobg {
    position: absolute;
    width: 21rpx;
    height: 102rpx;
    top: 20%;
    right: -20rpx;
    background: url(https://staticwx.cdn.bcebos.com/mini-program/images/shop_audio_bg.png)no-repeat;
    background-size: 21rpx 102rpx;
}

.shop-text-wrap {
    justify-content: flex-end;
    align-items: flex-end;
}

.shop-img-text {
    display: flex;
    width: 67.2rpx;
    height: 32rpx;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    color: #FFF;
    background: rgba(0,0,0,.6);
    border-radius: 18rpx 0px;
}