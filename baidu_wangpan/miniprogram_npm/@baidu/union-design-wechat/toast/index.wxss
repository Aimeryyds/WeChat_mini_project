.u-toast-mask {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 9999;
}

.u-toast {
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    left: 50%;
    background: rgba(33,33,33,.8);
    color: #fff;
    font-size: 28rpx;
    height: 98rpx;
    margin: 0 auto;
    box-sizing: border-box;
    padding: 0px 46rpx;
    text-align: center;
    border-radius: 50rpx;
    z-index: 9999;
    transform: translate3d(-50%,-50%,0);
}

.u-center {
    top: 50%;
}

.u-toast-icon-box {
    display: inline-block;
    margin-right: 12rpx;
}

.u-toast-icon-loading {
    animation: loading 1s 0s linear infinite;
}

@-webkit-keyframes loading {
    from {
        transform: rotate(0);
    }

    to {
        transform: rotate(360deg);
    }
}

@keyframes loading {
    from {
        transform: rotate(0);
    }

    to {
        transform: rotate(360deg);
    }
}

.u-toast-content {
    display: inline;
}

.u-toast-image {
    max-width: 100px;
    max-height: 100px;
}