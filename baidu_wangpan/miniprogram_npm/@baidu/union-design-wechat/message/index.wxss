.u-message {
    position: fixed;
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    text-align: center;
    font-size: 14px;
    color: #fff;
    z-index: 999;
    transform: translateY(-100%);
    opacity: 0;
}

.u-message-show {
    transform: translateY(0);
    opacity: 1;
}

.u-message-default {
    color: #333;
}

.u-message-primary {
    background-color: #06a7ff;
}

.u-message-success {
    background-color: #53db86;
}

.u-message-warning {
    background-color: #f5a622;
}

.u-message-info {
    background-color: #2db7f5;
}

.u-message-danger {
    background-color: #ed3f3f;
}

.u-message-reload-icon {
    margin-right: 20rpx;
}

.u-message-reload-img {
    width: 32rpx;
    height: 32rpx;
    margin-right: 20rpx;
}

.u-message-close-icon {
    position: absolute;
    top: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    padding: 0 20rpx;
}

.u-message-close-img {
    position: absolute;
    top: 50%;
    right: 0;
    width: 20rpx;
    height: 100%;
    padding: 0 40rpx;
    transform: translateY(-50%);
}