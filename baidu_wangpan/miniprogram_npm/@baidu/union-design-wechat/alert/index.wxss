.u-alert {
    position: relative;
    margin: 20rpx;
    padding: 16rpx 96rpx 16rpx 32rpx;
    font-size: 28rpx;
    border-radius: 4rpx;
    color: #fff;
    background: #f7f7f7;
    color: #495060;
}

.u-alert.u-alert-with-icon {
    padding: 16px 96rpx 16rpx 76rpx;
}

.u-alert-info {
    color: #fff;
    background: #2db7f5;
}

.u-alert-success {
    color: #fff;
    background: #19be6b;
}

.u-alert-warning {
    color: #fff;
    background: #f90;
}

.u-alert-error {
    color: #fff;
    background: #ed3f14;
}

.u-alert-icon {
    position: absolute;
    top: 18rpx;
    left: 32rpx;
    font-size: 28rpx;
}

.u-alert-desc {
    font-size: 24rpx;
}

.u-alert-with-desc {
    padding: 32rpx;
    position: relative;
}

.u-alert-with-desc.u-alert-with-icon {
    padding: 32rpx 32rpx 32rpx 138rpx;
}

.u-alert-with-desc .u-alert-icon {
    top: 50%;
    left: 48rpx;
    margin-top: -28rpx;
    font-size: 56rpx;
}

.u-alert-close {
    font-size: 24rpx;
    position: absolute;
    right: 32rpx;
    top: 16rpx;
    overflow: hidden;
    cursor: pointer;
}