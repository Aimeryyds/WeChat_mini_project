.image-preview-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    width: 100vw;
    min-height: 100vh;
    background-color: rgba(0,0,0,0.9);
}

.image-preview {
    display: inline-block;
    max-width: 100vw;
    overflow: scroll;
}

.watermark {
    position: absolute;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

.swiper-item-video {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    padding: 20rpx;
    z-index: 10;
}

.swiper-item-video image {
    width: 90rpx;
    height: 90rpx;
}

.image-box {
    position: relative;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    flex-direction: row;
    align-content: stretch;
}

.translucent-dialog {
    display: flex;
    bottom: 179rpx;
    position: absolute;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    margin: 0 auto;
}

.viewOriginImg {
    position: relative;
    width: 274rpx;
    height: 48rpx;
    line-height: 48rpx;
    margin-bottom: 92rpx;
    padding: 0rpx 30rpx;
    background-color: rgba(0,0,0,0.4);
    font-size: 22rpx;
    text-align: center;
    color: #fff;
    border-radius: 15px;
    box-sizing: border-box;
    box-shadow: 0px 0px 0px 1px rgba(255,255,255,0.5);
}

.swiper-image {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    width: 100vw;
    min-height: 100vh;
    overflow: scroll;
    transition: width 2s;
}

.swiper-image .swiper-item {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100vw;
    min-height: 100vh;
    overflow: scroll;
}