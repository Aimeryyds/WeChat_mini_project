.inline-block-middle {
    display: inline-block;
    vertical-align: middle;
}

.full-height {
    height: 100%;
}

.u-input__container {
    height: 78rpx;
    display: flex;
    margin-bottom: 30rpx;
}

.u-input__title {
    min-width: 120rpx;
    padding-right: 20rpx;
    font-size: 14px;
    line-height: 78rpx;
}

.u-input__body {
    position: relative;
    flex: 1;
}

.u-input__input {
    padding-left: 10rpx;
    padding-right: 10rpx;
    font-size: 14px;
}

.u-input__error {
    font-size: 24rpx;
    line-height: 1;
    color: #ff436a;
    position: absolute;
    bottom: -28rpx;
    left: 0;
}