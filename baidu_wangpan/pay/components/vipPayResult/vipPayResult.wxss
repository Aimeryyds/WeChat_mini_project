.pay-result {
    text-align: center;
}

.no-result {
    padding-top: 150rpx;
}

.pay-result .right-icon {
    width: 90rpx;
    height: 90rpx;
    margin: 95rpx 0 20rpx;
}

.pay-result .result-title {
    font-weight: bold;
    font-size: 40rpx;
    color: #212121;
    margin-bottom: 10rpx;
}

.pay-result .result-note {
    font-weight: bold;
    font-size: 28rpx;
    color: #BDBDBD;
    margin-bottom: 72rpx;
}

.result-info {
    background: #FFFFFF;
    border-radius: 18rpx;
    margin: 0 32rpx;
    padding: 20rpx 0;
    box-shadow: 0 0 60rpx 0 rgba(235,235,235,0.50);
}

.result-info .info-item {
    display: flex;
    padding: 0 40rpx;
}

.result-info .info-item .item-label,.result-info .info-item .item-value {
    flex: 1;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    padding: 20rpx 0;
}

.result-info .info-item .item-label {
    text-align: left;
    color: #212121;
}

.result-info .info-item .item-value {
    text-align: right;
    color: #9E9E9E;
}