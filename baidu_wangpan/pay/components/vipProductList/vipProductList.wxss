.product-list {
    display: flex;
    padding: 0 40rpx;
}

.product-item {
    flex: 1;
    background: #F9F9F9;
    border-radius: 12rpx;
    text-align: center;
    display: inline-block;
    border: 5rpx solid #F9F9F9;
    position: relative;
}

.product-list .svip-active {
    background: #FCF4E8;
    border: 5rpx solid #E7C88C;
}

.product-list .vip-active {
    background: #FFF4F5;
    border: 5rpx solid #FFA7AC;
}

.chaozhi-icon {
    width: 74rpx;
    height: 38rpx;
    position: absolute;
    top: -15rpx;
    left: -10rpx;
}

.product-name {
    font-weight: bold;
    font-size: 32rpx;
    color: #212121;
    margin: 30rpx 0 8rpx;
}

.product-price {
    font-weight: bold;
    font-size: 64rpx;
    text-align: center;
}

.svip-color {
    color: #D6A652;
}

.vip-color {
    color: #F86868;
}

.product-price .price-icon-note {
    font-size: 26rpx;
    margin-left: -10rpx;
}

.product-note {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #9E9E9E;
    margin: 5rpx 0 40rpx;
}