.cashier-bottom-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #FFFFFF;
    box-shadow: 0 -5px 20px 0 rgba(208,208,208,0.28);
    display: none;
    padding: 23rpx 32rpx 23rpx 42rpx;
}

.show-bottom-btn {
    display: flex;
}

.cashier-bottom-btn .cb-btn,.cashier-bottom-btn .cb-note {
    flex: 1;
}

.cashier-bottom-btn .cb-note .cb-name {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #212121;
}

.cashier-bottom-btn .cb-note .cb-price {
    font-weight: bold;
    font-size: 34rpx;
    margin-right: 14rpx;
}

.cashier-bottom-btn .cb-note .svip-price {
    color: #D6A652;
}

.cashier-bottom-btn .cb-note .vip-price {
    color: #F86868;
}

.cashier-bottom-btn .cb-note .cb-price-note {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #999999;
}