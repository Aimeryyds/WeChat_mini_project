.background-color {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 300rpx;
    z-index: -1;
    background-image: linear-gradient(144deg,#2AB4FF 0%,#06A7FF 100%);
    transition: 1s all linear;
}

.background-color.free {
    background-image: linear-gradient(144deg,#2AB4FF 0%,#06A7FF 100%);
}

.background-color.vip {
    background-image: linear-gradient(122deg,#FE5C5C 0%,#FF8787 99%);
}

.background-color.svip {
    background-image: linear-gradient(116deg,#454864 0%,#201F38 86%);
}