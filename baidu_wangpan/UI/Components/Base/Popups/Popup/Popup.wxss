@import "../../../../../__wuBaseWxss__/4.wxss";

.popup-basic {
    visibility: visible;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 110;
}

.popup-background {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.4);
    z-index: 110;
}

.popup-container {
    position: absolute;
    top: 50%;
    left: 50%;
    padding: 0 40rpx 106rpx;
    width: calc(100% - 250rpx);
    background-color: #FFF;
    border-radius: 16rpx;
    font-weight: bold;
    transform: translate(-50%,-50%);
    z-index: 111;
}

.popup-container.top {
    transform: translate(-50%,-80%);
}

.close {
    position: absolute;
    bottom: -68rpx;
    right: 0;
    left: 0;
    margin: 0 auto;
    width: 27rpx;
    height: 27rpx;
    background-image: url('https://staticwx.cdn.bcebos.com/mini-program/images/ic_copy_cancel.png');
    background-size: 27rpx;
    background-position: center;
    background-repeat: no-repeat;
}

.popup-title {
    overflow: hidden;
    margin-top: 44rpx;
    line-height: 40rpx;
    text-align: center;
}

.popup-content {
    overflow: hidden;
    padding: 34rpx 0 44rpx;
    line-height: 46rpx;
}

.popup-content.left {
    text-align: left;
}

.popup-content.center {
    text-align: center;
}

.popup-button-container {
    overflow: hidden;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 106rpx;
    line-height: 106rpx;
    text-align: center;
    border-bottom-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
}