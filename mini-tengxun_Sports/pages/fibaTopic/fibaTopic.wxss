.content .li {
    padding: 32rpx 0;
    margin: 0 20rpx;
    border-bottom: 1px solid #EAEAEA;
}

.content .li:last-child {
    border-bottom: none;
}

.content .li .title {
    font-size: 32rpx;
    color: #333;
    line-height: 32rpx;
}

.content .li .creater .user-photo {
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
    display: inline-block;
    position: relative;
    top: 8rpx;
    margin-right: 10rpx;
}

.content .li .creater .text {
    font-size: 24rpx;
    color: #999;
    line-height: 24rpx;
    margin-right: 8rpx;
}

.content .empty {
    text-align: center;
    margin-top: 260rpx;
}

.content .empty .img {
    display: inline-block;
    width: 208rpx;
    height: 200rpx;
}

.content .empty .txt {
    font-size: 32rpx;
    color: #ADAFB5;
    margin-top: 30rpx;
    text-align: center;
    line-height: 32rpx;
}