page {
    background: #f3f3f7;
}

page .content .top {
    position: relative;
    padding: 28rpx 0 18rpx 24rpx;
    height: 162rpx;
    box-sizing: border-box;
    overflow: hidden;
}

page .content .top .bg {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 1;
    width: 100%;
    height: auto;
}

page .content .top .title {
    font-size: 32rpx;
    color: #2B7FFB;
    line-height: 50rpx;
    font-weight: bold;
}

page .content .top .topic {
    position: relative;
    z-index: 2;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

page .content .top .topic .creater {
    margin-top: 18rpx;
}

page .content .top .topic .creater .user-photo {
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
    display: inline-block;
    vertical-align: middle;
    margin-right: 10rpx;
}

page .content .top .topic .creater .text {
    font-size: 24rpx;
    color: #666;
    line-height: 24rpx;
    margin-right: 8rpx;
}

page .content .top .city {
    position: relative;
    z-index: 2;
    top: 20rpx;
    padding-right: 200rpx;
}

page .content .top .yy-btn {
    position: absolute;
    right: 0;
    z-index: 3;
    width: 260rpx;
    height: 100rpx;
    bottom: -10rpx;
    padding-right: 16rpx;
    box-sizing: border-box;
}

page .content .top .yy-btn .yy-bg {
    display: inline-block;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
}

page .content .top .yy-btn .yy-txt {
    position: relative;
    z-index: 3;
    font-size: 32rpx;
    color: #FFF;
    line-height: 32rpx;
    top: 35rpx;
    text-align: right;
}

page .content .top .yy-btn .yy-txt .icon {
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    position: relative;
    top: -3rpx;
}

page .content .empty {
    text-align: center;
    margin-top: 260rpx;
}

page .content .empty .img {
    display: inline-block;
    width: 208rpx;
    height: 200rpx;
}

page .content .empty .txt {
    font-size: 32rpx;
    color: #ADAFB5;
    margin-top: 30rpx;
    text-align: center;
    line-height: 32rpx;
}

page .animatedredheart {
    animation: redheart 0.3s ease;
}

@-webkit-keyframes redheart {
    from {
        opacity: 1;
    }

    to {
        opacity: 0;
    }
}

@keyframes redheart {
    from {
        opacity: 1;
    }

    to {
        opacity: 0;
    }
}