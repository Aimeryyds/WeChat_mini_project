body,h1,h2,h3,h4,div,header,footer,span,ul,li,p,img {
    margin: 0;
    padding: 0;
    border: 0;
}

img {
    width: 100%;
    height: auto;
}

.clear {
    clear: both;
    height: 0;
    line-height: 0;
    font-size: 0;
}

body {
    color: #000;
    font-family: sans-serif;
}

.title {
    margin: 28px 20px 8px 20px;
    font-size: 1.375em;
    line-height: 1.363em;
}

.news-time {
    color: #ADB4BE;
    font-size: 0.875em;
    display: block;
    margin: 0 20px;
}

.news-container {
    margin-top: 28px;
    padding-bottom: 28px;
}

.params {
    margin: 28px 0;
}

.text-param {
    font-size: 1.125em;
    line-height: 1.575em;
    padding: 0 20px;
}

.video-param {
    width: 100%;
    margin: 0;
}

.split {
    height: 8px;
    background: #f3f3f7;
}

.news_comments {
    border-top: 10px solid #EFEFEF;
    padding-bottom: 24px;
}

.news-comments-list {
    padding: 25px 16px 0;
}

.news-comments-title {
    height: 44px;
    line-height: 44px;
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #373A41;
    border-bottom: 1px solid #EFEFEF;
    padding-left: 16px;
}

.news-comment-item {
    font-size: 16px;
    margin-bottom: 25px;
}

.user-img {
    width: 30px;
    height: 30px;
    vertical-align: middle;
    border-radius: 50%;
    margin-right: 8px;
    display: inline-block;
}

.comment-support {
    float: right;
    padding-left: 20px;
    line-height: 30px;
    background: url(data:image/png;base64,) no-repeat 5px 8px;
    background-size: 12px;
}

.comment-content {
    line-height: 24px;
    padding-left: 38px;
    word-wrap: break-word;
    word-break: break-all;
}

.time {
    padding: 8px 0 0 38px;
    font-size: 12px;
}

.font-gray {
    color: #ADB4BE;
}

.t14 {
    font-size: 14px;
}

.t12 {
    font-size: 12px;
}

.user-nick {
    display: inline;
}

.comment-support {
    display: inline;
}

.t16 {
    font-size: 16px;
}

.news_img {
    background: #000;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.news-img-container {
    width: 100%;
    height: 100%;
}

.img-table {
    width: 100%;
    display: inline;
    white-space: nowrap;
    overflow-x: scroll;
    float: left;
    overflow-y: hidden;
    height: 100%;
}

.video-td {
    display: inline-block;
    width: 100%;
    position: relative;
    height: 100%;
}

.bottom {
    color: #fff;
    position: absolute;
    bottom: 0;
    padding-top: 16px;
    padding-bottom: 64px;
    background: rgba(33,33,33,0.9);
    width: 100%;
}

.bottom-title {
    margin: 0 16px;
}

.bottom-text {
    color: #9E9E9E;
    white-space: normal;
    padding-top: 5px;
    margin: 0 16px;
}

.center {
    display: table;
    width: 100%;
    height: 100%;
}

.center-table {
    vertical-align: middle;
    height: 100%;
    width: 100%;
    display: table-cell;
    text-align: center;
}

.center-table-img {
    width: 100%;
}

.add-comment {
    position: absolute;
    bottom: 0;
    font-size: 14px;
    color: #6E6E6E;
    padding: 10px;
    width: 100%;
    display: flex;
}

input div {
    background: rgba(255,255,255,0.15);
}

input {
    width: 280px;
    height: 40px;
}

.comment-input {
    width: 70%;
    height: 40px;
    line-height: 40px;
    background: rgba(255,255,255,0.15);
    border-radius: 4px;
}

button {
    background: rgba(255,255,255,0.15);
}

.comment-button {
    width: 22%;
    height: 40px;
    background: rgba(255,255,255,0.15);
    border-radius: 4px;
    float: right;
    font-size: 14px;
    color: #6E6E6E;
    margin-right: 18px;
    border: 0;
}

.comment-time {
    float: right;
    padding-left: 20px;
    line-height: 30px;
    font-size: 12px;
}

.user-nick {
    display: inline-block;
    width: 120px;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.no-news {
    margin-top: 60px;
    font-size: 16px;
    text-align: center;
    color: #adb4be;
}

.params-img {
    width: 100%;
}

.video-bg-container {
    position: relative;
    overflow: hidden;
}

.video-bg-container .video-bg-text {
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    margin-top: -8px;
    text-align: center;
    color: white;
    font-size: 14px;
}