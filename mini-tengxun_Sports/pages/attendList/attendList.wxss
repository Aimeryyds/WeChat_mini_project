page {
    background-color: #f3f3f7;
}

.center-header {
    display: flex;
    align-items: center;
    padding: 50rpx 0 72rpx 40rpx;
    background-color: #2b58e0;
}

.center-header .avatar {
    flex: 0 0 auto;
    width: 120rpx;
    height: 120rpx;
    border: 1px solid rgba(255,255,255,0.97);
    border-radius: 50%;
}

.center-header .nick-name {
    flex: 0 0 auto;
    margin-left: 32rpx;
    color: #fff;
    font-size: 36rpx;
}

.center-body {
    padding-top: 16rpx;
}

.center-body .attend-list {
    color: #212121;
    background-color: #fff;
    font-size: 34rpx;
    line-height: 124rpx;
}

.center-body .attend-list .desc {
    margin-left: 50rpx;
}