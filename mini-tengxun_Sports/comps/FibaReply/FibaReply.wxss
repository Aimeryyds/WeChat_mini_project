.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.reply {
    padding: 20rpx;
    background: #fff;
}

.reply .icon {
    display: inline-block;
    vertical-align: middle;
}

.reply .icon.icon-vip {
    width: 24rpx;
    height: 24rpx;
    position: relative;
    top: -3rpx;
}

.reply .left {
    float: left;
}

.reply .left .photo {
    width: 72rpx;
    height: 72rpx;
    display: block;
}

.reply .right {
    margin-left: 100rpx;
    border-bottom: 1px solid #EAEAEA;
    padding-bottom: 36rpx;
}

.reply .right .info {
    font-size: 24rpx;
    color: #333;
    line-height: 24rpx;
}

.reply .right .info .name.active {
    color: #2B7FFB;
}

.reply .right .info .time {
    font-size: 20rpx;
    color: #999;
    line-height: 20rpx;
    margin-top: 12rpx;
}

.reply .right .content {
    font-size: 28rpx;
    color: #333;
    line-height: 36rpx;
    word-break: break-all;
    margin-top: 10rpx;
}

.reply .right .content .highlight {
    color: #2B7FFB;
}

.reply .images .img {
    display: inline-block;
    width: 180rpx;
    height: 180rpx;
    margin-right: 20rpx;
    overflow: hidden;
    float: left;
    margin-top: 20rpx;
}