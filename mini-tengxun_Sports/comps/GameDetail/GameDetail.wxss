.t14 {
    font-size: 14px;
}

.section {
    display: flex;
    flex-direction: column;
    border-bottom: 8px solid #ebedf0;
    background: #ffffff;
}

.detail-data-type {
    height: 42px;
    padding-left: 16px;
    border-bottom: 1px solid #f3f3f7;
    line-height: 42px;
}

.first-col {
    position: absolute;
    box-sizing: border-box;
    width: 50px;
    padding-top: 8px;
    padding-left: 16px;
}

.first-cell {
    height: 32px;
    line-height: 28px;
}

.stat-row-0 {
    height: 27px;
    text-align: center;
    color: #adb4be;
    font-size: 12px;
    font-weight: normal;
    line-height: 27px;
}

.team-icon-small {
    display: block;
    width: 30px;
    height: 30px;
}

.non-nba-game-detail {
    margin-bottom: 16px;
}

.non-nba-game-detail .non-nba-game-detail-content {
    display: flex;
    justify-content: space-between;
    margin: 16px 16px 0;
    color: #000;
    font-size: 14px;
}

.table {
    display: table;
}

.score-detail {
    box-sizing: border-box;
    min-width: 100%;
    margin-bottom: 12px;
    table-layout: fixed;
    text-align: center;
}

.score-detail .score-row {
    height: 34px;
    white-space: nowrap;
    line-height: 34px;
}

.score-detail .score-row .score-cell {
    display: inline-block;
    width: 20%;
}

.data-content {
    box-sizing: border-box;
    min-width: 80%;
    max-width: 100%;
    height: auto;
    padding-top: 5px;
    padding-left: 56px;
}