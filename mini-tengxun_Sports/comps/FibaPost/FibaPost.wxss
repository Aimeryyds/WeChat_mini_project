.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.post {
    margin-top: 20rpx;
    font-size: 28rpx;
    padding: 20rpx 24rpx 0 24rpx;
    background: #fff;
}

.post .icon {
    display: inline-block;
    width: 16rpx;
    height: 20rpx;
    vertical-align: middle;
    margin-right: 8rpx;
}

.post .icon.icon-location {
    vertical-align: middle;
    position: relative;
    top: -2rpx;
    height: 20rpx;
    width: 20rpx;
}

.post .icon.icon-city {
    width: 32rpx;
    height: 32rpx;
}

.post .icon.icon-comment {
    width: 36rpx;
    height: 36rpx;
}

.post .icon.icon-parised {
    width: 36rpx;
    height: 36rpx;
    margin-right: 6rpx;
}

.post .icon.icon-recmd {
    width: 28rpx;
    height: 28rpx;
    position: relative;
    top: -2rpx;
}

.post .icon.icon-vip {
    width: 24rpx;
    height: 24rpx;
    position: relative;
    top: -3rpx;
}

.post .top {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    position: relative;
}

.post .top .recommend {
    position: absolute;
    right: 0;
    font-size: 24rpx;
    color: #FF9B00;
    line-height: 24rpx;
    top: 0;
}

.post .top .status {
    font-size: 24rpx;
    color: #f00;
    line-height: 24rpx;
    position: absolute;
    right: 20rpx;
}

.post .top .photo {
    position: relative;
    width: 72rpx;
    height: 72rpx;
}

.post .top .photo .user-photo {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.post .top .info {
    margin-left: 12rpx;
}

.post .top .info .name {
    font-size: 24rpx;
    color: #333;
    line-height: 24rpx;
}

.post .top .info .name.active {
    color: #2B7FFB;
    font-weight: bold;
}

.post .top .info .address {
    font-size: 20rpx;
    color: #999;
    line-height: 20rpx;
    margin-top: 12rpx;
}

.post .top .info .address .text {
    margin-right: 12rpx;
}

.post .content {
    padding: 20rpx 0;
    border-bottom: 1px solid #EAEAEA;
}

.post .content .post-title {
    font-size: 32rpx;
    color: #151515;
    line-height: 40rpx;
    word-break: break-all;
}

.post .content .post-title .at {
    color: #2B7FFB;
}

.post .content .post-images {
    margin-top: 20rpx;
}

.post .content .post-images .image {
    width: 180rpx;
    height: 180rpx;
    display: inline-block;
    margin-right: 12rpx;
}

.post .content .video-control {
    width: 100%;
    margin-top: 20rpx;
}

.post .content .video {
    width: 280rpx;
    height: 180rpx;
    position: relative;
    overflow-y: hidden;
    margin-top: 20rpx;
}

.post .content .video .video-pic {
    width: 100%;
    height: 100%;
}

.post .content .video .video-btn {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    z-index: 2;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.post .bottom {
    font-size: 24rpx;
    color: #999;
    text-align: left;
    line-height: 24rpx;
}

.post .bottom .city {
    float: left;
    color: #2B7FFB;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.post .bottom .count {
    float: right;
}

.post .bottom .count .icon-count {
    margin-right: 28rpx;
}

.post .bottom .count .wrap-btn-box {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    display: inline-block;
    position: relative;
}