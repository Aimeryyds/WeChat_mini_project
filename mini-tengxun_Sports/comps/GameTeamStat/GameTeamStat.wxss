.t14 {
    font-size: 14px;
}

.font-gray {
    color: #ADB4BE;
}

.font-vs {
    margin-left: -14px;
}

.section {
    display: flex;
    flex-direction: column;
    border-bottom: 8px solid #ebedf0;
    background: #ffffff;
}

.section .title {
    padding-left: 16px;
    border-bottom: 1px solid #f3f3f7;
    line-height: 40px;
}

.section .content-wrapper {
    padding: 0 16px;
}

.section .teams,.section .team-data {
    overflow: hidden;
}

.section .teams {
    padding: 18px 0;
    line-height: 30px;
}

.section .teams .team-img {
    width: 30px;
    height: 30px;
    vertical-align: middle;
}

.section .teams .team-name-text {
    margin: 0 8px;
}

.section .team-data {
    margin-bottom: 14px;
    font-size: 0;
}

.section .data-num,.section .data-type,.section .data-bar {
    display: inline-block;
    overflow: hidden;
}

.section .data-num {
    font-size: 28rpx;
}

.section .data-num {
    width: 12%;
}

.section .data-type {
    width: 15%;
}

.section .data-bar {
    width: 30%;
}

.section .bar-left,.section .bar-right {
    position: relative;
    bottom: 3px;
    display: inline-block;
    height: 0.25rem;
    border-radius: 2px;
    background: #D6D7DC;
}

.section .blue-bar {
    background: #448aff;
}

.section .bar-left {
    width: 30%;
}

.section .bar-right {
    width: 70%;
}