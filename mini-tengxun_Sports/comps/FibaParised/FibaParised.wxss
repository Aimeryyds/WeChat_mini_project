.m-parised {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    background: rgba(43,127,251,0.9);
    border-radius: 4rpx;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    padding: 12rpx 38rpx;
    z-index: 12;
    opacity: 0;
}

.m-parised .icon {
    display: inline-block;
    width: 88rpx;
    height: 88rpx;
}

.m-parised .sponsor {
    white-space: nowrap;
    overflow: hidden;
}

.m-parised .sponsor .logo {
    height: 36rpx;
    width: 100rpx;
    position: relative;
    top: -2.5rpx;
    display: inline-block;
    vertical-align: middle;
    margin-right: 12rpx;
    max-width: 200rpx;
}