.match-list {
    position: relative;
    color: #adb4be;
    font-size: 14px;
    line-height: 40px;
}

.match-list.match-margin {
    height: auto;
    margin: 10px 0;
    border-bottom: none;
}

.match-item {
    display: flex;
}

.match-item .left-icon,.match-item .right-icon {
    position: relative;
    flex: 2;
}

.match-item .match-info {
    position: relative;
    flex: 3;
}

.in-game .match-score {
    color: #FF6257;
}

.in-game .match-time {
    color: #FF6257;
}

.in-game .score-space {
    background-color: #FF6257;
}

.post-game .match-score {
    color: #000;
}

.post-game .score-space {
    background-color: #000;
}

.pre-game .match-score {
    font-size: 16px;
}

.team-name {
    display: block;
    overflow: hidden;
    height: 40px;
    margin-top: 68px;
    text-align: center;
    color: #000;
    font-size: 14px;
    line-height: 40px;
}

.icon-img {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 40px;
    height: 40px;
    margin-top: -20px;
    margin-left: -20px;
}

.match-time,.match-status {
    height: 14px;
    margin-top: 12px;
    text-align: center;
    font-size: 12px;
    line-height: 14px;
}

.match-status {
    margin-top: 10px;
}

.left-score,.right-score {
    position: absolute;
}

.right-score {
    left: 50%;
    margin-left: 15px;
}

.left-score {
    right: 50%;
    margin-right: 15px;
}

.score-space {
    display: inline-block;
    width: 6px;
    height: 2px;
    vertical-align: 7px;
    background-color: #000;
}

.match-score {
    position: relative;
    height: 30px;
    margin-top: 15px;
    text-align: center;
    color: #ADB4BE;
    font-size: 30px;
    line-height: 30px;
}

.navigator-hover {
    background-color: #F7F9FC;
}

.n-match-info {
    width: 100%;
    height: 100%;
}

.n-match-status {
    height: 14px;
    text-align: center;
    font-size: 12px;
    line-height: 14px;
}

.n-match-time {
    height: 14px;
    padding-top: 20px;
    text-align: center;
    font-size: 12px;
    line-height: 14px;
}

.n-match-name {
    position: relative;
    overflow: hidden;
    text-align: center;
    white-space: nowrap;
    text-overflow: ellipsis;
    color: #000000;
    font-size: 16px;
}

.n-img {
    position: absolute;
    top: 7px;
    width: 24px;
    height: 24px;
}

.n-text {
    padding-left: 26px;
}

image>div {
    background-size: 100% 100%;
}

.goto-yangshi {
    color: #fff;
    margin: 0 auto;
    text-align: center;
    background-color: #D2232B;
    width: 240px;
    line-height: 32px;
    font-size: 13px;
    border-radius: 16px;
}

.goto-yangshi .play-icon {
    display: inline-block;
    width: 12px;
    height: 12px;
    margin-bottom: -1px;
}