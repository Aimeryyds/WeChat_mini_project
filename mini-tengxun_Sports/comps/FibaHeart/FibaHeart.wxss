.high-gif {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 1000;
    background: rgba(0,0,0,0.2);
}

.high-gif .close {
    width: 80rpx;
    height: 80rpx;
    position: fixed;
    bottom: 60rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
}

.high-gif .close .img {
    width: 100%;
    height: 100%;
}

.high-gif .in-high-gif {
    width: 100%;
    height: 582rpx;
    position: fixed;
    top: 248rpx;
    left: 0;
    right: 0;
}

.high-gif .in-high-gif .bg {
    width: 100%;
    height: 100%;
}

.high-gif .in-high-gif .img {
    width: 100%;
    position: absolute;
    z-index: 2;
    left: 0;
    right: 0;
    top: 40rpx;
    height: 408rpx;
}

.high-gif .in-high-gif .ul {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 30rpx;
}

.high-gif .in-high-gif .ul .li {
    font-size: 28rpx;
    color: #FFFFFF;
    letter-spacing: 4rpx;
    text-align: center;
    line-height: 40rpx;
    text-shadow: 0 0 20rpx #3586FF;
}

.high-gif .in-high-gif .ul .li .txt {
    font-size: 36rpx;
}