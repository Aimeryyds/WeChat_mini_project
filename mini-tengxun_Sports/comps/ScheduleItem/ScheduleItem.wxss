.day-match {
    display: flex;
    height: 136rpx;
    font-size: 28rpx;
    border-bottom: 1rpx solid #dddfe6;
    background-color: #fff;
}

.day-match .time-desc {
    overflow: hidden;
    flex: 2;
    margin-left: 24rpx;
}

.day-match .time-desc .time {
    margin-top: 30rpx;
}

.day-match .time-desc .time .vip {
    display: inline-block;
    width: 28rpx;
    height: 28rpx;
    vertical-align: sub;
    background: url(data:image/png;base64,) no-repeat;
    background-size: cover;
}

.day-match .time-desc .desc {
    overflow: hidden;
    margin-top: 5px;
    white-space: nowrap;
    text-overflow: ellipsis;
    color: #9c9c9c;
    font-size: 20rpx;
}

.day-match .teams {
    overflow: hidden;
    flex: 5;
    white-space: nowrap;
    text-overflow: ellipsis;
    line-height: 136rpx;
}

.day-match .teams.against {
    flex: 4;
}

.day-match .teams .badge {
    display: inline-block;
    width: 48rpx;
    height: 48rpx;
    margin-right: 16rpx;
    vertical-align: middle;
}

.day-match .teams .team {
    overflow: hidden;
    height: 68rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.day-match .teams .team.top {
    line-height: 78rpx;
}

.day-match .teams .team.top .badge {
    margin-bottom: 4rpx;
}

.day-match .teams .team.bottom {
    line-height: 56rpx;
}

.day-match .teams .team.bottom .badge {
    margin-bottom: 0;
}

.day-match .goals {
    flex: 1;
    margin-right: 30rpx;
    text-align: right;
}

.day-match .goals.on {
    color: #ff6257;
}

.day-match .goals .goal {
    font-size: 32rpx;
    font-weight: bold;
    line-height: 68rpx;
}

.day-match .goals .pre-goal {
    display: inline-block;
    width: 8rpx;
    height: 54rpx;
    margin-top: 20px;
    border-top: 1rpx solid #adb4be;
    border-bottom: 1rpx solid #adb4be;
}

.day-match .status {
    display: flex;
    flex: 2;
    flex-direction: column;
    margin-right: 24rpx;
    text-align: right;
    color: #9c9c9c;
    font-size: 22rpx;
}

.day-match .status.in-play {
    color: #ff6257;
}

.day-match .status.in-play .status-desc {
    margin-top: 40rpx;
    line-height: 30rpx;
}

.day-match .status.in-play .status-icon.video {
    background-image: url(data:image/png;base64,);
}

.day-match .status.in-play .status-icon.pic {
    background-image: url(data:image/png;base64,);
}

.day-match .status.in-play .status-quarter.none {
    line-height: 136rpx;
}

.day-match .status .status-icon.pic {
    background-image: url(data:image/png;base64,);
}

.day-match .status .status-desc {
    flex: 1;
    line-height: 136rpx;
}

.day-match .status .status-icon {
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    margin-top: -4rpx;
    vertical-align: middle;
    background-repeat: no-repeat;
    background-size: cover;
}

.day-match .status .status-icon.pb,.day-match .status .status-icon.hl,.day-match .status .status-icon.pb-hl,.day-match .status .status-icon.video {
    background-image: url(data:image/png;base64,);
}

.day-match .status .status-quarter {
    flex: 1;
    font-size: 18rpx;
    line-height: 14rpx;
}