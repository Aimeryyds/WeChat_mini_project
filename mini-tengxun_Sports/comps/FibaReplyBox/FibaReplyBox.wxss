.replybox {
    background: #F7F7F8;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 25rpx;
    z-index: 11;
}

.replybox .icon-msg {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
    position: absolute;
    left: 25rpx;
    top: 28rpx;
}

.replybox .input {
    font-size: 32rpx;
    color: #999;
    line-height: 32rpx;
    max-height: 150rpx;
    width: 500rpx;
    overflow: hidden;
    word-break: break-all;
    white-space: pre-line;
}

.replybox .btn-box {
    display: inline-block;
    position: absolute;
    right: 20rpx;
    bottom: 15rpx;
    z-index: 10;
    height: 60rpx;
}

.replybox .btn-box .icon.icon-add {
    width: 75rpx;
    height: 75rpx;
}

.replybox .btn-box .icon.icon-del {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    right: -14rpx;
    top: -14rpx;
    z-index: 10;
}

.replybox .btn-box .icon-box {
    width: 60rpx;
    height: 60rpx;
    background: #E6E7E9;
    position: relative;
    display: inline-block;
    margin-left: 20rpx;
    border-radius: 50%;
    overflow: hidden;
}

.replybox .btn-box .icon-box .icon {
    width: 32rpx;
    height: 32rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.replybox .img-box {
    margin-top: 36rpx;
    height: 100rpx;
}

.replybox .img-box .item-img {
    width: 100rpx;
    height: 100rpx;
    display: inline-block;
    margin-right: 28rpx;
    position: relative;
}

.replybox .img-box .item-img .img {
    width: 100%;
    height: 100%;
}

.replybox .img-box .item-img .icon.icon-del {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    right: -14rpx;
    top: -14rpx;
    z-index: 10;
}