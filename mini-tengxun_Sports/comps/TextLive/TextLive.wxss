.empty {
    padding-top: 64rpx;
    text-align: center;
    color: #adb4be;
    font-size: 32rpx;
    line-height: 1.5em;
}

.loading {
    text-align: center;
    color: #93989f;
    background-color: #f3f3f7;
    font-size: 26rpx;
    line-height: 50px;
}

.event-list-container {
    width: 100%;
    height: 100%;
    color: #000;
    word-wrap: break-word;
}

.event-list-container .event-list {
    background-color: #fff;
}

.quarter-item .score-banner {
    position: sticky;
    top: 20rpx;
    left: 14rpx;
    margin: 10rpx;
    z-index: 1;
    font-size: 24rpx;
    height: 60rpx;
    line-height: 40rpx;
}

.quarter-item .score-banner .banner {
    display: inline-block;
    padding: 10rpx 20rpx;
    border-radius: 40rpx;
    text-align: center;
    color: #fff;
    background-color: #2979ff;
}

.quarter-item .score-banner .banner.current {
    background-color: #f85150;
}

.quarter-item .score-banner .banner .icon-time {
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    font-family: 'icomoon'!important;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
}

.quarter-item .score-banner .banner .icon-time:before {
    content: "\E940";
    color: #fff;
}

.event-item {
    display: flex;
    align-items: flex-start;
}

.event-item .side-info {
    position: relative;
    width: 40rpx;
    margin-top: 30rpx;
    flex-grow: 1;
    font-size: 24rpx;
    color: #000;
    text-align: center;
}

.event-item .side-info .spot {
    position: absolute;
    top: 0;
    margin-top: 14rpx;
    right: -5rpx;
    width: 10rpx;
    height: 10rpx;
    border-radius: 100%;
    background-color: #3A84FF;
}

.event-item .side-info .spot.goal {
    background-color: #CE3434;
}

.event-detail {
    padding: 0 44rpx;
    width: 620rpx;
    border-left: solid 1rpx #eee;
    font-size: 32rpx;
    overflow: hidden;
    flex-grow: 5;
}

.event-detail .alert {
    color: #ce3434;
}

.event-detail .event-text {
    line-height: 48rpx;
}

.event-detail .event-text.has-time {
    text-indent: -96rpx;
    margin-left: 96rpx;
}

.event-detail .event-text .event-time {
    padding-right: 15rpx;
}

.event-detail .host-info {
    font-size: 28rpx;
}

.event-detail .host-info .host-name {
    color: #2b9eee;
}

.event-detail .host-info .top-badge {
    margin-left: 16rpx;
    padding: 0 4rpx 4rpx;
    font-size: 24rpx;
    color: #fff;
    background-color: #3a84ff;
}

.event-detail .score-info>text {
    font-size: 32rpx;
    color: #8e8e8e;
}

.event-detail .score-info .score {
    float: right;
}

.event-detail .event-image {
    display: inline-block;
    position: relative;
}

.event-detail .event-image .gif-logo {
    position: absolute;
    bottom: 28rpx;
    right: 20rpx;
    padding: 0 4rpx;
    font-size: 24rpx;
    font-weight: normal;
    color: #fff;
    background-color: rgba(3,139,255,0.6);
}

.event-detail .event-image image {
    width: 400rpx;
    background-color: #ccc;
    margin: 0 20rpx 20rpx 0;
}

.event-detail .event-quote {
    overflow: hidden;
    padding: 20rpx;
    font-size: 28rpx;
    background-color: #f4f5f7;
}

.event-detail .event-quote .event-page {
    display: flex;
    align-items: flex-start;
}

.event-detail .event-quote .event-page .favicon {
    padding-right: 20rpx;
}

.event-detail .event-quote .event-page .page-title {
    color: #969ba3;
    font-size: 28rpx;
}

.event-detail .event-quote .event-page .page-summary {
    font-size: 24rpx;
}

.event-detail .event-quote .event-star {
    display: flex;
    align-items: flex-start;
}

.event-detail .event-quote .event-star .player-avatar {
    padding-right: 20rpx;
}

.event-detail .event-quote .event-star .player-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.event-detail .event-quote .event-star .player-info .player-name {
    color: #000;
    line-height: 50rpx;
}

.event-detail .event-quote .event-star .player-info .player-stats {
    color: #8e8e8e;
}

.event-detail .event-quote .event-comment {
    line-height: 50rpx;
}

.event-detail .event-quote .event-comment .author {
    color: #8e8e8e;
}

.event-detail .event-video .shot {
    margin-right: 20rpx;
    position: relative;
    width: 300rpx;
    height: 160rpx;
}

.event-detail .event-video .shot image {
    width: 300rpx;
    height: 160rpx;
    background-color: #ccc;
}

.event-detail .event-video .shot .duration {
    position: absolute;
    width: 86rpx;
    left: 214rpx;
    bottom: 0;
    height: 40rpx;
    text-align: center;
    color: #c2c2c2;
    background-color: rgba(0,0,0,0.5);
}

.event-detail .detail-container {
    position: relative;
    width: 100%;
    padding: 30rpx 0 10rpx;
}

.event-detail .detail-container.hide-title {
    padding-top: 0;
}

.event-detail .detail-container>view {
    margin-bottom: 12rpx;
}

.event-detail .detail-container>text {
    display: block;
    margin-bottom: 12rpx;
}