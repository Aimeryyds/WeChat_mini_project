.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.rank-item {
    padding: 20rpx 28rpx 24rpx 76rpx;
    margin: 0 30rpx;
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #333333;
    line-height: 28rpx;
    background: rgba(255,255,255,0.9);
    border: 1px solid #006BB6;
    border-radius: 10rpx;
    position: relative;
}

.rank-item .icon {
    display: inline-block;
    vertical-align: middle;
}

.rank-item .icon.icon-vip {
    width: 24rpx;
    height: 24rpx;
    position: relative;
    top: -3rpx;
}

.rank-item .icon.icon-good {
    width: 28rpx;
    height: 28rpx;
}

.rank-item .number {
    padding: 5rpx 10rpx;
    display: inline-block;
    color: #fff;
    font-weight: bold;
    position: absolute;
    left: -22rpx;
    top: 20rpx;
    width: 56rpx;
    height: 68rpx;
    text-align: center;
    line-height: 55rpx;
}

.rank-item .number .num-bg {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 2;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

.rank-item .number .num-no {
    position: relative;
    z-index: 3;
}

.rank-item .photo {
    width: 44rpx;
    height: 44rpx;
    display: inline-block;
    vertical-align: middle;
}

.rank-item .top {
    padding: 7rpx 0;
    position: relative;
    height: 44rpx;
    overflow: hidden;
    line-height: 44rpx;
    font-size: 24rpx;
    color: #999999;
    text-align: left;
}

.rank-item .top .name {
    font-size: 24rpx;
    color: #888;
    line-height: 24rpx;
    float: left;
    font-weight: bold;
}

.rank-item .top .name.active {
    color: #2B7FFB;
}

.rank-item .top .parsied {
    float: right;
    position: relative;
}

.rank-item .content {
    overflow: hidden;
    height: 72rpx;
    line-height: 36rpx;
    margin-top: 5rpx;
}

.rank-item .content .at {
    color: #2B7FFB;
}