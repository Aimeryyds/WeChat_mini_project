.submit {
    background: #2B7FFB;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    position: fixed;
    bottom: 0;
    z-index: 3;
}

.submit .icon {
    display: inline-block;
}

.submit .icon.icon-submit {
    width: 36rpx;
    height: 36rpx;
    vertical-align: middle;
    position: relative;
    top: -3rpx;
    margin-right: 18rpx;
}

.submit .btn {
    font-size: 32rpx;
    color: #FFFFFF;
    display: inline-block;
}