.resetBor .after {
    opacity: 0;
}

.tBor {
    position: relative;
}

.tBor .before {
    position: absolute;
    content: "";
    height: 1px;
    background: #a2a2a0;
    left: 0;
    right: 0;
    top: 0;
}

.tBor:before {
    position: absolute;
    content: "";
    height: 1px;
    background: #a2a2a0;
    left: 0;
    right: 0;
    top: 0;
}

.bBor:after {
    position: absolute;
    content: "";
    height: 2rpx;
    background: #cbcbcb;
    left: 0;
    right: 0;
    bottom: 0;
}

.bBor {
    position: relative;
}

.bBor .after {
    position: absolute;
    content: "";
    height: 1px;
    background: #a2a2a0;
    left: 0;
    right: 0;
    bottom: 0;
    transform: scaleY(0.5);
}

.lBor {
    position: relative;
}

.lBor .before {
    position: absolute;
    content: "";
    width: 1px;
    background: #a2a2a0;
    top: 0;
    bottom: 0;
    left: 0;
}

.rBor {
    position: relative;
}

.rBor .after {
    position: absolute;
    content: "";
    width: 1px;
    background: #a2a2a0;
    top: 0;
    bottom: 0;
    right: 0;
}

.trblBor {
    position: relative;
}

.trblBor .after {
    position: absolute;
    content: "";
    top: 0;
    left: 0;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    border: 1px solid #a2a2a0;
    pointer-events: none;
}

@media only screen and (-webkit-min-device-pixel-ratio:1.5) {
    .tBor:before,.bBor:after {
        transform: scaleY(.6666);
    }

    .tBor:before,.bBor:after {
        transform-origin: 0 100%;
    }
}

@media only screen and (-webkit-min-device-pixel-ratio:2) {
    .tBor:before,.bBor:after {
        transform: scaleY(.5);
    }
}

@media only screen and (-webkit-min-device-pixel-ratio:3) {
    .tBor:before,.bBor:after {
        transform: scaleY(.3333);
    }
}