.navigation {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    width: 100%;
    background-color: #2980ff;
}

.navigation__item {
    position: relative;
    z-index: 1;
    margin: 0 24rpx;
}

.navigation__item-hd {
    position: absolute;
    top: 50%;
    left: 0;
    z-index: 8;
    transform: translateY(-50%);
}

.navigation__item-bd {
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: 12;
    text-align: center;
    line-height: 1;
    transform: translate(-50%,-50%);
}

.navigation__title {
    display: block;
    width: 320rpx;
    line-height: 1;
    font-size: 36rpx;
    color: #fff;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.navigation__btn {
    position: relative;
    z-index: 1;
}

.navigation__btn-icon {
    display: inline-block;
    width: 64rpx;
    height: 64rpx;
}

.navigation__btn-txt {
    display: inline-block;
    position: relative;
    top: -18rpx;
    left: -10rpx;
    z-index: 1;
    font-size: 36rpx;
    color: #FFF;
}