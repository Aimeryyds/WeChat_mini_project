@import "../../__wuBaseWxss__/1.wxss";

@import "../../__wuBaseWxss__/2.wxss";

@import "../../__wuBaseWxss__/0.wxss";

html {
    height: 100%;
}

body {
    height: 100%;
    background-color: #fff;
}

.wy-upload-file .pic-list {
    overflow: hidden;
    padding: 8rpx 0 0 8rpx;
}

.wy-upload-file .pic-list-item {
    position: relative;
    float: left;
    width: 25%;
    box-sizing: border-box;
    border-right: 8rpx solid transparent;
    margin-bottom: 8rpx;
}

.wy-upload-file .pic-list-item .pic-wrap {
    position: relative;
    padding-top: 100%;
    height: 0;
    overflow: hidden;
    background: cover;
    background-position: center;
}

.wy-upload-file .pic-list-item .pic-con {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
}

.wy-upload-file .pic-list-item .pic-con .pic {
    width: 100%;
    height: 100%;
}

.wy-upload-file .pic-list-item.add .pic-wrap {
    background: #EFEFF4;
}

.wy-upload-file .pic-list-item.add .icon-add {
    position: absolute;
    width: 96rpx;
    height: 96rpx;
    left: 50%;
    top: 50%;
    margin: -48rpx 0 0 -48rpx;
}

.wy-upload-file .pic-list-item .btn-remove {
    position: absolute;
    width: 58rpx;
    height: 58rpx;
    right: 0;
    top: 0;
}

.wy-upload-file .pic-list-item .btn-remove .icon {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 48rpx;
    height: 48rpx;
    margin: -24rpx 0 0 -24rpx;
}

.wy-upload-file .upload-file-ft {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    font-size: 32rpx;
    background: #f9f9f9;
}

.wy-upload-file .upload-file-ft.bBor::after {
    bottom: auto;
    top: 0;
    background: #B6B9BF;
}

.wy-upload-file .upload-file-ft-inner {
    padding: 15rpx 216rpx 14rpx 14rpx;
    height: 72rpx;
}

.wy-upload-file .upload-dest {
    position: relative;
    height: 72rpx;
    line-height: 72rpx;
    color: #00A4FF;
    background: #fff;
    margin: 0 10rpx 0 0;
}

.wy-upload-file .upload-dest .text {
    padding: 0 0 0 20rpx;
}

.wy-upload-file .upload-dest:after {
    position: absolute;
    content: "";
    left: 0;
    top: 0;
    width: 200%;
    height: 200%;
    border: 1px solid #B7BFCB;
    transform: scale(0.5);
    transform-origin: 0 0;
    point-events: none;
    border-radius: 20rpx;
}

.wy-upload-file .upload-dest .upload-to {
    position: absolute;
    width: 32rpx;
    height: 32rpx;
    right: 5rpx;
    top: 50%;
    margin: -16rpx 0 0;
}

.wy-upload-file .upload-dest .upload-to .icon {
    display: block;
    width: 100%;
    height: 100%;
}

.wy-upload-file .upload-act {
    position: absolute;
    right: 14rpx;
    top: 15rpx;
}

.wy-upload-file .wy-btn {
    width: 200rpx;
}

.wy-btn {
    background: #00A4FF;
    border-radius: 10rpx;
    color: #fff;
    text-align: center;
    height: 72rpx;
    line-height: 72rpx;
}

.wy-btn .count {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    line-height: 45rpx;
    text-align: center;
    background: #fff;
    border-radius: 100%;
    color: #00A4FF;
    margin: 0 10rpx 0 0;
}