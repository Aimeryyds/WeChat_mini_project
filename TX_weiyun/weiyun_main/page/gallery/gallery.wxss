page {
    height: 100%;
    background-color: #000;
}

.page {
}

.gallery {
    height: 100%;
}

.gallery-bd {
    position: relative;
    z-index: 1;
    height: 100%;
}

.gallery__item {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 30;
    width: 100%;
    height: 100%;
}

.gallery__item-img {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 32;
    width: 100%;
    height: 100%;
}

.gallery-progress {
    position: absolute;
    bottom: 60rpx;
    left: 50%;
    z-index: 60;
    transform: translateX(-50%);
}

.gallery-progress-inner {
}

.gallery-progress-bd {
    display: inline-block;
    position: relative;
    z-index: 1;
    text-align: center;
}

.gallery-progress__btn {
    position: relative;
    z-index: 1;
    line-height: 1;
    margin: 0 auto;
    padding: 0 10rpx;
    width: auto;
    min-width: 200rpx;
    height: 50rpx;
    background-color: rgba(77,77,77,.3);
    border-radius: 4rpx;
}

.gallery-progress__txt {
    display: block;
    width: auto;
    min-width: 200rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #FFFFFF;
}

.gallery-progress__txt::after {
    content: "";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 8;
    width: 100%;
    height: 100%;
    border: 1px solid rgba(255,255,255,.5);
    border-radius: 6rpx;
    box-sizing: border-box;
}

.gallery-progress__btn-close {
    position: absolute;
    top: 50%;
    right: 20rpx;
    z-index: 12;
    width: 20rpx;
    height: 20rpx;
    transform: translateY(-50%);
}

.gallery-meta {
    position: absolute;
    bottom: 0;
    left: 50%;
    z-index: 60;
    width: 100%;
    transform: translateX(-50%);
}

.gallery-meta-inner {
    position: relative;
    z-index: 1;
    padding: 55rpx 0;
}

.gallery-meta__item {
    position: absolute;
    top: 0;
    z-index: 12;
    text-align: center;
}

.gallery-meta__item-forwarding {
    left: 100rpx;
}

.gallery-meta__item-save {
    right: 100rpx;
}

.gallery-meta__item:active {
    opacity: .5;
}

.gallery-meta__item_disable {
    opacity: .3;
}

.gallery-meta__item_disable:active {
    opacity: .3;
}

.gallery-meta__item-img {
    display: block;
    margin: 0 auto;
    width: 44rpx;
    height: 44rpx;
    vertical-align: top;
}

.gallery-shadow-wrap {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 50;
    background-color: transparent;
}

.gallery-shadow-wrap__img {
    display: block;
    width: 750rpx;
    height: 250rpx;
    vertical-align: top;
}

.navigation {
    background-color: transparent;
}