@import "../../__wuBaseWxss__/1.wxss";

@import "../../__wuBaseWxss__/2.wxss";

@import "../../__wuBaseWxss__/0.wxss";

html {
    height: 100%;
}

body {
    height: 100%;
    background-color: #fff;
}

.pwd-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    color: #74787C;
    font-size: 24rpx;
    background: #eee;
}

.pwd-user {
    padding: 10px 10px;
}

.pwd-input {
    padding: 0 10px;
    height: 40px;
    line-height: 32rpx;
    font-size: 32rpx;
    color: #74787C;
    background-color: #fff;
    margin: 0 auto;
    border-top: 1px solid #CBCBCB;
    border-bottom: 1px solid #CBCBCB;
}

.pwd-form {
    padding: 10px;
}

.pwd-button {
    width: 100%;
    padding: 22rpx 0;
    color: #fff;
    background-color: #00A4FF;
}

.pwd-tips {
    padding: 10px;
    font-size: 24rpx;
    color: #74787C;
}

.pwd-forget-show {
    padding: 10px;
    font-size: 24rpx;
    color: #00A4FF;
    text-align: right;
}

.pwd-forget-hide {
    padding-bottom: 10px;
    font-size: 24rpx;
    color: #00A4FF;
    text-align: right;
}

.pwd-forget-text {
    padding: 10px;
    font-size: 24rpx;
    color: #74787C;
}

.pwd-forget-title {
    padding-bottom: 10px;
    margin-bottom: 10px;
    border-bottom: 1px solid #74787C;
}

.pwd-forget-content {
    line-height: 50rpx;
}