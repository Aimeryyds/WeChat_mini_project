page {
    background-color: #fff;
    height: 100%;
}

.guide {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-flow: column;
    width: 100%;
    height: 100%;
}

.guide__logo {
    width: 480rpx;
    height: 480rpx;
    margin-bottom: 234rpx;
}

.guide__btn-start {
    display: block;
    margin: 0 auto;
    width: 440rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 36rpx;
    color: #fff;
    background-color: #2980ff;
    border-radius: 6rpx;
}

.guide__btn-start:active {
    opacity: 0.5;
}

.guild__subtitle {
    white-space: nowrap;
    display: block;
    justify-content: center;
    margin-bottom: 20rpx;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: gray;
    font-size: 30rpx;
}

.guide__tips {
    display: block;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 34rpx;
    text-align: center;
    color: #9b9b9b;
}