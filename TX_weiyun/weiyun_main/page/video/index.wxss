@import "../../__wuBaseWxss__/1.wxss";

@import "../../__wuBaseWxss__/2.wxss";

@import "../../__wuBaseWxss__/0.wxss";

html {
    height: 100%;
}

body {
    height: 100%;
    background-color: #fff;
}

.wy-img-list-wrapper {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    width: 100%;
}

.wy-img-list-wrapper .video {
    width: 100%;
}

.wy-img-list-wrapper .img-item {
    width: 100%;
    margin-bottom: 10px;
    position: relative;
}

.wy-img-list-wrapper .img-item-spec {
    margin-bottom: 0;
    width: 100%;
    height: 100%;
}

.wy-img-list-wrapper .img-item-spec:before {
    position: absolute;
    content: "";
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.1);
}

.wy-img-list-wrapper .img-item-spec .wy-video {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
}

.wy-img-list-wrapper .img-item-spec .wy-video video {
    width: 100%;
}

.wy-img-list-wrapper .icon-media-ctrl {
    position: absolute;
    width: 36px;
    height: 36px;
    left: 50%;
    top: 50%;
    margin: -18px 0 0 -18px;
}

.wy-img-list-wrapper .icon-media-ctrl .icon {
    width: 100%;
    height: 100%;
}

.wy-img-list-wrapper .img-item-attr text {
    position: absolute;
    left: 0;
    right: 0;
    top: 50%;
    margin-top: 23px;
    text-align: center;
    color: #fff;
    font-size: 16px;
    line-height: 16px;
}

.wy-img-list-wrapper .img {
    width: 100%;
    height: 100%;
}

.wy-img-list-wrapper .img-item-spec {
    position: relative;
    overflow: hidden;
}

.wy-img-list-wrapper .img-item-spec .img {
    display: block;
    width: 100%;
}

.wy-img-list-wrapper .img-item-info {
    padding: 0 12px;
}

.wy-img-list-wrapper .img-item-info-hd {
    height: 50px;
    line-height: 50px;
    font-size: 16px;
}

.wy-img-list-wrapper .img-item-info-hd .name {
    display: inline-block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.wy-img-list-wrapper .img-item-info-bd {
    padding-top: 10px;
    font-size: 12px;
    color: #706f6f;
}

.wy-img-list-wrapper .img-item-info-bd text {
    margin: 0 10px 0 0;
}

page {
    background-color: #000;
}

.navigation {
    background-color: transparent;
}