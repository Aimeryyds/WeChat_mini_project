@import "../../../../__wuBaseWxss__/2.wxss";

.list-wrapper .item {
    line-height: 1.08;
    padding-left: 15px;
    overflow-y: hidden;
}

.list-wrapper .file-wrapper {
    display: flex;
    flex-direction: row;
    width: 100%;
    justify-content: center;
    align-items: center;
}

.list-wrapper .type-wrapper {
    width: 100rpx;
    height: 100rpx;
    margin-right: 15px;
}

.list-wrapper .type-wrapper:active {
    opacity: .5;
}

.list-wrapper .type-wrapper .img {
    width: 100rpx;
    height: 100rpx;
}

.list-wrapper .info-wrapper {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 21rpx 0;
}

.list-wrapper .info-wrapper .file-info {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.list-wrapper .info-wrapper .file-info:active {
    opacity: .5;
}

.list-wrapper .info-wrapper .title {
    line-height: 1.3;
    font-size: 34rpx;
    color: #000;
    margin-bottom: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    word-wrap: break-word;
}

.list-wrapper .info-wrapper .sub-info {
    font-size: 28rpx;
    color: #777777;
}

.list-wrapper .bBor:after {
    background-color: #d5d4d9;
}

.list-wrapper .op {
    position: relative;
    width: 39px;
    height: 100%;
}

.list-wrapper .op:active {
    opacity: .5;
}

.list-wrapper .op .icon-dot {
    position: absolute;
    width: 24px;
    height: 24px;
    left: 50%;
    top: 50%;
    margin: -12px 0 0 -12px;
}

.list-wrapper .op-wrapper {
    width: 100%;
    height: 36px;
    display: inline-flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}

.list-wrapper .op-wrapper .op-item {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-right: 20px;
}

.list-wrapper .op-wrapper .img {
    width: 20px;
    height: 20px;
    padding-right: 5px;
}

.list-wrapper .op-wrapper .txt {
    height: 24rpx;
    line-height: 24rpx;
    font-size: 24rpx;
}

.pics-wrapper {
    font-size: 0;
    letter-spacing: -4px;
}

.pics-wrapper .item {
    display: inline-block;
    vertical-align: top;
    width: 33.33vw;
    height: 33.33vw;
    font-size: 12px;
    letter-spacing: normal;
    border-right: 1px solid #f8f8f8;
    border-bottom: 2px solid #f8f8f8;
    box-sizing: border-box;
    position: relative;
}

.pics-wrapper .item:nth-child(3n) {
    border-right: none;
}

.pics-wrapper .item .item-bd {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 44rpx;
    padding-top: 4px;
    background: linear-gradient(to bottom,rgba(0,0,0,0) 0%,rgba(0,0,0,0.5) 100%);
}

.pics-wrapper .item .item-bd .txt {
    font-size: 22rpx;
    color: #fff;
    padding: 0 12rpx;
    line-height: 44rpx;
    display: block;
}

.pics-wrapper .item .img {
    width: 100%;
    height: 100%;
    background-color: #fff;
}

.pics-wrapper .item .icon {
    display: block;
    position: absolute;
    top: 2rpx;
    right: 2rpx;
    z-index: 8;
    width: 64rpx;
    height: 64rpx;
}

.editing {
    padding-bottom: 150rpx;
}

.editing .type-wrapper {
    overflow: hidden;
    text-align: center;
    position: relative;
}

.list-wrapper.editing .type-wrapper .img {
    width: 100rpx;
    height: 100rpx;
}

.list-wrapper .checkbox {
    display: none;
}

.list-wrapper.editing .checkbox {
    display: flex;
    width: 50rpx;
    height: 50rpx;
    border-radius: 25rpx;
    background-size: cover;
    opacity: 0;
    margin-right: 30rpx;
}

.list-wrapper.editing .checkbox checkbox {
    opacity: 0;
}

.list-wrapper.editing .checkbox.checked {
    opacity: 1;
    background-image: url(https://qzonestyle.gtimg.cn/aoi/sola/20180704151518_jcao2PkJCU.png);
}

.list-wrapper.editing .checkbox.unchecked {
    opacity: 1;
    background-image: url(https://pub.idqqimg.com/pc/misc/files/20190718/6ca985d7efa5dc1aa01fd045dab56fbb.png);
}

.loading-wrapper {
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.loading-wrapper .loading {
    width: 20px;
    height: 20px;
    margin-right: 3px;
}

.loading-wrapper .icon-loading {
    width: 20px;
    height: 20px;
    animation: rotate 1s linear infinite;
}

.loading-wrapper .loading-txt {
    font-size: 12px;
    color: #777;
}

@-webkit-keyframes rotate {
    from {
        transform: rotate(360deg);
    }

    to {
        transform: rotate(0deg);
    }
}

@keyframes rotate {
    from {
        transform: rotate(360deg);
    }

    to {
        transform: rotate(0deg);
    }
}

.empty {
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background-color: #FFF;
}

.empty__bd {
    padding-top: 150rpx;
}

.empty__img {
    display: block;
    margin-bottom: 48rpx;
    width: 400rpx;
    height: 240rpx;
}

.empty__txt {
    display: inline-block;
    line-height: 1;
    font-size: 36rpx;
    color: #777777;
}