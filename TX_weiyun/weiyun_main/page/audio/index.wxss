@import "../../__wuBaseWxss__/1.wxss";

@import "../../__wuBaseWxss__/2.wxss";

@import "../../__wuBaseWxss__/0.wxss";

html {
    height: 100%;
}

body {
    height: 100%;
    background-color: #fff;
}

.wy-audio .audio-hd {
    position: relative;
    height: 160rpx;
}

.wy-audio .audio-bg {
    display: none;
}

.wy-audio .audio-bg .img {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 150rpx;
    display: block;
}

.wy-audio .audio-bd {
    text-align: center;
    margin: 0 28rpx;
}

.wy-audio .audio-img {
    margin: 72rpx 0 0;
    display: inline-block;
    width: 300rpx;
    height: 300rpx;
}

.wy-audio .audio-img .img {
    width: 100%;
    height: 100%;
}

.wy-audio .audio-info-tit {
    font-size: 36rpx;
    margin: 30rpx 0 0;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.wy-audio .audio-info-text {
    font-size: 28rpx;
    color: #777;
    margin: 6rpx 0 0;
}

.wy-audio .audio-progress {
    margin: 130rpx 28rpx 0;
}

.xx {
    position: relative;
    background: #B5B5B5;
    background: #00A4FF;
}

.wy-audio .progress-time {
    position: relative;
    margin: 26rpx 0;
    font-size: 28rpx;
}

.wy-audio .progress-time-all {
    position: absolute;
    right: 0;
    top: 0;
}

.wy-audio .audio-act {
    position: absolute;
    left: 0;
    right: 0;
    text-align: center;
    bottom: 82rpx;
}

.wy-audio .audio-act .button {
    display: inline-block;
    width: 148rpx;
    height: 148rpx;
    background: #2980FF;
    border-radius: 100%;
    margin: 5px;
}

.wy-audio .audio-act .button .img {
    width: 148rpx;
    height: 148rpx;
}

.wy-audio .audio-act .button .img:active {
    opacity: .5;
}