page {
    background-color: #F6F6F6;
}

.user-info {
    background: #FBA52F;
    height: 100rpx;
    display: flex;
    align-items: center;
    padding: 50rpx 0;
}

.user-avator {
    overflow: hidden;
    display: block;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin: 40rpx;
    box-shadow: 3px 3px 10px rgba(0,0,0,0.2);
}

.user-info text {
    font-size: 14px;
    background-color: #c0c0c0;
    border-radius: 40%;
}

.user-name {
    color: #FFF;
    font-size: 36rpx;
    height: 100%;
    padding-top: 35rpx;
    text-shadow: 5px 5px 5px rgba(0,0,0,0.2);
}

.func-list {
    padding: 0 20rpx;
    background: #FFF;
    margin-top: 20rpx;
}

.func-item {
    height: 60rpx;
    padding: 10rpx 0;
    font-size: 30rpx;
    display: flex;
    border-bottom: 1px solid #eee;
}

.item-icon {
    padding-top: 10rpx;
    width: 5%;
    height: 100%;
}

.item-name {
    color: #8a8a8a;
    padding-left: 20rpx;
    width: 90%;
    height: 100%;
    line-height: 60rpx;
}

.item-operate {
    padding-top: 14rpx;
    width: 5%;
    height: 100%;
}

.contact-btn {
    display: flex;
    width: 100%;
    text-align: left;
    font-size: 30rpx;
}