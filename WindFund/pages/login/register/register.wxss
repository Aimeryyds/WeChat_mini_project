.nosms-tpis {
    text-align: right;
    margin-top: 20rpx;
    font-size: 14px;
    color: #FBA52F;
}

.back-span {
    font-size: 16px;
    position: absolute;
    right: 20rpx;
    top: 30rpx;
    color: #3CC51F;
    text-decoration: underline;
}

.weui-vcode-btn {
    color: #FBA52F;
}

