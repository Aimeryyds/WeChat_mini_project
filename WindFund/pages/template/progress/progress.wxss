.fullscreen {
    position: fixed;
    margin: auto;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5);
}

.processbox {
    z-index: 1;
    position: fixed;
    height: 300rpx;
    margin: auto;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    padding: 40rpx 80rpx;
}

.processbox .process-text {
    font-size: 30rpx;
    color: #FFF;
}

.processbox .process-style {
    background: #dedede;
    border: 1px solid #333333;
    height: 10px;
    border-radius: 5px;
}

.processbox .process-style view {
    background: #FBA52F;
    height: 10px;
    border-radius: 5px;
}