.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 560rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -260rpx auto;
    border-radius: 5px;
    right: 0;
}

.modal-title {
    padding-top: 30rpx;
    font-size: 38rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding: 30rpx 32rpx 40rpx 32rpx;
    font-size: 14px;
    color: #666;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
}

.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
    border-radius: 0px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1;
}

.btn-confirm {
    width: 50%;
    color: #FBA52F;
    text-align: center;
    border-radius: 0px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1;
}

button::after {
    border: none;
    border-radius: 0px;
}