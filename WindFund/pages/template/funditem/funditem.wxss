.funditem-view {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    border-bottom: 1px solid #dedede;
    padding: 14rpx 0;
}

.funditem-left {
    width: 58%;
    display: flex;
    flex-direction: column;
    align-self: center;
}

.funditem-name {
    text-align: left;
    color: #333333;
    font-size: 30rpx;
    padding-left: 10px;
    word-break: keep-all;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.funditem-code {
    text-align: left;
    color: #666666;
    font-size: 24rpx;
    padding-left: 10px;
}

.funditem-mid {
    width: 20%;
    display: flex;
    flex-direction: column;
    align-self: center;
}

.funditem-value {
    text-align: right;
    color: #333333;
    font-size: 30rpx;
    padding-right: 20rpx;
}

.funditem-date {
    text-align: right;
    color: #666666;
    font-size: 22rpx;
    padding-right: 20rpx;
}

.funditem-right {
    width: 22%;
    color: #FE2727;
    font-size: 30rpx;
    text-align: right;
    padding-right: 10px;
    align-self: center;
    box-sizing: border-box;
}