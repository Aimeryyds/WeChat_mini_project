.manageritem-view {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    border-bottom: 1px solid #dedede;
    padding: 40rpx 0;
}

.manageritem-left {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    width: 180rpx;
    flex-direction: column;
    align-self: center;
    align-items: center;
    border-right: 1px solid #EFEFEF;
}

.manageritem-left .text1 {
    font-size: 40rpx;
}

.manageritem-left .text2 {
    font-size: 24rpx;
}

.manageritem-left .text3 {
    font-size: 24rpx;
    color: #999;
}

.manageritem-right {
    flex: 1;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.manageritem-right .img-view {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    align-self: center;
    align-items: center;
    padding: 0 10rpx 0 20rpx;
}

.manageritem-right .img-view image {
    width: 68rpx;
    height: 68rpx;
    border-radius: 34rpx;
}

.manageritem-right .img-view .imageview {
    height: 68rpx;
    margin: auto 0;
    width: 68rpx;
    border-radius: 34rpx;
    background-size: 105%;
    background-position: center 8%;
}

.manageritem-right .desc-view {
    text-align: left;
}

.manageritem-right .desc-view .up-view {
    line-height: 46rpx;
}

.manageritem-right .desc-view .down-view {
    line-height: 42rpx;
}

.manageritem-right .desc-view .name-text {
    font-size: 30rpx;
    color: #333;
}

.manageritem-right .desc-view .tags-text {
    font-size: 24rpx;
    color: #666;
    margin-left: 10rpx;
    padding: 0 6rpx;
    border-radius: 3px;
}

.manageritem-right .desc-view .tags-text.company-text {
    color: #FF9A65;
    border: 1px solid #FF9A65;
}

.manageritem-right .desc-view .tags-text.goodat-text {
    color: #81AAF3;
    border: 1px solid #81AAF3;
}

.manageritem-right .desc-view .fund-text {
    font-size: 24rpx;
    color: #666;
}