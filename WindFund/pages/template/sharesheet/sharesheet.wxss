@import "../../../__wuBaseWxss__/2.wxss";

.commodity_screen {
    position: fixed;
    z-index: 999999;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: transparent;
}

.commodity_attr_box {
    position: fixed;
    z-index: 5000000;
    height: 380rpx;
    width: 100%;
    bottom: -10rpx;
    left: 0;
    transform: translate(-50%,-50%);
    background-color: #FFFFFF;
    text-align: center;
    overflow: hidden;
    box-shadow: 0 4rpx 30rpx 0 #989898;
}

.flex-wrp {
    display: flex;
}

.flex-item {
    height: 100%;
    width: 50%;
    text-align: center;
}

.section__title {
    height: 80rpx;
    font-size: 36rpx;
    font-weight: 600;
    text-align: center;
    line-height: 80rpx;
    letter-spacing: 1px;
}

.share-content {
    height: 200rpx;
}

.share-btn {
    height: 100%;
    background-color: #FFFFFF;
    padding: 20rpx;
}

.share-img {
    height: 80rpx;
}

.share-txt {
    font-size: 30rpx;
}

.section__bottom {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-top: 1px solid #989898;
    letter-spacing: 1px;
}