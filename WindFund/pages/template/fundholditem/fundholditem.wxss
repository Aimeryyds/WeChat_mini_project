.maingreen {
    color: #09BF82!important;
}

.mainred {
    color: #EE3348!important;
}

.maingray {
    color: #666666!important;
}

.mainhardgray {
    color: #333333!important;
}

.section-view {
    margin-top: 20rpx;
    background-color: #FFF;
}

.section-view .section-title {
    line-height: 80rpx;
    padding-left: 30rpx;
    border-bottom: 1px solid #EFEFEF;
    font-size: 28rpx;
}

.section-view .section-title text {
    border-left: 3px solid #FBA52F;
    padding-left: 20rpx;
    color: #727272;
}

.section-content-desc {
    padding: 30rpx;
    font-size: 24rpx;
    color: #727272;
}

.section-item {
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    line-height: 76rpx;
    height: 76rpx;
    position: relative;
    padding-left: 30rpx;
}

.section-item-desc {
    color: #727272;
}

.section-item-value {
    padding-right: 30rpx;
    color: #666666;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.section-item-value .manager-text {
    padding-left: 20rpx;
    color: #FBA52F;
}

.section-item-value.company-text {
    color: #FBA52F;
}

.section-item-value .arrowclass {
    width: 32rpx;
    height: 32rpx;
}

.section-item.threeColumn .section-item-desc {
    width: 50%;
}

.section-item.threeColumn .section-item-mid {
    text-align: right;
    width: 25%;
    color: #666666;
}

.section-item.threeColumn .section-item-value {
    text-align: right;
    width: 25%;
}