.announcement-title-view {
    margin: 30rpx 40rpx;
    border: 1px solid #dedede;
}

.flex {
    display: flex;
    justify-content: center;
}

.announcement-title-view view {
    width: 25%;
    box-sizing: border-box;
    border-right: 1px solid #dedede;
    font-size: 28rpx;
    text-align: center;
    padding: 10rpx 0;
}

.announcement-title-view view.active {
    background-color: #FBA52F;
    color: #Fff;
}

.announcement-title-view view:last-child {
    border-right: none;
}

.year-view {
    margin: 0 40rpx;
    font-size: 30rpx;
    color: #999;
}

.announcement-item {
    margin: 0 30rpx;
    padding: 10rpx 0;
    border-top: 1px solid #EFEFEF;
    min-height: 94rpx;
}

.announcement-item .left {
    font-size: 26rpx;
    width: 100rpx;
    color: #999;
}

.announcement-item .right {
    color: #333;
    flex: 1;
    font-size: 28rpx;
}

.flex-column-center {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.flex-directioncolumn-center {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.com-nodata {
    text-align: center;
    font-size: 28rpx;
    color: #999;
    line-height: 800rpx;
}

.loading-more {
    text-align: center;
    font-size: 26rpx;
    color: #999999;
    padding: 5px;
}