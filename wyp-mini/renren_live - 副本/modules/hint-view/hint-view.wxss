page {
    height: 100%;
}

.hint-view-line {
    width: 100%;
    height: 1rpx;
    background: #ebecf1;
}

.hint-view-border {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.hint-view-image {
    width: 300rpx;
    height: 220rpx;
    margin-top: 40%;
}

.hint-view-text1 {
    color: #b0b0b0;
    font-size: 28rpx;
    margin-top: 20rpx;
}

.hint-view-text2 {
    color: #ccc;
    font-size: 24rpx;
    margin-top: 10rpx;
}

.hint-view-button {
    width: 240rpx;
    height: 60rpx;
    margin-top: 30rpx;
    border-radius: 80rpx;
    margin: 20px auto;
    font-size: 24rpx;
    background-color: white;
    border: 1px solid #b0b0b0;
    color: #999;
    overflow: hidden;
}