cover-view,cover-image {
    box-sizing: border-box;
}

.pop_sign {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    z-index: 9999;
    width: 100%;
    height: 100%;
}

.pop_bg {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
}

.sign_con {
    position: fixed;
    left: 50%;
    top: 200rpx;
    transform: translateX(-50%);
    width: 600rpx;
    height: 840rpx;
    background: #fff;
    border-radius: 7rpx;
    overflow: hidden;
}

.sign_con .sign_title {
    position: relative;
    left: 0;
    right: 0;
    top: 0;
    width: 100%;
    height: 182rpx;
    color: #fff;
}

.sign_con .sign_title .sign_title_bg {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
}

.sign_con .sign_title .sign_str {
    position: absolute;
    left: 0;
    right: 0;
    top: 45rpx;
    width: 600rpx;
    font-size: 24rpx;
    text-align: center;
}

.sign_con .sign_title .sign_num {
    position: absolute;
    left: 0;
    right: 0;
    top: 92rpx;
    width: 600rpx;
    height: 64rpx;
    font-size: 24rpx;
    text-align: center;
}

.sign_con .sign_title .sign_num .num {
    display: inline-block;
    height: 64rpx;
    line-height: 64rpx;
    margin-right: 14rpx;
    font-size: 60rpx;
}

.sign_con .sign_title .sign_num .numstr {
    display: inline-block;
    height: 64rpx;
    line-height: 64rpx;
    font-size: 24rpx;
}

.sign_con .sign_body {
    display: flex;
    justify-content: center;
    flex-direction: row;
    flex-wrap: wrap;
}

.sign_con .sign_body .sign_item {
    position: relative;
    margin-top: 30rpx;
    width: 33.3333333%;
    height: 142rpx;
    color: #000;
}

.sign_con .sign_body .sign_item .sign_bg {
    position: absolute;
    top: -15rpx;
    z-index: -1;
    width: 199rpx;
    height: 199rpx;
}

.sign_con .sign_body .sign_item .title {
    margin-bottom: 10rpx;
    text-align: center;
    font-size: 22rpx;
}

.sign_con .sign_body .sign_item .img {
    margin: 0 auto;
    position: relative;
    width: 116rpx;
    height: 86rpx;
    border-radius: 6rpx;
}

.sign_con .sign_body .sign_item .img.img_no {
    background: #9A55F8;
}

.sign_con .sign_body .sign_item .img.img_has {
    background: #EBECF0;
}

.sign_con .sign_body .sign_item .img .gift {
    margin-left: 13rpx;
    margin-top: 8rpx;
    width: 90rpx;
    height: 62rpx;
}

.sign_con .sign_body .sign_item .gift_no {
    position: absolute;
    left: 43rpx;
    bottom: 0;
    width: 116rpx;
    height: 34rpx;
    line-height: 34rpx;
    color: #090801;
    font-size: 22rpx;
    text-align: center;
    border-radius: 17rpx;
    background: #FFD600;
}

.sign_con .sign_body .sign_item .gift_has {
    position: absolute;
    left: 37rpx;
    bottom: 0;
    width: 130rpx;
    height: 44rpx;
    line-height: 44rpx;
    color: #090801;
    font-size: 24rpx;
    text-align: center;
    border-radius: 22rpx;
    background: #CCCDD6;
}

.sign_con .sign_btn {
    margin: 40rpx auto 0;
    width: 540rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    font-size: 28rpx;
    color: #090801;
    background: #EBECF0;
    text-align: center;
}

.sign_con .sign_btn.no {
    background: #FFD600;
}

.pop_sign .sign_close {
    position: fixed;
    left: 50%;
    top: 1060rpx;
    transform: translateX(-50%);
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: #fff;
    border-radius: 30rpx;
    color: #000;
}

.sign_close_img {
    display: block;
    margin: 21rpx auto 0;
    width: 18rpx;
    height: 18rpx;
}

.pop_sign .signGet {
    position: fixed;
    left: 50%;
    top: 478rpx;
    transform: translateX(-50%);
    width: 316rpx;
    height: 378rpx;
    background: #fff;
    overflow: hidden;
}

.pop_sign .signGet .signGet_bg {
    position: absolute;
    z-index: 1;
    left: 0;
    top: 0;
    width: 316rpx;
    height: 478rpx;
    border-radius: 10rpx;
}

.pop_sign .signGet .signGet_gift {
    position: absolute;
    top: 137rpx;
    left: 65rpx;
    z-index: 2;
    width: 190rpx;
    height: 124rpx;
}

.pop_sign .signGet .signGet_text {
    position: absolute;
    left: 0;
    right: 0;
    top: 290rpx;
    z-index: 2;
    width: 100%;
    display: flex;
    justify-content: center;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
}

.pop_sign .signGet .signGet_text .text_nor {
    display: inline;
}

.pop_sign .signGet .signGet_text .text_txt {
    display: inline;
    color: #ffd600;
}

.signShare_button {
    display: block;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0!important;
    margin: 0!important;
    border: 0!important;
    border: none!important;
    background: rgba(255,255,255,0)!important;
    outline: none!important;
}

.signShare_button::after {
    border: none;
}