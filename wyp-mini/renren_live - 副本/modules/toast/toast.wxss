.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 1000;
    background: transparent;
}

.drawer_box {
    width: 50%;
    position: fixed;
    top: 37%;
    z-index: 1001;
    background: white;
    margin-left: 25%;
    border-radius: 5px;
}

.toast_content {
    width: 100%;
    padding: 30rpx;
    background: rgba(0,0,0,0.8);
    border-radius: 10rpx;
}

.toast_content_text {
    height: 100%;
    width: 100%;
    color: #fff;
    font-size: 25rpx;
    text-align: center;
}