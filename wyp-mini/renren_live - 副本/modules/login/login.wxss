.login_box {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 1005;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
}

.login_box .login_body {
    padding-top: 81rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 580rpx;
    color: #000;
    background: #fff;
    border-radius: 14rpx;
    overflow: hidden;
}

.login_box .login_body.phone {
    width: 540rpx;
}

.login_box .login_body .img {
    display: block;
    margin: 0 auto 30rpx;
    width: 144rpx;
    height: 144rpx;
}

.login_box .login_body .name {
    margin-bottom: 69rpx;
    font-weight: bold;
    font-size: 32rpx;
    text-align: center;
}

.login_box .login_body .tip1 {
    width: 350rpx;
    margin: 20rpx auto 69rpx;
    color: #565658;
    font-size: 26rpx;
    text-align: center;
}

.login_box .login_body .tip1 .txt {
    font-weight: bolder;
}

.login_box .login_body .title {
    padding-top: 40rpx;
    margin: 0 auto;
    width: 480rpx;
    font-size: 26rpx;
    font-weight: bolder;
    border-top: 1px solid #E7E7E7;
}

.login_box .login_body .msg {
    margin: 30rpx auto 60rpx;
    width: 480rpx;
    font-size: 24rpx;
    color: #565658;
}

.login_box .login_body .btns {
    margin-bottom: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 90rpx;
}

.login_box .login_body .btns .btn {
    width: 240rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 28rpx;
    background: #EBECF1;
    border-radius: 8rpx;
}

.login_box .login_body .btns .is_btn {
    margin-left: 20rpx;
    color: #fff;
    background: #0091FF;
}

.login_box .login_btn {
    float: left;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border: none;
    outline: none;
    color: #fff;
    font-size: 28rpx;
    background: #0091FF;
}

.new-button-hover {
    color: #0091FE;
}