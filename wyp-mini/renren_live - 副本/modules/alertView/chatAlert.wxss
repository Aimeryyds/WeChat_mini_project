.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
}

.drawer_box {
    width: 76%;
    position: fixed;
    top: 37%;
    z-index: 1001;
    background: white;
    margin-left: 12%;
    border-radius: 5rpx;
}

.drawer_title {
    margin-top: 80rpx;
    margin-bottom: 20rpx;
    font: 15px "PingFangSC-Medium";
    color: #333;
    text-align: center;
}

.drawer_title_2 {
    margin-top: 80rpx;
    margin-bottom: 80rpx;
    font: 15px "PingFangSC-Medium";
    color: #333;
    text-align: center;
}

.drawer_subtitle {
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    font: 14px "PingFangSC-Light";
    color: #999;
    text-align: center;
}

.btnContainer {
    display: flex;
    flex-direction: row;
    position: relative;
    width: 100%;
    height: 70rpx;
    margin-bottom: 20rpx;
}

.btn_cancel {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font: 15px "PingFangSC-Regula";
    text-align: center;
    color: #999;
    width: 39.5%;
    height: 100%;
    margin-left: 7%;
    background-color: white;
    border-radius: 36rpx;
    border: 1px solid #d1d1d6;
}

.btn_ok {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font: 15px "PingFangSC-Regula";
    text-align: center;
    color: #333;
    width: 39.5%;
    height: 100%;
    margin-left: 7%;
    margin-right: 7%;
    background-color: rgb(255,214,0);
    border-radius: 36rpx;
}

.kf_ok {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font: 15px "PingFangSC-Regula";
    text-align: center;
    color: #333;
    width: 39.5%;
    height: 100%;
    margin-left: 7%;
    margin-right: 7%;
    background-color: rgb(255,214,0);
    border-radius: 36rpx;
}

.kf_ok::after {
    border: none;
}

.btn_ok_only {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font: 15px "PingFangSC-Regula";
    text-align: center;
    color: 333333;
    width: 70%;
    height: 100%;
    margin-left: 15%;
    background-color: rgb(255,214,0);
    border-radius: 36rpx;
}

.kf_btn_ok {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font: 15px "PingFangSC-Regula";
    text-align: center;
    color: 333333;
    width: 70%;
    height: 100%;
    margin-top: -5rpx;
    margin-left: 15%;
    background-color: rgb(255,214,0);
    border-radius: 36rpx;
}

.kf_btn_ok::after {
    border: none;
}

.btn_close {
    display: flex;
    flex-direction: row;
    float: left;
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    right: 2px;
    top: 2px;
    align-items: center;
    justify-content: center;
}

.img_close {
    width: 30rpx;
    height: 30rpx;
}