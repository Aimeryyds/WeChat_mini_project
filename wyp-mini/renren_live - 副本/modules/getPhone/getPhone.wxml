<view class="pop_phone" wx:if="{{getPhoneShow}}">
    <view class="phone_con">
        <view class="text1">绑定手机号</view>
        <view class="text2">开启与主播亲密互动权限</view>
        <view class="btns">
            <view bindtap="onClose" class="del">再想想</view>
            <button bindgetphonenumber="getPhoneNumber" class="ok" openType="getPhoneNumber">立即绑定</button>
        </view>
    </view>
</view>
