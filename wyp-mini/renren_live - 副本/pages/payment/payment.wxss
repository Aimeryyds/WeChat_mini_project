view,text,image {
    box-sizing: border-box;
}

.pay_title {
    padding: 37rpx 0rpx 37rpx 26rpx;
    font-size: 26rpx;
    color: #999;
}

.pay_txt {
    font-size: 24rpx;
    color: #333;
}

.amount {
    margin-left: 26rpx;
    padding-left: 24rpx;
    margin-right: 10rpx;
    font-size: 36rpx;
    color: #ffd600;
    border-left: 1px solid #EBECF1;
}

.pay_con {
    padding-left: 5rpx;
    overflow: hidden;
}

.pay_item {
    position: relative;
    float: left;
    margin-left: 20rpx;
    margin-bottom: 30rpx;
    width: 220rpx;
    height: 120rpx;
    border-radius: 15rpx;
    border: 3rpx solid #FFF165;
    text-align: center;
    color: #282828;
}

.pay_item.active {
    background: #FFF165;
}

.pay_item .tag {
    position: absolute;
    left: 0;
    top: 0;
    width: 67rpx;
    height: 66rpx;
}

.pay_item .item_first {
    margin-top: 24rpx;
    font-size: 30rpx;
}

.pay_item .item_second {
    font-size: 22rpx;
}

.pay_item .item_second text {
    margin-left: 12rpx;
    color: #ff6934;
}

.bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 3rpx 25rpx;
    width: 100%;
    font-size: 20rpx;
    color: #ddd;
}