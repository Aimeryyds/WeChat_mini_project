page {
    height: 100%;
}

.focus-list-border {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.focus-item-border {
    display: flex;
    width: 100%;
    height: 140rpx;
    align-items: center;
    background-color: white;
    flex-direction: row;
    border-bottom: 1px solid #f2f2f2;
}

.focus-item-avatar {
    width: 100rpx;
    height: 100rpx;
    margin-left: 16rpx;
    margin-right: 16rpx;
    border-radius: 100rpx;
}

.focus-item-message-border {
    position: relative;
    padding-left: 20rpx;
    padding-right: 20rpx;
    flex: 1;
}

.focus-item-border .chat_btn {
    height: 50rpx;
    line-height: 50rpx;
    width: 100rpx;
    font-size: 28rpx;
    text-align: center;
    color: #999;
    border: 1px solid #ccc;
    border-radius: 25rpx;
}

.focus-item-name {
    display: block;
    color: #333;
    font-size: 30rpx;
}

.focus-item-message {
    display: block;
    color: #999;
    font-size: 25rpx;
    margin-top: 12rpx;
}

.focus-next-image {
    margin-left: 32rpx;
    margin-right: 32rpx;
    margin-top: 32rpx;
    width: 35rpx;
    height: 35rpx;
}

.completeview {
    display: flex;
    justify-content: center;
}

.hint-border {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.hint-image {
    width: 200rpx;
    height: 150rpx;
}

.hint-text1 {
    color: #b0b0b0;
    font-size: 28rpx;
    margin-top: 20rpx;
}

.hint-text2 {
    color: #ccc;
    font-size: 24rpx;
    margin-top: 10rpx;
}

.hint-button {
    width: 240rpx;
    height: 60rpx;
    margin-top: 30rpx;
    border-radius: 80rpx;
    margin: 20px auto;
    font-size: 24rpx;
    background-color: white;
    border: 1px solid #b0b0b0;
    color: #999;
    overflow: hidden;
}

@-webkit-keyframes rotate {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

@keyframes rotate {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

.loadMore-block {
    width: 100%;
    height: 60rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.loadMore-roate {
    width: 30rpx;
    height: 30rpx;
    animation: rotate 1s infinite linear;
}

.loadMore-text {
    margin-left: 10rpx;
    font-size: 20rpx;
    color: #b0b0b0;
}

.focus-img {
    height: 100rpx;
}