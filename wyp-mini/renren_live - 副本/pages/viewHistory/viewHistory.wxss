view,image,text {
    box-sizing: border-box;
}

.no_history {
    position: relative;
    width: 100%;
}

.defult {
    padding: 116rpx 0rpx 148rpx;
    width: 100%;
    height: 100%;
    text-align: center;
    background: #F2F2F5;
}

.defult image {
    width: 221rpx;
    height: 126rpx;
}

.defult view:nth-of-type(1) {
    padding: 62rpx 0rpx 20rpx;
    font-size: 28rpx;
    color: #B0B0B0;
}

.defult view:nth-of-type(2) {
    font-size: 24rpx;
    color: #ccc;
}

.defult view:nth-of-type(3) {
    margin: 39rpx auto 0rpx;
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    border: 1px solid #B0B0B0;
    text-align: center;
    font-size: 24rpx;
    color: #b0b0b0;
}

.recommend_con {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    background: #fff;
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
}

.recommend_title {
    font-size: 30rpx;
    color: #333;
}

.recommend_title {
    padding: 30rpx 30rpx;
}

.threeList {
    padding-left: 30rpx;
    overflow: hidden;
}

.three_item {
    position: relative;
    float: left;
    margin-bottom: 20rpx;
    width: 220rpx;
    height: 220rpx;
    overflow: hidden;
    border-radius: 15rpx;
}

.three_item .img {
    display: block;
    width: 100%;
    height: 100%;
}

.three_item .top {
    position: absolute;
    top: 11rpx;
    right: 11rpx;
    width: 32rpx;
    height: 32rpx;
    background: rgba(0,0,0,0.3);
    border-radius: 50%;
}

.three_item .top image {
    float: left;
    margin: 9rpx 0rpx 0rpx 5rpx;
    width: 22rpx;
    height: 15rpx;
    animation: tobig 2s linear infinite;
}

.three_item .bottom {
    position: absolute;
    padding: 32rpx 21rpx;
    width: 100%;
    height: 82rpx;
    bottom: 0;
    left: 0;
    color: #fff;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 30rpx;
    background: linear-gradient(to bottom,rgba(200,200,200,0),rgba(0,0,0,1));
}

.list_title {
    padding: 45rpx 0rpx 20rpx 30rpx;
    font-size: 30rpx;
    color: #999;
}