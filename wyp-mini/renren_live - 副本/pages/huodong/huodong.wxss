view,image {
    padding: 0;
    margin: 0;
}

.page_container {
    height: 100%;
    background: #C097FF;
}

image.img {
    display: block;
    width: 100%;
    height: 100%;
}

.icon {
    width: 400rpx;
    height: 100rpx;
}

.btn_servers {
    position: absolute;
    width: 600rpx;
    height: 180rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    padding: 0!important;
    margin: 0!important;
    border: 0!important;
    border: none!important;
    background: rgba(255,255,255,0)!important;
    outline: none!important;
}

.btn_servers::after {
    border: none;
}