@import "../../modules/chat-input/chat-input.wxss";

page {
    background-color: #f2f2f5;
    height: 100%;
}

.navigation-container {
    position: fixed;
    top: 0rpx;
    left: 0;
    right: 0rpx;
    background-color: white;
    z-index: 1000;
}

.navigation-area {
    display: flex;
    position: fixed;
    width: 100%;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.navigation-back {
    display: flex;
    position: absolute;
    left: 0;
    width: 46px;
    height: 46px;
    align-items: center;
    justify-content: center;
    line-height: 46px;
}

.navigation-back-image {
    display: flex;
    width: 24px;
    height: 24px;
}

.navigation-title-container {
    display: flex;
    position: fixed;
    align-items: center;
    justify-content: center;
}

.navigation-title-text {
    color: black;
    font-size: 14pt;
    text-align: center;
    font-family: PingFangSC-Regular;
    font-weight: 400;
}

.navigation-title-image {
    width: 32rpx;
    height: 32rpx;
    margin-left: 5rpx;
}

.border {
    position: fixed;
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
}

.messageScrollView {
    position: fixed;
    top: 80px;
    width: 100%;
    background: #f2f2f5;
}

@-webkit-keyframes rotate {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

@keyframes rotate {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

.loadMore-block {
    width: 100%;
    height: 50rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background: #f2f2f5;
}

.loadMore-roate {
    width: 30rpx;
    height: 30rpx;
    animation: rotate 1s infinite linear;
}

.loadMore-text {
    margin-left: 10rpx;
    font-size: 20rpx;
    color: #282828;
}

.message-packet {
    position: fixed;
    bottom: 0px;
    width: 100%;
    height: 330rpx;
    display: flex;
    flex-direction: column;
    background-color: white;
}

.top-view {
    width: 100%;
    height: 55px;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.message-icon {
    width: 24px;
    height: 24px;
    margin-left: 13px;
    margin-right: 13px;
}

.message-title {
    flex: 1;
    font-family: "PingFang-SC-Regular";
    font-size: 25rpx;
    color: #333;
}

.message-count {
    margin-left: 13px;
    font-family: "AvenirNextCondensed-DemiBold";
    font-size: 25rpx;
    color: #ffd600;
}

.message-count-unit {
    margin-left: 5px;
    margin-right: 13px;
    font-family: "PingFang-SC-Regular";
    font-size: 25rpx;
    color: #333;
}

.middleLine {
    width: 100%;
    height: 1px;
    background-color: #f2f2f5;
}

.bottomView {
    height: 120px;
    display: flex;
    flex-direction: row;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.bottomView2 {
    width: 96%;
    margin-left: 2%;
    margin-right: 2%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.subView {
    width: 100%;
    height: 120rpx;
    border-radius: 20rpx;
    border: 1.0px solid rgba(255,228,0,0.6);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.title-text-size {
    font-family: "PingFang-SC-Regular";
    font-size: 25rpx;
    color: #282828;
    text-align: center;
}

.count-text-size {
    margin-top: 20rpx;
    font-family: "PingFang-SC-Regular";
    font-size: 20rpx;
    color: #282828;
    text-align: center;
}

.asasa {
    flex-direction: row;
    background: #f2f2f5;
}

.chatmessage {
    padding: 20rpx;
    overflow: hidden;
    word-break: break-all;
}

.chatmessage .right-avatar {
    float: right;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.chatmessage .right-triangle {
    float: right;
    margin-top: 20rpx;
    margin-right: 10rpx;
    width: 0;
    height: 0;
    border-top: 4px solid transparent;
    border-left: 8px solid #1994fb;
    border-bottom: 4px solid transparent;
}

.chatmessage .right-content {
    float: right;
    max-width: 60%;
    margin-top: 10rpx;
    line-height: 40rpx;
    background: #1994fb;
    border-radius: 10rpx;
    padding: 20rpx;
    justify-content: center;
    font-size: 16px;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(255,255,255,1);
}

.chatmessage .left-avatar {
    float: left;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.chatmessage .left-triangle {
    float: left;
    margin-top: 20rpx;
    margin-left: 10rpx;
    width: 0;
    height: 0;
    border-top: 4px solid transparent;
    border-right: 8px solid white;
    border-bottom: 4px solid transparent;
}

.chatmessage .left-content {
    float: left;
    max-width: 60%;
    margin-top: 10rpx;
    line-height: 40rpx;
    background: white;
    border-radius: 10rpx;
    padding: 20rpx;
    font-size: 16px;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(51,51,51,1);
}

.message-time-border {
    display: flex;
    width: 100%;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    align-items: center;
    justify-content: center;
}

.message-time-bg {
    display: flex;
    background: #d1d1d6;
    border-radius: 10px;
    padding-left: 15rpx;
    padding-right: 15rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.message-time {
    font-size: 22rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: white;
    line-height: 16px;
}

.message-hint-border {
