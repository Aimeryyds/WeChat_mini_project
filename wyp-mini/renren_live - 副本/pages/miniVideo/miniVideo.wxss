.r0 {
    position: relative;
    width: 92rpx;
    height: 92rpx;
}

.r0 .head {
    width: 90rpx;
    height: 90rpx;
}

.head .head-img {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}

.focusView {
    position: absolute;
    top: 56rpx;
    left: 56rpx;
    width: 50rpx;
    height: 50rpx;
}

.r0 .addFocus {
    float: left;
    width: 34rpx;
    height: 34rpx;
    border-radius: 50%;
    color: #000;
    background: #ffe400;
    text-align: center;
    font-size: 24rpx;
    line-height: 34rpx;
}

.r0 .addFocus.active {
    width: 34rpx;
    height: 34rpx;
    border-radius: 50%;
    color: #fff;
    background: #ff2f60;
    text-align: center;
    font-size: 24rpx;
    line-height: 34rpx;
    animation: fa 0.5s ease-in-out 1;
}

@-webkit-keyframes fa {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes fa {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

