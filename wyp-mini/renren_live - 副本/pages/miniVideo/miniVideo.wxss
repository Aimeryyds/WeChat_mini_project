.s-icon1 {
    position: absolute;
    width: 80rpx;
    height: 60rpx;
    animation: sa1 6.8s cubic-bezier(0.68,-0.55,0.265,1.55) infinite;
}

@keyframes sa1 {
    0%,59%,100% {
        opacity: 1;
        transform: scale(1,1);
    }

    62% {
        opacity: 0;
        transform: scale(0,0);
    }

    97% {
        opacity: 0;
        transform: scale(0,0);
    }
}

@-webkit-keyframes sa1 {
    0%,59%,100% {
        opacity: 1;
        transform: scale(1,1);
    }

    62% {
        opacity: 0;
        transform: scale(0,0);
    }

    97% {
        opacity: 0;
        transform: scale(0,0);
    }
}

.s-icon2 {
    position: absolute;
    width: 80rpx;
    height: 60rpx;
    opacity: 0;
    transform: scale(0,0);
    animation: sa2 6.8s cubic-bezier(0.68,-0.55,0.265,1.55) infinite;
}

@keyframes sa2 {
    0%,62% {
        opacity: 0;
        transform: scale(0,0);
    }

    65%,94% {
        opacity: 1;
        transform: scale(1,1);
    }

    97%,100% {
        opacity: 0;
        transform: scale(0,0);
    }
}

@-webkit-keyframes sa2 {
    0%,62% {
        opacity: 0;
