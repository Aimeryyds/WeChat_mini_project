.contribution_con {
    box-sizing: border-box;
    padding-bottom: 10rpx;
    padding-top: 19rpx;
    background: #F5F5F8;
}

.contribution_item {
    box-sizing: border-box;
    padding: 0rpx 30rpx;
    margin: 0 auto 10rpx;
    width: 720rpx;
    height: 130rpx;
    background: #fff;
    border-radius: 8rpx;
}

.contribution_item .icon {
    float: left;
    margin-top: 34rpx;
    margin-right: 20rpx;
    width: 60rpx;
    height: 58rpx;
}

.contribution_item .msg {
    float: left;
    margin-top: 25rpx;
    width: 260rpx;
}

.contribution_item .msg .msg_name {
    font-size: 28rpx;
    color: #000;
}

.contribution_item .msg .msg_time {
    font-size: 24rpx;
    color: #a8a9ad;
}

.contribution_item .num {
    float: right;
    margin-top: 36rpx;
    font-size: 24rpx;
    color: #a8a9ad;
}

.contribution_item .num .num_txt {
    margin-right: 6rpx;
    font-size: 34rpx;
    color: #000;
}

.none {
    position: absolute;
    left: 0;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    text-align: center;
    font-size: 24rpx;
    font-family: border;
}