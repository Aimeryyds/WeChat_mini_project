.yiyuanPop view,.yiyuanPop text,.yiyuanPop image {
    box-sizing: border-box;
}

.yiyuanPop {
    padding-bottom: 130rpx;
    width: 100%;
    background: #CE0D13;
    box-sizing: border-box;
}

.yiyuanPop::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.yiyuanPop .top {
    margin: 0 auto;
    width: 750rpx;
    height: 567rpx;
}

.yiyuanPop .body {
    position: relative;
    top: -40rpx;
    margin-left: 20rpx;
    width: 710rpx;
    height: 620rpx;
    background: #C10006;
    border: 2px solid #FF9F7C;
    border-radius: 15rpx;
}

.yiyuanPop .body .item {
    position: relative;
    margin-top: 20rpx;
    margin-left: 18rpx;
    width: 670rpx;
    height: 180rpx;
}

.yiyuanPop .body .item .img {
    position: absolute;
    z-index: 0;
    width: 670rpx;
    height: 180rpx;
}

.yiyuanPop .body .item .con {
    position: absolute;
    z-index: 1;
}

.yiyuanPop .body .item .icon {
    float: left;
    margin: 20rpx 28rpx 0rpx 30rpx;
    width: 150rpx;
    height: 133rpx;
}

.yiyuanPop .body .item .msg {
    float: left;
    height: 180rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 295rpx;
}

.yiyuanPop .body .item .msg .title {
    font-size: 30rpx;
    color: #661100;
}

.yiyuanPop .body .item .msg .str {
    color: #e59b5b;
    font-size: 24rpx;
}

.yiyuanPop .body .item .time {
    float: left;
    width: 167rpx;
    height: 180rpx;
    line-height: 180rpx;
    color: #e51721;
    font-size: 36rpx;
    text-align: center;
}

.yiyuanPop .body .item .time .num {
    font-size: 70rpx;
}

.yiyuanPop .dis {
    display: block;
    margin: 20rpx auto 20rpx;
    width: 232rpx;
    height: 31rpx;
}

.yiyuanPop .disstr {
    display: flex;
    flex-direction: column;
    vertical-align: center;
    padding-left: 60rpx;
    padding-top: 35rpx;
    margin: 0 auto;
    width: 710rpx;
    height: 190rpx;
    font-size: 24rpx;
    color: #ffc999;
    background: #B50006;
    border-radius: 8rpx;
}

.yiyuanPop .disstr .h {
    flex: 1;
}

.bottom {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    color: #943900;
    font-size: 36rpx;
    text-align: center;
    background: #FFDA5C;
    border-top: 10rpx solid #FFBF00;
}

.bottom .num {
    color: #EBA000;
    text-decoration: line-through;
}