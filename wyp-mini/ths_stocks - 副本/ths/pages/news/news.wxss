page {
    background-color: #fff;
}

.newsListWrap {
    background-color: #fff;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.newsListItemWrap {
    width: 100%;
    border-bottom: 1rpx solid #eee;
}

.newsListItemTitle {
    font-size: 34rpx;
    font-family: PingFang-SC-Medium;
    color: #323232;
}

.newsListItemDes {
    font-size: 28rpx;
    font-family: PingFang-SC-Regular;
    color: #666;
}

.newsListItemInfo {
    font-size: 24rpx;
    font-family: PingFang-SC-Regular;
    color: #999;
    height: 24rpx;
    line-height: 24rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.newsListItemFrom {
    margin-right: 20rpx;
}

.newsListItemWrapNoImg {
    padding-top: 32rpx;
    height: 196rpx;
    box-sizing: border-box;
}

.newsListItemWrapNoImg .newsListItemTitle {
    height: 34rpx;
    line-height: 34rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.newsListItemWrapNoImg .newsListItemDes {
    margin-top: 20rpx;
    height: 28rpx;
    line-height: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.newsListItemWrapNoImg .newsListItemInfo {
    padding-top: 24rpx;
}

.newsListItemWrapImg {
    padding-top: 32rpx;
    overflow: hidden;
    height: 214rpx;
    box-sizing: border-box;
}

.newsListItemWrapImg .newsListItemTitle {
    height: 102rpx;
    line-height: 51rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin-top: -6rpx;
}

.newsListItemWrapImg .newsListItemInnerWrap {
    margin-right: 270rpx;
}

.newsListItemWrapImg .newsListItemImg {
    width: 200rpx;
    height: 150rpx;
    float: right;
    border-radius: 4rpx;
    overflow: hidden;
}

.newsListItemImgInner {
    width: 100%;
    height: 100%;
}

.newsListItemWrapImg .newsListItemInfo {
    padding-top: 30rpx;
}

.newsListItemWrapReadBefore .newsListItemTitle {
    color: #999;
}

.newsListLoadMoreWrap {
    height: 80rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    text-align: justify;
    -webkit-box-align: center;
    align-items: center;
}

.newsListLoadMoreImg {
    width: 24rpx;
    height: 24rpx;
    animation: round .8s infinite linear;
}

.newsListLoadMoreText {
    font-size: 24rpx;
    line-height: 24rpx;
    height: 24rpx;
    color: #999;
    margin-left: 16rpx;
}

@-webkit-keyframes round {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(1turn);
    }
}

@keyframes round {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(1turn);
    }
}