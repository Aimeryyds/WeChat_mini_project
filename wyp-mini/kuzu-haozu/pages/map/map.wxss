.hide {
    display: none;
}

page {
    height: 100%;
}

.data-map {
    height: 100%;
    overflow: hidden;
    font-size: 0;
    padding-bottom: 264rpx;
    box-sizing: border-box;
}

.data-map .map-content {
    background-color: #fff;
}

.map-content image {
    height: 100%;
    width: 100%;
}

.data-map .map-tips {
    width: 750rpx;
    height: 264rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: #fff;
}

.map-vis {
    padding: 40rpx 30rpx 0 30rpx;
}

.map-tips image.map-here {
    width: 130rpx;
    height: 130rpx;
    position: absolute;
    right: 70rpx;
    top: -70rpx;
}

.map-tips .map-title {
    font-size: 36rpx;
    color: #333;
}

.map-uls image {
    width: 33rpx;
    height: 33rpx;
    margin-top: 30rpx;
    vertical-align: top;
}

.map-dizhi {
    font-size: 24rpx;
    color: #999;
    margin-top: 20rpx;
}

.map-uls {
    margin-top: 28rpx;
    border-top: 1rpx solid #f5f5f5;
}

.map-uls view {
    width: 25%;
    height: 98rpx;
    text-align: center;
    line-height: 98rpx;
    display: inline-block;
}

.map-uls view text {
    font-size: 24rpx;
    color: #ff9a00;
    margin-left: 10rpx;
}

.map-uls view image.active {
    display: none;
}

.map-uls view.cur {
    background-color: #ff9a00;
}

.map-uls view.cur text {
    color: #fff;
}

.map-uls view.cur image.active {
    display: inline-block;
}

.map-uls view.cur image.normal {
    display: none;
}