page {
    text-align: center;
}

.header {
    padding-top: 35rpx;
    font-size: 0;
}

.header_img {
    display: inline-block;
    width: 149rpx;
    height: 149rpx;
}

.header_img image {
    width: 149rpx;
    height: 149rpx;
    border-radius: 149rpx;
}

.header text {
    display: block;
    width: 100%;
    font-size: 34rpx;
    line-height: 48rpx;
    padding-top: 25rpx;
}

.evaluate_title {
    color: #999;
    font-size: 26rpx;
    padding: 35rpx 0;
}

.evaluate_grade {
    padding-bottom: 35rpx;
    font-size: 0;
}

.grade_box {
    display: inline-block;
    width: 33%;
    vertical-align: top;
}

.grade_box image {
    display: inline-block;
    width: 78rpx;
    height: 73rpx;
}

.grade_box text {
    display: block;
    font-size: 24rpx;
    line-height: 32rpx;
    padding-top: 10rpx;
    color: #666;
}

.evaluate_checkbox {
    padding-left: 18rpx;
    position: relative;
}

.evaluate_lst {
    display: inline-block;
    width: 218rpx;
    height: 60rpx;
    line-height: 60rpx;
    border: 1rpx #ddd solid;
    color: #bbb;
    font-size: 26rpx;
    margin: 0 18rpx 30rpx 0;
    border-radius: 10rpx;
}

.evaluate_lst.cur {
    color: #ffba00;
    background: #fef5dd;
    border-color: #ffba00;
}

.evaluate_checkbox textarea {
    margin: 0 12rpx;
    border: 1rpx #ddd solid;
    height: 180rpx;
    padding: 10rpx 20rpx;
    width: 654rpx;
    text-align: left;
    font-size: 26rpx;
    line-height: 36rpx;
    border-radius: 10rpx;
}

.evaluate_btn {
    border-radius: 10rpx;
    height: 76rpx;
    line-height: 76rpx;
    width: 696rpx;
    font-size: 28rpx;
    margin: 40rpx auto 60rpx;
    background: #f90;
    color: #fff;
}

.word_count,.evaluate_invite,.evaluate_success {
    width: 280rpx;
    height: 52rpx;
    line-height: 52rpx;
    background: rgba(0,0,0,.68);
    font-size: 26rpx;
    color: #fff;
    position: absolute;
    left: 50%;
    margin-left: -140rpx;
    top: 250rpx;
    border-radius: 10rpx;
}

.evaluate_pop {
    background: rgba(0,0,0,.68);
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
}

.evaluate_prompt {
    position: fixed;
    left: 50%;
    top: 50%;
    width: 560rpx;
    height: 294rpx;
    margin: -147rpx 0 0 -280rpx;
    background: #fff;
    z-index: 3;
    border-radius: 10rpx;
}

.prompt_box {
    height: 192rpx;
    line-height: 192rpx;
    border-bottom: 1rpx #d2d3d5 solid;
    font-size: 30rpx;
    display: block;
}

.prompt_btn view {
    display: inline-block;
    width: 50%;
    vertical-align: top;
    line-height: 101rpx;
    height: 101rpx;
    font-size: 32rpx;
    color: #f90;
    position: relative;
}

.prompt_btn view:first-child {
    color: #333;
}

.prompt_btn view:first-child:after {
    border-right: 1rpx #d2d3d5 solid;
    height: 101rpx;
    width: 1rpx;
    display: inline;
    overflow: hidden;
    content: '';
    position: absolute;
    right: 0;
    top: 0;
}

.evaluate_invite {
    top: 445rpx;
}

.evaluate_success {
    top: 50%;
    margin-top: -26rpx;
}