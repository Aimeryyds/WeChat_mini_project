.cc_video {
    width: 100%;
    height: 100%;
}

.ccH5PlayerBox {
    position: relative;
    width: 100%;
    height: 210px;
}

.ccVideo {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000000;
    display: block;
}

.ccPoster {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10;
}

.ccH5FadeOut {
    position: relative;
    height: 100%;
}

.ccPlayBtn,.ccPauseBtn {
    position: absolute;
    bottom: 10px;
    left: 10px;
    width: 28px;
    height: 28px;
}

.exitFullsBtn {
    background: #00a529;
}

.ccH5Progress {
    position: relative;
    top: 0;
    left: 0;
    height: 40px;
    background: #333333;
}

.ccH5ProgressBar {
    position: absolute;
    left: 58px;
    right: 58px;
    bottom: 19px;
}

.ccH5DragBtn {
    position: absolute;
    top: -14px;
    width: 30px;
    height: 30px;
}

.ccH5Progress text {
    position: absolute;
    color: #ffffff;
    font-size: 12px;
    line-height: 40px;
    width: 58px;
    text-align: center;
}

.ccH5Progress text.ccCur {
    left: 0;
}

.ccH5Progress text.ccDur {
    right: 0;
}

.btnBg {
    width: 100%;
    height: 100%;
    display: block;
}

.fullBtn {
    width: 28px;
    height: 28px;
    position: absolute;
    right: 10px;
    bottom: 10px;
}

.ccH5sp {
    width: 84px;
    height: 28px;
    position: absolute;
    right: 48px;
    bottom: 10px;
    background: rgba(34,34,34,0.5);
    border-radius: 100px;
    color: #ffffff;
    font-size: 14px;
    text-align: center;
    line-height: 28px;
}

.ccH5hd {
    width: 84px;
    height: 28px;
    position: absolute;
    right: 140px;
    bottom: 10px;
    background: rgba(34,34,34,0.5);
    border-radius: 100px;
    color: #ffffff;
    font-size: 14px;
    text-align: center;
    line-height: 28px;
}

.ccH5spul {
    background: rgba(34,34,34,0.50);
    border: 1px solid rgba(102,102,102,0.30);
    border-radius: 8px;
    width: 84px;
    color: #ffffff;
    text-align: center;
    font-size: 13px;
    position: absolute;
    right: 48px;
    bottom: 42px;
}

.ccH5spul cover-view {
    line-height: 30px;
}

.btnhover {
    color: #ff920a;
}

.ccH5hdul {
    background: rgba(34,34,34,0.50);
    border: 1px solid rgba(102,102,102,0.30);
    border-radius: 8px;
    width: 84px;
    color: #ffffff;
    text-align: center;
    font-size: 13px;
    position: absolute;
    right: 140px;
    bottom: 42px;
}

.ccH5hdul cover-view {
    line-height: 30px;
}

.authBox {
    background: #000000;
    color: #ffffff;
    text-align: center;
    line-height: 200px;
}