.page {
    width: 100%;
    height: 100%;
    background: #f3f4f5;
}

.orderDetail-page {
    width: 100%;
    height: 100%;
    padding: 30rpx 0 30rpx 0;
}

.orderDetail-top {
    margin: 0 30rpx;
    padding: 78rpx 0 60rpx 0;
    background: #fff;
    border-radius: 8px;
}

.orderDetail-top-title {
    margin: 0 auto;
    font-family: PingFangSC-Medium;
    font-size: 34rpx;
    color: #333;
    line-height: 34rpx;
    text-align: center;
}

.orderDetail-top-money {
    margin: 60rpx auto 0 auto;
    font-family: PingFangSC-Regular;
    font-size: 80rpx;
    color: red;
    text-align: center;
    line-height: 80rpx;
}

.orderDetail-top-status {
    margin: 29rpx auto 0 auto;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #666;
    text-align: center;
    line-height: 24rpx;
}

.orderDetail-top-statuspay {
    margin: 29rpx auto 0 auto;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #3dbcc6;
    text-align: center;
    line-height: 24rpx;
}

.orderDetail-top-statuspay image {
    width: 24rpx;
    height: 24rpx;
    margin: 0 10rpx 0 0;
    position: relative;
    top: 3rpx;
}

.cut-off-rule {
    z-index: 10;
}

.roundness-left,.roundness-right {
    width: 30rpx;
    height: 30rpx;
    margin: -15rpx 15rpx 0 15rpx;
    border-radius: 15rpx;
    background: #f7f7f7;
}

.roundness-left {
    float: left;
}

.roundness-right {
    float: right;
}

.line-middle {
    height: 1rpx;
    width: 631rpx;
    margin: 0 auto;
    border-bottom: 1rpx dashed #e2e2e2;
}

.orderDetail-content {
    margin: 0 30rpx;
    padding: 65rpx 0 92rpx 0;
    background: #fff;
    border-radius: 8px;
}

.orderDetail-content-item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-pack: justify;
    justify-content: space-between;
    margin: 0 32rpx 36rpx 32rpx;
    width: 626rpx;
}

.content-item-title {
    display: inline-block;
    vertical-align: top;
    min-width: 140rpx;
    line-height: 40rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #555;
    text-align: left;
}

.content-item-detail {
    display: inline-block;
    vertical-align: top;
    max-width: 402rpx;
    line-height: 40rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #999;
    text-align: right;
}