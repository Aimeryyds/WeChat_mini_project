.page {
    height: 100%;
    background: #fff;
}

.swiper-tab {
    width: 100%;
    text-align: center;
    line-height: 80rpx;
    background-color: #fff;
    position: fixed;
    top: 0;
    z-index: 10;
}

.swiper-tab-list {
    font-size: 28rpx;
    display: inline-block;
    width: 33%;
    color: #333;
    border-bottom: 0rpx;
    position: relative;
    z-index: 10;
}

.on {
    color: #3dbcc6;
}

.swiper-box {
    display: block;
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.swiper-box view {
    text-align: center;
}

.borderLine {
    width: 20%;
    margin: 0 auto;
}

.active {
    border-bottom: 4rpx solid #3dbcc6;
    color: #3dbcc6;
}

.aq,.ax,.pp {
    position: absolute;
    top: 88rpx;
    padding-bottom: 170rpx;
}

.aq_idx {
    width: 750rpx;
    height: 422rpx;
}

.wthd {
    width: 30rpx;
    height: 30rpx;
    margin-top: 12rpx;
}

.aq-part {
    padding: 30rpx 30rpx;
}

.aq-sm {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.sm-title {
    font-size: 36rpx;
    color: #333;
    margin-left: 20rpx;
    font-weight: 700;
}

.aq-detail {
    font-size: 28rpx;
    line-height: 40rpx;
    margin-top: 30rpx;
    color: #666;
    text-align: justify;
}

.aq_sm_img1 {
    width: 690rpx;
    height: 578rpx;
    margin: 50rpx 0;
}

.aq_sm_img2 {
    width: 690rpx;
