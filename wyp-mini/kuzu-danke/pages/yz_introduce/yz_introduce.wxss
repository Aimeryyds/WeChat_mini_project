}

.js_bottom {
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 130rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    box-shadow: 0 -5px 10px 0 rgba(51,51,51,.2);
    background: #fff;
}

