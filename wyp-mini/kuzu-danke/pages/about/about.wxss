.page {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
    font-size: 24rpx;
    color: #666;
}

.logo {
    width: 128rpx;
    height: 128rpx;
    margin-top: 100rpx;
    margin-bottom: 25rpx;
}

.title {
    font-size: 32rpx;
    margin-top: 40rpx 0 10rpx 0;
    font-size: 32rpx;
    color: #333;
}

.sub_title {
    color: #999;
    font-size: 28rpx;
    margin-top: 10rpx;
}

.desc {
    width: 620rpx;
    margin-top: 46rpx;
    padding-bottom: 46rpx;
    text-align: justify;
    color: #999;
    line-height: 54rpx;
    font-size: 28rpx;
}

.line {
    width: 100%;
    height: 20rpx;
    background: #f7f8f9;
}

.telephone,.wx,.share {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
    width: 620rpx;
    height: 96rpx;
    font-size: 28rpx;
    border-bottom: 1rpx solid #e4e8eb;
    color: #333;
}

.share image {
    width: 14rpx;
    height: 26rpx;
}

.share {
    position: relative;
    border: none;
}

.share-btn {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}

.footer {
    width: 100%;
    height: 124rpx;
    background: #f7f8f9;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
    color: #b5b5b5;
    font-size: 24rpx;
    line-height: 30rpx;
    padding-top: 110rpx;
}

.footer text:first-child {
    margin-bottom: 10rpx;
}