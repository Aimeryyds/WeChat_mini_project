page {
    background: #000;
    height: 100%;
}

.page video {
    width: 750rpx;
    height: 425rpx;
    padding-top: 300rpx;
}

.video1 image {
    width: 282rpx;
    height: 160rpx;
}

.video_xj {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    white-space: nowrap;
    margin-top: 200rpx;
}

.video1 {
    display: inline-block;
    color: #fff;
    margin-left: 30rpx;
    position: relative;
}

.video1 .text {
    position: relative;
    top: -60rpx;
    font-size: 28rpx;
    left: 25rpx;
}

.mask {
    position: absolute;
    left: 0rpx;
}

.active {
    width: 282rpx;
    height: 160rpx;
    background: #000;
    opacity: .7;
    position: absolute;
    top: 0rpx;
    border: 4rpx solid #3bb2bb;
    box-sizing: border-box;
}