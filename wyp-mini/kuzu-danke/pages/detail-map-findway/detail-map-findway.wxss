.map-tab {
    width: 100%;
    height: 100vh;
}

.map {
    width: 100%;
}

.tab {
    width: 100%;
    background: #fff;
    color: #666;
    height: 100px;
}

.tab-all {
    width: 80%;
    font-size: 26rpx;
    margin-left: 54rpx;
}

.tab-my {
    height: 98rpx;
    border-bottom: 2rpx solid #f0f0f0;
    line-height: 98rpx;
}

.tab-dist {
    line-height: 98rpx;
    height: 98rpx;
}

.circle {
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    display: inline-block;
    vertical-align: middle;
}

.tab-my .circle {
    background-color: #3dbcc6;
}

.tab-dist .circle {
    background-color: #f6644d;
}

input {
    display: inline-block;
    overflow: visible;
    margin-left: 20rpx;
    width: 560rpx;
}

.change image {
    width: 48rpx;
    height: 48rpx;
}

.change {
    position: absolute;
    right: 40rpx;
    top: 74rpx;
}

.way {
    width: 686rpx;
    height: 262rpx;
    position: absolute;
    bottom: 32rpx;
    left: 32rpx;
    background: #fff;
    border-radius: 16px;
}

.way-detail {
    height: 130rpx;
    border-bottom: 2rpx solid #f0f0f0;
    margin: 32rpx 0 10rpx 50rpx;
    width: 590rpx;
}

.detail-name {
    font-size: 36rpx;
    color: #3dbcc6;
}

.detail-info {
    font-size: 24rpx;
    margin-top: 28rpx;
    color: #999;
}

.way-waylist {
    height: 94rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    margin-left: 50rpx;
    color: #999;
    width: 590rpx;
}

.way-tab {
    width: 146rpx;
    height: 56rpx;
    text-align: center;
}

.way-img {
    height: 25rpx;
    width: 19rpx;
    display: inline-block;
    overflow: visible;
    margin: 2rpx 20rpx 2rpx 0rpx;
}

.way-name {
    font-size: 26rpx;
}

cover-view {
    overflow: visible;
}

.actives {
    width: 130rpx;
    height: 56rpx;
    background: #3dbcc6;
    border-radius: 100rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    color: #fff;
}

.way-info {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    width: 158rpx;
    height: 56rpx;
}