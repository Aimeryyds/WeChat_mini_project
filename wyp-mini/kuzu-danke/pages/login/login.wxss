page {
    background: #fff;
    height: 100vh;
    width: 100%;
    overflow: hidden;
}

.page {
    background: #fff;
    text-align: center;
    height: 100vh!important;
    width: 100%;
    overflow: hidden;
    position: relative;
}

.page_bg {
    width: 100%;
    height: 475rpx;
}

.login_title {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    line-height: 0rpx;
    position: relative;
    left: 12%;
    top: 60rpx;
}

.line {
    width: 180rpx;
    height: 1rpx;
    background: #d0e4e7;
}

.title_word {
    font-size: 30rpx;
    color: #c6d9db;
    margin: 0 20rpx;
}

.wx_login image {
    width: 600rpx;
    height: 124rpx;
}

.wx_login {
    width: 600rpx;
    height: 90rpx;
    background: #3dbcc6;
    border-radius: 100px;
    box-shadow: 0 7px 17px 0 rgba(73,201,205,.3);
    border: 1px solid #3dbcc6;
    margin: 0 auto;
    color: #fff;
    font-size: 36rpx;
    line-height: 90rpx;
    letter-spacing: 5rpx;
    margin-top: 60rpx;
}

.phone_login {
    width: 600rpx;
    height: 90rpx;
    background: #fff;
    border-radius: 100px;
    border: 1px solid #3dbcc6;
    margin: 0 auto;
    color: #3dbcc6;
    font-size: 32rpx;
    line-height: 90rpx;
    letter-spacing: 5rpx;
    margin-top: 30rpx;
}

.login_btn {
    position: relative;
    top: 60rpx;
}

.login-phone {
    height: 100%;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: #fff;
    width: 100%;
    text-align: left;
}