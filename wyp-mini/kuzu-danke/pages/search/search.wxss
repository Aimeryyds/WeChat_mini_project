.page {
    padding: 20rpx 30rpx;
}

.search_top {
    position: relative;
    width: 85%;
}

.search_top image {
    position: absolute;
    left: 40rpx;
    top: 16rpx;
    display: block;
    width: 30rpx;
    height: 28rpx;
    z-index: 3;
}

.search-inp {
    width: 85%;
    height: 64rpx;
    font-size: 24rpx;
    padding-left: 90rpx;
    border-radius: 50rpx;
    border: 1px solid #e5e5e5;
    background-color: #f6f7f8;
}

.search_top text {
    float: right;
    position: relative;
    left: 100rpx;
    font-size: 30rpx;
    color: #249fad;
    top: -50rpx;
}

.tryTag {
    margin-bottom: 35rpx;
    border-bottom: 1px solid #ebebeb;
    margin-top: 50rpx;
}

.tag-part {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    flex-wrap: wrap;
    -webkit-box-pack: start;
    justify-content: flex-start;
}

.subway_part {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    flex-wrap: wrap;
    -webkit-box-pack: start;
    justify-content: flex-start;
}

.tag-text {
    font-size: 30rpx;
    font-weight: 700;
    margin-bottom: 30rpx;
    display: block;
}

.actTag {
    border: 1rpx solid #3dbcc5;
    background: #3dbcc5;
    width: 129rpx;
    font-size: 24rpx;
    color: #fff;
    border-radius: 50rpx;
    padding: 10rpx 10rpx;
    margin-right: 20rpx;
    margin-bottom: 30rpx;
    text-align: center;
}

.btn-select {
    min-width: 128rpx;
    font-size: 24rpx;
    color: #666;
    border-radius: 5rpx;
    padding: 10rpx 10rpx;
    margin-right: 20rpx;
    margin-bottom: 30rpx;
    text-align: center;
    background: #f7f8f9;
}

.btn-select:active {
    background: #f2f2f2;
}

.subway_line {
    color: #999;
}

.subway_img {
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    top: 10rpx;
}

.search_more {
    width: 100%;
    height: 1334rpx;
    background: #fff;
    position: absolute;
    z-index: 20;
    left: 0rpx;
    top: 105rpx;
}

.suggest_part {
    width: 710rpx;
    height: 142rpx;
    border-bottom: 1px solid #e4e8eb;
    margin-left: 35rpx;
    color: #151515;
    font-size: 28rpx;
    padding-top: 12rpx;
}

.suggest_img {
    width: 28rpx;
    height: 28rpx;
    float: left;
    margin-top: 35rpx;
    margin-left: 10rpx;
}

.suggest_word_local {
    margin-top: 28rpx;
    margin-left: 60rpx;
}

.suggest_local {
    margin-left: 60rpx;
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #999;
}

.suggest_suit {
    float: right;
    color: #999;
    font-size: 24rpx;
    margin-top: -60rpx;
    margin-right: 35rpx;
}