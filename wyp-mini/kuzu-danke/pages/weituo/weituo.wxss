.page {
    font-size: 28rpx;
    background: #fff;
}

.wt-text {
    width: 150rpx;
}

.wt-model {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    height: 96rpx;
    line-height: 96rpx;
    border-bottom: 1px solid #e4e8eb;
    margin-left: 30rpx;
    position: relative;
}

.arr-img {
    width: 20rpx;
    height: 35rpx;
    position: absolute;
    top: 35rpx;
    right: 33rpx;
}

.wt-model input {
    margin-top: 8rpx;
    height: 80rpx;
    width: 300rpx;
}

button::after {
    border: none;
}

button[disabled] {
    background: #fff!important;
    color: #50d0d9!important;
}

button {
    background: #fff;
    width: 180rpx;
    height: 52rpx;
    border: 1px solid #50d0d9;
    border-radius: 100rpx;
    font-size: 24rpx;
    color: #50d0d9;
    line-height: 52rpx;
    margin-top: 20rpx;
}

.confirm {
    text-align: center;
    width: 90%;
    background: #3dbcc6;
    height: 88rpx;
    color: #fff;
    line-height: 80rpx;
    border-radius: 10rpx;
    margin: 0 auto;
    margin-top: 60rpx;
    font-size: 32rpx;
}

.picker_class {
    width: 600rpx;
    padding-left: 10rpx;
}

.err-info {
    height: 40rpx;
    font-size: 24rpx;
    color: #f98d7d;
    margin-top: 10rpx;
    margin-left: 30rpx;
}

.hidden {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.4);
    z-index: 11;
}

.yzm-img {
    width: 600rpx;
    height: 600rpx;
    background: #fff;
    position: absolute;
    z-index: 6;
    top: 50%;
    left: 50%;
    margin-top: -40%;
    margin-left: -300rpx;
    border-radius: 10rpx;
    text-align: center;
}

.yzm-title {
    font-size: 34rpx;
    color: #666;
    padding-top: 60rpx;
}

.inp_img {
    border: 1px solid #ebebeb;
    width: 345rpx;
    height: 85rpx;
    margin: 0 auto;
    margin-top: 36rpx;
}

.yzm-qd {
    width: 520rpx;
    height: 90rpx;
    line-height: 90rpx;
    margin: 0 auto;
    border-radius: 100rpx;
    background: #d8dbdf;
    color: #fff;
    font-size: 34rpx;
    margin-top: 62rpx;
}

.yzm-img image {
    width: 375rpx;
    height: 125rpx;
    margin-top: 45rpx;
}