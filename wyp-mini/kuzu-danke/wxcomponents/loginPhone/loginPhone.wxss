page {
    background: #fff;
    height: 100%;
}

.page {
    height: 100%;
    padding: 0 30rpx;
}

.title_style {
    font-size: 36rpx;
    font-weight: bold;
    color: #333333;
    padding-top: 25px;
    padding-bottom: 50px;
}

.inputstyle {
    border-bottom: 1px solid #F7F8F9;
    height: 100rpx;
}

.inpClass {
    font-size: 30rpx;
    color: #ccc;
}

.yzm {
    font-size: 26rpx;
    color: #3DBCC6;
    float: right;
    margin-top: -87rpx;
    background: #fff;
    position: relative;
    z-index: 10;
}

.login {
    background: #9EDDE2;
    border-radius: 100px;
    width: 690rpx;
    height: 90rpx;
    color: #fff;
    font-size: 34rpx;
    line-height: 90rpx;
    text-align: center;
    letter-spacing: 5rpx;
    margin-top: 70rpx;
}

button::after {
    border: none;
}

.hidden {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    left: 0;
    background: rgba(0,0,0,0.4);
    z-index: 11;
}

.yzm-img {
    width: 600rpx;
    height: 600rpx;
    background: #fff;
    position: absolute;
    z-index: 6;
    top: 50%;
    left: 50%;
    margin-top: -40%;
    margin-left: -300rpx;
    border-radius: 10rpx;
    text-align: center;
}

.yzm-title {
    font-size: 34rpx;
    color: #666;
    padding-top: 60rpx;
}

.inp_img {
    border: 1px solid #ebebeb;
    width: 345rpx;
    height: 85rpx;
    margin: 0 auto;
    margin-top: 36rpx;
}

.inpYzm {
    font-size: 36rpx;
    color: #999;
}

.yzmImage {
    float: right;
    position: relative;
    top: -112rpx;
    left: -55rpx;
}

.yzmImage view {
    font-size: 22rpx;
    color: #3dbcc6;
}

.yzm-img image {
    width: 375rpx;
    height: 125rpx;
    margin-top: 45rpx;
}

.yzm-qd {
    width: 520rpx;
    height: 90rpx;
    line-height: 90rpx;
    margin: 0 auto;
    border-radius: 100rpx;
    background: #D8DBDF;
    color: #fff;
    font-size: 34rpx;
    margin-top: 62rpx;
}

.erryzmText {
    font-size: 26rpx;
    margin-top: 10rpx;
    margin-left: 60rpx;
    color: #e60e0e;
    width: 300rpx;
    text-align: left;
}

.err-info {
    font-size: 28rpx;
    color: #ef0d18;
    text-align: center;
    position: relative;
    top: 35rpx;
    left: 0rpx;
}

.clause {
    font-size: 24rpx;
    color: #999;
    text-align: center;
    margin-top: 50rpx;
}

.clause text {
    color: #3DBCC6;
}

.close {
    width: 72rpx;
    height: 72rpx;
    position: absolute;
    bottom: 150rpx;
    left: calc(50% - 24rpx);
}