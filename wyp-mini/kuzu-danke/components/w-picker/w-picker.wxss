.w-picker {
    position: relative;
    z-index: 11000;
}

.w-picker .mask {
    position: fixed;
    z-index: 11000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,.6);
    visibility: hidden;
    opacity: 0;
    transition: all .3s ease;
}

.w-picker .mask.show {
    visibility: visible;
    opacity: 1;
}

.w-picker .w-picker-cnt {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    transition: all .3s ease;
    transform: translateY(100%);
    z-index: 11000;
}

.w-picker .w-picker-cnt.show {
    transform: translateY(0);
}

.w-picker .w-picker-hd {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    padding: 0 30rpx;
    height: 88rpx;
    background-color: #fff;
    position: relative;
    text-align: center;
    font-size: 32rpx;
    -webkit-box-pack: justify;
    justify-content: space-between;
    border-radius: 24rpx 24rpx 0 0;
}

.w-picker .w-picker-hd .w-picker-btn {
    font-size: 30rpx;
}

.w-picker .w-picker-hd:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #e5e5e5;
    color: #e5e5e5;
    transform-origin: 0 100%;
    transform: scaleY(.5);
}

.w-picker .w-picker-item {
    text-align: center;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 30rpx;
}

.w-picker .w-picker-view {
    width: 100%;
    height: 476rpx;
    overflow: hidden;
    background-color: #fff;
    z-index: 11000;
}

.w-picker picker-view {
    height: 100%;
}