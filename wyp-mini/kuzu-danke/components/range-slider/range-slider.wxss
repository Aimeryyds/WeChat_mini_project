.range-slider {
    position: relative;
}

.range-bar {
    position: absolute;
}

.range-bar {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    border-radius: 10000rpx;
}

.range-bar-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 10000rpx;
}

.range-bar-progress {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: #8a2be2;
}

.block {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: #fff;
    border-radius: 50%;
    box-shadow: 0rpx 0rpx 6rpx #ccc;
}