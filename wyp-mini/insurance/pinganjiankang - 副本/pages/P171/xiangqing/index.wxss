page {
    font-size: 26rpx;
    background: #f4f2f3;
}

.container {
    width: 100%;
    box-sizing: border-box;
}

.btm {
    position: relative;
    width: 100%;
    height: 100rpx;
    margin-top: 20rpx;
    background: #f4f2f3;
    box-sizing: border-box;
}

image {
    width: 100%;
    display: block;
}

.btm view {
    position: absolute;
    width: 28%;
    height: 70rpx;
    line-height: 70rpx;
    background: #ff7f11;
    color: #fff;
    font-size: 25rpx;
    text-align: center;
}

.btm view:nth-child(1) {
    left: 40rpx;
}

.btm view:nth-child(2) {
    left: 270rpx;
}

.btm view:nth-child(3) {
    left: 500rpx;
}