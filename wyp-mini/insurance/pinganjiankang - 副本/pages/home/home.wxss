page {
    background: #efefef;
}

.container {
    padding: 0;
}

.userinfo {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 59rpx 0;
    align-items: center;
    width: 100%;
    background: #ffffff;
    margin-bottom: 14px;
}

.userinfo-avatar {
    border-radius: 50%;
    width: 60px;
    height: 60px;
    margin-bottom: 58rpx;
}

.userinfo_nickname {
    color: #000;
    padding-bottom: 5px;
    width: 100%;
    text-indent: 25px;
    font-size: 15px;
}

.home_list {
    position: relative;
    background: #ffffff;
    width: 100%;
    padding: 10px 0;
    border-bottom: 1px solid #e0e0e0;
}

.home_list image {
    position: absolute;
    right: 8px;
    margin-top: 3px;
    width: 27px;
    height: 27px;
    vertical-align: middle;
    padding-left: 10px;
    padding-right: 10px;
}

.home_list text {
    vertical-align: middle;
    font-size: 15px;
}

.home_list .arrow_right {
    height: 22px;
    width: 22px;
}

.tooltip-box {
    position: fixed;
    top: 0;
    right: 0;
    z-index: 999;
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
    flex-direction: column;
    width: 600rpx;
}

.arrow {
    width: 0;
    height: 0;
    padding: 0;
    margin: 0;
    margin-right: 120rpx;
    border-width: 20rpx;
    border-style: solid;
    border-color: transparent transparent #f60 transparent;
}

.tooltip {
    background-color: #f60;
    box-shadow: 0 10rpx 20rpx -10rpx #f60;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 60rpx;
    padding: 0 20rpx;
    margin-right: 40rpx;
}

.tooltip>text {
    color: #FFF;
    font-size: 28rpx;
    font-weight: 400;
}

.box-hide {
    display: none;
}