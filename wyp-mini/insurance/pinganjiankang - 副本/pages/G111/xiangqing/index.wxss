page {
    font-size: 26rpx;
}

.container {
    position: relative;
    width: 100%;
    box-sizing: border-box;
}

.container .btm {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
}

.container image {
    width: 100%;
}

.container .btm view {
    position: absolute;
    width: 28%;
    height: 70rpx;
    line-height: 70rpx;
    bottom: 50rpx;
    background: #ff7f11;
    color: #fff;
    font-size: 25rpx;
    text-align: center;
}

.container .btm view:nth-child(1) {
    left: 40rpx;
}

.container .btm view:nth-child(2) {
    left: 270rpx;
}

.container .btm view:nth-child(3) {
    left: 500rpx;
}