page {
    background: #f6f5f1;
}

.swiper-tab {
    width: 100%;
    border-bottom: 2rpx solid #dcdcdc;
    text-align: center;
    line-height: 90rpx;
    background: #fff;
}

.swiper-tab-list {
    display: inline-block;
    width: 40%;
    color: #333333;
}

.on {
    color: #f60;
    border-bottom: 5rpx solid #f60;
}

.swiper-box {
    display: block;
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.tab-list {
    padding: 25rpx 20rpx 0rpx;
    background: #ffffff;
    margin-bottom: 20rpx;
}

.tab-list-product {
    width: 100%;
    border-bottom: 2rpx solid #dcdcdc;
}

.list-img {
    float: left;
    width: 160rpx;
    height: 160rpx;
    border-radius: 5rpx;
    overflow: hidden;
    border-radius: 16rpx;
}

.t-list-text {
    padding-left: 20rpx;
    display: flex;
    flex-direction: column;
}

.t-product-text {
    display: block;
    text-align: left;
    line-height: 60rpx;
    color: #333333;
    margin-bottom: 16rpx;
}

.t-product-detail {
    display: block;
    text-align: left;
    line-height: 60rpx;
    color: #999999;
    font-size: 26rpx;
}

.t-product-state {
    font-size: 28rpx;
    color: #f60;
    text-align: center;
    border: 1px solid #f60;
    position: absolute;
    right: 20rpx;
    padding: 4rpx 8rpx;
    border-radius: 8rpx;
}

.t-product-price {
    float: left;
    color: #333333;
    line-height: 60rpx;
}

.t-product-pay {
    float: right;
    color: #ed6c57;
    line-height: 60rpx;
}

.t-pay-state {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
}

.t-pay-cancel,.t-pay-confirm {
    float: right;
    width: 200rpx;
    text-align: right;
}

.t-pay-cancel {
    color: #999999;
}

.t-pay-confirm {
    color: #2ea3e6;
}

.no-order {
    margin-top: 40rpx;
    text-align: center;
}

.price {
    color: #333;
}

.to_be_paid {
    color: #ed6c57;
}

.paying {
    color: #ed6c57;
}

.cancel {
    color: #77C12B;
}

.fail {
    color: #77C12B;
}

.overdue {
    color: #77C12B;
}

.has_paid {
    color: #2ea3e6;
}

.unbind {
    display: block;
    margin: 20px 0;
}