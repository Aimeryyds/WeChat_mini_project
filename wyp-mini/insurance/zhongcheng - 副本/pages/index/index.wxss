.userinfo {
    height: 836rpx;
    width: 100%;
    background-color: #fea428;
}

.b-img {
    top: 100rpx;
    width: 100%;
    background-size: 100% 100%;
    position: relative;
}

.swiper-item {
    display: block;
    height: 150px;
}

.navigator-view {
    margin-top: 10rpx;
    margin-left: auto;
    margin-right: auto;
    width: 60%;
}

.banner {
    width: 100%;
    margin-bottom: 20rpx;
}

.banner-swiper {
    width: 100%;
    margin: 0 auto;
}

.banner-swiper .swiper-inner {
    display: block;
    height: 100%;
    width: 95%;
    margin: 0 auto;
}

.banner-swiper .view-image {
    float: left;
    border-radius: 15rpx;
    height: 180rpx;
    width: 180rpx;
    margin-left: 30rpx;
    margin-top: 10rpx;
    background: red;
}

.banner-swiper image {
    z-index: 2;
    border-radius: 15rpx;
    height: 160rpx;
    width: 160rpx;
    margin: 10rpx;
}

.banner-swiper swiper-item {
    position: relative;
    z-index: 1;
}

.banner-swiper .caption {
    background-color: #fff;
    border-radius: 15rpx;
    padding: 20rpx;
    height: 295rpx;
    margin-top: 40rpx;
    box-shadow: 0 15rpx 15rpx rgba(220,226,224,0.8);
}

.banner-swiper .caption-btn {
    background-color: #fea428;
    height: 60rpx;
    color: #fff;
    line-height: 60rpx;
    display: inline-block;
    width: 172rpx;
    text-align: center;
    font-size: 28rpx;
}

.banner-swiper .caption .txt {
    margin-right: 15rpx;
    padding-right: 30rpx;
    padding-top: 15rpx;
    color: #666;
    float: right;
    text-align: right;
}

.banner-swiper .caption .p1 {
    margin-bottom: 18rpx;
    font-size: 34rpx;
    color: #333;
    font-weight: bold;
    line-height: normal;
}

.banner-swiper .caption .p2 {
    line-height: 1.8;
    margin-bottom: 35rpx;
    min-height: 60rpx;
    font-size: 24rpx;
}

.banner-swiper .caption .content {
    width: 275rpx;
    height: 120rpx;
    text-align: justify;
    text-align-last: left;
}

.banner-swiper .wx-swiper-dot-active {
    background: #fea428;
    border-radius: 14rpx;
    width: 14rpx;
}

.index_item {
    padding-left: 0;
    padding-right: 0;
    border-radius: 0;
    background: none;
    background-color: none;
}

.index_item::after {
    border: none;
}