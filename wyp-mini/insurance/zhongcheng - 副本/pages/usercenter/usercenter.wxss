.header {
    position: relative;
    width: 100%;
    background-color: #fff;
    text-align: center;
    display: flex;
    justify-content: center;
    flex-direction: column;
    padding: 50rpx 0;
}

.header-logined {
    background-color: #fea428;
}

.header-logined {
    color: #fff;
}

.header .avator {
    overflow: hidden;
    padding: 0 0 10px;
}

.header .avator .inner {
    height: 128rpx;
    width: 128rpx;
    border-radius: 50%;
    border: 8rpx solid #fff;
    background-color: #ccc;
    display: inline-block;
    overflow: hidden;
}

.header .avator image {
    height: 128rpx;
    width: 128rpx;
}

.app-body {
    width: 100%;
    margin-bottom: 30rpx;
}

.app-body .item {
    position: relative;
    width: 100%;
    background: #fff;
    margin-top: 10rpx;
    padding-left: 0;
    padding-right: 0;
    border-radius: 0;
}

.app-body .item::after {
    border: none;
}

.item-cell {
    position: relative;
    width: 100%;
    height: 90rpx;
    border-bottom: 1rpx solid #e6e6e6;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    z-index: 10;
}

.item-cell view {
    line-height: 100%;
    font-size: 32rpx;
}

.item-cell .item-icon {
    width: 45rpx;
    margin: 0 15rpx;
    text-align: center;
}

.item-cell:after {
    position: absolute;
    content: ' ';
    right: 40rpx;
    top: 38rpx;
    border: 1rpx solid #464646;
    width: 20rpx;
    height: 20rpx;
    border-left: 0;
    border-bottom: 0;
    transform: rotate(45deg);
}

.bangding {
    position: absolute;
    right: 25rpx;
    bottom: 25rpx;
    padding-left: 8rpx;
    padding-right: 8rpx;
    padding-top: 4rpx;
    padding-bottom: 4rpx;
    color: #fff;
    border: 2rpx solid #fff;
    border-radius: 4rpx;
    line-height: normal;
    font-size: 28rpx;
    z-index: 10;
    background-color: #fea428;
}

.bangding::after {
    border: none;
}

.bangding-hover {
    background-color: #eeeeee;
    color: #fea428;
}

.icon-img {
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
}