<view class="contain-view">
    <camera binderror="error" bindstop="cameraStop" class="camera-view" devicePosition="front" flash="off">
        <cover-view class="contain">
            <cover-view class="face-contain">
                <cover-image animation="{{animation}}" class="animation-element" src="../../images/face/hx.png" style="width:{{width}}"></cover-image>
            </cover-view>
        </cover-view>
        <cover-image class="sm1" src="../../images/face/sm1.png"></cover-image>
        <cover-image class="sm2" src="../../images/face/sm2.png"></cover-image>
        <cover-image class="sm3" src="../../images/face/sm3.png"></cover-image>
        <cover-image class="sm4" src="../../images/face/sm4.png"></cover-image>
        <cover-view class="sm-top"></cover-view>
        <cover-view class="sm-left"></cover-view>
        <cover-view class="sm-right"></cover-view>
        <cover-view class="sm-bottom"></cover-view>
    </camera>
</view>
