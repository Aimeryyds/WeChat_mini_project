<view class="login-container">
    <view class="login">
        <view class="login-title">实名认证</view>
        <view class="login-banner">
            <image class="banner-image" src="/images/face.png"></image>
        </view>
        <view class="cu-form-group" style="border: 0px;border-bottom:1px solid #cecece;margin-top: 40rpx;">
            <input bindinput="getInputValue" class="title" id="userName" placeholder="请输入姓名"></input>
        </view>
        <view class="cu-form-group" style="border: 0px;border-bottom:1px solid #cecece;margin-top: 40rpx;">
            <input bindinput="getInputValue" class="title" id="cardId" maxlength="18" placeholder="请输入身份证号"></input>
        </view>
        <button catchtap="perfectInfo" class="cu-btn block bg-blue margin-tb-sm lg btn" style="margin-top: 80rpx;">提交认证</button>
    </view>
</view>
