page {
    background-color: #fff;
    font-size: 30rpx;
}

.home-container {
    background-color: #fff;
    width: 100%;
}

.header {
    width: 100%;
    height: 360rpx;
    background-color: #fff;
}

.gradients-view {
    background-color: #FFBB00;
    border-bottom-right-radius: 80rpx;
    border-bottom-left-radius: 80rpx;
    height: 200rpx;
}

.top-container {
    width: 92%;
    height: 100px;
    margin: 0 auto;
    background-color: #FFF;
    border-radius: 8px;
    margin-top: -100rpx;
}

.menus {
    width: 92%;
    height: 150rpx;
    margin: 0 auto;
    background-color: #fff;
    opacity: 0.8;
}

.menu-list {
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
}

.menu {
    width: 25%;
    height: 65rpx;
    text-align: center;
}

.menu image {
    width: 50rpx;
    height: 50rpx;
}

.menu-name {
    font-size: 25rpx;
}

.home-content {
    width: 100%;
    height: 100%;
    background-color: #fff;
}

.content-title {
    width: 90%;
    height: 50rpx;
    line-height: 50rpx;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    font-size: 25rpx;
    background-color: #fff;
}

.title {
    width: 85%;
    font-weight: bold;
    font-size: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.more {
    width: 15%;
    text-align: right;
    height: 80rpx;
    line-height: 80rpx;
}

.more-btn {
    border: 1px solid #DEDEDE;
    text-align: center;
    width: 80rpx;
    height: 40rpx;
    line-height: 40rpx;
    margin-top: 18rpx;
    border-radius: 5rpx;
}

.tower-swiper .tower-item {
    transform: scale(calc(0.5 + var(--index) / 10));
    margin-left: calc(var(--left) * 100rpx - 150rpx);
    z-index: var(--index);
}

.advimg {
    height: 140rpx;
    width: 98%;
    display: flex;
    justify-content: center;
    align-items: center;
}