page {
    background-color: #EDEDED;
}

.my-container {
    background-color: #EDEDED;
    font-size: 30rpx;
    height: auto;
}

.gradients-view {
    background: linear-gradient(45deg,#0081ff,#1cbbb4);
    border-bottom-right-radius: 40rpx;
    border-bottom-left-radius: 40rpx;
    height: 250rpx;
}

.edit-view {
    display: flex;
    flex-direction: row;
    height: 40rpx;
    line-height: 40rpx;
    width: 130rpx;
    position: relative;
    top: 30rpx;
    left: 80%;
}

.margin-top-minus {
    margin-top: -150rpx;
}

.cu-list.menu-avatar>.cu-item {
    position: relative;
    display: flex;
    padding-right: 10rpx;
    height: 160rpx;
    background-color: var(--white);
    justify-content: flex-end;
    align-items: center;
}

.bottom-message {
    display: flex;
    flex-direction: column;
    text-align: center;
    width: 33%;
    line-height: 2;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    clip-path: circle(50rpx at center);
}

.bottom_footer {
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 100%;
    transform: translate(-50%,-1%);
}

.bottom_button {
    width: 98%;
}

.scrollPage {
    height: auto;
}