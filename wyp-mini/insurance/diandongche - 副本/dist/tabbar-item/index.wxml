<view bindtap="onTap" class="wux-class {{classes.wrap}}" style="width: {{width}}">
    <view class="{{classes.icon}}">
        <slot name="icon-off" wx:if="{{current}}"></slot>
        <slot name="icon-on" wx:else></slot>
    </view>
    <view class="{{classes.title}}">
        <text wx:if="{{title}}">{{title}}</text>
        <slot wx:else></slot>
    </view>
</view>
