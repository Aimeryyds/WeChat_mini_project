.containner {
    height: 100vh;
    overflow: hidden;
}

.content {
    width: 100%;
    position: relative;
}

.man-bg,.pg-bg,.pot-bg {
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    overflow: hidden;
}

.man-bg image,.pg-bg image {
    width: 100%;
    height: 100%;
}

.pg-bg,.pot-bg {
    top: 0;
}

.pot-bg {
    top: 35rpx;
    left: 35rpx;
}

.logo {
    margin-top: 35rpx;
    margin-left: 35rpx;
}

.logo image {
    width: 80rpx;
    height: 56rpx;
}

.title {
    text-align: center;
}

.title image {
    width: 640rpx;
    height: 333rpx;
}