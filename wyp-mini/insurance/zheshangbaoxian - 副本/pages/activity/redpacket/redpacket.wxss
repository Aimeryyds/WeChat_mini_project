.red-pack-result {
    min-height: calc(100vh);
    background: url('https://weixin.zsins.com/api/cshop-server/cshop-server/images/activity/redpack_result_bg.jpg')no-repeat;
    background-size: 100%;
}

.red-pack-result .title {
    padding-top: 113rpx;
    padding-bottom: 13rpx;
    margin: 0 auto;
    color: #fff;
    line-height: 83rpx;
    text-align: center;
    font-size: 20px;
}

.red-pack-result .count-down {
    display: flex;
    color: #f24832;
    justify-content: center;
    line-height: 78rpx;
}

.red-pack-result .count-down text {
    color: #f24832;
    margin: 0 2rpx;
}

.red-pack-result .count-down .item {
    color: #fff;
    text-align: center;
    background: #f24832;
    width: 40rpx;
    display: inline-block;
}

.red-pack-result .van-count-down {
    color: #f24832;
    display: flex;
    align-items: center;
}

.red-pack-result .result {
    width: 50%;
    margin: 0 auto;
    color: #e4342c;
    text-align: center;
    padding-top: 55rpx;
}

.red-pack-result .result-title {
    font-size: 29rpx;
}

.red-pack-result .result-desc {
    font-size: 80rpx;
    font-weight: bold;
}

.click {
    padding-top: 105rpx;
}

.click .btn {
    width: 600rpx;
    height: 156rpx;
    margin: 0 auto;
    background: url('https://weixin.zsins.com/api/cshop-server/cshop-server/images/activity/redpack_result_btn.png') no-repeat;
    background-size: 100% 100%;
    text-align: center;
}

.click .btn span {
    color: #63130a;
    font-size: 40rpx;
    padding-top: 41rpx;
    font-weight: bold;
    display: flex;
    justify-content: center;
    align-items: center;
}

.click .tips {
    color: #fff;
    text-align: center;
    font-size: 10px;
}

.share {
    padding-top: 33%;
    padding-bottom: 50rpx;
    width: 90%;
    margin: 0 auto;
}

.share .tab-content {
    min-height: 50px;
    background: #fff;
}

.share .share-scan {
    margin: 0 auto;
    width: 35%;
    height: 150px;
}

.share .tab {
    display: flex;
    justify-content: space-between;
}

.share .tab span {
    width: 48%;
    line-height: 50px;
    background: #fcf4ed;
    border-radius: 8px 8px 0 0;
    text-align: center;
}

.share .tab .active {
    background: #fff;
}

.block {
    width: 500rpx;
    background-color: #fff;
    position: relative;
}

.block .img {
    display: block;
    width: 100%;
    margin: 0;
    padding: 0;
}

.share-canvas {
    width: 100%;
    height: 500px;
    background: transparent;
}

.wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
}

.sharePop-ft {
    display: flex;
    align-items: center;
    justify-content: center;
}

.sharePop-ft view {
    width: 50%;
    background: #f5c346;
    text-align: center;
    color: #fff;
    height: 50px;
}

.sharePop-ft view p {
    width: 100%;
    line-height: 25px;
}

.sharePop-ft view.bc {
    background: red;
}