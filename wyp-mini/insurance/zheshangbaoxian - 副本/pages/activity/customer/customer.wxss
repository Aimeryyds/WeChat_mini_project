.custormer {
    min-height: 100%;
    background: #fed57f;
}

.custormer-buttom,.openauth {
    display: block;
    position: absolute;
    top: 530rpx;
    left: 50%;
    width: 630rpx;
    height: 100rpx;
    z-index: 50;
    transform: translateX(-50%);
    opacity: 0;
}

.popup {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 10;
    background: rgba(255,255,255,0.5);
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

.popup-content {
    padding: 10rpx;
    width: 500rpx;
    background: #fff;
    text-align: center;
}

.popup-footer {
    text-align: center;
}