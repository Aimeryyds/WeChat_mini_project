    position: relative;
}

.select_topic .i {
    display: inline-block;
    vertical-align: top;
    height: 36rpx;
    width: 36rpx;
    margin: 32rpx 20rpx 32rpx 0rpx;
}

.select_topic .t {
    display: inline-block;
    vertical-align: top;
    height: 100rpx;
