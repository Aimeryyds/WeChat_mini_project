    text-align: center;
    font-weight: 600;
    font-size: 28rpx;
    text-shadow: 0rpx 2rpx 0rpx rgba(0,0,0,0.5);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.toptabitem.active .t {
    font-size: 32rpx;
