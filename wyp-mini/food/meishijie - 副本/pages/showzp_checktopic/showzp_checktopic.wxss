    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 600rpx;
}

.select_topic .tip {
    position: absolute;
    right: 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 24rpx;
