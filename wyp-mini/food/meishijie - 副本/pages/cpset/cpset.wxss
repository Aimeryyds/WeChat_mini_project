.cs_title {
    font-size: 40rpx;
    font-weight: 600;
    color: #333;
    line-height: 56rpx;
    margin: 40rpx 30rpx 40rpx;
}

.cs_authorw {
    height: 80rpx;
    margin: 40rpx 30rpx 40rpx;
    position: relative;
}

.a_avatar {
    height: 80rpx;
    width: 80rpx;
    display: inline-block;
    vertical-align: top;
    border-radius: 40rpx;
    overflow: hidden;
    margin-right: 20rpx;
}

.a_name {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
    line-height: 80rpx;
    display: inline-block;
    vertical-align: top;
    max-width: 600rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.cs_des {
    font-size: 32rpx;
    color: #333;
    font-weight: 300;
    line-height: 48rpx;
    margin: 40rpx 30rpx 40rpx;
}

.line {
    height: 10rpx;
    background: #f5f5f5;
    width: 100%;
}

.wf_title {
    font-size: 36rpx;
    font-weight: 600;
    line-height: 56rpx;
    margin: 40rpx 30rpx 30rpx;
}

.wf_wrap {
    margin: 0rpx 20rpx;
    font-size: 0px;
}

.wf_left {
    width: 50%;
    display: inline-block;
    vertical-align: top;
    box-sizing: border-box;
}

.wf_right {
    width: 50%;
    display: inline-block;
    vertical-align: top;
    box-sizing: border-box;
}

.wf-item {
    height: auto;
    overflow: hidden;
    padding: 0rpx 10rpx 32rpx;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    width: 100%;
    box-sizing: border-box;
}

.wf-itemw {
    box-shadow: 0px 4rpx 12rpx rgba(0,0,0,0.1);
    border-radius: 14rpx;
    overflow: hidden;
    display: block;
}

.wf-item .imgw {
    position: relative;
    overflow: hidden;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    background-color: #f5f5f5;
}

.wf-item .imgw .vicon {
    display: none;
    height: 40rpx;
    width: 40rpx;
    background: url(https://s1.st.meishij.net/p2/20181206/20181206143142_460.png) 0rpx 0rpx no-repeat;
    background-size: 40rpx 80rpx;
    right: 20rpx;
    top: 20rpx;
    position: absolute;
}

.wf-type-2 .imgw .vicon {
    display: block;
}

.wf-type-7 .imgw .vicon {
    display: block;
}

.wf-type-8 .imgw .vicon {
    display: block;
}

.wf-item .infow {
    background: #fff;
    padding-bottom: 24rpx;
}

.wf-item .infow .title {
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
    line-height: 44rpx;
    padding: 20rpx 24rpx 0rpx 24rpx;
    position: relative;
}

.wf-item .infow .descw {
    max-height: 40rpx;
    margin: 0rpx 24rpx 0rpx 24rpx;
    position: relative;
    font-size: 0rpx;
}

.wf-item .infow .desc {
    display: inline-block;
    vertical-align: top;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    position: relative;
}

.wf-item .infow .desc .p {
    position: relative;
    z-index: 10;
    font-size: 20rpx;
    line-height: 40rpx;
    font-weight: 400;
    color: #666;
}

.wf-item .infow .descw .desc .p:empty {
    display: none;
}

.wf-item .infow .desc .bgc {
    position: absolute;
    bottom: 10rpx;
    height: 10rpx;
    background: #fde8e6;
    left: 0rpx;
    display: block;
    width: 100%;
}

.wf-item .infow .userw {
    height: 36rpx;
    margin: 24rpx 24rpx 0rpx;
    position: relative;
}

.wf-item .infow .userw .avatar {
    font-size: 0rpx;
}

.wf-item .infow .userw .avatarw {
    height: 36rpx;
    width: 36rpx;
    border-radius: 18rpx;
    overflow: hidden;
    box-shadow: 0rpx 2rpx 6rpx rgba(0,0,0,0.1);
    display: inline-block;
    vertical-align: top;
}

.wf-item .infow .userw .avatarw image {
    display: block;
    height: 36rpx;
    width: 36rpx;
}

.wf-item .infow .userw .avatar .n {
    display: inline-block;
    vertical-align: top;
    height: 36rpx;
    line-height: 36rpx;
    font-size: 18rpx;
    color: #666;
    padding-left: 10rpx;
    max-width: 45%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.wf-item .infow .userw .view {
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    height: 36rpx;
    padding-left: 30rpx;
    line-height: 36rpx;
    color: #666;
    font-size: 18rpx;
}

.wf-item .infow .userw .view .i {
    position: absolute;
    left: 0rpx;
    top: 8rpx;
    height: 20rpx;
    width: 26rpx;
    background: url(https://s1.st.meishij.net/p2/20181206/20181206143142_460.png) -8rpx -40rpx no-repeat;
    background-size: 40rpx 80rpx;
}

.wf-item .infow .yyw {
    background: #fff2f2;
    border-radius: 4rpx;
    position: relative;
    margin: 30rpx 24rpx 0rpx;
    padding: 4rpx 12rpx 4rpx 12rpx;
    box-sizing: border-box;
}

.wf-item .infow .yyw .t {
    font-size: 16rpx;
    line-height: 24rpx;
    height: 24rpx;
    border-radius: 4rpx;
    color: #fff;
    position: absolute;
    left: 0rpx;
    top: -20rpx;
    padding: 0px 6rpx;
    font-weight: 600;
    background: #ff8d8d;
    border-bottom-left-radius: 0rpx;
}

.wf-item .infow .yyw .t:after {
    content: " ";
    height: 0px;
    width: 0px;
    border-top: 2rpx solid #ff8d8d;
    border-left: 2rpx solid #ff8d8d;
    border-right: 2rpx solid transparent;
    border-bottom: 2rpx solid transparent;
    position: absolute;
    left: 0rpx;
    top: 24rpx;
    overflow: hidden;
}

.wf-item .infow .yyw .des {
    font-size: 22rpx;
    color: #ff8d8d;
    line-height: 28rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.bottombar {
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    height: 81rpx;
    width: 100%;
    border-top: 1rpx solid rgba(0,0,0,0.05);
    background: #fff;
    text-align: center;
    box-sizing: border-box;
}

.bottombar .share_bottom {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background: #fff;
    z-index: 200;
    border: 0rpx;
    border-radius: 0px;
    position: fixed;
    left: 0px;
    bottom: 0rpx;
    opacity: 0;
}

.bottombar image {
    display: inline-block;
    vertical-align: top;
    height: 60rpx;
    width: 60rpx;
    margin-top: 10rpx;
}

.bottombar text {
    font-size: 28rpx;
    color: #787878;
    display: inline-block;
    vertical-align: top;
    line-height: 80rpx;
    height: 80rpx;
    font-weight: 400;
}