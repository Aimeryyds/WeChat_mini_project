.cplistw {
    width: 100%;
    height: 100%;
}

.filterw {
    width: 100%;
    height: 44px;
    background: #fff;
    position: fixed;
    left: 0px;
    z-index: 1000;
    font-size: 0px;
}

.filteritem {
    width: 25%;
    height: 44px;
    text-align: center;
    font-size: 12px;
    color: #666;
    display: inline-block;
    vertical-align: top;
    line-height: 44px;
}

.filteritem.current {
    font-weight: 600;
    color: #ff5059;
}

.cplist_nodata {
    font-size: 36rpx;
    text-align: center;
    line-height: 400rpx;
    color: #787878;
    padding-top: 176rpx;
}

.recipeitem {
    width: 100%;
    box-sizing: border-box;
    padding: 0rpx 30rpx;
}

.recipeitemw {
    height: 280rpx;
    width: 100%;
    box-sizing: border-box;
    padding: 24rpx 0rpx 24rpx 232rpx;
    position: relative;
}

.cpimgw {
    height: 232rpx;
    width: 232rpx;
    position: absolute;
    left: 0rpx;
    top: 24rpx;
    overflow: hidden;
    border-radius: 8rpx;
}

.cpimgw image {
    display: block;
    height: 100%;
    width: 100%;
}

.cpinfow {
    padding-left: 30rpx;
    height: 232rpx;
    position: relative;
}

.cpinfow .cpnamew {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.cpinfow .cpname {
    font-size: 32rpx;
    color: #1a1a1a;
    font-weight: 600;
    line-height: 64rpx;
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.cpinfow .starw {
    height: 24rpx;
    position: absolute;
    left: 0px;
    bottom: 72rpx;
    font-size: 0px;
    width: 100%;
    padding-left: 30rpx;
    box-sizing: border-box;
}

.cpinfow .starw view {
    height: 24rpx;
    width: 24rpx;
    display: inline-block;
    vertical-align: top;
    margin-right: 6rpx;
}

.cpinfow .starw image {
    height: 24rpx;
    width: 24rpx;
}

.cpinfow .viewdata {
    height: 32rpx;
    line-height: 32rpx;
    margin-top: 28rpx;
    position: absolute;
    bottom: 14rpx;
    left: 30rpx;
    width: 100%;
}

.cpinfow .auw {
    height: 32rpx;
    padding-left: 32rpx;
    position: absolute;
    left: 0px;
    top: 0px;
}

.cpinfow .auw image {
    display: block;
    height: 32rpx;
    width: 32rpx;
    border-radius: 100%;
    position: absolute;
    left: 0px;
    top: 0px;
}

.cpinfow .auw text {
    font-size: 24rpx;
    padding-left: 16rpx;
    line-height: 32rpx;
    color: #666666;
    display: block;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    max-width: 160rpx;
}

.cpinfow .viewdata .iw {
    height: 32px;
    position: absolute;
    right: 0px;
    top: 0px;
}

.cpinfow .viewdata .iw image {
    display: inline-block;
    vertical-align: top;
    height: 32rpx;
    width: 32rpx;
}

.cpinfow .viewdata .iw text {
    display: inline-block;
    vertical-align: top;
    font-size: 24rpx;
    color: #666;
    margin: 0 30rpx 0 6rpx;
}

.cpinfow .yyw {
    background: #fff2f2;
    border-radius: 4rpx;
    position: relative;
    margin: 24rpx 0rpx 0rpx 0rpx;
    padding: 8rpx 12rpx 8rpx 12rpx;
    box-sizing: border-box;
    display: inline-block;
    vertical-align: top;
}

.cpinfow .yyw .t {
    font-size: 16rpx;
    line-height: 24rpx;
    height: 24rpx;
    border-radius: 4rpx;
    color: #fff;
    position: absolute;
    left: 0rpx;
    top: -20rpx;
    padding: 0px 6rpx;
    font-weight: 600;
    background: #ff8d8d;
    border-bottom-left-radius: 0rpx;
}

.cpinfow .yyw .t:after {
    content: " ";
    height: 0px;
    width: 0px;
    border-top: 2rpx solid #ff8d8d;
    border-left: 2rpx solid #ff8d8d;
    border-right: 2rpx solid transparent;
    border-bottom: 2rpx solid transparent;
    position: absolute;
    left: 0rpx;
    top: 24rpx;
    overflow: hidden;
}

.cpinfow .yyw .des {
    font-size: 22rpx;
    color: #ff8d8d;
    line-height: 28rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.sclistitem {
    background: #fff;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    width: 100%;
}

.sclistitem .scw {
    background: #fff;
    width: 100%;
    height: 180rpx;
    border-radius: 12rpx;
    box-shadow: 0px 0px 12rpx rgba(0,0,0,0.1);
    box-sizing: border-box;
    padding: 0rpx 180rpx 0rpx 30rpx;
    position: relative;
}

.sclistitem .sc_img {
    height: 140rpx;
    width: 140rpx;
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.sclistitem .sc_img image {
    display: block;
    height: 140rpx;
    width: 140rpx;
    border-radius: 12rpx;
}

.sclistitem .sc_title {
    height: 99rpx;
}

.sclistitem .sc_title text {
    color: #333;
    font-size: 32rpx;
    font-weight: 600;
    line-height: 99rpx;
    max-width: 192rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.sclistitem .sc_heat {
    height: 48rpx;
    line-height: 48rpx;
    border-radius: 24rpx;
    display: inline-block;
    vertical-align: top;
    margin-top: 0rpx;
    font-size: 24rpx;
    font-weight: 300;
    color: #fff;
    padding: 0rpx 24rpx;
}

.sclistitem .sc_heat1 {
    background: #8ad63a;
}

.sclistitem .sc_heat2 {
    background: #ffb60e;
}

.sclistitem .sc_heat3 {
    background: #ef4848;
}

.sclistitem .sc_tagsw {
    overflow: hidden;
    height: 44rpx;
    max-width: 336rpx;
    margin-top: 14rpx;
}

.sclistitem .sc_tags {
    height: 44rpx;
    display: inline-block;
    vertical-align: top;
    background: #f5f5f5;
    font-size: 24rpx;
    color: #787878;
    line-height: 44rpx;
    padding: 0px 16rpx;
    margin-right: 12rpx;
}

.v_icon {
    height: 40rpx;
    width: 40rpx;
    background: url(https://s1.st.meishij.net/p2/20181206/20181206143142_460.png) 0rpx 0rpx no-repeat;
    background-size: 40rpx 80rpx;
    right: 20rpx;
    top: 20rpx;
    position: absolute;
}