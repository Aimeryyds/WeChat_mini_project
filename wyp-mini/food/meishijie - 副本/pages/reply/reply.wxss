.cplist_nodata {
    font-size: 36rpx;
    text-align: center;
    line-height: 400rpx;
    color: #787878;
}

.pllist {
    margin: 0rpx 30rpx 30rpx;
}

.plitem {
    width: 100%;
    position: relative;
    border-bottom: 1rpx solid rgba(0,0,0,0.05);
    padding-top: 30rpx;
}

.plitem .avatarw {
    height: 48rpx;
    width: 100%;
    position: relative;
}

.plitem .avatarw .avatar {
    display: inline-block;
    vertical-align: top;
    height: 48rpx;
    width: 48rpx;
    margin-right: 20rpx;
    border-radius: 24rpx;
}

.plitem .avatarw .n {
    width: 500rpx;
    margin: 0rpx;
    height: 48rpx;
    font-size: 24rpx;
    color: #333;
    line-height: 48rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: inline-block;
    vertical-align: top;
}

.plitem .avatarw .time {
    position: absolute;
    right: 0rpx;
    height: 48rpx;
    line-height: 48rpx;
    color: #999;
    font-size: 24rpx;
    top: 0rpx;
}

.plitem .con {
    padding: 0rpx 0rpx 30rpx 68rpx;
}

.plitem .con .p {
    font-size: 32rpx;
    color: #666;
    line-height: 48rpx;
    padding: 24rpx 0rpx 0rpx;
}

.plitem .con .quotbox {
    padding: 20rpx 30rpx;
    background: #f5f5f5;
    margin-top: 24rpx;
}

.plitem .con .quotbox .n {
    font-size: 24rpx;
    color: #333;
    line-height: 34rpx;
    padding-top: 20rpx;
}

.plitem .con .quotbox .c {
    font-size: 32rpx;
    color: #666;
    line-height: 48rpx;
    padding: 12rpx 0rpx 20rpx;
    border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.plitem .con .quotbox .c:last-child {
    border-bottom: 0px;
}

.moreplbtn {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    color: #5a92f5;
    text-align: center;
}

.moreplbtn .i {
    display: inline-block;
    vertical-align: middel;
    width: 28rpx;
    height: 28rpx;
    margin: 2rpx 0rpx 0rpx 10rpx;
}

.plw {
    width: 100%;
    background: #fff;
    padding: 30rpx 30rpx;
    box-sizing: border-box;
}

.plw .pl_textareaw {
    background: rgba(0,0,0,0);
    min-height: 160rpx;
    width: 100%;
    border-radius: 0rpx;
}

.plw .pl_textareaw .ta {
    line-height: 40rpx;
    padding: 20rpx 0rpx;
    font-size: 32rpx;
    color: #333;
    width: 100%;
    box-sizing: border-box;
    height: 240rpx;
}

.plw .pl_textareaw .submitbtn {
    height: 80rpx;
    border-radius: 40rpx;
    color: #fff;
    background: #f25f52;
    width: 100%;
    margin-top: 30rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 400;
}

.plw .pl_textareaw .submitbtn:after {
    border: 0px;
}

.plw .pl_textareaw .ta_btn {
    line-height: 40rpx;
    padding: 20rpx 0rpx;
    font-size: 32rpx;
    color: #808080;
    width: 100%;
    box-sizing: border-box;
    height: 240rpx;
    background: rgba(0,0,0,0);
    border: 0px;
    text-align: left;
}

.plw .pl_textareaw .ta_btn:after {
    border: 0px;
}

.cplist_nodata {
    font-size: 36rpx;
    text-align: center;
    line-height: 400rpx;
    color: #787878;
}

.loaderw {
    position: relative;
    z-index: 2000;
}

.loader {
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background: rgba(255,255,255,0.5);
}

.loader .icon {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    display: block;
    background: #000;
    height: 80px;
    width: 80px;
}