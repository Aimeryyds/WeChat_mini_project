.cdtitle {
    font-size: 48rpx;
    color: #000000;
    font-weight: 600;
    line-height: 54rpx;
    padding: 60rpx 30rpx 30rpx;
    position: relative;
}

.cd_am {
    font-size: 28rpx;
    color: #000000;
    line-height: 34rpx;
    font-weight: 300;
    display: inline-block;
    vertical-align: bottom;
    position: absolute;
    right: 30rpx;
    bottom: 30rpx;
}

.auinfo {
    height: 60rpx;
    padding: 0rpx 30rpx;
    margin-bottom: 60rpx;
}

.auinfo image {
    display: block;
    height: 60rpx;
    width: 60rpx;
    border-radius: 30rpx;
    display: inline-block;
    vertical-align: top;
}

.auinfo .aun {
    font-size: 24rpx;
    color: #999;
    line-height: 60rpx;
    display: inline-block;
    vertical-align: top;
    padding-left: 16rpx;
}

.cd_des {
    font-size: 32rpx;
    line-height: 48rpx;
    color: #555555;
    padding: 0rpx 30rpx;
    text-align: justify;
    margin: -20rpx 0rpx 60rpx;
}

.cpw {
    margin: 0px 20rpx;
    font-size: 0rpx;
    padding-bottom: 100rpx;
}

.cpitem {
    width: 50%;
    display: inline-block;
    vertical-align: top;
    margin-bottom: 30rpx;
}

.cpitem navigator {
    display: block;
    width: 100%;
    padding: 0px 10rpx 0rpx;
    box-sizing: border-box;
}

.cpitem navigator .imgw {
    display: block;
    width: 100%;
    padding-top: 100%;
    background: rgba(0,0,0,0.2);
    overflow: hidden;
    position: relative;
}

.cpitem navigator .imgw image {
    display: block;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
    position: absolute;
    border-radius: 2rpx;
}

.cpitem navigator .cpn {
    font-size: 32rpx;
    text-align: center;
    line-height: 92rpx;
    text-align: center;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 0rpx 20rpx;
}

.cplist_nodata {
    font-size: 36rpx;
    text-align: center;
    line-height: 400rpx;
    color: #787878;
}

.bottombar {
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    height: 81rpx;
    width: 100%;
    border-top: 1rpx solid rgba(0,0,0,0.05);
    background: #fff;
    text-align: center;
    box-sizing: border-box;
}

.bottombar .share_bottom {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background: #fff;
    z-index: 200;
    border: 0rpx;
    border-radius: 0px;
    position: fixed;
    left: 0px;
    bottom: 0rpx;
    opacity: 0;
}

.bottombar image {
    display: inline-block;
    vertical-align: top;
    height: 60rpx;
    width: 60rpx;
    margin-top: 10rpx;
}

.bottombar text {
    font-size: 28rpx;
    color: #787878;
    display: inline-block;
    vertical-align: top;
    line-height: 80rpx;
    height: 80rpx;
    font-weight: 400;
}