.recipeitem {
    width: 100%;
    box-sizing: border-box;
    padding: 0rpx 32rpx;
}

.recipeitemw {
    height: 282rpx;
    width: 100%;
    box-sizing: border-box;
    padding: 16rpx 0rpx 16rpx 250rpx;
    position: relative;
}

.cpimgw {
    height: 250rpx;
    width: 250rpx;
    position: absolute;
    left: 0rpx;
    top: 16rpx;
}

.cpimgw image {
    display: block;
    height: 100%;
    width: 100%;
    border-radius: 4rpx;
}

.cpinfow {
    padding-left: 30rpx;
    height: 250rpx;
}

.cpinfow .cpnamew {
    padding-top: 0rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 328rpx;
}

.cpinfow .cpname {
    font-size: 36rpx;
    color: #333;
    font-weight: 400;
    line-height: 88rpx;
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.cpinfow .wznamew {
    padding-top: 0rpx;
}

.cpinfow .wzname {
    font-size: 36rpx;
    color: #333;
    font-weight: 400;
    line-height: 54rpx;
    height: 162rpx;
    padding: 16rpx 0rpx 0rpx;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.cpinfow .auw {
    height: 32rpx;
    padding-left: 32rpx;
    position: relative;
}

.cpinfow .auw image {
    display: block;
    height: 32rpx;
    width: 32rpx;
    border-radius: 100%;
    position: absolute;
    left: 0px;
    top: 0px;
}

.cpinfow .auw text {
    font-size: 24rpx;
    padding-left: 16rpx;
    line-height: 32rpx;
    color: #787878;
    display: block;
    white-space: nowrap;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.cpinfow .tagw {
    height: 40rpx;
}

.cpinfow .tag {
    height: 40rpx;
    background-image: linear-gradient(to bottom,#fc9b8b,#fb7887);
    color: #fff;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    border-radius: 4rpx;
    display: inline-block;
}

.cpinfow .tagw .t {
    height: 36rpx;
    line-height: 36rpx;
    display: inline-block;
    vertical-align: top;
    color: #fff;
    font-size: 24rpx;
    padding: 0rpx 20rpx 0rpx 20rpx;
    font-weight: 400;
    margin: 2rpx 0rpx 0rpx 0rpx;
}

.cpinfow .tagw .c {
    height: 36rpx;
    line-height: 36rpx;
    display: inline-block;
    vertical-align: top;
    font-weight: 400;
    font-size: 24rpx;
    padding: 0rpx 20rpx 0rpx 20rpx;
    background: #fff;
    color: #fc7b88;
    border-top-right-radius: 2rpx;
    border-bottom-right-radius: 2rpx;
    margin: 2rpx 2rpx 0rpx 0rpx;
    max-width: 240rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.cpinfow .starw {
    height: 20rpx;
    font-size: 0px;
    margin-top: 28rpx;
}

.cpinfow .starw view {
    height: 20rpx;
    width: 20rpx;
    display: inline-block;
    vertical-align: top;
    margin-right: 8rpx;
}

.cpinfow .starw view image {
    height: 20rpx;
    width: 20rpx;
    display: block;
}

.cpinfow .viewdata {
    height: 32rpx;
    line-height: 32rpx;
    margin-top: 26rpx;
    position: relative;
    text-align: right;
}

.cpinfow .viewdata .p {
    display: inline-block;
    vertical-align: top;
    line-height: 32rpx;
    font-size: 20rpx;
    color: #666;
    font-weight: 400;
    margin-left: 10rpx;
}

.cpinfow .viewdata .i {
    display: inline-block;
    vertical-align: top;
    height: 24rpx;
    width: 24rpx;
    margin-top: 4rpx;
    margin-left: 20rpx;
}

.cpinfow .viewdata .avatarw {
    height: 32rpx;
    position: absolute;
    left: 0px;
    top: 0px;
    max-width: 50%;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.cpinfow .viewdata .avatarw .ava {
    height: 32rpx;
    width: 32rpx;
    border-radius: 16rpx;
    overflow: hidden;
    position: absolute;
    left: 0rpx;
    top: 0rpx;
}

.cpinfow .viewdata .avatarw .name {
    font-size: 20rpx;
    color: #666;
    line-height: 32rpx;
    padding-left: 8rpx;
    display: inline-block;
    vertical-align: top;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 100%;
    padding-left: 40rpx;
    box-sizing: border-box;
}