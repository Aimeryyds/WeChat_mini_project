<navigation-bar title="能不能吃"></navigation-bar>
<view class="container" style="padding-top:{{barHeight}}px">
    <view class="search_wrapw">
        <view class="search_wrapc" style="top:{{barHeight}}px">
            <view class="search_wrap">
                <form bindreset="formReset" bindsubmit="formSubmit">
                    <view class="search_bg">
                        <view class="search_icon">
                            <image src="{{searchicon}}"></image>
                        </view>
                        <input bindblur="iBlured" bindconfirm="formSubmit" bindfocus="iFocused" bindinput="inputIng" class="search_input" confirmHold="true" confirmType="search" data-hideSearchedWords="1" focus="{{focus}}" name="mainSearchInput" placeholder="输入食物名 看能不能吃" placeholderStyle="color:#aaa;" value="{{nowords}}"></input>
                    </view>
                    <button class="s_submitbtn" formType="submit">搜索</button>
                </form>
            </view>
        </view>
    </view>
    <view class="searchboxw" style="top:{{barHeight}}px">
        <view class="searchedWords" hidden="{{hideSearchedWords||noSearchedWords}}">
            <view class="t">搜索历史<view bindtap="clearSearchedWords">清空</view>
            </view>
            <view class="btnsw">
                <navigator bindtap="recordSearched" class="searchedWordsitem" data-hideSearchedWords="0" data-name="{{item}}" hoverClass="navigator-hover" url="/pages/whattoeat/search_result_sc?words={{item}}&scene_id={{option.scene_id}}" wx:for="{{searchedWords_cj_sc}}" wx:key="key">{{item}}</navigator>
            </view>
        </view>
        <view class="search_tips">
            <navigator bindtap="recordSearched" class="searchtipsitem" data-hideSearchedWords="1" data-name="{{item}}" hoverClass="navigator-hover" url="/pages/whattoeat/search_result_sc?words={{item}}&scene_id={{option.scene_id}}" wx:for="{{searchTips}}" wx:key="key">
                <image src="{{searchicon}}"></image>{{item}}</navigator>
        </view>
    </view>
    <view bindtap="pageReload" class="cplist_nodata" wx:if="{{requeseFail}}">{{requeseFailTips}}</view>
    <view class="toastw" wx:if="{{showToast}}">
        <view class="toast">
            <rich-text nodes="{{toastTitle}}"></rich-text>
        </view>
    </view>
</view>
