.csmxcc_main {
    width: 100%;
}

.csmxcc_top {
    width: 100%;
    height: 228rpx;
    padding-bottom: 60rpx;
    background: url(https://s1.st.meishij.net/p2/20190822/20190822162917_626.jpg) center no-repeat;
    background-size: cover;
    position: relative;
}

.csmxcc_top .t {
    font-size: 52rpx;
    color: #fff;
    line-height: 76rpx;
    margin: 50rpx 30rpx 0rpx 30rpx;
    font-weight: 700;
    position: relative;
    z-index: 100;
}

.csmxcc_top .des {
    font-size: 28rpx;
    color: #fff;
    line-height: 52rpx;
    margin: 0rpx 30rpx 0rpx 30rpx;
    font-weight: 400;
    position: relative;
    z-index: 100;
}

.csmxcc_top .bg {
    height: 100%;
    width: 100%;
    position: absolute;
    left: 0px;
    top: 0px;
    background: rgba(0,0,0,0.3);
}

.csmxcc_content {
    width: 100%;
    border-radius: 60rpx;
    margin-top: -60rpx;
    background: #fff;
    position: relative;
    z-index: 200;
}

.csmxcc_item {
    width: 100%;
}

.csmxcc_item .t {
    font-size: 38rpx;
    font-weight: 600;
    line-height: 84rpx;
    padding-top: 40rpx;
    text-align: center;
}

.csmxcc_item .t .dot1 {
    height: 11rpx;
    width: 11rpx;
    display: inline-block;
    vertical-align: middle;
    margin: 0rpx 8rpx;
    transform: rotate(45deg);
    background: #fea5a5;
}

.csmxcc_item .t .dot2 {
    height: 15rpx;
    width: 15rpx;
    display: inline-block;
    vertical-align: middle;
    margin: 0rpx 8rpx;
    transform: rotate(45deg);
    background: #fea5a5;
}

.csmxcc_item_scroller {
    padding: 0rpx 0rpx;
}

.csmxcc_item_scrollerw {
    white-space: nowrap;
    padding: 0rpx 1rpx 0rpx 30rpx;
}

.subcj_item {
    width: 600rpx;
    border-radius: 16rpx;
    background: #fff;
    overflow: hidden;
    box-shadow: 0px 0px 16rpx rgba(0,0,0,0.1);
    margin: 20rpx 30rpx 20rpx 0rpx;
    display: inline-block;
    vertical-align: top;
}

.subcj_item_long {
    width: 690rpx;
}

.subcj_item .title {
    height: 200rpx;
    line-height: 200rpx;
    font-size: 36rpx;
    font-weight: 600;
    padding-left: 40rpx;
    width: 100%;
    box-sizing: border-box;
    color: #fff;
}

.subcj_item .btnw {
    padding: 30rpx 0rpx;
    margin: 0rpx 20rpx;
    text-align: center;
    font-size: 0px;
}

.subcj_item .btnw .btn {
    display: inline-block;
    vertical-align: top;
    width: 50%;
}

.subcj_item .btnw .btn .link {
    height: 80rpx;
    line-height: 76rpx;
    font-size: 28rpx;
    margin: 0rpx 20rpx;
    border-radius: 44rpx;
    box-sizing: border-box;
    text-align: center;
    font-weight: 400;
}

.more_cj_tip {
    font-size: 28rpx;
    text-align: center;
    color: #bbb;
    padding: 40rpx 0rpx 40rpx;
    line-height: 32rpx;
}

.bottomline {
    font-size: 28rpx;
    text-align: center;
    color: #bbb;
    padding: 40rpx 0rpx 120rpx;
    line-height: 32rpx;
}

.cplist_nodata {
    font-size: 36rpx;
    text-align: center;
    line-height: 400rpx;
    color: #787878;
}