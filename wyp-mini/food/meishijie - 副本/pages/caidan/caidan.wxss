.caidanitem {
    padding: 0rpx;
    border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.caidanitem navigator {
    display: block;
    padding-bottom: 40rpx;
}

.caidanitem .title {
    height: 88rpx;
    line-height: 88rpx;
    font-size: 36rpx;
    font-weight: 600;
    color: #000000;
    text-indent: 30rpx;
    padding-top: 20rpx;
    position: relative;
}

.caidanitem .title .am {
    position: absolute;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    color: #999;
    font-weight: 300;
    right: 30rpx;
    bottom: 0rpx;
}

.caidanitem .cpw {
    margin: 0rpx 20rpx;
}

.caidanitem .cpw .recipeitem {
    display: block;
    width: 100%;
}

.caidanitem .cpw .recipeitem .cpitemw {
    width: 33.333333%;
    padding: 0rpx 10rpx;
    box-sizing: border-box;
    display: inline-block;
    vertical-align: top;
    position: relative;
}

.caidanitem .cpw .recipeitem .cpitemw image {
    display: block;
    width: 100%;
    border-radius: 4rpx;
    height: 216.66666666rpx;
    background: rgba(0,0,0,0.02);
}

.bottomline {
    font-size: 28rpx;
    text-align: center;
    color: #bbb;
    padding: 40rpx 0rpx 120rpx;
    line-height: 32rpx;
}

.cplist_nodata {
    font-size: 36rpx;
    text-align: center;
    line-height: 400rpx;
    color: #787878;
}

.caidan_ad {
    padding: 40rpx 30rpx;
    border-bottom: 1rpx solid rgba(0,0,0,0.05);
}