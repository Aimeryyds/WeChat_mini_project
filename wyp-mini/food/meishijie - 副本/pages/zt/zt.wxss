.backbtn {
    height: 32px;
    width: 32px;
    box-sizing: border-box;
    border: 1rpx solid rgba(214,214,214,0.5);
    background: rgba(255,255,255,0.5);
    border-radius: 16px;
    position: fixed;
    left: 7px;
    z-index: 9000;
}

.backbtnicon {
    display: block;
    height: 17px;
    width: 10px;
    margin: 7px 0px 0px 9px;
}

.topimg {
    width: 100%;
    padding-top: 100%;
    position: relative;
}

.bigtitle {
    padding: 40rpx 30rpx 8rpx;
    font-size: 44rpx;
    font-weight: 600;
    color: #333;
    line-height: 72rpx;
    width: 100%;
    box-sizing: border-box;
}

.contentw {
    width: 100%;
    padding-bottom: 160rpx;
}

.paraw {
    margin: 20rpx 30rpx;
    font-size: 32rpx;
    color: #333;
    line-height: 48rpx;
    font-weight: 400;
    width: 690rpx;
}

.subtitle {
    margin: 20rpx 30rpx 0rpx;
    font-size: 32rpx;
    color: #333;
    line-height: 48rpx;
    font-weight: 600;
    padding-top: 20rpx;
    width: 690rpx;
    text-align: center;
}

.cplist {
    margin: 0rpx 22rpx;
    width: 706rpx;
}

.cpitem {
    display: inline-block;
    vertical-align: top;
    background: #fff;
    width: 360rpx;
    padding: 24rpx 0rpx 24rpx 30rpx;
    box-sizing: border-box;
}

.cpitem .link {
    display: block;
}

.cpitem .link .imgw {
    display: block;
    width: 100%;
    padding-top: 133.3333333%;
    overflow: hidden;
    position: relative;
}

.cpitem .link .cpinfo {
    display: block;
    width: 100%;
    height: 180rpx;
    box-sizing: border-box;
    border: 1rpx solid rgba(0,0,0,0.05);
    overflow: hidden;
    position: relative;
}

.cpitem .link .cpinfo .titlew {
    display: block;
    height: 78rpx;
    line-height: 72rpx;
    box-sizing: border-box;
    padding: 12rpx 30rpx 0rpx;
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.cpitem .link .cpinfo .authorw {
    display: block;
    height: 44rpx;
    line-height: 44rpx;
    color: #333;
    font-size: 24rpx;
    padding: 20rpx 30rpx 0rpx 94rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    position: relative;
}

.cpitem .link .cpinfo .authorw image {
    display: block;
    height: 44rpx;
    width: 44rpx;
    border-radius: 24rpx;
    overflow: hidden;
    position: absolute;
    left: 30rpx;
    bottom: 0rpx;
}

.sharebtnw {
    height: 100rpx;
    width: 100%;
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    z-index: 100;
    text-align: center;
}

.sharebtnw .i {
    display: inline-block;
    vertical-align: top;
    height: 60rpx;
    width: 60rpx;
    margin: 20rpx 12rpx;
}

.sharebtnw .sharebtn {
    display: block;
    background: #f25f52;
    color: #fff;
    font-size: 28rpx;
    font-weight: 600;
    text-align: center;
    line-height: 100rpx;
    height: 100rpx;
    border-radius: 0px;
}

.sharebtnw .sharebtn:after {
    border: 0px;
}