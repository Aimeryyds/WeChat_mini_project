.loaderw {
    position: relative;
    z-index: 2000;
}

.loader {
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background: rgba(255,255,255,0.5);
}

.loader .icon {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    display: block;
    background: #000;
    height: 80px;
    width: 80px;
}

