.sancan_tab_linew {
    width: 100%;
    height: 88rpx;
    background: #fff;
}

.sancan_tab_line {
    border-bottom: 1rpx solid rgba(0,0,0,0.05);
    height: 88rpx;
    width: 100%;
    position: fixed;
    left: 0rpx;
    top: 0rpx;
    z-index: 100;
}

.sancan_tabw {
    padding: 0rpx 30rpx;
    width: 690rpx;
    position: fixed;
    left: 0rpx;
    top: 0rpx;
    z-index: 200;
}

.sancan_tabitem {
    height: 88rpx;
    text-align: center;
    font-size: 28rpx;
    width: 20%;
    display: inline-block;
    vertical-align: top;
}

.sancan_tabitem .linew {
    display: inline-block;
    vertical-align: top;
    height: 88rpx;
    line-height: 78rpx;
    padding: 5rpx 0rpx;
    color: #787878;
    font-weight: 300;
    box-sizing: border-box;
}

.sancan_tabitem.current .linew {
    border-bottom: 5rpx solid #ef4848;
    color: #ef4848;
    font-weight: 700;
}

.sancan_scoller {
    height: 100%;
}

.sancanitem {
    padding: 0rpx;
    border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.sancanitem .time {
    height: 88rpx;
    line-height: 88rpx;
    font-size: 28rpx;
    font-weight: 300;
    color: #787878;
    text-indent: 30rpx;
    padding-top: 20rpx;
}

.sancanitem .cpw {
    margin: 0rpx 20rpx;
}

.sancanitem .cpitemw {
    width: 33.333333%;
    padding: 0rpx 10rpx;
    box-sizing: border-box;
    display: inline-block;
    vertical-align: top;
}

.sancanitem .cpitemw .recipeitem {
    display: block;
    width: 100%;
    padding-top: 100%;
    position: relative;
}

.sancanitem .cpitemw .recipeitem image {
    display: block;
    width: 100%;
    border-radius: 4rpx;
    position: absolute;
    left: 0rpx;
    top: 0rpx;
    height: 216.66666666rpx;
    background: rgba(0,0,0,0.02);
}

.sancanitem .cpitemw .recipeitem text {
    display: block;
    font-size: 28rpx;
    font-weight: 300;
    text-align: center;
    color: #1a1a1a;
    line-height: 78rpx;
    height: 78rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: 20rpx;
}

.bottomline {
    font-size: 28rpx;
    text-align: center;
    color: #bbb;
    padding: 40rpx 0rpx 120rpx;
    line-height: 32rpx;
}

.sancan_ad {
    padding: 60rpx 30rpx;
    border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.bottombar {
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    height: 81rpx;
    width: 100%;
    border-top: 1rpx solid rgba(0,0,0,0.05);
    background: #fff;
    text-align: center;
    box-sizing: border-box;
}

.bottombar .share_bottom {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background: #fff;
    z-index: 200;
    border: 0rpx;
    border-radius: 0px;
    position: fixed;
    left: 0px;
    bottom: 0rpx;
    opacity: 0;
}

.bottombar image {
    display: inline-block;
    vertical-align: top;
    height: 60rpx;
    width: 60rpx;
    margin-top: 10rpx;
}

.bottombar text {
    font-size: 28rpx;
    color: #787878;
    display: inline-block;
    vertical-align: top;
    line-height: 80rpx;
    height: 80rpx;
    font-weight: 400;
}