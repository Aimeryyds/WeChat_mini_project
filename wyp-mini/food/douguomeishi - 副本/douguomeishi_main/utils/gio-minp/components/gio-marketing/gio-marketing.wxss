.inner {
    width: 100vw;
    height: 100vh;
    position: absolute;
    z-index: 100000000;
    background-color: rgba(50,50,50,0.7);
}

.image {
    max-width: 80vw;
    height: 100vw;
    margin-left: 10vw;
    margin-top: calc(50vh - 55vw);
}

.close {
    margin-top: 1.5vw;
    margin-left: 46vw;
    color: #fff;
    border: 1px solid #fff;
    font-size: 4vw;
    padding: 1vw;
    text-align: center;
    font-weight: bold;
    border-radius: 5vw;
    height: 6vw;
    width: 6vw;
}