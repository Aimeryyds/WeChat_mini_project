@import "../common/footer.wxss";

.fall-container {
    margin-top: 36rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.fall-left {
    display: flex;
    flex-direction: column;
}

.fall-right {
    display: flex;
    flex-direction: column;
}

.note-item {
    margin-left: 18rpx;
    margin-right: 18rpx;
    margin-bottom: 36rpx;
    background-color: #fff;
    padding-bottom: 10rpx;
    border-color: rgba(64,71,81,0.08);
    box-shadow: 0px 2rpx 10rpx 0rpx rgba(64,71,81,0.08);
    border-radius: 16rpx;
    display: flex;
    flex-direction: column;
    width: 321rpx;
}

.note-image {
    border-radius: 16rpx 16rpx 0rpx 0rpx;
}

.note-title {
    margin: 12rpx;
    color: #333;
    font-size: 28rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.note-author {
    display: flex;
    margin: 8rpx 12rpx 12rpx 12rpx;
    align-items: center;
}

.note-author image {
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
}

.note-author view {
    margin-left: 12rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex: 1;
    color: #333;
    font-size: 24rpx;
}

.bottom_button_container {
    position: fixed;
    bottom: 30rpx;
    width: 750rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.upload_note_icon {
    width: 28rpx;
    height: 28rpx;
}

.upload_note_container {
    background-color: #27b451;
    border-radius: 36rpx;
    color: #fff;
    font-weight: bold;
    font-size: 28rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.note_image_container {
    position: relative;
}

.note_video_icon {
    width: 44rpx;
    height: 44rpx;
    position: absolute;
    top: 20rpx;
    left: 260rpx;
}