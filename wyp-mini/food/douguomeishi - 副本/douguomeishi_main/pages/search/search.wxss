@import "../common/searchBar.wxss";

@import "../common/footer.wxss";

@import "../common/simpleRecipe.wxss";

.tips_bottom_commercial {
    margin: 0px 5px;
}

.search-bar {
    margin: auto 5px auto 15px;
    height: 44px;
}

.order_view {
    margin-top: 16rpx;
    width: 100%;
    display: flex;
    align-items: center;
    background-color: white;
}

.order_view_first_text,.order_view_second_text,.order_view_third_text {
    line-height: 39px;
}

.order_view_first_separator,.order_view_second_separator,.order_view_third_separator {
    height: 3px;
    width: 20px;
    border-radius: 1.5px;
    margin-bottom: 4px;
}

.order_view_first {
    width: 33%;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #999;
    font-size: 32rpx;
}

.order_view_second {
    left: 33%;
    width: 33%;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #999;
    font-size: 32rpx;
}

.order_view_third {
    left: 66%;
    width: 34%;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #999;
    font-size: 32rpx;
}

.recipe_list {
    margin-top: 232rpx;
}

.recipe-simple-item {
    background-color: white;
    overflow: hidden;
}

.recipe-simple-content {
    height: 260rpx;
    overflow: hidden;
    background-color: white;
    display: flex;
    align-items: center;
}

.recipe-simple-image-view {
    margin-left: 40rpx;
    width: 335rpx;
    height: 230rpx;
    flex: none;
    background-color: #ebebeb;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
}

.recipe-simple-image {
    width: 80rpx;
    height: 80rpx;
}

.recipe-simple-detail {
    margin-left: 10px;
    margin-right: 20px;
    flex: 1;
    overflow: hidden;
}

.recipe-simple-title {
    width: 100%;
    font-size: 17px;
    color: #333333;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.recipe-simple-ingredients {
    margin-top: 6px;
    font-size: 12px;
    color: #333333;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.recipe-simple-nickname {
    margin-top: 6px;
    font-size: 12px;
    color: #999999;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.recipe-simple-favo-container {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    flex: 1 1 auto;
    display: flex;
    align-items: center;
    font-size: 2.89vw;
    justify-content: space-between;
}

.recipe-simple-favo {
    margin-top: 3px;
    font-size: 12px;
    color: #999999;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.recipe-simple-detail-view {
    margin-top: 3px;
    margin-right: 5px;
    white-space: nowrap;
    box-sizing: border-box;
    border-radius: 5%;
    background: #3897f0;
    padding: 2% 5%;
    color: #fff;
    text-align: center;
}

.ad_container-banner {
    margin: 0px 17px;
    background-color: white;
    overflow: hidden;
}

.ad_banner {
    margin: 7.5px 0px;
}

.header {
    width: 100%;
    position: fixed;
    z-index: 10000;
    top: 0;
    display: flex;
    flex-direction: column;
    background-color: #fff;
}

.search-bar-container {
    width: 678rpx;
    display: flex;
    flex-direction: row;
    margin-top: 32rpx;
    margin-left: 32rpx;
    background-color: #efefef;
    border-radius: 134rpx;
}

.search-container {
    display: flex;
    flex: 1;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.search-icon-contaienr {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.search-icon {
    width: 16px;
    height: 16px;
    margin-right: 10px;
}

.search-input-view {
    color: #333333;
    font-size: 24rpx;
    border: none;
    flex: 1;
    text-align: center;
}

.search-unfocused-text {
    color: #333333;
    font-size: 24rpx;
}

.search-button {
    width: 120rpx;
    height: 80rpx;
    font-size: 24rpx;
    background-color: #ff7029;
    color: #fff;
    border-radius: 0px 134rpx 134rpx 0px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}