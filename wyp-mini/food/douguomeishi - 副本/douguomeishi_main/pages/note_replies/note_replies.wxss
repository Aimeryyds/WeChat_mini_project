@import "../common/footer.wxss";

@import "../common/comment.wxss";

.page {
    background-color: #efefef;
}

.recipe-comment-item {
    background-color: #fff;
}

.comment-user-view {
    margin: 0 40rpx;
    padding-top: 20rpx;
}

.comment-content-veiw {
    padding-bottom: 20rpx;
}

.comment-input-view {
    height: 100rpx;
    background-color: white;
    width: 100%;
    z-index: 10000;
    position: fixed;
    display: flex;
}

.comment-input-box {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 18rpx auto auto 40rpx;
    height: 64rpx;
    background-color: #efefef;
    border-radius: 32rpx;
    flex: 1;
}

.input-box-icon {
    width: 28rpx;
    height: 28rpx;
    flex: none;
    margin-left: 32rpx;
}

.comment-input-placeholder {
    color: #999;
    font-size: 28rpx;
    white-space: nowrap;
    overflow: hidden;
}

.comment-input {
    font-size: 28rpx;
    color: #333;
    flex: 1;
    box-sizing: border-box;
    padding-left: 6rpx;
    padding-right: 28rpx;
}

.publish-button {
    margin-top: 18rpx;
    width: 132rpx;
    height: 64rpx;
    font-size: 34rpx;
    color: #333;
    font-weight: bold;
    border: 0;
    padding: 0;
    background-color: transparent;
    align-items: center;
    display: flex;
    justify-content: center;
}

button::after {
    border: 0;
    width: 0;
    height: 0;
}

.bottom-view {
    width: 100%;
    height: 68rpx;
    background-color: #fff;
    z-index: 10000;
    position: fixed;
    bottom: 0;
}

.post_login_button {
    width: 100%;
    background-color: red;
    opacity: 0;
    z-index: 10001;
    position: fixed;
    bottom: 0;
}