.page {
    padding-bottom: 48rpx;
}

.primary-item {
    color: #333333;
    font-size: 32rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    overflow: hidden;
    text-align: center;
    white-space: nowrap;
    margin-top: 48rpx;
    font-weight: bold;
}

.minor {
    display: flex;
    box-sizing: border-box;
    flex-wrap: wrap;
    justify-content: center;
    padding: 6rpx 26rpx 0 26rpx;
}

.minor-item {
    height: 72rpx;
    border-radius: 36rpx;
    overflow: hidden;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 30rpx 14rpx 0 14rpx;
    box-sizing: border-box;
    border: 2rpx solid;
}

.minor-item-name {
    font-size: 28rpx;
    white-space: nowrap;
    overflow: hidden;
    margin-left: 40rpx;
    margin-right: 40rpx;
}