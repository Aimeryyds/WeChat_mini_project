.comment-item {
    padding-bottom: 40rpx;
}

.comment-user-view {
    display: flex;
    margin: 40rpx 40rpx 0 40rpx;
    align-items: center;
}

.comment-author-image {
    width: 68rpx;
    height: 68rpx;
    border-radius: 50%;
}

.comment-information-view {
    margin-left: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex: 1;
}

.comment-favo-view {
    font-size: 32rpx;
    text-align: left;
    width: 100%;
    color: #9292af;
    display: flex;
    align-items: center;
}

.comment-favo-view-author {
    font-size: 30rpx;
    max-width: 380rpx;
    color: #333;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.comment-favo-view-level {
    margin-left: 10rpx;
    font-weight: bold;
    padding: 2rpx 4rpx;
    font-size: 20rpx;
    color: #E2BF76;
    font-style: italic;
}

.comment-favo-view-prime-icon {
    margin-left: 10rpx;
    width: 52rpx;
    height: 26rpx;
}

.comment-favo-view-blank {
    flex: 1;
}

.comment-favo-button {
    height: 32rpx;
    line-height: 1.0;
    font-size: 32rpx;
    align-items: center;
    padding: 0;
    border: 0;
    background-color: transparent;
    position: static;
}

.comment-favo-view-favo-icon {
    width: 28rpx;
    height: 26rpx;
}

.comment-favo-view-reply-favo {
    width: 28rpx;
    height: 28rpx;
}

.comment-time-view {
    font-size: 22rpx;
    color: #999;
}

.comment-content-veiw {
    margin: 20rpx 40rpx 0px 118rpx;
    font-size: 30rpx;
    color: #333333;
}

.comment-reply-container-view {
    margin: 20rpx 40rpx 0px 118rpx;
    padding-bottom: 30rpx;
    background-color: #F7F7F7;
    border-radius: 6rpx;
}

.comment-reply-view {
    padding: 10rpx 20rpx 0px 20rpx;
}

.comment-reply-user {
    color: #333;
    font-size: 28rpx;
    font-weight: bold;
}

.comment-reply-content {
    color: #151515;
    font-size: 28rpx;
}

.comment-reply-count-view {
    padding: 20rpx 20rpx 0rpx 20rpx;
    text-align: right;
    color: #999999;
    font-size: 26rpx;
}

.reply-item {
    background-color: #efefef;
    padding-bottom: 40rpx;
}

.ipad-comment-item {
    padding-top: 40rpx;
}

.ipad-comment-user-view {
    display: flex;
    margin: 0 80rpx 0 80rpx;
    align-items: center;
}

.ipad-comment-author-image {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
}

.ipad-comment-information-view {
    margin-left: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex: 1;
}

.ipad-comment-favo-view {
    font-size: 24rpx;
    text-align: left;
    width: 100%;
    color: #333;
    display: flex;
    align-items: center;
}

.ipad-comment-favo-view-author {
    font-size: 24rpx;
    max-width: 256rpx;
    font-weight: bold;
    color: #333;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.ipad-comment-favo-view-level {
    margin-left: 8rpx;
    font-weight: bold;
    padding: 2rpx 0;
    font-size: 20rpx;
    color: #E2BF76;
    font-style: italic;
}

.ipad-comment-favo-view-prime-icon {
    margin-left: 8rpx;
    width: 48rpx;
    height: 24rpx;
}

.ipad-comment-favo-view-blank {
    flex: 1;
}

.ipad-comment-favo-button {
    height: 24rpx;
    line-height: 1.0;
    font-size: 24rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
    border: 0;
    border-radius: 0px;
    background-color: transparent;
    position: static;
}

.ipad-comment-favo-view-favo-icon {
    width: 24rpx;
    height: 24rpx;
}

.ipad-comment-reply-view-blank {
    width: 24rpx;
    height: 24rpx;
}

.ipad-comment-favo-view-reply-favo {
    width: 24rpx;
    height: 24rpx;
}

.ipad-comment-time-view {
    font-size: 16rpx;
    color: #999;
}

.ipad-comment-content-veiw {
    margin: 16rpx 80rpx 0 168rpx;
    font-size: 24rpx;
    color: #333333;
}

.ipad-comment-reply-container-view {
    margin: 16rpx 80rpx 0 168rpx;
    padding: 8rpx 0 16rpx 0;
    background-color: #F7F7F7;
    border-radius: 16rpx;
    line-height: 29rpx;
}

.ipad-comment-reply-view {
    margin: 4rpx 16rpx 0 16rpx;
}

.ipad-comment-reply-user {
    color: #333;
    font-size: 24rpx;
    font-weight: bold;
}

.ipad-comment-reply-content {
    color: #333;
    font-size: 24rpx;
}

.ipad-comment-reply-count-view {
    margin: 8rpx 16rpx 0 auto;
    text-align: right;
    color: #999999;
    font-size: 24rpx;
}

button::after {
    border: none;
    width: 0;
    height: 0;
}