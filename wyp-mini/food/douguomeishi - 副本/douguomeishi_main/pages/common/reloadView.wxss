.reloadView {
    height: 100%;
    width: 100%;
    display: flex;
    background: white;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: fixed;
    margin-top: 20rpx;
}

.reloadView-image {
    width: 564rpx;
    height: 500rpx;
}

.reloadView-text {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 44rpx;
    background-color: white;
    font-size: 30rpx;
    color: #666666;
    margin-top: 0px;
}

.reloadView-button {
    height: 75rpx;
    width: 302rpx;
    align-items: center;
    flex-direction: column;
    align-content: center;
    justify-content: center;
    margin-top: 20rpx;
    color: white;
    background: #4cbc16;
    border-radius: 35rpx;
    position: static;
    font-size: 28rpx;
}