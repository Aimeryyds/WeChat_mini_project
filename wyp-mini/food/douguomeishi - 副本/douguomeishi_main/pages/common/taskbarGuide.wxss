.home-guide {
    background-color: rgba(0,0,0,0.18);
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    z-index: 99999;
}

.home-guide-container {
    width: 670rpx;
    background-color: white;
    border-radius: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.home-guide-first-title {
    color: #666;
    font-size: 30rpx;
    margin: 50rpx 40rpx auto 40rpx;
}

.home-taskbar-image {
    width: 40rpx;
    height: 16rpx;
}

.home-guide-first-image {
    width: 556rpx;
    height: 260rpx;
    margin-top: 30rpx;
}

.home-guide-second-title {
    color: #666;
    font-size: 30rpx;
    margin: 50rpx 40rpx auto 40rpx;
}

.home-guide-second-image {
    width: 500rpx;
    height: 188rpx;
    margin-top: 30rpx;
}

.home-guide-confirm-button {
    width: 360rpx;
    height: 80rpx;
    margin-top: 60rpx;
    margin-bottom: 40rpx;
    text-align: center;
    line-height: 80rpx;
    background-color: #ffb31a;
    border-radius: 40rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: white;
}