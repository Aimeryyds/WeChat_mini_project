.search-bar {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 68rpx;
    background-color: #efefef;
    border-radius: 34rpx;
}

.search-background {
    flex: 1;
    display: flex;
    align-items: center;
}

.search-icon {
    width: 32rpx;
    height: 32rpx;
    flex: none;
    margin-left: 33.33rpx;
    margin-right: 20rpx;
}

.search-input {
    color: #999;
    font-size: 26rpx;
    height: 50rpx;
    white-space: nowrap;
    overflow: hidden;
}

.search-placeholder {
    height: 50rpx;
    font-size: 24rpx;
    color: #999999;
}

.search-button {
    width: 130rpx;
    height: 68rpx;
    line-height: 68rpx;
    font-size: 28rpx;
    color: #FFFFFF;
    background-color: #FF7029;
    border: 0;
    padding: 0;
    flex: none;
    border-radius: 0px 34rpx 34rpx 0px;
}

.search-button::after {
    border: 0;
    width: 0;
    height: 0;
}