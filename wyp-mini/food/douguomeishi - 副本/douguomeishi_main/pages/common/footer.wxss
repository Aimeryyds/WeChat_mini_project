.footer {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: transparent;
    height: 88rpx;
    overflow: hidden;
}

.loading {
    display: block;
    font-size: 28rpx;
    border: 0px solid transparent;
    color: #999999;
    background-color: transparent;
}

button::after {
    border: 0px solid transparent;
}

.end {
    width: 128rpx;
    height: 22rpx;
}

.error,.no-data {
    font-size: 28rpx;
    color: #999999;
    white-space: nowrap;
}