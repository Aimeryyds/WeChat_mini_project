.container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    height: 100%;
}

.background-image {
    z-index: -1;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
}

.icon-image {
    width: 200rpx;
    height: 200rpx;
    align-self: center;
    justify-self: center;
}

.tips {
    color: white;
    margin-top: 70rpx;
    font-size: 36rpx;
    align-self: center;
    justify-self: center;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    text-align: center;
}

.confirm-button {
    position: static;
    align-self: center;
    justify-self: center;
    background-color: white;
    border-radius: 45rpx;
    height: 90rpx;
    width: 662rpx;
    color: #ea5c00;
    margin-top: 70rpx;
    font-size: 36rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}