@import "../common/footer.wxss";

.space {
    height: 30rpx;
    background-color: #efeff4;
    margin-left: 0px;
    margin-right: 0;
}

@import "../common/simpleRecipe.wxss";

page {
    background-color: #efeff4;
}

.login-container {
    height: 100%;
    width: 100%;
    display: flex;
    background: white;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: fixed;
}

.login-button {
    height: 90rpx;
    width: 662rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
    align-content: center;
    justify-content: center;
    margin-top: 120rpx;
    color: white;
    background: #4cbc16;
    border-radius: 45rpx;
    position: static;
    font-size: 28rpx;
}

.login-logo {
    width: 564rpx;
    height: 602rpx;
}

.user_container {
    display: flex;
    height: 164rpx;
    background-color: white;
    align-items: center;
}

.user_container image {
    width: 122rpx;
    height: 122rpx;
    margin-left: 20rpx;
    border-radius: 50%;
}

.user_info_container {
    margin-left: 20rpx;
    margin-right: 20rpx;
    flex-direction: column;
    overflow: hidden;
    text-overflow: ellipsis;
    display: flex;
}

.user_name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 30rpx;
}

.collection_text {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 25rpx;
    margin-top: 10rpx;
}