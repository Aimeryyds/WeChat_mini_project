page {
    display: flex;
    flex-direction: column;
}

.publish-images-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 30rpx;
    margin-left: 40rpx;
}

.publish-image-container {
    width: 21vw;
    height: 21vw;
    position: relative;
    margin-right: 1.7vw;
    display: inline-block;
}

.publish-image-background-container {
    top: 0rpx;
    left: 0rpx;
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12rpx;
    position: absolute;
    border: 2rpx dashed #999;
}

.images-scroll-h {
    display: flex;
    flex-direction: row;
    white-space: nowrap;
    width: 100%;
}

.publish-image-background {
    height: 56rpx;
    width: 64rpx;
}

.publish-image {
    top: 0rpx;
    left: 0rpx;
    height: 100%;
    width: 100%;
    position: absolute;
    border-radius: 16rpx;
}

.publish-loading {
    top: 0rpx;
    left: 0rpx;
    height: 100%;
    width: 100%;
    position: absolute;
}

.publish-reload-container {
    top: 0rpx;
    left: 0rpx;
    height: 100%;
    width: 100%;
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(0,0,0,0.2);
}

.publish-reload {
    font-size: 28rpx;
    color: white;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    text-align: center;
}

.publish-delete-image-container {
    top: 0rpx;
    left: 13vw;
    height: 8vw;
    width: 8vw;
    position: absolute;
}

.publish-delete-image {
    float: right;
    height: 5vw;
    width: 5vw;
}

.publish-title {
    width: 670rpx;
    height: 50rpx;
    font-size: 36rpx;
    margin-top: 20rpx;
    margin-left: 44rpx;
    margin-bottom: 20rpx;
    color: #333;
}

.publish-content {
    width: 670rpx;
    margin: auto;
    height: 100rpx;
    position: static;
    color: #333;
}

.publish-conatiner {
    width: 670rpx;
    flex: 1;
    font-size: 30rpx;
    margin-top: 20rpx;
    margin-bottom: 100rpx;
    margin-left: 44rpx;
    color: #333;
}

.line-separator {
    width: 670rpx;
    margin: auto;
    height: 2rpx;
    background-color: #f7f7f7;
}

.publish-submit-container {
    position: fixed;
    width: 100%;
    height: 88rpx;
    background-color: #fff;
    bottom: 0rpx;
}

.publish-submit-button {
    width: 670rpx;
    height: 88rpx;
    background-color: #ffce6b;
    color: #fff;
    font-size: 30rpx;
    line-height: 88rpx;
    border-radius: 44rpx;
    position: static;
}

.publish-submit-button::after {
    border: none;
}