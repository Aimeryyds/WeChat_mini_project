.userinfo {
    background: #fafafa;
    width: 100%;
    position: fixed;
    z-index: 3;
    height: 320rpx;
}

.avatar {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    margin: 0 20rpx 0 40rpx;
    vertical-align: top;
}

.userinfo_lv {
    font-size: 24rpx;
    color: #fff;
    display: inline-block;
    border: 1rpx solid #fff;
    vertical-align: bottom;
    padding: 0 14rpx;
    border-radius: 6rpx;
}

.nav {
    top: 320rpx;
}

.rlist {
    padding: 381rpx 0 0 40rpx;
}

.plist {
    padding-top: 381rpx;
}

.loading_nodata {
    padding: 50rpx 0;
    color: #999;
}

.userdata {
    display: inline-block;
    width: 490rpx;
}

.username {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-weight: bold;
    font-size: 44rpx;
}

.usersign {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    line-height: 36rpx;
    height: 36rpx;
    font-size: 24rpx;
    color: #777;
}

.useritem {
    width: 33.3%;
    display: inline-block;
    font-size: 22rpx;
    color: #777;
}

.useritem text {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-size: 32rpx;
    display: block;
    color: #111;
    padding: 10rpx 0 0;
}

.vip_icon {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: 110rpx;
    left: 150rpx;
}

.useraction {
    display: block;
    padding: 20rpx 40rpx 0 40rpx;
    text-align: right;
}

.useraction button {
    display: inline-block;
    padding: 10rpx;
    background: #777;
    margin: 0 0 0 20rpx;
    border-radius: 6rpx;
    vertical-align: middle;
}

.useraction button image {
    width: 40rpx;
    height: 40rpx;
    display: block;
}

.useraction button.follow {
    background: #ff6767;
    padding: 10rpx 30rpx;
}

.useraction button.follow text {
    height: 40rpx;
    display: block;
    color: #fff;
    font-size: 28rpx;
    line-height: 40rpx;
}