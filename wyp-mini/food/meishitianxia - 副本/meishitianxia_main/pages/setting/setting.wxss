.c2list_item {
    padding: 32rpx 40rpx 32rpx 0;
}

.c2list_left {
    width: 200rpx;
}

.c2list_right {
    width: 430rpx;
    word-break: break-all;
    text-align: right;
}

.bottom {
    position: absolute;
    bottom: 100rpx;
    width: 750rpx;
    text-align: center;
}

.logout {
    text-align: center;
    display: inline-block;
    width: 190rpx;
    font-size: 28rpx;
    color: #666;
    border-radius: 33rpx;
    height: 66rpx;
    line-height: 66rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    border: 1rpx solid #ddd;
}

.updateUserAvatar {
    width: 375rpx;
    height: 375rpx;
    margin: 50rpx auto;
    position: relative;
}

.updateUserAvatar image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
    background: #fafafa url(http://static.meishichina.com/u2/res/n2.jpg) no-repeat scroll center center / 100% 100%;
}

.updateUserAvatar view {
    position: absolute;
    font-size: 24rpx;
    color: #fff;
    padding: 2rpx 10rpx;
    border-radius: 6rpx;
    background: rgba(0,0,0,0.5);
    right: 20rpx;
    bottom: 20rpx;
}