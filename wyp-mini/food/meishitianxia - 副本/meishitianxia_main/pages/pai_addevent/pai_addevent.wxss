.addevent1 {
    font-weight: 700;
    padding: 20rpx 40rpx 0;
    font-size: 44rpx;
}

.addevent2 {
    padding: 0 40rpx;
    font-size: 30rpx;
    color: #777;
}

.addevent2 text {
    display: inline-block;
    padding: 20rpx 0;
}

.elist {
    padding: 0 0 0 40rpx;
}

.elist_item {
    padding: 20rpx 0;
    border-bottom: 1rpx solid #ddd;
}

.elist_item2 {
    padding: 20rpx 0;
    margin: 0 0 0 180rpx;
    border-bottom: 1rpx solid #ddd;
}

.elist_img image {
    width: 180rpx;
    height: 180rpx;
    border-radius: 6rpx;
}

.elist_img {
    float: left;
}

.elist_subject text {
    width: 480rpx;
    font-size: 36rpx;
    display: inline-block;
    vertical-align: middle;
}

.elist_subject:before {
    content: ' ';
    width: 20rpx;
    display: inline-block;
    vertical-align: middle;
}

.elist_item .elist_subject {
    min-height: 180rpx;
}

.elist_item .elist_subject:before {
    height: 180rpx;
}