.elist {
    padding: 0 40rpx 10rpx;
}

.elist_item {
    position: relative;
    clear: both;
    padding: 20rpx 0;
}

.elist_c {
    width: 670rpx;
    height: 310rpx;
    overflow: hidden;
    border-radius: 10rpx;
    background-color: #fff;
}

.elist_img {
    width: 670rpx;
    height: 310rpx;
}

.elist_detail {
    padding: 10rpx 0 0 0;
    display: inline-block;
    width: 540rpx;
}

.elist_t {
    color: #999;
    display: block;
    line-height: 150%;
    font-size: 24rpx;
}

.elist_b {
    display: inline-block;
    line-height: 36rpx;
    font-size: 24rpx;
    color: #999;
    float: right;
    margin: 10rpx 0 0 0;
}

.elist_b.red {
    color: #ff6767;
}

.elist_b.green {
    color: #50CC52;
}