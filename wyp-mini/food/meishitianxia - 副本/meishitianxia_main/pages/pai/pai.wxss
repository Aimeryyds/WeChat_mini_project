.swiper_index {
    height: 246rpx;
    width: 750rpx;
}

.swiper_index swiper-item {
    display: block;
}

.sv {
    display: block;
    height: 246rpx;
    width: 750rpx;
}

.refresh {
    text-align: center;
    color: #999;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
    overflow: hidden;
}

.out {
    height: 0;
    transition: height .5s ease-in-out;
}

button.add_pai {
    background: #ff6767;
    height: 122rpx;
    width: 122rpx;
    padding: 0;
    border-radius: 50%;
    position: fixed;
    bottom: 50rpx;
    right: 20rpx;
    font-size: 24rpx;
    text-align: center;
    color: #fff;
    margin: 0;
    line-height: 40rpx;
    box-shadow: 1px 2px 6px #999;
}

button.add_pai view {
    font-size: 66rpx;
    margin: 20rpx 0 0 0;
    line-height: 40rpx;
}