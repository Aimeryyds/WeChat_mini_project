.main {
    color: #111;
    width: 100%;
    display: flex;
}

.tag_left {
    display: inline-block;
    width: 186rpx;
    overflow: hidden;
}

.tag_right {
    display: inline-block;
    width: 564rpx;
}

.tag_main {
    width: 100%;
    font-size: 28rpx;
    height: 108rpx;
    text-align: center;
    display: table;
    border-right: 1rpx solid #ddd;
    border-bottom: 1rpx solid #ddd;
    background: #F0F0F0;
}

.tag_main text {
    display: table-cell;
    vertical-align: middle;
    justify-content: center;
}

.on {
    border-left: 4rpx solid #ff6767;
    border-right: 1rpx solid transparent;
    color: #ff6767;
    background: transparent;
}

.tag_right_item {
}

.tag_right_item>view {
    text-align: center;
    display: inline-block;
    width: 156rpx;
    font-size: 28rpx;
    vertical-align: middle;
    margin: 0 0 40rpx 24rpx;
}

.tag_img image {
    width: 80rpx;
    height: 80rpx;
    display: inline-block;
    border-radius: 50%;
}

.tag_img text {
    padding: 16rpx 0 0 0;
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.tag_txt text {
    display: inline-block;
    border-radius: 33rpx;
    width: 156rpx;
    height: 66rpx;
    line-height: 66rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    border: 1rpx solid #ddd;
}

.tag_txt text.more {
    color: #888;
}

.tag_right_item view.tag_head {
    width: 100%;
    text-align: center;
    padding: 10rpx 0 40rpx 0;
}

.tag_head text:before {
    display: inline-block;
    vertical-align: middle;
    height: 2rpx;
    background: #dfdfdf;
    width: 40rpx;
    margin: 0 10rpx 0 0;
    content: '';
}

.tag_head text:after {
    display: inline-block;
    vertical-align: middle;
    height: 2rpx;
    background: #dfdfdf;
    width: 40rpx;
    margin: 0 0 0 10rpx;
    content: '';
}

.tag_head text {
    font-size: 24rpx;
    display: inline-block;
    vertical-align: middle;
}

.tag_right_item view.hidden {
    display: none;
}