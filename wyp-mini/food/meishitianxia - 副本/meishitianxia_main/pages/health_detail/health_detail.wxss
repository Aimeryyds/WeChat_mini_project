.title {
    font-size: 44rpx;
    padding: 0 40rpx;
}

.datetime {
    font-size: 20rpx;
    padding: 0 40rpx;
    color: #888;
}

.message {
    font-size: 36rpx;
    color: 353535;
    line-height: 170%;
    padding: 0 40rpx;
}

.wxParse-p {
    word-wrap: break-word;
    padding-bottom: 30rpx;
}

.wxParse-a {
    text-decoration: underline;
    color: #ff6767;
}

.wxParse-inline {
    display: inline;
}

.wxParse-br {
    display: none;
}

image {
    display: block;
    margin: 0 auto;
    max-width: 100%;
    border-radius: 6rpx;
}

.wxParse-b,.wxParse-strong {
    font-weight: 700;
}

.arlist {
    padding: 0 0 0 40rpx;
}