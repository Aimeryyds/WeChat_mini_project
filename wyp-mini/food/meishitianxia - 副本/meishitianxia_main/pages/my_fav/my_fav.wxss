.loading_nodata {
    padding: 100rpx 0;
    color: #999;
}

.rlist {
    padding: 0 0 0 40rpx;
}

.refresh {
    text-align: center;
    color: #999;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
    overflow: hidden;
}

.out {
    height: 0;
    transition: height .5s ease-in-out;
}