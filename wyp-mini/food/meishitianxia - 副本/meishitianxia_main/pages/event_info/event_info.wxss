.navs {
    top: 0;
    position: fixed;
    width: 100%;
    background: #fafafa;
    height: 80rpx;
    line-height: 72rpx;
    z-index: 3;
    white-space: nowrap;
}

.navs_item {
    display: inline-block;
    text-align: center;
    font-size: 28rpx;
    border-bottom: 1px solid #e5e5e5;
    min-width: 120rpx;
}

.navs_default {
    color: #353535;
    height: 100%;
    box-sizing: border-box;
    display: inline-block;
    padding: 0 10rpx;
    margin: 0 20rpx;
    border-top: 2px solid transparent;
    border-bottom: 2px solid transparent;
    transition: all .3s ease-in-out;
}

.navs_red {
    border-bottom: 2px solid #ff6767;
    color: #ff6767;
}

.refresh {
    text-align: center;
    color: #999;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
    overflow: hidden;
}

.out {
    height: 0;
    transition: height .5s ease-in-out;
}

.banner {
    width: 100%;
    height: 346rpx;
}

.rlist {
    padding: 0 40rpx 10rpx;
}

.event_head {
    height: 40rpx;
    padding: 40rpx 40rpx 10rpx;
    color: #888;
    font-size: 28rpx;
}

.event_index {
    font-size: 32rpx;
    line-height: 50rpx;
    padding: 0 40rpx;
}

.event_show {
    padding: 10rpx 40rpx;
    font-size: 30rpx;
    color: #ccc;
    text-align: right;
}

.event_show text {
    vertical-align: middle;
}

.event_show image {
    height: 48rpx;
    width: 48rpx;
}

.height1 {
    overflow: hidden;
    height: 150rpx;
}

button.add_pai {
    border: 1px solid #ff6767;
    background: #ff6767;
    position: absolute;
    bottom: 50rpx;
    right: 40rpx;
    width: 316rpx;
    color: #fff;
    margin: 0;
}

button.will {
    border: 1px solid #999;
    background: #999;
}

button.add_rule {
    background: #50CC52;
    border: 1px solid #50CC52;
    position: absolute;
    bottom: 50rpx;
    left: 40rpx;
    width: 316rpx;
    color: #fff;
    margin: 0;
}