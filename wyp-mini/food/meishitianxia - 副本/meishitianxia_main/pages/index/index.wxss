.timeline_item:nth-child(1) {
    border-top: 1rpx solid #ddd;
}

.tplist2 {
    padding: 26rpx 20rpx 0;
}

.tplist2_item {
    width: 25%;
    text-align: center;
    display: inline-block;
    font-size: 28rpx;
    vertical-align: middle;
    margin: 0 0 40rpx 0;
}

.tplist2_item image {
    width: 137.5rpx;
    height: 137.5rpx;
    display: inline-block;
    border-radius: 6rpx;
    background: #f0f0f0;
}

.tplist2_item text {
    padding: 16rpx 0 0 0;
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.index_tip {
    position: fixed;
    background: #ff6767;
    padding: 20rpx;
    z-index: 4;
    color: #fff;
    font-size: 24rpx;
    right: 20rpx;
    top: 20rpx;
    font-weight: 700;
    border-radius: 10rpx;
}

.index_tip::after {
    display: block;
    overflow: hidden;
    width: 0;
    height: 0;
    border: 16rpx dashed transparent;
    border-bottom: 14rpx solid #ff6767;
    content: ' ';
    position: absolute;
    top: -26rpx;
    right: 110rpx;
}

.search_mask {
    position: relative;
}

.search_mask:after {
    display: block;
    content: ' ';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    z-index: 2;
}

.icon_goods {
    position: fixed;
    color: #fff;
    background: rgba(0,0,0,0.6);
    text-align: center;
    border-radius: 50%;
    right: 40rpx;
    bottom: 36rpx;
    font-size: 20rpx;
    width: 80rpx;
    height: 80rpx;
    z-index: 10;
}

.icon_goods image {
    width: 40rpx;
    height: 40rpx;
    display: block;
    margin: 4rpx auto 0;
    line-height: 100%;
}

.icon_goods text {
    line-height: 100%;
}

.hotkey {
    padding: 46rpx 40rpx 0;
}

.hotkey_item {
    background: #eee;
    display: inline-block;
    margin: 0 18rpx 20rpx 0;
    padding: 0 20rpx 0;
    text-align: center;
    font-size: 26rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #333;
    border-radius: 8rpx;
}

.xxline image {
    border-radius: 6rpx;
    background: #E0E0E0;
}

.xxline {
    margin: 0 0 0 40rpx;
}

.xx1 {
    position: relative;
    display: inline-block;
    width: 355rpx;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #ddd;
    text-align: center;
}

.xx1_img {
    display: block;
    width: 315rpx;
    height: 315rpx;
}

.xx1 .r41:after {
    width: 315rpx;
    height: 315rpx;
}

.xx1_1 {
    line-height: 34rpx;
    font-size: 34rpx;
    color: #111;
    padding: 20rpx 40rpx 0 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.xx2 {
    display: block;
    padding: 20rpx 30rpx 20rpx 0;
    border-bottom: 1rpx solid #ddd;
}

.xx2:after {
    clear: both;
    content: ' ';
    display: block;
    height: 0;
    overflow: hidden;
    visibility: hidden;
}

.xx2_img {
    display: block;
    width: 216rpx;
    height: 216rpx;
    float: left;
    margin: 0 10rpx 0 0;
}

.xx2_1 {
    font-size: 36rpx;
    color: #111;
    padding: 0 10rpx 20rpx 0;
}

.xx2_2 {
    line-height: 100%;
    font-size: 28rpx;
    color: #888;
    padding: 0 10rpx 20rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.xx2_3 {
    line-height: 100%;
    clear: both;
    font-size: 24rpx;
    color: #888;
    padding: 20rpx 10rpx 0 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.xx3 {
    display: block;
    padding: 20rpx 40rpx 20rpx 0;
    border-bottom: 1rpx solid #ddd;
}

.xx3_img {
    display: block;
    width: 670rpx;
    height: auto;
    margin: 0 10rpx 0 0;
    position: relative;
}

.xx3_1 {
    font-size: 36rpx;
    color: #111;
    padding: 0 0 20rpx 0;
}

.xx3_2 {
    line-height: 100%;
    font-size: 28rpx;
    color: #888;
    padding: 0 0 20rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.xx3_3 {
    line-height: 100%;
    clear: both;
    font-size: 24rpx;
    color: #888;
    padding: 20rpx 0 0 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}