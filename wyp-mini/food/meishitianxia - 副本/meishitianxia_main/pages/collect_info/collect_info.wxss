.collect_t {
    font-size: 44rpx;
    font-weight: 700;
    padding: 0 40rpx;
}

.collect_info_u {
    padding: 40rpx;
}

.collect_info_img_u {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background: url(http://static.meishichina.com/u2/res/n.jpg) no-repeat center/80rpx 80rpx;
}

.collect_info_nu {
    float: left;
    border-radius: 50%;
    margin: 0 10px 0 0;
    position: relative;
}

.collect_info_time {
    font-size: 22rpx;
    padding-top: 6rpx;
    color: #999;
}

.collect_info_nu2 {
    font-size: 30rpx;
    margin: 5rpx 0;
    display: inline;
}

.collect_info_nu .vip_icon {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 56rpx;
    left: 54rpx;
}

.event_index {
    font-size: 32rpx;
    line-height: 50rpx;
    padding: 0 40rpx;
    text-align: justify;
}

.event_show {
    padding: 0 40rpx 20rpx;
    font-size: 30rpx;
    color: #ccc;
    text-align: right;
}

.event_show text {
    vertical-align: middle;
}

.event_show image {
    height: 48rpx;
    width: 48rpx;
}

.height1 {
    overflow: hidden;
    height: 150rpx;
}

.colist {
    padding: 0 40rpx;
}

.colist_item {
    padding: 0 0 40rpx 0;
    position: relative;
    transition: all .3s ease-in-out;
}

.colist_i {
    width: 100%;
    height: 469rpx;
    overflow: hidden;
    border-radius: 6rpx;
    position: relative;
}

.colist_edit {
    position: absolute;
    z-index: 1;
    right: 20rpx;
    top: 20rpx;
    font-size: 24rpx;
    background: rgba(0,0,0,0.7);
    color: #fff;
    border-radius: 6rpx;
    padding: 6rpx 12rpx;
}

.colist_img {
    width: 100%;
    height: 670rpx;
    margin-top: -100rpx;
}

.r41:after {
    content: ' ';
    position: absolute;
    display: block;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url("http://static.meishichina.com/v6/img/lib/play.png") no-repeat scroll center center / 100rpx 100rpx;
}

.colist_detail {
    padding: 20rpx 0;
}

.colist_t {
    line-height: 40rpx;
    font-size: 36rpx;
    color: #111;
}

.colist_n {
    float: right;
    font-size: 24rpx;
    color: #888;
    line-height: 40rpx;
}

.colist_unote {
    clear: both;
    color: #ffabab;
    font-size: 28rpx;
}

.colist_unote image {
    width: 32rpx;
    height: 32rpx;
}

.colist_unote text {
    vertical-align: middle;
}

.mask_share {
    opacity: 1;
    transform: scale3d(1,1,1);
    transition: all .3s;
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,0.6);
}

.mask_dialog {
    width: 72%;
    padding: 0 4%;
    border-radius: 12px;
    position: fixed;
    background: #fff;
    z-index: 1001;
    left: 10%;
    top: 10%;
    text-align: center;
}

.mask_dialog text {
    display: block;
    font-size: 24rpx;
    padding: 20rpx 0;
}

.mask_dialog view {
    font-size: 34rpx;
    color: #ff6767;
    padding: 30rpx 0;
}

.mask_dialog textarea {
    background: #e4e4e4;
    text-align: left;
    font-size: 28rpx;
    padding: 4rpx 0;
    width: 100%;
    height: 150rpx;
}