.pai_info {
    padding: 0 40rpx;
}

.pai_info_class {
    float: right;
    border: 1px solid #666;
    color: #666;
    border-radius: 8rpx;
    font-size: 24rpx;
    padding: 5rpx 10rpx;
    margin: 15rpx 0 0;
}

.pai_info_u {
    padding: 20rpx 0;
}

.pai_info_img_u {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background: url(http://static.meishichina.com/u2/res/n.jpg) no-repeat center/80rpx 80rpx;
}

.pai_info_nu {
    float: left;
    border-radius: 50%;
    margin: 0 10px 0 0;
    position: relative;
}

.pai_info_time {
    font-size: 22rpx;
    padding-top: 6rpx;
    color: #999;
}

.pai_info_nu2 {
    font-size: 30rpx;
    margin: 5rpx 0;
    display: inline;
}

.pai_info_lz {
    font-size: 20rpx;
    border: 1rpx solid #ff6767;
    border-radius: 6rpx;
    color: #ff6767;
    line-height: 26rpx;
    padding: 0rpx 5rpx;
    display: inline-block;
    margin: 0 0 0 10rpx;
    vertical-align: middle;
}

.pai_info_t {
    padding: 10rpx 0 20rpx 0;
    font-size: 32rpx;
    line-height: 170%;
}

.pai_info_red {
    color: #ff6767;
}

.pai_info_tip {
    font-size: 22rpx;
    border: 1rpx solid #ff6767;
    border-radius: 6rpx;
    margin: -5rpx 10rpx 0 0;
    color: #ff6767;
    line-height: 28rpx;
    font-weight: 400;
    padding: 2rpx 6rpx;
    display: inline-block;
    vertical-align: middle;
}

.pia_info_pic {
    padding: 0 40rpx;
}

.pia_info_pic image {
    width: 100%;
    margin: 0 0 20rpx 0;
    border-radius: 6rpx;
}

.pai_info_nu .vip_icon {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 56rpx;
    left: 54rpx;
}

.vote {
    border-radius: 8rpx;
    margin: 0 40rpx 20rpx;
    background: #F2F2F2;
    border: 1rpx solid #ddd;
}

.vote_title {
    font-size: 34rpx;
    line-height: 150%;
    padding: 40rpx 40rpx 10rpx;
    font-weight: 700;
}

.vote_title .tip {
    font-size: 28rpx;
    font-weight: 100;
}

.optionlist {
    padding: 0 0 0 40rpx;
}

label {
    display: block;
    padding: 20rpx 20rpx 20rpx 0;
    border-bottom: 1rpx solid #ddd;
    font-size: 32rpx;
}

label:last-child {
    border-bottom: none;
}

label .option_item {
    display: table;
}

.option_item .red {
    color: #ff6767;
}

.option_item view {
    display: table-cell;
    vertical-align: middle;
    line-height: 150%;
}

.option_item view:nth-child(1) {
    min-width: 60rpx;
}

.prog {
    text-align: right;
    font-size: 24rpx;
    color: #999;
    padding: 0 0 0 60rpx;
    height: 16px;
    line-height: 16px;
}

.prog view {
    width: 360rpx;
    float: left;
    margin: 5px 0 0 0;
}

.percent {
    display: inline-block;
    width: 80rpx;
}

radio {
    vertical-align: middle;
    display: table-cell;
    transform: scale(0.8);
}

checkbox {
    vertical-align: middle;
    display: table-cell;
    transform: scale(0.8);
}

.vote button {
    margin: 0;
    border-top: 1rpx solid #ddd;
    border-radius: 0;
    color: #999;
}

.vote button.red {
    color: #ff6767;
}

.button-hover[plain] {
    border-color: #ddd;
}

.digest {
    background: url(http://static.meishichina.com/img/weixin/digest.png) no-repeat scroll 170rpx 40rpx /140rpx 140rpx;
}

.refresh {
    text-align: center;
    color: #999;
    font-size: 28rpx;
    height: 0rpx;
    overflow: hidden;
    transition: all .3s ease-in;
    opacity: 0;
    line-height: 38rpx;
    width: 100%;
    position: absolute;
    left: 0;
}

.refresh_show {
    height: 80rpx;
    opacity: 1;
}

.refresh_show_padding {
    padding-top: 80rpx;
}

.main {
    position: relative;
    transition: all .4s linear;
}