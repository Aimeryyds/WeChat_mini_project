.vlist {
    padding: 0 40rpx 10rpx;
}

.vlist_item {
    position: relative;
    clear: both;
    padding: 20rpx 0;
}

.vlist_c {
    width: 670rpx;
    height: 377rpx;
    overflow: hidden;
    border-radius: 10rpx;
}

.vlist_img {
    width: 670rpx;
    height: 377rpx;
}

.vlist_detail {
    position: absolute;
    color: #fff;
    width: 670rpx;
    top: 20rpx;
    padding: 20rpx 0;
    border-radius: 10rpx 10rpx 0 0;
    background: linear-gradient(top,rgba(0,0,0,.6),rgba(0,0,0,0));
}

.vlist_t {
    font-size: 36rpx;
    padding: 0 20rpx;
}

.vlist_m {
    font-size: 28rpx;
    padding: 4rpx 20rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.vlist_detail2 {
    height: 36rpx;
    position: absolute;
    color: #eee;
    width: 670rpx;
    bottom: 20rpx;
    padding: 20rpx 0;
    border-radius: 0 0 10rpx 10rpx;
    background: linear-gradient(top,rgba(0,0,0,0),rgba(0,0,0,.6));
}

.vlist_b1 {
    line-height: 36rpx;
    font-size: 36rpx;
    float: left;
    margin: 0 0 0 20rpx;
}

.vlist_b2 {
    font-size: 22rpx;
    float: right;
    margin: 10rpx 20rpx 0 0;
}

.vlist .r41:after {
    content: ' ';
    position: absolute;
    display: block;
    top: 20rpx;
    left: 0;
    width: 670rpx;
    height: 377rpx;
    background: url(http://static.meishichina.com/v6/img/lib/play.png) no-repeat scroll center center/100rpx 100rpx;
}

.vlist .time {
    position: absolute;
    background: rgba(0,0,0,.7);
    border-radius: 10rpx;
    color: #fff;
    font-size: 22rpx;
    height: 26rpx;
    line-height: 26rpx;
    padding: 4rpx 14rpx;
    right: 30rpx;
    bottom: 72rpx;
}