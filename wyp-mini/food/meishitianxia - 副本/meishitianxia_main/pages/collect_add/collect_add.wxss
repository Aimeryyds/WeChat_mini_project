.collect_add {
    padding: 0 0 0 40rpx;
}

.collect_add_input {
    padding: 20rpx 0;
    font-size: 30rpx;
    border-bottom: 1rpx solid #ddd;
}

.collect_add_textarea {
    padding: 20rpx 0;
    font-size: 30rpx;
    min-height: 240rpx;
    margin: 0;
    width: 100%;
}

.collect_add_btn {
    margin-top: 40rpx;
    border: 1rpx solid #ff6767;
    background: #ff6767;
    color: #fff;
}

.graybg {
    background: #ccc;
    border: 1rpx solid #ccc;
}

.collect_del {
    color: #999;
    width: 50%;
    margin: 20rpx auto;
    font-size: 24rpx;
    text-align: center;
}