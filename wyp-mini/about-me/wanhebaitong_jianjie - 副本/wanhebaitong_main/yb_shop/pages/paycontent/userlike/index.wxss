page,view,text,image,button {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    font-size: 16px;
}

.nobuy {
    width: 100%;
    text-align: center;
    margin-top: 20px;
}

.line {
    width: 100%;
    background: #eeeeee;
    height: 1rpx;
}

.same {
    display: flex;
    align-items: center;
    padding: 20rpx 12rpx;
    box-sizing: border-box;
    border-top: 1rpx solid #eeeeee;
}

.same .cover {
    width: 40vw;
    height: 23vw;
    border-radius: 22rpx;
    overflow: hidden;
    position: relative;
}

.same .cover .img {
    width: 100%;
    height: 100%;
    border-radius: 22rpx;
}

.same .info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 22rpx;
}

.same .info .title {
    color: #333333;
    font-size: 13px;
    margin-bottom: 22rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.same .info .num {
    display: flex;
    align-items: center;
    color: #818181;
    font-size: 12px;
}

.same .info image {
    width: 20rpx;
    height: 20rpx;
    margin-right: 8rpx;
}