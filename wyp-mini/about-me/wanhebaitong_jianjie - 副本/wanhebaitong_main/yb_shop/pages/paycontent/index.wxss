page {
    background: #ffffff;
    padding-top: 90rpx;
}

.case_li {
    margin: 0.5rem;
    background: #fff;
    border-radius: 0.2rem;
    overflow: hidden;
    box-shadow: 0px 0px 8px #ccc;
}

.case_info {
    font-size: 0.7rem;
    color: #939393;
    position: relative;
    height: 2.2rem;
    line-height: 2.2rem;
    padding-left: 0.5rem;
}

.case_more {
    position: absolute;
    right: 0.5rem;
    top: 0.1rem;
}

.case_pic image {
    width: 100%;
    height: 10.5rem;
}

.load_info {
    height: 3rem;
    line-height: 3rem;
    text-align: center;
    font-size: 0.7rem;
    color: #666;
}

.prompt_box {
    padding: 2rem;
    text-align: center;
}

.prompt_box text {
    font-size: 0.8rem;
    color: #666;
    display: block;
    margin-top: 0.5rem;
}

.case_tit text {
    display: inline-block;
    background: #f22424;
    color: #fff;
    padding: 6rpx 22rpx 0px 22rpx;
    border-radius: 8rpx;
    margin-right: 10rpx;
    font-size: 18rpx;
    margin-top: -1rem;
}

.case_tit {
    height: 3.2rem;
    line-height: 3.2rem;
    padding-left: 0.5rem;
    text-align: center;
    padding-right: 0.5rem;
    font-size: 0.9rem;
    color: #2f2f2f;
}

.fui-loading.line .text,.fui-loading.empty .text {
    padding: 0 20rpx;
    background: #f2f2f2;
    position: relative;
    text-align: center;
    z-index: 2;
    font-size: 0.7rem;
}

.advan_li {
    height: 6rem;
    padding-left: 6rem;
    position: relative;
}

.advan_li:after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 0;
    border-bottom: 2rpx solid #e6e6e6;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}

.advan_li image {
    margin-left: -5.5rem;
    width: 5rem;
    height: 5rem;
    margin-top: 0.6rem;
    float: left;
}

.advan_li:first-child {
    border-top: 1px solid #e6e6e6;
}

.advan_info {
    float: left;
    margin-right: 1rem;
}

.advan_tit {
    font-size: 1.1rem;
    margin-top: 0.7rem;
    line-height: 1.6rem;
    max-height: 1.6rem;
    overflow: hidden;
}

.advan_memo {
    font-size: 0.8rem;
    line-height: 1.3rem;
    color: #9e9e9e;
    max-height: 1.3rem;
    overflow: hidden;
}

.load_info {
    height: 3rem;
    line-height: 3rem;
    text-align: center;
    font-size: 0.8rem;
    color: #666;
}

.prompt_box {
    padding: 2rem;
    text-align: center;
}

.prompt_box text {
    font-size: 0.8rem;
    color: #666;
    display: block;
    margin-top: 0.5rem;
}

.class_box {
    background: #fff;
    box-sizing: border-box;
    height: 90rpx;
    border-top: 1rpx solid #f4f4f4;
    display: flex;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    background: #ffffff;
    z-index: 999999;
    width: 100%;
}

.class_box scroll-view {
    box-sizing: border-box;
}

.class_box .cate {
    box-sizing: border-box;
    margin: 0 12px 0 12px;
    display: inline-block;
}

.class_box .cate text {
    font-size: 30rpx;
    color: #999999;
}

.class_box .cate.active text {
    color: #e02e24;
    font-weight: bold;
}

.class_view {
    padding: 10rpx 30rpx;
}

.class_view .class_li {
    width: 150rpx;
    background: #f6f6f6;
    border-radius: 8rpx;
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
    float: left;
    margin: 10rpx;
}

.class_view .class_li text {
    color: #646464;
    font-size: 28rpx;
    display: block;
    height: 60rpx;
    line-height: 60rpx;
}

.class_view .class_li.active {
    background: #646464;
}

.class_view .class_li.active text {
    color: #fff!important;
    font-size: 28rpx;
    display: block;
    height: 60rpx;
    line-height: 60rpx;
}

.index_advan_list {
    background: #fff;
}

.product_list .item_2 {
    overflow: hidden;
}

.product_list .item_2 .product_img {
    height: calc((50vw - 18px) * 0.57)!important;
    border-radius: 26rpx;
}

.product_list .product_item .title {
    text-align: left;
    font-size: 28rpx;
    padding: 0 10px 12px 10px;
}

.product_item {
    position: relative;
    overflow: hidden;
    box-sizing: border-box;
}

.lock {
    position: absolute;
    left: 6px;
    top: 0;
    right: 6px;
    bottom: 12px;
    box-sizing: border-box;
    border-radius: 26rpx;
    background: #424242;
    opacity: 0.6;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 999;
}

.lock image {
    width: 60rpx;
    height: 60rpx;
}

.views {
    position: absolute;
    right: 24rpx;
    top: 12rpx;
    box-sizing: border-box;
    padding: 6rpx 10rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    color: #ffffff;
    font-size: 20rpx;
    background: rgba(39,39,39,0.6);
    border-radius: 60rpx;
    min-width: 80rpx;
}

.views .imgs {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20rpx;
    height: 20rpx;
    margin-right: 8rpx;
}

.views image {
    width: 20rpx;
    height: 20rpx;
}

.views text {
    flex-wrap: nowrap;
    flex-shrink: 0;
}