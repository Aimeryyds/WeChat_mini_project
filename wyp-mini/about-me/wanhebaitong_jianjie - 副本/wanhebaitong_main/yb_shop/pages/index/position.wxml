<view bindtap="navigate" class="contact_tit" data-lat="{{item.lat}}" data-lng="{{item.lon}}" data-name="{{item.name}}" style="background:{{item.bg_color}}" wx:if="{{item.show_type==1}}">
    <view style="width:48px;height:24px;position:relative;">
        <view style="position: absolute;z-index: 999;width: 24px;height: 24px;top: 0;right: 0;background: {{item.bg_color}};"></view>
        <view style="float:right; background: url(data:image/png;base64,) no-repeat;background-size: 24px 24px;width:24px;height:24px;filter: drop-shadow({{item.text_color}} -20px 0px);"></view>
    </view>
    <text class="text01" style="color: {{item.text_color}}">{{item.name}}</text>
    <view class="cl"></view>
</view>
<map showLocation controls="{{controls}}" id="map" latitude="{{item.lat}}" longitude="{{item.lon}}" markers="{{markers}}" polyline="{{polyline}}" scale="14" style="width: 100%; height: 12rem;" wx:if="{{item.show_type==2}}"></map>
