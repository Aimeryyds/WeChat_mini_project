<view class="fui-searchbar bar {{item.style_type==1?'search_fixed':''}}" style="background:{{item.bg_color}}">
    <view class="searchbar">
        <navigator class="weui-search-bar__form" hoverClass="none" url="/yb_shop/pages/goods/index/index?fromsearch=1&key={{item.default}}">
            <view class="search-input" style="background:{{item.bd_color}}">
                <view class="search_box">
                    <text style="color:{{item.text_color}}">{{item.hot_word!=''?item.hot_word:'商品搜索'}}</text>
                    <view style="width:18px;height:18px;">
                        <view style="position: absolute; background: url(data:image/png;base64,) no-repeat;background-size: 18px 18px;right: -17px;width:18px;height:18px;filter: drop-shadow({{item.text_color}} -30px 0px);"></view>
                    </view>
                </view>
            </view>
        </navigator>
    </view>
</view>
<view style="height:2.7rem;line-height:2.7rem;" wx:if="{{item.style_type==1}}"></view>
