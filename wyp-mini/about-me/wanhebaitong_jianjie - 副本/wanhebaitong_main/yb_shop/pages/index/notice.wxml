<view class="index-hot" style="background:{{item.bg_color}};">
    <view class="weui-flex">
        <view class="flex-head-item item-hotdot">
            <image class="hotdot" src="{{item.imgurl}}"></image>
        </view>
        <view class="weui-flex__item">
            <swiper autoplay="false" class="index-adcs-sqiper index-notification-swiper">
                <swiper-item class="scroll_view_border">
                    <view class="notification-navigoter srcoll_view" hoverClass="none" style="color:{{item.text_color}};height:76rpx; line-height:76rpx;">{{item.content}}</view>
                </swiper-item>
            </swiper>
        </view>
    </view>
</view>
