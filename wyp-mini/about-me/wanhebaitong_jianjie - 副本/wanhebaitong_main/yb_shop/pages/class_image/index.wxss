.class_list {
    padding-left: 20px;
    padding-right: 0px;
    padding-top: 16px;
}

.class_list navigator {
    width: 50%;
    float: left;
}

.class_li {
    width: 90%;
    background: none;
    display: block;
    box-sizing: border-box;
    position: relative;
    height: auto;
    overflow: hidden;
    margin-bottom: 50rpx;
    text-align: center;
}

.class_li image {
    width: 100%;
    height: 100%;
    border-radius: 0.4rem;
}

.class_li text {
    display: block;
    color: #212121;
    margin-right: 0.8rem;
    overflow: hidden;
    margin-top: 0.4rem;
    font-size: 0.8rem;
    height: 1.4rem;
    line-height: 1.4rem;
    text-align: center;
}