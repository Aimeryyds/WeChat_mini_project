.comment_score,.comment_count {
    text-align: center;
}

.comment_score text {
    color: #f0323c;
}

.comment_score text.big_font {
    font-size: 80rpx;
}

.comment_count text {
    color: #666;
    font-size: 28rpx;
}

.comment_tit {
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
}

.comment_list {
    position: relative;
    padding-left: 150rpx;
    padding-right: 30rpx;
    padding-top: 10rpx;
    padding-bottom: 30rpx;
}

.comment_list:before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 0;
    border-top: 2rpx solid #e6e6e6;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}

.user_info {
    position: relative;
}

.user_info text,.user_info view {
    display: inline-block;
    font-size: 28rpx;
}

.star_icon5,.star_icon {
    width: 250rpx;
    height: 50rpx;
