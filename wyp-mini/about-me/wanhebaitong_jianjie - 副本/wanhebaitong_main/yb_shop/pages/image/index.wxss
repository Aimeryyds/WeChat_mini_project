page {
    background: #f2f2f2;
}

.photo_list {
    height: auto;
    overflow: hidden;
    background: #f2f2f2;
    justify-content: space-between;
    display: flex;
    flex-wrap: wrap;
    margin: 30rpx;
}

.photo_items {
    width: 48%;
    background: none;
    display: block;
    box-sizing: border-box;
    position: relative;
    height: auto;
    overflow: hidden;
    margin-bottom: 30rpx;
    border-radius: 5rpx;
}

.photo_list .photo_items .image {
    float: none;
    width: 100%;
    height: 0;
    overflow: hidden;
    margin: 0;
    padding-bottom: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    background-color: #fff;
}

.fui-loading.line .text,.fui-loading.empty .text {
    padding: 0 20rpx;
    background: #f2f2f2;
    position: relative;
    text-align: center;
    z-index: 2;
    font-size: 0.7rem;
}