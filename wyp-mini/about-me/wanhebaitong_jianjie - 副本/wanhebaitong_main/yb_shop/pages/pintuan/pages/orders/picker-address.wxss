.flex-grow-1 {
    background-color: #08c303;
    color: #fff;
}

.no-address {
    line-height: 182rpx;
}

.no-address image {
    width: 120rpx;
    height: 110rpx;
}

.address-info {
    padding: 40rpx 24rpx;
    border-bottom: 1px solid #ededed;
    font-size: 30rpx;
    position: relative;
    background-color: #ffffff;
}

.address-info>view {
    display: inline-block;
}

.address-info .btn {
    display: inline-block;
    border: 1px solid #58595b;
    border-radius: 10rpx;
    line-height: 50rpx;
    width: 90rpx;
    font-size: 30rpx;
    color: #58595b;
}

.address-info image {
    width: 38rpx;
    height: 28rpx;
}

.address-group .row {
    margin-bottom: 20rpx;
}

.default,.option {
    line-height: 80rpx;
}

.check {
    color: #3f3f3f;
}

.checked {
    color: #e02e24;
}

.option {
    color: #949494;
    font-size: 28rpx;
}

.option text {
    margin-left: 10rpx;
    margin-right: 24rpx;
}

.mt-24 {
    margin-top: 24rpx;
    max-width: 600rpx;
}

.option view {
    display: inline-block;
}

.default image {
    width: 28rpx;
    height: 28rpx;
    margin: 0 24rpx;
}

.option image {
    width: 26rpx;
    height: 28rpx;
}

.button-group>view {
    display: inline-block;
}

.add-btn {
    width: 336rpx;
    line-height: 90rpx;
    border-radius: 10rpx;
    color: #fff;
    font-size: 32rpx;
    border-radius: 8rpx;
}

.add-btn image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 8rpx;
    margin-bottom: 5rpx;
}

.add-by-user {
    background-color: #e02e24;
    width: 100%;
    border-radius: 0;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9999;
    height: 100rpx;
    line-height: 100rpx;
}

.add-by-wx {
    background-color: #08c303;
    margin-left: 20rpx;
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    background-color: #000;
    opacity: 0.3;
    overflow: hidden;
}

.modal {
    position: fixed;
    top: 108rpx;
    left: 0;
    z-index: 111;
    background-color: #fff;
    border-radius: 18rpx;
    margin-left: 29rpx;
    margin-right: 29rpx;
}

.modal-close image {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: -6rpx;
    right: -6rpx;
}

.modal-title {
    line-height: 100rpx;
    border-bottom: 1px solid #ededed;
    font-size: 36rpx;
}

.modal-body .row {
    border-bottom: 1px solid #ededed;
}

.modal-body .ipt {
    display: inline-block;
    padding-left: 36rpx;
    height: 90rpx;
    width: 312rpx;
}

.modal-body .ipt2 {
    padding-left: 36rpx;
    padding-right: 36rpx;
    height: 90rpx;
}

.modal-body .ipt.userName {
    border-right: 1px solid #ededed;
}

.modal-body .address-select {
    display: inline-block;
    line-height: 90rpx;
    width: 218rpx;
    text-align: center;
}

.modal .btn {
    display: inline-block;
    width: 594rpx;
    line-height: 86rpx;
    background-color: #e02e24;
    color: #fff;
    margin: 30rpx;
    border-radius: 10rpx;
    font-size: 36rpx;
}

.picker-item {
    z-index: 111;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 484rpx;
}

.picker-header {
    background-color: #f5f5f5;
    line-height: 114rpx;
    text-align: right;
    padding-right: 56rpx;
}

.picker-header-title {
    font-size: 36rpx;
    color: #09bb07;
}

.picker-item picker-view {
    width: 100%;
    height: 300px;
    text-align: center;
}

.add-right {
    position: absolute;
    top: 0;
    right: 20rpx;
    padding-top: 65rpx;
    padding-bottom: 65rpx;
}

.save-i image {
    padding-bottom: 10rpx;
    width: 30rpx;
    height: 30rpx;
    font-size: 26rpx;
}

.save-i text {
    color: #3f3f3f;
}

.info-top {
    width: 100%;
}

.container {
    margin-bottom: 100rpx;
}