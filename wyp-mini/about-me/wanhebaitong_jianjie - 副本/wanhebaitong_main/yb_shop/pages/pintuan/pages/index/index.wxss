@import "../../../../../wuBaseWxss/1.wxss";

.kaituan {
    background-color: #fff;
    width: 100%;
    margin-top: 0rpx;
    margin-bottom: 30rpx;
}

.scroll-view-x {
    background-color: #fff;
    white-space: nowrap;
}

.scroll-view-x .scroll-view-item {
    display: inline-block;
    margin-left: 56rpx;
    line-height: 38px;
}

swiper {
    height: 304rpx;
}

.user_no {
    color: #ccc;
    margin-left: 20rpx;
}

.topic-group {
    background-color: #fff;
    padding: 20rpx 0;
}

.topic-group image {
    width: 80rpx;
    height: 80rpx;
    border: 1px solid #fff;
}

.topic-item {
    display: inline-block;
    width: 25%;
    text-align: center;
    margin-bottom: 20rpx;
    margin-top: 10rpx;
}

.topic-item view {
    text-align: center;
    margin-top: 10rpx;
}

.goods-item {
    background-color: #fff;
    width: 95%;
    margin: 10rpx 10px;
    border-radius: 15rpx;
    overflow: hidden;
}

.goods-item image {
    width: 100%;
    height: 350rpx;
    margin: 0;
}

.goods-item .goods-title {
    line-height: 48rpx;
    padding: 18rpx 24rpx;
    font-size: 32rpx;
    max-height: 86rpx;
    overflow: hidden;
}

.goods-img {
    background-size: 98% 98%;
    background-repeat: no-repeat;
}

.goods-img image {
    height: 99rpx;
    width: 94%;
    margin-left: 20rpx;
    display: inline-block;
}

.goods-info {
    width: 100%;
}

.goods-item .goods-price {
    color: #ff1d1c;
    font-size: 42rpx;
    position: relative;
    margin-left: 30rpx;
}

.goods-item .goods-sale {
    color: #ccc;
    font-size: 25rpx;
    margin-left: 10rpx;
    position: relative;
}

.goods-mprice {
    margin-left: 20rpx;
    color: #696969;
    text-decoration: line-through;
    position: relative;
}

.child-group {
    padding-bottom: 8rpx;
}

.child-cate-item {
    width: 25%;
    text-align: center;
    display: inline-block;
    padding: 24rpx 0;
}

.child-cate-item image {
    width: 64rpx;
    height: 64rpx;
}

.icon {
    display: inline-block;
}

.btn {
    position: relative;
    background-color: #ff4544;
    color: #fff;
    border-radius: 10rpx;
    display: inline-block;
    line-height: 81rpx;
    width: 180rpx;
}

.btn image {
    width: 10rpx;
    height: 18rpx;
    margin-left: 16rpx;
    margin-top: -6rpx;
}

.group-userImg {
    display: inline-block;
    margin-right: 20rpx;
    position: relative;
}

.group-userImg image {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    position: absolute;
    left: -60rpx;
    top: -40rpx;
}

.two {
    left: -95rpx!important;
    z-index: 111;
}

.goods-item-2 {
    width: 47%;
    display: inline-block;
    margin: 10rpx 12rpx 10rpx 11rpx;
    border-radius: 10rpx;
}

.goods-item-2 image {
    width: 330rpx;
    height: 330rpx;
    padding: 12rpx 11rpx 0rpx 11rpx;
}

.goods-item-2 .goods-title {
    font-size: 22rpx;
    margin: 20rpx;
    height: 32rpx;
    overflow: hidden;
}

.goods-item-2 .goods-price {
    color: #e02e24;
    font-size: 32rpx;
    display: inline-block;
    padding-left: 24rpx;
}

.goods-item-2 .goods-price>text {
    font-size: 20rpx!important;
}

.goods-item-2 .goods-sale {
    margin-right: 24rpx;
    color: #a4a4a4;
}

.title-bar {
    position: relative;
    border-bottom: 1rpx solid #eee;
    height: 100rpx;
}

.title-bar image {
    width: 38rpx;
    height: 38rpx;
}

.title-bar .title {
    margin: 0 40rpx;
}

.title-bar .title-line {
    display: inline-block;
    height: 2rpx;
    width: 30rpx;
    background: #bbb;
}

.title-bar .title image {
    margin-right: 24rpx;
}

.title-bar navigator {
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    padding: 0 20rpx;
}

.title-bar navigator image {
    width: 12rpx;
    height: 22rpx;
    margin-left: 16rpx;
}

.jingxuan-list {
    white-space: nowrap;
    display: block;
    font-size: 0;
    padding: 0 24rpx 24rpx;
}

.jingxuan-list navigator {
    display: inline-block;
    font-size: 0;
}

.jingxuan-list navigator image {
    height: 300rpx;
    width: 600rpx;
    margin-right: 20rpx;
}

.jingxuan-list navigator:last-child image {
    margin-right: 0;
}