.index_top_nav image {
    width: 80rpx;
    height: 80rpx;
}

.index_top_nav {
    padding-bottom: 10rpx;
    padding-top: 20rpx;
    border-bottom: 8rpx solid #f2f2f2;
    min-height: 145rpx;
    overflow: hidden;
}

.index_top_nav>view {
    width: 20%;
    height: 130rpx;
    text-align: center;
    font-size: 27rpx;
    display: block;
    float: left;
    padding-bottom: 20rpx;
}

.index_nav_name {
    height: 50rpx;
    line-height: 50rpx;
    color: #333;
    font-size: 0.8rem;
}

.swiper-tab {
    width: 100%;
    border-bottom: 2rpx solid #fff;
    text-align: center;
    line-height: 80rpx;
}

.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    width: 33.33%;
    color: #777777;
}

.on {
    color: #ed504e;
    background: url(http://ddfwz.sssvip.net/asmce/kanjia/index_nav_bg.png) bottom center no-repeat;
    background-size: 2rem 0.2rem;
}

.swiper-box {
    display: block;
    width: 100%;
    overflow: hidden;
}

.swiper-box swiper-item {
}

.index_info_li {
    border-top: 8rpx solid #f2f2f2;
}

.index_info_pic {
    width: 100%;
    height: 11rem;
    position: relative;
}

.index_info_count {
    position: absolute;
    text-align: center;
    background: rgba(0,0,0,0.5);
    right: 1rem;
    top: 0.8rem;
    padding: 0.3rem 0.8rem;
    border-radius: 0.2rem;
}

.index_info_count text {
    color: #fff;
    font-size: 0.8rem;
}

.price_left .price01,.price_left .price02 {
    margin-left: 0.2rem;
}

.index_info_uface {
    margin-left: 0.5rem;
    margin-right: 0.5rem;
}

.index_info_uface .image {
    width: 1.6rem;
    height: 1.6rem;
    border-radius: 50%;
    float: left;
    border: 6rpx solid #fff;
    margin-right: -0.35rem;
}

.index_info_uface .user_no {
    height: 1.8rem;
    line-height: 1.8rem;
    color: #797979;
    padding-left: 0.5rem;
    font-size: 0.8rem;
    float: left;
}

.buy_btn_none {
    height: 2.5rem;
    line-height: 2.5rem;
    background: #7a7a7b;
    color: #fff;
    font-size: 0.9rem;
    text-align: center;
    border-radius: 1.25rem;
    width: 8rem;
    box-shadow: 2px 6px 10px #e4e4e4;
}

.down_arrow {
    background: url(http://ddfwz.sssvip.net/asmce/kanjia/down_arrow.jpg) center center no-repeat;
    background-size: 1.2rem 1.2rem;
    width: 1.2rem;
    height: 1.2rem;
    display: inline-block;
}

.none_info_join {
    margin: 1.5rem auto;
    width: 12rem;
    text-align: center;
    height: 2.2rem;
    line-height: 2.2rem;
    border: 1px solid #e03023;
    border-radius: 1.1rem;
}

.none_info_join text {
    color: #e03023;
    font-size: 30rpx;
}

.price_left .price02 {
    color: #ed4f4e;
    font-size: 0.8rem;
    padding-top: 0.5rem;
}

.price_left .price02 .price01 {
    font-size: 0.8rem;
    color: #909090;
}