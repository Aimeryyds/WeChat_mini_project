page {
    background: #f2f2f2;
}

.my_record_li {
    padding-top: 0.7rem;
    background: #fff;
    margin-bottom: 16rpx;
}

.my_record_tit {
    height: 4.8rem;
    padding-left: 4rem;
    margin: 0 0.8rem;
    border-bottom: 1px dashed #eeeeee;
}

.my_record_tit image {
    width: 4rem;
    height: 4rem;
    float: left;
    margin-left: -4rem;
}

.my_record_tit text {
    display: block;
    font-size: 0.9rem;
    margin-left: 0.6rem;
    margin-right: 0.5rem;
    line-height: 1.4rem;
    max-height: 2.4rem;
    overflow: hidden;
}

.my_record_price {
    padding-top: 0.3rem;
    border-bottom: 1px dashed #eeeeee;
    padding-bottom: 0.3rem;
}

.my_record_price .price_li {
    float: left;
    width: 25%;
    height: 3.5rem;
    text-align: center;
    border-left: 1px dashed #eeeeee;
    box-sizing: border-box;
}

.my_record_price .price_li .y_color {
    margin-top: 0.5rem;
}

.my_record_price .price_li:first-child {
    border-left: 0;
}

.my_record_price .price_li text {
    display: block;
    font-size: 0.9rem;
    height: 1.3rem;
    line-height: 1.3rem;
}

.my_record_state {
    height: 2.4rem;
    line-height: 2.2rem;
    border-bottom: 1px dashed #eeeeee;
}

.my_record_state text {
    font-size: 0.9rem;
    margin-left: 0.8rem;
}