.contact_li {
    line-height: 3rem;
    font-size: 0.8rem;
    margin: 0 auto;
    position: relative;
    width: 96%;
    overflow: hidden;
    height: 3rem;
}

.contact_li:after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 0;
    border-bottom: 2rpx solid #ebebeb;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}

