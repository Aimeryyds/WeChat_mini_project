page {
    background: #fff;
    width: 100%;
}

.top_bg {
    width: 100%;
    background: url(http://ddfwz.sssvip.net/asmce/kanjia/join_bg.jpg) no-repeat center center;
    background-size: cover;
    height: 5rem;
}

.top_bg .top_tit {
    height: 3rem;
    margin-left: 5rem;
    padding-top: 1rem;
}

.top_bg .top_tit text {
    font-size: 0.9rem;
    line-height: 1.5rem;
    color: #fff;
    display: block;
}

.join_f_li {
    height: 5rem;
    padding-left: 0rem;
    background: #fff;
    padding-top: 0.2rem;
}

.join_li {
    height: 3rem;
    line-height: 3rem;
    position: relative;
    font-size: 0.8rem;
    padding-top: 1rem;
}

.join_f_li .shop_logo {
    width: 4rem;
    height: 4rem;
    margin-left: -3.2rem;
    border-radius: 0.2rem;
    float: left;
    margin-top: 0.8rem;
}

.join_f_li .shop_logo image {
    width: 4rem;
    height: 4rem;
    border-radius: 0.2rem;
}

.join_li input {
    height: 2.5rem;
    line-height: 2.5rem;
    font-size: 0.8rem;
}

.join_g_li {
    height: 12.5rem;
    margin-top: 16rpx;
    background: #fff;
}

.join_li_p {
    font-size: 0.8rem;
    position: relative;
    justify-content: center;
    display: flex;
}

.join_li_p text,.join_li text {
    display: block;
    height: 2.5rem;
    line-height: 2.5rem;
    width: 5rem;
    text-align: center;
    margin-left: -5rem;
    float: left;
}

.join_li_p .join_btn_box {
    position: absolute;
    right: 1rem;
    top: 0.35rem;
    height: 1.7rem;
    width: 6rem;
    line-height: 1.7rem;
    z-index: 9999999999;
}

.join_li_p .join_btn_box .join_btn {
    position: relative;
    background: #f8f8f8;
    color: #454545;
    font-size: 0.8rem;
    text-align: center;
    height: 1.7rem;
    width: 6rem;
    line-height: 1.7rem;
}

.join_li_p .join_btn_box .join_btn:after {
    content: "  ";
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    z-index: 1;
    width: 200%;
    height: 200%;
    border: 1px solid #d9d9d9;
    transform-origin: 0 0;
    transform: scale(.5,.5);
    border-radius: 0.5rem;
}

.w45 {
    width: 45%;
    float: left;
    text-align: center;
}

.w10 {
    width: 10%;
    float: left;
    text-align: center;
}

.w100 {
    width: 100%;
    text-align: center;
}

.join_h_li {
    height: 7.5rem;
    margin-top: 16rpx;
    background: #fff;
}

.position_tit {
    height: 1rem;
    line-height: 1rem;
    text-align: center;
    padding-top: 1rem;
}

.position_tit text {
    color: #212121;
    font-size: 1rem;
}

.position_info {
    height: 2.2rem;
    line-height: 2.2rem;
    text-align: center;
    margin: 0 1rem;
    overflow: hidden;
}

.position_info text {
    color: #666;
    font-size: 0.7rem;
}

.position_btn_box {
    width: 10rem;
    height: 2.5rem;
    line-height: 2.5rem;
    margin: 0 auto;
}

.position_btn_box .position_btn {
    height: 2rem;
    line-height: 1.9rem;
    text-align: center;
    width: 3.8rem;
    border-radius: 0.2rem;
    border: 1px solid #999;
    margin: 0 0.5rem;
    float: left;
}

.position_btn_box .position_btn text {
    font-size: 0.9rem;
}

.position_btn_box .position_btn.cur {
    border: 1px solid #ed4f4e;
}

.position_btn_box .position_btn.cur text {
    color: #ed4f4e;
}

.join_i_li {
    height: 5rem;
    margin-top: 16rpx;
    background: #fff;
    padding-left: 5rem;
}

.join_i_li .fac_tit,.join_j_li .join_tit,.join_k_li .join_tit {
    width: 5rem;
    height: 2.5rem;
    line-height: 2.5rem;
    margin-left: -5rem;
    float: left;
    text-align: center;
    font-size: 0.8rem;
}

.fac_list checkbox-group .checkbox {
    width: 50%;
    display: block;
    float: left;
    height: 2rem;
    line-height: 2rem;
    color: #808080;
    font-size: 0.8rem;
}

.join_i_li .fac_list {
    padding-top: 0.2rem;
}

.join_j_li {
    height: 7rem;
    background: #fff;
    padding-left: 1rem;
    margin-top: 16rpx;
    overflow: hidden;
    padding-right: 1rem;
}

.join_k_li {
    min-height: 8rem;
    background: #fff;
    margin-top: 16rpx;
    padding-left: 1rem;
    padding-right: 1rem;
}

.join_info {
    padding-bottom: 0.5rem;
    overflow: hidden;
    margin-right: 0.7rem;
}

.join_info textarea {
    font-size: 28rpx;
    line-height: 1.2rem;
    margin: 0 auto;
    height: 180rpx;
    background: #f2f2f2;
    padding: 0.5rem;
    width: 94%;
    border-radius: 10rpx;
}

.join_info textarea:after {
    content: "  ";
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    z-index: 1;
    width: 200%;
    height: 200%;
    border: 1px solid #d9d9d9;
    border-radius: 10rpx;
    transform-origin: 0 0;
    transform: scale(.5,.5);
}

.join_pic_list {
    padding-top: 0.6rem;
    padding-bottom: 0.8rem;
}

.join_pic_li {
    width: 5.2rem;
    min-height: 5.2rem;
    float: left;
    margin-right: 0.5rem;
    position: relative;
}

.join_pic_li image {
    width: 5.2rem;
    height: 5.2rem;
    margin-bottom: 0.5rem;
}

.close_icon {
    position: absolute;
    right: 0.1rem;
    top: 0.1rem;
    width: 1.1rem;
    height: 1.1rem;
    background: url(http://ddfwz.sssvip.net/asmce/kanjia/close_icon.png) no-repeat center center;
    background-size: 1.1rem 1.1rem;
}

.prompt_info {
    height: 2.2rem;
    line-height: 1.5rem;
    float: left;
    padding-top: 1rem;
}

.prompt_info text {
    display: block;
}

.prompt_info text {
    font-size: 28rpx;
    color: #919191;
}

.prompt_info text.prompt_tit {
    font-size: 1rem;
    color: #000;
}

.bottom_btn_box {
    height: 2.8rem;
    line-height: 2.8rem;
}

.bottom_btn {
    height: 2.8rem;
    line-height: 2.8rem;
    background: #ffd061;
    text-align: center;
    border-radius: 0rem;
    color: #222;
    border: 0;
    width: 100%;
}

.bottom_btn::after {
    border-radius: 0rem;
    border: 0;
}

.bottom_btn text {
    font-size: 1rem;
    color: #fff;
}

.right_arrow {
    background: url(http://ddfwz.sssvip.net/asmce/kanjia/right_arrow.jpg) no-repeat right center;
    background-size: 1.5rem 1.5rem;
    color: #808080;
}

.b_btn_box {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}

.join_li_p view {
    margin-left: 16rpx;
    margin-right: 16rpx;
}