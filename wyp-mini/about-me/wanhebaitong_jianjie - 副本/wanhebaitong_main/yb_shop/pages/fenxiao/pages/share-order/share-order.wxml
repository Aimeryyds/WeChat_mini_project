<view class="info" wx:if="{{show}}">
    <view class="info-title flex-row">
        <view bindtap="select" class="flex-x-center  width" data-status="-1">
            <view class="info-text {{status==-1?'active':''}}">全部</view>
        </view>
        <view bindtap="select" class="flex-x-center  width " data-status="0">
            <view class="info-text {{status==0?'active':''}}">待付款</view>
        </view>
        <view bindtap="select" class="flex-x-center width " data-status="1">
            <view class="info-text {{status==1?'active':''}}">已付款</view>
        </view>
        <view bindtap="select" class="flex-x-center width" data-status="2">
            <view class="info-text {{status==2?'active':''}}">已完成</view>
        </view>
    </view>
    <view class="info-content">
        <view class="info-block" wx:for="{{list}}">
            <view class="info-label flex-row">
                <view class="info-left" style="width:80%">订单号：{{item.order_no}}</view>
                <view class="info-right" style="width:20%">
                    <view class="info-status">{{item.order_status==0?'待付款':item.order_status==3?'已完成':'已付款'}}</view>
                </view>
            </view>
            <view bindtap="click" class="info-label flex-row" data-index="{{index}}">
                <view class="info-left flex-row flex-grow-1">
                    <view class="info-img flex-y-center">
                        <image class="img" src="{{item.user_headimg}}"></image>
                    </view>
                    <view class="info-name text-more">{{item.nick_name}}</view>
                    <view class="info-level text-more">{{item.share_type}}</view>
                </view>
                <view class="info-right flex-grow-1">
                    <view class="info-money flex-row">
                        <text>{{item.order_status!=3?'预计':'已得'}}佣金：<text class="red">{{item.share_money}}</text>元</text>
                        <view class="down flex-y-center {{index==hidden?'active':''}}">
                            <image src="../../images/img-share-down.png" style="width:26rpx;height:16rpx;margin-left: 24rpx;" wx:if="{{index==hidden}}"></image>
                            <image src="../../images/img-share-right.png" style="width:16rpx;height:26rpx;margin-left: 24rpx;" wx:else></image>
                        </view>
                    </view>
                </view>
            </view>
            <view class="{{index==hidden?'show':'hide'}}">
                <view class="info-label height-164 flex-row" wx:for="{{item.goods}}" wx:for-item="v">
                    <view class="info-left flex-row width-90">
                        <view class="info-img flex-y-center">
                            <image class="img img-size-120" src="{{v.pic}}"></image>
                        </view>
                        <view class="info-count">
                            <view class="info-detail">{{v.goods_name}}</view>
                            <view class="info-detail">×{{v.num}}</view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="info-footer flex-row" wx:if="{{list.length==0&&loaded}}">
        <view class="info-before">
            <view class="info-border"></view>
        </view>
        <view class="info-t">暂无订单</view>
        <view class="info-after">
            <view class="info-border"></view>
        </view>
    </view>
</view>
