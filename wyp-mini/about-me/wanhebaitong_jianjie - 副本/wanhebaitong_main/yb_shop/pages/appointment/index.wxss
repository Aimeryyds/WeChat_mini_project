.advan_li {
    height: 6rem;
    padding-left: 6rem;
    position: relative;
}

.advan_li:after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 0;
    border-bottom: 2rpx solid #e6e6e6;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}

.advan_li image {
    margin-left: -5.5rem;
    width: 5rem;
    height: 5rem;
    margin-top: 0.6rem;
    float: left;
}

.advan_li:first-child {
    border-top: 1px solid #e6e6e6;
}

.advan_info {
    float: left;
    margin-right: 1rem;
}

.advan_tit {
    font-size: 1.1rem;
    margin-top: 0.7rem;
    line-height: 1.6rem;
    max-height: 1.6rem;
    overflow: hidden;
}

.advan_memo {
    font-size: 0.8rem;
    line-height: 1.3rem;
    color: #9e9e9e;
    max-height: 1.3rem;
    overflow: hidden;
}

.index_advan_list {
    background: #fff;
}

.page_pop_box {
    width: 100%;
    height: 100vh;
    background: rgba(0,0,0,0.8);
    position: fixed;
    top: 0;
    left: 0;
}

.page_pop {
    width: 600rpx;
    margin-left: 50rpx;
    height: 800rpx;
    max-height: 800rpx;
    background: #fff;
    margin-top: calc(50% - 250rpx);
    border-radius: 16rpx;
    overflow-y: auto;
    padding: 30rpx;
}

.pop_li {
    position: relative;
}

.pop_li:after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 0;
    border-bottom: 2rpx solid #e6e6e6;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}

.pop_li_left,.pop_li_right {
    float: left;
    font-size: 28rpx;
    line-height: 100rpx;
}

.pop_li_left02,.pop_li_right02 {
    float: left;
    font-size: 28rpx;
    line-height: 200rpx;
}

.pop_li_right02 image {
    float: left;
    width: 110rpx;
    height: 110rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.pop_li_right02 {
    padding-top: 20rpx;
    width: 420rpx;
    padding-bottom: 20rpx;
}

.pop_li_left,.pop_li_left02 {
    width: 150rpx;
}

.pop_li_right {
    width: 420rpx;
}

.pop_close {
    position: fixed;
    bottom: 60rpx;
    left: calc(50% - 50rpx);
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background: #fff;
    border-radius: 50%;
}

.pop_close image {
    width: 60rpx;
    height: 60rpx;
}