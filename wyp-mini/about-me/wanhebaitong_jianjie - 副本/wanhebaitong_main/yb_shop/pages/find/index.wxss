page {
    background: #f4f4f4;
}

.case_li {
    margin: 0.5rem;
    background: #fff;
    border-radius: 0.2rem;
    overflow: hidden;
    box-shadow: 0px 0px 8px #ccc;
}

.case_info {
    font-size: 0.7rem;
    color: #939393;
    position: relative;
    height: 2.2rem;
    line-height: 2.2rem;
    padding-left: 0.5rem;
}

.case_more {
    position: absolute;
    right: 0.5rem;
    top: 0.1rem;
}

.case_pic image {
    width: 100%;
    height: 10.5rem;
}

.load_info {
    height: 3rem;
    line-height: 3rem;
    text-align: center;
    font-size: 0.7rem;
    color: #666;
}

.prompt_box {
    padding: 2rem;
    text-align: center;
}

.prompt_box text {
    font-size: 0.8rem;
    color: #666;
    display: block;
    margin-top: 0.5rem;
}

.case_tit text {
    display: inline-block;
    background: #f22424;
    color: #fff;
    padding: 6rpx 22rpx 0px 22rpx;
    border-radius: 8rpx;
    margin-right: 10rpx;
    font-size: 18rpx;
    margin-top: -1rem;
}

.case_tit {
    height: 3.2rem;
    line-height: 3.2rem;
    padding-left: 0.5rem;
    text-align: center;
    padding-right: 0.5rem;
    font-size: 0.9rem;
    color: #2f2f2f;
}

.fui-loading.line .text,.fui-loading.empty .text {
    padding: 0 20rpx;
    background: #f2f2f2;
    position: relative;
    text-align: center;
    z-index: 2;
    font-size: 0.7rem;
}

.advan_li {
    height: 6rem;
    padding-left: 6rem;
    position: relative;
}

.advan_li:after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 0;
    border-bottom: 2rpx solid #e6e6e6;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}

.advan_li image {
    margin-left: -5.5rem;
    width: 5rem;
    height: 5rem;
    margin-top: 0.6rem;
    float: left;
}

.advan_li:first-child {
    border-top: 1px solid #e6e6e6;
}

.advan_info {
    float: left;
    margin-right: 1rem;
}

.advan_tit {
    font-size: 1.1rem;
    margin-top: 0.7rem;
    line-height: 1.6rem;
    max-height: 1.6rem;
    overflow: hidden;
}

.advan_memo {
    font-size: 0.8rem;
    line-height: 1.3rem;
    color: #9e9e9e;
    max-height: 1.3rem;
    overflow: hidden;
}

.load_info {
    height: 3rem;
    line-height: 3rem;
    text-align: center;
    font-size: 0.8rem;
    color: #666;
}

.prompt_box {
    padding: 2rem;
    text-align: center;
}

.prompt_box text {
    font-size: 0.8rem;
    color: #666;
    display: block;
    margin-top: 0.5rem;
}

.class_box {
    margin-top: 4rpx;
    margin-bottom: 2rpx;
    background: #fff;
    padding-bottom: 10rpx;
}

.class_box scroll-view .cate {
    margin: 0px 20rpx;
    display: inline-block;
    padding: 28rpx 10rpx;
}

.class_box scroll-view .cate text {
    font-size: 32rpx;
}

.class_box scroll-view {
    height: 89rpx;
}

.class_box scroll-view .cate.active {
    border-bottom: 3px solid #e02e24;
}

.class_box scroll-view .cate.active text {
    color: #e02e24;
    font-weight: bold;
}

.class_view {
    padding: 10rpx 30rpx;
}

.class_view .class_li {
    width: 150rpx;
    background: #f6f6f6;
    border-radius: 8rpx;
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
    float: left;
    margin: 10rpx;
}

.class_view .class_li text {
    color: #646464;
    font-size: 28rpx;
    display: block;
    height: 60rpx;
    line-height: 60rpx;
}

.class_view .class_li.active {
    background: #646464;
}

.class_view .class_li.active text {
    color: #fff!important;
    font-size: 28rpx;
    display: block;
    height: 60rpx;
    line-height: 60rpx;
}

.index_advan_list {
    background: #fff;
}