.ture_color {
    color: #ff0000;
}

.form_tit {
    padding-left: 0.5rem;
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #454545;
    background: #f2f2f2;
}

.form_li {
    background: #fff;
    padding: 20rpx;
}

.right_arrow {
    background: url(http://ddfwz.sssvip.net/asmce/kanjia/right_arrow.jpg) #ffffff no-repeat center right;
    background-size: 1.1rem 1.1rem;
}

.zoom_80 {
    zoom: 80%;
}

.time_box {
    justify-content: center;
    z-index: 999999;
    height: 60rpx;
    line-height: 60rpx;
}

.star_time,.time_link,.end_time,.search_btn {
    float: left;
    font-size: 30rpx;
    color: #454545;
}

.star_time,.end_time {
    width: 300rpx;
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
}

.star_time picker,.end_time picker {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #454545;
    padding: 0;
    border-radius: 0.1rem;
    z-index: 999999999999999;
    margin: 0 auto;
    width: 100%;
}

.join_pic_list {
    background: #fff;
    padding: 20rpx 12rpx 3rpx 24rpx;
    box-sizing: border-box;
}

.join_pic_list .prompt_tit {
    display: block;
    height: 160rpx;
    line-height: 160rpx;
    width: 4.5rem;
    text-align: left;
    float: left;
    font-size: 28rpx;
    margin-left: -5rem;
    padding-left: 0.5rem;
    overflow: hidden;
}

.join_pic_li {
    height: calc((100vw - 36rpx - 2rem) * 0.25);
    margin-right: 0.5rem;
    position: relative;
    width: calc((100vw - 36rpx - 2rem) * 0.25);
    margin-bottom: 0.5rem;
    float: left;
}

.join_pic_li image {
    width: 160rpx;
    height: 160rpx;
}

.close_icon {
    position: absolute;
    right: 0.1rem;
    top: 0.1rem;
    width: 1.1rem;
    height: 1.1rem;
    background: url(http://ddfwz.sssvip.net/asmce/kanjia/close_icon.png) no-repeat center center;
    background-size: 1.1rem 1.1rem;
}

.prompt_info {
    height: 2.2rem;
    line-height: 2.2rem;
}

.prompt_info text {
    font-size: 0.8rem;
}

.form_btn {
    width: 80%;
    margin: 1rem auto;
}

.form_btn_box {
    width: 100%;
    border-top: 20rpx solid #f2f2f2;
}

.form_li input {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
}

.form_li textarea {
    font-size: 28rpx;
    width: calc(100% - 20rpx);
    line-height: 50rpx;
}

.form_li label {
    font-size: 28rpx;
    color: #454545;
    display: inline-block;
    width: 33%;
    overflow: hidden;
}

.form_li picker {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
}

.picker {
    font-size: 28rpx;
    color: #454545;
}