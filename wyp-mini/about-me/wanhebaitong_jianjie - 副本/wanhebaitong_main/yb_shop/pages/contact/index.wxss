page {
    background: #f4f4f4;
}

.page_top {
    padding: 1.6rem 0;
    text-align: center;
}

.page_top image {
    width: 5rem;
    height: 5rem;
    border-radius: 50%;
    margin: 0.5rem auto;
}

.page_top text {
    display: block;
    width: 100%;
    text-align: center;
}

.com_name_cn {
    font-size: 1.2rem;
    font-weight: bold;
    height: 2.2rem;
    line-height: 2.2rem;
}

.com_name_en {
    font-size: 0.8rem;
    height: 1rem;
    line-height: 1rem;
    color: #b8b8b8;
}

.en_tit text {
    font-size: 0.8rem;
    text-align: left;
}

.en_tit {
    margin: 0.5rem 1rem;
}

.contact_li {
    margin: 0.8rem;
    height: 3.8rem;
    background: #fff;
    border-radius: 0.2rem;
    box-shadow: 0px 0px 8px #ccc;
    padding-left: 3rem;
}

.li_left {
    width: 2.6rem;
    height: 3rem;
    float: left;
    margin-left: -2.5rem;
    margin-top: 0.4rem;
    border-right: 1px solid #e3e3e3;
}

.li_left image {
    width: 1.8rem;
    height: 1.8rem;
    margin-top: 0.5rem;
    margin-left: 0.3rem;
}

.li_right {
    float: left;
    margin-left: 0.8rem;
    margin-right: 1rem;
    width: 500rpx;
}

.li_right .s_tit {
    font-size: 0.7rem;
    color: #afafaf;
    height: 1.4rem;
    line-height: 1.4rem;
    margin-top: 0.5rem;
}

.li_right .b_tit {
    font-size: 0.9rem;
    color: #000;
    height: 0.9rem;
    line-height: 0.9rem;
    overflow: hidden;
}

.li_right text {
    display: block;
}

.contact_btn {
    background: #4e8cee;
    color: #fff;
    font-size: 0.9rem;
    text-align: center;
    height: 2.6rem;
    line-height: 2.6rem;
    margin: 0.5rem 0.8rem;
    border-radius: 0.2rem;
    position: relative;
}

contact-button {
    float: left;
    height: 2.6rem;
}

.btn_box {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    filter: alpha(Opacity=0);
    opacity: 0;
}