.global-list-item {
    display: flex;
    height: 49px;
    padding-left: 30rpx;
    padding-right: 30rpx;
    background-color: #fff;
    align-items: center;
    justify-content: space-between;
    width: 100%;
}

.global-list-item .left-box {
    display: flex;
    height: inherit;
    flex-shrink: 0;
    align-items: center;
}

.global-list-item .left-box .icon {
    flex-shrink: 0;
    margin-right: 10px;
    flex: 0;
}

.global-list-item .left-box .label {
    min-width: 80px;
    max-width: 100px;
    line-height: 49px;
    font-size: 28rpx;
    color: #373945;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.global-list-item .arrow {
    margin-left: 5px;
}

.global-list-item .desc {
    width: 100%;
    height: 49px;
    box-flex: 1;
    text-align: right;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    line-height: 49px;
    font-size: 14px;
    font-weight: 200;
    color: #999;
}