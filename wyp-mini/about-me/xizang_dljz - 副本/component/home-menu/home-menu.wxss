.home-menu .menu-item {
    width: 0;
    flex: 0 0 20%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 26rpx;
    background: none;
    border: none;
    box-sizing: inherit;
    padding: 0;
    line-height: 1;
    position: relative;
    margin: 0;
    color: #333;
}

.home-menu .menu-item contact-button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 1;
}

.home-menu .menu-item image {
    width: 70rpx;
    height: 70rpx;
    margin-top: 30rpx;
    margin-bottom: 10rpx;
}