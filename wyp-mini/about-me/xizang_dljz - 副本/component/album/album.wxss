.custom-category {
    width: 100%;
    background: #fff;
}

.custom-category .top {
    background: #f4f4f4;
    width: 100%;
    height: 400rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
}

.custom-category .top .box {
    width: 540rpx;
    text-align: center;
    font-size: 48rpx;
    background: rgba(255,255,255,.91);
    color: #5D5D5D;
    height: 280rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-direction: column;
}

.custom-category .top .box .tag {
    font-size: 28rpx;
    background: #5D5D5D;
    color: #fff;
    padding: 8px 22px;
}

.custom-category .top .box .title {
    margin-top: 50rpx;
    font-weight: 700;
}

.custom-category .top .box .desc {
    font-size: 24rpx;
    color: #5D5D5D;
    margin-top: 20px;
}

.custom-category .shop-list {
    margin: 5px;
    display: flex;
}

.custom-category .shop-list .shop-item {
    flex: 1;
    overflow: hidden;
    margin: 5px;
}

.custom-category .shop-list .shop-item .shop-image {
    width: 100%;
}

.custom-category .shop-list .shop-item .shop-price {
    font-size: 26rpx;
    color: #bb3434;
    text-align: center;
    margin-top: 10rpx;
}

.custom-category .shop-list .shop-item .shop-title {
    white-space: nowrap;
    font-size: 26rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    text-align: center;
    margin-top: 10rpx;
}