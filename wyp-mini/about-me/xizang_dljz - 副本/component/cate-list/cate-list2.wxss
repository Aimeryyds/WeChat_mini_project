    content: 'å›¢';
    color: #fff;
    position: absolute;
    left: 6rpx;
    top: 8rpx;
    font-size: 23rpx;
}

.recommon-item .group-tag {
    background: #bb3434;
    color: #fff;
    font-size: 20rpx;
    padding: 4rpx 4rpx;
    margin-left: 16rpx;
}