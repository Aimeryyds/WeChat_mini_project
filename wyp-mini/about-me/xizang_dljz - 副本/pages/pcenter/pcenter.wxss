.center-header {
    width: 100%;
    height: 320rpx;
    background: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.center-header>image {
    width: 144rpx;
    height: 144rpx;
    overflow: hidden;
    border-radius: 50%;
    background: oldlace;
    margin-bottom: 20rpx;
}

.center-header>text {
    font-weight: bold;
}

.order-wrap {
    width: 100%;
    margin-top: 26rpx;
    background: #fff;
}

.order-wrap .order-header {
    height: 78rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    padding: 0 26rpx;
}

.order-wrap .order-header::after {
    content: '';
    position: absolute;
    height: 1px;
    left: 26rpx;
    right: 0;
    bottom: 0;
    background: #efefef;
}

.order-wrap .order-header>text {
    font-size: 30rpx;
    font-weight: bold;
    color: #7e7f84;
}

.order-wrap .order-header>view {
    font-size: 26rpx;
    display: flex;
    align-items: center;
    color: #7e7f84;
}

.arrow {
    width: 24rpx;
    height: 40rpx;
}

.order-menu {
    display: flex;
    height: 160rpx;
    color: #373945;
}

.order-menu .menu-item {
    width: 0;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    position: relative;
}

.order-menu .menu-item .badge-value {
    position: absolute;
    width: 30rpx;
    height: 30rpx;
    background: #bb3333;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    right: 45rpx;
    top: 20rpx;
    font-size: 20rpx;
}

.order-menu .menu-item>image {
    width: 68rpx;
    height: 68rpx;
    margin-bottom: 16rpx;
}

.table-group {
    width: 100%;
    margin-top: 26rpx;
}

.online-service {
    padding: 0;
    background: #fff;
    border: none;
    text-align: left;
}

.online-service::after {
    content: initial;
}

