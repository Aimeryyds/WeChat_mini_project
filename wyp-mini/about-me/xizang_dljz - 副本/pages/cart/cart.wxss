.cart-wrap .settle-footer {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 96rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
}

.cart-wrap .settle-footer .all-choose {
    display: flex;
    align-items: center;
    margin-left: 16rpx;
}

.all-choose text {
    color: #ceced1;
    font-size: 28rpx;
    margin-left: 16rpx;
}

.cart-wrap .settle-footer .footer-right {
    display: flex;
}

.cart-wrap .settle-footer .footer-right .price-wrap {
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: right;
    margin-right: 26rpx;
}

.cart-wrap .settle-footer .footer-right .price-wrap .freight-row {
    color: #ababb1;
    font-size: 22rpx;
    margin-bottom: 16rpx;
}

.cart-wrap .settle-footer .footer-right .price-wrap .price-row {
    font-size: 22rpx;
    color: #373745;
    font-weight: bold;
}

.cart-wrap .settle-footer .footer-right .price-wrap .price-row .price {
    font-size: 30rpx;
    margin-left: 8rpx;
}

.cart-wrap .settle-footer .footer-right .btn {
    width: 168rpx;
    background: #bb3535;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
}

.cart-wrap {
    width: 100%;
}

.cart-list {
    padding-bottom: 110rpx;
}

.cart-list .cart-item {
    display: flex;
    width: 100%;
    background: #fff;
    height: 180rpx;
    align-items: center;
    margin-bottom: 8rpx;
}

.cart-list .cart-item .choose-wrap {
    width: 64rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 0 0 64rpx;
}

.cart-list .cart-item .item-image {
    width: 144rpx;
    height: 144rpx;
}

.cart-list .cart-item .item-right {
    padding: 26rpx;
    padding-bottom: 16rpx;
    height: 100%;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.cart-list .cart-item .item-right .item-top .row {
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    color: #373745;
    font-weight: 700;
}

.cart-list .cart-item .item-right .item-top .standard {
    font-size: 22rpx;
    color: #7e7e85;
    margin-top: 8rpx;
}

.cart-list .cart-item .item-right .item-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.cart-list .cart-item .item-right .item-bottom .price-wrap {
    font-size: 20rpx;
    color: #bb3333;
}

.cart-list .cart-item .item-right .item-bottom .price-wrap .price {
    font-size: 30rpx;
    font-weight: bold;
}