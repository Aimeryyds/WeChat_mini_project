.list-wrap {
    width: 100%;
}

.list-wrap .item {
    display: flex;
    align-items: center;
    padding: 20rpx;
    border-bottom: 1px solid #efefef;
    background: #fff;
}

.list-wrap .item image {
    width: 80rpx;
    height: 80rpx;
    background: lightgray;
    border-radius: 50%;
}

.list-wrap .item .info {
    flex: 1;
    font-size: 30rpx;
    color: #333;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
}

.list-wrap .item .info>view {
    overflow: hidden;
}

.list-wrap .item .info>text {
    color: #999;
    font-size: 24rpx;
    margin-top: 10rpx;
    overflow: hidden;
}

.list-wrap .item .btn {
    font-size: 30rpx;
    color: #bb3333;
    border: 1px solid #bb3333;
    padding: 8rpx 16rpx;
    border-radius: 8rpx;
}