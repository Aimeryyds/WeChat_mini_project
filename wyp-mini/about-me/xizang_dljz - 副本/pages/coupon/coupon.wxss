.container {
    height: 100%;
}

.tag-view {
    height: 80rpx;
    background: #fff;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    display: flex;
    font-size: 32rpx;
    color: #333;
    border-bottom: 1px solid #eee;
    z-index: 10;
}

.tag-view>view {
    flex: 1 0 0;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.tag-view>view text {
    display: inline-block;
    height: 100%;
    line-height: 80rpx;
    text-align: center;
}

.tag-view>view text {
    border-bottom: 2px solid transparent;
    transition: all ease-out .2s;
    font-size: 28rpx;
    color: #7e7e85;
}

.tag-view>view.selected text {
    border-bottom-color: #373745;
    font-weight: bold;
    color: #373745;
}

.tag-view>view.unselected {
    border-bottom: none;
}

.content-view {
    width: 100%;
    height: calc(100% - 80rpx);
    white-space: nowrap;
    overflow: hidden;
    margin-top: 80rpx;
}

.content-view .cnt {
    width: 100%;
    height: 100%;
    display: inline-block;
}

.content-view .cnt scroll-view {
    height: 100%;
    padding-bottom: 100rpx;
    position: absolute;
}

.content-view .cnt .coupon-item {
    width: 698rpx;
    height: 200rpx;
    position: relative;
    margin: 26rpx auto 0;
    display: flex;
    align-items: center;
}

.content-view .cnt .coupon-item .item-bg {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.content-view .cnt .coupon-item .item-left {
    width: 196rpx;
    height: 122rpx;
    line-height: 122rpx;
    font-size: 24rpx;
    flex: 0 0 196rpx;
    text-align: center;
}

.content-view .cnt .coupon-item .item-left .price {
    font-size: 40rpx;
    font-weight: bold;
}

.content-view .cnt .coupon-item .item-right {
    margin: 0 32rpx;
    height: 122rpx;
    display: flex;
    flex: 1;
    flex-direction: column;
    justify-content: space-between;
}

.content-view .cnt .coupon-item .item-right .item-title {
    font-size: 22rpx;
    display: flex;
    align-items: center;
}

.content-view .cnt .coupon-item .item-right .item-title .tag-label {
    font-size: 18rpx;
    color: #fff;
    background: #bb3349;
    display: block;
    padding: 4rpx 6rpx;
    margin-right: 8rpx;
}

.content-view .cnt .coupon-item .item-right .item-bottom {
    font-size: 22rpx;
    color: #7e7e85;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    margin-top: 40rpx;
}

.content-view .cnt .coupon-item .item-right .item-bottom .date-wrap {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.content-view .cnt .coupon-item .item-right .item-bottom .date-wrap text {
    line-height: 1.5;
}

.content-view .cnt .coupon-item .item-right .item-bottom image {
    width: 120rpx;
    height: 120rpx;
    margin-top: -20rpx;
}

.content-view .cnt .coupon-item .item-right .item-bottom .btn {
    width: 144rpx;
    height: 52rpx;
    color: #bb3333;
    border: 1px solid #bb3333;
    border-radius: 52rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}