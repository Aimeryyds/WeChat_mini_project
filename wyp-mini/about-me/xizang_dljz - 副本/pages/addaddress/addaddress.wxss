.container {
    background: #fff;
}

.input-row {
    display: flex;
    align-items: center;
    min-height: 94rpx;
    width: 100%;
    border-bottom: 1px solid #efeff0;
    font-size: 28rpx;
    padding: 0 28rpx 0 26rpx;
}

.input-row .label {
    flex: 0 0 5em;
}

.input-row input {
    text-align: right;
    flex: 1;
}

.city-wrap {
    display: flex;
    height: 100%;
    flex: 1;
    justify-content: flex-end;
}

.city-item {
    display: flex;
    align-items: center;
    color: #cfcfd3;
    margin-left: 64rpx;
}

.city-item>image {
    width: 14rpx;
    height: 14rpx;
    margin-left: 16rpx;
}

.add-btn {
    width: 100%;
    height: 96rpx;
    background: #373745;
    color: #fff;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    font-weight: bold;
}

.input-row.location {
    background: #f3f5f7;
}

.input-row .check-box {
    height: 100%;
    width: 30px;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.input-row .check-icon {
    width: 1rem;
    height: 1rem;
}

.citypickers {
    position: fixed;
    height: 100%;
    width: 100%;
    min-height: 100%;
}

.citybody {
    position: fixed;
    bottom: 0px;
    font-size: 28rpx;
    background: #fff;
}

.cityheader {
    position: absolute;
    top: 0px;
    width: 100%;
    z-index: 4;
    background: #fff;
    font-weight: bold;
}

.city-cancel {
    float: left;
    margin: 20rpx;
    color: #818181;
}

.city-true {
    float: right;
    margin: 20rpx;
    color: #2FB42E;
}

.section .picker {
    background-color: #fff;
    border-bottom: 1px #d9d9d9 solid;
    border-top: 1px #d9d9d9 solid;
    padding: 20rpx;
    font-size: 28rpx;
}