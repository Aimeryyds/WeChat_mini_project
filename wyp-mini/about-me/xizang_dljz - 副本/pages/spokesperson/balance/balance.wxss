.balance-wrap {
    width: 100%;
    background: #373745;
}

.balance-wrap .wrap__top {
    padding: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #fff;
}

.balance-wrap .wrap__top text {
    font-size: 26rpx;
}

.balance-wrap .wrap__top text:last-child {
    color: rgba(254,254,254,0.6);
}

.balance-wrap .wrap__top view {
    margin: 30rpx 0;
    font-size: 60rpx;
    font-weight: 500;
}

.balance-wrap .wrap__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 90rpx;
    padding: 0 30rpx;
    font-size: 26rpx;
    background: #333340;
    color: #fff;
}

.balance-wrap .wrap__bottom>view {
    height: 100%;
    display: flex;
    align-items: center;
}

.arrow {
    height: 30rpx;
    width: 30rpx;
}

.table-cell {
    display: flex;
    margin-top: 30rpx;
    background: #fff;
    padding: 0 30rpx;
    height: 90rpx;
    width: 100%;
    box-sizing: border-box;
    align-items: center;
    justify-content: space-between;
    font-size: 26rpx;
    color: #373745;
}

.table-cell image {
    width: 30rpx;
    height: 30rpx;
}