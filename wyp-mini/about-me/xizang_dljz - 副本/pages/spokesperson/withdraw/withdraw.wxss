.input-wrap {
    width: 100%;
    margin-top: 30rpx;
}

.input-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx;
    height: 96rpx;
    background: #fff;
    border-bottom: 1px solid #efeff0;
    font-size: 30rpx;
}

.input-row>text {
    color: #7e7e85;
}

.input-row view {
    display: flex;
    align-items: center;
}

.input-row view text {
    margin-right: 20rpx;
}

.input-p-color {
    color: #cfcfd3;
}

.input-row view image {
    width: 15rpx;
    height: 26rpx;
}

.input-row>input {
    flex: 1;
    text-align: right;
}

.btn {
    width: 690rpx;
    height: 96rpx;
    background: #bb3333;
    color: #fff;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    margin-top: 30rpx;
}

.tip-wrap {
    display: flex;
    flex-direction: column;
    font-size: 26rpx;
    color: #7e7e85;
    width: 100%;
    padding-left: 30rpx;
    margin-top: 40rpx;
}

.tip-wrap text {
    line-height: 1.6;
}