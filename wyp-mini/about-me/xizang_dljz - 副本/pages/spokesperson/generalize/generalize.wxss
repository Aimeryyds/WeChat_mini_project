.search-wrap {
    width: 100%;
    height: 90rpx;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.search-wrap input {
    height: 60rpx;
    width: 690rpx;
    background: rgba(239,239,240,1);
    border-radius: 4rpx;
    text-align: center;
    font-size: 26rpx;
}

.cate-tab {
    width: 100%;
    height: 90rpx;
    background: #fff;
    display: flex;
    border-top: 1px solid #f2f2f2;
}

.cate-tab .cate-item {
    width: 0;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: #373745;
}

.cate-tab .cate-item .arrow-wrap {
    width: 12rpx;
    height: 24rpx;
    margin-left: 10rpx;
    position: relative;
}

.cate-tab .cate-item .arrow-wrap image.up {
    position: absolute;
    left: 0;
    top: 0;
    width: 12rpx;
    height: 12rpx;
}

.cate-tab .cate-item.sel {
    color: #bb3333;
}

.cate-tab .cate-item .arrow-wrap image.drop {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 12rpx;
    height: 12rpx;
}

.cate-tab .cate-item .arrow-wrap image {
    width: 100%;
    height: 100%;
}

.shop-list {
    background: #fff;
    margin-top: 10rpx;
    width: 100%;
    margin-bottom: 26rpx;
}

.shop-item {
    display: flex;
    padding: 30rpx;
    box-sizing: border-box;
}

.shop-item>image {
    width: 160rpx;
    height: 180rpx;
    flex: 0 0 auto;
    margin-right: 30rpx;
}

.shop-item .item-right {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    flex: 1;
}

.shop-item .item-t>text {
    font-size: 28rpx;
    color: #373745;
    line-height: 36rpx;
    font-weight: 400;
    letter-spacing: 0.75px;
}

.shop-item .item-t>view {
    font-size: 30rpx;
    color: #373745;
    margin-top: 20rpx;
}

.shop-item .item-t>view text:last-child {
    font-size: 22rpx;
    color: #7e7e85;
    margin-left: 16rpx;
}

.shop-item .item-b {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    font-size: 30rpx;
    color: #bb3333;
}

.shop-item .item-b image {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    right: 0;
    bottom: 0;
}

