.list {
    width: 100%;
}

.item {
    display: flex;
    height: 150rpx;
    background: #fff;
    width: 100%;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx;
    margin-top: 10rpx;
}

.item .item-left view {
    font-size: 30rpx;
    color: #373745;
    margin-bottom: 20rpx;
}

.item .item-left text {
    font-size: 26rpx;
    color: #7e7e85;
    line-height: 1;
}

.item .item-right {
    font-size: 40rpx;
    color: #bb3333;
    font-weight: 500;
}