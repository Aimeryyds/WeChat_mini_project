.list {
    width: 100%;
}

.item {
    display: flex;
    background: #fff;
    margin-top: 10rpx;
    height: 150rpx;
    padding: 0 30rpx;
    align-items: center;
}

.item image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 30rpx;
}

.item .info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1;
}

.item .info view {
    font-size: 30rpx;
    color: #373745;
    margin-bottom: 20rpx;
}

.item .info text {
    font-size: 26rpx;
    line-height: 1;
    color: #7e7e85;
}

.item .price {
    font-size: 40rpx;
    color: #bb3333;
    font-weight: 400;
}