.account-list {
    margin-top: 30rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.account-list .account-item {
    width: 690rpx;
    height: 142rpx;
    position: relative;
    margin-bottom: 30rpx;
}

.account-list .account-item:last-child {
    margin-bottom: 0;
}

.account-list .account-item .item-content {
    display: flex;
    align-items: center;
    height: 100%;
    width: 100%;
    padding: 0 30rpx;
    z-index: 99;
    position: absolute;
    left: 0;
    top: 0;
}

.account-list .account-item .bg {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.account-list .account-item .item-content .info {
    flex: 1;
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.account-list .account-item .item-content .info text {
    font-size: 26rpx;
}

.account-list .account-item .item-content .info view {
    font-size: 30rpx;
    margin-top: 30rpx;
}

.account-list .account-item .item-content image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 30rpx;
}

.account-list .account-item .item-content .btn {
    width: 80rpx;
    height: 40rpx;
    color: #fff;
    border: 1px solid #fff;
    border-radius: 20rpx;
    font-size: 26rpx;
    line-height: 40rpx;
    text-align: center;
}