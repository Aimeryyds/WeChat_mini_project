.container {
    background: #fff;
    display: flex;
    align-items: center;
}

.logo {
    width: 140rpx;
    height: 140rpx;
    background: lightgray;
    border-radius: 50%;
    margin-top: 250rpx;
}

.name {
    font-size: 50rpx;
    font-weight: 500;
    margin-top: 30rpx;
}

.login-btn {
    font-size: 30rpx;
    color: #fff;
    background: rgb(37,173,37);
    margin-top: 200rpx;
    padding: 10rpx 20rpx;
    border-radius: 10rpx;
}

.version {
    position: fixed;
    bottom: 30rpx;
    left: 50%;
    transform: translateX(-50%);
    font-size: 24rpx;
    color: #999;
}