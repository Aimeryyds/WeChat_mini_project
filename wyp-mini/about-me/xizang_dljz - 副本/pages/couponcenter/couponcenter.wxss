.coupon-item {
    width: 698rpx;
    height: 200rpx;
    position: relative;
    margin: 26rpx auto;
    display: flex;
    align-items: center;
}

.coupon-item .item-bg {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.coupon-item .item-left {
    width: 196rpx;
    height: 122rpx;
    line-height: 122rpx;
    font-size: 24rpx;
    flex: 0 0 196rpx;
    text-align: center;
    z-index: 999;
    color: #bb3333;
}

.coupon-item .item-left .price {
    font-size: 40rpx;
    font-weight: bold;
}

.coupon-item .item-right {
    margin: 0 32rpx;
    height: 122rpx;
    display: flex;
    flex: 1;
    flex-direction: column;
    justify-content: space-between;
    z-index: 999;
}

.coupon-item .item-right .item-title {
    font-size: 22rpx;
    display: flex;
    align-items: center;
}

.coupon-item .item-right .item-title .tag-label {
    font-size: 18rpx;
    color: #fff;
    background: #bb3349;
    display: block;
    padding: 4rpx 6rpx;
    margin-right: 8rpx;
}

.coupon-item .item-right .item-bottom {
    font-size: 22rpx;
    color: #7e7e85;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.coupon-item>.btn {
    width: 120rpx;
    height: 120rpx;
    background: #bb3333;
    flex: 0 0 120rpx;
    border: 1px solid #bb3333;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 999;
    color: #fff;
    padding: 24rpx;
    font-size: 30rpx;
    text-align: center;
    margin-right: 32rpx;
}