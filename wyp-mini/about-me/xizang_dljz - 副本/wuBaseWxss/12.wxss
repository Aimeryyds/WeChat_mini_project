.purchase-window {
    position: relative;
}

.purchase-window .bg {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #000;
    z-index: 1;
    opacity: .4;
}

.purchase-window .purchase-form {
    position: fixed;
    bottom: 96rpx;
    width: 100%;
    left: 0;
    background-color: #fff;
    z-index: 2;
}

.purchase-window .purchase-form .info {
    padding: 0 26rpx;
    height: 196rpx;
    border-bottom: 1px solid #f2f2f2;
    display: flex;
    align-items: center;
}

.purchase-window .purchase-form .info .image {
    top: -12px;
    width: 144rpx;
    height: 144rpx;
    border: 5rpx solid #fff;
    border-radius: 4px;
}

.purchase-window .purchase-form .info .content {
    margin-left: 26rpx;
    height: 144rpx;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.purchase-window .purchase-form .info .content .title {
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    height: 2em;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.purchase-window .purchase-form .info .content .price-wrap {
    font-size: 22rpx;
    color: #bb3333;
    font-weight: bold;
}

.purchase-window .purchase-form .info .content .price-wrap .price {
    font-size: 30rpx;
}

.purchase-window .purchase-form .info .content .content_bottom {
    display: flex;
    align-items: flex-end;
}

.purchase-window .purchase-form .info .content .desc {
    font-size: 22rpx;
    color: #999;
    margin-left: 26rpx;
}

.purchase-window .z-index-top {
    z-index: 2;
}

.purchase-window .standard {
    overflow: scroll;
    color: #333;
    padding: 26rpx;
    max-height: 250px;
}

.purchase-window .standard>view {
    margin-top: 10px;
    display: flex;
    flex-wrap: wrap;
}

.purchase-window .standard>text {
    font-size: 24rpx;
    font-weight: bold;
    color: #ababb1;
}

.purchase-window .standard>view text {
    background: #ebebec;
    padding: 0 21rpx;
    height: 52rpx;
    line-height: 52rpx;
    border-radius: 52rpx;
    margin-right: 10px;
    margin-bottom: 10px;
    text-align: center;
    font-size: 24rpx;
    min-width: 144rpx;
}

.purchase-window .standard>view text.selected {
    background: #bb3333;
    color: #fff;
}

.purchase-window .counter {
    display: flex;
    position: relative;
    height: 104rpx;
    align-items: center;
    justify-content: space-between;
    border-top: 1px solid #f2f2f2;
}

.purchase-window .counter .label {
    top: 17px;
    color: #333;
    font-size: 14px;
    line-height: 64px;
    margin-left: 26rpx;
}

.purchase-window .counter .buttons {
    display: flex;
    width: 90px;
    align-items: center;
    justify-content: space-between;
}

.purchase-window .counter .buttons .item {
    width: 29px;
    height: 29px;
    line-height: 29px;
    background-color: #f2f2f2;
    text-align: center;
}

.purchase-window .counter .count {
    color: #333;
}

.purchase-window .close-view {
    position: absolute;
    top: -48rpx;
    right: 26rpx;
    width: 20rpx;
    height: 20rpx;
}

.purchase-window .close-view .image {
    width: 20rpx;
    height: 20rpx;
}

.purchase-window .button-wrap {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 96rpx;
    font-size: 30rpx;
    display: flex;
    left: 0;
    z-index: 999;
}

.purchase-window .button-wrap .join-btn {
    width: 0;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    background: #bb3333;
}

.purchase-window .button-wrap .purchase-button {
    width: 0;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    background-color: #373745;
    border-radius: 0;
    padding: 0;
}

.purchase-button:after {
    border: 0;
}