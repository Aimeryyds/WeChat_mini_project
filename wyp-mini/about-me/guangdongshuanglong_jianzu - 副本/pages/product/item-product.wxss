.item-cell {
    padding: 30rpx;
    margin: 0 30rpx;
    flex-flow: column nowrap;
    position: relative;
}

.item-cell:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #ccc;
    color: #ccc;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}

.item-cell-img {
    width: 100%;
    height: 150px;
    display: block;
}

.item-cell-title {
    font-size: 17px;
    color: #333;
    font-weight: bold;
    margin: 15px 0;
    display: block;
    overflow: hidden;
    max-width: 100%;
    text-overflow: ellipsis;
    word-wrap: normal;
    word-break: break-all;
    line-height: 25px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.item-cell-content {
    font-size: 14px;
    color: #999;
    line-height: 18px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    word-break: break-all;
}