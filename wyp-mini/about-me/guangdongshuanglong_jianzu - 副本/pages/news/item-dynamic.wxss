.item-cell {
    margin: 12px 12px 0px 12px;
    padding: 20px 15px 0 15px;
    background-color: white;
    flex-flow: column nowrap;
    border-radius: 5px;
    border: 1rpx solid #ccc;
}

.wx-title {
    font-size: 18px;
    font-weight: 400;
    color: #333;
    display: block;
    overflow: hidden;
    max-width: 100%;
    text-overflow: ellipsis;
    word-wrap: normal;
    word-wrap: break-word;
    word-break: break-all;
    line-height: 25px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.wx-time {
    font-size: 14px;
    color: #999;
    margin: 10px 0;
    display: block;
}

.wx-desc {
    display: block;
    font-size: 14px;
    margin: 15px 0;
    color: #999999;
    line-height: 18px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    word-break: break-all;
}

.wx-image {
    width: 100%;
    height: 150px;
    display: block;
}

.wx-navigation {
    flex-flow: row nowrap;
    padding: 15px 0;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.wx-navigation:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #ccc;
    color: #ccc;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}

.wx-navigation text {
    color: #333;
    font-size: 14px;
    flex: auto;
}

.wx-navigation image {
    width: 15px;
    height: 15px;
}