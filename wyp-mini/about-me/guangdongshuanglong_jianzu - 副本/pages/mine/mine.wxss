page {
    width: 100%;
    height: 100%;
}

.container {
    height: 100%;
    background: "../../images/bg_02.png";
}

.header {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: fixed;
    top: 0px;
    width: 100%;
    height: 50%;
    background-color: rgba(0,0,0,0);
}

.userinfo-avatar {
    width: 140rpx;
    height: 140rpx;
    margin: 20rpx;
    border-radius: 50%;
    border: 6rpx solid rgb(0,172,255);
}

.userinfo-nickname {
    margin-top: 20rpx;
    font-weight: medium;
    font-size: 60rpx;
    overflow: scroll;
}

.body {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 50%;
    position: fixed;
    top: 50%;
}

.body .cell {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    margin: 0px 10px 10px 10px;
    width: 90%;
    height: 150rpx;
    border-radius: 20rpx;
    border: 2rpx solid rgb(241,241,242);
    box-shadow: 2rpx 2rpx 2rpx #fafafa;
    background-color: rgba(256,256,256,0.9);
}

.cell .imageView {
    margin-left: 20px;
    width: 50px;
    height: 50px;
    margin-right: 15px;
}

.cell .title {
    font-size: medium;
}