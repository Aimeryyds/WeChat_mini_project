.container {
}

.basis-rich {
    padding: 0 20rpx;
    font-size: 32rpx;
    word-break: break-all;
}

.header {
    width: 100%;
    height: 240px;
}

.body {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    margin-top: 0px;
    margin-bottom: 40px;
    width: 100%;
}

.title {
    margin-left: 15px;
    margin-right: 15px;
    display: flex;
    justify-content: flex-start;
    flex-direction: column;
}

.name {
    margin-top: 35px;
    font-size: 19px;
    color: #333333;
}

.title .line {
    margin-top: 20px;
    margin-bottom: 20px;
    background-color: #dedede;
    width: 52px;
    height: 2px;
}

.content {
    margin-top: 0px;
    margin-left: 15px;
    margin-right: 15px;
    font-size: 14px;
    color: #333333;
}