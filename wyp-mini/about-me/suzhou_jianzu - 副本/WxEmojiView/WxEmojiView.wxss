.WxEmojiView {
    align-items: center;
}

.WxEmojiPreView {
    margin: 20rpx 0;
    padding: 20rpx 0;
}

.wxEmoji {
    height: 60rpx;
    width: 60rpx;
}

.wxEmoji {
    width: 40rpx;
    height: 40rpx;
}

.WxEmojiTextarea {
    height: 300rpx;
    border-bottom: 1rpx solid #ccc;
    margin: 20rpx 20rpx 0;
    font-size: 32rpx;
    width: 94%;
}

.WxEmojiHiddenTextarea {
    height: 100rpx;
    position: absolute;
    left: 0;
    top: 0;
}

.WxEmojiViewContainer {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
}

.WxEmojiChooseChooseView {
    margin: 0 20rpx;
    display: flex;
}

.wxPreEmoji {
    height: 40rpx;
    width: 40rpx;
    margin: 10rpx;
    display: inline-flex;
    flex: 1;
}