.top {
    width: 100%;
    height: 80rpx;
    font-size: 30rpx;
    text-align: center;
    line-height: 80rpx;
}

.tixian {
    width: 100%;
    border-bottom: 1px solid #ccc;
    font-size: 30rpx;
    height: 100%;
    border-top: 1px solid #ccc;
}

.title {
    width: 96%;
    height: 75rpx;
    border-bottom: 1px solid #ccc;
    margin-left: 2%;
    font-size: 28rpx;
    color: gray;
    line-height: 75rpx;
}

.money {
    width: 96%;
    height: 90rpx;
    border-bottom: 1px solid #ccc;
    font-size: 36rpx;
    font-weight: 700;
    color: red;
    line-height: 90rpx;
    margin-left: 2%;
}

.way {
    width: 96%;
    height: 75rpx;
    display: flex;
    font-size: 30rpx;
    margin-left: 2%;
    align-items: center;
    flex-direction: row;
    justify-content: space-between;
}

.TXway {
    color: gray;
    flex: 1;
}

.bracket {
    flex: 2;
}

.btn {
    width: 95%;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 40rpx;
}

.picker {
    font-size: 34rpx;
    width: 100%;
    height: 100%;
    line-height: 47px;
}

.picker .remain {
    width: 86%;
    display: inline-block;
    font-size: 28rpx;
    vertical-align: middle;
}

.picker image {
    width: 27px;
    height: 27px;
    vertical-align: middle;
}