.container {
    width: 100%;
    height: 100%;
}

.tabClass {
    width: 750rpx;
    display: flex;
    font-size: 30rpx;
    height: 80rpx;
    border-bottom: 1rpx solid #ccc;
    align-items: center;
}

.normalClass {
    width: 250rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
}

.selectClass {
    border-bottom: 2px solid #ff4500;
    color: #ff4500;
}

.smallTitle {
    font-size: 28rpx;
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    border-bottom: 1px solid #ccc;
}

.list {
    width: 100%;
    height: 130rpx;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #ccc;
}

.list image {
    width: 90rpx;
    height: 90rpx;
    margin-left: 15rpx;
    margin-right: 15rpx;
    border-radius: 10rpx;
}

.content {
    width: 430rpx;
    height: 80rpx;
    border-right: 1px solid #ccc;
    display: flex;
    flex-direction: column;
}

.name {
    font-size: 32rpx;
}

.time {
    color: gray;
    font-size: 28rpx;
}

.right {
    display: flex;
    flex-direction: column;
    height: 80rpx;
    width: 200rpx;
    align-items: flex-end;
    font-size: 25rpx;
    color: #ccc;
    justify-content: space-around;
    margin-right: 10rpx;
}