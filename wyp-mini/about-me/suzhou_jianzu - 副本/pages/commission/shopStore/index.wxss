.top {
    width: 100%;
    height: 188rpx;
}

.m_top {
    position: relative;
    background-color: #fefefe;
}

.m_wrap {
    display: flex;
    flex-direction: row-reverse;
    border-bottom: 1rpx solid #f5f5f5;
    position: relative;
}

.m_wrap view {
    width: 280rpx;
    height: 110rpx;
    border-left: 1rpx solid #e5e5e5;
    text-align: center;
    font-size: 24rpx;
}

.m_img {
    width: 130rpx;
    height: 130rpx;
    background-color: #fff;
    position: absolute;
    left: 44rpx;
    bottom: 26rpx;
    flex-shrink: 0;
    box-shadow: 0 0 20rpx #888;
}

.m_item {
    overflow: hidden;
    line-height: 0;
}

.m_item .icon {
    width: 40rpx;
    height: 40rpx;
    margin: 10rpx auto 0;
    line-height: 40rpx;
    display: block;
}

.m_item text {
    text-align: center;
    line-height: 58rpx;
}

.list_top {
    margin: 45rpx 0;
    border-bottom: 2rpx solid #d5d5d5;
    position: relative;
}

.recommend {
    position: absolute;
    margin-left: 38%;
    text-align: center;
    top: -30rpx;
    display: flex;
    line-height: 60rpx;
    height: 60rpx;
    overflow: hidden;
    font-size: 0;
    background-color: #fff;
}

.recommend text {
    font-size: 28rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.t_img {
    width: 35rpx;
    height: 34rpx;
    display: inline-block;
    justify-content: center;
    margin-top: 12rpx;
    margin-left: 40rpx;
}

.list_bd {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.item {
    padding: 20rpx 20rpx 0;
}

.item .item_img {
    width: 100%;
    height: 345rpx;
    background-color: #fff;
}

.item .title {
    width: 314rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    line-height: 58rpx;
    font-size: 28rpx;
    margin-bottom: 16rpx;
    display: block;
    margin-left: 20rpx;
}

.item .wrap {
    line-height: 45rpx;
    display: flex;
    justify-content: space-between;
}

.item .wrap text {
    margin-left: 20rpx;
    color: red;
    font-size: 32rpx;
}

.item .wrap image {
    width: 45rpx;
    height: 45rpx;
    background-color: red;
    margin-right: 20rpx;
    display: block;
    border-radius: 50%;
}