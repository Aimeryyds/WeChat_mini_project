page {
    width: 100%;
    height: 100%;
}

.goods {
    border-bottom: 1rpx solid #F3F3F3;
    padding: 24rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    margin-bottom: 40rpx;
    align-items: center;
    width: 100%;
}

.img {
    width: 160rpx;
    height: 160rpx;
    background-color: #fff;
}

.g_wrap {
    display: flex;
    flex-direction: column;
    width: 525rpx;
    margin-left: 20rpx;
    font-size: 28rpx;
    line-height: 40rpx;
}

.item {
    width: 45%;
    height: 60rpx;
    line-height: 60rpx;
    border: 1rpx solid #e5e5e5;
    border-radius: 8rpx;
}

.white {
    background-color: #fff;
}

.red {
    background-color: #FD5454;
    color: #fff;
}

.pintuan {
    border-top: 1rpx solid #F3F3F3;
    border-bottom: 1rpx solid #F3F3F3;
    background-color: #fff;
    margin-bottom: 20rpx;
    font-size: 28rpx;
}

.store {
    padding: 24rpx;
    display: flex;
    justify-content: space-between;
    font-size: 30rpx;
}

.row1 {
    display: flex;
    flex-direction: row;
}

.fangzi {
    width: 15rpx;
    height: 30rpx;
    background-color: #fff;
    margin-right: 10rpx;
}

.foot {
    display: flex;
    flex-direction: row;
    margin-bottom: 20rpx;
    font-size: 26rpx;
}

.p_item {
    width: 25%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.num {
    margin-right: 16rpx;
}

.container-class {
    display: flex;
    flex-direction: column;
}

.container-goods {
    background: #fff;
    margin-top: 20rpx;
    overflow: hidden;
}

.main-goods {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    border-top: 1px solid #eee;
    padding: 10rpx;
}

.main-goods .single-goods {
    float: left;
    margin: 0 15rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 30rpx;
    height: auto;
}

.main-goods .single-goods:nth-child(even) {
    margin-right: 0rpx;
}

.main-goods .avatar {
    width: 320rpx;
    height: 370rpx;
    display: block;
    box-sizing: border-box;
}

.main-goods .single-goods image {
    width: 100%;
    height: 338rpx;
}

.main-goods .title {
    display: block;
    color: #000;
    margin: 10rpx 6rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    flex-shrink: 0;
    height: 40rpx;
    line-height: 40rpx;
    text-align: left;
}

.main-goods .titleDetail {
    display: block;
    color: #656565;
    font-size: 26rpx;
    text-indent: 20rpx;
    margin: 10rpx 6rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    flex-shrink: 0;
    height: 40rpx;
    line-height: 40rpx;
}

.main-goods .summary {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 48rpx;
    font-size: 30rpx;
}

.main-goods .summary .s_text {
    font-size: 28rpx;
    line-height: 24px;
}

.main-goods .summary .price {
    color: #b54426;
    font-size: 28rpx;
}