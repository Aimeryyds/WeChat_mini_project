swiper {
    height: 480rpx;
    overflow: hidden;
}

.func-area {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    padding: 20rpx 0;
    background: #fff;
    position: relative;
}

.func-area view {
    width: 165rpx;
    text-align: center;
}

.func-area text {
    display: block;
    color: #6c6c6c;
    font-size: 30rpx;
    line-height: 50rpx;
}

.func-area image {
    width: 100rpx;
    height: 100rpx;
}

.g_item {
    display: flex;
    flex-direction: row;
    padding: 20rpx;
}

.g_img {
    background-color: #fff;
    width: 160rpx;
    height: 160rpx;
    margin-right: 20rpx;
}

.g_text {
    display: flex;
    flex-direction: column;
    width: 70%;
    line-height: 48rpx;
}

.g_text .toDetailCont text {
    display: block;
    height: 100%;
    width: 120rpx;
    color: #fff;
    font-size: 28rpx;
    position: absolute;
    text-align: center;
    right: 0rpx;
    top: 0rpx;
    background: #FF473F;
    border-radius: 30rpx;
    border-top-left-radius: 0rpx;
    border-bottom-left-radius: 0rpx;
}

.footerTip {
    width: 90%;
    margin: 50rpx auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.footerTip .lineWidth {
    width: 30%;
    height: 3rpx;
    background: #6c6c6c;
}

.footerTip .footerTxt {
    font-size: 26rpx;
    color: #6c6c6c;
    text-align: center;
}

.hotSale {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 140rpx;
    width: 95%;
    margin: 0 auto;
}

.hotSale .hotLine {
    width: 38%;
    height: 3rpx;
    background: #ccc;
}

.hotSale .hotTitle text {
    display: block;
    font-size: 28rpx;
    color: #333;
    text-align: center;
    line-height: 40rpx;
}