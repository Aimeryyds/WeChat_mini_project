.top {
    height: 80rpx;
    display: flex;
    flex-direction: row;
    text-align: center;
    line-height: 80rpx;
    font-size: 28rpx;
}

.t_item {
    width: 33.3%;
    height: 100%;
}

.b_bottom {
    border-bottom: 1rpx solid red;
}

.item {
    margin-top: 20rpx;
}

.i_dindan {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 20rpx;
    font-size: 26rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.i_store {
    display: flex;
    flex-direction: row;
    background-color: #eee;
    justify-content: space-between;
    align-items: center;
}

.is_left {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
}

.is_right {
    display: flex;
    justify-content: flex-end;
}

.i_img {
    width: 110rpx;
    height: 110rpx;
    background-color: #fff;
    margin: 20rpx;
    border-radius: 4rpx;
    flex-shrink: 0;
}

.mt20 {
    margin-top: 20rpx;
    font-weight: bold;
    font-size: 28rpx;
    width: 50%;
}

.i_price {
    font-size: 26rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    margin-right: 20rpx;
    color: #8e8e8e;
    flex-shrink: 0;
}

.red {
    color: #ef4f4f;
}

.i_yunfei {
    display: flex;
    justify-content: flex-end;
    margin-right: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    color: #515963;
}

.i_cantuan {
    display: flex;
    justify-content: flex-end;
    margin-right: 20rpx;
    height: 80rpx;
}

.i_cantuan view {
    background-color: #fd5454;
    height: 60rpx;
    line-height: 60rpx;
    margin-top: 10rpx;
    padding: 0 20rpx;
    border-radius: 6rpx;
    color: #fff;
    font-size: 26rpx;
}

.mr20 {
    margin-right: 20rpx;
}

.i_fail {
    width: 100rpx;
    height: 100rpx;
    flex-shrink: 0;
}

.nodata {
    width: 252rpx;
    height: 203rpx;
    margin: 100rpx auto;
}

.nodata image {
    width: 100%;
    height: 100%;
}