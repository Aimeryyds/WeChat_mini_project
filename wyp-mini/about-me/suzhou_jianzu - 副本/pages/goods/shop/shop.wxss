page {
    font-family: '微软雅黑';
}

swiper {
    height: 370rpx;
    position: relative;
}

.swiperitem {
    text-align: center;
    line-height: 370rpx;
}

.swiperitem image {
    width: 100%;
    height: 100%;
}

.titleSwiper {
    position: absolute;
    z-index: 10;
    top: 30rpx;
    left: 15rpx;
    width: 90rpx;
    height: 50rpx;
    line-height: 50rpx;
    background: #d95940;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    border-radius: 8rpx;
}

.shop {
    position: absolute;
    z-index: 10;
    width: 680rpx;
    height: 260rpx;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto auto;
}

.shop .shopLeft {
    width: 210rpx;
    height: 100%;
    line-height: 260rpx;
    float: left;
}

.shop .shopLeft image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
    vertical-align: middle;
}

.shop .shopRight {
    margin-left: 10rpx;
    width: 450rpx;
    height: 100%;
    float: left;
}

.shop .shopRight .title {
    display: block;
    height: 30rpx;
    width: 100%;
    margin-top: 60rpx;
    color: #fff;
    font-size: 28rpx;
    line-height: 30rpx;
}

.shop .shopRight .star {
    display: block;
}

.star image {
    margin-top: 20rpx;
    display: inline-block;
    width: 45rpx;
    height: 40rpx;
    margin-right: 5rpx;
}

.shop .shopRight .sales {
    width: auto;
    padding-right: 20rpx;
    height: auto;
    display: inline-block;
    color: #fff;
    font-size: 28rpx;
    border-right: 1rpx solid #fff;
}

.shop .shopRight .collection {
    display: inline-block;
    width: auto;
    padding-left: 20rpx;
    height: auto;
    color: #fff;
    font-size: 28rpx;
}

.cover {
    position: absolute;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.4);
    top: 0;
    left: 0;
}

.couponNum {
    width: 100%;
    height: 120rpx;
    font-size: 28rpx;
    border-bottom: 1px solid #ccc;
    white-space: nowrap;
    margin-bottom: 30rpx;
}

.newTitle {
    height: 110rpx;
    display: inline-block;
    text-align: center;
    color: #000;
    font-size: 30rpx;
    width: 25%;
}

.newTitle text {
    display: block;
    width: 100%;
    height: 50%;
    text-align: center;
    line-height: 55rpx;
}

.shopNum {
    display: block;
    width: 100%;
    height: 50%;
    text-align: center;
    line-height: 55rpx;
}

.shopNum image {
    width: 45rpx;
    height: 45rpx;
    vertical-align: middle;
}

.active {
    color: #E20C26;
}

.goodsList1 {
    margin-top: 14rpx;
    margin-bottom: 14rpx;
    z-index: 1;
    overflow: hidden;
}

.carts-list1 {
    padding: 0 30rpx;
    margin-bottom: 80rpx;
    overflow: hidden;
}

.noShopGoods {
    width: 100%;
    text-align: center;
    height: 600rpx;
}

.noShopGoods image {
    width: 226rpx;
    height: 200rpx;
    margin-top: 150rpx;
}

.noShopGoods text {
    width: 100%;
    display: block;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
}

.carts-item1 {
    display: inline-block;
    height: 450rpx;
    width: 47%;
    border-bottom: 3rpx solid #e3e3e3;
    overflow: hidden;
    border: 1rpx solid rgba(0,0,0,.1);
    margin-left: 15rpx;
}

.imgView {
    width: 100%;
    height: 330rpx;
    text-align: center;
    line-height: 270rpx;
}

.carts-image1 {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.carts-text1 {
    margin-left: 20rpx;
}

.carts-title1 {
    display: block;
    font-size: 30rpx;
    color: #444;
    height: 60rpx;
    line-height: 60rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.carts-subtitle1 {
    font-size: 25rpx;
    color: #a9a9a9;
    padding: 0 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.carts-price1 {
    color: #f60;
    font-size: 29rpx;
    line-height: 22px;
    margin-top: 10rpx;
}

.carts-price3 {
    display: inline-block;
    text-align: right;
    font-size: 26rpx;
    color: #999;
    line-height: 22px;
    margin-top: 10rpx;
    margin-left: 10rpx;
}

.carts-price2 {
    display: inline-block;
    margin-top: 10rpx;
    margin-left: 10rpx;
    position: relative;
    font-size: 22rpx;
    color: #999;
    line-height: 11px;
}

.carts-price2 .price2 {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto auto;
    width: 100%;
    height: 2rpx;
    background: #999;
    font-size: 22rpx;
}

.goods-score1 {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
}

.goods-score1 text {
    display: block;
    width: 100px;
    font-size: 24rpx;
    color: #999;
    margin: 8px 4px;
}

.customerTel {
    width: auto;
    height: 100rpx;
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
    z-index: 999;
}

.customerTel image {
    width: 50rpx;
    height: 50rpx;
    display: inline-block;
    margin: 40rpx auto 0;
}

.customerTel image:nth-child(2) {
    margin-right: 10rpx;
}

.showCodeImg {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
    position: fixed;
    top: 0;
    left: 0;
}

.code_inner {
    width: 80%;
    height: 50%;
    margin: 30% auto 0;
    background: #fff;
    border-radius: 10rpx;
}

.codeTop {
    width: 95%;
    height: 60rpx;
    text-align: right;
    padding-top: 15rpx;
    display: inline-block;
}

.codeTop text {
    display: inline-block;
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 50%;
    text-align: center;
    font-size: 32rpx;
    background: #ccc;
    color: #fff;
}

.codeMid {
    width: 70%;
    height: 60%;
    margin: 40rpx auto 0;
    box-shadow: 0rpx 0rpx 10rpx #666;
    border-radius: 10rpx;
    text-align: center;
}

.codeMid image {
    width: 300rpx;
    height: 300rpx;
    display: block;
    padding-top: 35rpx;
    margin: 0 auto;
}

.codeBottom {
    width: 70%;
    margin: 30rpx auto 0;
    background: #1AAD19;
    height: 70rpx;
    text-align: center;
    border-radius: 10rpx;
}

.codeBottom text {
    font-size: 30rpx;
    color: #fff;
    line-height: 70rpx;
}

.footer {
    width: 70%;
    margin: 10px auto 0;
    color: #666;
    font-size: 25rpx;
    text-align: center;
}