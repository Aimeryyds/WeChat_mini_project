.view_searchbg {
    width: 90%;
    border-radius: 10rpx;
    height: 50rpx;
    border-style: solid;
    border-width: 2rpx;
    overflow: hidden;
    line-height: 0;
    border-color: #cdcdcd;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    position: relative;
    background-color: #fff;
}

.view_search {
    height: 80rpx;
    display: flex;
    position: relative;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.input_search {
    flex-grow: 2;
    font: 29rpx;
    color: #cdcdcd;
    font-size: 80%;
}

.input_search {
    font: 14px;
    color: #999;
    margin-left: 25rpx;
}

.container-class {
    display: flex;
    flex-direction: column;
}

.container-goods {
    background: #fff;
    margin-top: 20rpx;
    overflow: hidden;
}

.main-goods {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    border-top: 1px solid #eee;
    padding: 10rpx;
}

.main-goods .single-goods {
    float: left;
    margin: 0 15rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 30rpx;
    height: auto;
}

.main-goods .single-goods:nth-child(even) {
    margin-right: 0rpx;
}

.main-goods .avatar {
    width: 320rpx;
    height: 370rpx;
    display: block;
    box-sizing: border-box;
}

.main-goods .single-goods image {
    width: 100%;
    height: 338rpx;
}

.main-goods .title {
    display: block;
    color: #000;
    margin: 10rpx 6rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    flex-shrink: 0;
    height: 40rpx;
    line-height: 40rpx;
    text-align: left;
}

.main-goods .titleDetail {
    display: block;
    color: #656565;
    font-size: 26rpx;
    text-indent: 20rpx;
    margin: 10rpx 6rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    flex-shrink: 0;
    height: 40rpx;
    line-height: 40rpx;
}

.main-goods .summary {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 48rpx;
    font-size: 30rpx;
}

.main-goods .summary .s_text {
    font-size: 28rpx;
    line-height: 24px;
}

.main-goods .summary .price {
    color: #b54426;
    font-size: 26rpx;
}