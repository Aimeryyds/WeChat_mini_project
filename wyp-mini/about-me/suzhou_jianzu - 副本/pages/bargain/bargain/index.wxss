.cont {
    width: 100%;
    overflow: hidden;
}

.wrap {
    display: flex;
    flex-direction: row;
    font-size: 28rpx;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #F3f3f3;
    margin-top: 10rpx;
}

.wrap_view {
    display: flex;
    flex-direction: column;
    padding-left: 20rpx;
    line-height: 50rpx;
    width: 60%;
}

.wrap_img {
    width: 70rpx;
    height: 70rpx;
    margin-right: 20rpx;
}

.goods {
    border-top: 1rpx solid #F3F3F3;
    border-bottom: 1rpx solid #F3F3F3;
    padding: 24rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    margin-bottom: 30rpx;
    margin-top: 30rpx;
}

.img {
    width: 100rpx;
    height: 100rpx;
    background-color: #fff;
}

.g_wrap {
    display: flex;
    flex-direction: column;
    width: 85%;
    margin-left: 20rpx;
    font-size: 28rpx;
    line-height: 40rpx;
}

.text1 {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 32rpx;
}

.text2 {
    font-size: 26rpx;
    margin-top: 16rpx;
}

.price {
    display: flex;
    flex-direction: row;
    width: 100%;
    padding: 0 3%;
}

.p_wrap {
    width: 44%;
    font-size: 28rpx;
    margin-right: 3%;
    text-align: center;
}

.p_text {
    position: relative;
    background-color: #fff;
    padding: 0 4rpx;
}

.p_view {
    border: 1rpx solid #ccc;
    text-align: center;
    display: flex;
    flex-direction: column;
    line-height: 60rpx;
    margin-top: -16rpx;
    border-radius: 10rpx;
}

.swi {
    display: flex;
    flex-direction: row;
    width: 100%;
    padding: 0 3%;
    margin-top: 30rpx;
    color: #fff;
    margin-bottom: 40rpx;
}

.s_view1 {
    width: 44%;
    font-size: 28rpx;
    margin-right: 3%;
    text-align: center;
    line-height: 80rpx;
    background-color: #F8C137;
    border-radius: 10rpx;
}

.s_comm {
    position: relative;
    padding: 0 4rpx;
    text-align: center;
}

.list {
    text-align: center;
    display: flex;
    flex-direction: row;
    width: 100%;
    font-size: 30rpx;
}

.item {
    width: 25%;
    color: #666666;
    padding: 18rpx 0;
    border-bottom: 2rpx solid transparent;
    font-size: 28rpx;
}

.active {
    border-bottom: 2rpx solid #EF4F4F;
    color: #EF4F4F;
}

.uactives {
    display: none;
}

.actives {
    display: block;
}

.ml20 {
    margin-left: 20rpx;
}

.mt24 {
    margin-top: 24rpx;
}

.mt16 {
    margin-top: 16rpx;
}

.wxParse-p {
    text-align: center;
}