.view_searchbg {
    width: 90%;
    border-radius: 10rpx;
    height: 50rpx;
    border-style: solid;
    border-width: 2rpx;
    overflow: hidden;
    line-height: 0;
    border-color: #cdcdcd;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    position: relative;
    background-color: #fff;
}

.view_search {
    height: 80rpx;
    display: flex;
    position: relative;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.input_search {
    flex-grow: 2;
    font: 29rpx;
    color: #cdcdcd;
    font-size: 80%;
}

.input_search {
    font: 14px;
    color: #999;
    margin-left: 25rpx;
}

.g_item {
    width: 100%;
    display: flex;
    flex-direction: row;
    padding: 20rpx;
}

.g_img {
    background-color: pink;
    width: 160rpx;
    height: 160rpx;
    margin-right: 20rpx;
}

.g_text {
    display: flex;
    flex-direction: column;
    width: 70%;
    line-height: 48rpx;
}