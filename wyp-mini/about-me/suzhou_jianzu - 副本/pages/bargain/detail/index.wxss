.wrap {
    padding: 0 20rpx;
    background-color: #fff;
    margin-bottom: 16rpx;
}

.title {
    display: flex;
    flex-direction: row;
    margin-top: 28rpx;
    line-height: 44rpx;
}

.tip {
    background-color: #FE3297;
    font-size: 28rpx;
    padding: 0 10rpx;
    border-radius: 4rpx;
    margin-right: 28rpx;
    color: #FF7CE1;
    height: 44rpx;
    flex-shrink: 0;
}

.desc {
    margin-top: 30rpx;
    color: #c5c5c5;
    font-size: 28rpx;
}

.sub_wrap {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 24rpx;
    font-size: 26rpx;
    color: #c5c5c5;
    margin-bottom: 32rpx;
}

.tishi {
    padding: 16rpx 20rpx;
    background-color: #fff;
    color: #A0A0A0;
    font-size: 26rpx;
    line-height: 36rpx;
    margin-bottom: 26rpx;
}

.kanjia {
    margin-top: 30rpx;
    padding: 20rpx;
    margin-bottom: 60rpx;
}

.kanjia .head {
    display: flex;
    flex-direction: row;
    font-size: 28rpx;
    line-height: 30rpx;
    border-bottom: 1rpx solid #ccc;
}

.kanjia .body {
    display: flex;
    flex-direction: row;
    font-size: 28rpx;
    line-height: 30rpx;
    margin-top: 30rpx;
    line-height: 80rpx;
    justify-content: space-between;
}

.box {
    padding: 0 10rpx;
    border: 1rpx dashed #ccc;
    margin-right: 30rpx;
    border-radius: 8rpx;
    font-size: 26rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: row;
    background-color: #fff;
}

.footer .left {
    width: 26%;
    background-color: #fff;
    display: flex;
    flex-direction: column-reverse;
    justify-content: center;
    align-items: center;
    border-top: 1rpx solid #f3f3f3;
    text-align: center;
    font-size: 26rpx;
}

.footer .item {
    width: 37%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
}

.yuanjia {
    padding: 20rpx 40rpx;
    border: 2rpx solid #D54A47;
    border-radius: 10rpx;
    color: #D54A47;
}

.footer .kanjias {
    padding: 20rpx 40rpx;
    background-color: #D54A47;
    color: #fff;
    border-radius: 10rpx;
    overflow: hidden;
}

rich-text {
    box-sizing: border-box;
    width: 100%;
    overflow: hidden;
}