page {
    background-color: #efefef;
}

.box {
    width: 90%;
    margin: 0 auto;
    margin-top: 10rpx;
    overflow: hidden;
}

.search-box {
    height: 60rpx;
    margin-top: 20rpx;
}

.search {
    background-color: #fff;
    border-radius: 10rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    padding-left: 20rpx;
    width: 80%;
    float: left;
}

.search image {
    width: 40rpx;
    height: 40rpx;
}

.search input {
    width: 90%;
    height: 40rpx;
    font-size: 25rpx;
    padding-left: 30rpx;
    color: #333;
    caret-color: #e0e0e0;
}

.button {
    width: 100rpx;
    height: 60rpx;
    background-color: #fff;
    border-radius: 10rpx;
    text-align: center;
    font-size: 30rpx;
    line-height: 60rpx;
    float: right;
    color: #464444;
}

.button:active {
    background-color: #e0e0e0;
    color: #fff;
}

.location {
    height: 160rpx;
    display: flex;
    align-items: center;
}

.location view {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 35rpx;
    color: #333;
}

.location view image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 30rpx;
}

.address {
    background-color: #fff;
    border-radius: 10rpx;
    min-height: 200rpx;
    padding: 20rpx;
}

.address .title {
    height: 80rpx;
    font-size: 35rpx;
    line-height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.address .title .add {
    display: block;
    height: 40rpx;
    width: 40rpx;
    color: #fc9c4f;
    border: 2rpx solid #fc9c4f;
    border-radius: 10rpx;
    line-height: 35rpx;
    font-size: 40rpx;
    text-align: center;
}

.list {
    min-height: 200rpx;
    border-top: 1rpx solid #e0e0e0;
    position: relative;
}

.list .title {
    font-size: 30rpx;
    line-height: 60rpx;
    height: 60rpx;
    margin-left: 10rpx;
    margin-top: 5rpx;
}

.edit image {
    width: 30rpx;
    height: 30rpx;
}

.delete image {
    width: 30rpx;
    height: 28rpx;
}

.edit {
    position: absolute;
    right: 50rpx;
    bottom: 12rpx;
}

.delete {
    position: absolute;
    right: 0;
    bottom: 15rpx;
}

.list .addressText {
    font-size: 25rpx;
    margin-left: 20rpx;
    min-height: 50rpx;
    color: #333;
    font-weight: 700;
    width: 500rpx;
    line-height: 50rpx;
}

.list .phone {
    font-size: 25rpx;
    color: #888;
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 20rpx;
    margin-top: 5rpx;
}

.list .phone text {
    margin-right: 30rpx;
}

.noAddress {
    width: 100%;
    height: 100rpx;
    font-size: 30rpx;
    color: #888;
    display: flex;
    align-items: center;
    justify-content: center;
}

.default {
    display: flex;
    align-items: center;
    position: absolute;
    bottom: 23rpx;
    right: 98rpx;
}

.default image {
    width: 30rpx;
    height: 30rpx;
}

.default text {
    font-size: 20rpx;
    margin-left: 10rpx;
}