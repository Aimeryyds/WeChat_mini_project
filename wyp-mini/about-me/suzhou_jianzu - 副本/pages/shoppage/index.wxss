@import "../index/index.wxss";

.swiper-image {
    width: 100%;
    height: 100%;
}

.view_search {
    width: 100%;
    height: 125rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.view_searchbg {
    width: 86%;
    height: 70rpx;
    border-style: solid;
    border-width: 2rpx;
    border-color: #cdcdcd;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.view1 {
    height: 100%;
    width: 85rpx;
    flex: row;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.view1 image {
    height: 45rpx;
    width: 45rpx;
}

.input_search {
    flex-grow: 2;
    font: 29rpx;
    color: #cdcdcd;
    font-size: 80%;
}

.notice-image {
    line-height: 45px;
    height: 40px;
    width: 40rpx;
    padding: 0 10px 0 5px;
    float: left;
}

.notice-image image {
    height: 40rpx;
    width: 40rpx;
}

.notice-message {
    font-size: 14px;
    color: #666;
    word-break: normal;
    overflow: hidden;
    word-wrap: normal;
    line-height: 40px;
    height: 40px;
    padding-right: 10px;
}

.func-area {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    margin: 0 0;
    padding-top: 10rpx;
    background: #fff;
    position: relative;
}

.func-area view {
    width: 165rpx;
    text-align: center;
    margin: 5px;
}

.func-area text {
    display: block;
    color: #6c6c6c;
    font-size: 30rpx;
    line-height: 50rpx;
}

.func-area image {
    width: 100rpx;
    height: 100rpx;
}

.ad-cube-left {
    width: 50%;
    height: 100%;
    overflow: hidden;
    float: left;
}

.ad-cube-right {
    width: 50%;
    height: 100%;
    overflow: hidden;
    float: left;
}

.ad-cube-right1 {
    width: 100%;
    height: 50%;
}

.ad-cube-right2 {
    width: 100%;
    height: 50%;
}

.ad-cube-right2 image {
    width: 50%;
    height: 100%;
}

.redline {
    height: 80rpx;
    width: 10rpx;
    background-color: red;
}

.container-goods .caption {
    font-size: 32rpx;
    width: 100%;
    line-height: 60rpx;
    text-indent: 20rpx;
    padding: 10rpx;
}

.main-goods {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    padding: 10rpx;
}

.main-goods .single-goods {
    margin: 0;
    width: 50%;
}

.main-goods image {
    width: 320rpx;
    height: 370rpx;
    display: block;
    box-sizing: border-box;
}

.main-goods .title {
    display: block;
    color: #999;
    font-size: 32rpx;
    margin: 10rpx 6rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    flex-shrink: 0;
    heigth: 80rpx;
    line-height: 40rpx;
}

.main-goods .summary {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.main-goods .summary text {
    font-size: 32rpx;
    line-height: 28px;
}

.main-goods .summary .price {
    color: red;
}

.main-goods .summary .sale {
    color: gray;
}

.article_wrap_block {
    padding: 20rpx;
}