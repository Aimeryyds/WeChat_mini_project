@import "../index/index.wxss";

page {
    background: #fff;
    width: 100%;
    height: 100%;
}

swiper {
    height: 360rpx;
}

.swiper-image {
    width: 100%;
    height: 100%;
}

.wxParse {
    width: 100rpx;
    height: 100rpx;
}

.reservation {
    display: table;
    width: 100%;
    overflow-y: scroll;
}

.test {
    width: 100%;
    height: 100%;
    vertical-align: middle;
    overflow: hidden;
    position: relative;
}

.test_wrap {
    margin: 0 auto;
    width: 95%;
    height: 60rpx;
    line-height: 60rpx;
}

.res_text {
    display: inline-block;
    font-size: 28rpx;
    width: 30%;
    vertical-align: middle;
    text-align: center;
}

.res_input {
    display: inline-block;
    vertical-align: middle;
    border: 1px solid #ccc;
    width: 65%;
    margin: 40rpx auto 40rpx;
    background-color: #fff;
    font-size: 32rpx;
    height: 60rpx;
    border-radius: 10rpx;
    padding-left: 20rpx;
}

.res_btn {
    width: 74%;
    line-height: 75rpx;
    height: 75rpx;
    text-align: center;
    margin-bottom: 50rpx;
}

.res_img {
    position: absolute;
    z-index: -1;
}