page {
    overflow-x: hidden;
}

.newsTop {
    margin: 60rpx auto 20rpx;
    width: 95%;
    height: auto;
    overflow: hidden;
}

.newsTitle {
    font-family: "微软雅黑";
    font-size: 36rpx;
    width: 100%;
    height: auto;
    line-height: 60rpx;
    margin-bottom: 10rpx;
}

.newsTop .special {
    font-size: 28rpx;
    margin-right: 20rpx;
    color: #666;
}

.newsTop .specialTitle {
    font-size: 28rpx;
    margin-right: 20rpx;
    color: #666;
}

.newsTop .thumbs-up {
    font-size: 28rpx;
    color: #666;
}

.newsCont {
    font-size: 28rpx;
    color: #000;
    margin: 0rpx auto 30rpx;
    height: auto;
    line-height: 40rpx;
    width: 95%;
}

.interval {
    width: 100%;
    height: 120rpx;
}

.newImage {
    margin: 0rpx auto 40rpx;
    width: 95%;
    height: 350rpx;
    position: relative;
}

.newImage image {
    width: 100%;
    height: 100%;
}

.newImage .imageNum {
    position: absolute;
    bottom: 0rpx;
    right: 0rpx;
    display: inline-block;
    width: 100rpx;
    height: 25rpx;
    line-height: 25rpx;
    text-align: center;
    padding: 20rpx 0;
    background: rgba(0,0,0,.6);
    color: #fff;
    font-size: 28rpx;
}

.readmember {
    position: fixed;
    bottom: 100rpx;
    left: 0rpx;
    background: #fff;
    width: 100%;
    height: auto;
}

.readImage {
    background: #fff;
    margin-left: 41rpx;
    width: 84%;
    height: auto;
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding-top: 20rpx;
}

.readImage image {
    display: inline-block;
    width: 62rpx;
    height: 62rpx;
    border-radius: 50%;
    margin: 8rpx 20rpx 0 0;
    box-shadow: 0rpx 0rpx 10rpx #666;
}

.readImage image:nth-child(1) {
    margin-left: 5rpx;
}

.more {
    position: fixed;
    bottom: 100rpx;
    right: 25rpx;
    width: 5%;
    height: 70rpx;
    line-height: 62rpx;
    color: #666;
    font-size: 30rpx;
}

.partitionBottom {
    width: 100%;
    height: 120rpx;
}

.newsBottom {
    width: 100%;
    height: 100rpx;
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    background: #fff;
    z-index: 100;
}

.newsBottom .commentLeft {
    margin-top: 30rpx;
    width: 31%;
    height: 50%;
    line-height: 40rpx;
    font-size: 28rpx;
    float: left;
    text-align: center;
    vertical-align: middle;
    border-right: 2rpx solid rgba(0,0,0,.1);
}

.newsBottom .commentLeft image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: -7rpx;
    margin-right: 20rpx;
}

.newsBottom .commentRight {
    margin-top: 30rpx;
    width: 33%;
    height: 50%;
    font-size: 28rpx;
    line-height: 40rpx;
    float: left;
    text-align: center;
    vertical-align: middle;
    border-right: 2rpx solid rgba(0,0,0,.1);
}

.newsBottom .commentRight image {
    margin-right: 20rpx;
    width: 40rpx;
    height: 40rpx;
    vertical-align: -7rpx;
}

.newsBottom .commentCenter {
    margin-top: 30rpx;
    width: 31%;
    height: 50%;
    font-size: 28rpx;
    float: left;
    text-align: center;
}

.newsBottom .commentCenter image {
    margin-right: 20rpx;
    width: 40rpx;
    height: 40rpx;
    vertical-align: -7rpx;
}

.wxParse-center {
    text-align: center;
}

.wxParse-img {
    display: inline-block;
    width: auto;
    height: auto;
}

.wxParse-p {
    width: 100%;
    overflow: hidden;
}

.wxParse-section {
    width: auto;
    height: auto;
}

.artPhone {
    position: fixed;
    width: 74rpx;
    height: 74rpx;
    bottom: 240px;
    right: 10px;
}

.artPhone image {
    width: 74rpx;
    height: 74rpx;
}