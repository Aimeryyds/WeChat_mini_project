page {
    background: #eee;
}

.sc-header {
    height: 80rpx;
    width: 750rpx;
    background: #fff;
}

.view-header {
    height: 80rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
}

.view-header view {
    width: 188rpx;
    flex-shrink: 0;
    text-align: center;
    line-height: 80rpx;
    font-size: 33rpx;
    color: #444;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.seller-item {
    width: 750rpx;
    background: #fff;
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
}

.seller-info {
    margin-left: 15rpx;
    margin-right: 15rpx;
    width: 720rpx;
    height: 140rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.seller-info image {
    height: 110rpx;
    width: 240rpx;
}

.seller-info-right {
    height: 110rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.seller-info-right text {
    font-size: 30rpx;
    color: #444;
    margin-left: 20rpx;
}

.seller-mark {
    height: 60rpx;
    width: 720rpx;
    display: flex;
    flex-direction: row;
    margin-left: 15rpx;
    border-bottom-color: #eee;
    border-bottom-style: solid;
    border-bottom-width: 2rpx;
}

.seller-mark-item {
    height: 60rpx;
    width: 240rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.text-marktitle {
    font-size: 27rpx;
    color: #666;
}

.text-mark {
    font-size: 27rpx;
    color: red;
}

.text-title {
    margin-left: 18rpx;
    margin-top: 14rpx;
    font-size: 29rpx;
    color: #444;
    margin-bottom: 14rpx;
}

.seller-goods {
    height: 170rpx;
    width: 720rpx;
    margin-left: 15rpx;
    margin-right: 15rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.seller-goods-item {
    height: 170rpx;
    width: 160rpx;
}

.seller-goods-item image {
    width: 160rpx;
    height: 170rpx;
}

.view-price {
    position: relative;
    left: 0rpx;
    top: -30rpx;
    width: 160rpx;
    height: 30rpx;
    background: #888;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.view-price text {
    width: 160rpx;
    text-align: center;
    line-height: 30rpx;
    font-size: 26rpx;
    color: #fff;
}

.seller-goods-title {
    height: 50rpx;
    width: 720rpx;
    margin-left: 15rpx;
    margin-right: 15rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    margin-top: 10rpx;
}

.seller-goods-title text {
    font-size: 27rpx;
    height: 27rpx;
    line-height: 27rpx;
    color: #666;
    width: 160rpx;
    text-align: center;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.seller-btns {
    height: 50rpx;
    width: 750rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.seller-btns text {
    width: 330rpx;
    text-align: center;
    color: #888;
    border-style: solid;
    border-width: 2rpx;
    border-radius: 6rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    border-color: #aaa;
}