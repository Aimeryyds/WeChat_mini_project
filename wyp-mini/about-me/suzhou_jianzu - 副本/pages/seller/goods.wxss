page {
    background: #fff;
}

.search {
    width: 100%;
    height: 100rpx;
    border-bottom: 3rpx solid #e3e3e3;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background: #f8f8f8;
}

.search-content {
    margin-left: 20rpx;
    width: 620rpx;
    height: 70rpx;
    background: #e3e3e3;
    border-radius: 10rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.search-content image {
    width: 44rpx;
    height: 44rpx;
    margin-left: 20rpx;
}

.input_search {
    flex-grow: 2;
    margin-left: 15rpx;
    color: #999;
    font-size: 28rpx;
    line-height: 28rpx;
}

.search text {
    font-size: 28rpx;
    color: #5a5a5a;
    width: 80rpx;
    margin-right: 10rpx;
    text-align: start;
}

.menu {
    display: block;
    height: 87rpx;
    background: #fff;
}

.menu dt {
    font-size: 15px;
    float: left;
    width: 25%;
    height: 80rpx;
    text-align: center;
    background-color: #fff;
    color: #5a5a5a;
    line-height: 80rpx;
}

.menu dt.highlight {
    color: red;
    border-bottom-width: 7rpx;
    border-bottom-style: solid;
    border-bottom-color: red;
}

.menu dd {
    position: absolute;
    width: 100%;
    top: 180rpx;
    left: 0;
    z-index: 999;
}

.menu li {
    font-size: 14px;
    line-height: 34px;
    color: #575757;
    height: 34px;
    display: block;
    padding-left: 8px;
    background-color: #f8f8f8;
    border-bottom: 1px solid #dbdbdb;
}

.menu li.highlight {
    background-color: #f4f4f4;
    color: #48C23D;
}

.show {
    display: block;
}

.hidden {
    display: none;
}

.goodsList {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    background: #eee;
}

.goods-score {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
}

.goods-score text {
    display: block;
    width: 100px;
    font-size: 12px;
    color: #999;
    margin: 8px 4px;
}

.carts-item {
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
    flex-grow: 0;
    width: 357rpx;
    margin-left: 10rpx;
    margin-right: 8rpx;
    background: #fff;
    border-top-color: #eee;
    border-top-width: 10rpx;
    border-top-style: solid;
    border-bottom-color: #eee;
    border-bottom-width: 10rpx;
    border-bottom-style: solid;
}

.carts-image {
    width: 280rpx;
    height: 310rpx;
    padding: 35rpx;
}

.carts-text {
    margin-left: 20rpx;
    width: 320rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.carts-title {
    font-size: 30rpx;
    color: #444;
    height: 60rpx;
    line-height: 30rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.carts-subtitle {
    font-size: 25rpx;
    color: #a9a9a9;
    padding: 0 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.carts-price {
    color: #f60;
    font-size: 32rpx;
    line-height: 22px;
    margin-top: 15rpx;
}

.view-empty {
    width: 100%;
    height: 400rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.view-empty text {
    font-size: 32rpx;
    color: #444;
}