page {
    width: 100%;
    margin: 0 auto;
}

.header {
    width: 100%;
    margin: 0 auto;
}

.header swiper image {
    width: 100%;
}

.main_title {
    width: 95%;
    margin: 0 auto;
}

.titleFirst {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: cneter;
    justify-content: space-between;
}

.titleFirst image:nth-child(1) {
    width: 50rpx;
    height: 70rpx;
}

.titleFirst view:nth-child(2) {
    color: #333;
    font-size: 35rpx;
    text-align: center;
    line-height: 90rpx;
}

.titleFirst image:nth-child(3) {
    width: 60rpx;
    height: 60rpx;
    display: block;
    margin-top: 20rpx;
}

.titleSecond {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.starImg {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.starImg image {
    width: 40rpx;
    height: 40rpx;
}

.starImg text {
    color: #fe9b01;
    font-size: 28rpx;
    margin-left: 10rpx;
}

.titleSecond .txt {
    color: #333;
    font-size: 26rpx;
}

.titleSecond view:nth-child(1) {
    width: 50rpx;
}

.mainLine {
    width: 100%;
    height: 2rpx;
    background: #e9eaeb;
    margin: 30rpx auto;
}

.main_addr {
    width: 100%;
    margin: 0 auto;
}

.address {
    width: 95%;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.address view {
    color: #333;
    font-size: 28rpx;
}

.address image:nth-child(1) {
    width: 50rpx;
    height: 50rpx;
}

.address view:nth-child(2) {
    width: 400rpx;
}

.address view:nth-child(3) {
    width: 2rpx;
    height: 60rpx;
    background: #e9eaeb;
}

.address view:nth-child(4) {
    width: 95rpx;
}

.mainTel {
    width: 95%;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.mainTel view {
    color: #333;
    font-size: 26rpx;
}

.mainTel image {
    width: 50rpx;
    height: 50rpx;
}

.mainTxt {
    width: 95%;
    margin: 0 auto;
}

.mainTxt view {
    color: #333;
    font-size: 25rpx;
    text-indent: 20px;
    line-height: 50rpx;
}

.slide-image {
    width: 100%;
}

.modelTab {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    border-top: 1rpx solid #ccc;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.modelTab .modelTab_item {
    width: calc(100% / 3);
}

.modelTab .modelTab_item image {
    width: 50rpx;
    height: 40rpx;
    display: block;
    margin: 0 auto;
}

.modelTab .modelTab_item view {
    color: #333;
    font-size: 26rpx;
    text-align: center;
    line-height: 40rpx;
}