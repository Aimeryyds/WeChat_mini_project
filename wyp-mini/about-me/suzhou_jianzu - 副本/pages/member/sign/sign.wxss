@import "../../../wxParse/wxParse.wxss";

.topInfo {
    width: 100%;
    height: 420rpx;
    background: #24b2f2;
}

.topInfo .continuity {
    float: left;
    width: 30%;
    height: 100%;
}

.topInfo .personInfo {
    float: left;
    width: 35%;
    height: 100%;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 220rpx;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #fff;
    font-size: 26rpx;
}

.myIntegral {
    width: 95%;
    color: #fff;
    font-size: 26rpx;
    text-align: center;
}

.signCard {
    margin-top: 20rpx;
}

.signCard button {
    width: 238rpx;
    height: 68rpx;
    text-align: center;
    line-height: 68rpx;
    background: #24b2f2;
    border-radius: 30rpx;
    border: 1px solid #fff;
    color: #fff;
    font-size: 33rpx;
}

.card {
    display: block;
    width: 100%;
    color: #fff;
    text-align: center;
    margin-top: 150rpx;
}

.detial {
    margin-top: 30rpx;
    display: inline-block;
    text-align: center;
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: rgba(255,255,255,.3);
    border-radius: 30rpx;
    color: #fff;
    font-size: 28rpx;
}

.toalCard {
    display: block;
    width: 100%;
    color: #fff;
    text-align: center;
    margin-top: 60rpx;
}

.day {
    margin-top: 15rpx;
    display: block;
    width: 100%;
    color: #ff0;
    text-align: center;
}

.topInfo .total {
    float: left;
    width: 30%;
    height: 100%;
    text-align: right;
}

.distance {
    width: 100%;
    height: 39rpx;
    background: #edf3f4;
}

.t_blueTitle {
    color: #54a1c0;
}

.t_blue {
    color: #4169e1;
}

.time {
    padding: 16rpx 20rpx;
    background-color: #fff;
    display: flex;
    border-bottom: 1px solid rgba(0,0,0,.1);
}

.time view {
    flex: 1;
    font-size: 30rpx;
}

.time view text {
    font-size: 38rpx;
    color: #54a1c0;
}

.weekName {
    background-color: #dcdcdc;
    width: 100%;
    display: flex;
    padding: 16rpx 0;
}

.weekName view {
    flex: 1;
    text-align: center;
}

.week {
    width: 100%;
}

.week view {
    width: 14.2%;
    height: 120rpx;
    text-indent: 20rpx;
    display: inline-block;
}

.week view text {
    width: 100%;
    height: 100%;
    display: inline-block;
}

.calendarSign {
    margin: 20rpx;
}

.pasttime {
    border: 1px solid rgba(0,0,0,.1);
    border-left: none;
    border-top: none;
}

.week .currtimeView {
    width: 14.2%;
    height: 114rpx;
    margin-left: 20rpx;
    border: 1px solid rgba(0,0,0,.1);
    border-left: none;
    border-top: none;
}

.week .currtime {
    width: 80%;
    font-size: 28rpx;
}

.week .futuretime {
    height: 114rpx;
    width: 14%;
    border: 1px solid rgba(0,0,0,.1);
    border-left: none;
    border-top: none;
}

.box-flex {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    flex-wrap: wrap;
}

.flex-item {
    flex-flow: nowrap;
    flex-grow: 1;
    flex-shrink: 1;
    width: 14.2%;
}

.item-content {
    text-align: center;
    height: 3rem;
    line-height: 3rem;
    color: #666;
    border: 1px solid rgba(0,0,0,.1);
    border-left: none;
    border-top: none;
    position: relative;
}

.bk-color-day {
    border: 1px solid #24b2f2;
}

.signed {
    position: absolute;
    top: 0rpx;
    bottom: 0rpx;
    left: 0rpx;
    right: 0rpx;
    margin: auto;
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    background: rgba(36,178,242,.6);
    color: #fff;
}

.item-content-current-day {
    flex-grow: 2;
}

.aginCardTip {
    margin-top: 30rpx;
    color: #666;
    text-indent: 30rpx;
    font-size: 28rpx;
}

.bgtypeList {
    position: fixed;
    z-index: 3;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.7);
}

.yearMonthscroll {
    margin: 130rpx auto 0;
    width: 455rpx;
    height: 750rpx;
    background-color: #fff;
    border-radius: 15rpx;
}

.typeList {
    width: 455rpx;
    height: 75rpx;
    line-height: 83rpx;
    text-align: center;
    background-color: #fff;
    border-top: 1rpx solid #d2d3d5;
}

.typeList:nth-child(1) {
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
}

.typeList:last-child {
    border-bottom-left-radius: 15rpx;
    border-bottom-right-radius: 15rpx;
}

.typeListDetail {
    display: block;
    height: 75rpx;
    line-height: 103rpx;
    padding-left: 140rpx;
}

.yearAndMonth {
    color: #666;
    font-size: 30rpx;
}

.cardFirstType {
    padding: 10rpx 20rpx 35rpx 20rpx;
    border-radius: 15rpx;
    width: 550rpx;
    height: auto;
    line-height: 83rpx;
    text-align: center;
    background-color: #fff;
    border-top: 1rpx solid #d2d3d5;
    margin: 0 auto;
    margin-top: 250rpx;
    color: #666;
}

.determine {
    margin: 0 auto;
    margin-top: 30rpx;
    width: 200rpx;
    line-height: 62rpx;
    height: 70rpx;
    border-top: 1px solid #ccc;
    background: #24b2f2;
    border-radius: 10rpx;
    color: #fff;
}

.cardAgainType {
    padding: 10rpx 20rpx 15rpx 20rpx;
    border-radius: 15rpx;
    width: 455rpx;
    height: 192rpx;
    line-height: 103rpx;
    text-align: center;
    background-color: #fff;
    border-top: 1rpx solid #d2d3d5;
    margin: 0 auto;
    margin-top: 250rpx;
    color: #666;
    font-size: 30rpx;
}

.determineAgin {
    margin: 0 auto;
    width: 200rpx;
    line-height: 62rpx;
    height: 70rpx;
    border-top: 1px solid #ccc;
    background: #24b2f2;
    border-radius: 10rpx;
    color: #fff;
    font-size: 30rpx;
}

.cardRule {
    padding: 10rpx 20rpx 25rpx 20rpx;
    border-radius: 15rpx;
    width: 455rpx;
    height: auto;
    line-height: 50rpx;
    text-align: left;
    background-color: #fff;
    border-top: 1rpx solid #d2d3d5;
    margin: 0 auto;
    margin-top: 250rpx;
    color: #666;
    font-size: 30rpx;
}

.determineRule {
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 230rpx;
    color: #fff;
    border-top: 1px solid rgba(0,0,0,.1);
    text-align: center;
    background: #24b2f2;
    border-radius: 10rpx;
}

.determineRuleTitle {
    color: #000;
    font-size: 42rpx;
    text-align: center;
    margin-bottom: 35rpx;
}

.wxParse-p .WxEmojiView {
    color: rgba(0,0,0,.7);
}

.rule {
    position: fixed;
    z-index: 3;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.7);
}