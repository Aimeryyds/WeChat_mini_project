.tool {
    margin-top: 10rpx;
    width: 100%;
    height: 89rpx;
    line-height: 89rpx;
    text-align: center;
    font-weight: 700;
    color: #000;
    font-size: 30rpx;
    background: #fff;
    border-bottom: 1rpx solid rgba(0,0,0,.1);
}

.tableviewcell {
    display: block;
    float: left;
    border-bottom: 1rpx solid rgba(0,0,0,.1);
    color: #666;
    background: #fff;
    width: 25%;
    height: 170rpx;
    text-align: center;
}

.tableviewcell .tableviewcellImage {
    margin-top: 5rpx;
    display: block;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.tableviewcell .tableviewcellImage image {
    vertical-align: middle;
    width: 40rpx;
    height: 45rpx;
}

.tableviewcell .tableviewcellImage image.shopP {
    width: 45rpx;
}

.tableviewcell .tableviewcellImage image.addressP {
    width: 35rpx;
}

.tableviewcell .tableviewcellImage image.discountP {
    width: 50rpx;
    height: 50rpx;
}

.tableviewcell .tableviewcellImage .sizeImg {
    vertical-align: middle;
    width: 50rpx;
    height: 45rpx;
}

.tableviewcell .tableviewcellImage .gongImg {
    vertical-align: middle;
    width: 50rpx;
    height: 50rpx;
}

.tableviewcell .tableviewcellImage .sizeImg.vipImg {
    width: 45rpx;
    height: 40rpx;
}

.tableviewcell .tableviewcellImage image.myActivity {
    width: 78rpx;
    height: 45rpx;
}

.tableviewcell text {
    display: block;
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 28rpx;
    color: #666;
}

.logout {
    margin: 30rpx;
}

.order-area {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background: #fff;
    padding: 24rpx 0 20rpx 0;
}

.order {
    width: 25%;
    float: left;
    text-align: center;
}

.order image {
    width: 45rpx;
    height: 38rpx;
}

.order text {
    display: block;
    text-align: center;
    font-size: 28rpx;
    color: #666;
}

.bottomTip {
    padding-top: 30rpx;
    clear: both;
    display: block;
    text-align: center;
    line-height: 150rpx;
    width: 100%;
    height: 170rpx;
    font-size: 28rpx;
    color: #666;
}

.bottomTip text {
    margin-left: 20rpx;
}

.wx-view_login {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    background: 0 0;
    background-image: url(https://wudhl.com/loginbg.png);
    background-size: cover;
    align-items: stretch;
}

.view_logup_form {
    margin-top: 40rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    background-color: rgba(255,255,255,.35);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: stretch;
    border-radius: 16rpx;
    border-style: solid;
    border-color: rgba(235,235,235,.8);
    border-width: 2rpx;
}

.wx-view_log_item {
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-style: solid;
    border-top-style: none;
    border-right-style: none;
    border-left-style: none;
    border-bottom-width: 2rpx;
    border-bottom-color: #ebebeb;
    background-color: rgba(255,255,255,.3);
    padding-left: 22rpx;
}

.view_login_splide {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    float: none;
    padding-top: 20rpx;
    background-image: url(https://img4.imgtn.bdimg.com/it/u=838229588,3667562952&fm=214&gp=0.jpg);
    background-size: cover;
}

.wx-view_log_button {
    display: flex;
    align-items: flex-end;
    width: 90%;
    align-self: center;
    flex: 0 1 auto;
    order: 1;
    flex-wrap: nowrap;
    align-content: flex-end;
    justify-content: center;
}

.wx-button_logup {
    font-size: 34rpx;
    width: 86%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    flex: 0 1 auto;
    align-self: center;
    margin-top: 24rpx;
}

.class-tab {
    display: flex;
    flex-direction: row;
    margin-top: 0rpx;
    justify-content: center;
    background: #fff;
    width: 750rpx;
    border-bottom: 3px solid #eee;
}

.text-select {
    width: 140rpx;
    font-size: 30rpx;
    color: red;
    line-height: 60rpx;
    height: 60rpx;
    border-bottom-width: 6rpx;
    border-color: red;
    border-style: solid;
    text-align: center;
    border-top-width: 0;
    border-left-width: 0;
    border-right-width: 0;
}

.text-normal {
    width: 140rpx;
    font-size: 30rpx;
    color: #4D4D4D;
    height: 60rpx;
    line-height: 60rpx;
    border-bottom-width: 0;
    border-color: red;
    border-style: solid;
    text-align: center;
    border-top-width: 0;
    border-left-width: 0;
    border-right-width: 0;
}