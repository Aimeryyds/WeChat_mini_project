page {
    background: #fff;
}

.order-item {
    margin-bottom: 10px;
    background: #fff;
}

.order-item:last-child {
    margin-bottom: 0;
}

.order-footer {
    padding: 3px 0;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    margin-right: 20rpx;
    border-bottom: 1px solid #eee;
    height: 60rpx;
    align-items: center;
}

.order-footer text {
    font-size: 28rpx;
}

.carts-item {
    display: flex;
    flex-direction: row;
    height: 150rpx;
    width: 720rpx;
    border-bottom: 1px solid #eee;
    padding: 30rpx 0 10rpx 30rpx;
}

.carts-image {
    width: 150rpx;
    height: 150rpx;
}

.carts-text {
    margin-left: 10rpx;
    width: 400rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.btn-pay {
    margin-bottom: 5rpx;
    height: 50rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    font-size: 27rpx;
    line-height: 50rpx;
    color: #fff;
    background: #ff6a6a;
    align-self: flex-end;
    border-radius: 6rpx;
    margin-left: 20rpx;
}

.btn-cancel {
    margin-bottom: 5rpx;
    height: 50rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    font-size: 27rpx;
    line-height: 50rpx;
    background-color: rgba(0,0,0,.3);
    color: #fff;
    align-self: flex-end;
    border-radius: 6rpx;
}

.carts-title {
    font-size: 28rpx;
    color: #444;
    line-height: 38rpx;
}

.carts-subtitle {
    margin-top: 20rpx;
    font-size: 25rpx;
    color: #a9a9a9;
    padding: 0 0rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.carts-price {
    color: #383838;
    font-size: 27rpx;
    line-height: 22px;
}

.carts-num {
    color: #383838;
    font-size: 28rpx;
    line-height: 22px;
}

.carts-right {
    width: 140rpx;
    display: flex;
    height: 120rpx;
    justify-content: space-around;
    flex-direction: column;
    align-items: flex-end;
    margin-right: 20rpx;
}

.view-title {
    height: 68rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 1px solid #eee;
}

.view-title image {
    margin-left: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

.view-title text {
    font-size: 28rpx;
    color: #383838;
    margin-left: 15rpx;
}

.view-title text.refundstate {
    font-size: 26rpx;
    color: #ccc;
}

.view-title text.refund {
    text-align: center;
    font-size: 26rpx;
    color: #ccc;
    width: 210rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.class-tab {
    display: flex;
    flex-direction: row;
    margin-top: 0rpx;
    justify-content: center;
    background: #fff;
    width: 750rpx;
    border-bottom: 3px solid #eee;
}

.text-select {
    width: 140rpx;
    font-size: 30rpx;
    color: red;
    line-height: 60rpx;
    height: 60rpx;
    border-bottom-width: 6rpx;
    border-color: red;
    border-style: solid;
    text-align: center;
    border-top-width: 0;
    border-left-width: 0;
    border-right-width: 0;
}

.text-normal {
    width: 140rpx;
    font-size: 30rpx;
    color: #4D4D4D;
    height: 60rpx;
    line-height: 60rpx;
    border-bottom-width: 0;
    border-color: red;
    border-style: solid;
    text-align: center;
    border-top-width: 0;
    border-left-width: 0;
    border-right-width: 0;
}

.nodata {
    width: 100%;
    height: 400rpx;
    margin: 300rpx auto;
    text-align: center;
}

.nodata image {
    width: 252rpx;
    height: 203rpx;
}

.nodata text {
    margin-top: 35rpx;
    display: block;
    width: 100%;
    height: 100rpx;
    line-height: rpx;
    font-size: 28rpx;
}