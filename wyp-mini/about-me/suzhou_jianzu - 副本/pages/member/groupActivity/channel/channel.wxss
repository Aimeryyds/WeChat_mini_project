page {
    width: 100%;
    height: 100%;
}

.concent {
    width: 95%;
    margin: 0 auto 20rpx;
}

.toAllActivity {
    position: fixed;
    width: 45rpx;
    height: 40rpx;
    top: 0rpx;
    bottom: 0rpx;
    right: 20rpx;
    margin: auto auto;
}

.concentLeft {
    width: 20%;
    height: auto;
    float: left;
}

.concentLeft .day {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    float: left;
    font-size: 50rpx;
}

.concentLeft .month {
    width: 50%;
    height: 80rpx;
    float: left;
    font-size: 28rpx;
    line-height: 98rpx;
    color: #666;
}

.concentLeft .year {
    display: block;
    width: 90%;
    text-align: center;
    font-size: 28rpx;
    line-height: 60rpx;
    color: #FBBE48;
}

.concentLeft .type {
    display: block;
    width: 90%;
    text-align: center;
    font-size: 28rpx;
    color: #30BFBC;
}

.concentLeft view {
    display: block;
    width: 90%;
    text-align: center;
    margin-top: 30rpx;
}

.concentLeft view image {
    width: 38rpx;
    height: 38rpx;
}

.concentLeft view.eidt {
    margin-top: 10rpx;
}

.concentLeft view.eidt image.eidtimg {
    width: 30rpx;
    height: 30rpx;
}

.concentRight {
    width: 75%;
    height: 100%;
    float: left;
    margin-left: 30rpx;
}

.concent .title {
    padding-top: 30rpx;
    width: 70%;
    height: auto;
    font-size: 30rpx;
    font-weight: bolder;
    line-height: 30rpx;
    padding-bottom: 20rpx;
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.concent .introduce {
    width: 90%;
    height: 36rpx;
    padding-bottom: 50rpx;
    font-size: 30rpx;
    color: #666;
    line-height: 40rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.couponNum {
    width: auto;
    height: auto;
    overflow: scroll-x;
}

.channelImageList {
    display: inline-block;
}

.channelImage {
    display: inline-block;
    margin-right: 20rpx;
    margin-top: 10rpx;
}

.concent .showImages {
    width: 100%;
}

.concent .showImages image {
    display: inline-block;
}

.concent .person {
    width: 100%;
    height: auto;
}

.concent .person .personImages {
    display: inline-block;
    height: 100%;
    width: 70%;
    vertical-align: middle;
    line-height: 100rpx;
    overflow: hidden;
}

.concent .person .personImages image {
    vertical-align: middle;
    border-radius: 50%;
    margin-right: 10rpx;
    width: 70rpx;
    height: 70rpx;
}

.concent .person .personNum {
    color: #D95940;
    display: inline-block;
    width: 30%;
    vertical-align: middle;
    line-height: 60rpx;
    text-align: right;
    font-size: 34rpx;
}

.concent .person .personNum text {
    font-size: 28rpx;
    color: #000;
    margin-right: 10rpx;
}

.noActivity {
    position: fixed;
    width: 77%;
    height: auto;
    top: 200rpx;
    left: 0rpx;
    right: 0rpx;
    margin: auto auto;
    text-align: center;
    font-size: 32rpx;
    color: #000;
    line-height: 60rpx;
}

.noActivity text {
    color: #24B2F2;
}

text.creatActi {
    display: block;
    margin: 20rpx auto 0;
    width: 200rpx;
    line-height: 62rpx;
    height: 70rpx;
    background: #24B2F2;
    border-radius: 10rpx;
    color: #fff;
    font-size: 32rpx;
}

.bgtypeList {
    position: fixed;
    z-index: 3;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.6);
}

.bgtypeList .container {
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    right: 0rpx;
    bottom: 0rpx;
    margin: auto auto;
    width: 90%;
    height: 800rpx;
    box-shadow: 0 0 10rpx #fff;
    border-radius: 10rpx;
    background: #fff;
}

.bgtypeList .container .title {
    width: 100%;
    margin: 0 auto 30rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.bgtypeList .container .title text {
    display: inline-block;
    width: 92%;
    vertical-align: middle;
    font-size: 30rpx;
    text-align: center;
    color: #000;
}

.bgtypeList .container .title image {
    display: inline-block;
    width: 38rpx;
    height: 38rpx;
    vertical-align: 11rpx;
}

.bgtypeList .container .eidtCont {
    width: 95%;
    margin: 0 auto 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    border: 1rpx solid rgba(0,0,0,.1);
    border-radius: 10rpx;
}

.bgtypeList .container .eidtCont text {
    display: inline-block;
    width: 21%;
    vertical-align: middle;
    text-align: right;
    font-size: 28rpx;
    color: #000;
    text-indent: 20rpx;
    margin-right: 9%;
}

.bgtypeList .container .eidtCont input {
    display: inline-block;
    width: 70%;
    vertical-align: middle;
    font-size: 28rpx;
    color: #000;
    border: none;
}

.areaD {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;
    margin: 0 auto;
    width: 95%;
    height: 170rpx;
    border: 1rpx solid rgba(0,0,0,.1);
    padding: 20rpx 0;
}

.areaD text {
    display: inline-block;
    width: 21%;
    vertical-align: middle;
    text-align: right;
    font-size: 28rpx;
    color: #000;
    text-indent: 20rpx;
    margin-right: 9%;
}

.areaD textarea {
    margin: 0 auto;
    width: 68%;
    height: 170rpx;
    font-size: 28rpx;
}

button.bottom {
    position: absolute;
    bottom: 30rpx;
    left: 0rpx;
    right: 0rpx;
    margin: auto auto;
    display: block;
    width: 180rpx;
    height: 70rpx;
    line-height: 70rpx;
    color: #000;
    background: transparent;
    text-align: center;
    border: 1rpx solid rgba(0,0,0,.1);
    box-shadow: 0 0 20rpx rgba(0,0,0,.1);
    font-size: 30rpx;
}