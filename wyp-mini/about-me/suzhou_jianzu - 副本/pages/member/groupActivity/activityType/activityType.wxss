.top {
    height: 20rpx;
    width: 100%;
    background: #EBEBEB;
}

.type {
    width: 100%;
    height: auto;
    padding-bottom: 30rpx;
    margin: 0 auto;
}

.typeTitle {
    margin: 0 auto;
    height: 80rpx;
    line-height: 80rpx;
    width: 95%;
    border-bottom: 1px solid #ccc;
    font-size: 28rpx;
    color: coral;
}

.typeCont {
    margin: 0 auto;
    width: 95%;
    height: auto;
}

.typeCont text {
    display: inline-block;
    color: #666;
    font-size: 28rpx;
    width: auto;
    height: 60rpx;
    padding-left: 40rpx;
    line-height: 90rpx;
}

.typeBottom {
    width: 100%;
    height: 300rpx;
    background: #EBEBEB;
}

.typeBottom .top {
    display: block;
    width: 100%;
    height: 100rpx;
    line-height: 150rpx;
    text-align: center;
}

.typeBottom .bottom {
    display: block;
    width: 100%;
    height: 200rpx;
    line-height: 110rpx;
    text-align: center;
    font-size: 26rpx;
    color: #6495ed;
}