.gallery {
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.formTitle {
    height: 84rpx;
    line-height: 64rpx;
    margin-left: 30rpx;
    font-size: 30rpx;
}

.formTitle text {
    display: inline-block;
    color: #666;
    margin-left: 430rpx;
}

.item {
    position: relative;
    margin: 10rpx 0 10rpx 20rpx;
}

.delete {
    position: absolute;
    height: 20px;
    bottom: 0;
    width: 100%;
    background: #ccc;
    opacity: .8;
}

.delete image {
    position: absolute;
    width: 20px;
    height: 20px;
}

button {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #D95940;
}

.recommend {
    color: #666;
    font-size: 32rpx;
    text-indent: 30rpx;
    padding: 30rpx 0 20rpx 0;
}

.recommendImage {
    position: relative;
    margin: 10rpx;
    display: inline-block;
}

.cancelImage {
    position: absolute;
    height: 20px;
    bottom: 10rpx;
    right: 0;
    z-index: 100;
    width: 90rpx;
    background: #000;
    opacity: .6;
    text-align: center;
    line-height: 20px;
}

.cancelImage text {
    color: #fff;
    font-size: 26rpx;
}

scroll-view {
    width: 100%;
    padding-bottom: 100rpx;
}

.bgtypeList {
    position: fixed;
    z-index: 3;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.7);
}

.cardAgainType {
    padding: 10rpx 20rpx 15rpx 20rpx;
    border-radius: 15rpx;
    width: 455rpx;
    height: 192rpx;
    line-height: 103rpx;
    text-align: center;
    background-color: #fff;
    border-top: 1rpx solid #d2d3d5;
    margin: 0 auto;
    margin-top: 250rpx;
    color: #666;
    font-size: 30rpx;
}

.determineAgin {
    margin: 0 auto;
    width: 200rpx;
    line-height: 62rpx;
    height: 70rpx;
    border-top: 1px solid #ccc;
    background: #D95940;
    border-radius: 10rpx;
    color: #fff;
    font-size: 30rpx;
}