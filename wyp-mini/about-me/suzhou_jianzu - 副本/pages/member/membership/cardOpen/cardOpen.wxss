page {
    background: #eee;
}

.cardNum {
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 20rpx auto;
    border: 1px solid #ccc;
    border-radius: 8rpx;
    background: #eee;
}

.cardNum .icon1 {
    display: inline-block;
    width: 15%;
    height: 80rpx;
    line-height: 80rpx;
    border-right: 1px solid #ccc;
    text-align: center;
}

.cardNum .icon1 image {
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    text-align: center;
}

.cardNum .content1 {
    display: inline-block;
    width: 75%;
    color: #000;
    font-size: 28rpx;
    vertical-align: middle;
    margin-left: 5%;
}

.clickRecharge {
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 20rpx auto;
    border-radius: 8rpx;
    background: #ff6a6a;
    color: #fff;
    text-align: center;
    font-size: 30rpx;
}