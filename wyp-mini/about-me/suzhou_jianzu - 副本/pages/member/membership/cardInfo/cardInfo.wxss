page {
    background: #eee;
}

.cardNum {
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 20rpx auto;
    border: 1px solid #ccc;
    border-radius: 8rpx;
    background: #eee;
}

.cardNum .icon1 {
    color: #000;
    font-size: 28rpx;
    display: inline-block;
    width: 30%;
    height: 100%;
    vertical-align: middle;
    text-align: center;
}

.cardNum .content1 {
    display: inline-block;
    width: 60%;
    height: 100%;
    text-align: right;
    color: #000;
    font-size: 28rpx;
}

.clickRecharge {
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 20rpx auto;
    border-radius: 8rpx;
    background: #ff6a6a;
    color: #fff;
    text-align: center;
    font-size: 30rpx;
}