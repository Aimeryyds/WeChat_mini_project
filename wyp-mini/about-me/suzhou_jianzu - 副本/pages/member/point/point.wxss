.view-head {
    width: 100%;
    height: 220rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background: #f5f5f5;
}

.view-moneyinfo {
    display: flex;
    flex-direction: row;
    height: 60rpx;
    align-items: flex-end;
}

.text-money-prefix {
    font-size: 32rpx;
    color: #ff4500;
    margin-bottom: 10rpx;
}

.text-money {
    margin-left: 10rpx;
    font-size: 60rpx;
    line-height: 60rpx;
    color: #ff4500;
}

.info-item {
    widows: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.info-left {
    widows: 20rpx;
    height: 200rpx;
    margin-left: 30rpx;
}

.lline {
    width: 2rpx;
    background: #ccc;
    height: 200rpx;
}

.yuan {
    width: 19rpx;
    background: red;
    border-radius: 9.5rpx;
    height: 19rpx;
}

.yuan1 {
    width: 19rpx;
    background: #a9a9a9;
    border-radius: 9.5rpx;
    height: 19rpx;
}

.info-right {
    margin-left: 10rpx;
    height: 200rpx;
    width: 670rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-bottom: 1px solid #eee;
}

.info-right text {
    line-height: 45rpx;
    font-size: 30rpx;
    color: #666;
}

.info-first {
    display: flex;
    flex-direction: row;
}

.account-item {
    display: flex;
    flex-direction: column;
}