.page {
    background-color: #eee;
}

.rec {
    padding-bottom: 30rpx;
    color: gray;
    background-color: #fff;
}

.section_tp {
    display: flex;
    flex-direction: row;
    height: 80rpx;
    font-size: 30rpx;
    background-color: #fff;
    border-top: 1rpx solid #ccc;
}

.border {
    width: 33.3%;
    text-align: center;
    line-height: 80rpx;
    border-bottom: 1rpx solid #ccc;
}

.active {
    color: red;
    border-bottom-color: red;
}

.list {
    width: 100%;
    margin-bottom: 30rpx;
    background-color: #fff;
    padding-bottom: 20rpx;
}

.list .title {
    padding-left: 20rpx;
    height: 68rpx;
    line-height: 68rpx;
    font-size: 32rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-bottom: 1rpx solid #ccc;
}

.list .item {
    display: flex;
    flex-direction: row;
    padding: 18rpx 0;
    justify-content: space-between;
    margin: 0 20rpx 20rpx;
    border-bottom: 1rpx solid #ccc;
}

.list .left {
    width: 98rpx;
    height: 98rpx;
    background-color: #fff;
    border-radius: 8rpx;
}

.list .center {
    margin-left: 20rpx;
    font-size: 28rpx;
    width: 460rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.list .right {
    font-size: 28rpx;
    text-align: right;
    color: gray;
    float: right;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.tip {
    width: 80rpx;
    height: 40rpx;
    margin-right: 16rpx;
    background-color: #ea3ea0;
    color: #fff;
    font-size: 26rpx;
    text-align: center;
    line-height: 40rpx;
    border-radius: 5rpx;
    flex-shrink: 0;
}