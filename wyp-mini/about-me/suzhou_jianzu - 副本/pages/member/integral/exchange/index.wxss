page {
    width: 100%;
    height: 100%;
}

.addr {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 20rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    border-bottom: 1rpx solid #ccc;
    margin-bottom: 30rpx;
}

.view-addressright {
    display: flex;
    flex-direction: row;
    text-align: right;
    align-items: center;
}

.text-mobile {
    color: #000;
}

.view-addressright image {
    height: 30rpx;
    width: 30rpx;
}

.list {
    width: 100%;
    margin-bottom: 30rpx;
}

.list .title {
    margin-left: 20rpx;
    height: 68rpx;
    line-height: 68rpx;
    font-size: 32rpx;
}

.list .item {
    display: flex;
    flex-direction: row;
    padding: 18rpx 0;
    background-color: #f8f8f8;
    justify-content: space-between;
}

.list .left {
    width: 98rpx;
    height: 98rpx;
    background-color: #fff;
    margin-left: 20rpx;
}

.list .center {
    margin-left: 20rpx;
    margin-top: 10rpx;
    font-size: 28rpx;
    width: 460rpx;
}

.list .right {
    font-size: 28rpx;
    margin-top: 10rpx;
    margin-left: 20rpx;
    text-align: right;
    color: gray;
    float: right;
    margin-right: 20rpx;
}

.store_list {
    display: flex;
    flex-direction: column;
    padding: 0 20rpx;
}

.store_list .item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
}

.bottom {
    height: 100rpx;
    width: 100%;
    line-height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 32rpx;
    position: fixed;
    bottom: 0;
}

.bottom .left {
    padding-left: 20rpx;
}

.bottom .right {
    width: 280rpx;
    line-height: 100rpx;
    background-color: red;
    color: #fff;
    text-align: center;
}

.contain {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    position: fixed;
    background-color: #fff;
}

.contain .img {
    margin: 300rpx auto 76rpx;
    width: 153rpx;
    height: 153rpx;
    background-color: #fff;
    display: inline-block;
}

.contain .text {
    font-weight: bolder;
    text-align: center;
    font-size: 40rpx;
    margin-bottom: 50rpx;
}

.contain .btn {
    width: 644rpx;
    border-radius: 12rpx;
    height: 76rpx;
    line-height: 76rpx;
    background-color: #ef4f4f;
    margin: 0 auto;
    color: #fff;
    text-align: center;
    font-size: 32rpx;
}

.yin {
    width: 600rpx;
    height: 125rpx;
    background-color: rgba(0,0,0,.4);
    position: fixed;
    top: 30%;
    left: 75rpx;
    text-align: center;
    line-height: 125rpx;
    color: #fff;
    border-radius: 8rpx;
    font-size: 28rpx;
    z-index: 20;
}