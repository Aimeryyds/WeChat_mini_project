.page {
    background-color: #e5e5e5;
}

.section_tp {
    display: flex;
    flex-direction: row;
    height: 80rpx;
    font-size: 30rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.section_tp view {
    width: 50%;
    text-align: center;
    line-height: 80rpx;
}

.integral {
    background-color: #fff;
    margin-bottom: 20rpx;
}

.integral .i_tp {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    border-bottom: 1rpx solid #d5d5d5;
    padding-left: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.integral .i_list {
    margin: 10rpx;
    display: flex;
    flex-direction: row;
    font-size: 28rpx;
    flex-wrap: wrap;
}

.integral .item {
    margin: 10rpx;
    overflow: hidden;
    width: 345rpx;
}

.integral .img {
    width: 345rpx;
    height: 345rpx;
    background-color: #fff;
}

.integral .title {
    height: 70rpx;
    line-height: 40rpx;
    margin-top: 6rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.integral .bottom {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 50rpx;
}

.integral .left {
    display: flex;
    flex-direction: row;
    line-height: 60rpx;
    color: #f60;
    font-weight: bolder;
}

.integral .right {
    width: 90rpx;
    height: 45rpx;
    background-color: #f60;
    color: #fff;
    font-size: 27rpx;
    border-radius: 8rpx;
    text-align: center;
    line-height: 45rpx;
    margin-top: 5rpx;
}

.integral .item_exchange {
    width: 100%;
    display: flex;
    flex-direction: row;
    padding: 10rpx 10rpx;
}

.integral .img_exchange {
    width: 170rpx;
    height: 170rpx;
    background-color: #fff;
}

.integral .wrap {
    padding-left: 20rpx;
}

.integral .title_exchange {
    margin: 0;
    height: 120rpx;
}

.integral .bottom_exchange {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 520rpx;
}