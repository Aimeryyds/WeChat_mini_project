.wrap {
    margin: 30rpx 0;
    border-top: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
}

.line {
    display: flex;
    flex-direction: row;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 20rpx;
    border-bottom: 1rpx solid #ccc;
    font-size: 30rpx;
}

.line view {
    width: 200rpx;
}

.line input {
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 20rpx;
    width: 100%;
}

.submit {
    margin: 0 20rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: red;
    color: #fff;
    text-align: center;
    border-radius: 12rpx;
}