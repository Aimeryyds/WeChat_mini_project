.wrap {
    border-bottom: 1rpx solid #ccc;
    border-top: 1rpx solid #ccc;
    margin: 20rpx 0;
}

.item {
    margin: 0 20rpx;
    border-bottom: 1rpx solid #ccc;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    padding: 20rpx 0;
    height: 100%;
    justify-content: space-between;
}

.content {
    font-size: 30rpx;
    margin-left: 20rpx;
    width: 520rpx;
    overflow: hidden;
}

.order_wrap {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.order {
    padding-left: 20rpx;
    border-left: 1rpx solid #ccc;
}