.contain {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.img {
    margin: 300rpx auto 76rpx;
    width: 153rpx;
    height: 153rpx;
    background-color: #fff;
    display: inline-block;
}

.text {
    font-weight: bolder;
    text-align: center;
    font-size: 40rpx;
    margin-bottom: 50rpx;
}

.btn {
    width: 644rpx;
    border-radius: 8rpx;
    height: 76rpx;
    line-height: 76rpx;
    background-color: #ef4f4f;
    margin: 0 auto;
    color: #fff;
    text-align: center;
    font-size: 32rpx;
}