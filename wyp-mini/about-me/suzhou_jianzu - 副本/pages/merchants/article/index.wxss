.article_wrap_block {
    padding: 20rpx;
}

.article_img {
    width: 160rpx;
    height: 160rpx;
    background-color: #fff;
    float: left;
    overflow: hidden;
}

.article_title {
    padding-left: 20rpx;
    float: left;
    position: relative;
}

.article_subtitle {
    height: 120rpx;
    font-size: 36rpx;
}

.article_subdesc {
    height: 40rpx;
    font-size: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}