page {
    background: #fff;
}

.wx-view_login {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    background: 0 0;
    background-size: cover;
    align-items: stretch;
}

.view_logup_form {
    margin-top: 40rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    background-color: rgba(255,255,255,.35);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: stretch;
    border-radius: 16rpx;
    border-style: solid;
    border-color: rgba(235,235,235,.8);
    border-width: 2rpx;
}

.wx-view_log_item {
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-style: solid;
    border-top-style: none;
    border-right-style: none;
    border-left-style: none;
    border-bottom-width: 2rpx;
    border-bottom-color: #ebebeb;
    background-color: rgba(255,255,255,.3);
    padding-left: 22rpx;
}

.view_login_splide {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    float: none;
    padding-top: 20rpx;
    background-image: url(http://img4.imgtn.bdimg.com/it/u=838229588,3667562952&fm=214&gp=0.jpg);
    background-size: cover;
}

.wx-view_log_button {
    display: flex;
    align-items: flex-end;
    width: 90%;
    align-self: center;
    flex: 0 1 auto;
    order: 1;
    flex-wrap: nowrap;
    align-content: flex-end;
    justify-content: center;
}

.wx-button_logup {
    font-size: 34rpx;
    width: 86%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    flex: 0 1 auto;
    align-self: center;
    margin-top: 24rpx;
}

.view_forgetOrLogup {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 86%;
}

.view_otherAccount_column {
    width: 90%;
    margin-bottom: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    background: 0 0;
}

.view_accounts {
    width: 90%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    background: 0 0;
}

.img_account {
    width: 60rpx;
    height: 60rpx;
    border: none;
    border-radius: 60rpx;
    background-size: cover;
    background-color: rgba(255,255,255,.3);
}

.btn_getnum {
    font-size: 30rpx;
    font-weight: 550;
    font-family: 宋体;
    color: #3AA0B7;
    background-color: rgba(255,255,255,.7);
    border: solid;
    border-color: #3AA0B7;
    border-width: 2rpx;
    border-radius: 8rpx;
    width: 172rpx;
    height: 60rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-right: 50rpx;
}

.wx_input {
    font-size: 34rpx;
    font-weight: 550;
    font-family: 宋体;
    background: 0 0;
    color: #3AA0B7;
}

.wx-text_logup {
    width: 170rpx;
    flex: 0 0 auto;
    font-size: 34rpx;
    font-weight: 550;
    font-family: 宋体;
    background: 0 0;
    color: #232323;
}

.wx-text_logup_to {
    font-size: 26rpx;
    text-align: left;
    color: #f10119;
    text-decoration: underline;
    align-self: flex-end;
    margin-top: 30rpx;
    margin-bottom: 2rpx;
}

.text_title {
    font-family: 宋体;
    font-size: 30rpx;
    font-weight: 600;
    color: rgba(255,255,255,.8);
}

.my_toast_title {
    font-size: 32rpx;
    color: #fff;
    font-weight: 700;
    font-family: 宋体;
    text-align: center;
}

.wx-button_register {
    font-size: 34rpx;
    width: 86%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    flex: 0 1 auto;
    align-self: center;
    margin-top: 24rpx;
    background: #fff;
    color: #3AA0B7;
    border-color: #3AA0B7;
    border-width: 2rpx;
    border-style: solid;
}

.line {
    width: 100%;
    height: 2rpx;
    background: rgba(235,235,235,.8);
}