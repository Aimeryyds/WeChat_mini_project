.search {
    width: 100%;
    height: 80rpx;
    background: #ff0;
    text-align: center;
}

.view_search {
    width: 100%;
    height: 100rpx;
    background: #fff;
    display: flex;
    position: relative;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.view_searchbg {
    width: 570rpx;
    height: 60rpx;
    border-style: solid;
    border-width: 2rpx;
    overflow: hidden;
    border-color: #cdcdcd;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.input_search {
    flex-grow: 2;
    color: #666;
    font-size: 28rpx;
}

.view1 {
    height: 100%;
    width: 85rpx;
    flex: row;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.view1 image {
    height: 45rpx;
    width: 45rpx;
}

.item {
    display: flex;
    flex-direction: row;
    padding: 20rpx;
    border-bottom: 1rpx solid #e3e3e3;
}

.img {
    width: 240rpx;
    height: 180rpx;
    background-color: pink;
}

.content {
    margin-left: 20rpx;
}

.title {
    font-size: 34rpx;
    font-weight: bolder;
    margin-bottom: 30rpx;
}

.wrap {
    display: flex;
    flex-direction: row;
    font-size: 28rpx;
    width: 400rpx;
    justify-content: center;
}

.wrap view:nth-child(1) {
    margin-right: 15rpx;
}