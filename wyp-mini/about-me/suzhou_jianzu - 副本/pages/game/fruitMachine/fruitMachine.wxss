@import "../../../components/components.wxss";

page {
    width: 100%;
    height: 100%;
}

.fruitMachineBg {
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    background-position: center center;
    background-size: 100% 100%;
    overflow: hidden;
    margin: 0 auto;
}

.fruitMachineTop {
    width: 100%;
    height: 312rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    margin-bottom: 50rpx;
    color: #fff;
}

.fruitMachineTop image {
    display: inline-block;
    width: 80rpx;
    height: 80rpx;
    border-radius: 18rpx;
    vertical-align: middle;
    margin-right: 40rpx;
}

.fruitMachineTop text {
    padding: 0 10rpx;
    display: inline-block;
    height: 50rpx;
    line-height: 50rpx;
    background: #E44245;
    border-radius: 8rpx;
    vertical-align: middle;
}

.countPrize {
    width: 42%;
    height: 90rpx;
    line-height: 90rpx;
    margin: 10rpx auto 0;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
    background: #DA3038;
    border-radius: 10rpx;
}

.countPrize text {
    padding: 0 10rpx;
    color: #FFE400;
    font-size: 48rpx;
}

.rule {
    width: 90%;
    margin: 0 auto;
}

.rule text {
    display: block;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #FFE400;
    height: auto;
}

.ruleCont {
    text-align: center;
    padding-top: 20rpx;
    width: 83%;
    height: 155rpx;
    margin: auto auto;
    color: #fff;
    font-size: 26rpx;
}

.bgtypeList {
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.8);
    background-repeat: no-repeat;
    background-size: contain;
    text-align: center;
}

.bgtypeList .prizeCont {
    position: absolute;
    width: 57%;
    height: 530rpx;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    font-size: 32rpx;
    color: orange;
    background: #C76365;
    border-radius: 10rpx;
    overflow: hidden;
}

.prizeCont text.close {
    display: block;
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    border-radius: 50%;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.prizeCont .pirzeIcon {
    width: 65%;
    overflow: hidden;
    text-align: center;
    background: #fff;
    margin: 90rpx auto 0;
    height: 250rpx;
    line-height: 250rpx;
    border-radius: 10rpx;
}

.prizeCont .pirzeIcon image {
    display: inline-block;
    vertical-align: middle;
    width: 75%;
}

.prizeDetail {
    width: 400rpx;
    height: 70rpx;
    font-size: 32rpx;
    color: #fff;
    padding: 0 10rpx;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 20rpx auto 0;
    line-height: 70rpx;
    font-weight: bolder;
}

.bgtypeList .prizeOk {
    display: block;
    margin-top: 20rpx;
    width: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin: 20rpx auto;
    font-size: 28rpx;
    color: #fff;
    border-radius: 8rpx;
    background: #FEBE36;
    padding: 0 10rpx;
    text-align: center;
}