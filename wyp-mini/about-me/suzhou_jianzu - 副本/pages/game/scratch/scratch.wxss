page {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.scratchBg {
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    background-position: center center;
    background-size: 100% 100%;
    overflow: hidden;
}

.scratchTop {
    width: 100%;
    height: 420rpx;
    line-height: 120rpx;
    text-align: center;
    font-size: 32rpx;
    position: relative;
}

.countPrize {
    position: absolute;
    width: 49%;
    height: 85rpx;
    line-height: 85rpx;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    background: url(http://tws.cnweisou.com/images/scratchCount.png) center center;
    background-size: cover;
    border-radius: 10rpx;
    bottom: 10rpx;
}

.countPrize text {
    padding: 0 10rpx;
    color: #FFE400;
    font-size: 40rpx;
}

.scratch_txt {
    position: absolute;
    top: 0;
    width: 85%;
    line-height: 395rpx;
    height: 395rpx;
    text-align: center;
    color: #3985ff;
    font-size: 40rpx;
    pointer-events: none;
    z-index: 0;
    border-radius: 5px;
    background: #fff;
    left: 40rpx;
    padding: 10rpx;
    background: #FED22B;
    padding-bottom: 10rpx;
}

button {
    margin-top: 50rpx;
    width: 325rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
    border: none;
    background: #E85857;
}

button.disabled {
    pointer-events: none;
    background: #F29284;
}

.scratchBottom {
    margin-top: 30rpx;
    width: 100%;
    height: 250rpx;
}

.scratchBottom .title {
    width: 52rpx;
    height: 100%;
    color: #F4830F;
    font-size: 38rpx;
    margin-left: 20rpx;
    float: left;
}

.scratchBottom .cont {
    width: 80%;
    height: 80%;
    color: #fff;
    font-size: 26rpx;
    margin: 20rpx 0 0 20px;
    float: left;
}

.bgtypeList {
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.8);
    background-repeat: no-repeat;
    background-size: contain;
    text-align: center;
}

.bgtypeList .prizeCont {
    position: absolute;
    width: 57%;
    height: 530rpx;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    font-size: 32rpx;
    color: orange;
    background: #C76365;
    border-radius: 10rpx;
    overflow: hidden;
}

.prizeCont text.close {
    display: block;
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    border-radius: 50%;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.prizeCont .pirzeIcon {
    width: 65%;
    overflow: hidden;
    text-align: center;
    background: #fff;
    margin: 90rpx auto 0;
    height: 250rpx;
    line-height: 250rpx;
    border-radius: 10rpx;
}

.prizeCont .pirzeIcon image {
    display: inline-block;
    vertical-align: middle;
    width: 75%;
}

.prizeDetail {
    width: 400rpx;
    height: 70rpx;
    font-size: 32rpx;
    color: #fff;
    padding: 0 10rpx;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 20rpx auto 0;
    line-height: 70rpx;
    font-weight: bolder;
}

.bgtypeList .prizeOk {
    display: block;
    margin-top: 20rpx;
    width: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin: 20rpx auto;
    font-size: 28rpx;
    color: #fff;
    border-radius: 8rpx;
    background: #FEBE36;
    padding: 0 10rpx;
    text-align: center;
}