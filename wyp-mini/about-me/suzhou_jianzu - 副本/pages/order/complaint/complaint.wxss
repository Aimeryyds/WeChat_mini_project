Pages {
    font-family: '微软雅黑';
}

.toptitle {
    height: 100rpx;
    line-height: 100rpx;
    width: 100%;
    font-size: 30rpx;
    color: #666;
    text-align: center;
    border-bottom: 1rpx solid rgba(0,0,0,.1);
}

textarea.reviewText {
    padding: 20rpx 0 20rpx 10rpx;
    width: 93%;
    height: 200rpx;
    margin: 35rpx auto 0rpx;
    background: #F3F2F0;
    line-height: 40rpx;
    font-size: 30rpx;
}

button.reviewButton {
    margin: 35rpx auto 0rpx;
    display: block;
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
}

.talkCont {
    margin: 40rpx;
    width: 100%;
    height: auto;
    line-height: 50rpx;
    font-size: 32rpx;
}

.talkCont .talcImg {
    width: 100rpx;
    height: 80rpx;
    float: left;
    text-align: right;
    margin-right: 20rpx;
}

.talkCont .talcImg image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.talkCont .rightCont {
    float: left;
    width: 600rpx;
    height: auto;
    position: relative;
}

.talkCont .rightContBottom {
    margin-bottom: 30rpx;
}

.talkCont .rightCont2 {
    margin-bottom: 20rpx;
    padding: 10rpx 10rpx 0 20rpx;
    background: #F5F5F5;
    border-radius: 8rpx;
}

.rightCont .rightContTop {
    font-size: 28rpx;
    color: #2D7CD1;
}

.rightCont .special {
    font-size: 24rpx;
    margin-right: 20rpx;
    color: #666;
}

.rightCont .special2 {
    font-size: 24rpx;
    margin-right: 20rpx;
    color: #2D7CD1;
}

.rightCont image {
    display: inline-block;
    margin-right: 10rpx;
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
}

.rightCont .reviewPsition {
    display: inline-block;
    margin-right: 10rpx;
    width: auto;
    vertical-align: middle;
    font-size: 24rpx;
    color: #666;
}

.rightCont .report {
    position: absolute;
    right: 0rpx;
    top: 58rpx;
    color: #9CB2C8;
    font-size: 28rpx;
}

.rightCont .report2 {
    position: absolute;
    right: 33rpx;
    top: 80rpx;
    color: #9CB2C8;
    font-size: 28rpx;
}

.talkCont .rightCont .talkDetialCont {
    line-height: 40rpx;
}

.rightCont .talkDetial {
    line-height: 0rpx;
    font-size: 30rpx;
    color: #000;
    height: auto;
    width: 100%;
}

.clear {
    clear: both;
}

.bottomMyQues {
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    background: orange;
    color: #fff;
}