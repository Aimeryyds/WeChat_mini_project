Pages {
    font-family: '微软雅黑';
}

.toptitle {
    height: 100rpx;
    line-height: 100rpx;
    width: 100%;
    font-size: 30rpx;
    color: #666;
    text-align: center;
    border-bottom: 1rpx solid rgba(0,0,0,.1);
}

.toptitle1 {
    height: 100rpx;
    width: 100%;
}

.talkCont {
    width: 100%;
    height: auto;
    line-height: 50rpx;
    font-size: 32rpx;
    border-bottom: 1rpx solid rgba(0,0,0,.1);
    padding-bottom: 20rpx;
}

.question {
    width: 90%;
    height: auto;
    font-size: 30rpx;
    color: #000;
    margin: 0 auto;
    margin-top: 20rpx;
}

.question .title {
    width: 40rpx;
    height: 40rpx;
    font-size: 30rpx;
    color: #fff;
    background: #FF6A6A;
    text-align: center;
    line-height: 40rpx;
    margin-bottom: 15rpx;
}

.titleTip text {
    font-size: 28rpx;
    color: #2D7CD1;
    line-height: 40rpx;
    margin-right: 20rpx;
    margin-top: 15rpx;
}

.titleTip text:nth-last-child(1) {
    font-size: 24rpx;
    color: #666;
}

.titleTip image {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.question .cont {
    text-indent: 30rpx;
    width: 90%;
    height: auto;
    font-size: 30rpx;
    line-height: 40rpx;
    color: #000;
}

.answer {
    width: 90%;
    height: auto;
    font-size: 30rpx;
    color: #000;
    margin: 20rpx auto 0;
}

.answer .title {
    width: 40rpx;
    height: 40rpx;
    font-size: 30rpx;
    color: #fff;
    background: #856CE8;
    text-align: center;
    line-height: 40rpx;
    margin-bottom: 15rpx;
}

.answer text {
    font-size: 28rpx;
    color: #2D7CD1;
    line-height: 40rpx;
    margin-right: 30rpx;
    margin-top: 15rpx;
}

.answer text:nth-last-child(1) {
    font-size: 24rpx;
    color: #666;
}

.answer .cont {
    text-indent: 30rpx;
    width: 90%;
    height: auto;
    font-size: 30rpx;
    line-height: 40rpx;
    color: #000;
}

.talkCont .talcImg {
    width: 100rpx;
    height: 80rpx;
    float: left;
    text-align: right;
    margin-right: 20rpx;
}

.talkCont .talcImg image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.talkCont .rightCont {
    float: left;
    width: 600rpx;
    height: auto;
    position: relative;
}

.talkCont .rightContBottom {
    margin-bottom: 30rpx;
}

.talkCont .rightCont2 {
    margin-bottom: 20rpx;
    padding: 10rpx 10rpx 0 20rpx;
    background: #F5F5F5;
    border-radius: 8rpx;
}

.rightCont .rightContTop {
    font-size: 28rpx;
    color: #2D7CD1;
}

.rightCont .special {
    font-size: 24rpx;
    margin-right: 20rpx;
    color: #666;
}

.rightCont .special2 {
    font-size: 24rpx;
    margin-right: 20rpx;
    color: #2D7CD1;
}

.rightCont image {
    display: inline-block;
    margin-right: 10rpx;
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
}

.rightCont .reviewPsition {
    display: inline-block;
    margin-right: 10rpx;
    width: auto;
    vertical-align: middle;
    font-size: 24rpx;
    color: #666;
}

.rightCont .report {
    position: absolute;
    right: 0rpx;
    top: 58rpx;
    color: #9CB2C8;
    font-size: 28rpx;
}

.rightCont .report2 {
    position: absolute;
    right: 33rpx;
    top: 80rpx;
    color: #9CB2C8;
    font-size: 28rpx;
}

.talkCont .rightCont .talkDetialCont {
    line-height: 40rpx;
}

.rightCont .talkDetial {
    line-height: 0rpx;
    font-size: 30rpx;
    color: #000;
    height: auto;
    width: 90%;
}

.talkCont .rightCont .talkDetialCont text {
    display: block;
    line-height: 40rpx;
    font-size: 30rpx;
    color: #000;
}

.myanswer {
    margin-left: 120rpx;
    width: 100%;
    line-height: 40rpx;
    font-size: 30rpx;
    color: #000;
    height: auto;
}

.myanswer text {
    display: block;
    line-height: 40rpx;
    font-size: 30rpx;
    color: #000;
}

.clear {
    clear: both;
}

.bottomMyQues {
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    background: #FF6A6A;
    color: #fff;
}

.noActivity {
    width: 77%;
    height: auto;
    margin: 200rpx auto 0;
    text-align: center;
    font-size: 32rpx;
    color: #000;
    line-height: 60rpx;
}

.noActivity text {
    color: #64C164;
}

text.creatActi {
    display: block;
    margin: 20rpx auto 0;
    width: 200rpx;
    line-height: 62rpx;
    height: 70rpx;
    background: #64C164;
    border-radius: 10rpx;
    color: #fff;
    font-size: 32rpx;
}