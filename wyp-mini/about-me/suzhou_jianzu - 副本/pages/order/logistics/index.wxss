.list {
    border-top: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
    font-size: 28rpx;
    padding-right: 20rpx;
    margin-bottom: 200rpx;
}

.item {
    padding: 30rpx 0 0 20rpx;
    border-left: 1rpx solid #ccc;
    margin-left: 20rpx;
    position: relative;
}

.item_wrap {
    border-bottom: 1rpx solid #ccc;
    margin-left: 20rpx;
    padding-bottom: 30rpx;
    display: flex;
    flex-direction: column;
}

.first {
    position: absolute;
    left: -9rpx;
    top: 44%;
    z-index: 1;
    width: 18rpx;
    height: 18rpx;
    background-color: red;
    border-radius: 50%;
}

.icon {
    position: absolute;
    left: -9rpx;
    top: 44%;
    z-index: 1;
    width: 18rpx;
    height: 18rpx;
    background-color: gray;
    border-radius: 50%;
}

text {
    font-family: arial;
}