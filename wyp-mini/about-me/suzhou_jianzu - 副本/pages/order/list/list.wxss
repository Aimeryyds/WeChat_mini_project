page {
    background: #fff;
}

.order-item {
    background: #fff;
}

.order-item:last-child {
    margin-bottom: 0;
}

.order-footer {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    height: 100rpx;
    align-items: center;
}

.order-footer text {
    font-size: 25rpx;
}

.carts-item {
    display: flex;
    flex-direction: row;
    min-height: auto;
    height: auto;
    border-bottom: 1px solid #eee;
    padding: 30rpx 0 10rpx 30rpx;
}

.carts-image {
    width: 150rpx;
    height: 150rpx;
}

.carts-text {
    margin-left: 10rpx;
    width: 400rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.btn-pay {
    margin-bottom: 25rpx;
    height: 55rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    font-size: 27rpx;
    line-height: 53rpx;
    color: #fff;
    background: #ff6a6a;
    align-self: flex-end;
    border-radius: 6rpx;
    margin-left: 20rpx;
}

.btn-cancel {
    margin-bottom: 25rpx;
    height: 55rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    font-size: 27rpx;
    line-height: 53rpx;
    background-color: rgba(0,0,0,.3);
    color: #fff;
    align-self: flex-end;
    border-radius: 6rpx;
}

.carts-title {
    font-size: 28rpx;
    color: #444;
    line-height: 38rpx;
}

.carts-subtitle {
    margin-top: 20rpx;
    font-size: 25rpx;
    color: #a9a9a9;
    padding: 0 0rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: auto;
}

.carts-subtitle text {
    display: inline-block;
    height: auto;
}

.carts-price {
    color: #383838;
    font-size: 27rpx;
    line-height: 22px;
}

.carts-num {
    color: #383838;
    font-size: 28rpx;
    line-height: 22px;
}

.carts-right {
    width: 140rpx;
    display: flex;
    height: 120rpx;
    justify-content: space-around;
    flex-direction: column;
    align-items: flex-end;
    margin-right: 20rpx;
}

.view-title {
    margin-right: 20rpx;
    height: 68rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 1px solid #eee;
    line-height: 60rpx;
}

.view_ztjg {
    display: flex;
    flex-direction: row;
    border-bottom: 1px solid #eee;
    font-size: 27rpx;
    justify-content: space-between;
    margin: 0 20rpx;
}

.view_left {
    display: flex;
    flex-direction: column;
    height: 100rpx;
    text-align: left;
}

.view_right {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
}

.btn_pay {
    margin-bottom: 5rpx;
    height: 50rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    font-size: 27rpx;
    line-height: 50rpx;
    color: #fff;
    background: #ff6a6a;
    border-radius: 6rpx;
    margin-left: 20rpx;
    width: 100rpx;
    text-align: center;
    margin-right: 20rpx;
}

.view-title image {
    margin-left: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

.view-title text {
    font-size: 27rpx;
    color: #383838;
    margin-left: 15rpx;
}

.view-title text.refundstate {
    font-size: 26rpx;
    color: #ccc;
}

.view-title text.refund {
    text-align: center;
    font-size: 26rpx;
    color: #ccc;
    width: 210rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.class-tab {
    display: flex;
    flex-direction: row;
    margin-top: 0rpx;
    justify-content: center;
    background: #fff;
    border-bottom: 3px solid #eee;
}

.text-select {
    width: 140rpx;
    font-size: 30rpx;
    color: #FF6A6A;
    line-height: 60rpx;
    height: 60rpx;
    border-bottom-width: 6rpx;
    border-color: #FF6A6A;
    border-style: solid;
    text-align: center;
    border-top-width: 0;
    border-left-width: 0;
    border-right-width: 0;
}

.text-normal {
    width: 140rpx;
    font-size: 30rpx;
    color: #4D4D4D;
    height: 60rpx;
    line-height: 60rpx;
    border-bottom-width: 0;
    border-color: red;
    border-style: solid;
    text-align: center;
    border-top-width: 0;
    border-left-width: 0;
    border-right-width: 0;
}

.store {
    padding: 0 20rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.sotre_name {
    height: 80rpx;
    align-items: center;
    display: flex;
    flex-direction: row;
    font-size: 27rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #eee;
}

.store_img {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.st_item {
    display: flex;
    flex-direction: row;
    width: 100%;
    border-bottom: 1rpx solid #eee;
    padding: 20rpx 0;
}

.store:last-child {
    border-bottom: none;
}

.img {
    width: 140rpx;
    height: 140rpx;
}

.view_td {
    width: 560rpx;
    margin: 0 20rpx 0 10rpx;
}

.title {
    position: relative;
    line-height: 20px;
    max-height: 40px;
    font-size: 27rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.desc {
    position: relative;
    line-height: 20px;
    max-height: 40px;
    overflow: hidden;
    font-size: 24rpx;
    color: gray;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.view_ps {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 27rpx;
    vertical-align: vertical;
    line-height: 25px;
}

.price {
    color: red;
}

.noData {
    width: 100%;
    margin: 300rpx auto 0;
}

.noData image {
    width: 150rpx;
    height: 150rpx;
    margin: 0 auto;
    display: block;
}

.noData view {
    color: #9c9c9c;
    font-size: 30rpx;
    text-align: center;
    margin: 20rpx auto 0;
}

.scrollTop {
    width: 60rpx;
    height: 60rpx;
    position: fixed;
    bottom: 30rpx;
    right: 30rpx;
    z-index: 10000;
}

.scrollTop image {
    width: 60rpx;
    height: 60rpx;
}