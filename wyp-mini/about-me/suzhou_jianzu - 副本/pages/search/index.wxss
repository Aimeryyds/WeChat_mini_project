.parent {
    width: 100%;
    display: flex;
    flex-direction: column;
    padding-top: 50rpx;
    align-items: flex-start;
}

.text-title {
    font-size: 33rpx;
    color: #fff;
    background: #e31939;
    flex-grow: 0;
    padding: 16rpx 32rpx 16rpx 32rpx;
    margin-left: 50rpx;
}

.view_search {
    width: 100%;
    height: 70rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}

.view_searchbg {
    width: 642rpx;
    height: 70rpx;
    border-style: solid;
    border-width: 4rpx;
    border-radius: 0rpx;
    border-color: #e31939;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 50rpx;
    justify-content: space-between;
    box-sizing: border-box;
}

.input_search {
    flex-grow: 2;
    font: 31rpx;
    color: #cdcdcd;
    font-size: 80%;
}

.input_search {
    font: 14px;
    color: #999;
    margin-left: 25rpx;
}

.view1 {
    height: 100%;
    width: 85rpx;
    flex: row;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.view1 image {
    height: 45rpx;
    width: 45rpx;
}

.line {
    height: 100%;
    width: 2rpx;
    background: #cdcdcd;
}

.view-hint {
    display: flex;
    flex: row;
    margin-left: 49rpx;
    margin-top: 50rpx;
    align-items: center;
}

.text-prop {
    font-size: 30rpx;
    margin-left: 10rpx;
    color: #5e5e5e;
}

.view-hint image {
    width: 35rpx;
    height: 35rpx;
}

.view-btns {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-top: 25rpx;
    margin-left: 49rpx;
}

.view-btns-text-normal {
    padding: 10rpx 20rpx 10rpx 20rpx;
    margin-left: 10rpx;
    font-size: 29rpx;
    color: #4D4D4D;
    border-width: 2rpx;
    border-style: solid;
    border-color: #cdcdcd;
    border-radius: 8rpx;
}

.view-btns-text-select {
    padding: 10rpx 20rpx 10rpx 20rpx;
    margin-left: 10rpx;
    font-size: 27rpx;
    color: #fff;
    border-radius: 8rpx;
    background: red;
}