page {
    width: 100%;
    height: 100%;
}

.scrollY {
    width: 100%;
    height: 92%;
}

.topDetail {
    width: 95%;
    height: 100rpx;
    margin: 0 auto;
    display: flex;
    align-items: center;
    align-content: center;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #eee;
}

.topDetail image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    display: block;
    margin-right: 20rpx;
}

.topDetail .center {
    height: 100%;
    width: 60%;
}

.topDetail .center view {
    height: 50rpx;
    width: 100%;
    line-height: 50rpx;
    font-size: 28rpx;
}

.topDetail .center view.time {
    font-size: 26rpx;
}

.topDetail .right {
    height: 100%;
    width: 29%;
    font-size: 28rpx;
    line-height: 100rpx;
    color: #666;
    text-align: right;
}

.contDetail {
    width: 93%;
    height: auto;
    margin: 20rpx auto;
    font-size: 28rpx;
}

.imgDetail {
    width: 93%;
    height: auto;
    margin: 0 auto;
    text-align: center;
}

.imgDetail image {
    width: 93%;
    margin-bottom: 20rpx;
}

.message {
    width: 95%;
    height: auto;
    margin: 0 auto;
}

.message .top {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-weight: bolder;
    font-size: 30rpx;
    border-bottom: 1rpx solid #ccc;
    border-top: 1rpx solid #ccc;
    text-indent: 30rpx;
}

.message .noMessage {
    width: 100%;
    height: 200rpx;
    line-height: 200rpx;
    font-size: 28rpx;
    text-align: center;
    color: #666;
}

.message .contMessage {
    padding-top: 10rpx;
    width: 100%;
    height: auto;
    display: flex;
    align-content: center;
    flex-wrap: wrap;
    border-bottom: 1rpx solid #eee;
}

.message .contMessage image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    display: block;
    margin-right: 20rpx;
}

.message .contMessage .detail {
    width: 85%;
    height: auto;
}

.message .contMessage .detail view {
    font-size: 28rpx;
    width: 100%;
}

.message .contMessage .detail view:nth-child(1) {
    height: 60rpx;
    line-height: 60rpx;
}

.message .contMessage .detail view:nth-child(2) {
    line-height: 30rpx;
}

.message .contMessage .detail view:nth-child(3) {
    height: 60rpx;
    line-height: 60rpx;
    font-size: #666;
}

.message .contMessage .detail .secondMessage {
    width: 100%;
    height: auto;
    display: flex;
    align-content: center;
    flex-wrap: wrap;
}

.message .contMessage .detail .secondMessage image {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    display: block;
    margin-right: 20rpx;
}

.message .contMessage .detail .secondMessage .detail {
    width: 85%;
    height: auto;
}

.message .contMessage .detail .secondMessage .detail view {
    font-size: 28rpx;
    width: 100%;
}

.message .contMessage .detail .secondMessage .detail view:nth-child(1) {
    height: 60rpx;
    line-height: 60rpx;
}

.message .contMessage .detail .secondMessage .detail view:nth-child(2) {
    line-height: 30rpx;
}

.message .contMessage .detail .secondMessage .detail view:nth-child(3) {
    height: 60rpx;
    line-height: 60rpx;
    font-size: #666;
}

.line {
    width: 100%;
    height: 20rpx;
    background: #dadade;
}

.fixedBottom {
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    width: 100%;
    height: 100rpx;
    background: #fff;
    display: flex;
    align-items: center;
    align-content: center;
    flex-wrap: wrap;
}

.fixedBottom view {
    width: 23%;
    height: 100%;
    line-height: 100rpx;
    text-align: center;
}

.fixedBottom view image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 15rpx;
    vertical-align: middle;
}

.fixedBottom view:nth-child(2) image,.fixedBottom view:nth-child(3) image {
    width: 45rpx;
    height: 45rpx;
}

.fixedBottom view text {
    font-size: 28rpx;
    vertical-align: middle;
}

.fixedBottom view:nth-child(4) {
    width: 30%;
}

.fixedBottom view:nth-child(4) text {
    color: #fff;
    padding: 10rpx 30rpx;
    background: #f35155;
}

.fixedBottom .textareaView {
    border-top: 1rpx solid #eee;
    width: 100%;
    height: 100rpx;
    position: absolute;
    left: 0rpx;
    top: 0rpx;
    z-index: 10;
    background: #fff;
}

.fixedBottom .textareaView image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 15rpx;
    vertical-align: middle;
}

.fixedBottom .textareaView textarea {
    display: inline-block;
    width: 70%;
    vertical-align: middle;
    height: 100%;
    border-left: 1rpx solid #eee;
    border-right: 1rpx solid #eee;
    margin-right: 10rpx;
    font-size: 28rpx;
}

.fixedBottom .textareaView button {
    display: inline-block;
    vertical-align: middle;
    color: #fff;
    background: #f35155;
    border: none;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
}