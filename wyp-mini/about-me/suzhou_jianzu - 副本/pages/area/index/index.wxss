view {
    overflow: hidden;
}

.view_search {
    width: 100%;
    background-color: RGB(247,247,249);
    height: 125rpx;
    background: #ffffff;
    display: flex;
    position: relative;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-bottom: 20rpx;
}

.view_searchbg {
    width: 683rpx;
    border-radius: 10rpx;
    height: 60rpx;
    border-style: solid;
    border-width: 2rpx;
    overflow: hidden;
    line-height: 0;
    border-color: #cdcdcd;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    position: relative;
    background-color: #fff;
}

.img_wrap {
    width: 84rpx;
    height: 60rpx;
    background-image: url(http://tws.cnweisou.com/images/search.png);
    background-size: 44rpx 44rpx;
    background-repeat: no-repeat;
    background-position: 20rpx 8rpx;
}

.img_btn {
    width: 84rpx;
    height: 60rpx;
    background-color: #fff;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 3;
    border-color: transparent;
}

.top {
    display: flex;
    flex-direction: column;
    font-size: 26rpx;
    line-height: 60rpx;
    padding-left: 30rpx;
    width: 100%;
    height: 1200rpx;
    margin-right: 24rpx;
    display: inline-block;
}

.city {
    width: 145rpx;
    height: 56rpx;
    text-align: center;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 8rpx;
    border: 1rpx solid #6ab3d1;
    color: #55bad3;
    display: inline-block;
}

.cityx {
    width: 145rpx;
    height: 56rpx;
    text-align: center;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 8rpx;
    border: 1rpx solid #d5d5d5;
    color: black;
    display: inline-block;
    font-size: 26rpx;
}

.footer {
    display: flex;
    flex-direction: column;
    font-size: 26rpx;
    line-height: 60rpx;
}

.add {
    line-height: 80rpx;
    font-size: 26rpx;
    padding-left: 30rpx;
}

.slide {
    width: 40rpx;
    height: 1080rpx;
    position: fixed;
    right: 0;
    top: 124rpx;
