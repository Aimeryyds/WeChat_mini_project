.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    box-sizing: border-box;
}

.view-empty {
    width: 750rpx;
    height: 750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.view-empty image {
    width: 300rpx;
    height: 280rpx;
}

.hint {
    font-size: 30rpx;
    color: #999;
}

.btn {
    font-size: 32rpx;
    margin-top: 100rpx;
    border-radius: 9rpx;
    width: 100%;
    text-align: center;
}

.btn text {
    padding: 0 20rpx;
    color: #FF6A6A;
}

.carts-list {
    display: flex;
    flex-direction: column;
    margin: 0 20rpx;
}

.carts-item-title {
    display: flex;
    flex-direction: row;
    width: 100%;
    border-bottom: 1px solid #eee;
    padding: 18rpx 0;
    align-items: center;
    line-height: 50rpx;
}

.carts-item-title image {
    width: 40rpx;
    height: 40rpx;
}

.carts-item-title text {
    font-size: 27rpx;
    color: #000;
    margin-left: 14rpx;
}

.carts-item {
    display: flex;
    flex-direction: row;
    height: 220rpx;
    padding: 20rpx;
    border-style: dashed;
    border-width: 1rpx;
    border-color: #ccc;
    border-right: none;
    border-top: none;
    border-bottom: none;
    position: relative;
    box-sizing: border-box;
}

.carts-image {
    width: 170rpx;
    height: 170rpx;
    margin: 0 20rpx;
}

.carts_right {
    width: 450rpx;
}

.carts_title {
    width: 380rpx;
    font-size: 27rpx;
    line-height: 35rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    font-weight: bold;
}

.carts_optiontitle {
    font-size: 25rpx;
    line-height: 35rpx;
    color: #666;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.carts_wrap {
    width: 100%;
    display: flex;
    flex-direction: row;
    line-height: 50rpx;
}

.carts_item1,.carts_item2 {
    width: 50%;
}

.carts_item2 {
    display: flex;
    flex-direction: row-reverse;
}

.carts_text {
    width: 24%;
    line-height: 50rpx;
    color: #000;
    text-align: center;
    background-color: #e5e5e5;
}

.carts_input {
    width: 100rpx;
    line-height: 60rpx;
    height: 60rpx;
    text-align: center;
    font-size: 25rpx;
    color: #000;
    background-color: #e5e5e5;
}

.bb {
    border-bottom: 1rpx solid #eee;
}

.carts-text {
    width: 290rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.carts-right {
    height: 180rpx;
    width: 140rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: flex-end;
}

.carts-title {
    font-size: 27rpx;
    color: #000;
    line-height: 38rpx;
    flex-shrink: 0;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.carts-key-name {
    margin-top: 10rpx;
    font-size: 27rpx;
    color: #999;
}

.carts-subtitle {
    font-size: 25rpx;
    color: #a9a9a9;
    padding: 0 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.carts-price {
    color: #f60;
    font-size: 14px;
    line-height: 22px;
}

.stepper .normal {
    color: #000;
}

.stepper .disabled {
    color: #ccc;
}

.carts-list icon {
    margin-top: 60rpx;
    position: absolute;
    left: -20rpx;
    z-index: 3;
    background-color: #fff;
    padding: 10rpx 0;
}

.carts-footer {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    bottom: 0;
    border-top: 1px solid #eee;
    background: #fff;
}

.carts-footer icon {
    margin-left: 20rpx;
}

.carts-footer text {
    display: inline-block;
    height: 106rpx;
    font-size: 30rpx;
    margin-left: 8rpx;
    line-height: 80rpx;
}

.carts-footer-right {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.carts-footer .button {
    line-height: 80rpx;
    text-align: center;
    padding: 0 30rpx;
    height: 80rpx;
    background-color: #FF6A6A;
    color: #fff;
    font-size: 32rpx;
    border-radius: 0;
    border: 0;
}

.carts-footer-left {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.carts-footer-left text {
    margin-top: 20rpx;
}

.text-price {
    font-size: 27rpx;
    color: #999;
    text-decoration-line: line-through;
    margin-bottom: 10rpx;
    position: relative;
}

.text-price .text-priceline {
    position: absolute;
    top: 17rpx;
    left: 2rpx;
    width: 100%;
    height: 3rpx;
    background: rgba(0,0,0,0.6);
}

.text-red {
    font-size: 27rpx;
    color: red;
    margin-bottom: 10rpx;
}

.image-delete {
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 10rpx;
}

.line {
    width: 100%;
    height: 20rpx;
    background-color: #eee;
}

.num {
    font-size: 30rpx;
    color: #666;
    position: absolute;
    bottom: 20rpx;
    right: 0px;
}

.edit-box {
    width: 500rpx;
    height: 100%;
    position: absolute;
    top: 0;
    right: -24rpx;
    background-color: #fff;
}

.over {
    width: 130rpx;
    height: 100%;
    position: absolute;
    top: 0;
    right: 0;
    background-color: orange;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.carts_item2 {
    width: 200rpx;
    position: absolute;
    top: 80rpx;
    left: 80rpx;
}

.editNumbox {
    width: 80rpx;
    height: 90rpx;
    position: absolute;
    top: 0rpx;
    right: -20rpx;
}

.editNum {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 28rpx;
    right: 20rpx;
}

.deleteCart {
    width: 130rpx;
    height: 100%;
    position: absolute;
    top: 0;
    right: -153rpx;
    background-color: red;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}