.container {
    display: flex;
    flex-direction: row;
    padding: 0;
}

.container .item {
    text-align: center;
    border-left: 4rpx solid transparent;
    font-size: 27rpx;
    padding: 10rpx;
    border-bottom: 1px solid #cdcdcd;
}

.container .active {
    background-color: #fff;
    border-left: 4rpx solid red;
}

.right {
    width: 590rpx;
}

.view_searchbg {
    width: 590rpx;
    border-radius: 10rpx;
    height: 50rpx;
    border-style: solid;
    border-width: 2rpx;
    overflow: hidden;
    line-height: 0;
    border-color: #cdcdcd;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    position: relative;
    background-color: #fff;
}

.view_search {
    height: 80rpx;
    display: flex;
    position: relative;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.input_search {
    flex-grow: 2;
    font: 29rpx;
    color: #cdcdcd;
    font-size: 80%;
}

.input_search {
    font: 14px;
    color: #999;
    margin-left: 25rpx;
}

.img_wrap {
    width: 84rpx;
    height: 50rpx;
    background-image: url(http://tws.cnweisou.com/images/search.png);
    background-size: 40rpx 40rpx;
    background-repeat: no-repeat;
    background-position: 20rpx 6rpx;
}

.img_btn {
    width: 84rpx;
    height: 50rpx;
    background-color: #fff;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 3;
    border-color: transparent;
}

.Section {
    font-size: 27rpx;
    margin: 0 20rpx;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #ccc;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.Section .top {
    height: 80rpx;
    padding: 0 20rpx;
    line-height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-top: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
}

.Section .left {
    display: flex;
    flex-direction: row;
}

.Section .img {
    width: 80rpx;
    height: 80rpx;
    background-color: #fff;
    border-radius: 6rpx;
    display: block;
}

.Section .right {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
}

.line {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}