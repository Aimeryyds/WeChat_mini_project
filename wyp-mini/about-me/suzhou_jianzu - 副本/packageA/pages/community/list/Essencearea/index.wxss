.no_comment {
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    font-size: 28rpx;
}

.Social_commentary {
    margin-top: 20rpx;
}

.Social_commentary .top {
    display: flex;
    flex-direction: row;
    padding: 20rpx 20rpx 0;
}

.Social_commentary .nickname {
    margin-bottom: 21rpx;
    font-size: 32rpx;
    margin-top: 10rpx;
}

.Social_commentary .img {
    width: 100rpx;
    height: 100rpx;
    background-color: #fff;
    border-radius: 50%;
    display: block;
}

.Social_commentary .top_wrap {
    padding-left: 20rpx;
}

.Social_commentary .body {
    padding: 0 20rpx 20rpx;
    width: 710rpx;
}

.Social_commentary .title {
    font-weight: bolder;
    font-size: 32rpx;
    padding: 20rpx 0;
    height: 40rpx;
    line-height: 40rpx;
    display: flex;
    flex-direction: row;
}

.jin {
    font-size: 25rpx;
    line-height: 38rpx;
    text-align: center;
    background-color: orange;
    padding: 2rpx 8rpx;
    color: #fff;
    font-weight: 400;
    border-radius: 4rpx;
    overflow: hidden;
    margin-right: 12rpx;
}

.Social_commentary .content {
    font-size: 27rpx;
    color: gray;
    text-indent: 40rpx;
    letter-spacing: 1rpx;
    margin-bottom: 20rpx;
}

.Social_commentary .img_wrap {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
}

.Social_commentary .footer {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 20rpx;
    border-top: 1rpx solid #e5e5e5;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
}

.Social_commentary .postcount {
    width: 236rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.Social_commentary .goodcount {
    width: 236rpx;
    text-align: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.Social_commentary .complaints {
    width: 236rpx;
    text-align: right;
}

.icon {
    width: 32rpx;
    height: 32rpx;
    background-color: #fff;
    margin-right: 10rpx;
}