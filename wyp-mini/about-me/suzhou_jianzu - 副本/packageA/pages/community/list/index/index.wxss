.banner {
    position: relative;
    height: 500rpx;
    background-size: 100% 100%;
}

.banner .item {
    margin: 0 20rpx;
    padding: 20rpx 0;
    font-size: 30rpx;
    border-bottom: 1rpx solid #ccc;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    position: absolute;
    bottom: 0;
    color: #fff;
    width: 95%;
}

.banner .item .left {
    display: flex;
    flex-direction: row;
}

.banner .img {
    width: 100rpx;
    height: 100rpx;
    display: block;
}

.banner .right {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.banner .attention {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 10rpx 20rpx;
    background-color: orange;
    border-radius: 6rpx;
}

.line {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.Tab {
    display: flex;
    flex-direction: row;
}

.Tab .item {
    width: 250rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 28rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background-color: #fff;
}

.active {
    border-bottom: 1rpx solid orange;
    color: orange;
}

.uactive {
    border-bottom: 1rpx solid #e5e5e5;
}

.Social_commentary {
    margin-top: 20rpx;
    background-color: #fff;
}

.Social_commentary .top {
    display: flex;
    flex-direction: row;
    padding: 20rpx 20rpx 0;
}

.Social_commentary .nickname {
    margin-bottom: 21rpx;
    font-size: 32rpx;
    margin-top: 10rpx;
}

.Social_commentary .img {
    width: 100rpx;
    height: 100rpx;
    background-color: #fff;
    border-radius: 50%;
    display: block;
}

.Social_commentary .top_wrap {
    padding-left: 20rpx;
}

.Social_commentary .body {
    padding: 0 20rpx 20rpx;
    width: 710rpx;
    position: relative;
}

.Social_commentary .title {
    font-weight: bolder;
    font-size: 32rpx;
    padding: 20rpx 0;
    line-height: 40rpx;
    display: flex;
    flex-direction: row;
}

.Social_commentary .content {
    font-size: 27rpx;
    color: gray;
    text-indent: 40rpx;
    letter-spacing: 1rpx;
    margin-bottom: 20rpx;
}

.Social_commentary .img_wrap {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    position: relative;
}

.Social_commentary .footer {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 20rpx;
    border-top: 1rpx solid #e5e5e5;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    background-color: #fff;
}

.Social_commentary .postcount {
    width: 50%;
    display: flex;
    flex-direction: row;
    align-items: center;
    text-align: center;
    justify-content: center;
}

.Social_commentary .goodcount {
    width: 50%;
    text-align: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.jin {
    font-size: 25rpx;
    line-height: 38rpx;
    text-align: center;
    background-color: orange;
    padding: 2rpx 8rpx;
    color: #fff;
    font-weight: 400;
    border-radius: 4rpx;
    overflow: hidden;
    margin-right: 12rpx;
}

.icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}