<view class="Section">
    <view bindtap="toIndex" class="item" data-id="{{item.id}}" wx:for="{{data}}">
        <view class="left">
            <image class="img" src="{{item.logo}}"></image>
            <view style="margin-left: 20rpx;">
                <view class="line" style="margin-bottom: 8rpx;">{{item.title}}</view>
                <view class="line" style="font-size: 26rpx;margin-bottom: 8rpx;">话题数：{{item.postcount}} 关注数：{{item.followcount}}</view>
                <view class="line" style="font-size: 26rpx">{{item.desc}}</view>
            </view>
        </view>
        <view class="right" style="display: flex;flex-direction: row;justify-content: space-between;align-items:center;">
            <image src="http://tws.cnweisou.com/images/rightArrow.png" style="width:18rpx;height:26rpx;"></image>
        </view>
    </view>
</view>
