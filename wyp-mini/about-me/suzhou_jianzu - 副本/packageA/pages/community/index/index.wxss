.func-area {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    margin: 0 0;
    padding-top: 10rpx;
    background: #fff;
    position: relative;
}

.func-area view {
    width: 165rpx;
    text-align: center;
}

.func-area text {
    display: block;
    color: #6c6c6c;
    font-size: 30rpx;
    line-height: 50rpx;
}

.func-area image {
    width: 100rpx;
    height: 100rpx;
}

.menu_view {
    box-sizing: border-box;
    display: block;
}

swiper-item image {
    display: block;
}

.Section {
    font-size: 32rpx;
}

.Section .top {
    height: 80rpx;
    padding: 0 20rpx;
    line-height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-top: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
}

.Section .item {
    margin: 0 20rpx;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #ccc;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.Section .item .left {
    display: flex;
    flex-direction: row;
}

.Section .img {
    width: 100rpx;
    height: 100rpx;
    background-color: #fff;
    display: block;
}

.Section .right {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
}

.line {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}