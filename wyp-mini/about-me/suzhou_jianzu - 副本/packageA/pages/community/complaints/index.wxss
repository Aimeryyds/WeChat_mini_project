.mb {
    margin-bottom: 20rpx;
}

.wrap {
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
    border-bottom: 2rpx solid #e5e5e5;
    margin: 20rpx 20rpx 0;
}

.title {
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #ccc;
    margin: 0 20rpx;
    font-size: 32rpx;
}

.select {
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #e5e5e5;
    border-top: 2rpx solid #e5e5e5;
    margin: 0 20rpx;
    font-size: 32rpx;
    display: flex;
    flex-direction: row;
}

.block {
    border: 2rpx solid #d5d5d5;
    padding: 6rpx 50rpx;
    border-radius: 6rpx;
    flex-shrink: 0;
    margin: 10rpx 10rpx 0 0;
}

.active {
    color: #fff;
    background-color: orange;
    border-color: transparent;
}

.button-upload {
    width: 100rpx;
    height: 100rpx;
}

.upload {
    margin: 20rpx 20rpx 0;
    height: 80rpx;
    line-height: 80rpx;
}

textarea {
    margin: 10rpx 20rpx;
    height: 300rpx;
    width: 710rpx;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 120rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}

.gallery {
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.formTitle {
    height: 84rpx;
    line-height: 64rpx;
    margin-left: 30rpx;
    font-size: 30rpx;
}

.formTitle text {
    display: inline-block;
    color: #666;
    margin-left: 300rpx;
}

.item {
    position: relative;
    margin: 10rpx 0 10rpx 20rpx;
    overflow: hidden;
}

.delete {
    position: absolute;
    height: 30rpx;
    bottom: 0;
    width: 100%;
    background: #ccc;
    opacity: .8;
    bottom: 0;
}

.delete image {
    position: absolute;
    bottom: 0;
    width: 30rpx;
    height: 30rpx;
}