view {
    overflow: hidden;
}

.banner {
    position: relative;
    height: 140rpx;
}

.banner .item {
    padding: 0 20rpx 20rpx;
    font-size: 30rpx;
    border-bottom: 1rpx solid #ccc;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    position: absolute;
    bottom: 0;
    width: 95%;
}

.banner .left {
    display: flex;
    flex-direction: row;
}

.banner .left .wrap {
    margin-left: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.banner .levelname {
    background-color: pink;
    padding: 0 10rpx;
    font-size: 24rpx;
    line-height: 38rpx;
    margin-left: 20rpx;
    border-radius: 6rpx;
    color: #fff;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.banner .right {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
}

.line {
    display: flex;
    flex-direction: row;
    font-size: 34rpx;
}

.img {
    width: 100rpx;
    height: 100rpx;
    background-color: #fff;
    border-radius: 50%;
    display: block;
}

.contain {
    padding: 0 20rpx 30rpx;
    font-size: 27rpx;
    margin-bottom: 20rpx;
}

.contain .title {
    font-weight: bolder;
    font-size: 32rpx;
    padding: 20rpx 0;
}

.contain .levelname {
    border: 1rpx solid #00f;
    padding: 2rpx 10rpx;
    font-size: 24rpx;
    line-height: 38rpx;
    margin-left: 20rpx;
    height: 38rpx;
    border-radius: 6rpx;
    color: #00f;
    margin-top: -10rpx;
    margin-top: 4rpx;
}

.contain .content {
    margin-top: 20rpx;
    color: gray;
    text-indent: 40rpx;
    letter-spacing: 1rpx;
    line-height: 36rpx;
}

.contain .views {
    text-align: right;
    margin-right: 8rpx;
}

.time {
    font-size: 27rpx;
    display: flex;
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
}

.comment {
    margin-bottom: 120rpx;
}

.comment .top {
    padding: 0 20rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #ccc;
    border-top: 1rpx solid #ccc;
    font-size: 27rpx;
}

.no_comment {
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
}

.comment .item {
    padding: 20rpx;
    display: flex;
    flex-direction: row;
}

.comment .m_name {
    margin-left: 20rpx;
    width: 560rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 27rpx;
}

.comment .levelname {
    height: 38rpx;
    background-color: pink;
    padding: 0 10rpx;
    font-size: 24rpx;
    line-height: 38rpx;
    margin-left: 20rpx;
    border-radius: 6rpx;
    color: #fff;
}

.comment .wrap {
    padding: 0 20rpx 20rpx;
    width: 580rpx;
    overflow: hidden;
}

.comment .title {
    font-weight: bolder;
    font-size: 32rpx;
    padding: 20rpx 0 0;
}

.comment .c_content {
    font-size: 27rpx;
    color: gray;
    text-indent: 40rpx;
    letter-spacing: 1rpx;
    margin: 20rpx 0;
}

.comment .img_wrap {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
}

.comment .b_createtime {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 27rpx;
    padding: 20rpx 0;
}

.comment .huifu_wrap {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.icon {
    width: 24rpx;
    height: 24rpx;
    background-color: #fff;
    margin: 3rpx 6rpx 3rpx 12rpx;
}

.footer {
    background-color: #fff;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-top: 1rpx solid #e5e5e5;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    position: fixed;
    bottom: 0;
    width: 100%;
}

.postcount {
    width: 50%;
    display: flex;
    flex-direction: row;
    align-items: center;
    text-align: center;
    justify-content: center;
}

.goodcount {
    width: 50%;
    text-align: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.icon {
    width: 32rpx;
    height: 32rpx;
    background-color: #fff;
    margin-right: 10rpx;
}

.slideImgs {
    position: absolute;
    top: 0rpx;
    bottom: 0rpx;
    left: 0rpx;
    right: 0rpx;
    margin: auto;
    text-align: center;
    vertical-align: middle;
    z-index: 99;
}

.imagesNum {
    position: absolute;
    left: 20rpx;
    bottom: 20rpx;
    color: #fff;
    font-size: 30rpx;
}

swiper {
    height: 100%;
}

.bgtypeList {
    position: fixed;
    z-index: 300;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
}

.slide-image {
    width: 75%;
    text-align: center;
    vertical-align: middle;
    padding: 60rpx 20rpx;
}