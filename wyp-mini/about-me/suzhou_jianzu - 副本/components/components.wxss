page {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.scratch_wp_no {
}

.marquee_wp {
    width: 70%;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    background: #FD3324;
    padding: 28rpx;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}

.marquee_wp .marquee_wp_circle_circle {
    position: absolute;
    display: block;
    border-radius: 50%;
    height: 20rpx;
    width: 20rpx;
}

.marquee_wp .marquee_item {
    width: 31.8%;
    height: 155rpx;
    margin: 0 10rpx 10rpx 0;
    background: #fff;
    box-sizing: border-box;
    border-radius: 10rpx;
    background: url(http://tws.cnweisou.com/images/fruitMachineCont.png) no-repeat center center;
    background-size: 100% 100%;
}

.marquee_wp .marquee_item.on {
    background: url(http://tws.cnweisou.com/images/fruitMachineContSelect.png) no-repeat center center;
    background-size: 100% 100%;
}

.marquee_wp .marquee_item:nth-child(5) {
    opacity: 1;
}

.marquee_wp .marquee_item button.luckDraw {
    display: block;
    width: 100%;
    height: 100%;
    text-align: center;
    margin: 0 auto;
    font-size: 55rpx;
    color: red;
    line-height: 85rpx;
}

.marquee_wp .marquee_item .luckDraw {
    display: block;
    width: 100%;
    height: 100%;
    text-align: center;
    margin: 0 auto;
    font-size: 62rpx;
    color: red;
    background: url(https://tws.cnweisou.com/images/fruitMachineBtn.png) no-repeat center center;
    background-size: 100% 100%;
    line-height: 85rpx;
    letter-spacing: 18rpx;
}

.marquee_wp .marquee_item .luckDraw.disabled {
    pointer-events: none;
    background: url(https://tws.cnweisou.com/images/fruitMachineBtnGray.png) no-repeat center center;
    background-size: 100% 100%;
}

.marquee_wp .marquee_item .marquee_itemImg {
    width: 100%;
    height: 75%;
    line-height: 120rpx;
    text-align: center;
}

.marquee_wp .marquee_item .marquee_itemImg image {
    vertical-align: middle;
    width: 125rpx;
    height: 100rpx;
}

.marquee_itemImgCont {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 26rpx;
    color: #742E2E;
}

.marquee_wp .marquee_item:nth-child(3n) {
    margin-right: 0;
}

.marquee_wp .marquee_item_btn {
    background: transparent;
}

.marquee_wp .marquee_item_btn text {
    display: block;
    text-align: center;
    color: #fff;
}