page {
    height: 100%;
    background-color: #F4F4F4;
}

.orderDetail-container {
    position: relative;
}

.orderDetail-scroll {
}

.order-detail-wrapper {
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: #F4F4F4;
}

.order-detail-wrapper .order-detail {
    padding: 30rpx;
    background: #fff;
    overflow: hidden;
    flex-shrink: 0;
}

.order-detail-wrapper .order-img-wrap {
    width: 160rpx;
    height: 160rpx;
    margin-right: 30rpx;
    float: left;
    background: #ccc;
    border: 1px solid #eee;
}

.order-detail-wrapper .order-info-wrap {
    overflow: hidden;
}

.order-detail-wrapper .order-name {
    color: #353535;
}

.order-detail-wrapper .order-abstract {
    width: 100%;
    margin-top: 10rpx;
    color: #888;
    font-size: 24rpx;
    word-wrap: break-word;
}

.order-detail-wrapper .order-price-wrap {
    margin-top: 32rpx;
    position: relative;
}

.order-detail-wrapper .selling-price {
    font-size: 30rpx;
    color: #D02F3E;
    position: relative;
    top: 6rpx;
}

.order-detail-wrapper .original-price {
    font-size: 24rpx;
    color: rgb(153,153,153);
    text-decoration: line-through;
    position: relative;
    top: 6rpx;
}

.order-detail-wrapper .promotion {
    font-size: 22rpx;
    margin-left: 10rpx;
    background-color: rgb(208,48,56);
    color: rgb(255,255,255);
    padding: 2rpx 6rpx;
    border-radius: 4rpx;
}

.order-detail-wrapper .pay {
    padding: 0 2rpx;
    margin-left: 10rpx;
    font-size: 23rpx;
    border: 1rpx solid rgb(222,68,58);
    border-radius: 4rpx;
    color: rgb(222,68,58);
    display: inline-block;
}

.order-detail-wrapper .contact-info {
    padding: 18rpx 0 0px;
    margin-bottom: 96rpx;
}

.order-detail-wrapper .pay-mode {
    font-size: 30rpx;
    bottom: 0;
    right: 0;
    position: absolute;
    color: #353535;
}

.order-detail-wrapper .pay-mode::before {
    content: "";
    width: 30rpx;
    height: 32rpx;
    display: inline-block;
    margin-right: 10rpx;
    vertical-align: -2rpx;
}

.order-detail-wrapper .icon-wxpay::before {
    content: "\e912";
    color: #03C703;
}

.order-detail-wrapper .icon-gopay::before {
    content: "\e913";
    color: #00A0EA;
}

.order-detail-wrapper .pay-mode::after {
    content: "\e900";
    width: 28rpx;
    height: 34rpx;
    display: inline-block;
    margin-left: 8rpx;
    vertical-align: -1rpx;
    color: #ccc;
    font-size: 26rpx;
}

.order-detail-wrapper .pay-mode.no-more::after {
    display: none;
}

.order-detail-wrapper .contact-item {
    background: #fff;
    padding: 30rpx 30rpx 20rpx;
    border-bottom: 1rpx solid #EEEEEE;
    position: relative;
    overflow: inherit;
}

.order-detail-wrapper .message {
    margin-top: 15rpx;
}

.order-detail-wrapper .contact-item-name {
    margin-bottom: 20rpx;
    color: #353535;
    font-size: 22rpx;
}

.order-detail-wrapper .contact-item-name .item-must {
    color: #ff0000;
    vertical-align: middle;
    margin-right: 10rpx;
    display: inline-block;
}

.order-detail-wrapper radio {
    margin-right: 44rpx;
    margin-bottom: 10rpx;
    display: inline-block;
}

.order-detail-wrapper radio text {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 594rpx;
    display: inline-block;
    color: #666;
    font-size: 28rpx;
}

.order-detail-wrapper input,.order-detail-wrapper textarea {
    font-size: 28rpx;
    color: #353535;
}

.order-detail-wrapper .input-placeholder {
    z-index: 0;
}

.order-detail-wrapper textarea {
    width: 100%;
    overflow: hidden;
    min-height: 100rpx;
    resize: none;
}

.order-detail-wrapper .message-wrapper {
    flex-grow: 1;
    padding: 0 30rpx;
    background-color: #fff;
}

.order-detail-wrapper .message-info {
    padding: 40rpx 0;
    border-bottom: 1rpx solid #eee;
    overflow: hidden;
}

.order-detail-footer {
    height: 100%;
    line-height: 96rpx;
}

.order-detail-footer .comfirm-btn {
    text-align: center;
    background-color: #D12F3A;
    color: #fff;
    cursor: pointer;
    border-radius: 0;
    line-height: 96rpx;
    z-index: 999;
}

.drawer {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.7);
    z-index: 9999;
    display: none;
}

.drawer.drawer-show {
    display: block;
}

.drawer .content {
    position: absolute;
    bottom: 0;
    width: 100%;
    background-color: white;
    color: #353535;
}

.drawer .pay-title {
    height: 110rpx;
    border-bottom: 1rpx solid #eee;
    line-height: 110rpx;
    text-align: center;
    font-size: 30rpx;
}

.drawer .pay-item {
    height: 110rpx;
    line-height: 110rpx;
    margin: 0 20rpx;
    border-bottom: 1rpx solid #eee;
    padding: 0 10rpx;
    display: block;
    font-size: 28rpx;
}

.drawer .pay-item:last-child {
    border-bottom: none;
}

.drawer .iconfont {
    margin-right: 10rpx;
    vertical-align: -5rpx;
}

.drawer .icon-wxpay::before {
    content: "\e912";
    color: #03C703;
}

.drawer .icon-gopay::before {
    content: "\e913";
    color: #00A0EA;
}

.drawer .radio {
    float: right;
}

.toast-out {
    width: 224rpx;
    position: fixed;
    top: 350rpx;
    margin-left: auto;
    margin-right: auto;
    left: 0;
    right: 0;
    z-index: 9999;
}

.toast-out .toast-in {
    width: 200rpx;
    background: rgba(0,0,0,0.7);
    padding: 12rpx;
    text-align: center;
    color: white;
    border-radius: 8rpx;
    position: relative;
}

.toast-out .toast-in span {
    font-size: 60rpx;
}

.toast-out .toast-in .toast-txt {
    font-size: 28rpx;
    margin-top: 52rpx;
}

.toast-out .toastImg {
    width: 71rpx;
    height: 90rpx;
    position: absolute;
    left: 77rpx;
    top: 22rpx;
}

button {
    padding: 0;
    border-radius: 0;
    overflow: visible;
    font-size: unset;
    line-height: 96rpx;
}

.jz-beautify-checkbox-wrapper {
    display: inline-block;
    color: #333;
    cursor: pointer;
    font-size: 13px;
    pointer-events: auto;
    overflow: hidden;
    height: 36px;
    background: #F7F7F7;
    margin-right: 10px;
    margin-bottom: 4px;
}

.jz-beautify-checkbox-input {
    width: 100%;
    height: 100%;
    display: inline-block;
    position: relative;
    vertical-align: middle;
    white-space: nowrap;
    cursor: pointer;
    outline: 0;
    box-sizing: border-box;
    border: 1px solid #f7f7f7;
    border-radius: 2px;
    padding: 0 10px;
    min-width: 80px;
    max-width: 345px;
    font-size: 12px;
    color: #666;
}

.jz-beautify-checkbox {
    height: 100%;
    position: relative;
    display: inline-block;
    vertical-align: middle;
    white-space: nowrap;
    cursor: pointer;
    outline: 0;
    box-sizing: border-box;
    border-radius: 2px;
    overflow: hidden;
    border: 1px solid #f7f7f7;
    padding: 0 10px;
    min-width: 76px;
    max-width: 325px;
}

.jz-beautify-checkbox-checked {
    border: 1px solid #323232;
}

.jz-beautify-checkbox-inner {
    line-height: 72rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    text-align: center;
    color: #666;
    font-size: 24rpx;
}

.jz-beautify-checkbox-checked .jz-beautify-checkbox-inner:after {
    position: absolute;
    right: 0rpx;
    bottom: -18rpx;
    font-family: "iconfont"!important;
    font-size: 50rpx;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    content: "\e910";
    color: #000;
}

.jz-beautify-checkbox checkbox .wx-checkbox-input {
    position: absolute;
    top: 0;
    left: 0;
    display: none;
}

checkbox .wx-checkbox-input {
    display: none;
}