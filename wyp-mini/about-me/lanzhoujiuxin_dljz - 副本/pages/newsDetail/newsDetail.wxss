@import "../../libs/wxParse/wxParse.wxss";

.news-detail-wrapper {
    background: #fff;
    height: 100%;
}

.news-detail {
    padding: 30rpx;
}

.news-detail .news-detail-title {
    font-size: 40rpx;
    color: #353535;
    margin-bottom: 10rpx;
    line-height: 56rpx;
    font-weight: bold;
    word-wrap: break-word;
    padding-right: 60rpx;
    word-wrap: break-word;
}

.news-detail .icon-share {
    position: absolute;
    top: 40rpx;
    right: 30rpx;
    color: #999;
}

.news-detail .shareBtn {
    position: absolute;
    right: 38rpx;
    top: 30rpx;
    opacity: 0;
    width: 40rpx;
    height: 50rpx;
}

.news-detail .news-detail-tool {
    line-height: 22rpx;
    font-size: 22rpx;
    color: #afb1af;
}

.news-detail .news-detail-time {
    margin-right: 36rpx;
    display: inline-block;
}

.news-detail .news-detail-read {
    display: inline-block;
}

.news-detail .news-detail-content {
    margin-top: 32rpx;
    word-break: break-word;
}

.news-detail .news-detail-content image {
    max-width: 100%;
    position: relative;
    display: inline-block;
    vertical-align: top;
}

.news-detail .news-detail-content .WxEmojiView.wxParse-inline {
    display: inline;
    font-size: 28rpx;
}