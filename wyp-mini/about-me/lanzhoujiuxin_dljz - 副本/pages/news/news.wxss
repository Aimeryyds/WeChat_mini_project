page {
    height: 100%;
}

.empty-news {
    height: 100%;
    overflow: hidden;
    text-align: center;
    background-color: #fff;
}

.has-category {
    height: calc(100% - 114rpx);
}

.empty-news .empty-img {
    width: 134rpx;
    height: 122rpx;
    margin: 60rpx auto 50rpx;
}

.empty-news .empty-tip {
    margin-bottom: 40rpx;
    font-size: 26rpx;
    color: #999;
}

.news-wrapper {
    height: 100%;
    background-color: #f4f4f4;
}

.nav-topnav-bar {
    margin-bottom: 20rpx;
    background-color: #fff;
}

.nav-topnav-wrap {
    padding: 0 30rpx;
    position: relative;
}

.nav-topnav-scroll {
    height: 94rpx;
    overflow: hidden;
}

.nav-topnav-showmore {
    width: 620rpx;
}

.nav-topnav-btn {
    display: inline-block;
    width: 38rpx;
    height: 38rpx;
    position: absolute;
    right: 30rpx;
    top: 50%;
    margin-top: -14rpx;
    cursor: pointer;
    transform: rotate(90deg);
    color: #565656;
    font-size: 28rpx;
}

.nav-topnav-list {
    position: relative;
    overflow-x: scroll;
    overflow-y: hidden;
    white-space: nowrap;
    user-select: none;
}

.nav-topnav-list .flex-wrap {
    display: flex;
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
}

.topnav-item {
    display: inline-block;
    text-align: center;
    margin-right: 26rpx;
    font-size: 28rpx;
    color: #353535;
    position: relative;
    flex: 1;
    box-flex: 1;
}

.topnav-text {
    display: inline-block;
    height: 90rpx;
    line-height: 90rpx;
    padding: 0 20rpx;
}

.nav-topnav-list .topnav-item-active .topnav-text {
    color: #D02F3E;
    border-bottom: 4rpx solid #D02F3E;
}

.news-wrapper {
    background-color: #f4f4f4;
}

.news-wrapper .has-news {
    background-color: #fff;
}

.news-item {
    padding: 30rpx 30rpx 30rpx 30rpx;
}

.item-wrapper-border {
    display: inline-block;
    width: 100%;
    position: absolute;
    left: 0;
    bottom: -30rpx;
    border-bottom: 1rpx solid #eee;
}

.news-item-wrapper {
    width: 100%;
    position: relative;
}

.news-item-wrapper .info-wrapper {
    max-height: 80rpx;
    overflow: hidden;
}

.news-img {
    float: right;
    margin-left: 50rpx;
}

.news-img image {
    width: 160rpx;
    height: 120rpx;
    border-radius: 8rpx;
    border: none;
}

.news-title {
    font-size: 28rpx;
    color: #353535;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
    line-height: 38rpx;
}

.news-abstract {
    color: #a9a9a9;
    margin-top: 10rpx;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-height: 38rpx;
}

.news-time {
    font-size: 18rpx;
    color: #afb1af;
    position: absolute;
    left: 0;
    bottom: 0rpx;
}

.news-item-wrapper .news-info {
    min-height: 124rpx;
}

.news-img image {
    border-radius: 4rpx;
}

.news-title .stick {
    background: #DF463E;
    padding: 0rpx 6rpx 0rpx 6rpx;
    border-radius: 6rpx;
    color: #fff;
    display: inline-block;
    font-weight: lighter;
    font-size: 24rpx;
    margin-right: 10rpx;
    line-height: 32rpx;
    width: auto;
    height: auto;
    margin-top: 0;
}

.editor-drawer .drawer-category {
    height: 100%;
    background-color: #fff;
    width: 100%;
    position: absolute;
    bottom: 0;
    overflow: hidden;
}

.drawer-category .cate-title-bar {
    position: relative;
}

.drawer-category .cate-title {
    text-align: center;
    height: 804px;
    line-height: 80rpx;
    font-size: 30rpx;
    font-weight: bold;
}

.drawer-category .cate-close {
    position: absolute;
    top: 50%;
    margin-top: -32rpx;
    right: 30rpx;
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    background: url(../image/mbg01.png?v=201802091046-do-not-use-local-path-./pages/news/news.wxss&219&16) no-repeat -902px -118px;
    cursor: pointer;
}

.drawer-category .cate-list-wrapper {
    overflow: hidden;
    height: calc(100% - 80rpx);
}

.drawer-category .cate-list {
    padding: 20rpx 30rpx;
}

.drawer-category .cate-item {
    display: inline-block;
    border: 2rpx solid #E9E9E9;
    font-size: 30rpx;
    color: #353535;
    border-radius: 40rpx;
    padding: 12rpx 40rpx;
    margin-right: 16rpx;
    margin-bottom: 20rpx;
    cursor: pointer;
}

.editor-drawer {
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: #fff;
    z-index: 4;
}

.editor-drawer .cate-title-bar {
    position: relative;
}

.editor-drawer .cate-title {
    text-align: left;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    padding-left: 30rpx;
    color: #4D4D4D;
}

.editor-drawer .cate-close {
    position: absolute;
    top: 50%;
    margin-top: -20rpx;
    right: 20rpx;
    display: inline-block;
    width: 38rpx;
    height: 38rpx;
    cursor: pointer;
    transform: rotate(-90deg);
    color: #565656;
    font-size: 28rpx;
}

.editor-drawer .cate-list-wrapper {
    overflow: auto;
    height: calc(100% - 40px);
}

.editor-drawer .cate-list {
    padding: 20rpx 30rpx;
}

.editor-drawer .cate-item {
    display: inline-block;
    border: 1rpx solid #E9E9E9;
    font-size: 30rpx;
    color: #353535;
    border-radius: 40rpx;
    padding: 12rpx 40rpx;
    margin-right: 16rpx;
    margin-bottom: 20rpx;
    cursor: pointer;
}