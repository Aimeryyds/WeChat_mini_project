.main {
    width: 100%;
    height: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    right: -34rpx;
    overflow-y: scroll;
    overflow-x: hidden;
    background-color: #F5F5F5;
}

.user-container .user-header {
    width: 120%;
    height: 320rpx;
    background: #D12F3A;
    position: absolute;
    top: 0;
    left: -10%;
    border-bottom-left-radius: 45%;
    border-bottom-right-radius: 45%;
    overflow: hidden;
    text-align: center;
}

.user-container .head-icon-wrap {
    width: 120rpx;
    height: 120rpx;
    background: #ccc;
    border-radius: 50%;
    margin: 40rpx auto 10rpx;
    overflow: hidden;
    border: 4rpx solid rgba(255,255,255,0.5);
}

.user-container .username {
    color: #fff;
    font-size: 28rpx;
}

.user-container .info-wrapper {
    width: 640rpx;
    min-height: 500rpx;
    position: absolute;
    left: 0;
    right: 0;
    top: 240rpx;
    margin: 0 auto;
    border-radius: 8rpx;
}

.user-container .info-detail {
    padding: 18rpx 30rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    border-radius: 8rpx;
    box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.03);
    color: #353535;
    font-size: 25rpx;
}

.user-container .all-order {
    height: 70rpx;
    line-height: 60rpx;
    border-bottom: 1rpx solid #e0e0e0;
    color: #353535;
    font-size: 28rpx;
}

.user-container .all-order .icon-turn {
    float: right;
    color: #aaa;
    width: 40rpx;
    height: 70rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 24rpx;
}

.user-container .order-status-wrap {
    margin: 30rpx 0 10rpx;
    display: flex;
    justify-content: space-between;
    padding: 0 10rpx;
}

.user-container .order-status {
    position: relative;
    font-size: 24rpx;
    color: #686868;
}

.user-container .order-status .iconfont {
    font-size: 50rpx;
    width: 76rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #D12F3A;
}

.user-container .info-item {
    padding: 20rpx 0;
    display: flex;
    justify-content: space-between;
}

.user-container .item-text {
    flex-grow: 1;
    text-align: justify;
    word-break: break-word;
    margin-left: 10rpx;
    margin-top: 2rpx;
}

.user-container .address .item-text {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.info-detail .icon-turn {
    color: #aaa;
    width: 40rpx;
    height: 46rpx;
    line-height: 46rpx;
    text-align: center;
    font-size: 24rpx;
}

.user-container .info-detail .icon-addr,.user-container .info-detail .icon-phone,.user-container .info-detail .icon-time,.user-container .info-detail .icon-home {
    color: #ddd;
    width: 60rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 30rpx;
    min-width: 60rpx;
}

.user-container .tip-bubble {
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    position: absolute;
    top: -18rpx;
    right: -6rpx;
    border-radius: 50%;
    border: 2rpx solid red;
    text-align: center;
    background: #fff;
    color: red;
}

.user-container .message-header {
    padding: 20rpx 0;
}

.user-container .message-item {
    padding-top: 34rpx;
    margin-bottom: 34rpx;
    font-size: 26rpx;
    letter-spacing: 0.6rpx;
    border-top: 2rpx solid #eee;
}

.user-container .service-info {
    height: 110rpx;
    margin-bottom: 20rpx;
    background-color: #F8F8F8;
    overflow: hidden;
}

.user-container .service-img-wrap {
    width: 110rpx;
    height: 100%;
    margin-right: 20rpx;
    float: left;
}

.user-container .service-name {
    margin-top: 20rpx;
}

.user-container .service-intro {
    font-size: 24rpx;
    margin-top: 8rpx;
    color: #999;
}

.user-container .view-more {
    text-align: center;
    font-size: 24rpx;
    color: #999;
    cursor: pointer;
}

.user-container .info-detail-empty {
    padding: 84rpx 220rpx;
    font-size: 24rpx;
    color: #333;
    text-align: center;
    border-radius: 10rpx;
    box-shadow: 0px 4rpx 6rpx -2rpx #ccc;
    background-color: #fff;
}

.user-container .info-detail-empty .imageWrap {
    width: 140rpx;
    height: 122rpx;
    margin: 0 auto;
}

.user-container .info-detail-empty .des {
    margin: 0 auto;
    font-size: 26rpx;
    color: #9f9f9f;
    margin-top: 20rpx;
    width: 210rpx;
}

button {
    background-color: rgba(0,0,0,0);
    padding: 0;
    border-radius: 0;
    overflow: visible;
    font-size: unset;
}