@import "../template/foodlist/foodlist.wxss";

.fco-top-container {
    padding: 20rpx 20rpx 118rpx 20rpx;
}

.fco-item-container {
    display: flex;
    justify-content: space-between;
    height: 88rpx;
    padding: 0 20rpx;
    align-items: center;
}

.fco-child-container {
    display: flex;
    flex-direction: column;
}

.fco-child-container .fco-item-container:not(:last-child) {
    border-bottom: solid 2rpx #f4f4f4;
}

.fco-item-right {
    display: flex;
    align-items: center;
}

.fco-label {
    font-size: 14px;
    color: #000;
    letter-spacing: 0;
}

.fco-placeholder {
    opacity: 0.43;
    font-size: 14px;
    color: #000;
    letter-spacing: 0;
    max-width: 388rpx;
    display: flex;
    justify-content: flex-end;
}

.fco-value {
    font-size: 14px;
    color: #000;
    letter-spacing: 0;
    max-width: 388rpx;
    display: flex;
    justify-content: flex-end;
    text-align: right;
}

.fco-elip {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: inline-block;
}

.fco-scan {
    width: 44rpx;
    height: 44rpx;
}

.fco-card-icon {
    width: 52rpx;
    height: 52rpx;
    margin-right: 15rpx;
}

.fco-bottom-container {
    width: 100%;
    height: 98rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    background: #fff;
}

.fco-bottom-left-container {
    display: flex;
    flex-grow: 1;
    margin-left: 50rpx;
}

.fco-bottom-btn {
    width: 286rpx;
    height: 98rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f22;
    color: #fff;
    font-size: 28rpx;
    border-radius: 0;
}

.fco-bottom-left-tag {
    font-size: 24rpx;
    color: #f22222;
    letter-spacing: 0;
    display: flex;
    align-items: flex-end;
    height: 48rpx;
}

.fco-bottom-left-price {
    font-size: 40rpx;
    color: #f22222;
    letter-spacing: 0;
}

.food_user_product {
    background: #fff;
    margin: 20rpx 0;
}