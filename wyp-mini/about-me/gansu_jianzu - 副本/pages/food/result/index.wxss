@import "../../templates/card/card.wxss";

.coupon-dialog__container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 560rpx;
    height: 800rpx;
    transform: translateY(200%);
    transition: all 0.4s ease;
    z-index: 11;
}

.zan-dialog--show .coupon-dialog__container {
    transform: translateY(0);
}

.coupon-dialog_card {
    background: white;
    display: flex;
    flex-direction: column;
    border-radius: 20px;
}

.coupon_congratulate {
    font-size: 48rpx;
    color: #ff3131;
    display: flex;
    justify-content: center;
    padding: 56rpx;
    font-weight: bold;
}

.coupon-dialog__close {
    display: flex;
    justify-content: center;
    margin: 90rpx;
}

.vipcard-wrap {
    width: 618rpx;
    margin: 0px 24rpx;
    height: 80rpx;
    background: #FFFFFF;
    border-radius: 78rpx;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    justify-content: space-between;
    padding: 0 46rpx 0 38rpx;
}

.vipcard-name {
    display: flex;
    align-items: center;
}

.vipcard-name image {
    width: 48rpx;
    height: 38rpx;
    margin-right: 30rpx;
}

.vipcard-btn {
    color: #EC4040;
}