.msg-text {
    height: 260rpx;
    background-color: #fff;
    width: 710rpx;
    padding: 20rpx 20rpx;
    font-size: 24rpx;
}

.msg-text-wrap {
    margin-bottom: 50rpx;
    position: relative;
    background-color: #fff;
    height: 350rpx;
}

.msg-btn {
    margin: 0rpx 40rpx;
    border-radius: 8rpx;
    font-size: 32rpx;
    line-height: 80rpx;
    background: #ca2626;
    color: #fff;
}

.clear-img {
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    background-color: #ccc;
    margin-right: 10rpx;
}

.clear-btn {
    display: flex;
    height: 40rpx;
    font-size: 24rpx;
    align-items: center;
    justify-content: flex-end;
    color: #ccc;
    margin-right: 30rpx;
}