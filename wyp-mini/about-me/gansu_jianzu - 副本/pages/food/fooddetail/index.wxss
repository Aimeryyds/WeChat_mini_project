.orders-container {
    overflow: hidden;
}

.food_detail {
    margin: 18rpx 20rpx 0 20rpx;
}

.food_detail_status {
    margin-bottom: 20rpx;
    background: #fff;
    padding: 22rpx 20rpx 28rpx 20rpx;
}

.food_detail_top {
    display: flex;
    justify-content: space-between;
}

.food_detail_topstatus {
    font-size: 32rpx;
    font-weight: 600;
}

.food_detail_time {
    color: #A8A8A8;
    font-size: 24rpx;
}

.food_detail_message {
    font-size: 24rpx;
    margin-top: 14rpx;
}

.food_detail_user {
    background: #fff;
    padding: 26rpx 20rpx 18rpx 20rpx;
}

.food_detail_userinfo {
    display: flex;
    justify-content: space-between;
    line-height: 48rpx;
}

.food_user_label {
    font-size: 28rpx;
    color: #A8A8A8;
}

.food_user_info {
    font-size: 28rpx;
}

.food_detail_orderinfo {
    padding: 24rpx 20rpx 20rpx 32rpx;
    background: #fff;
    margin-bottom: 180rpx;
}

.food_user_product {
    background: #fff;
    margin: 20rpx 0;
}

.food_order_row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 22rpx 24rpx;
    font-size: 28rpx;
}

.food_order_rowleft {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.food_order_rowleft image {
    width: 48rpx;
    height: 48rpx;
    border-radius: 24rpx;
    margin-right: 18rpx;
}

.food_order_rowname {
    font-size: 28rpx;
    font-weight: 600;
}

.food_order_rowright {
    font-size: 24rpx;
}

.food_product {
    padding: 24rpx 20rpx 24rpx 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.food_img {
    width: 88rpx;
    height: 88rpx;
    border-radius: 8rpx;
}

.food_productitem {
    display: flex;
    flex-direction: row;
}

.food_pro_info {
    display: flex;
    flex-direction: column;
    font-size: 24rpx;
    margin-left: 20rpx;
}

.food_pro_num {
    margin-top: 6rpx;
    color: #A8A8A8;
}

.total {
    display: flex;
    justify-content: flex-end;
    font-size: 28rpx;
    padding: 24rpx 0rpx 24rpx 0;
    font-weight: 600;
}

.paytotal {
    color: #f00000;
    font-size: 30rpx;
    font-weight: 400;
}

.callstore {
    display: flex;
    padding: 24rpx 0;
    font-size: 28rpx;
    justify-content: center;
    border-top: 1rpx solid #f4f4f4;
}

.callstore image {
    width: 28rpx;
    height: 28rpx;
    margin: 8rpx 18rpx;
}

.qrcode {
    background: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 22rpx 0 30rpx 0;
    font-size: 24rpx;
    line-height: 46rpx;
    margin-bottom: 2rpx;
}

.qrcode image {
    width: 176rpx;
    height: 176rpx;
}

.food_youhui {
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    line-height: 88rpx;
}

.pricecolor {
    font-size: 24rpx;
    color: #B0B0B0;
    margin-right: 18rpx;
    line-height: 40rpx;
    font-weight: 400;
}

.show-footer {
    font-size: 32rpx;
    height: 96rpx;
    left: 0;
    right: 0;
    position: fixed;
    bottom: 0;
    display: flex;
    background-color: white;
    border-top: solid 1rpx #d9d9d9;
    overflow: hidden;
}

.btn-primary {
    background: #F22222;
    color: #fff;
    display: flex;
    flex: 1;
    align-items: center;
    justify-content: center;
}