@import "../../templates/tag/tuan.wxss";

@import "../../pingjia/component/evaluatecontent/index.wxss";

.desc-wrap {
}

.desc-info {
    display: flex;
    align-items: center;
    background: #fff;
    padding: 24rpx;
}

.desc-info__img {
    width: 140rpx;
    height: 140rpx;
    margin-right: 20rpx;
    border-radius: 4px;
}

.desc-info__text {
    flex: 1;
}

.desc-info__text .desc-info__title {
    font-size: 28rpx;
    color: #000000;
    margin-bottom: 20rpx;
}

.desc-info__text .text-color {
    color: #999;
    font-size: 22rpx;
}

.desc-support {
    margin: 12rpx 0 10rpx;
    display: flex;
    align-items: center;
}

.desc-support text {
    padding: 2rpx 10rpx;
    border: 1px solid #108ee9;
    border-radius: 5px;
    font-size: 11px;
    margin-right: 5rpx;
    color: #108ee9;
}

.desc-detail {
    border-top: 0;
    border-bottom: 0;
    margin-top: 24rpx;
}

.desc-Collection {
    display: flex;
    font-size: 24rpx;
    color: #919191;
    flex-flow: column wrap;
    align-items: center;
}

.desc-Collection__coll {
    color: #fff;
    border: 1rpx #C6C6C6 solid;
    background-color: #C6C6C6;
}

.desc-Collection__no-coll {
    color: #FB355C;
    border: 1rpx #FB355C solid;
    background-color: #fff;
}

.desc-Collection__cont {
    border-radius: 24rpx;
    align-items: center;
    display: flex;
    margin-bottom: 8rpx;
    width: 112rpx;
    height: 48rpx;
    font-size: 20rpx;
}

.desc-Collection__cont image {
    width: 20rpx;
    height: 20rpx;
    margin: 0 8rpx 0 14rpx;
}

.desc-detail .zan-cell {
    padding: 27rpx;
    font-size: 26rpx;
    color: #333;
}

.desc-detail .zan-form__title {
    font-size: 26rpx;
    color: #333;
}

.desc-detail .zan-cell::after {
    left: 0;
}

.desc-detail .zan-form__item-label {
    display: flex;
    align-items: center;
}

.desc-detail .zan-form__item-label image {
    width: 25rpx;
    height: 25rpx;
    margin-right: 15rpx;
}

.zan-form__textColor {
    flex: 1;
}

.desc-coupon {
    background-color: #fff;
    margin-top: 24rpx;
}

.desc-coupon_title {
    padding: 24rpx;
    font-size: 28rpx;
}

.desc-coupon_bottom_border {
    width: 100%;
    border-bottom: 2rpx #F4F4F4 solid;
}

.desc-coupon-item {
    margin: 24rpx;
}

.manjian-container {
    display: flex;
    margin: 18rpx 24rpx;
}

.desc_manjian-value-container {
    display: flex;
    flex-direction: column;
}

.desc_manjian-value {
    opacity: 0.65;
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    color: #000000;
    margin-left: 12rpx;
}

.evaluate-store__title {
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 24rpx;
    font-size: 28rpx;
    color: #000;
    border-bottom: 1px solid #F4F4F4;
    background: #fff;
    margin-top: 24rpx;
}

.zan-panel__no-magrin-top {
    margin-top: 0;
}

.zan-panel {
    background: #fff;
    border-top: 0px;
    border-bottom: 1rpx solid #eee;
    margin-top: 12rpx;
    overflow: hidden;
}

.shop__header-album {
    margin-top: 40rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.shop__header-album__image1 {
    width: 702rpx;
    height: 222rpx;
}

.shop__header-album__image2 {
    width: 342rpx;
    height: 222rpx;
}

.shop__header-album__image3 {
    width: 222rpx;
    height: 222rpx;
}

.facilities {
    display: flex;
    background: #fff;
    margin-top: 4rpx;
    flex-direction: column;
}

.fac-label {
    padding: 24rpx;
    font-size: 28rpx;
}

.fac-content {
    display: flex;
    flex-wrap: wrap;
    padding: 10rpx 24rpx;
}

.fac-item {
    font-size: 24rpx;
    color: #9d9d9d;
    min-width: 172rpx;
    margin-bottom: 24rpx;
}