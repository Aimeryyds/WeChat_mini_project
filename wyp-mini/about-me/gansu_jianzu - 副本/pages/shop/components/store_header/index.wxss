@import "../../../../app.wxss";

.header {
    position: relative;
    background: #fff;
    color: #000;
    -webkit-transition: all 0.6s ease-in-out;
    padding-top: 15rpx;
    margin-bottom: 14rpx;
}

.header.hidden {
    margin-top: -320rpx;
}

.header .logo {
    float: left;
    margin-top: 20rpx;
    width: 140rpx;
    height: 140rpx;
    margin-right: 10px;
    margin-left: 20rpx;
    border-radius: 4px;
}

.header .shop-header-name {
    font-size: 28rpx;
    line-height: 74rpx;
    height: 74rpx;
    text-overflow: ellipsis;
}

.header .welcome {
    color: #333;
    font-size: 22rpx;
    width: 360rpx;
    line-height: 60rpx;
    height: 60rpx;
}

.header .freight {
    color: #333;
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.header .freight .type {
    color: #6daeee;
    font-size: 20rpx;
    padding: 4rpx 6rpx;
    background: #fff;
    border: 2rpx solid #6daeee;
    border-radius: 10rpx;
}

.header .arrow {
    position: absolute;
    right: 24rpx;
    top: 38px;
    width: 13rpx;
    height: 22rpx;
}

.header .line {
    clear: both;
    width: 100%;
    height: 1px;
    border-bottom: 1px dashed #000;
    padding-top: 20rpx;
}

.header .desc {
    color: #333;
    font-size: 30rpx;
    line-height: 40rpx;
    padding-top: 20rpx;
}

.shop-header-manjian {
    display: flex;
    padding-left: 24rpx;
    padding-top: 4rpx;
    padding-bottom: 14rpx;
    padding-right: 24rpx;
}

.shop-header-manjian-content {
    flex: 1;
}

.shop-header-manjian-text {
    font-size: 22rpx;
    color: #000;
    padding-left: 24rpx;
    padding-right: 24rpx;
}

.desc-Collection {
    display: flex;
    font-size: 24rpx;
    color: #919191;
    flex-flow: column wrap;
    align-items: center;
}

.desc-Collection__coll {
    color: #fff;
    border: 1rpx #C6C6C6 solid;
    background-color: #C6C6C6;
}

.desc-Collection__no-coll {
    color: #FB355C;
    border: 1rpx #FB355C solid;
    background-color: #fff;
}

.desc-Collection__cont {
    border-radius: 24rpx;
    align-items: center;
    display: flex;
    margin-bottom: 6rpx;
    width: 112rpx;
    height: 48rpx;
    font-size: 20rpx;
}

.desc-Collection__cont image {
    width: 20rpx;
    height: 20rpx;
    margin: 0 8rpx 0 14rpx;
}