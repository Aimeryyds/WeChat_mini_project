.products-searchbar {
    display: flex;
    align-items: center;
    flex-direction: row-reverse;
    width: 100%;
    background-color: #fff;
}

.products-searchlayout {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #F4F4F4;
    border-radius: 15px;
    height: 60rpx;
    margin: 26rpx;
    flex-grow: 1;
}

.products-searchimage {
    width: 30rpx;
    height: 30rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
}

.products-searchtext {
    font-size: 24rpx;
    opacity: 0.43;
    color: #000000;
}

