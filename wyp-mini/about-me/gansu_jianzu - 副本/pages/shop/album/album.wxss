.album-list {
    display: flex;
    flex-flow: wrap;
    justify-content: space-between;
    padding: 24rpx;
}

.album__item {
    position: relative;
    width: 340rpx;
    height: 340rpx;
    margin-bottom: 24rpx;
}

.album__img {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

.album__desc {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 20rpx;
    background: rgba(0,0,0,0.4);
    font-size: 24rpx;
    color: #fff;
    text-align: center;
    overflow: hidden;
}