.evaluate-form {
    margin-bottom: 160rpx;
}

.evaluate-form__ctrl {
    display: flex;
    align-items: center;
    padding: 24rpx;
    background: #fff;
    font-size: 28rpx;
    color: #000;
}

.evaluate-form__img {
    width: 120rpx;
    height: 120rpx;
    margin-right: 42rpx;
}

.evaluate-form__radio-group {
    display: flex;
    flex: 1;
    align-items: center;
    font-size: 28rpx;
    background: #fff;
    padding: 0 24rpx 24rpx;
}

.evaluate-form__cont {
    flex: 1;
}

.evaluate-form__desc {
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
    margin-top: 20rpx;
}

.evaluate-form__radio {
    position: relative;
    display: flex;
    align-items: center;
    margin-right: 60rpx;
}

.evaluate-form__radio--select {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 28rpx;
    height: 28rpx;
    margin-right: 16rpx;
    border-radius: 50%;
    border: 1px solid #D2D2D2;
}

.evaluate-form__radio--selectOn {
    width: 14rpx;
    height: 14rpx;
    border-radius: 50%;
    background: #f22222;
}

.evaluate-form__textarea {
    width: 100%;
    min-height: 220rpx;
    border-top: 1px solid #f4f4f4;
    border-bottom: 1px solid #f4f4f4;
    background: #fff;
    font-size: 24rpx;
    padding: 24rpx;
}

.apply-form__upload {
    margin-bottom: 20rpx;
    padding: 24rpx;
    padding-bottom: 0;
    background: #fff;
}

.apply-form__upload-img {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    justify-content: flex-start;
}

.apply-form__upload-proofUrl {
    position: relative;
    margin-right: 20rpx;
    margin-bottom: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 160rpx;
    height: 160rpx;
    border: 1px solid #666;
}

.apply-form__upload-handleRemoveImg {
    position: absolute;
    top: 0;
    right: 0;
    width: 28rpx;
    height: 28rpx;
}

.apply-form__upload-handleChooseImg {
    margin-bottom: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 160rpx;
    height: 160rpx;
    border: 1px dashed #eee;
}

.apply-form__upload-handleChooseImg-style {
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #AFAFAF;
}

.evaluate-form__score {
    padding: 24rpx;
    background: #fff;
    font-size: 28rpx;
}

.evaluate-form__item {
    display: flex;
    align-items: center;
}

.evaluate-form__item:first-child {
    margin-bottom: 40rpx;
}

.evaluate-form__score-img {
    margin-left: 36rpx;
}

.evaluate-form__score-img image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 12rpx;
    vertical-align: top;
}

.evaluate-release__btn {
    position: fixed;
    z-index: 9999;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    background: #f22222;
}