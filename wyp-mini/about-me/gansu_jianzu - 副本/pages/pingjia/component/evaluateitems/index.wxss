.proevaluate-tab {
    display: flex;
    flex-wrap: wrap;
    padding: 24rpx 24rpx 4rpx;
    background: #fff;
    border-bottom: 1px solid #f4f4f4;
}

.proevaluate-tab__item {
    width: 168rpx;
    height: 64rpx;
    margin-bottom: 20rpx;
    margin-right: 20rpx;
    line-height: 64rpx;
    background: #FFEDE7;
    text-align: center;
    color: rgba(0,0,0,0.75);
    font-size: 24rpx;
    border-radius: 8rpx;
}

.proevaluate-tab__item--active {
    background: #f22222;
    color: #fff;
}