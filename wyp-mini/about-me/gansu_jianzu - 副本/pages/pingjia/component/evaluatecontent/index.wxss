.myevaluate {
    font-size: 28rpx;
    color: #000;
    box-sizing: border-box;
}

.myevaluate-list {
}

.myevaluate-list__item {
    background: #fff;
    padding: 30rpx 24rpx;
    border-bottom: 1px solid #f4f4f4;
}

.myevaluate-baseInfo__wrap {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
}

.myevaluate-baseInfo {
    display: flex;
    align-items: center;
    flex: 1;
}

.myevaluate-baseInfo__img {
    width: 72rpx;
    height: 72rpx;
    margin-right: 24rpx;
    border-radius: 50%;
}

.myevaluate-baseInfo__cont {
    flex: 1;
}

.myevaluate-list--fontcolor {
    color: rgba(0,0,0,0.43);
    font-size: 24rpx;
}

.myevaluate-list__ctrlbtn {
    width: 30rpx;
    height: 10rpx;
}

.myevaluate-list__start {
    font-size: 24rpx;
}

.myevaluate-list__start image {
    width: 20rpx;
    height: 20rpx;
    margin-left: 4rpx;
}

.myevaluate-list__uploadimg {
    display: flex;
    flex-wrap: wrap;
}

.myevaluate-list__uploadimg image {
    width: 168rpx;
    height: 168rpx;
    margin-right: 10rpx;
    margin-bottom: 20rpx;
}

.myevaluate-list__uploadimg image:last-child {
    margin-right: 0;
}

.myevaluate-list__cont {
    margin-top: 20rpx;
    margin-bottom: 26rpx;
}

.myevaluate-list--sku {
    margin-bottom: 20rpx;
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}

.myevaluate-list__reply {
    margin-bottom: 22rpx;
    padding: 22rpx;
    background: #f4f4f4;
    border-radius: 8rpx;
}

.myevaluate-list__add {
}

.myevaluate-list__add-title {
    color: #f22222;
    margin-bottom: 14rpx;
}

.myevaluate-product {
    display: flex;
    align-items: center;
    margin-top: 18rpx;
}

.myevaluate-product__img {
    width: 120rpx;
    height: 120rpx;
    margin-right: 24rpx;
}

.myevaluate-product__cont {
    flex: 1;
}

.myevaluate-product__price {
    margin-top: 8rpx;
    font-size: 26rpx;
    color: #f22222;
}