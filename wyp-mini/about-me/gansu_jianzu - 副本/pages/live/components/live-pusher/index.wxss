.pusher {
    height: 100vh;
}

.top-controls {
    display: flex;
    align-items: center;
    justify-content: space-around;
    border-sizing: border-box;
    height: 96rpx;
    padding: 0 24rpx;
}

.top-controls--action {
    width: 96rpx;
    height: 96rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.top-controls--icon {
    opacity: 0.8;
    width: 40rpx;
    height: 40rpx;
}

.countdown {
    opacity: 0;
    font-size: 200rpx;
    color: #fff;
    position: absolute;
    width: 100%;
    text-align: center;
    align-content: center;
    top: 30%;
    z-index: 10;
}

.tips {
    font-size: 28rpx;
    color: #ccc;
    position: absolute;
    width: 100%;
    text-align: center;
    top: 50%;
    z-index: 10;
}

.start {
    position: absolute;
    width: 100%;
    text-align: center;
    bottom: 0;
    display: flex;
    justify-content: center;
    padding-bottom: 56rpx;
}

.start-icon {
    width: 120rpx;
    height: 120rpx;
}

.cover {
    position: fixed;
    width: 100%;
    top: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
    z-index: 9;
}

.anim {
    animation: count 3.3s ease alternate;
    animation-fill-mode: forwards;
}

@-webkit-keyframes count {
    0%,35%,69% {
        text-align: center;
        position: absolute;
        width: 100%;
        opacity: 1;
    }

    33%,66%,100% {
        text-align: center;
        position: absolute;
        width: 100%;
        animation-timing-function: step-start;
        opacity: 0;
    }
}

@keyframes count {
    0%,35%,69% {
        text-align: center;
        position: absolute;
        width: 100%;
        opacity: 1;
    }

    33%,66%,100% {
        text-align: center;
        position: absolute;
        width: 100%;
        animation-timing-function: step-start;
        opacity: 0;
    }
}