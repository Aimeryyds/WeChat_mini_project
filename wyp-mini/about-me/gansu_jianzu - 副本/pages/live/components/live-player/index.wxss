.player {
    width: 100%;
    height: 420rpx;
    position: relative;
}

.player-fullscreen {
    height: 100%;
}

.tips {
    z-index: 99;
    top: 0;
    width: 100%;
    height: 420rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.tips .title {
    text-align: center;
    width: 100%;
    color: #ddd;
    font-size: 28rpx;
    margin-top: 24rpx;
}

.btn {
    width: 140rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    padding: auto 0;
    background-color: red;
    color: #fff;
    font-size: 28rpx;
    margin-top: 24rpx;
}

.btn-disabled {
    color: #fff;
    opacity: 0.6;
}

.mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 420rpx;
    display: flex;
}

.controls {
    width: 100%;
    height: 420rpx;
    display: flex;
    opacity: 0;
}

.mask-fullscreen,.controls-fullscreen {
    height: 100%;
}

.controls-footer {
    position: absolute;
    width: 100%;
    height: 100rpx;
    left: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 24rpx;
    box-sizing: border-box;
    background-color: rgba(0,0,0,0.4);
}

.footer-action {
    height: 100rpx;
    width: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.footer-icon {
    width: 60rpx;
    height: 60rpx;
}