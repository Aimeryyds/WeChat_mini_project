.header {
    width: 100%;
    backgroundColor: transparent;
    font-size: 24rpx;
    color: #989898;
    padding: 24rpx;
    box-sizing: border-box;
}

.header-title {
    font-size: 28rpx;
    color: #000;
}

.header-center {
    display: flex;
    margin-top: 16rpx;
    align-items: center;
    justify-content: space-between;
}

.header-center-left {
    flex: 1;
    display: flex;
    align-items: center;
    font-size: 28rpx;
}

.header-center-left image {
    width: 32rpx;
    height: 32rpx;
}

.header-center-left .time {
    margin-left: 12rpx;
}

.header-center-left .status {
    margin-left: 36rpx;
    border-radius: 16rpx;
    padding: 4rpx 16rpx;
    color: #fff;
}

.normal {
    background: #d5d5d5;
}

.living {
    background: linear-gradient(-90deg,#C87FFF 0%,#FF7B7B 100%);
}

.header-footer {
    margin-top: 16rpx;
    display: flex;
}

.header-footer-left {
    flex: 1;
}

.header-footer-right {
    width: 80rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.header-footer-right image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 12rpx;
}

.desc {
    padding: 24rpx;
    color: #989898;
    font-size: 24rpx;
}

.desc .title {
    font-size: 28rpx;
    color: #000;
    margin-bottom: 16rpx;
}

.desc .subTitle {
    color: #000;
    margin-bottom: 8rpx;
}

.live-actions {
    height: 80rpx;
    color: #989898;
    font-size: 28rpx;
    width: 100%;
    border-bottom: 1rpx solid #e5e5e5;
    display: flex;
    background-color: #fff;
}

.live-actions--favorite,.live-actions--share {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.live-actions--share {
    border-left: 1rpx solid #e5e5e5;
}

.action-btn {
    width: 374rpx;
    height: 80rpx;
    margin: 0;
    border: 0rpx;
    background-color: transparent;
    font-size: 24rpx;
    color: #989898;
    line-height: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.action-btn image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 12rpx;
}

.action-btn::after {
    border: 0;
}

.action {
    color: #fff;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 96rpx;
    background-image: linear-gradient(-90deg,#FFBF9B 0%,#F16E6E 100%);
}

.backPanel {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-top: 24rpx;
}

.backPanel .btn {
    margin-top: 24rpx;
    background-color: transparent;
    padding: 12rpx 48rpx;
    border-radius: 6rpx;
    border: 1rpx solid #F17270;
    color: #F17270;
    font-size: 24rpx;
}