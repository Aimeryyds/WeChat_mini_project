.service-action-box {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 28rpx;
    justify-content: flex-end;
    padding: 24rpx;
    background-color: #fff;
}

.service-order-btn {
    height: 64rpx;
    width: 188rpx;
    color: #fff;
    font-size: 28rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 2rpx solid #f00000;
    border-radius: 5px;
}

.service-order-btn--primary {
    color: #fff;
    background: #f00000;
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.service-order-btn--default {
    color: #f00000;
    background: #fff;
}

.service-btn-primarydefault {
    background: #F22222;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1;
}

.service-btn-default {
    width: 290rpx;
    background: #353535;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}

.service-btn-primary {
    background: #F22222;
    color: #fff;
    display: flex;
    flex: 1;
    align-items: center;
    justify-content: center;
}

.service-show-footer {
    font-size: 32rpx;
    height: 96rpx;
    left: 0;
    right: 0;
    position: fixed;
    bottom: 0;
    display: flex;
    background-color: white;
    border-top: solid 1rpx #d9d9d9;
    overflow: hidden;
}