@import "../../../../app.wxss";

.cart_popup--header {
    border-bottom: 1px solid #e5e5e5;
    display: flex;
    justify-content: flex-start;
    padding: 24rpx;
    align-items: center;
}

.cart_popup--header-content {
    height: 120rpx;
    margin-left: 24rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
}

.cart_popup--spec {
    margin-top: 24rpx;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    flex-direction: column;
}

.cart_popup--spec-values {
    flex: 1;
    display: flex;
    margin-left: 24rpx;
    flex-wrap: wrap;
}

.cart_popup--spec-value {
    margin: 0 24rpx 24rpx 0;
    border-radius: 4rpx;
    background-color: #e5e5e5;
    border: 1px solid #e5e5e5;
    padding: 6rpx 24rpx;
}

.spec-value--disabled {
    border: 1px dashed #ccc;
    background-color: #fff;
    color: #ccc;
}

.spec-value--selected {
    border: 1px solid red;
    background-color: red;
    color: #fff;
}

.cart_popup--num {
    margin-top: 24rpx;
    padding: 0 24rpx;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
}

.cart_popup--num-content {
    margin-left: 24rpx;
    display: flex;
    align-items: center;
}

.cart_popup--num-quantity {
    font-size: 24rpx;
    text-align: center;
    width: 48rpx;
}

.cart_popup--footer {
    font-size: 32rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    border-top: 1px solid #e5e5e5;
    bottom: 0;
}

.cart_popup--footer-btn {
    width: 100%;
    height: 98rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 2.5;
    background: #f44;
    color: white;
    border: 0;
    border-radius: 0;
}

.card_popup--footer-btn-disable {
    width: 100%;
    height: 98rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 2.5;
    background: #e7e7e7;
    color: #616161;
    border: 0;
    border-radius: 0;
}

.product-show-spec-dialog-close {
    width: 40rpx;
    height: 40rpx;
    order: 20;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
}

.yuyuetip {
    font-size: 12px;
    color: #000;
    opacity: 0.43;
    margin-left: 20rpx;
}