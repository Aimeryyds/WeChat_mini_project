.services-list {
}

.services-list__item {
    padding: 0 24rpx;
    align-items: center;
    justify-content: flex-start;
    display: flex;
    margin-bottom: 20rpx;
    background-color: #fff;
    height: 208rpx;
}

.services-list__item__avatar {
    width: 160rpx;
    height: 160rpx;
}

.services-list__item__detail {
    flex: auto;
    height: 160rpx;
    font-size: 28rpx;
    margin-left: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
}

.services-list__item__detail__name {
    width: 100%;
    margin-top: 16rpx;
    height: 48rpx;
    line-height: 48rpx;
    font-weight: bold;
    color: #000;
}

.services-list__item__detail__desc {
    width: 100%;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
}

.services-list__item__detail__price {
    margin-bottom: 16rpx;
}

.services-list__item__detail__price-cur {
    font-size: 36rpx;
    color: #F22626;
}

.services-list__item__detail__price-old {
    margin-left: 10rpx;
    font-size: 28rpx;
    color: #aaa;
    text-decoration: line-through;
}

.services-list__item__btn {
    font-size: 28rpx;
    color: #fff;
    background-color: #f22222;
    border-radius: 4rpx;
    width: 180rpx;
    height: 60rpx;
}

.services-list__item__selected,.services-list__item__unselected {
    border-radius: 50%;
    margin-right: 24rpx;
    width: 40rpx;
    height: 40rpx;
}

.services-list__item__unselected {
    border: 2rpx solid #aaa;
}

.services-list__item__selected {
    border: 0rpx;
}