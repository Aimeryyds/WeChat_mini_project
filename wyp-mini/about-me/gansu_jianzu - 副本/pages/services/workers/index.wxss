.workers-list {
}

.workers-list__item {
    align-items: center;
    justify-content: flex-start;
    display: flex;
    margin-bottom: 20rpx;
    background-color: #fff;
    height: 208rpx;
}

.workers-list__item__avatar {
    margin-left: 24rpx;
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}

.workers-list__item__detail {
    font-size: 28rpx;
    margin-left: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
}

.workers-list__item__detail__name {
    height: 48rpx;
    line-height: 48rpx;
    font-weight: bold;
    color: #000;
}

.workers-list__item__detail__desc {
    height: 48rpx;
    line-height: 48rpx;
    font-size: 24rpx;
    color: #aaa;
}

.workers-list__item__detail__number {
    height: 48rpx;
    line-height: 48rpx;
    font-size: 24rpx;
    color: #aaa;
}