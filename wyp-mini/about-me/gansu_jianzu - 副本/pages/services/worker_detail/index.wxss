.worker {
}

.worker__item {
    align-items: center;
    justify-content: flex-start;
    display: flex;
    background-color: #fff;
    height: 208rpx;
    border-bottom: 1rpx solid #e5e5e5;
}

.worker__item__avatar,.store__detail-phone {
    margin-left: 24rpx;
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}

.worker__item__detail {
    flex: 1;
    font-size: 28rpx;
    margin-left: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
}

.worker__item__detail__name {
    height: 48rpx;
    line-height: 48rpx;
    font-weight: bold;
    color: #000;
}

.worker__item__detail__desc {
    height: 48rpx;
    line-height: 48rpx;
    font-size: 24rpx;
    color: #aaa;
}

.worker__item__detail__number {
    height: 48rpx;
    line-height: 48rpx;
    font-size: 24rpx;
    color: #aaa;
}

.worker__item__share {
    margin-right: 48rpx;
}

.worker__desc {
    padding: 0 24rpx;
    font-size: 24rpx;
}

.worker__desc-title {
    margin-top: 12rpx;
    line-height: 40rpx;
}

.worker__desc-content-default,.worker__desc-content-collspand {
    color: #aaa;
    line-height: 40rpx;
    padding-bottom: 20rpx;
}

.worker__desc-content-collspand {
    height: 120rpx;
}

.worker__desc-expand {
    font-size: 24rpx;
    text-align: center;
    color: #f22222;
    padding: 12rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.worker__desc-expand__arrow {
    margin-left: 10rpx;
    width: 16rpx;
    height: 16rpx;
}

.services-list {
    font-size: 28rpx;
}

.services-list__title {
    font-weight: bold;
    padding: 24rpx;
    border-bottom: 1rpx solid #e5e5e5;
}

.services-list__item {
    padding: 24rpx;
    align-items: center;
    justify-content: flex-start;
    display: flex;
    background-color: #fff;
    border-bottom: 1rpx solid #e5e5e5;
}

.services-list__item__avatar {
    width: 120rpx;
    height: 120rpx;
}

.services-list__item__name {
    margin-left: 24rpx;
    flex: 1;
    height: 48rpx;
    line-height: 48rpx;
    font-weight: bold;
    color: #000;
}

.services-list__item__price {
    margin-left: 24rpx;
    font-size: 36rpx;
    color: #F22626;
}

.store {
    padding: 24rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.store__detail {
    font-size: 28rpx;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.store__detail-name {
    font-weigth: bold;
}

.store__detail-address {
    margin-top: 12rpx;
    font-size: 24rpx;
    color: #aaa;
}

.order-btn {
    bottom: 0;
    position: fixed;
    width: 100%;
}

.btn-share {
    margin-right: 0;
    padding-left: 14px;
    padding-right: 0;
    border-radius: 0;
    -webkit-tap-highlight-color: transparent;
    overflow: hidden;
    color: #000000;
    background-color: #FFFFFF;
    line-height: 1;
    width: 90rpx;
}

.btn-share::after {
    content: " ";
    border: 0px;
}

.btn-share .share {
    font-size: 24rpx;
    color: #666666;
}