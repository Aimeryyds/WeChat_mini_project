.order-result__hint {
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    padding-bottom: 60rpx;
    padding-top: 60rpx;
    margin-bottom: 20rpx;
}

.order-result__img {
    width: 112rpx;
    height: 112rpx;
    vertical-align: middle;
}

.order-result__title {
    font-size: 34rpx;
    color: #000;
    vertical-align: middle;
    padding: 20rpx;
}

.order-result__text {
    flex-flow: column wrap;
    color: rgba(0,0,0,0.43);
    display: flex;
    margin-top: 32rpx;
    align-items: center;
    font-size: 24rpx;
    line-height: 48rpx;
}

.order__info {
    background-color: #fff;
    font-size: 28rpx;
    padding: 26rpx;
    margin-bottom: 20rpx;
}

.order__item {
    align-items: center;
    border-bottom: 1px solid #f4f4f4;
    color: rgba(0,0,0,0.43);
}

.order__lablel {
    vertical-align: middle;
    flex-shrink: 0;
    width: 6em;
    display: flex;
    justify-content: space-between;
}

.order__cont {
    display: inline-block;
    vertical-align: middle;
}

.item__top {
    margin-bottom: 14rpx;
    display: flex;
}

.order-state__btn {
    border-top: 1px solid #f2f2f2;
    position: fixed;
    bottom: 0px;
    left: 0;
    right: 0px;
    width: 100%;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 32rpx;
    color: #fff;
    background-color: #f22222;
}

.order__img__container {
    display: flex;
    margin-left: 10rpx;
}

.order__img {
    width: 120rpx;
    height: 120rpx;
    margin-right: 10rpx;
}

.item__bottom {
    margin: 5rpx 0;
    display: flex;
}