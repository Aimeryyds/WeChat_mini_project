.order-state {
    display: flex;
    height: 88rpx;
    align-items: center;
    background-color: #fff;
    padding: 0 24rpx;
    color: rgba(0,0,0,0.43);
}

.order-state__img {
    width: 48rpx;
    height: 48rpx;
    margin-right: 16rpx;
    vertical-align: middle;
}

.order-state__title {
    font-size: 28rpx;
    vertical-align: middle;
}

.order__info {
    background-color: #fff;
    margin: 20rpx 0;
    font-size: 28rpx;
}

.order__info_orderNo {
    background-color: #fff;
    margin: 20rpx 0;
    font-size: 28rpx;
    margin-bottom: 296rpx;
}

.order__item {
    padding: 28rpx;
    align-items: center;
    border-bottom: 1px solid #f4f4f4;
    color: rgba(0,0,0,0.43);
}

.order__lablel {
    vertical-align: middle;
    flex-shrink: 0;
}

.order__cont {
    display: inline-block;
    vertical-align: middle;
    margin-left: 10rpx;
}

.item__top {
    margin-bottom: 20rpx;
}

.order__item.order--state {
    display: flex;
    align-items: flex-start;
    line-height: 48rpx;
}

.order__item.order--state .order__cont {
    flex: 1;
}

.order-state__btn {
    margin: 86rpx 56rpx;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 28rpx;
    color: #fff;
    background-color: #F22222;
}

.order-verification {
    height: 168rpx;
    background-color: #fff;
    font-size: 16px;
    color: #606060;
    display: flex;
    justify-content: center;
    align-items: center;
}

.order-verification_text {
    background: #f8f8f8;
    padding: 10rpx 48rpx;
    margin-left: 14rpx;
}

.order-call_margin {
    margin-bottom: 20rpx;
    border-top: 1px solid #f4f4f4;
}

.order__orderNo {
    padding: 24rpx;
    align-items: center;
    border-bottom: 1px solid #f4f4f4;
    color: rgba(0,0,0,0.43);
}

.item__orderNo {
    margin-bottom: 33rpx;
}

.item__orderNo:last-child {
    margin-bottom: 0;
}

.item__total {
    margin-bottom: 20rpx;
    border-top: 1px solid #f4f4f4;
    margin-top: 29rpx;
    padding-top: 20rpx;
    display: flex;
}

.item__total:last-child {
    margin-bottom: 0;
}

.order__total {
    color: #f22222;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.item__bottom {
    display: flex;
}

.item__paytotal {
    display: flex;
    flex: 1;
}

.order_money {
    margin-left: 10rpx;
}

.service-show-footer {
    font-size: 32rpx;
    height: 96rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    display: flex;
    background-color: white;
    border-top: solid 1rpx #d9d9d9;
    overflow: hidden;
}

.service-btn-primarydefault {
    background: #F22222;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1;
}

.service-btn-default {
    width: 290rpx;
    background: #353535;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}

.service-btn-primary {
    width: 460rpx;
    background: #F22222;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.order_checkbox {
    margin-right: 5rpx;
}

.order_imgs {
    width: 120rpx;
    height: 120rpx;
    margin-left: 5rpx;
    margin-top: 5rpx;
    padding-bottom: 0;
    margin-right: 5rpx;
    vertical-align: top;
    border: 1rpx solid #F4F4F4;
}

.item__top_info {
    display: flex;
    margin-bottom: 24rpx;
}