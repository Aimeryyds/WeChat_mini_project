.searchLetter {
    position: fixed;
    right: 0;
    width: 50rpx;
    text-align: center;
    justify-content: center;
    display: flex;
    flex-direction: column;
    color: #666;
    z-index: 1;
    top: 0;
    bottom: 0;
}

.searchLetter view {
    margin-top: 10rpx;
    font-weight: bold;
}

.thishotText {
    color: #999;
    font-size: 20rpx;
    margin: 0!important;
}

.hotcity-common {
    font-size: 24rpx;
    color: #666;
    padding: 0 0 0 12rpx;
}

.thisCity {
    padding-top: 30rpx;
}

.thisCityName {
    display: inline-block;
    border: 1rpx solid #D61A31;
    border-radius: 8rpx;
    padding: 10rpx 6rpx;
    font-size: 24rpx;
    color: #D61A31;
    text-align: center;
    min-width: 140rpx;
    margin: 20rpx 0 20rpx 12rpx;
}

.weui-grid {
    position: relative;
    float: left;
    padding: 10rpx 0;
    width: 149.5rpx;
    box-sizing: border-box;
    border: 1rpx solid #ececec;
    border-radius: 8rpx;
    margin: 10rpx 12rpx;
}

.weui-grid__label {
    display: block;
    text-align: center;
    color: #333;
    font-size: 24rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.selection {
    display: flex;
    width: 100%;
    flex-direction: column;
}

.item_letter {
    display: flex;
    background-color: #f5f5f5;
    height: 50rpx;
    padding-left: 34rpx;
    align-items: center;
    font-size: 24rpx;
    color: #666;
}

.item_city {
    display: flex;
    background-color: #fff;
    height: 80rpx;
    padding-left: 34rpx;
    align-items: center;
    border-bottom: 1rpx solid #ededed;
    font-size: 24rpx;
    color: #666;
}

.showSlectedLetter {
    background-color: rgba(0,0,0,0.5);
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 50%;
    left: 50%;
    margin: -100rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
    font-size: 52rpx;
    z-index: 1;
}

.search-wrap {
    padding: 10rpx 80rpx;
    border-bottom: 1rpx #e5e5e5 solid;
}

.search {
    width: 100%;
    border-radius: 8rpx;
    background-color: #eeeeee;
}

.localcity-title {
    border-bottom: 1rpx #e5e5e5 solid;
    font-size: 30rpx;
    padding: 28rpx 0 20rpx 30rpx;
}

.cityletter {
    font-size: 30rpx;
}

.localcity {
    border: #e5e5e5 1rpx solid;
    color: #da1917;
    margin: 20rpx 0 20rpx 30rpx;
    padding: 20rpx 30rpx;
    border-radius: 8rpx;
    display: inline-block;
}

.cityletter-title {
    margin-bottom: 22rpx;
    margin-left: 30rpx;
}

.cityletterlist {
    border-top: 1rpx #e5e5e5 solid;
    display: flex;
    flex-wrap: wrap;
}

.letteritem {
    width: 25%;
    line-height: 60rpx;
    text-align: center;
    box-sizing: border-box;
    border-bottom: 1rpx #e5e5e5 solid;
    border-right: 1rpx #e5e5e5 solid;
}

.citylist {
    font-size: 26rpx;
}

.cityitem-title {
    padding-left: 30rpx;
    background-color: #eeeeee;
    line-height: 40rpx;
}

.cityitem-content {
    font-size: 26rpx;
    border-bottom: 1rpx #e5e5e5 solid;
    line-height: 60rpx;
    margin-left: 30rpx;
}

.search-error {
    font-size: 26rpx;
    display: flex;
    justify-content: center;
    margin: 10rpx 0;
}