@import "../card/index.wxss";

.giftcard-detail {
    position: relative;
    padding: 24rpx 24rpx 24rpx 110rpx;
    background: #fff;
}

.giftcard-detail__item {
    position: relative;
    display: flex;
    font-size: 24rpx;
    color: rgba(0,0,0,0.65);
}

.giftcard-detail__item-text {
    height: 216rpx;
    display: flex;
    flex: 1;
    flex-flow: wrap column;
    flex-wrap: wrap;
    justify-content: space-between;
    font-size: 24rpx;
    color: rgba(0,0,0,0.65);
    margin-left: 24rpx;
    padding: 40rpx 0;
    box-sizing: border-box;
}