.giftcard-big__item {
    border-radius: 16rpx;
}

.giftcard-big__item-bg {
    height: 334rpx;
    background: #f4f4f4;
}

.giftcard-big__item-bg image {
    width: 100%;
    height: 334rpx;
    vertical-align: top;
}

.giftcard-big__item-text {
    height: 76rpx;
    line-height: 76rpx;
    border: 1px solid #C9C9C9;
    border-top: 0;
    padding: 0 24rpx;
    font-size: 24rpx;
    color: #000;
    border-radius: 0 0 16rpx 16rpx;
}