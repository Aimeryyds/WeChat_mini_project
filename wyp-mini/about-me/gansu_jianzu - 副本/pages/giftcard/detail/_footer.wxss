.giftcard-footer {
    display: flex;
    align-items: center;
    position: fixed;
    height: 88rpx;
    line-height: 88rpx;
    bottom: 0;
    left: 0;
    right: 0;
}

.giftcard-footer button {
    font-size: 28rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 0;
}

.giftcard-footer__btn1 {
    flex: 1;
    background: #fff;
}

.giftcard-footer__btn2 {
    flex: 1;
    color: #fff;
}

button[type="primary"].giftcard-footer__btn2 {
    background: #F8A226;
}

button[type="primary"].giftcard-footer__btn1 {
    background: #fff;
    color: #F8A226;
}

.giftcard-footer button::after {
    border: 0;
}