@import "../templates/card/index.wxss";

@import "../templates/carddetail/index.wxss";

@import "../templates/storelist/index.wxss";

@import "_footer.wxss";

.giftcard-status__info {
    display: flex;
}

.giftcard-status__text {
    height: 216rpx;
    display: flex;
    flex-flow: wrap column;
    justify-content: space-between;
    font-size: 24rpx;
    color: rgba(0,0,0,0.65);
    margin-left: 24rpx;
    padding: 40rpx 0;
    box-sizing: border-box;
}

.giftcard-status {
    position: relative;
    padding: 24rpx 24rpx 24rpx 110rpx;
    background: #fff;
}

.giftcard-form {
    background: #fff;
    padding: 32rpx 22rpx;
    border-top: 1px solid #f4f4f4;
    font-size: 24rpx;
    color: rgba(0,0,0,0.65);
}

.giftcard-form__cardnum {
    width: 532rpx;
    height: 56rpx;
    line-height: 56rpx;
    text-align: center;
    border: 1px solid #F8A226;
    color: #F8A226;
    margin: 12rpx auto 24rpx;
    font-size: 28rpx;
    border-radius: 4rpx;
}

.giftcard-form__cardnum--style {
    border: 1px solid #D2D2D2;
    color: #D2D2D2;
}

.giftcard-form__item {
    display: flex;
    margin-bottom: 20rpx;
}

.giftcard-form__item:last-child {
    margin-bottom: 0;
}

.giftcard-form__item text {
    width: 120rpx;
}

.giftcard-form__item-cont {
    flex: 1;
}

.giftcard-form__link {
    flex: 1;
    color: #FF5E5E;
}

.giftcard-receive__status {
    display: flex;
    background: #fff;
    align-items: center;
    font-size: 34rpx;
    color: #000;
    justify-content: center;
    padding: 16rpx 0 60rpx;
}

.giftcard-receive__img {
    width: 48rpx;
    height: 48rpx;
    margin-right: 24rpx;
}

.giftcard-detail__record {
    margin-top: 20rpx;
    padding: 24rpx 24rpx 32rpx;
    background: #fff;
    font-size: 28rpx;
    color: #000;
}

.giftcard-detail__record-cont {
    display: flex;
    align-items: center;
    margin: 28rpx 0 12rpx;
}

.giftcard-detail__record-img {
    width: 80rpx;
    height: 80rpx;
    margin-right: 34rpx;
}

.giftcard-detail__record-time {
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}