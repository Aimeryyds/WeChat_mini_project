@import "../templates/card/big.wxss";

.giftcard-receive {
    padding: 24rpx 52rpx;
    border-bottom: 1px solid #f4f4f4;
}

.giftcard-receive__text {
    display: flex;
    margin-top: 24rpx;
    font-size: 24rpx;
}

.giftcard-receive__text text {
    margin-left: 24rpx;
    margin-right: 10rpx;
    color: #FF5E5E;
}

.giftcard-receive__userinfo {
    display: flex;
    align-items: center;
    padding: 24rpx 24rpx 84rpx 52rpx;
    font-size: 28rpx;
}

.giftcard-receive__userinfo-img {
    width: 80rpx;
    height: 80rpx;
    margin-right: 34rpx;
}

.giftcard-receive__groupbtn {
    padding: 0 52rpx;
}

.giftcard-receive__btn1 {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    margin-bottom: 24rpx;
    margin-left: 52rpx;
    margin-right: 52rpx;
}

.giftcard-receive__btn2 {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    margin-left: 52rpx;
    margin-right: 52rpx;
    background-color: #fff!important;
    color: #1AAD19;
    border: 1px solid #1AAD19;
}

.giftcard-receive__hint {
    margin-top: 60rpx;
    color: rgba(0,0,0,0.43);
    padding-left: 52rpx;
    font-size: 24rpx;
}

.giftcard-receive__note {
    display: flex;
    align-items: center;
    padding: 60rpx 0 8rpx;
    justify-content: center;
}

.giftcard-receive__note-img {
    width: 48rpx;
    height: 48rpx;
    margin-right: 24rpx;
    font-size: 34rpx;
    color: #000;
}

.giftcard-receive__end {
    display: flex;
    align-items: center;
    margin-top: 60rpx;
    margin-bottom: 48rpx;
    justify-content: center;
    font-size: 34rpx;
    color: #000;
}

.giftcard-receive__end image {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
}