@import "../templates/card/index.wxss";

.giftcard-choose {
    margin-bottom: 356rpx;
}

.giftcard-choose__list {
    display: flex;
    align-items: center;
    background: #fff;
    margin-bottom: 20rpx;
    padding: 24rpx;
}

.giftcard-choose__radio {
    width: 38rpx;
    height: 38rpx;
    margin-right: 40rpx;
    border: 1px solid #b0b0b0;
    border-radius: 50%;
}

.giftcard-choose__radio image {
    width: 40rpx;
    height: 40rpx;
}

.giftcard-choose__text {
    flex: 1;
    height: 216rpx;
    display: flex;
    flex-flow: wrap column;
    justify-content: space-between;
    font-size: 24rpx;
    color: rgba(0,0,0,0.65);
    margin-left: 24rpx;
    padding: 20rpx 0;
    box-sizing: border-box;
}

.giftcard-choose__footer {
    display: flex;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 112rpx;
    background: #fff;
    font-size: 24rpx;
}

.giftcard-choose__payinfo {
    flex: 1;
    text-align: right;
    padding-right: 40rpx;
}

.giftcard-choose__payinfo-top {
    font-size: 32rpx;
    color: #000;
    margin: 16rpx 0 10rpx;
}

.giftcard-choose__payinfo-bottom {
    color: rgba(0,0,0,0.43);
}

.giftcard-choose__btn {
    width: 252rpx;
    background: #f22222;
    text-align: center;
    line-height: 112rpx;
    color: #fff;
    font-size: 32rpx;
}