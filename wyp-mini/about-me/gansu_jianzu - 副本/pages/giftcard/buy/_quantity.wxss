.giftcard-num__counter {
    width: 208rpx;
    background: #FFF9F9;
    display: flex;
    align-items: center;
    color: #FF5757;
    justify-content: space-between;
    font-size: 24rpx;
    box-sizing: border-box;
}

.quantity__num {
    flex: 1;
    text-align: center;
}

.quantity__minus image {
    width: 18rpx;
    height: 2rpx;
    vertical-align: middle;
}

.quantity__plus,.quantity__minus {
    width: 70rpx;
    text-align: center;
}

.quantity__plus image {
    width: 18rpx;
    height: 18rpx;
    vertical-align: middle;
}

.quantity__normal {
    width: 88rpx;
    height: 88rpx;
    line-height: 88rpx;
    background: #f4f4f4;
    color: #FF5757;
    text-align: center;
}

.quantity__normal image {
    width: 18rpx;
    height: 18rpx;
    vertical-align: middle;
}