.score-header {
    justify-content: space-between;
    align-items: center;
    display: flex;
    height: 200rpx;
}

.score-header_score {
    margin-left: 20rpx;
    font-weight: bold;
    font-size: 52rpx;
    color: #fff;
}

.score-header_list-title {
    padding: 24rpx 24rpx;
    font-size: 28rpx;
    font-weight: bold;
    background-color: #fff;
    border-bottom: 1rpx solid #e5e5e5;
}

.score-header_list-title::after {
    border: 0px;
}

.score-item {
    padding: 24rpx 24rpx;
    border-bottom: 1px solid #e5e5e5;
}

.score-item_desc {
    font-size: 28rpx;
}

.score-item_date {
    font-size: 24rpx;
}

.score-item_score {
    font-size: 40rpx;
    font-weight: bold;
}

.score-item_score-red {
    font-size: 40rpx;
    font-weight: bold;
    color: red;
}