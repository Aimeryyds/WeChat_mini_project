.score-list__tab {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 48rpx 0 60rpx;
    height: 72rpx;
    font-size: 28rpx;
    color: rgba(0,0,0,0.65);
    background: #fff;
}

.down-icon {
    width: 0;
    height: 0;
    border-width: 12rpx 8rpx;
    border-style: solid;
    border-color: #595959 transparent transparent transparent;
    margin: 16rpx 0 0 10rpx;
}

.score-search__wrap {
    border-top: 20rpx solid #f4f4f4;
    padding: 24rpx;
    border-bottom: 1px solid #f4f4f4;
}

.score-search {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 60rpx;
    background: #f4f4f4;
    font-size: 24rpx;
    border-radius: 30rpx;
}

.score-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding-bottom: 10px;
    background: #f4f4f4;
}

.score-list__item {
    width: 370rpx;
    height: 510rpx;
    background: #fff;
    margin-top: 10rpx;
}

.score-list__img {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 360rpx;
    margin-bottom: 10rpx;
}

.giftcard__img {
    width: 252rpx;
    height: 168rpx;
    border: 1px solid #C9C9C9;
    border-radius: 8rpx;
}

.giftcard__img image {
    width: 252rpx;
    height: 168rpx;
    border-radius: 8rpx;
}

.coupon__img {
    position: relative;
    width: 286rpx;
    height: 134rpx;
    border-radius: 8rpx;
}

.coupon__img::before {
    position: absolute;
    top: 55rpx;
    left: 0;
    content: '';
    width: 10rpx;
    height: 24rpx;
    background: #fff;
    border-radius: 0 12rpx 12rpx 0;
}

.coupon__img::after {
    position: absolute;
    top: 55rpx;
    right: 0;
    content: '';
    width: 10rpx;
    height: 24rpx;
    background: #fff;
    border-radius: 12rpx 0 0 12rpx;
}

.coupon__img image {
    width: 286rpx;
    height: 134rpx;
    border-radius: 8rpx;
}

.score-list__name {
    padding: 0 24rpx;
    font-size: 28rpx;
    color: #000;
}

.score-list__footer {
    display: flex;
    align-items: center;
    margin-top: 28rpx;
    padding: 0 24rpx;
}

.score-list__num {
    flex: 1;
    font-size: 30rpx;
    color: #F32828;
}

.no-newsinfo {
    margin-top: 300rpx;
    text-align: center;
    font-size: 28rpx;
    color: #999999;
}