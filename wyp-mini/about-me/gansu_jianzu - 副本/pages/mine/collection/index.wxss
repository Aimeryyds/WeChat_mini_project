.tab-wrap {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
}

.demo-tab__label {
    width: 100%;
    margin: 10rpx 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

.demo-tab__text {
    margin-left: 8rpx;
    font-size: 30rpx;
}

.demo-tab--active {
    color: #ff5777;
    font-size: 30rpx;
}

.products-tab {
    display: flex;
    align-items: center;
    height: 72rpx;
    padding: 0 68rpx;
    background: #fff;
    border-bottom: 1px solid #f1f1f1;
    font-size: 28rpx;
    color: rgba(0,0,0,0.65);
    justify-content: space-between;
}

.products-sort-img {
    width: 14rpx;
    height: 22rpx;
    margin-left: 8rpx;
}

.products-type-img {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
}

.store-tab {
    display: flex;
    background-color: #fff;
    border-bottom: 1px solid #f1f1f1;
}

.store-tab-item {
    background-color: #fff;
    margin: 14rpx 40rpx;
    font-size: 28rpx;
    padding: 10rpx 20rpx;
    text-align: center;
}

.store-tab-item-active {
    color: red;
}

.products-wrap {
    margin-top: 194rpx;
}

.products-list {
    display: flex;
    align-items: center;
    padding: 0 24rpx;
    background: #fff;
    font-size: 28rpx;
}

.products-list__img {
    width: 160rpx;
    height: 160rpx;
    margin-right: 26rpx;
}

.products-list__info {
    position: relative;
    flex: 1;
    border-bottom: 1px solid #f4f4f4;
    padding: 24rpx 24rpx 24rpx 0;
}

.products-list__extendPrice {
    margin-right: 40rpx;
    color: #F32828;
}

.products-list__costPrice {
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}

.products-list__collection {
    position: absolute;
    bottom: 50rpx;
    right: 0;
    width: 100rpx;
    height: 100rpx;
    box-sizing: border-box;
    text-align: center;
}

.products-list__joinImg {
    width: 42rpx;
    height: 42rpx;
}

.products-list__joinText {
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}

.noData {
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    justify-content: center;
    height: 1018rpx;
    font-size: 30rpx;
}

.product-list-storeName {
    padding-right: 24rpx;
    min-width: 28rpx;
    min-height: 28rpx;
    position: relative;
    text-align: right;
    color: #666;
}

.product-list-storeName::after {
    position: absolute;
    top: 50%;
    right: 4rpx;
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 1rpx 1rpx 0 0;
    border-color: #c8c8c8;
    border-style: solid;
    transform: translateY(-50%) matrix(0.71,0.71,-0.71,0.71,0,0);
}

.products-wrap--type2 {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-between;
}

.products-list2 {
    position: relative;
    display: flex;
    flex-flow: wrap column;
    justify-content: space-between;
    width: 370rpx;
    margin-bottom: 10rpx;
    background: #fff;
    padding: 16rpx 16rpx 20rpx;
    box-sizing: border-box;
}

.products-list2__img {
    width: 340rpx;
    height: 340rpx;
    vertical-align: top;
}

.products-list2__name {
    height: 80rpx;
    font-size: 28rpx;
}

.tuan__tag1 {
    position: absolute;
    top: 4rpx;
    left: 0;
}

.tuan__tag2 {
    position: absolute;
    top: 24rpx;
    left: 24rpx;
}

.product-storename-1 {
    width: 340rpx;
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}

.product-storename-2 {
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
    flex-grow: 1;
    text-align: right;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 200rpx;
}

.products-list__cont {
    width: 100%;
    display: flex;
    align-items: center;
    margin: 16rpx 0;
}

.product-list__price-wrap {
    flex: 2;
}

.products-list__price {
    font-size: 40rpx;
    line-height: 32rpx;
    color: #F32828;
}

.products-list__price text {
    font-size: 24rpx;
    margin-right: 6rpx;
}

.products-list__stock {
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}

.product-list-coll-img {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
}

.product-list-coll-img image {
    width: 32rpx;
    height: 30rpx;
}

.product-list-coll-img view {
    color: #616161;
    font-size: 24rpx;
}

.product-activity {
    width: 26rpx;
    height: 26rpx;
    margin-left: 15px;
    color: #fff;
    font-size: 24rpx;
    background: #f22222;
    display: flex;
    align-items: center;
    justify-content: center;
}