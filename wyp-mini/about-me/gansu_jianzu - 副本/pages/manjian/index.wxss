@import "../templates/tag/tuan.wxss";

.manjian-title {
    padding: 20rpx 24rpx;
    background: #fff;
    color: #000;
}

.manjian-title__top {
    display: flex;
    align-items: center;
    font-size: 30rpx;
}

.manjian-title__img {
    width: 34rpx;
    height: 34rpx;
    margin-right: 12rpx;
}

.manjian-title__bottom {
    display: flex;
    align-items: center;
    margin-top: 20rpx;
    margin-left: 44rpx;
    font-size: 20rpx;
}

.manjian-tag {
    margin-right: 10rpx;
}

.manjian-msg {
    flex: 1;
}

.manjian-list {
    background: #fff;
    border: 1px solid #f4f4f4;
}

.manjian-list__item {
    display: flex;
    align-items: center;
}

.manjian-list__img {
    width: 160rpx;
    height: 160rpx;
    margin: 0 30rpx 0 24rpx;
}

.manjian-list__cont {
    flex: 1;
    display: flex;
    flex-flow: wrap column;
    height: 204rpx;
    justify-content: space-between;
    padding: 20rpx 24rpx 24rpx 0;
    border-bottom: 1px solid #f4f4f4;
    font-size: 28rpx;
    box-sizing: border-box;
}

.manjian-list navigator:last-child .manjian-list__cont {
    border-bottom: 0;
}

.manjian-list__ctrl {
    display: flex;
    align-items: flex-end;
}

.manjian-list__price {
    flex: 1;
    font-size: 40rpx;
    color: #F32828;
}

.manjian-list__price text {
    font-size: 24rpx;
}

.manjian-list__btn {
    width: 176rpx;
    height: 56rpx;
    line-height: 56rpx;
    text-align: center;
    background: #f22222;
    color: #fff;
    border-radius: 8rpx;
}

.manjian-list__more {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 24rpx;
    color: #060606;
    background: #fff;
}