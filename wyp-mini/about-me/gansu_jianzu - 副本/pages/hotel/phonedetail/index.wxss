.hotel-phoneDetail {
    padding: 24rpx;
    background: #fff;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    color: #000;
}

.hotel-phoneDetail__item {
    display: flex;
    margin-bottom: 22rpx;
}

.hotel-phoneDetail__img {
    width: 48rpx;
    height: 48rpx;
    margin-right: 20rpx;
}

.hotel-phoneDetail__address-img {
    width: 26rpx;
    height: 26rpx;
    margin-right: 20rpx;
    margin-top: 6rpx;
}

.hotel-phoneDetal__btn {
    width: 136rpx;
    height: 48rpx;
    line-height: 48rpx;
    border: 1px solid #f22222;
    border-radius: 8rpx;
    color: #f22222;
    text-align: center;
    margin: 0 auto;
    font-size: 28rpx;
}

.hotel-phoneDetail--fontstyle {
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}

.hotel-serviceDetail {
    background: #fff;
    margin-bottom: 20rpx;
}

.hotel-serviceDetail__title {
    display: flex;
    align-items: center;
    margin: 44rpx 24rpx;
    font-size: 28rpx;
    color: #000;
}

.hotel-serviceDetail__img {
    width: 32rpx;
    height: 32rpx;
    margin-right: 16rpx;
}

.hotel-serviceDetail__list {
    display: flex;
    flex-wrap: wrap;
    padding: 0 24rpx 0 76rpx;
}

.hotel-serviceDetail__item {
    width: 214rpx;
    margin-bottom: 40rpx;
    font-size: 24rpx;
    color: #727171;
}

.hotel-info {
    background: #fff;
    margin-bottom: 20rpx;
}

.hotel-info__title {
    height: 88rpx;
    border-bottom: 1px solid #f5f4f4;
    padding: 0 24rpx;
    line-height: 88rpx;
    font-size: 28rpx;
    color: #000;
}

.hotel-info__form {
    margin-top: 30rpx;
    display: flex;
    flex-wrap: wrap;
    font-size: 24rpx;
    color: #1A1616;
    padding: 0 24rpx;
}

.hotel-info__form-item {
    width: 340rpx;
    display: flex;
    margin-bottom: 32rpx;
}

.hotel-info__label {
    color: #727171;
    margin-right: 10rpx;
}

.hotel-indo__cont {
}

.hotel-info__detail {
    padding: 0 24rpx;
    padding-bottom: 26rpx;
    font-size: 24rpx;
    color: #1A1616;
}

.view-more {
    display: flex;
    height: 84rpx;
    line-height: 84rpx;
    background: #fff;
    text-align: center;
    font-size: 24rpx;
    color: #da1917;
    justify-content: center;
    align-items: center;
}

.view-more--img {
    width: 23rpx;
    height: 12rpx;
    margin-left: 10rpx;
}