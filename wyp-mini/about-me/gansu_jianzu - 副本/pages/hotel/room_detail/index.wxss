.swiper-container {
    position: relative;
    width: 100%;
    height: 382rpx;
}

.swiper {
    width: 100%;
    height: 382rpx;
}

.slide-image {
    width: 100%;
    height: 382rpx;
}

.swiper-position {
    position: absolute;
    right: 30rpx;
    bottom: 40rpx;
    font-size: 24rpx;
    color: #fff;
    letter-spacing: 0;
    line-height: 30rpx;
}

.describe-container {
    display: block;
    background: #fff;
    padding: 4%;
}

.item {
    font-size: 24rpx;
    line-height: 30rpx;
    display: flex;
}

.side {
    width: 48%;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
}

.main {
    width: 45%;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
}

.describe-key {
    font-size: 24rpx;
    color: #727171;
}

.describe-value {
    font-size: 24rpx;
    color: #000;
    margin-left: 20rpx;
}