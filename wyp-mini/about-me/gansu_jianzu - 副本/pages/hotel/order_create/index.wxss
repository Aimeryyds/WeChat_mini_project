.form {
    height: 100%;
    width: 100%;
}

.hotel-order-create_top {
    background: #fff;
    border-radius: 4px;
    margin: 26rpx;
}

.hotel-line {
    border-bottom: 1px solid #eee;
    padding-bottom: 26rpx;
}

.hotel-name {
    font-size: 30rpx;
    color: #181818;
    letter-spacing: 0;
    padding-left: 26rpx;
    padding-top: 26rpx;
}

.hotel-choose-time {
    padding: 26rpx;
    position: relative;
}

.hotel-time-num {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
    font-size: 22rpx;
    color: #1a1616;
}

.hotel-address {
    display: flex;
    background: #fe7575;
    align-items: center;
}

.form-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-bottom: 1px solid #eee;
    padding: 26rpx;
}

.form-item-key {
    font-size: 28rpx;
    color: #181818;
    letter-spacing: 0;
    line-height: 88rpx;
}

.form-people {
    position: relative;
}

.form-people-key {
    padding: 26rpx;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}

.bottom {
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    line-height: 100rpx;
    background: #fff;
}

.price {
    flex: 2;
    font-size: 36rpx;
    font-weight: bold;
    color: #f22222;
    margin-left: 100rpx;
}

.submit {
    flex: 1;
    background: #f00;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    line-height: 3.55555556;
    border-radius: 0;
}