.order-state-row-box {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 20rpx;
    font-size: 28rpx;
    position: relative;
}

.order-state-direction-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    flex: 1;
}

.order-state-direction-row image {
    width: 48rpx;
    height: 48rpx;
    border-radius: 24rpx;
    margin-right: 9px;
}

.order-state-row-box .order-name_text {
    flex: 1;
    font-size: 28rpx;
    color: #000;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.order-state-row-box .order-state_text {
    font-size: 24rpx;
    color: #000;
    width: 80rpx;
}

.order-detail {
    padding: 15rpx 92rpx 30rpx 92rpx;
    font-size: 12px;
    color: #A8A8A8;
    letter-spacing: 0;
    line-height: 12px;
    border-bottom: 1rpx solid #F4F4F4;
}

.order-detail .order-address {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: 24rpx;
}

.order-detail .order-date text {
    margin-right: 20rpx;
}

.orders-btns {
    height: 45px;
    padding: 0 20rpx 0 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.order-actions-btn {
    display: inline-block;
    height: 60rpx;
    font-size: 24rpx;
    margin-right: 10rpx;
    margin-bottom: 0;
    background-color: #fff;
    padding-left: 30rpx;
    padding-right: 30rpx;
    border-radius: 4px;
    border: 1rpx solid #F22222;
    color: #F22222;
    vertical-align: middle;
}

.room-price {
    color: #F22222;
    font-size: 40rpx;
}

.action-box {
    display: flex;
}