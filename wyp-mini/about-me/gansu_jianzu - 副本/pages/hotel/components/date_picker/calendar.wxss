.calendar {
    background-color: #fff;
    margin-bottom: 24rpx;
}

.calendar-title {
    padding: 16rpx 0;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
}

.calendar-content {
    display: flex;
    flex-wrap: wrap;
}

.date-cell {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: space-between;
    border-top: 1rpx solid #e5e5e5;
    width: 14.285%;
    text-align: center;
    font-size: 32rpx;
    padding: 8rpx 0;
    color: #ccc;
}

.date-cell .date {
}

.date-cell .tip {
    height: 28rpx;
    line-height: 28rpx;
    font-size: 20rpx;
    margin-top: 4rpx;
}

.valid {
    color: #000;
}

.selected {
    background-color: #FF7272;
    color: #fff;
}