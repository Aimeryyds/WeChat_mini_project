.segement {
    display: flex;
    width: 100%;
    border-bottom: solid #f5f4f4 2rpx;
    background: #fff;
}

.label,.label-with-line {
    margin-bottom: 28rpx;
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
    color: #726b6b;
}

.time {
    display: flex;
    justify-content: center;
    align-items: center;
}

.label-with-line {
    border-right: solid #c8c8c8 2rpx;
}

.triangle-up,.triangle-down {
    width: 0;
    height: 0;
    border-left: 6rpx solid transparent;
    border-right: 6rpx solid transparent;
    margin-left: 20rpx;
}

.triangle-up {
    border-bottom: 8rpx solid #999;
}

.triangle-down {
    border-top: 8rpx solid #999;
}

.triangle-up--active {
    border-bottom: 8rpx solid red;
}

.triangle-down--active {
    border-top: 8rpx solid red;
}

.textColor {
    color: #1a1616;
}