@import "../../templates/orders/tabbar.wxss";

.orders-container {
    overflow: hidden;
}

.no-order {
    width: 100%;
    position: absolute;
    bottom: 0;
    top: 100rpx;
    left: 0;
    right: 0;
    text-align: center;
    padding-top: 203rpx;
    background-color: #f2f2f2;
}

.no-order-img {
    width: 81rpx;
    height: 96rpx;
    margin-bottom: 31rpx;
}

.no-order .text {
    font-size: 28rpx;
    color: #999;
    text-align: center;
}

.order-list {
    width: 100%;
}

.order-list .a-order {
    width: 100%;
    background-color: #fff;
    margin-top: 10rpx;
}

.order-list .a-order .orders-goods {
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.order-list .a-order .price-box {
    position: relative;
    padding: 12px 15px;
    display: flex;
    align-items: center;
    line-height: 1.4;
    flex-direction: row-reverse;
    font-size: 28rpx;
    border-top: 1rpx solid #e5e5e5;
}

.reject-reason {
    display: flex;
    flex-direction: row;
    margin: 10rpx;
}

.reject-reason image {
    width: 120rpx;
    height: 120rpx;
    margin-right: 16rpx;
}

.reject-reason-content {
    flex: 1;
}

.reject-reason-price {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}