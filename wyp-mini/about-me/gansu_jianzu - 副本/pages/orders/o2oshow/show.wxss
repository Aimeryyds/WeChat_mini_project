@import "../../templates/orders/orderitemlistdetail.wxss";

@import "../../templates/orders/orderaddress.wxss";

@import "../../templates/orders/ordero2obtns.wxss";

.container_bottom {
    margin-bottom: 40px;
}

.no_container_bottom {
    margin-bottom: 0;
}

.order-detail-state {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.order-detail-state-icon {
    width: 40rpx;
    height: 40rpx;
    margin-top: -32rpx;
}

.order-detail-state-text {
    flex-grow: 20;
    margin-left: 20rpx;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
}

.order-detail-state-time {
    flex-grow: 1;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
}

.state-text1 {
    font-size: 29rpx;
    color: #333;
}

.state-text2 {
    font-size: 22rpx;
    margin-top: 20rpx;
    color: #b2b2b2;
}

.state-time {
    font-size: 18rpx;
    color: #333;
}

.state-more {
    font-size: 20rpx;
    margin-top: 20rpx;
    color: #479fec;
    display: flex;
    justify-content: flex-end;
}

.order-detail-store {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 20rpx;
    justify-content: space-between;
    border-bottom: 1rpx solid #f1f1f1;
    background: #fff;
}

.order-detail-store-arrow {
    width: 16rpx;
    height: 24rpx;
}

.view-direction-row {
    display: flex;
    flex-direction: row;
}

.state-label {
    font-size: 24rpx;
    color: #999;
}

.state-label2 {
    font-size: 26rpx;
    color: #999;
    width: 152rpx;
}

.state-label-width {
}

.state-value {
    font-size: 26rpx;
    color: #333;
    flex: 1;
}

.block-title {
    font-size: 29rpx;
    color: #333;
    padding: 20rpx;
    background: #f1f1f1;
}

.order-no_text {
    font-size: 24rpx;
    margin-top: 20rpx;
    color: #535353;
}

.order-no_state {
    position: relative;
    align-items: center;
    padding: 20rpx;
    display: flex;
    flex-direction: row;
    border-bottom: 1rpx solid #f1f1f1;
    background: #fff;
    width: 100%;
}

.goods-info {
    width: 100%;
    background-color: #fff;
    margin-bottom: 120rpx;
    padding-bottom: 24rpx;
}

.goods-info .row-box {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 24rpx 30rpx 12rpx 30rpx;
    font-size: 28rpx;
    color: #000;
}

.goods-info .row-box .right-text {
    text-align: right;
}

.o2o-extra {
    height: 40px;
    background: #fff;
    border-top: 1px solid #f2f2f2;
    position: fixed;
    bottom: 0px;
    left: 0;
    right: 0px;
    width: 100%;
}

.view-direction-between {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    background: #fff;
}

.view-direction-row-reverse {
    display: flex;
    padding: 20rpx;
    flex-direction: row-reverse;
    background: #fff;
}

.order-direction-row {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.vipcard-image {
    width: 48rpx;
    height: 38rpx;
    margin-right: 10rpx;
}

.coupon-image {
    width: 48rpx;
    height: 48rpx;
    margin-right: 10rpx;
}

.reject-reason {
    display: flex;
    flex-direction: row;
    margin: 10rpx;
}

.reject-reason image {
    width: 120rpx;
    height: 120rpx;
    margin-right: 16rpx;
}

.reject-reason-content {
    flex: 1;
}

.reject-reason-price {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}