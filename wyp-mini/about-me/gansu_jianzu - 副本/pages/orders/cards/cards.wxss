@import "../../templates/card/card.wxss";

.cards_no-card {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.cards_card-list {
    padding: 0 40rpx 40rpx 40rpx;
}

.card-desc {
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #000000;
    text-align: center;
}

.cards-list_card-item {
    margin-top: 40rpx;
    position: relative;
}

.card-selected-mark {
    border-radius: 16rpx;
    position: absolute;
    width: 100%;
    height: 240rpx;
    z-index: 99;
    background-color: rgba(0,0,0,0.3);
}