.fx_store-item--lt {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    font-size: 24rpx;
    color: #aaa;
}

.fx_store-item--lt-name {
    font-size: 28rpx;
    color: #000;
}

.fx_store-item--lt-time,.fx_store-item--lt-address {
    margin-top: 8rpx;
}

.app-item::after {
    left: 0;
    border-top: 12rpx solid #f1f1f1;
}

.app-name {
    font-size: 32rpx;
}

.qr-dailog {
    background: #fff;
}

.qr-dialog__title {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: 108rpx;
    border-bottom: 1px solid #f4f4f4;
    font-size: 28rpx;
    line-height: 40rpx;
    text-align: center;
    box-sizing: border-box;
    padding: 0 24rpx;
}

.qr-dialog__avatar {
    width: 60rpx;
    height: 60rpx;
    padding: 12rpx;
    border: 1rpx solid #eee;
    border-radius: 50%;
}

.qr-dialog__name {
    margin-left: 16rpx;
}

.qr-dialog__content {
    padding: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.qr-dialog__content-name,.qr-dialog__content-tip {
    font-size: 24rpx;
    margin-top: 24rpx;
}

.qr-dialog__content-qr {
    margin-top: 24rpx;
    width: 400rpx;
    height: 400rpx;
}

.qr-dialog__content-tip {
    color: #aaa;
}

.qr-dialog__footer {
    height: 76rpx;
    line-height: 76rpx;
    color: rgba(0,0,0,0.43);
    font-size: 24rpx;
    text-align: center;
}