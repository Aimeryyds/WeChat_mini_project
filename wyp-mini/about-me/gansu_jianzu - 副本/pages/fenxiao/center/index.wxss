.center {
    height: 300rpx;
    position: relative;
    background-image: linear-gradient(to bottom,#fda41f,#fc6747);
    color: #fff;
    font-size: 28rpx;
}

.center__mod {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 50rpx 20rpx;
}

.center__info {
    display: flex;
    align-items: center;
    flex: 1;
}

.center__info__img {
    border: 8rpx solid rgba(255,255,255,0.2);
    border-radius: 50%;
    margin-right: 22rpx;
}

.center__info__img image {
    border-radius: 50%;
    width: 124rpx;
    height: 124rpx;
    vertical-align: top;
}

.center__info__name {
    font-size: 32rpx;
    line-height: 44rpx;
    margin-bottom: 10rpx;
    overflow: hidden;
}

.center__profit {
    font-size: 48rpx;
    line-height: 50rpx;
    overflow: hidden;
    margin-bottom: 14rpx;
}

.center__withdraw {
    position: absolute;
    height: 64rpx;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(255,255,255,0.3);
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    font-size: 24rpx;
}

.center__withdraw-money {
    flex: 1;
}

.center__withdraw-link {
    display: flex;
    align-items: center;
}

.center__withdraw-link>image {
    width: 14rpx;
    height: 24rpx;
    margin-left: 14rpx;
}

.center-form {
    background: #fff;
    margin-top: 20rpx;
    font-size: 28rpx;
}

.center-form__item {
    display: flex;
    align-items: center;
    height: 88rpx;
    padding: 0 20rpx;
    border-bottom: 1px solid #f4f4f4;
}

.center-form__label {
    flex: 1;
    color: rgba(0,0,0,0.65);
}

.form__item-link {
    display: flex;
    align-items: center;
}

.form__item-text {
    margin-right: 25rpx;
    color: rgba(0,0,0,0.43);
}

.form__item-linkImg {
    width: 15rpx;
    height: 28rpx;
}

.card-title-cell {
    border-left: 8rpx solid #f44;
    padding-left: 14rpx;
}

.card-title-cell:after {
    left: 0px;
}

.zhaomu-rigster-footer {
    height: 100rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: center;
    background-color: white;
    border-top: solid 1rpx #d9d9d9;
    overflow: hidden;
}

.zhaomu-rigster-button {
    width: 100%;
    background-color: #ca2626;
    color: white;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}