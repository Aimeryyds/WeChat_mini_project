.withdraw-history {
    padding: 24rpx 26rpx;
    border-top: 1px solid #f4f4f4;
    background: #fff;
    font-size: 28rpx;
}

.withdraw-history__info {
    display: flex;
}

.withdraw-history__bank {
    flex: 1;
}

.withdraw-history__date {
    margin-top: 8rpx;
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}

.withdraw-history--state {
    display: flex;
    align-items: center;
}

.withdraw-history__msg {
    margin-right: 25rpx;
}

.withdraw-history__money {
    font-size: 34rpx;
}

.withdraw-history__money text {
    font-size: 28rpx;
}

.withdraw-history__linkImg {
    width: 15rpx;
    height: 28rpx;
}

.withdraw-history--show {
    content: '';
    width: 0;
    height: 0;
    border-width: 10rpx;
    border-style: solid;
    margin-left: 22rpx;
    border-color: transparent transparent #333 transparent;
}

.withdraw-history--hide {
    content: '';
    width: 0;
    height: 0;
    border-width: 10rpx;
    border-style: solid;
    margin-left: 22rpx;
    border-color: #333 transparent transparent transparent;
}

.withdraw-history__item {
    display: flex;
    align-items: center;
    font-size: 22rpx;
    color: rgba(0,0,0,0.65);
    margin-bottom: 16rpx;
}

.noData {
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    justify-content: center;
    height: 1204rpx;
    font-size: 30rpx;
}