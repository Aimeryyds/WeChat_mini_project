.withdraw-detail__info {
    font-size: 24rpx;
    padding: 26rpx 30rpx 0;
    background-color: #fff;
}

.withdraw-detail__item {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    font-size: 30rpx;
    margin-bottom: 16rpx;
}

.withdraw-detail__item:nth-child(2) {
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid #ccc;
    margin-bottom: 30rpx;
}

.withdraw-detail__item:last-child {
    margin-bottom: 46rpx;
}

.withdraw-detail__item text {
    margin-right: 12rpx;
}

.withdraw-detail__order {
    padding: 0 30rpx;
    background-color: #fff;
}

.withdraw-detail__orderinfo {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 30rpx;
    margin-bottom: 16rpx;
    color: rgba(0,0,0,0.43);
}