.bank-account-form {
    margin: 22rpx 0 112rpx;
    font-size: 28rpx;
}

.ba-form__item {
    display: flex;
    align-items: center;
    height: 88rpx;
    background: #fff;
    padding: 0 24rpx;
    border-bottom: 1px solid #f4f4f4;
}

.ba-form__label {
    margin-right: 40rpx;
}

.ba-form__input {
    width: 85%;
    color: #919191;
}

.bank-account__btn {
    margin: 0 40rpx;
    height: 88rpx;
    line-height: 88rpx;
    background: #f22222;
    font-size: 28rpx;
    border: 0;
    color: #fff;
}