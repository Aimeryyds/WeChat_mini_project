.withdraw__item {
    display: flex;
    align-items: center;
    height: 132rpx;
    margin: 20rpx 0;
    font-size: 28rpx;
    background: #fff;
    padding: 0 24rpx;
}

.withdraw__bank {
    display: flex;
    flex: 1;
    align-items: center;
}

.withdraw__item__img {
    width: 88rpx;
    height: 88rpx;
    margin-right: 24rpx;
}

.withdraw__item__cont {
    font-size: 20rpx;
    color: #919191;
}

.form__item-link {
    display: flex;
    align-items: center;
    height: 100%;
}

.form__item-text {
    margin-right: 25rpx;
    color: #919191;
}

.form__item-linkImg {
    width: 14rpx;
    height: 24rpx;
}

.withdrwa-money__item {
    display: flex;
    align-items: center;
    height: 88rpx;
    margin-bottom: 24rpx;
    padding: 0 24rpx;
    background: #fff;
    font-size: 28rpx;
}

.withdraw-money--modf {
    flex: 1;
    color: #919191;
    margin-left: 40rpx;
}

.withdraw-hint {
    margin-left: 24rpx;
    color: #919191;
    font-size: 24rpx;
}

.withdraw__btn {
    margin: 0 40rpx;
    margin-top: 80rpx;
    height: 88rpx;
    line-height: 88rpx;
    background: #f22222;
    font-size: 28rpx;
    border: 0;
    color: #fff;
}

.withdraw__btn--gray {
    background: #dadada;
}

.withdraw__btn--gray:after {
    border: 0;
}

.order-item {
    display: flex;
    padding: 0 20rpx;
    align-items: center;
    background-color: #fff;
}

.order-item__radio {
    width: 38rpx;
    height: 38rpx;
    margin-right: 20rpx;
    border: 1px solid #b0b0b0;
    border-radius: 50%;
}

.order-item__radio image {
    width: 40rpx;
    height: 40rpx;
}

.order-item__detail {
    flex: 1;
    display: flex;
    font-size: 24rpx;
    justify-content: space-between;
    border-bottom: 1rpx solid #ccc;
    padding: 20rpx 0;
}

.order-item__detail-title {
    flex: 1;
    display: flex;
    flex-flow: wrap column;
    justify-content: space-between;
    font-size: 24rpx;
    color: rgba(0,0,0,0.65);
    box-sizing: border-box;
}

.order-item__detail-money {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-align: right;
}

.total-wrap {
    font-size: 32rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    position: fixed;
    width: 100%;
    background-color: #fff;
    border-top: 1px solid #e5e5e5;
    bottom: 0;
    height: 112rpx;
}

.total-btn {
    background: #f22222;
    font-size: 32rpx;
    color: #fff;
    width: 114px;
    height: 100%;
    margin-right: 0;
    border-radius: 0;
    line-height: 3.2;
}