.tab {
    display: flex;
    background-color: #f8f8f8;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
}

.tab-label {
    height: 80rpx;
    line-height: 80rpx;
    flex: 1;
    border-bottom: 1rpx solid #e5e5e5;
    display: flex;
    align-items: center;
    justify-content: center;
}

.tab-label--active {
    border-bottom: 1px solid red;
}