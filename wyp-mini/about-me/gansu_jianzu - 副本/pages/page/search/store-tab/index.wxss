@import "../../../../app.wxss";

.filter {
    background-color: #fff;
    max-height: 600rpx;
    width: 750rpx;
    position: relative;
}

.filter-row {
    margin-top: 12rpx;
}

.filter-row--title {
    color: #666;
    padding: 0 0 12rpx 24rpx;
    font-size: 24rpx;
}

.filter-row--contents {
    font-size: 28rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
}

.filter-row--contents-item {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    text-align: center;
    background-color: #eee;
    border: 1rpx solid #eee;
    border-radius: 6rpx;
    height: 64rpx;
    width: 214rpx;
    margin-bottom: 24rpx;
    border-sizing: border-box;
}

.checked {
    background-color: #fff;
    color: red;
    border: 1rpx solid red;
}

.buttons {
    position: absolute;
    left: 0;
    width: 100%;
    display: flex;
    align-items: center;
}

.button-submit,.button-reset {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24rpx;
}

.button-submit {
    border-top: 1rpx solid #D61A31;
    background-color: #D61A31;
    color: #fff;
}

.button-reset {
    border-top: 1rpx solid #d9d9d9;
    color: #000;
    background-color: #fff;
}

.store-item {
    display: flex;
    flex-direction: column;
    margin: 0 22rpx;
    padding: 4rpx 0 4rpx;
    border-bottom: 1rpx solid #e5e5e5;
}

.store-info {
    display: flex;
}

.store-info-img {
    width: 92rpx;
    height: 92rpx;
    margin: 20rpx;
    margin-left: 10rpx;
}

.store-info__detail {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.store-info__detail-name {
    font-size: 30rpx;
    margin-top: 20rpx;
}

.store-info__detail-desc {
    font-size: 22rpx;
    color: #999;
    margin-bottom: 4rpx;
}

.store-goodsList {
    display: flex;
}

.store-goodsList__item {
    width: 228rpx;
    height: 208rpx;
}

.store-more {
    display: flex;
    height: 84rpx;
    line-height: 84rpx;
    background: #fff;
    text-align: center;
    font-size: 24rpx;
    color: #da1917;
    justify-content: center;
    align-items: center;
}