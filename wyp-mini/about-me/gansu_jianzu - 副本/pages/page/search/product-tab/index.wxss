@import "../../../../app.wxss";

.filter {
    background-color: #fff;
    max-height: 600rpx;
    width: 750rpx;
    position: relative;
}

.filter-row {
    margin-top: 12rpx;
}

.filter-row--title {
    color: #666;
    padding: 0 0 12rpx 24rpx;
    font-size: 24rpx;
}

.filter-row--contents {
    font-size: 28rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
}

.filter-row--contents-item {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    text-align: center;
    background-color: #eee;
    border: 1rpx solid #eee;
    border-radius: 6rpx;
    height: 64rpx;
    width: 214rpx;
    margin-bottom: 24rpx;
    border-sizing: border-box;
}

.checked {
    background-color: #fff;
    color: red;
    border: 1rpx solid red;
}

.buttons {
    position: absolute;
    left: 0;
    width: 100%;
    display: flex;
    align-items: center;
}

.button-submit,.button-reset {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24rpx;
}

.button-submit {
    border-top: 1rpx solid #D61A31;
    background-color: #D61A31;
    color: #fff;
}

.button-reset {
    border-top: 1rpx solid #d9d9d9;
    color: #000;
    background-color: #fff;
}

.products-wrap {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-between;
}

.products {
    padding: 16rpx 8rpx 0;
    height: auto;
    background: #fff;
    display: flex;
    flex-flow: wrap column;
    justify-content: space-between;
    box-sizing: border-box;
    margin-bottom: 10rpx;
    width: 375rpx;
    box-sizing: border-box;
}

.product-name {
    height: 80rpx;
    font-size: 28rpx;
}

.product-storename {
    width: 340rpx;
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}

.products-cont {
    display: flex;
    align-items: flex-end;
    margin-top: 10rpx;
}

.products-price {
    flex: 2;
    font-size: 40rpx;
    line-height: 32rpx;
    color: #F32828;
}

.products-stock {
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}