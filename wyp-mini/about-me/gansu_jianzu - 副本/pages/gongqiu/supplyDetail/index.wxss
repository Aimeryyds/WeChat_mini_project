.supplyDetail__mod {
    padding: 28rpx 0rpx 40rpx 30rpx;
    background: #fff;
    display: flex;
    align-items: center;
}

.supplyDetail__top-left {
    flex: 1;
}

.supplyDetail__title {
    font-size: 32rpx;
    color: #000;
    text-align: justify;
}

.supplyDetail--tag {
    float: left;
    margin-top: 8rpx;
    width: 32rpx;
    height: 35rpx;
    margin-right: 18rpx;
}

.supplyDetail__time {
    line-height: 34rpx;
    margin-top: 24rpx;
    color: rgba(0,0,0,0.43);
    font-size: 24rpx;
}

.supplyDetail__item-wrap {
    font-size: 28rpx;
    color: #000;
    background-color: #FFFFFF;
}

.supplyDetail__item {
    display: flex;
    height: 100rpx;
    align-items: center;
    border-top: 1px solid #f4f4f4;
    border-bottom: 1px solid #f4f4f4;
    margin-bottom: -1px;
    padding: 0 0 0 24rpx;
}

.supplyDetail__item--padding {
    padding: 20rpx 0 20rpx 24rpx;
}

.supplyDetail__item-title {
    width: 172rpx;
}

.supplyDetail__item-text {
    flex: 1;
    padding-right: 30rpx;
    text-align: justify;
    color: rgba(0,0,0,0.43);
}

.supplyDetail__item-imgWrap {
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 36rpx;
    background-color: #FFFFFF;
}

.supplyDetail__item-imgWrap::after {
    border: 0px solid rgba(0,0,0,0);
}

.supplyDetail__item-img {
    width: 32rpx;
    height: 40rpx;
}

.supplyDetail__info {
    margin-top: 14rpx;
    background: #fff;
}

.supplyDetail__info-title {
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #f4f4f4;
    color: #000;
    font-size: 32rpx;
    padding-left: 24rpx;
}

.supplyDetail__info-content {
    padding: 40rpx 24rpx;
}

.supplyDetail__phoneBtn {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 34rpx;
    color: #f22222;
    border-top: 1px solid #d2d2d2;
    background: #fff;
}

.supplyDetail__phoneBtn-img {
    width: 30rpx;
    height: 30rpx;
    margin-right: 16rpx;
}

.supplyDetail-more-pic-layout {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.supplyDetail-more-pic {
    width: 230rpx;
    height: 230rpx;
    margin: 10px;
}