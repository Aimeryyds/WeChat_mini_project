.gongqiu__tab {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 100rpx;
    padding: 0 100rpx;
    line-height: 100rpx;
    background: #fff;
    font-size: 28rpx;
    color: #000;
    z-index: 999;
}

.gongqiu__tab-item {
    border-bottom: 6rpx solid #fff;
    padding: 0 8rpx;
}

.gongqiu__tab--active {
    border-bottom: 6rpx solid #f22222;
    color: #f22222;
}

.gongqiu__list-wrap {
    margin-top: 120rpx;
}

.gongqiu__list {
    margin-bottom: 20rpx;
    background: #fff;
}

.gongqiu__list:last-child {
    margin-bottom: 0;
}

.gongqiu__list-top {
    display: flex;
    align-items: center;
    padding: 24rpx;
}

.gongqiu__list-img {
    width: 156rpx;
    height: 156rpx;
    margin-right: 16rpx;
}

.gongqiu__list-content {
    flex: 1;
    font-size: 28rpx;
    color: #000;
}

.gongqiu__list-text {
    position: relative;
}

.gongqiu__list-text--l2 {
    text-indent: 42rpx;
    max-height: 88rpx;
    line-height: 44rpx;
}

.gongqiu__list--tag {
    position: absolute;
    top: 8rpx;
    left: 0;
    width: 32rpx;
    height: 35rpx;
}

.gongqiu__list-b {
    display: flex;
    margin-top: 20rpx;
}

.gongqiu__list-time {
    flex: 1;
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}

.gongqiu__list-remvoe {
    font-size: 24rpx;
    color: #f43636;
}

.gongqiu__ctrl {
    display: flex;
    justify-content: space-around;
    height: 94rpx;
    padding: 0 20rpx;
    border-top: 1px solid #f4f4f4;
    font-size: 28rpx;
    color: rgba(0,0,0,0.75);
}

.gongqiu__ctrl-item {
    display: flex;
    align-items: center;
}

.gongqiu__ctrl-item2 {
    display: flex;
    align-items: center;
    color: rgba(0,0,0,0.43);
}

.gongqiu__ctrl-img {
    width: 33rpx;
    height: 33rpx;
    margin-right: 18rpx;
}

.gongqiu__addBtn {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 34rpx;
    color: #f22222;
    border-top: 1px solid #d2d2d2;
    text-align: center;
    background: #fff;
}

.noData {
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    justify-content: center;
    height: 880rpx;
    font-size: 30rpx;
}