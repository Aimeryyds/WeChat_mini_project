.brand-detail {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 5rpx;
    padding-top: 30rpx;
    background-color: #fff;
}

.brand-img {
}

.brand-img image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.brand-name {
    font-size: 32rpx;
    margin: 10rpx 0;
}

.store-list {
    display: flex;
    padding: 24rpx 0rpx;
    border-bottom: 1rpx #e5e5e5 solid;
    background-color: #fff;
}

.store-detail {
    flex: 1;
    text-align: justify;
    padding: 0 30rpx;
}

.store-name {
    font-size: 32rpx;
    display: flex;
    align-items: center;
}

.store-name text {
    color: #108ee9;
    border: 1rpx solid #108ee9;
    padding: 4rpx 8rpx;
    margin: 5rpx;
    font-size: 18rpx;
    border-radius: 8rpx;
    line-height: 100%;
}

.store-time {
    font-size: 22rpx;
    color: #999999;
    margin: 15rpx 0;
    display: flex;
    line-height: 1.3;
}

.store-address {
    font-size: 22rpx;
    color: #999999;
    line-height: 1.5;
}

.store-coupon {
    display: flex;
    align-items: center;
}

.store-coupon-image {
    background: #FF3131;
    width: 32rpx;
    height: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 12rpx;
}

.store-coupon text {
    font-size: 22rpx;
    color: #999999;
}

.store-coupon image {
    width: 26rpx;
    height: 20rpx;
}

.store-distance {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 8rpx;
    justify-content: center;
    border-left: 1rpx #e5e5e5 solid;
    width: 120rpx;
}

.store-distance image {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 10rpx;
}

.store-distance text {
    font-size: 22rpx;
    color: #999999;
}

.store-address image {
    width: 26rpx;
    height: 26rpx;
    margin-bottom: -4rpx;
}

.store-time image {
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx;
}