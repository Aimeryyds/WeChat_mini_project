.footerLeft,.footerRight,.footerLeft-item,.footerRight-item,.footerRight-item--tuan {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
}

.footerLeft {
    width: 384rpx;
    font-size: 24rpx;
}

.footerRight {
    flex: 1;
    font-size: 32rpx;
    color: #616161;
}

.footerLeft-item {
    color: #616161;
    line-height: 1.4;
    background-color: #fff;
    font-size: 24rpx;
    width: 96rpx;
    flex-direction: column;
}

.footerLeft-item image {
    width: 34rpx;
    height: 34rpx;
    margin-bottom: 4rpx;
}

.footerLeft-item--contact,.footerRight-item--share {
    border-radius: 0;
    border: 0;
    padding: 0;
}

.footerRight-item {
    font-size: 32rpx;
    color: #fff;
    flex: 1;
    background-color: #F22222;
}

.footerRight-item--black {
    background-color: #FF9C40;
}

.footerRight-item--disable {
    background-color: #ccc;
}

.footerRight-item--tuan {
    flex-direction: column;
}

.footerLeft button:after,.footerRight button:after {
    border: 0px;
}