.mybanlance-info {
    display: flex;
    height: 220rpx;
    margin-bottom: 20rpx;
    background: #fff;
    padding: 40rpx 24rpx 0 30rpx;
    box-sizing: border-box;
}

.mybanlance-info__left {
    flex: 1;
    font-size: 24rpx;
    color: #000;
}

.mybanlance-info__price {
    margin-top: 24rpx;
    font-size: 64rpx;
}

.mybanlance-info__btn {
    width: 112rpx;
    height: 56rpx;
    line-height: 56rpx;
    margin-top: 60rpx;
    border: 1px solid #F22222;
    color: #F22222;
    border-radius: 44rpx;
    text-align: center;
    font-size: 24rpx;
}

.mybanlance-list {
    display: flex;
    align-items: center;
    padding: 16rpx 24rpx;
    background: #fff;
    border-bottom: 1px solid #f4f4f4;
    box-sizing: border-box;
    font-size: 28rpx;
}

.mybanlance-list__left {
    flex: 1;
}

.mybanlance-list__time {
    margin-top: 10rpx;
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}

.mybanlance-list__price {
    font-size: 30rpx;
}

.gongqiu__tab {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 88rpx;
    padding: 0 66rpx;
    line-height: 84rpx;
    background: #fff;
    font-size: 28rpx;
    color: #000;
    border-bottom: 1px solid #f4f4f4;
}

.gongqiu__tab-item {
    border-bottom: 6rpx solid #fff;
    padding: 0 30rpx;
}

.gongqiu__tab--active {
    border-bottom: 4rpx solid #f22222;
    color: #f22222;
}