.couponlist-wrap {
    width: 600rpx;
    height: 750rpx;
    padding-bottom: 40rpx;
    background: #fff;
    border-radius: 16rpx;
    font-size: 28rpx;
    color: #000;
    margin: 100rpx auto 64rpx;
    box-sizing: border-box;
}

.couponlist-wrap__title {
    height: 120rpx;
    line-height: 120rpx;
    margin-bottom: 30rpx;
    border-bottom: 1px solid #f4f4f4;
    text-align: center;
    box-sizing: border-box;
}

.coupon-list {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 492rpx;
    height: 88rpx;
    margin: 0 auto;
    margin-bottom: 20rpx;
    border: 1px solid #e7e7e7;
    border-left: 8rpx solid #f22222;
    border-radius: 8rpx 0 0 8rpx;
    overflow: inherit;
}

.coupon-list::before {
    position: absolute;
    top: 30rpx;
    right: 0;
    display: inline-block;
    width: 15rpx;
    height: 30rpx;
    background: #e7e7e7;
    content: '';
    border-radius: 21rpx 0 0 21rpx;
    border-color: red;
}

.coupon-list::after {
    position: absolute;
    top: 32rpx;
    right: -1px;
    display: inline-block;
    width: 15rpx;
    height: 26rpx;
    background: #fff;
    content: '';
    border-radius: 21rpx 0 0 21rpx;
    border-color: red;
}