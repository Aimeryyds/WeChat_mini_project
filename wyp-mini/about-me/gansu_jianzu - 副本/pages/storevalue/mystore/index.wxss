@import "../templates/couponlist/index.wxss";

.mystore-account {
    display: flex;
    padding: 36rpx 24rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    background: #fff;
}

.mystore-account__name {
    color: rgba(0,0,0,0.43);
    margin-left: 24rpx;
}

.mystore-choose {
    padding: 32rpx 24rpx;
    background: #fff;
    color: #000;
    font-size: 28rpx;
}

.mystore-choose__title {
    display: flex;
    align-items: center;
    margin-bottom: 44rpx;
}

.mystore-choose__title--text {
    margin-left: 20rpx;
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}

.mystore-choose__list {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.mystore-choose__item {
    display: flex;
    flex-flow: wrap column;
    justify-content: center;
    align-items: center;
    width: 340rpx;
    height: 218rpx;
    padding: 0 20rpx;
    margin-bottom: 20rpx;
    border: 1px solid #f22222;
    border-radius: 8rpx;
    color: rgba(0,0,0,0.43);
    text-align: center;
    box-sizing: border-box;
}

.mystore-choose__item-title {
    margin-bottom: 4rpx;
    font-size: 30rpx;
    color: #000;
}

.mystore-choose__item-other {
    display: flex;
    justify-content: center;
    margin-top: 6rpx;
}

.coupon-more {
    width: 150rpx;
    height: 32rpx;
    line-height: 32rpx;
    margin-top: 10rpx;
    background: #f22222;
    color: #fff;
    font-size: 18rpx;
    text-align: center;
    border-radius: 16rpx;
}

.mystore-choose__btn {
    margin: 60rpx 52rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    background: #f22222;
}

.mystore-noData {
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    justify-content: center;
    height: 880rpx;
    font-size: 30rpx;
}