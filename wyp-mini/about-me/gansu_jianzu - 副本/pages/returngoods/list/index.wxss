@import "../../templates/orders/orderitemlistdetail.wxss";

.orders-container {
    overflow: hidden;
}

.no-order {
    width: 100%;
    position: absolute;
    bottom: 0;
    top: 100rpx;
    left: 0;
    right: 0;
    text-align: center;
    padding-top: 203rpx;
    background-color: #f2f2f2;
    border-bottom: 1rpx solid #f1f1f1;
}

.no-order-img {
    width: 81rpx;
    height: 96rpx;
    margin-bottom: 31rpx;
}

.no-order .text {
    font-size: 28rpx;
    color: #999;
    text-align: center;
}

.order-list {
    width: 100%;
}

.order-list .a-order {
    width: 100%;
    background-color: #fff;
    margin-top: 10rpx;
}

.order-list .a-order .orders-goods {
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.return-order-store {
    display: flex;
    flex-direction: row;
    font-size: 28rpx;
    color: #000;
    letter-spacing: 0;
    padding: 20rpx;
    border-bottom: 1rpx solid #f1f1f1;
}

.return-order-store-name {
    flex: 1;
    margin-left: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal;
}

.return-order-action-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    font-size: 28rpx;
    position: relative;
    background-color: #fff;
}

.return-order-type {
    font-family: PingFangSC-Regular;
    font-size: 13px;
    color: #000;
    letter-spacing: 0;
}

.return-order-state {
    display: flex;
    flex-direction: row;
    vertical-align: center;
    font-size: 26rpx;
    color: #000;
    letter-spacing: 0;
}