@import "../../templates/orders/orderitemlistdetail.wxss";

.applyDetail-operate {
    margin-bottom: 20rpx;
    padding-bottom: 24rpx;
    background: #fff;
    font-size: 24rpx;
    color: #000;
}

.applyDetail-operate__status {
    display: flex;
    align-items: center;
    height: 112rpx;
    line-height: 112rpx;
    font-size: 30rpx;
    padding-left: 24rpx;
    color: #fff;
}

.applyDetail-operate__title {
    height: 88rpx;
    line-height: 88rpx;
    margin-left: 24rpx;
    font-size: 28rpx;
    color: #000;
}

.applyDetail-form {
    color: rgba(0,0,0,0.43);
    font-size: 24rpx;
    padding: 0 24rpx;
}

.applyDetail-operate__tips {
    border-top: 1px solid #f4f4f4;
    margin-left: 24rpx;
    padding-right: 24rpx;
    color: rgba(0,0,0,0.43);
}

.applyDetail-form__tips-item {
    padding: 10rpx 0;
}

.applyDetail-form__tips-item:first-child {
    padding-top: 20rpx;
}

.applyDetail-form__item {
    display: flex;
    padding: 10rpx 0;
}

.applyDetail-form__item:last-child {
    margin-bottom: 0;
}

.applyDetail-form__item text {
    display: inline-block;
    width: 126rpx;
}

.applyDetail-form__cont {
    flex: 1;
}

.applyDetail-btnGroup {
    display: flex;
    justify-content: flex-end;
    padding-right: 24rpx;
    margin-top: 20rpx;
}

.applyDetail-form__success,.applyDetail-form__success1 {
    display: flex;
    align-items: center;
    margin-left: 24rpx;
    padding-right: 24rpx;
    font-size: 28rpx;
}

.applyDetail-form__success {
    height: 88rpx;
    line-height: 88rpx;
}

.applyDetail-form__success1 {
    padding-top: 24rpx;
}

.applyDetail-form__success text,.applyDetail-form__success1 text {
    flex: 1;
}

.applyDetail-form__success1 {
    border-top: 1px solid #f4f4f4;
}

.applyDetail-btnGroup__btn {
    height: 64rpx;
    padding: 0 20rpx;
    margin-left: 40rpx;
    line-height: 64rpx;
    background: #fff;
    border: 1px solid #dadada;
    font-size: 28rpx;
    border-radius: 8rpx;
}

.applyDetail-btnGroup__btn--style {
    border: 1px solid #F32828;
    color: #F32828;
}

.applyDetail-info {
    padding-bottom: 30rpx;
    font-size: 28rpx;
    background: #fff;
}

.applyDetail-title {
    padding-left: 24rpx;
    height: 68rpx;
    line-height: 68rpx;
}

.consult-history {
    margin-bottom: 20rpx;
}

.consult-history .zan-cell {
    padding: 24rpx 24rpx;
}

.consult-history .zan-cell--access .zan-cell__ft::after {
    width: 10px;
    height: 10px;
    border-color: #999;
}

.applyDetail__goodsList {
    margin-bottom: 20rpx;
}

.applyDetail__goodsList .order_goods-detail-box-wrap {
    border-bottom: 0;
    background: #FFFAF7;
}