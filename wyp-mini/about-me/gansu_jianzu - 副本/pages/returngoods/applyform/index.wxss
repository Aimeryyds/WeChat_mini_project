@import "../../templates/orders/orderitemlistdetail.wxss";

.apply-form__goodsList {
    background: #fff;
    margin-bottom: 20rpx;
}

.apply-form .zan-panel {
    margin-top: 0;
}

.apply-form .zan-cell::after {
    border-top: 0;
}

.apply-form .zan-cell--access .zan-cell__ft::after {
    width: 10px;
    height: 10px;
    border-color: #999;
}

.apply-form .zan-cell__bd {
    flex: inherit;
}

.apply-form .zan-cell__ft {
    flex: 1;
}

.apply-cause input {
    width: 100%;
    background: #FFFAF7;
    font-size: 24rpx;
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 32rpx;
    box-sizing: border-box;
}

.apply-form__price {
    display: flex;
    align-items: center;
    background: #fff;
    height: 88rpx;
    margin-top: 20rpx;
    font-size: 28rpx;
    padding-left: 32rpx;
}

.apply-form__price-info {
    color: #F22222;
}

.apply-form__price-hint {
    margin: 12rpx 32rpx;
    color: rgba(0,0,0,0.43);
    font-size: 24rpx;
}

.apply-form__note {
    background: #fff;
}

.apply-form__upload {
    padding: 32rpx;
    padding-bottom: 100rpx;
    margin-top: 20rpx;
    min-height: 600rpx;
    background: #fff;
}

.apply-form__upload-title {
    margin-bottom: 24rpx;
    font-size: 28rpx;
    background: #fff;
}

.apply-form__submit {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100rpx;
    line-height: 100rpx;
    background: #F32828;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    border-radius: 0;
}

.apply-form__upload-img {
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.apply-form__upload-proofUrl {
    position: relative;
    margin-right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 200rpx;
    height: 200rpx;
    border: 1px solid #eee;
}

.apply-form__upload-handleRemoveImg {
    position: absolute;
    top: 0;
    right: 0;
    width: 28rpx;
    height: 28rpx;
}

.apply-form__upload-handleChooseImg {
    margin-right: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 200rpx;
    height: 200rpx;
    border: 1px dashed #eee;
}

.apply-form__upload-handleChooseImg-style {
    font-size: 24rpx;
    color: #AFAFAF;
}