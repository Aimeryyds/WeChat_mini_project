.consult-history {
    margin-bottom: 30rpx;
}

.consult-history__list {
    padding: 24rpx 24rpx 10rpx 24rpx;
    background: #fff;
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #000;
}

.consult-history__info {
    display: flex;
    align-items: center;
    margin-bottom: 26rpx;
}

.consult-history__img {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    margin-right: 24rpx;
}

.consult-history__title {
    font-size: 28rpx;
}

.consult-history__text {
    margin-top: 6rpx;
    color: rgba(0,0,0,0.43);
}

.consult-history__note {
    margin-top: 20rpx;
    color: rgba(0,0,0,0.43);
}

.apply-price {
    color: #F32828;
}

.consult-history__note-item {
    display: flex;
    margin-bottom: 20rpx;
}

.consult-history__note-item text {
    width: 128rpx;
}

.consult-history__note-cont {
    flex: 1;
}

.consult-history__note-img image {
    flex: 1;
    width: 88rpx;
    height: 88rpx;
    border: 1px solid #ededed;
    margin-right: 24rpx;
}

.noData {
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    justify-content: center;
    height: 1018rpx;
    font-size: 30rpx;
}