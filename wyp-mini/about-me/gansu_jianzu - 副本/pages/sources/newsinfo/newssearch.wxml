<view class="search-wrap ">
    <view class="search-cont" style="margin-right: 0rpx;">
        <image src="http://imgcdnali.wfenxiao.com.cn/xcx/c/icons/ic_search.png" style="width: 32rpx; height: 32rpx;"></image>
        <input bindconfirm="searchvalue" bindinput="changevalue" class="search-input" confirmType="搜索" focus="{{true}}" placeholder="搜索" style="width:100%;" value="{{inputValue||''}}"></input>
    </view>
    <view bindtap="searchvalue" class="search-button">
        <text>搜索</text>
    </view>
</view>
