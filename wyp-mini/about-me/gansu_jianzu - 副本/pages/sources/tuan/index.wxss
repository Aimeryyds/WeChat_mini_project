.tuan-list {
    background: #fff;
    display: flex;
    align-items: center;
}

.tuan-list__img {
    width: 160rpx;
    height: 160rpx;
    margin: 0 30rpx 0 24rpx;
}

.tuan-list__cont {
    flex: 1;
    padding: 20rpx 24rpx 24rpx 0;
    border-bottom: 1px solid #f4f4f4;
}

.tuan-list__title {
    font-size: 28rpx;
    color: #000;
}

.tuan-list__storeadress {
    margin-top: 16rpx;
    margin-bottom: 12rpx;
    font-size: 28rpx;
    color: #999;
}

.tuan-list__storeadress text {
    font-size: 24rpx;
    margin-left: 10rpx;
}

.tuan-list__priceInfo {
    display: flex;
    align-items: flex-end;
}

.tuan-list__price {
    margin-right: 40rpx;
    margin-bottom: -8rpx;
    font-size: 40rpx;
    color: #f32828;
}

.tuan-list__price text {
    font-size: 24rpx;
}

.tuan-list__num {
    flex: 1;
    font-size: 24rpx;
    line-height: 24rpx;
    color: rgba(0,0,0,0.43);
}

.tuan-list__btn {
    padding: 0 24rpx;
    height: 56rpx;
    line-height: 56rpx;
    background: #f32828;
    color: #fff;
    font-size: 28rpx;
    border-radius: 8rpx;
}