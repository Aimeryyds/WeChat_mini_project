@import "../../templates/tag/tuan.wxss";

.products-fixedbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: #fff;
}

.search-wrap {
    background: #fff;
    padding: 26rpx 28rpx;
    display: flex;
    align-items: center;
}

.products-search {
    flex: 1;
    display: flex;
    align-items: center;
    height: 60rpx;
    border-radius: 30rpx;
    background: #f4f4f4;
    font-size: 24rpx;
    padding: 0 20rpx;
}

.products-search input {
    flex: 1;
}

.products-searc__feilei-image {
    width: 46rpx;
    height: 46rpx;
    margin-left: 20rpx;
}

.products-search__img {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}

.products-search__text {
    color: rgba(0,0,0,0.43);
}

.products-tab {
    display: flex;
    align-items: center;
    height: 72rpx;
    padding: 0 68rpx;
    background: #fff;
    border-top: 1px solid #f4f4f4;
    font-size: 28rpx;
    color: rgba(0,0,0,0.65);
    justify-content: space-between;
}

.products-sort-img {
    width: 14rpx;
    height: 22rpx;
    margin-left: 8rpx;
}

.products-type-img {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
}

.products-wrap {
    margin-top: 194rpx;
}

.products-list {
    display: flex;
    align-items: center;
    padding: 0 24rpx;
    background: #fff;
    font-size: 28rpx;
}

.products-list__name {
    position: relative;
}

.products-list__nameInfo {
    text-indent: 80rpx;
}

.products-list__img {
    width: 160rpx;
    height: 160rpx;
    margin-right: 26rpx;
}

.products-list__info {
    flex: 1;
    border-bottom: 1px solid #f4f4f4;
    padding: 24rpx 24rpx 24rpx 0;
    box-sizing: border-box;
}

.products-list__cont {
    display: flex;
    align-items: flex-start;
}

.products-list__price {
    white-space: nowrap;
    font-size: 40rpx;
    color: #F32828;
    margin-right: 10rpx;
}

.products-list__price text {
    font-size: 24rpx;
    margin-right: 6rpx;
}

.products-list__stock {
    margin-top: 14rpx;
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
    white-space: nowrap;
}

.products-wrap--type2 {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-between;
}

.products-list2 {
    position: relative;
    width: 370rpx;
    height: 562rpx;
    margin-bottom: 10rpx;
    background: #fff;
    padding: 16rpx 16rpx 20rpx;
    box-sizing: border-box;
}

.products-list2__img {
    width: 300rpx;
    height: 300rpx;
    vertical-align: top;
    margin-bottom: 24rpx;
}

.products-list2__name {
    height: 80rpx;
    font-size: 28rpx;
}

.tuan__tag1 {
    position: absolute;
    top: 4rpx;
    left: 0;
}

.tuan__tag2 {
    position: absolute;
    top: 24rpx;
    left: 24rpx;
}

.product-storename-1 {
    width: 340rpx;
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
    white-space: nowrap;
}

.product-storename-2 {
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
    flex-grow: 1;
    text-align: right;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 200rpx;
    margin-top: 14rpx;
}