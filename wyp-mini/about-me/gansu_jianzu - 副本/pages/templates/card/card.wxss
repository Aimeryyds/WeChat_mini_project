.cards_card-item {
    position: relative;
    border-radius: 16rpx;
}

.cards_card-item-big {
    height: 386rpx;
}

.cards_card-item-small {
    height: 240rpx;
}

.cards_card-item_header {
    margin: 20rpx 0rpx 0rpx 40rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.cards_card-item_header-logo {
    border-radius: 50%;
    width: 60rpx;
    height: 60rpx;
}

.cards_card-item_header-store {
    color: #2A2A36;
    margin-left: 20rpx;
    font-size: 28rpx;
}

.cards_card-item_name {
    position: absolute;
    margin-top: -16rpx;
    top: 50%;
    width: 100%;
    text-align: center;
    font-size: 32rpx;
    color: #2A2A36;
    font-weight: bold;
}

.cards_card-item_num {
    left: 40rpx;
    position: absolute;
    font-size: 24rpx;
    bottom: 12rpx;
    color: #000000;
}

.cards_card-item_tip {
    align-items: center;
    justify-content: center;
    display: flex;
    width: 130rpx;
    height: 48rpx;
    border-radius: 200rpx;
    background-color: rgba(0,0,0,0.3);
    font-size: 28rpx;
    color: #fff;
    position: absolute;
    bottom: 12rpx;
    right: 40rpx;
}