.order-btns-detail-box {
    width: 100%;
    background: #ffffff;
    display: flex;
    flex-direction: row;
}

.order-btns-detail-box .left-box {
    width: 110rpx;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.order-btns-detail-box .left-box .line1 {
    position: relative;
    left: 55rpx;
    height: 40rpx;
    width: 2rpx;
    border-left: 1rpx solid #eeeeee;
}

.order-btns-detail-box .left-box .icon {
    width: 20rpx;
    height: 20rpx;
    margin-left: 45rpx;
    background-color: #dcdcdc;
    border-radius: 50px;
}

.order-btns-detail-box .right-box {
    flex-grow: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.right-box-time {
    font-size: 26rpx;
    color: #333333;
    margin-left: 20rpx;
}

.order-btns-detail-box .right-box .action-detail-box {
    position: relative;
    padding: 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.order-btn--primary {
    background-color: #e31719;
    border-color: #e31719;
}

.right-box .order-actions-btn {
    margin-left: 6px;
}

.order-btn-zhifu {
    padding: 20rpx 30rpx;
    color: #fff;
    background: #e31719;
    margin-right: 20rpx;
    font-size: 28rpx;
}