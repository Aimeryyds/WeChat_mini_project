.address-box {
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 22rpx 24rpx;
}

.name-tel {
    font-size: 28rpx;
    color: #000;
    padding: 0 0 10rpx 0;
    letter-spacing: 0;
}

.addr-text {
    padding-bottom: 10rpx;
    opacity: 0.43;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #000;
    letter-spacing: 0;
}

.address-box .arrow-right {
    width: 16rpx;
    height: 24rpx;
}

.add-address .add-addressimage {
    width: 80rpx;
    height: 80rpx;
    margin-right: 15rpx;
}

.add-address-title {
    display: flex;
    justify-content: row;
    align-items: center;
}

.add-address .title {
    font-size: 30rpx;
    color: #000;
}

.title-tip {
    font-size: 26rpx;
    color: #ccc;
}

.show-address {
    width: 100%;
    background-color: #fff;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    box-sizing: border-box;
    padding: 22rpx 24rpx;
}

.show-address .icon-address {
    width: 28rpx;
    height: 40rpx;
    margin-right: 15rpx;
}

.select_address_line {
    width: 750rpx;
    height: 6rpx;
    background: url('http://img.wfxiao.com.cn/wechat/supply/2017/11/06/1ee306ecb6364bada5424decda770604.png') repeat-x;
}