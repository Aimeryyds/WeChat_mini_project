.orders-btns {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.orders-btns .orders-btns-time {
    font-size: 26rpx;
    color: #333333;
    margin-left: 20rpx;
    padding: 20rpx 0;
}

.action-box {
    position: relative;
    padding: 12px 10px;
    display: flex;
    align-items: center;
    line-height: 1.4;
    font-size: 28rpx;
    justify-content: flex-end;
}

.order-btn--primary {
    background-color: #e31719;
    border-color: #e31719;
}

.order-actions-btn {
    margin-left: 6px;
}

.evaluate-ctrl {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 24rpx;
    font-size: 28rpx;
    color: rgba(0,0,0,0.43);
}

.evaluate-ctrl__btn {
    width: 132rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    border: 1px solid #f22222;
    border-radius: 8rpx;
    margin-left: 40rpx;
    color: #f22222;
}