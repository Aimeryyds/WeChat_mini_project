.order-state-row-box {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 20rpx;
    font-size: 28rpx;
    position: relative;
    border-bottom: 1rpx solid #f1f1f1;
}

.order-state-direction-row {
    display: flex;
    flex-direction: row;
}

.order-state-row-box .order-state_text {
    font-size: 26rpx;
    color: #333333;
}

.order-state-row-box .state-will-pay {
    color: #e31719;
}

.order-state-row-box .state-paid {
    color: #108ee9;
}

.order-state-row-box .state-cancel {
    color: #bbbbbb;
}

.order-state-row-box .state-done {
    color: #333333;
}