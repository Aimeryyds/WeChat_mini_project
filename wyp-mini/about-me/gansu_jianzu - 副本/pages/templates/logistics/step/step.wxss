.state-step {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.state-step-icon {
    width: 60rpx;
    height: 60rpx;
    padding: 20rpx;
}

.state-step-right-box {
    position: relative;
    flex-grow: 10;
    margin: 20rpx;
    overflow: visible;
}

.state-step-right-box-detail-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 20rpx 30rpx 20rpx 30rpx;
    font-size: 28rpx;
    background-color: #fff;
    border: 1rpx solid #fff;
    border-radius: 10rpx;
    position: relative;
}

.state-step-right-box-detail-box_text {
    font-size: 28rpx;
    color: #333333;
}

.state-step-right-box-detail-box-time {
    font-size: 24rpx;
    color: #b2b2b2;
}

.state-step-right-box-detail-box-desc {
    font-size: 24rpx;
    margin-top: 20rpx;
    color: #b2b2b2;
}

.state-step-call {
    width: 40rpx;
    height: 40rpx;
}

.state-step-right-box-detail-box_time {
    font-size: 24rpx;
    color: #999999;
}

.arrow-left {
    width: 0;
    height: 0;
    border-width: 8px;
    border-style: solid;
    border-color: transparent #fff transparent transparent;
    position: absolute;
    left: -16px;
    top: 32px;
    z-index: 999;
}