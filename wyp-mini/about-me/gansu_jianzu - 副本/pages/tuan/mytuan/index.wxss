@import "../../templates/tag/tuan.wxss";

.mytuan__list {
    margin-bottom: 20rpx;
    background: #fff;
    font-size: 28rpx;
}

.mytuan-list__top {
    display: flex;
    align-items: center;
}

.mytuan-list__img {
    width: 160rpx;
    height: 160rpx;
    margin: 0 34rpx 0 24rpx;
}

.mytuan-list__cont {
    flex: 1;
    padding: 18rpx 24rpx 24rpx 0;
}

.mytuan-list__title {
    color: #000;
}

.mytuan-list__num {
    display: flex;
    align-items: center;
    margin: 18rpx 0;
    font-size: 24rpx;
    color: #000;
}

.mytuan-list__time {
    margin-left: 10rpx;
}

.mytuan-list__priceInfo {
    display: flex;
    align-items: flex-end;
}

.mytuan-list__price {
    margin-bottom: -4rpx;
    flex: 1;
    font-size: 40rpx;
    color: #f32828;
}

.mytuan-list__price text {
    font-size: 24rpx;
}

.mytuan-list__hint {
    color: #ffb72a;
}

.mytuan-list__hint2 {
    color: #46d85b;
}

.mytuan-list__hint3 {
    color: #f32828;
}

.mytuan-list__ctrl {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    height: 100rpx;
    padding-right: 24rpx;
    border-top: 1px solid #f4f4f4;
}

.mytuan-list__btn {
    width: 200rpx;
    height: 48rpx;
    margin-right: 24rpx;
    line-height: 48rpx;
    background: #ff6969;
    font-size: 24rpx;
    color: #FFF;
    text-align: center;
    border-radius: 8rpx;
}

.mytuan-list__btn:last-child {
    margin-right: 0;
}

.noData {
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    justify-content: center;
    height: 1018rpx;
    font-size: 30rpx;
}