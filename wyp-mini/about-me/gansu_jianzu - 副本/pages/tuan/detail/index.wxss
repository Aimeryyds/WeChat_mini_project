@import "../../templates/tag/tuan.wxss";

@import "../../../component/cart_popup/index.wxss";

.jointuan-item {
    background: #fff;
    display: flex;
    align-items: center;
    padding: 24rpx;
    border-bottom: 1px solid #f4f4f4;
}

.jointuan-item__img {
    width: 200rpx;
    height: 200rpx;
    margin-right: 24rpx;
}

.jointuan-item__cont {
    display: flex;
    flex-flow: column wrap;
    flex: 1;
    height: 180rpx;
    justify-content: space-between;
}

.jointuan-item__title {
    font-size: 28rpx;
    color: #000;
}

.jointuan-item__info {
    display: flex;
    align-items: center;
}

.jointuan-item__price {
    font-size: 40rpx;
    color: #f32828;
    margin-right: 44rpx;
}

.jointuan-item__price text {
    font-size: 24rpx;
}

.jointuan-item__mun {
    margin-left: 24rpx;
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}

.jointuan-info {
    padding: 40rpx 0;
    display: flex;
    flex-flow: column wrap;
    height: 374rpx;
    align-items: center;
    justify-content: space-between;
    background: #fff;
    box-sizing: border-box;
}

.jointuan-info__user {
    display: flex;
    align-items: center;
}

.jointuan-info__head {
    position: relative;
    padding-bottom: 10rpx;
}

.jointuan-info__head-img {
    border: 1px solid #e5e5e5;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.jointuan-info__lable {
    position: absolute;
    top: 100rpx;
    left: 20rpx;
    width: 72rpx;
    height: 36rpx;
    text-align: center;
    line-height: 36rpx;
    border-radius: 20rpx;
    background: #ff7b7b;
    color: #fff;
    border: 2rpx solid #fff;
    font-size: 20rpx;
}

.jointuan-info__member {
}

.jointuan-info__member-img {
    border: 1px solid #e5e5e5;
    margin-left: -24rpx;
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
}

.jointuan-info__member .jointuan-info__member-img:first-child {
    margin-left: 0;
}

.jointuan-info__time {
    font-size: 28rpx;
    color: #000;
}

.jointuan-info__time text {
    color: #ff7b7b;
    margin: 0 6rpx;
}

.jointuan-info__btn {
    width: 520rpx;
    height: 64rpx;
    line-height: 64rpx;
    background: #f22222;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    border-radius: 8rpx;
}

.jointuan-note {
    margin-top: 24rpx;
    background: #fff;
    padding: 24rpx;
}

.jointuan-note__title {
    margin-bottom: 40rpx;
    font-size: 28rpx;
    color: #000;
}

.jointuan-note__cont {
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}

.jointuan-note__img {
    width: 60rpx;
    height: 60rpx;
}

.jointuan-note__cont2 {
    text-align: center;
}

.jointuan-note__img {
    width: 567rpx;
    height: 68rpx;
    margin-bottom: 16rpx;
}

.jointuan-note__text {
    display: flex;
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
}

.jointuan-note--margin {
    margin-left: 78rpx;
    margin-right: 135rpx;
}

.opentuan-info {
    height: 314rpx;
}

.opentuan-item {
    display: flex;
    padding: 24rpx;
    background: #fff;
    font-size: 28rpx;
    border-bottom: 1px solid #f4f4f4;
}

.opentuan-item__img {
    width: 335rpx;
    height: 200rpx;
    margin-right: 24rpx;
}

.opentuan-item__cont {
    padding-top: 16rpx;
}

.opentuan-item__time text {
    color: #ff7b7b;
}

.opentuan-item__num {
    margin: 20rpx 0 26rpx;
}

.opentuan-item__num text {
    color: #ff7b7b;
    margin: 0 5rpx;
}

.opentuan-form {
    margin-top: 24rpx;
    background: #fff;
    padding: 24rpx;
    font-size: 28rpx;
    color: rgba(0,0,0,0.65);
}

.opentuan-form__item {
    display: flex;
    margin-bottom: 20rpx;
}

.opentuan-form__label {
    margin-right: 20rpx;
}

.opentuan-form__cont {
    flex: 1;
}

.succsesstuan-info {
    height: 440rpx;
}

.succsesstuan__hint {
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
    margin-bottom: 10rpx;
    text-align: center;
}

.succsesstuan__hint--color {
    font-size: 34rpx;
    color: #46d85b;
    margin-bottom: 10rpx;
}

.btn-share {
    padding: 0;
    position: absolute;
    bottom: 48rpx;
    right: 24rpx;
    -webkit-tap-highlight-color: transparent;
    overflow: hidden;
    background-color: #fff;
    line-height: 1;
}

.btn-share::after {
    content: " ";
    border: 0px;
}