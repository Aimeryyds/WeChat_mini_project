.zan-msg {
    padding-top: 36px;
    text-align: center;
}

.zan-msg__link {
    display: inline;
    color: #586C94;
}

.zan-msg__icon-area {
    margin-bottom: 30px;
}

.zan-msg__text-area {
    margin-bottom: 25px;
    padding: 0 20px;
}

.zan-msg__title {
    margin-bottom: 5px;
    font-weight: 400;
    font-size: 20px;
}

.zan-msg__desc {
    font-size: 14px;
    color: #999999;
}

.zan-msg__opr-area {
    margin-bottom: 25px;
}

.zan-msg__extra-area {
    margin-bottom: 15px;
    font-size: 14px;
    color: #999999;
}

@media screen and (min-height:438px) {
    .zan-msg__extra-area {
        position: fixed;
        left: 0;
        bottom: 0;
        width: 100%;
        text-align: center;
    }
}