<view class="abnor">
    <view class="abnor__box">
        <image class="abnor__image" mode="widthFix" src="{{image}}" wx:if="{{image}}"></image>
        <view class="abnor__text" wx:if="{{title}}">{{title}}</view>
        <view class="abnor__tip" wx:if="{{tip}}">{{tip}}</view>
        <view bindtap="emitAbnorTap" class="abnor__btn" wx:if="{{button}}">{{button}}</view>
    </view>
</view>
