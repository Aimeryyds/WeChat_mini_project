.mine-error {
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: center;
}

.mine-error image {
    width: 214rpx;
    height: 214rpx;
    margin-top: 172rpx;
}

.mine-error-text {
    margin: 44rpx 0 76rpx;
    font-size: 28rpx;
    color: #C0C0C0;
}

.mine-error-btn {
    width: 360rpx;
    height: 88rpx;
    line-height: 88rpx;
    background-color: #f22222;
    border-color: #f22222;
    font-size: 28rpx;
    color: #fff;
}

.mine-customer-btn {
    padding-left: 0rpx;
    font-size: 14px;
    text-align: left;
    line-height: 1.4;
    background-color: #fff;
}

.mine-customer-btn::after {
    border: 0px solid #000;
}

.user-img {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    background-color: #fff;
}

.mine-img {
    width: 44rpx;
    height: 44rpx;
    margin-right: 20rpx;
    display: inline-block;
}

.orderAll::after {
    border-top: 0;
}

.order-item-img {
    width: 38rpx;
    height: 38rpx;
    margin-bottom: 4rpx;
    display: inline-block;
}

.menu-name {
    font-size: 32rpx;
}

.order-item {
    font-size: 23rpx;
    width: 25%;
    text-align: center;
    overflow: visible;
    color: #333;
}

.order-item .zan-badge {
    overflow: visible;
}

.order-item .zan-badge__count {
    top: -8rpx;
    right: 57rpx;
}

.mine-logout {
    margin-top: 40rpx;
    height: 100rpx;
    width: 100%;
    opacity: 1;
}

.mine-logout-btn {
    width: 680rpx;
    font-size: 32rpx;
    color: #fffefe;
    line-height: 80rpx;
    border-radius: 8rpx;
    background-color: #c41412;
}

.mine-logout-btn::after {
    border-radius: 8px;
}