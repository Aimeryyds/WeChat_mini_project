.giftcard-status__img {
    width: 110rpx;
    height: 110rpx;
    position: absolute;
    left: 0;
    top: 0;
}

.giftcard-list__item {
    width: 340rpx;
    border: 1px solid #C9C9C9;
    border-radius: 16rpx;
}

.giftcard-list__item-bg {
    background: #fff;
    border-radius: 16rpx 16rpx 0 0;
}

.giftcard-list__item-bg image {
    width: 100%;
    height: 176rpx;
    vertical-align: top;
    border-radius: 16rpx 16rpx 0 0;
}

.giftcard-list__item-text {
    height: 40rpx;
    line-height: 40rpx;
    padding: 0 24rpx;
    background: #fff;
    font-size: 16rpx;
}

.giftcard-list {
    display: flex;
    flex-wrap: wrap;
    align-content: space-between;
    justify-content: space-between;
    padding: 20rpx 22rpx 0;
}

.giftcard-list .giftcard-list__item {
    margin-bottom: 22rpx;
}

.giftcard-nodata {
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    justify-content: center;
    height: 880rpx;
    font-size: 30rpx;
}