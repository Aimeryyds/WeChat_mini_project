@import "../../pages/templates/mine/mine-error.wxss";

.cart {
    font-size: 24rpx;
}

.cart-title {
    font-size: 28rpx;
    display: flex;
    align-items: center;
    padding: 20rpx 24rpx;
    border-bottom: 1rpx solid #e5e5e5;
}

.cart-title--text {
    flex: 1;
}

.cart-title--arrow {
    display: flex;
    align-items: center;
    font-size: 22rpx;
    color: #919191;
}

.cart-title--arrow image {
    width: 28rpx;
    height: 28rpx;
}

.cart-title--arrow text {
    margin-left: 6rpx;
}

.cart-items {
    padding-left: 24rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.cart-item {
    position: relative;
    padding: 24rpx 24rpx 24rpx 0rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.cart-item--thumb {
    border-radius: 8rpx;
    position: relative;
}

.cart-item--num {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    right: 10rpx;
    top: 10rpx;
    z-index: 20;
    background-color: red;
    color: #fff;
}

.cart-item--cover {
    border-radius: 8rpx;
    position: absolute;
    width: 120rpx;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0,0,0,0.3);
    color: #fff;
}

.cart-item--image {
    border-radius: 8rpx;
    width: 120rpx;
    height: 120rpx;
}

.cart-item--price {
    color: red;
}

.cart-item--price-invalid {
    color: #ccc;
}