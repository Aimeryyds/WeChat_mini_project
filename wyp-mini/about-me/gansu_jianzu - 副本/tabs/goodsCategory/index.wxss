.classify-container {
    display: flex;
}

.classify-container__left {
    height: 100vh;
    width: 188rpx;
    background: #f4f4f4;
}

.classify-container__right {
    flex: 1;
    height: 100vh;
    background-color: #fff;
    border-top: 1rpx solid #eee;
}

.classify-brand__item {
    height: 100rpx;
    text-align: center;
    border-bottom: 1px solid #dcdcdc;
    display: flex;
    flex-direction: row;
}

.no-bottom-border::after {
    border-top: 0rpx;
}

.classify-brand__name {
    font-size: 24rpx;
    padding: 0 10rpx;
    color: #666;
    line-height: 1.2;
    text-align: left;
    pointer-events: none;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100rpx;
    align-items: center;
    border-left: 6rpx solid #f4f4f4;
}

.classify-brand__red-name {
    border-left: 6rpx solid #F22222;
    color: #F22222;
    background-color: #fff;
}

.classify-brand__first {
    background-color: #fff;
}

.classify-second__list {
    display: flex;
    background-color: #fff;
    flex-wrap: wrap;
    border-bottom: 1rpx #eee solid;
}

.classify-second__item {
    width: 248rpx;
    padding: 0 16rpx;
    margin: 12rpx 0;
}

.classify-second__item-name {
    height: 64rpx;
    line-height: 64rpx;
    width: 100%;
    background-color: #f4f4f4;
    text-align: center;
    font-size: 26rpx;
    color: #000;
    opacity: 0.75;
}

.big-classify-second__item {
    width: 343rpx;
    padding: 0 16rpx;
    margin: 12rpx 0;
}

.classify-container__right .zan-cell::after {
    border-top: 0;
    right: inherit;
}