.brand-list {
    display: flex;
    align-items: center;
    background-color: #fff;
    padding: 24rpx;
    border-bottom: 1px solid #f4f4f4;
}

.brand-list__img {
    width: 150rpx;
    height: 150rpx;
    margin-right: 30rpx;
}

.brand-list__title {
    font-size: 28rpx;
    margin-bottom: 30rpx;
    color: #000;
}

.brans-list__desc {
    font-size: 24rpx;
    line-height: 34rpx;
    color: rgba(0,0,0,0.43);
}

.brand-location {
    background: #fff;
    border-bottom: 1px solid #f4f4f4;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 14rpx 0 14rpx 0;
    z-index: 10;
}

.location-btn {
    margin: 0 24rpx;
    font-size: 24rpx;
    color: #aaa;
    background-color: #f4f4f4;
    flex: 1;
    border-radius: 30rpx;
    height: 56rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 14rpx;
}

.brand-list__cont {
    flex: 1;
}

.page_location_container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.page_location_icon {
    margin-top: 120px;
    width: 160rpx;
    height: 160rpx;
}

.page_location_text {
    margin-top: 15px;
    color: #aaa;
    font-size: 28rpx;
}

.page_location_btn {
    margin-top: 30px;
    padding: 10rpx 20rpx;
    border: 1rpx solid #c41412;
    color: #c41412;
    background-color: transparent;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
}