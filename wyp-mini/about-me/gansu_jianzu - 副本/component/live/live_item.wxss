.item {
    width: 100%;
    backgroundColor: transparent;
    font-size: 24rpx;
    margin-top: 24rpx;
    color: #989898;
}

.item-label {
    color: #aaa;
}

.item-content {
    margin-top: 12rpx;
    padding: 24rpx;
    background: #fff;
}

.item-content--title {
    font-size: 28rpx;
    color: #000;
}

.item-content--center {
    display: flex;
    margin-top: 16rpx;
    align-items: center;
    justify-content: space-between;
}

.item-content--center-left {
    flex: 1;
    display: flex;
    align-items: center;
    font-size: 28rpx;
}

.item-content--center-left image {
    width: 32rpx;
    height: 32rpx;
}

.item-content--center-left .time {
    margin-left: 12rpx;
}

.item-content--center-left .status {
    margin-left: 36rpx;
    border-radius: 16rpx;
    padding: 4rpx 16rpx;
    color: #fff;
}

.normal {
    background: #d5d5d5;
}

.living {
    background: linear-gradient(-90deg,#C87FFF 0%,#FF7B7B 100%);
}

.item-content--footer {
    margin-top: 16rpx;
    display: flex;
}

.item-content--footer-left {
    flex: 1;
}

.item-content--footer-right {
    width: 80rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.item-content--footer-right image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 12rpx;
}

.favorite-btn,.unfavorite-btn {
    padding: 0;
    margin: 0;
    border: 0rpx;
    background-color: transparent;
    font-size: 24rpx;
    color: #989898;
    line-height: 24rpx;
    padding: 4rpx 0rpx 4rpx 32rpx;
}

.favorite-btn {
    background: url("http://imgcdnali.wfenxiao.com.cn/xcx/c/live/favorite.png") no-repeat left center;
    background-size: 28rpx 28rpx;
}

.unfavorite-btn {
    background: url("http://imgcdnali.wfenxiao.com.cn/xcx/c/live/unfavorite.png") no-repeat left center;
    background-size: 28rpx 28rpx;
}

.favorite-btn::after,.unfavorite-btn::after {
    border: 0;
}