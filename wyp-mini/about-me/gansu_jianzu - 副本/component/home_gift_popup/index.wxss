.container {
    width: 600rpx;
    height: 912rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.top {
    width: 600rpx;
    height: 824rpx;
    margin-top: 14rpx;
    border-radius: 12rpx;
    background: transparent;
    display: flex;
    flex-direction: column;
}

.close {
    width: 62rpx;
    height: 62rpx;
    margin-top: 26rpx;
}

.header {
    height: 256rpx;
    display: flex;
    justify-content: center;
    padding-top: 78rpx;
    background: url("http://imgcdnali.wfenxiao.com.cn/xcx/c/1229/bg_home_popup.png") no-repeat;
    background-size: 600rpx 256rpx;
    box-sizing: border-box;
}

.header-pre {
    font-size: 36rpx;
    color: #ffe420;
    letter-spacing: 0;
    line-height: 48rpx;
}

.header-post {
    font-size: 48rpx;
    color: #ff035d;
    letter-spacing: 0;
    line-height: 48rpx;
}

.footer {
    display: flex;
    justify-content: center;
    font-size: 24rpx;
    color: #000;
    letter-spacing: 0;
    padding: 22rpx;
    background: #fff;
}

.footer text {
    color: #ff035c;
}

.content {
    flex-grow: 1;
    display: flex;
    justify-content: center;
    background: #fff;
    margin: -1rpx 0;
}

.coupon_container {
    display: flex;
    flex-direction: column;
}

.coupon_item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 506rpx;
    height: 112rpx;
    background-image: url('http://imgcdnali.wfenxiao.com.cn/xcx/c/1229/bg_home_popup_coupon.png');
    background-repeat: no-repeat;
    background-size: 506rpx 112rpx;
    color: #fff;
    line-height: 1;
    margin-bottom: 12rpx;
}

.coupon__money-text {
    width: 128rpx;
    height: 76rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: space-between;
}

.coupon__money {
    font-size: 40rpx;
}

.coupon__sign {
    font-size: 24rpx;
}

.coupon__useThreshold {
    font-size: 18rpx;
    color: #171717;
}

.coupon__limit {
    width: 312rpx;
    height: 76rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
}

.coupon__limit1 {
    font-size: 24rpx;
    color: #171717;
}

.coupon__date {
    opacity: 0.43;
    font-size: 18rpx;
    color: #171717;
}

.score-container {
    display: flex;
    flex-direction: column;
}

.score-container-img {
    width: 308rpx;
    height: 308rpx;
}

.score-container text {
    font-size: 44rpx;
    color: #ff035c;
    letter-spacing: 0;
    align-self: center;
}

.giftcard-container {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    padding-top: 58rpx;
}

.giftcard-onlyone {
    width: 472rpx;
    border: 1px solid #c9c9c9;
    border-radius: 16rpx;
}

.giftcard-onlyone-bg {
    background: #fff;
    border-radius: 16rpx 16rpx 0 0;
}

.giftcard-onlyone-bg image {
    width: 472rpx;
    height: 244rpx;
    vertical-align: top;
    border-radius: 16rpx 16rpx 0 0;
}

.giftcard-onlyone-text {
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 24rpx;
    background: #fff;
    font-size: 20rpx;
}

.giftcard-more {
    width: 252rpx;
    height: 168rpx;
    margin-bottom: 30rpx;
    border: 1rpx solid #c9c9c9;
    border-radius: 8rpx;
}

.giftcard-more:nth-child(odd) {
    margin-right: 30rpx;
    margin-left: 30rpx;
}

.giftcard-more:nth-child(n+3) {
    margin-bottom: 0;
}

.giftcard-more-bg image {
    width: 252rpx;
    height: 130rpx;
    vertical-align: top;
    border-radius: 8rpx 8rpx 0 0;
}

.giftcard-more-text {
    font-size: 18rpx;
    color: #000;
    border-top: 1rpx solid #c9c9c9;
    padding-left: 10rpx;
    height: 38rpx;
    line-height: 38rpx;
    display: flex;
    align-items: center;
}

.vipcards-container {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    padding-top: 58rpx;
}

.cards_card-item-big {
    width: 506rpx;
    height: 296rpx;
    position: relative;
    border-radius: 16rpx;
}

.cards_card-item_header-big {
    margin: 20rpx 0rpx 0rpx 40rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.cards_card-item_header-logo-big {
    border-radius: 50%;
    width: 30rpx;
    height: 30rpx;
}

.cards_card-item_header-store-big {
    color: #2a2a36;
    margin-left: 20rpx;
    font-size: 20rpx;
}

.cards_card-item_name-big {
    position: absolute;
    margin-top: -16rpx;
    top: 50%;
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    color: #2a2a36;
    font-weight: bold;
}

.cards_card-item_num-big {
    left: 40rpx;
    position: absolute;
    font-size: 20rpx;
    bottom: 12rpx;
    color: #000;
}

.cards_card-item {
    width: 252rpx;
    height: 144rpx;
    position: relative;
    border-radius: 8rpx;
    margin-bottom: 30rpx;
}

.cards_card-item:nth-child(odd) {
    margin-right: 30rpx;
    margin-left: 30rpx;
}

.cards_card-item:nth-child(n+3) {
    margin-bottom: 0;
}

.cards_card-item_header {
    margin: 10rpx 0rpx 0rpx 20rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.cards_card-item_header-logo {
    border-radius: 50%;
    width: 20rpx;
    height: 20rpx;
}

.cards_card-item_header-store {
    color: #2a2a36;
    margin-left: 18rpx;
    font-size: 18rpx;
}

.cards_card-item_name {
    position: absolute;
    margin-top: -16rpx;
    top: 50%;
    width: 100%;
    text-align: center;
    font-size: 22rpx;
    color: #2a2a36;
    font-weight: bold;
}

.cards_card-item_num {
    left: 40rpx;
    position: absolute;
    font-size: 14rpx;
    bottom: 12rpx;
    color: #000;
}

.share-container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.share-img {
    width: 600rpx;
    height: 584rpx;
    margin-bottom: 46rpx;
}

.share-btn {
    width: 470rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #ff035c;
    border-radius: 86rpx;
    font-size: 28rpx;
    color: #fff;
    letter-spacing: 0.28px;
    margin-top: 20rpx;
}

.share-container button {
    border: 0;
    background-color: transparent;
}

.share-container button::after {
    border: 0;
}