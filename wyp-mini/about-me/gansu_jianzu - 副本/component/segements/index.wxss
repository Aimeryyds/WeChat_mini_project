.segement {
    width: 100%;
    padding: 0 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
}

.label {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
    text-align: center;
}

.triangle-up,.triangle-down {
    width: 0;
    height: 0;
    border-left: 6rpx solid transparent;
    border-right: 6rpx solid transparent;
}

.triangle-up {
    border-bottom: 8rpx solid #999;
}

.triangle-down {
    border-top: 8rpx solid #999;
}

.triangle-up--active {
    border-bottom: 8rpx solid red;
}

.triangle-down--active {
    border-top: 8rpx solid red;
}