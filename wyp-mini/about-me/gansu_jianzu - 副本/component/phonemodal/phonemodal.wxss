.modal-wrap {
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.3);
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
}

.modal-container {
    position: absolute;
    height: 346rpx;
    width: 552rpx;
    z-index: 9999;
    border-radius: 16rpx;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    margin: auto;
    background-color: #fff;
}

.modal-header {
    text-align: center;
    font-size: 32rpx;
    margin: 32rpx 0 48rpx 0;
}

.modal-body {
    font-size: 28rpx;
    color: #000;
    opacity: 0.43;
    margin-bottom: 68rpx;
    text-align: center;
}

.modal-footer {
    display: flex;
    justify-content: center;
}