.news-search {
    width: 100%;
    display: flex;
    background: #fff;
    align-items: center;
    padding: 28rpx 0;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
}

.news-search-wrap {
    flex: 1;
}

.news-search-box {
    margin-left: 24rpx;
    display: flex;
    align-items: center;
    height: 60rpx;
    border-radius: 30rpx;
    background: #f4f4f4;
    font-size: 24rpx;
    padding: 0 20rpx;
}

.news-search__img {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}

.news-search__text {
    color: rgba(0,0,0,0.43);
}

.news-search-category {
    margin: 0 36rpx;
    width: 48rpx;
    height: 50rpx;
    vertical-align: top;
}

.newsinfo-list {
    background-color: #fff;
    padding-top: 116rpx;
}

.no-newsinfo {
    margin-top: 300rpx;
    text-align: center;
    font-size: 28rpx;
    color: #999999;
}