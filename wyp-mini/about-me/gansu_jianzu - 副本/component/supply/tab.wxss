.supply-tab {
    height: 45px;
    border-bottom: 1rpx solid #f4f4f4;
}

.supply-tab__bd {
    width: 750rpx;
    display: flex;
    flex-direction: row;
    background: #fff;
}

.supply-tab__bd--fixed {
    position: fixed;
    top: 0;
    z-index: 2;
}

.supply-tab__item {
    flex: 1;
    display: inline-block;
    text-align: center;
    box-sizing: border-box;
    display: -webkit-flex;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.supply-tab__title {
    font-size: 14px;
    display: inline-block;
    color: #666;
    height: 44px;
    line-height: 44px;
    box-sizing: border-box;
    margin: 0 10px;
    word-break: keep-all;
}

.supply-tab__icon {
    width: 6px;
    height: 4px;
}

.supply-tab__item--selected {
    color: #f44;
}

.supply-tab__bd--scroll {
    display: block;
    white-space: nowrap;
}

.supply-tab__bd--scroll .supply-tab__item {
    min-width: 80px;
}

.supply-tab__bd--scroll .supply-tab__text {
    margin: 0 20px;
}