@import "card.wxss";

.giftcard-template__title {
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 40rpx;
    font-size: 32rpx;
    background: #fff;
    border-bottom: 1px solid #f4f4f4;
}

.giftcard-template__list {
    white-space: nowrap;
    padding: 24rpx 40rpx;
    background: #fff;
}

.giftcard-template__item {
    display: inline-block;
    margin-right: 40rpx;
    vertical-align: top;
}

.giftcard-template__link {
    margin-right: 100rpx;
    height: 220rpx;
    line-height: 220rpx;
    width: 340rpx;
    border: 1px solid #F8403D;
    border-radius: 16rpx;
    font-size: 28rpx;
    text-align: center;
    color: #F8403D;
}

.giftcard-template__link-text {
    display: inline-block;
}

.giftcard-template__linkimg {
    width: 18rpx;
    height: 28rpx;
    margin-left: 10rpx;
    vertical-align: middle;
}