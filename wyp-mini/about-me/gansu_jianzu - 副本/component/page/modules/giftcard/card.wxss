.giftcard-status__img {
    width: 110rpx;
    height: 110rpx;
    position: absolute;
    left: 0;
    top: 0;
}

.giftcard-list__item {
    width: 340rpx;
    border: 1px solid #C9C9C9;
    border-radius: 16rpx;
}

.giftcard-list__item-bg {
    background: #fff;
    border-radius: 16rpx 16rpx 0 0;
}

.giftcard-list__item-bg image {
    width: 100%;
    height: 176rpx;
    vertical-align: top;
    border-radius: 16rpx 16rpx 0 0;
}

.giftcard-list__item-text {
    height: 40rpx;
    line-height: 40rpx;
    padding: 0 24rpx;
    background: #fff;
    font-size: 16rpx;
}