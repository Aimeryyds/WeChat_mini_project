@import "../miaosha/index.wxss";

.title-mod {
    height: 88rpx;
    display: flex;
    padding: 0 30rpx;
    align-items: center;
    background: #fff;
    margin: 10rpx 0;
}

.title-cont {
    display: flex;
    align-items: center;
    flex: 1;
}

.title-cont image {
    width: 44rpx;
    height: 44rpx;
    margin-right: 22rpx;
}

.title-text {
    width: 500rpx;
    overflow: hidden;
    white-space: nowrap;
    font-size: 28rpx;
}

.title-more {
    color: #999;
    font-size: 22rpx;
    display: flex;
    align-items: center;
}

.title-more image {
    width: 13rpx;
    height: 24rpx;
    margin-left: 12rpx;
}