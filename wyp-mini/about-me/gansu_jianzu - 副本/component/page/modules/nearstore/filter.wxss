.filter {
    background-color: #f1f1f1;
    max-height: 600rpx;
    padding-bottom: 120rpx;
    width: 750rpx;
    position: relative;
}

.filter-row {
}

.filter-row--title {
    color: #666;
    padding: 16px 0 12rpx 24rpx;
    font-size: 24rpx;
}

.filter-row--contents {
    font-size: 28rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
}

.filter-row--contents-item {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    text-align: center;
    background-color: #fff;
    height: 84rpx;
    flex: 0 0 32.6666%;
    border: 1rpx solid #e5e5e5;
    border-sizing: border-box;
}

.buttons {
    position: absolute;
    bottom: 0;
    left: 0;
    border-top: 1rpx solid #d9d9d9;
    width: 100%;
    display: flex;
    align-items: center;
}

.button-submit,.button-reset {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24rpx;
}

.button-submit {
    background-color: #D61A31;
    color: #fff;
}

.button-reset {
    color: #000;
    background-color: #fff;
}