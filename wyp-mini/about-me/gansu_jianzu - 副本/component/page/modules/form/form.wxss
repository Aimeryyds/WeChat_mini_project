.zan-dialog__mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
    background: rgba(0,0,0,0.7);
    display: none;
}

.zan-dialog__container {
    position: fixed;
    top: 25%;
    width: 700rpx;
    left: 25rpx;
    background: white;
    z-index: 11;
}

.zan-dialog--show .zan-dialog__container {
}

.zan-dialog--show .zan-dialog__mask {
    display: block;
}

.zan-dialog--hide .zan-dialog__container {
    display: none;
}

.zan-dialog--hide .zan-dialog__mask {
    display: none;
}

.c-form {
    background: #fff;
    border-top: 0px;
    border-bottom: 1rpx solid #eeeeee;
    overflow: hidden;
    font-size: 28rpx;
}

.c-form .header {
    height: 88rpx;
    display: flex;
    align-items: center;
    font-size: 32rpx;
    color: #000;
    padding: 0 26rpx;
    border-bottom: 1rpx solid #d9d9d9;
}

.c-form .row {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.c-form .row .label,.c-form .row .input {
    width: 100%;
}

.c-form .row input,.c-form .row textarea {
    color: #595959;
}

.c-form .row input:disabled {
    color: #595959;
}

.c-form .label {
    box-sizing: border-box;
    padding: 16rpx 24rpx 16rpx 24rpx;
    width: 100%;
    background-color: #f4f4f4;
}

.c-form .required:before {
    content: '*';
    color: red;
}

.c-form .text {
    border: 1rpx solid #d5d5d5;
    border-radius: 8rpx;
    padding: 12rpx 12rpx;
}

.c-form .textarea {
    border: 1rpx solid #d5d5d5;
    border-radius: 8rpx;
    width: auto;
    height: 4.2rem;
}

.c-form .submitBtn {
    border-radius: 0rpx;
    border: 0rpx;
    width: 100%;
}

.c-form .cell {
    width: 100%;
    box-sizing: border-box;
    position: relative;
    padding: 12rpx 24rpx 24rpx 24rpx;
    display: flex;
    align-items: center;
    line-height: 1.4;
    font-size: 28rpx;
}

.c-form .cell::after {
    position: absolute;
    left: 15px;
    right: 0;
    bottom: 0;
    border-top: 1rpx solid #e5e5e5;
    background: #e5e5e5;
    content: ' ';
}

.c-form .cell:last-child::after {
    display: none;
}

.c-form .cell__bd {
    flex: 1;
}

.img-container {
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    align-items: flex-start;
}

.img-container label {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: flex-start;
    position: relative;
    text-align: center;
    border: 1rpx solid #e5e5e5;
    margin-bottom: 24rpx;
    margin-right: 16rpx;
}

.img-container .cover {
    top: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 200rpx;
    height: 160rpx;
    position: absolute;
    background-color: rgba(0,0,0,0.3);
}

.img-container .thumb {
    width: 200rpx;
    height: 160rpx;
}

.img-container .name {
    background-color: #ffffff;
    width: 100%;
    border-top: 1rpx solid #e5e5e5;
    text-align: center;
    flex: 1;
    font-size: 24rpx;
}

.upload {
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.upload--img-container {
    position: relative;
    margin-right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 200rpx;
    height: 200rpx;
    border: 1rpx solid #eee;
}

.upload--remove {
    position: absolute;
    top: 0;
    right: 0;
    width: 36rpx;
    height: 36rpx;
}

.upload--action {
    margin-right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 200rpx;
    height: 200rpx;
    border: 1rpx solid #eee;
    background-color: #ffffff;
}

.submitRow {
    padding-top: 12rpx;
    border-top: 1rpx solid #e5e5e5;
}

.error {
    color: red;
}