@import "../miaosha/index.wxss";

@import "../../../../pages/templates/tag/tuan.wxss";

.product-name-wrap {
    height: 80rpx;
    position: relative;
}

.product-name {
    font-size: 28rpx;
    text-indent: 80rpx;
}

.product-price {
    font-size: 22rpx;
    margin-top: 6rpx;
    color: red;
    font-weight: 600;
}

.product-price_num {
    font-size: 32rpx;
}

.product-marketPrice {
    margin: 6rpx 0 12rpx 0;
    font-size: 24rpx;
    text-decoration: line-through;
    color: #c9c9c9;
}

.products-panel__type2,.products-panel__type3 {
    background-color: #f1f1f1;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-between;
}

.products__type1,.products-panel__type2,.products-panel__type3 {
    padding: 4rpx;
}

.products__type2 {
    background-color: #fff;
    position: relative;
}

.products__type4 {
    padding: 16rpx 30rpx;
}

.products__type4::after {
    position: absolute;
    left: 15px;
    right: 15px;
    bottom: 0;
    border-top: 1px solid #e5e5e5;
    background: #e5e5e5;
    content: ' ';
}

.products__type4:last-child::after {
    display: none;
}

.product-footer {
    display: flex;
    flex-direction: row-reverse;
}

.product-cart {
    width: 46rpx;
    height: 46rpx;
    align-self: center;
    margin-right: 20rpx;
}

.product-price-container {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.view-more {
    display: flex;
    height: 84rpx;
    line-height: 84rpx;
    background: #fff;
    text-align: center;
    font-size: 24rpx;
    color: #da1917;
    justify-content: center;
    align-items: center;
}

.view-more--img {
    width: 20rpx;
    height: 10rpx;
    margin-left: 10rpx;
}

.product-storename-1 {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
    flex-grow: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: left;
}

.product-storename-2 {
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
    flex-grow: 1;
    text-align: right;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: left;
}

.tuan__tag1 {
    position: absolute;
    left: 0;
    top: 4rpx;
}

.tuan__tag2 {
    position: absolute;
    left: 24rpx;
    top: 24rpx;
}