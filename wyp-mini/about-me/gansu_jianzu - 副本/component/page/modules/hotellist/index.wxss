@import "../miaosha/index.wxss";

.a-hotel {
    width: 100%;
    background-color: #fff;
    padding: 24rpx;
    display: flex;
    flex-direction: row;
}

.a-hotle_icon {
    width: 136rpx;
    height: 168rpx;
}

.a-hotle_content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 24rpx;
}

.hotel_title {
    font-size: 30rpx;
    color: #1a1616;
    letter-spacing: 0;
}

.hotel_middle {
    display: flex;
    justify-content: space-between;
    margin-right: 40rpx;
    margin-top: 20rpx;
}

.hotel_middle text {
    font-size: 24rpx;
    color: #a8a8a8;
    letter-spacing: 0;
}

.hotel_price-content {
    display: flex;
}

.hotel_price {
    font-size: 36rpx;
    font-weight: bold;
    color: #f22222;
}

.hotel_score {
    font-size: 28rpx;
    color: #f8b032;
    letter-spacing: 0;
}

.hotel_evaluate {
    font-size: 24rpx;
    color: #a8a8a8;
    margin-left: 20rpx;
}

.hotels-error {
    font-size: 28rpx;
    text-align: center;
    line-height: 80rpx;
    height: 80rpx;
    color: rgba(0,0,0,0.65);
}