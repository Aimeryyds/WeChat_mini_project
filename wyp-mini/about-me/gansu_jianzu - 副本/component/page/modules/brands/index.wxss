@import "../miaosha/index.wxss";

.brand-panel {
    display: flex;
    flex-direction: column;
}

.brand-error {
    font-size: 28rpx;
    height: 80rpx;
    color: rgba(0,0,0,0.65);
}

.brands-header {
    display: flex;
    padding: 10rpx 10rpx 0 10rpx;
}

.brands-header-arrow {
    width: 14rpx;
    height: 18rpx;
}

.brandSale {
    white-space: nowrap;
    display: block;
    padding: 36rpx 0;
}

.brand-item {
    display: inline-block;
    text-align: center;
    padding: 0 29rpx;
    vertical-align: middle;
    width: 25%;
    box-sizing: border-box;
}

.brand-item-image {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
}

.brandSale-item {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.brandSale-item image {
    display: block;
}

.brandSale-item text {
    font-size: 14rpx;
}