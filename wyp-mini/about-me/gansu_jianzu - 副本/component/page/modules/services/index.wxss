@import "../miaosha/index.wxss";

.services__header {
    display: flex;
    justify-content: space-between;
    padding: 10px;
    background-color: white;
    align-items: center;
    border-bottom: solid 1px #f4f4f4;
}

.services__title {
    font-size: 32rpx;
    color: #000;
}

.services__rightText {
    opacity: 0.43;
    font-size: 26rpx;
    color: #000;
}

.services__projectItem {
    display: flex;
    padding: 10px;
    border-bottom: solid 1px #f4f4f4;
    background: white;
}

.services__projectItem:last-child {
    border-bottom: none;
}

.services__img {
    width: 180rpx;
    height: 180rpx;
    margin: 0 20rpx 20rpx 0;
}

.services__right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: flex-start;
}

.services__name {
    font-size: 30rpx;
    color: #000;
    line-height: 30rpx;
}

.services_storename {
    font-size: 24rpx;
    color: rgba(0,0,0,0.43);
    white-space: nowrap;
}

.services__desc {
    opacity: 0.43;
    font-size: 26rpx;
    color: #000;
    letter-spacing: -0.27px;
}

.services__priceContainer {
    display: flex;
    align-items: center;
}

.services__price1 {
    display: inline-block;
    color: #f22222;
    margin-right: 10px;
}

.services__price1_t {
    font-size: 30rpx;
}

.services__price1_p {
    font-size: 38rpx;
}

.services__price2 {
    text-decoration: line-through;
}