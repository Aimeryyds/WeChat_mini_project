@import "../miaosha/index.wxss";

.imgNav-list {
    padding-bottom: 10rpx;
    padding-top: 10rpx;
    white-space: nowrap;
    box-sizing: content-box;
    background: #fff;
}

.imgNav-list .imgNav-list__item {
    display: inline-block;
    width: 20%;
    text-align: center;
    vertical-align: top;
}

.imgNav-list .imgNav-list__item image {
    width: 88rpx;
    height: 88rpx;
    margin-bottom: 2rpx;
    border-radius: 20rpx;
}

.imgNav-list__item .imgNav-name {
    padding: 0 16rpx;
    font-size: 20rpx;
    overflow: hidden;
}

.imgNav-list.type2 .imgNav-list__item image {
    border-radius: 50%;
}

.imgNav-list.mod4 .imgNav-list__item {
    width: 25%;
}