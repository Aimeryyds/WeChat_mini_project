.hotelIndex-show__img {
    display: block;
    width: 100%;
    height: 372rpx;
}

.hotelIndex {
    position: relative;
    width: 710rpx;
    height: 600rpx;
    background: #fff;
    border-radius: 8rpx;
    margin: 0 auto;
    padding: 0 42rpx 0 24rpx;
    box-sizing: border-box;
    box-shadow: 0 1px 5px 0 rgba(0,0,0,0.05);
    margin-top: -30rpx;
}

.hotelIndex-mod {
    display: flex;
    align-items: center;
    border-bottom: 1px solid #f4f4f4;
    padding: 24rpx 0;
}

.hotelIndex-mod__address {
    flex: 1;
    font-size: 32rpx;
    color: #000;
}

.hotelIndex-mod__address-title {
    font-size: 22rpx;
    color: #A8A8A8;
    margin-bottom: 14rpx;
}

.hotelIndex-mod__linkimg {
    width: 18rpx;
    height: 28rpx;
}

.hotelIndex-search {
    padding: 32rpx 0;
    margin-bottom: 48rpx;
    display: flex;
    align-items: center;
    border-top: 1px solid #f4f4f4;
}

.hotelIndex-search__text {
    font-size: 32rpx;
    color: #A8A8A8;
    flex: 1;
}

.hotelIndex-search__btn {
    width: 624rpx;
    height: 88rpx;
    background: #f22222;
    color: #fff;
    text-align: center;
    line-height: 88rpx;
    font-size: 28rpx;
    border-radius: 48rpx;
    margin: 0 auto;
}

.hotelIndex-inTime .hotel-in__time {
    font-size: 32rpx;
}

.hotelIndex-inTime .hotel-in__fontstyle {
    margin-bottom: 22rpx;
}