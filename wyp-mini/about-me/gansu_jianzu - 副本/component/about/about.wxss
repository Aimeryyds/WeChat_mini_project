.mine-customer-btn {
    padding-left: 0rpx;
    font-size: 14px;
    text-align: left;
    line-height: 1.4;
    background-color: #fff;
}

.mine-customer-btn::after {
    border: 0px solid #000;
}

.mine-img {
    width: 44rpx;
    height: 44rpx;
    margin-right: 20rpx;
    display: inline-block;
}

.about-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 184rpx;
    border-bottom: 1rpx solid #e4e4e4;
}

.about-header__title {
    font-size: 32rpx;
    font-weight: 500;
}

.about-header__logo {
    border-radius: 50%;
    width: 120rpx;
    height: 120rpx;
}

.about-content {
    line-height: 48rpx;
    color: rgba(0,0,0,0.75);
    font-size: 28rpx;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #e4e4e4;
}

.about-cells {
    margin-top: 24rpx;
}

.about-cell {
    padding: 12rpx 0;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    position: relative;
}

.about-cell__icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 48rpx;
}

.about-cell__title,.about-cell__ft {
    font-size: 28rpx;
    color: rgba(0,0,0,0.75);
}

.about-contact-btn {
    background-color: #fff;
    font-size: 28rpx;
    color: rgba(0,0,0,0.75);
    margin: 0;
    padding: 0;
    border: 0px;
}

.about-cell__ft {
    position: absolute;
    right: 0;
}

.about-album {
    margin-top: 24rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
}

.about-img {
    margin-top: 8rpx;
    width: 170rpx;
    height: 170rpx;
}