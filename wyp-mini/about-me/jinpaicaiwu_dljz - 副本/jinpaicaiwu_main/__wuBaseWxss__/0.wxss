@import "../common/package/prompt.wxss";

.border-color {
    border-color: #898989;
}

.strong {
    font-weight: bold;
}

.tc {
    text-align: center;
}

.color {
    color: #c71f3b;
}

.color2 {
    color: #898989;
}

.bg_color {
    background-color: #c71f3b;
    color: #fff;
}

.small_font {
    font-size: 26rpx;
}

.medium_font {
    font-size: 28rpx;
}

.normal_font {
    font-size: 32rpx;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.tooLong {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.tooLong2 {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.border_bottom {
    border-bottom: 1rpx solid #e9e9e9;
}

.border_bottom2 {
    border-bottom: 20rpx solid #e9e9e9;
}