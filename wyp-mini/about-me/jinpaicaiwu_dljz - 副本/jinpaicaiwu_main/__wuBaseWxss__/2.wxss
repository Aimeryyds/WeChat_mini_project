.clearFix:after {
    content: '';
    clear: both;
    width: 0;
    height: 0;
    display: block;
}

.color {
    color: #88bd79;
}

.bor_color {
    border-color: #dddee1;
}

.sub_color {
    color: #bbbec4;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.tooLong {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.tooLong2 {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}