.bg_color {
    background: #f5f5f5;
    height: 100%;
    width: 100%;
    position: absolute;
}

.item {
    margin-top: 24rpx;
    background: #ffffff;
    font-size: 28rpx;
    padding: 20rpx;
    display: flex;
}

.count {
    height: 80rpx;
    line-height: 80rpx;
    color: #ff6619;
    width: 100%;
    text-align: right;
}

.item_l {
    flex: 1;
    height: 120rpx;
}

.item_l>image {
    height: 120rpx;
    width: 120rpx;
    border-radius: 50%;
}

.item_c {
    flex: 5;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-left: 20rpx;
    color: #999999;
}

.item_c>text {
    height: 40rpx;
    line-height: 40rxp;
}

.item_r {
    flex: 4;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.my-list-nav view {
    display: inline-block;
    width: 25%;
}

.my-list-nav {
    display: flex;
    background: #ffffff;
    font-size: 30rpx;
}

.my-list-nav view {
    text-align: center;
    border-right: #e1e1e1 0px solid;
    cursor: pointer;
    height: 50px;
    line-height: 50px;
    border-bottom: 0px solid #e1e1e1;
}

.no,.no1 {
    text-align: center;
    font-size: 28rpx;
}

.no1 {
    width: 100%;
    height: 50px;
    background: #ffffff;
    line-height: 50px;
    margin-top: 15px;
}