.bg_color {
    background: #f5f5f5;
    height: 100%;
    width: 100%;
    position: absolute;
}

.content {
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
    color: #999999;
    margin: 0 auto;
    width: 98%;
    padding-top: 20rpx;
}

.content>input {
    height: 40rpx;
    line-height: 40rpx;
    background: #ffffff;
    padding: 20rpx;
    width: 90%;
    margin: 0 auto;
    margin-bottom: 30rpx;
}

.content>textarea {
    background: #ffffff;
    padding: 20rpx;
    width: 90%;
    min-height: 40rpx;
    margin: 0 auto;
}

.content>button {
    height: 90rpx;
    line-height: 90rpx;
    width: 90%;
    margin: 0 auto;
    background: #ff6619;
    font-size: 28rpx;
    color: #ffffff;
    margin-top: 34rpx;
}