.top {
    background: #f2f2f2;
    padding: 20rpx;
}

.incom {
    display: flex;
    font-size: 28rpx;
    background: #ffffff;
    padding: 20rpx;
}

.incom>text,.incom>input {
    height: 50rpx;
    line-height: 50rpx;
    padding-left: 20rpx;
}

.place {
    padding-left: 20rpx;
    color: #f5f5f5;
}

.containerr {
    display: flex;
    flex-wrap: wrap;
    font-size: 15px;
    font-family: "微软雅黑";
    flex-direction: row;
    margin-top: 20rpx;
}

.view-list {
    width: 50%;
    box-sizing: border-box;
}

.product-item {
    padding: 3px;
    margin: 4px;
    width: 345rpx;
    height: 132rpx;
    background: #f2f2f2;
    line-height: 132rpx;
    text-align: center;
    color: #1a1a1a;
}

.button-group {
    margin-top: 50rpx;
    padding: 20rpx;
}

.button-group1 {
    background: #ff6619;
    color: #ffffff;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    padding: 10rpx;
}

.button-group2 {
    background: #ffffff;
    color: #1a1a1a;
    border: 1px solid #f5f5f5;
    font-size: 28rpx;
    padding: 10rpx;
}

.active {
    background: #ff6619;
    color: #ffffff;
}