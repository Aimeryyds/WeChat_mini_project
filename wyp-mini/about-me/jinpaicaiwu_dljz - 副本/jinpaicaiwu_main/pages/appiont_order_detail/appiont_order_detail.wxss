@import "../../__wuBaseWxss__/0.wxss";

.diandan_item {
    font-size: 28rpx;
    border-top: 20rpx solid #f5f5f5;
}

.diandan_item_t {
    padding: 20rpx;
    border-bottom: 1px solid #f5f5f5;
}

.diandan_item_c {
    border-top: 1px solid #f5f5f5;
}

.col {
    color: #f56321;
}

.col1 {
    color: #ffffff;
    background: #f56321;
    font-size: 28rpx;
}

.flex {
    display: flex;
    justify-content: space-between;
}

.diandan_item_t>view>text {
    height: 50rpx;
    line-height: 50rpx;
}

.diandan_item_c_r>text {
    padding: 10rpx;
}

.diandan_item_c_r {
    flex: 8;
    display: flex;
    padding-left: 10rpx;
    flex-direction: column;
    justify-content: center;
}

.diandan_item_c_l {
    flex: 1;
    width: 160rpx;
    height: 160rpx;
    border: 1px solid #f5f5f5;
    padding-left: 10rpx;
}

.diandan_item_c_l image {
    width: 160rpx;
    height: 160rpx;
}

.diandan_item_c {
    padding: 20rpx;
}

.diandan_item_b {
    padding: 20rpx;
    display: flex;
    justify-content: flex-end;
}

.diandan_item_b>text {
    height: 50rpx;
    line-height: 50rpx;
    width: 130rpx;
    text-align: center;
}

.btn1,.btn2 {
    border-radius: 10rpx;
}

.btn1 {
    border: 1px solid #999999;
    color: #ffffff;
    margin-right: 20rpx;
    background: #999999;
    font-size: 28rpx;
}

.btn2 {
    border: 1px solid #f56321;
}

.fle {
    display: flex;
    height: 70rpx;
    line-height: 70rpx;
    border-bottom: 1px solid #f5f5f5;
    justify-content: flex-end;
    padding-right: 20rpx;
}

.fle>text {
    font-size: 28rpx;
}

.count {
    font-size: 28rpx;
    text-align: right;
    padding-right: 20rpx;
    height: 70rpx;
    line-height: 70rpx;
    border-bottom: 1px solid #f5f5f5;
}

.cre {
    color: #f56321;
}

.list_item {
    padding: 20rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #f5f5f5;
}

.list_item>text {
    font-size: 28rpx;
}

.iteml {
    flex: 2;
}

.itemr {
    flex: 8;
    text-align: right;
}

.top {
    background: #f56321;
    text-align: center;
    width: 100%;
    height: 120rpx;
}

.top>text {
    height: 120rpx;
    line-height: 120rpx;
    font-size: 28rpx;
    color: #ffffff;
}