.collect-nav {
    background: #ffffff;
    height: 75rpx;
    border-bottom: 1rpx solid #e9e9e9;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    text-align: center;
    line-height: 75rpx;
}

.collect-nav view {
    width: 50%;
    border-bottom: 6rpx solid transparent;
}

.collect-nav view.active {
    color: #c71f3b;
    border-bottom: 6rpx solid #c71f3b;
}

.list_item {
    border-top: 24rpx solid #f5f5f5;
    display: flex;
    padding: 20rpx;
    border-bottom: 1px solid #f5f5f5;
}

.list_item_L {
    flex: 1;
}

.list_item_R {
    flex: 9;
    padding-left: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.list_item_L image {
    width: 150rpx;
    height: 150rpx;
}

.txt {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-wrap: break-word;
    word-break: break-all;
    font-size: 28rpx;
    color: #333333;
}

.txt1 {
    color: #ff6600;
    font-size: 28rpx;
}

.txt2 {
    color: #ffffff;
    background: #ff6600;
    border-radius: 50rpx;
    width: 120rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 20rpx;
}

.newflx {
    display: flex;
    justify-content: space-between;
}

.no_collection {
    width: 750rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.no_collection image {
    width: 410rpx;
    height: 300rpx;
    margin-top: 250rpx;
}

.no_collection text {
    font-size: 28rpx;
    color: #666666;
    margin-top: 15rpx;
}