@import "../../__wuBaseWxss__/0.wxss";

.address-list {
    width: 100%;
    height: 100%;
    padding-bottom: 100rpx;
}

.address-list .weui-media-box {
    padding: 20rpx 70rpx 20rpx 30rpx;
    position: relative;
}

.address-list .edit {
    position: absolute;
    right: 30rpx;
    bottom: 10rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.address-list .edit view {
    display: inline-block;
}

.address-list .edit view:first-child {
    margin-right: 20rpx;
}

.address-list .edit .iconfont {
    vertical-align: top;
    font-size: 30rpx;
}

.weui-media-box__det {
    line-height: 70rpx;
}

.weui-media-box__info {
    line-height: 60rpx;
}

.btn-plus {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #fff;
    border-top: 1rpx solid #e1e1e1;
    font-size: 30rpx;
}

.btn-plus text:first-child {
    font-size: 20px;
    display: inline-block;
    vertical-align: middle;
    margin-right: 10rpx;
}

.btn-plus text:last-child {
    vertical-align: middle;
}