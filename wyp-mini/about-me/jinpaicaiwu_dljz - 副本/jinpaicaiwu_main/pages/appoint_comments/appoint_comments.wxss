.header-title {
    display: flex;
    flex-wrap: nowrap;
    height: 30px;
    line-height: 30px;
    font-size: 13px;
}

.header-title-p {
    text-align: center;
    flex: 1;
}

.header-title-img image {
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
}

.header-title-p text {
    height: 30px;
    line-height: 30px;
    display: inline-block;
    vertical-align: middle;
    color: #b5b5b5;
}

.btnmore {
    border: 4rpx solid #f5f5f5;
    color: #b5b5b5;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    margin: 30rpx auto;
    border-radius: 5px;
    font-size: 24rpx;
    width: 60%;
}

.assess {
    height: 42px;
    width: 100%;
    text-align: center;
}

.assess1 {
    height: 40px;
    width: 100%;
    text-align: center;
}

.content {
    height: 111px;
    width: 100%;
    border-bottom: 1px solid #e4e4e4;
    font-size: 12px;
    color: #657180;
}

.content-T {
    width: 100%;
    height: 45px;
}

.content-l {
    width: 100%;
    height: 45px;
    display: flex;
    padding: 5px;
}

.content-header {
    width: 50px;
    height: 50px;
    display: inline-block;
    vertical-align: middle;
}

.assess-d .f {
    color: red;
}

.assess-d {
    font-size: 13px;
    color: #b5b5b5;
    width: 100%;
    height: 36px;
    line-height: 36px;
    text-align: left;
    padding-left: 18px;
    background: #f7f7f7;
}

.assess-d text {
    display: inline-block;
    vertical-align: middle;
}

.assess-d image {
    width: 12px;
    height: 12px;
    display: inline-block;
    vertical-align: middle;
}

.content-r {
    display: flex;
    flex-direction: column;
    margin-left: 8px;
    vertical-align: middle;
}

.content-date {
    height: 20px;
    line-height: 20px;
    width: 160px;
}

.content-title {
    width: 160px;
    height: 20px;
    line-height: 20px;
    color: rgb(102,102,102);
    font-size: 14px;
    font-weight: bold;
    font-style: normal;
    text-decoration: none;
}

.content-B {
    width: 100%;
    height: 35px;
    padding-left: 2px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #657180;
    margin-top: 20px;
}

.detail {
    width: 100%;
    height: 150px;
    border: 1px solid #f5f5f5;
    font-size: 14px;
    color: #657180;
}

.assess-t {
    font-size: 16px;
    color: #707070;
    margin-top: 15px;
    border-top: 10px solid #f5f5f5;
}

.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    opacity: 0.4;
    overflow: hidden;
    z-index: 999999;
    color: #fff;
    background: black;
}

@media screen and (width:320px) {
    .product-item text {
        width: 70px;
        height: 44px;
        line-height: 44px;
        font-size: 12px;
    }

    .product-item {
        width: 80px;
        height: 54px;
    }
}

@media screen and (width:414px) {
    .product-item text {
        width: 85px;
        height: 59px;
        line-height: 59px;
        font-size: 12px;
    }

    .product-item {
        width: 95px;
        height: 69px;
    }
}