@import "../../__wuBaseWxss__/0.wxss";

.main {
    background-color: #ededed;
    padding-bottom: 0;
}

.confirm-box {
    font-size: 28rpx;
    background-color: #fff;
}

.confirm-box .fl {
    padding-left: 30rpx;
}

.confirm-box .fr {
    padding-right: 30rpx;
}

.delivery-top {
    position: relative;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
}

.confirm-title {
    background-color: #ff6800;
    text-align: center;
    color: #fff;
    font-size: 36rpx;
    padding: 20rpx 0;
}

.confirm-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 0rpx 0 30rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: #fff;
    border-top: 1rpx solid #e1e1e1;
    z-index: 999;
    font-size: 28rpx;
}

.confirm-pay {
    padding-left: 25rpx;
    padding-right: 25rpx;
}

.imageview {
    text-align: center;
    margin-top: 20rpx;
}

.imageview image {
    width: 400rpx;
    height: 400rpx;
}

.fl.descfl {
    line-height: 40rpx;
    text-align: left;
    padding: 0 30rpx;
}