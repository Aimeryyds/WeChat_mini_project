@import "../../__wuBaseWxss__/0.wxss";

.form-box {
    padding-left: 10rpx;
    padding-right: 10rpx;
    position: relative;
    margin-top: 20rpx;
}

.form-box view {
    height: 90rpx;
    width: 100%;
}

.form-box view text {
    display: inline-block;
    width: 20%;
    height: 90rpx;
    line-height: 90rpx;
    vertical-align: top;
    text-align: right;
}

.form-box input {
    display: inline-block;
    width: 80%;
    height: 88rpx;
    color: #999;
    padding: 0;
}

.form-box .input-placeholder {
    color: #aaa;
}

.form-box button {
    display: inline-block;
    width: 48%;
    margin-right: 4%;
    margin-top: 30rpx;
}

.form-box button:last-child {
    margin-right: 0;
    color: #fff;
    background-color: #898989;
}

switch {
    float: right;
    line-height: 90rpx;
}

.picker-view {
    position: fixed;
    left: 0;
    bottom: 0;
}

.addr-item {
    line-height: 40px;
    text-align: center;
}

.pickerConfirm {
    position: fixed;
    z-index: 10000;
    left: 0;
    bottom: 500rpx;
    height: 80rpx;
    background-color: #fbf9fe;
    color: #586c94;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 0 40rpx;
    box-sizing: border-box;
}

.pickerConfirm text {
    height: 80rpx;
    line-height: 80rpx;
}

.choose-prov::after {
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-bottom: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    transform: rotate(45deg);
}

.sq_title {
    text-align: center;
}

.body {
    background: #000;
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    filter: alpha(opacity=75);
    opacity: 0.75;
    z-index: 50;
}

.content {
    width: 90%;
    margin: 0 auto;
    background: #fff;
    margin-top: 100px;
    border-radius: 5px;
}

.T-text {
    width: 100%;
    height: 50px;
    line-height: 50px;
    text-align: center;
}

.T-content {
    width: 90%;
    background: #f5f5f5;
    margin: 0 auto;
    text-align: center;
    padding-bottom: 10px;
    padding-top: 10px;
    font-size: 14px;
}

.B-button {
    display: flex;
    justify-content: space-between;
    width: 90%;
    margin: 0 auto;
}

.B-button button {
    width: 100%;
    height: 36px;
    line-height: 36px;
    color: #fff;
    background: #159dff;
    margin: 14px 1px;
    font-size: 14px;
}

.getcode button {
    width: 35%;
    float: right;
    margin-top: 0px;
    padding: 0px 5px;
    line-height: 90rpx;
}

.getcode input {
    width: 60%;
}

.captcha {
    width: 130rpx;
    height: 44rpx;
}