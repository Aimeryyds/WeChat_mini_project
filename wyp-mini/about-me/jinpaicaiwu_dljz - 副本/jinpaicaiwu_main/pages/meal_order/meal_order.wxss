.title {
    width: 100%;
    height: 50px;
    color: #231b19;
    line-height: 50px;
    text-align: center;
}

.detail {
    width: 94%;
    display: flex;
    background: #f6f6f6;
    border-bottom: 1px solid #ccc;
    margin: 0 auto;
    border-radius: 9px;
    padding: 10rpx;
}

.detail_img {
    width: 97px;
    height: 97px;
    margin-left: 12px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.detail_img image {
    width: 100%;
    height: 97px;
}

.detail_txt {
    display: flex;
    flex-direction: column;
    margin-left: 8px;
    align-items: flex-start;
    justify-content: space-between;
    height: 97px;
}

.detail_txt text {
    margin-top: 5px;
}

.detail_txt .de1 {
    font-size: 30rpx;
}

.detail_txt .de2 {
    font-size: 28rpx;
    color: #bfbfbf;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.detail_txt .de3 {
    font-size: 30rpx;
    color: #ff862c;
}

.lan {
    width: 95%;
    margin-top: 15px;
    margin: 0 auto;
    padding-left: 5px;
    font-size: 0.9rem;
}

.lan view {
    padding-top: 5px;
    padding-bottom: 5px;
    height: 50px;
    line-height: 50px;
    width: 100%;
}

.fx {
    display: flex;
    text-align: left;
    border-bottom: 1px solid #ccc;
    font-size: 30rpx;
}

.lan view text {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.footer {
    display: flex;
    width: 100%;
    height: 50px;
    line-height: 50px;
    justify-content: space-around;
    position: fixed;
    bottom: 0;
    font-size: 30rpx;
}

.footer-l {
    flex: 5;
    background: #231b19;
    color: #ff862c;
    padding-left: 20px;
}

.footer-ll {
    flex: 5;
    background: #231b19;
    color: #ff862c;
    padding-left: 20px;
    display: flex;
    flex-direction: column;
}

.footer-ll text {
    height: 25px;
    line-height: 25px;
}

.footer-r {
    flex: 3;
    background: #ff862c;
    color: #ffffff;
    text-align: center;
}

.count {
    margin-top: 18px;
    padding-right: 13px;
}

.count_money,.count_yun {
    font-size: 18.5px;
    width: 100%;
    height: 20px;
    line-height: 20px;
    text-align: right;
    padding-right: 5px;
}

.count_money text {
    color: #ff862c;
    font-size: 0.9rem;
}

.count_yun text {
    color: #ccc;
    font-size: 0.7rem;
}

.dress {
    width: 95%;
    line-height: 28px;
    margin: 0 auto;
    border-bottom: 1px solid #ccc;
    display: flex;
    flex-flow: nowrap;
    justify-content: space-between;
    margin-bottom: 5px;
    color: #b5b5b5;
}

.dress_l,.dress_r {
    height: 50px;
    line-height: 50px;
}

.dress_r {
    display: flex;
}

.add_j {
    display: flex;
    position: absolute;
    background: #ff862c;
    right: 0rem;
    border-radius: 5px;
    width: 83px;
    justify-content: space-around;
    height: 60rpx;
    bottom: 10rpx;
}

.add_j image {
    width: 38rpx;
    height: 38rpx;
    margin-top: 0.3rem;
}

.add_j text {
    width: 50px;
    line-height: 64rpx;
    text-align: center;
}

.dish-item {
    width: 100%;
    padding: 16rpx 0;
    border-bottom: 1px solid #ccc;
    position: relative;
}

.black {
    color: #4c4c4c;
}

.people {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.dress .text {
    width: 75%;
    margin: 0 auto;
    font-size: 17px;
}

.dress_r image {
    width: 20px;
    height: 20px;
    vertical-align: middle;
    margin-top: 16px;
}

.gh {
    font-size: 17px;
}