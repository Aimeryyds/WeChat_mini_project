@import "../../__wuBaseWxss__/0.wxss";

page {
    background: #ffffff;
}

.form-box {
    padding-left: 10rpx;
    padding-right: 10rpx;
    position: relative;
}

.form-box view {
    height: 90rpx;
    width: 100%;
}

.form-box view text {
    display: inline-block;
    width: 20%;
    height: 90rpx;
    line-height: 90rpx;
    vertical-align: top;
    text-align: right;
}

.form-box input {
    display: inline-block;
    width: 80%;
    height: 86rpx;
    color: #999;
    padding: 0;
    font-size: 28rpx;
}

.form-box .input-placeholder {
    color: #aaa;
}

.form-box button {
    display: inline-block;
    width: 48%;
    margin-right: 4%;
    margin-top: 30rpx;
    font-size: 28rpx;
    background-color: #f56321;
}

.form-box button:last-child {
    margin-right: 0;
    color: #fff;
    background-color: #898989;
}