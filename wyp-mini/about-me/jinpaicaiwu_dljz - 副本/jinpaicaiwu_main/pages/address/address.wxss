@import "../../__wuBaseWxss__/0.wxss";

page {
    background: #ffffff;
}

.form-box {
    padding-left: 10rpx;
    padding-right: 10rpx;
    position: relative;
}

.form-box view {
    height: 90rpx;
    width: 100%;
}

.form-box view text {
    display: inline-block;
    width: 20%;
    height: 90rpx;
    line-height: 90rpx;
    vertical-align: top;
    text-align: right;
}

.form-box input {
    display: inline-block;
    width: 80%;
    height: 86rpx;
    color: #999;
    padding: 0;
    font-size: 28rpx;
}

.form-box .input-placeholder {
    color: #aaa;
}

.form-box button {
    display: inline-block;
    width: 48%;
    margin-right: 4%;
    margin-top: 30rpx;
    font-size: 28rpx;
    background-color: #f56321;
}

.form-box button:last-child {
    margin-right: 0;
    color: #fff;
    background-color: #898989;
}

.switch {
    float: right;
    line-height: 90rpx;
}

.picker-view {
    position: fixed;
    left: 0;
    bottom: 0;
}

.addr-item {
    line-height: 40px;
    text-align: center;
}

.pickerConfirm {
    position: fixed;
    z-index: 10000;
    left: 0;
    bottom: 500rpx;
    height: 80rpx;
    background-color: #fbf9fe;
    color: #586c94;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 0 40rpx;
    box-sizing: border-box;
}

.pickerConfirm text {
    height: 80rpx;
    line-height: 80rpx;
}

.choose-prov::after {
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-bottom: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    transform: rotate(45deg);
}