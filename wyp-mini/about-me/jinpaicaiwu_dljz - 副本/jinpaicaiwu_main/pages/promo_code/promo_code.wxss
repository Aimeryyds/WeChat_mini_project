@import "../../__wuBaseWxss__/0.wxss";

.promo {
    width: 100%;
    height: 100%;
    font-size: 24rpx;
}

.promo-title {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-bottom: 1rpx solid #e9e9e9;
    font-size: 32rpx;
}

.promo-nav {
    height: 75rpx;
    border-bottom: 1rpx solid #e9e9e9;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    text-align: center;
    line-height: 75rpx;
}

.promo-nav view {
    width: 50%;
    border-bottom: 6rpx solid transparent;
}

.promo-nav view.active {
    color: #c71f3b;
    border-bottom: 6rpx solid #c71f3b;
}

.promo-box {
    padding: 20rpx 10rpx;
}

.promo-list {
    margin-bottom: 10rpx;
    flex-direction: column;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1rpx solid rgb(225,225,225);
}

.help_query {
    padding: 0 3%;
    margin-left: 3%;
    border-radius: 20rpx;
    font-size: 0.9em;
    color: #fff;
    background-color: #c71f3b!important;
}

.coupon {
    width: 100%;
    height: 100%;
    font-size: 24rpx;
}

.coupon-title {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-bottom: 1rpx solid #e9e9e9;
    font-size: 32rpx;
}

.coupon-nav {
    height: 75rpx;
    border-bottom: 1rpx solid #e9e9e9;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    text-align: center;
    line-height: 75rpx;
}

.coupon-nav view {
    width: 33.3%;
    border-bottom: 6rpx solid transparent;
}

.coupon-box {
    padding: 20rpx 10rpx;
}

.coupon-list {
    margin-bottom: 10rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.coupon-list-left {
    width: 30%;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-content: center;
    color: #fff;
    height: 100rpx;
    padding: 10rpx 0;
}

.coupon-list-left.sub_color {
    background-color: #d7d7d7;
}

.coupon-list-left view:first-child {
    font-size: 28rpx;
}

.coupon-list-right {
    width: 70%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-content: flex-start;
    height: 100rpx;
    padding: 10rpx 0 10rpx 10rpx;
    position: relative;
    border: 1rpx solid #e9e9e9;
    border-left: none;
}

.coupon-status {
    position: absolute;
    right: 10rpx;
    bottom: 10rpx;
    padding: 6rpx 0;
    border: 1rpx solid #e9e9e9;
    border-radius: 10rpx;
    width: 120rpx;
    text-align: center;
}

.coupon-status.all {
    color: #fff;
}

.coupon-status.overdue {
    color: #fff;
    background-color: #bcbcbc;
}

.bg_color {
    background: #f5f5f5;
    height: 100%;
    position: absolute;
    width: 100%;
    color: #1a1a1a;
}

.coupon {
    display: flex;
    background: #ffffff;
    font-size: 28rpx;
    width: 95%;
    margin: 0 auto;
    border-radius: 15rpx;
    flex-direction: column;
    margin-top: 20rpx;
}

.coupon_l>view>text {
    height: 170rpx;
    line-height: 170rpx;
}

.coupon_l {
    flex: 2;
    height: 170rpx;
}

.coupon_c {
    flex: 8;
    height: 170rpx;
    border-left: 2rpx dashed #ececec;
    border-right: 2rpx dashed #ececec;
    padding-left: 20rpx;
}

.coupon_r {
    flex: 0.6;
    height: 170rpx;
    font-size: 28rpx;
    color: #ff6619;
    text-align: center;
    padding-left: 20rpx;
}

.money_b {
    font-size: 87.72rpx;
    color: #ff6619;
}

.money_t {
    font-size: 28rpx;
    color: #ff6619;
}

.t1 {
    font-size: 28rpx;
    color: #1a1a1a;
}

.t2 {
    font-size: 24.02rpx;
    color: #1a1a1a;
    display: flex;
}

.t1,.t2,.coupon_r {
    height: 42.5rpx;
    line-height: 42.5rpx;
}

.coupon_count {
    display: flex;
    padding: 20rpx;
}

