@import "../../__wuBaseWxss__/0.wxss";

.main {
    background-color: #ededed;
    overflow-x: hidden;
}

.confirm-box {
    background-color: #fff;
    padding: 20rpx 30rpx;
}

.ratings-top {
    display: flex;
    align-items: center;
}

.ratings-top>image {
    width: 80rpx;
    height: 80rpx;
    margin-right: 40rpx;
}

.ratings-top view image {
    width: 48rpx;
    height: 48rpx;
    margin-right: 10rpx;
}

.ratings-bottom {
    min-height: 400rpx;
}

.ratings-bottom textarea {
    width: 100%;
    min-height: 400rpx;
}

.ratings-btn {
    padding: 20rpx 30rpx 0 30rpx;
    background: #fff;
}

.icon-wujiaoxing2,.icon-wujiaoxing {
    font-size: 46rpx;
    display: inline-block;
    vertical-align: middle;
    color: #bbb;
    margin-right: 6rpx;
}