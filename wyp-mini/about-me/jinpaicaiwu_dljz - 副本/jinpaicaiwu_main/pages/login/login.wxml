<view class="container" style="padding: 0;">
    <view class="loginbox">
        <view class="usermotto">
            <view class="inline-block">
                <text class="iconfont icon-zhanghao loginicon"></text>
                <input bindinput="userNameInput" placeholder="请输入帐号" type="text"></input>
            </view>
            <view class="inline-block" style="border-top:none;">
                <text class="iconfont icon-mima loginicon"></text>
                <input bindinput="userPasswordInput" password="true" placeholder="请输入密码" type="text"></input>
            </view>
            <button bindtap="logIn" class="cart_bg_color2">登录</button>
            <button bindgetuserinfo="bindgetuserinfo" data-c_e_id="wx_text403f7ded" openType="getUserInfo">微信帐号自动注册</button>
            <view bindtap="backHome" class="backHome">
                <text class="iconfont icon-fanhui1"></text>
                <text>返回首页</text>
            </view>
        </view>
    </view>
</view>
