.header {
    background: #ffffff;
    height: 80px;
    width: 100%;
    display: flex;
    flex-wrap: nowrap;
}

.header-l {
    flex: 2;
    height: 80px;
    display: flex;
}

.header-l-img {
    width: 60px;
    height: 60px;
    margin-left: 5px;
    margin-top: 10px;
}

.header-l-img image {
    width: 60px;
    height: 60px;
    display: block;
}

.header-l-title {
    margin-left: 5px;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.header-l-title-t {
    font-size: 13px;
    color: #000000;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.header-l-title-b {
    font-size: 12px;
    color: #b5b5b5;
    font-family: "微软雅黑";
}

.header-l-title-b text {
    font-size: 17px;
    color: #ff0036;
}

.header-r {
    flex: 1;
    height: 80px;
}

.header-r text {
    color: #000;
    font-size: 12px;
    line-height: 128px;
    text-align: right;
}

.ul,.ul-textarea {
    border-top: 15px solid #f5f5f5;
}

.ul .li,.ul-textarea .li {
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    border-bottom: 1px solid #f5f5f5;
    height: 40px;
    line-height: 40px;
    color: #000;
    font-size: 13px;
    padding-left: 5px;
    padding-right: 5px;
}

.input-style {
    color: #d5d5d5;
    font-size: 12px;
}

.ul-textarea .error {
    color: #ff0036;
    background-color: #ffe4ea;
}

.ul-textarea .li input {
    height: 40px;
    line-height: 40px;
    flex: 3;
}

.ul-textarea .li>view {
    flex: 1;
}

.li-textarea {
    display: flex;
    flex-wrap: nowrap;
    border-bottom: 1px solid #f5f5f5;
    min-height: 60px;
    color: #000;
    font-size: 13px;
    padding-left: 5px;
    padding-right: 5px;
}

.ul-textarea .li-textarea>view {
    flex: 1;
    padding-top: 5px;
}

.ul-textarea .li-textarea textarea {
    flex: 3;
    padding-top: 5px;
    height: 65px;
}

.cur {
    background: #ffe4ea;
    height: 50px;
    line-height: 50px;
    text-align: center;
    width: 100%;
    border-top: 15px solid #f5f5f5;
    color: #ff0036;
    font-size: 11px;
    position: fixed;
    bottom: 45px;
    z-index: 3;
}

.footer {
    background: #fff;
    position: fixed;
    bottom: 0px;
    height: 45px;
    width: 100%;
    display: flex;
    flex-wrap: nowrap;
    font-size: 15px;
    z-index: 3;
}

.footer-index {
    flex: 1;
    height: 45px;
    padding-left: 5px;
    line-height: 45px;
    text-align: center;
}

.footer-index text {
    color: #ff0036;
}

.footer-btn {
    flex: 1;
    height: 45px;
    line-height: 45px;
    text-align: center;
    font-size: 13px;
}

.footer-btn button {
    color: #ffffff;
    background: #ff0036;
}

.ul-textarea .radio-box {
    flex: 3;
}

.ul-textarea .radio-box>label {
    margin-right: 30rpx;
}

.ul-textarea .picker {
    color: #b5b5b5;
}

.li_add {
    height: 40rpx;
    line-height: 40rpx;
}

.newcenter {
    display: flex;
    align-items: center;
}

.newadd {
    border: 1px solid #e5e5e5;
    padding: 5rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.newtxt {
    border-top: 1px solid #e5e5e5;
    padding: 5rpx;
    border-bottom: 1px solid #e5e5e5;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.confirm-pay {
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.confirm-box {
    font-size: 26rpx;
    background-color: #fff;
}

.delivery-top,.delivery-desc {
    position: relative;
    min-height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    padding-right: 10px;
}

.delivery-top1 {
    position: relative;
    min-height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    display: flex;
    align-items: center;
}

.delivery-top::after {
    position: absolute;
    right: 3rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #999;
    border-right: 4rpx solid #999;
    transform: rotate(45deg);
}

.border_bottom {
    border-bottom: 1px solid #f5f5f5;
}