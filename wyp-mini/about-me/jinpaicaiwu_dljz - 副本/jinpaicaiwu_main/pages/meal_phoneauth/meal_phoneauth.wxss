.header {
    width: 100%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    padding-top: 15px;
}

.button {
    display: flex;
    width: 90%;
    margin: 0 auto;
    margin-top: 35px;
}

.button button {
    width: 100%;
    height: 40px;
    line-height: 40px;
    border: none;
}

.button .btn-l {
    border-top-left-radius: 30px;
    border-bottom-left-radius: 30px;
    color: #ffffff;
    background: #ff862c;
}

.button .btn-r {
    border-top-right-radius: 30px;
    border-bottom-right-radius: 30px;
    color: #d2d2d2;
    background: #f6f6f6;
}

.input {
    display: flex;
    width: 90%;
    margin: 0 auto;
    margin-top: 25px;
}

.input image {
    width: 35px;
    height: 27px;
}

.input input {
    height: 35px;
    line-height: 35px;
    border-bottom: 1px solid #ccc;
    width: 100%;
}

.inputs {
    margin-top: 35px;
}

.green {
    width: 96%;
    margin: 0 auto;
    margin-top: 45px;
    height: 40px;
    line-height: 40px;
}

button::after {
    border: none;
}

.green button {
    border-radius: 50px;
    background: #ff7e09;
    color: #ffffff;
}

.input button {
    width: 100px;
    height: 29px;
    line-height: 29px;
    font-size: 13px;
    border-radius: 55px;
    border: 1px solid #ff7e09;
    color: #ff7e09;
    background: #ffffff;
}