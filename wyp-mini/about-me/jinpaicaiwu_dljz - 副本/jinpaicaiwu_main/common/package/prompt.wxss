.prompt-container {
    display: flex;
    height: 100%;
    align-items: center;
    justify-content: center;
    color: #959595;
}

.prompt-message {
    margin-top: 0;
    text-align: center;
}

.prompt-message .prompt-icon {
    width: 64px;
    height: 64px;
}

.prompt-message .prompt-title {
    font-size: 16px;
    font-weight: bold;
    color: #707070;
    margin: 2px 0;
}

.prompt-message .prompt-text {
    font-size: 12px;
    margin: 2px 0;
}

.prompt-message .prompt-button-area .prompt-button {
    font-size: 13px;
    line-height: 2;
}

.prompt-message .prompt-button-area .prompt-button {
    margin: 4px auto;
    width: 100px;
    padding: 2px 0;
    border: 1px solid #eee;
    color: #707070;
    background-color: #e5e5e5;
}

.prompt-message .prompt-button-area .prompt-button:after {
    display: none;
}