.wp_content {
    position: relative;
}

.wxinp {
    display: inline-block;
    background-image: none;
    border: 2rpx solid #d7dde4;
    cursor: text;
    overflow: visible;
}

.warn {
    position: absolute;
    z-index: 10;
}

.required {
    color: #f00;
    padding-left: 0rpx;
}

.required {
    position: absolute;
    top: 0rpx;
    right: 0rpx;
}

.labbox {
    display: flex;
    align-items: center;
}

.labtext {
    display: inline-block;
    padding-left: 10px;
    word-break: break-all;
}