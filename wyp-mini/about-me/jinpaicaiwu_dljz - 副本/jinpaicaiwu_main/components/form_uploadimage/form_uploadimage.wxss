.wp_content {
    position: relative;
}

.warn {
    position: absolute;
    z-index: 10;
}

.required {
    color: #f00;
    padding-left: 0rpx;
}

.required {
    position: absolute;
    top: 0rpx;
    right: 0rpx;
}

.upload-img {
    width: 100%;
    display: inline-block;
    border: 2rpx solid #ffff24;
    box-sizing: border-box;
    overflow: hidden;
    position: relative;
}

.upload-img .upload-img-info {
    padding-left: 8rpx;
    box-sizing: border-box;
    position: relative;
}

.upload-img .upload-img-info .upload-img-info-ope {
    position: absolute;
    right: 20rpx;
    color: #dbd9d5;
    font-size: 24rpx;
}

.upload-img .upload-img-btn {
    padding: 0 26rpx;
    box-sizing: border-box;
    position: absolute;
    top: 0;
    right: 0;
}