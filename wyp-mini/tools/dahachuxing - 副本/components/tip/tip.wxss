.tip-content {
    background-color: #fff;
    border-radius: 20rpx;
}

.pay-tip-header {
    text-align: center;
    color: #fff;
    font-size: 40rpx;
    padding: 30rpx 0;
}

.content-tip {
    margin: 0 50rpx 40rpx 50rpx;
    font-size: 30rpx;
    text-align: center;
}

.content-tip view {
    white-space: normal;
    color: red;
    line-height: 1.5;
}

.dialog-btn {
    display: flex;
    flex-direction: row;
    padding: 0 20rpx 30rpx 20rpx;
}

.pay-content {
    color: #585858;
    margin: 30rpx 0;
    text-align: center;
    font-size: 36rpx;
}

.zhezao {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    background: rgba(0,0,0,0.4);
    z-index: 999;
    padding-top: 200rpx;
}

.t_w {
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.tanchu_view {
    width: 320px;
    overflow: hidden;
    background-color: #fff;
    border-radius: 25rpx;
    padding: 0rpx;
}