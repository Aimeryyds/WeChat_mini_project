.guide-body {
    display: flex;
    flex-direction: column;
    width: 320px;
    height: 290px;
    align-items: center;
    justify-content: flex-end;
}

.guide-body image {
    width: 250px;
    height: 175px;
}

.image-border {
    padding: 5px;
    display: flex;
}

.slide-image {
    width: 320px;
    border-radius: 10rpx;
    height: 370px;
}

.body-text {
    margin-bottom: 40rpx;
    font-size: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    white-space: normal;
}

.guide-bottom {
    padding-top: 40rpx;
    display: flex;
    justify-content: center;
}

.guide-bottom view {
    padding: 20rpx 0;
    border-radius: 40rpx;
    width: 65%;
    text-align: center;
}

.zhezao {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    background: rgba(0,0,0,0.4);
    z-index: 999;
}

.t_w {
    position: absolute;
    top: 55%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.tanchu_view {
    width: 330px;
    overflow: hidden;
    padding: 0rpx;
}

.no-tip {
    font-size: 28rpx;
    display: flex;
    justify-content: flex-end;
}

.no-tip>view {
    display: flex;
    align-items: center;
    border-bottom-right-radius: 10rpx;
    border-bottom-left-radius: 50rpx;
    background-color: rgba(255,255,255,.4);
    padding: 0 5px 0 10px;
}