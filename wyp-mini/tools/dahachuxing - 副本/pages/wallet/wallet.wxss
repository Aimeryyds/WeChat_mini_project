.wallet-header {
    background-color: #fff;
    padding: 40rpx 70rpx;
}

.wallet-total {
    display: flex;
    justify-content: center;
    text-align: center;
    flex-direction: column;
}

.wallet-detail {
    display: flex;
    justify-content: space-between;
    text-align: center;
    margin-top: 50rpx;
}

.wallet-bottom {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 40rpx;
}

.charge-btn {
    padding: 20rpx 0;
    border-radius: 39rpx;
    background-color: #000;
    color: #fff;
    text-align: center;
    width: 90%;
    font-size: 36rpx;
}

.deposit {
    margin-top: 20rpx;
    text-align: center;
    font-size: 28rpx;
}

.deposit>.e {
    margin-top: 10rpx;
    color: #f00;
}

.icon {
    font-size: 80px;
    margin: 20rpx 0 40rpx 0;
}

.wallet-fixed {
    position: fixed;
    width: 100%;
    background-color: #fff;
    bottom: 0;
    left: 0;
    z-index: 999;
}

.wallet-fixed>view {
    text-align: center;
    border-radius: 50rpx;
    padding: 20rpx 0;
    margin: 30rpx auto;
    width: 90%;
    transition: all 200ms linear;
}

.wallet-input input {
    border-bottom: 2rpx solid #a0a0a0;
}

.page-mask {
    position: fixed;
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
    background-color: rgba(0,0,0,.5);
    z-index: 99;
}