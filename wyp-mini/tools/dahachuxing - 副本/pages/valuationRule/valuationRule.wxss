.order {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #fff;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
    box-shadow: 0 0 6rpx;
}

.order icon {
    margin: 20rpx 0;
}

.order text {
    margin-bottom: 30rpx;
    font-size: 36rpx;
}

.recharge {
    margin: 30rpx;
    color: #aaa;
}

.authMoney {
    display: flex;
    justify-content: space-between;
    margin-top: 120rpx;
    flex-direction: row;
}

.using {
    padding: 10rpx 20rpx 16rpx 10rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    background: #fff;
    margin: 20rpx;
    border-radius: 10rpx;
    box-shadow: 0 0 10rpx rgba(0,0,0,.3);
}

.using .text {
    font-size: 28rpx;
    padding: 10rpx 10rpx 0 10rpx;
}

.orderData {
    overflow: hidden;
    margin-top: 20rpx;
}

.order label {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.using label {
    font-size: 36rpx;
}

button {
    margin-top: 20rpx;
    width: 90%;
}

.detail {
    color: #1aad19;
    font-size: 14px;
}