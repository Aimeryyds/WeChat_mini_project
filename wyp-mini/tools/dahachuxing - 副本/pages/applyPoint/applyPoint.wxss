.inputContent {
    border: 0.5rpx solid #b3b3b3;
    width: 87%;
    margin-left: 30rpx;
    margin-top: 20rpx;
    border-radius: 10rpx;
    padding: 20rpx;
    height: 200rpx;
    background-color: #fff;
}

.tip {
    color: #a0a0a0;
    margin-top: 20rpx;
    text-align: center;
    font-size: 28rpx;
}

.point-image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-100%);
    display: flex;
    z-index: 999;
}

.load {
    width: 8rpx;
    height: 8rpx;
    border-radius: 4rpx;
    background: #81be48;
    float: left;
    margin: 0 6rpx;
    animation: load linear 1s infinite;
}

.load:nth-child(1) {
    animation-delay: 0s;
}

.load:nth-child(2) {
    animation-delay: 0.15s;
}

.load:nth-child(3) {
    animation-delay: 0.3s;
}

.load:nth-child(4) {
    animation-delay: 0.45s;
}

.load:nth-child(5) {
    animation-delay: 0.6s;
}

@keyframes load {
    0%,60%,100% {
        transform: scale(1);
    }

    30% {
        transform: scale(2.5);
    }
}

@-webkit-keyframes load {
    0%,60%,100% {
        transform: scale(1);
    }

    30% {
        transform: scale(2.5);
    }
}

.location-load {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    background-color: rgba(240,240,240,.8);
    width: 96%;
    height: 80%;
    display: flex;
    justify-content: center;
    align-items: center;
}