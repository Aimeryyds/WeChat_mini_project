.order {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #fff;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
    box-shadow: 0 0 6rpx;
}

.order icon {
    margin: 20rpx 0;
}

.order view {
    margin-bottom: 30rpx;
    font-size: 36rpx;
}

.recharge {
    margin: 30rpx;
    color: #aaa;
}

.authMoney {
    display: flex;
    justify-content: space-between;
    margin-top: 120rpx;
    flex-direction: row;
}

.using {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #fff;
    margin: 20rpx;
    padding: 30rpx;
    box-shadow: 0 0 10rpx rgba(0,0,0,.3);
    border-radius: 10rpx;
}

.orderData {
    overflow: hidden;
    margin-top: 20rpx;
}

.order label {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.using label image {
    height: 55rpx;
    width: 55rpx;
}

button {
    margin-top: 20rpx;
    width: 85%;
}

.detail {
    font-size: 14px;
}