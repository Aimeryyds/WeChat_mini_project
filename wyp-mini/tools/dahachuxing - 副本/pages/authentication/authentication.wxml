<form bindreset="formReset" bindsubmit="formSubmit">
    <view class="shopApply">
        <view class="input" style="margin-top:40rpx">
            <label>真实姓名</label>
            <input focus="true" maxlength="50" name="name" placeholder="请输入真实姓名" style="width:70%"></input>
        </view>
        <view class="input">
            <label>身份证号</label>
            <input maxlength="18" name="idNO" placeholder="请输入真实的身份证号码" style="width:70%" type="idcard"></input>
        </view>
        <button formType="submit" style="margin-top:30px;width:85%;background-color:{{mainColor}};color: {{textColor}}" type="primary">立即认证 </button>
    </view>
</form>
