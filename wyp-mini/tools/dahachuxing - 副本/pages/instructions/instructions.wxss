page {
    background-color: #fff;
}

.container {
    margin: 60rpx 40rpx 0 40rpx;
}

.content-item {
    display: flex;
    flex-direction: row;
    border-top: 4rpx solid #AACCBB;
}

.content-item image {
    height: 100rpx;
    width: 100rpx;
}

.content-item>view:first-child {
    flex: 1;
    justify-content: center;
    align-items: center;
    display: flex;
}

.content-text {
    flex: 2;
    display: flex;
    flex-direction: column;
    margin: 40rpx 0 30rpx 0;
}

.content-text text:first-child {
    margin-bottom: 10rpx;
    font-size: 40rpx;
    font-weight: 700;
}

.content-text text:last-child {
    padding-right: 40rpx;
    font-size: 26rpx;
    font-weight: 600;
    color: #7a7a7a;
}