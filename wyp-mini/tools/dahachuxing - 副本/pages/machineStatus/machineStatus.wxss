.bg {
    width: 100%;
    display: flex;
    color: #fff;
}

.bg .content {
    position: relative;
    width: 100%;
    margin: 70rpx 40rpx 0 40rpx;
    background-size: 100% 100%;
    display: flex;
    flex-direction: column;
    border-radius: 40rpx;
    box-shadow: 0 0 12rpx rgba(0,0,0,.6);
}

.status-title {
    margin-top: 8vw;
    font-size: 48rpx;
    display: flex;
    justify-content: center;
}

.status-state {
    margin-top: 9vw;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.status-state>view {
    display: flex;
    flex-direction: column;
}

.status-state>view:first-child {
    margin-left: 18rpx;
}

.status-state text:first-child {
    font-size: 56rpx;
}

.status-state text:last-child {
    font-size: 28rpx;
}

.status-machine {
    margin-top: 28vw;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.status-btn {
    margin-top: 8vw;
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 130rpx;
    font-size: 46rpx;
    border-bottom-left-radius: 40rpx;
    border-bottom-right-radius: 40rpx;
    background-color: #fff;
}

.icon-area {
    display: flex;
    justify-content: space-around;
    position: absolute;
    top: 350rpx;
    width: 100%;
}

.content-icon {
    width: 160rpx;
}

.bottom-status {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx 0 40rpx 0;
}

.bottom-status>view {
    margin-top: 10rpx;
}

.bottom-soc {
    display: flex;
    justify-items: center;
    align-items: center;
}

.bottom-soc>image {
    height: 40rpx;
    width: 50rpx;
}