.main {
    overflow: hidden;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
    box-shadow: 0 0 10rpx rgba(0,0,0,1);
    height: 300rpx;
}

.userinfo-avatar {
    width: 150rpx;
    height: 150rpx;
    margin: 30rpx 0 20rpx 0;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0 0 10rpx rgba(0,0,0,.6);
}

.userinfo-nickname {
    color: #fff;
    font-size: 36rpx;
    margin-bottom: 30rpx;
    height: 50rpx;
}

.authMoney {
    display: flex;
    justify-content: space-between;
    margin-top: 120rpx;
    flex-direction: row;
}

.money {
    overflow: hidden;
    margin-top: 20rpx;
}

.money label {
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: #fff;
    margin: 16rpx 20rpx;
    box-shadow: 0 0 5rpx rgba(0,0,0,.3);
    padding: 25rpx 30rpx;
}

.money radio {
    display: flex;
}

button {
    margin-top: 30rpx;
    width: 90%;
    border-radius: 50rpx;
}

label text {
    margin-left: 25rpx;
}

.balance {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    background-color: #fff;
    padding: 0 20rpx 30rpx 20rpx;
}

.balance-item {
    box-sizing: border-box;
    width: 45%;
    height: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    box-shadow: 0 10rpx 6rpx rgba(100,100,100,.1);
    margin-top: 30rpx;
    border-radius: 20rpx;
    flex-direction: column;
    border: 2rpx solid #efefef;
}

.balance-item-long {
    width: 95%!important;
}

.balance-item-money {
    font-size: 36rpx;
}

.BIM-input {
    color: #3D3D3D;
}

.BIT-input {
    font-size: 28rpx;
}

.BIM-label {
    font-weight: 700;
}

.balance-item-tip {
    font-size: 26rpx;
    color: #B9B9B9;
}