.historical-track {
    height: 100%;
}

.historical-track>map {
    height: 99%;
    width: 100%;
}

.card {
    position: absolute;
    bottom: 0;
    width: 100%;
}

.card-item {
    background-color: #fff;
    box-shadow: 0 0 12rpx rgba(0,0,0,.8);
    border-radius: 10rpx;
}

.card-item>view {
    display: flex;
    margin-top: 10rpx;
    font-size: 28rpx;
    color: #666;
}

.card-item text {
    font-size: 50rpx;
    color: #333;
}

.line {
    height: 4rpx;
    width: 20%;
    margin-left: 20px;
}

.zhezao {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    background: rgba(0,0,0,0.4);
    z-index: 999;
}

.questionnaire {
    position: absolute;
    bottom: 0;
    width: 100%;
    background-color: #fff;
}

.questionnaire-title {
    padding: 20rpx 0;
    text-align: center;
    background-color: #f0f0f0;
    font-size: 34rpx;
    color: #ff6622;
}

.questionnaire-body {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}

.questionnaire-body>view {
    width: 45%;
    border: 2rpx solid #888;
    text-align: center;
    border-radius: 50rpx;
    padding: 20rpx 0;
    margin-top: 30rpx;
}