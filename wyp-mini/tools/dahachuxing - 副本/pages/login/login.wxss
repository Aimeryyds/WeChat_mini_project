.loginForm {
    font-size: 16px;
    width: 100%;
    color: #1f2d3d;
}

.bg image {
    width: 100%;
    height: 334rpx;
    margin-bottom: 20px;
}

.inputView {
    border-top: 1px solid #f1f1f1;
    border-bottom: 1px solid #f1f1f1;
    background: #fff;
    font-size: 28rpx;
}

.phone {
    display: flex;
    flex-direction: row;
    margin: 10px 0px 10px 15px;
    justify-content: space-around;
    align-items: center;
}

.split {
    border-top: 1px solid #f1f1f1;
}

.authCode {
    display: flex;
    flex-direction: row;
    margin: 10px 0px 10px 15px;
    justify-content: space-around;
    flex-wrap: nowrap;
    align-items: center;
}

input {
    width: 300rpx;
}

.phone text {
    width: 150rpx;
}

.authCode text:first-child {
    width: 150rpx;
}

text {
    line-height: 50rpx;
}

.authCode text:last-child {
    color: #3cc51f;
    width: 250rpx;
    text-align: center;
}

.authCode input {
    border-right: 1px solid #f1f1f1;
}

.submit {
    margin: 20px 15px;
}

.login-check {
    margin: 40rpx 40rpx;
    display: flex;
    flex-direction: row;
    font-size: 30rpx;
    color: #423535;
}

.login-check>view:first-child {
    flex: 1;
}

.login-check>view:last-child {
    flex: 1;
    display: flex;
    justify-content: flex-end;
}

.btn-group {
    display: flex;
    flex-direction: column;
}

.btn-group>button {
    flex: 1;
}

.btn-group>button:first-child {
    width: 100%;
}

.btn-group>button:last-child {
    margin-left: 10rpx;
}

.agreement {
    font-size: 24rpx;
}

.agreement>text {
    color: rgb(41,73,255);
}

.dialog-background {
    position: absolute;
    height: 100%;
    top: 0;
    left: 0;
}

.error-dialog {
    width: 550rpx;
    position: absolute;
    left: 50%;
    top: 38%;
    transform: translate(-50%,-50%) scale(.8);
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 0 12rpx rgba(0,0,0,.8);
    padding: 20rpx;
    transition: all .3s ease;
}

.tip-title {
    text-align: center;
    border-bottom: 2rpx solid #f0f0f0;
    padding-bottom: 10rpx;
    font-size: 32rpx;
}

.tip-body {
    margin: 20rpx 0 30rpx 0;
    display: flex;
    flex-direction: column;
    text-align: center;
    font-size: 28rpx;
    color: #888;
}

.error-dialog button {
    width: 40%;
}