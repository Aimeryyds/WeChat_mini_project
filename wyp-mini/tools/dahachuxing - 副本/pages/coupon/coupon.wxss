.coupon {
    padding: 0 20rpx;
    overflow: hidden;
}

.coupon-item {
    box-shadow: 0 0 6rpx rgba(255,255,255,.6);
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
    background-color: #fff;
    border-bottom: 10rpx solid;
    position: relative;
    margin-top: 20rpx;
}

.coupon-title {
    padding: 20rpx 40rpx;
    display: flex;
    align-items: center;
}

.coupon-money {
    margin-right: 30rpx;
}

.coupon-suggest {
    display: flex;
    flex-direction: column;
}

.coupon-footer {
    border-top: 2rpx solid #d0d0d0;
    padding: 10rpx 40rpx;
    font-size: 28rpx;
    color: #a0a0a0;
}

.mask {
    position: absolute;
    width: 100%;
    height: 105%;
    background-color: rgba(255,255,255,.5);
}

.mask image {
    height: 100rpx;
    width: 110rpx;
    position: absolute;
    right: 0;
}

.coupon-bottom {
    position: fixed;
    width: 100%;
    background-color: #fff;
    bottom: 0;
    left: 0;
    z-index: 999;
}

.coupon-bottom>view {
    text-align: center;
    border-radius: 50rpx;
    padding: 20rpx 0;
    margin: 30rpx auto;
    width: 90%;
    transition: all 200ms linear;
}

.coupon-input input {
    border-bottom: 2rpx solid #000;
}

.page-mask {
    position: fixed;
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
    background-color: rgba(0,0,0,.5);
    z-index: 99;
}

.none {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    color: #a0a0a0;
    font-size: 40rpx;
}