.input {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    height: 100rpx;
    margin-top: 20rpx;
    background: #fff;
    width: 100%;
}

.shopApply {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #edf0f2;
    font-family: "微软雅黑";
    font-size: 16px;
}

.delete-btn {
    position: relative;
    bottom: 0;
    left: 0;
    width: 134rpx;
    height: 30px;
    font-size: 12px;
    margin-right: 7px;
    color: white;
    background: rgba(0,0,0,0.5);
    text-align: center;
    line-height: 30px;
}

.textArea {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background: #fff;
    width: 100%;
    margin-top: 20rpx;
    height: 100rpx;
}

.textArea testArea {
    height: 60rpx;
}

.checkbox {
    font-size: 28rpx;
    display: flex;
    align-items: center;
}

.checkbox checkbox {
    transform: scale(0.7);
}