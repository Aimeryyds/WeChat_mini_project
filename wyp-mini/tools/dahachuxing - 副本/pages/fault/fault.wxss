.inputContent {
    width: 87%;
    margin-left: 30rpx;
    margin-top: 30rpx;
    border-radius: 10rpx;
    padding: 20rpx;
    height: 200rpx;
    background-color: #f5f5f5;
}

.input-title {
    background-color: #f5f5f5;
    margin: 10rpx 20rpx;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
}

.input-title image {
    height: 60rpx;
    width: 60rpx;
}

.fault-type {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin-top: 36rpx;
}

.fault-type>view {
    padding: 10rpx 0;
    width: 30%;
    border: 2rpx solid #b3b3b3;
    border-radius: 50rpx;
    background-color: #fafafa;
    color: #555;
    font-size: 28rpx;
    text-align: center;
}

.fault-header {
    padding: 30rpx 36rpx;
    background-color: #fff;
    box-shadow: 0 2rpx 4rpx rgba(0,0,0,.2);
}

.fault-body {
    padding: 16rpx 36rpx 30rpx 36rpx;
    background-color: #fff;
    box-shadow: 0 2rpx 4rpx rgba(0,0,0,.2);
    margin-top: 20rpx;
}

.fault-remark {
    overflow: hidden;
    margin-top: 20rpx;
    background-color: #fff;
    padding-bottom: 30rpx;
    box-shadow: 0 2rpx 4rpx rgba(0,0,0,.2);
}

.fault-type>.active {
    border-color: #81be48;
    color: #81be48;
}