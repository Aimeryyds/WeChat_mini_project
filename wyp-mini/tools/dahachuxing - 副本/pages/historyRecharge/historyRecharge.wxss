.historyRecord {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background: #fff;
    margin: 20rpx 15rpx;
    padding: 20rpx 30rpx;
    box-shadow: 0 0 5rpx rgba(0,0,0,.3);
    border-radius: 10rpx;
}

.historyRecord .label {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.historyRecord .label1 {
    display: flex;
    flex-direction: column;
    align-items: start;
    padding-left: 20rpx;
    flex: 1;
}

.historyRecordWrap {
}

.label image {
    height: 55rpx;
    width: 55rpx;
}

.label .text1 {
    font-size: 15px;
    color: #40AB52;
}

.label .text2 {
    font-size: 13px;
    color: #888;
}

.label2 image {
    height: 55rpx;
    width: 55rpx;
    padding-right: 10rpx;
}

.label2 {
    display: flex;
}

.noRecord {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    color: #888;
    font-size: 36rpx;
}