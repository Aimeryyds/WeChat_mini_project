.slide-image {
    width: 100%;
    height: 100%;
    border-radius: 4px;
}

.flex-wrp {
    position: relative;
    width: 100%;
    height: 680rpx;
}

.flex-item {
    width: 100%;
    height: 696rpx;
    border-radius: 4px;
    position: absolute;
    left: 0;
    top: 0;
    transition: .3s all;
    opacity: 0;
}

.flex-item .img {
    width: 100%;
    height: 100%;
}

.flex-item.on {
    z-index: 1;
    opacity: 1;
}

.btns {
    position: absolute;
    left: 0;
    top: auto;
    bottom: 11rpx;
    z-index: 10;
    width: 100%;
    text-align: center;
}

.btns .ib {
    display: inline-block;
}

.btn-item {
    width: 14rpx;
    height: 14rpx;
    border-radius: 50%;
    background: rgba(0,0,0,.2);
    display: inline-block;
    margin-right: 10px;
}

.btn-item:last-child {
    margin-right: 0;
}

.btn-item.on {
    background: rgba(0,0,0,.7);
}