page {
    overflow: hidden;
}

.ad-swiper,.slide-image {
    position: absolute;
    height: 100%;
    width: 100%;
}

.bot-con {
    position: fixed;
    bottom: 7%;
    border-radius: 20px;
    font-size: 14px;
    color: #ffffff;
    left: 38%;
    height: 30px;
    line-height: 30px;
    text-align: center;
    width: 85px;
    background: #fccf00;
}

.box {
    height: 2.7rem;
    width: 100%;
    margin: 2rem 0;
    overflow: hidden;
    position: relative;
}

.input {
    height: 3.9rem;
    outline: none;
    border: none;
    width: 200%;
    margin-left: -300px;
}

.rInput {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    pointer-events: none;
    background: white;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.rInput text {
    pointer-events: none;
    display: block;
    width: 13%;
    height: 100%;
    border-bottom: 1px solid lightgray;
    text-align: center;
    line-height: 3.4rem;
    font-size: 2rem;
}