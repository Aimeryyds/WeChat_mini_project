.carList {
    display: flex;
    margin: 0 10px;
}

.l-cont {
    flex: 1;
}

.card {
    height: 100px;
    background-color: rgba(0,0,0,0.4);
    margin: 1rem 0;
    border-radius: 0.5rem;
    padding: 0.5rem 1rem;
    position: relative;
    border: solid 1px #e4e4e4;
}

.types,.type {
    font-size: 16px;
}

.timer,.time {
    font-size: 13px;
    color: gray;
}

.timer {
    color: gray!important;
}

.restcount {
    font-size: 0.8rem;
    color: gray;
    height: 1rem;
    margin-bottom: 0.5rem;
}

.num {
    font-size: 13px;
    color: white;
    position: absolute;
    bottom: 10px;
    left: 1rem;
}

.statu {
    color: white;
    margin: 10px 0 10px;
    font-size: 12px;
    background-color: gray;
    padding: 4px;
    border-radius: 6px;
    display: inline-block;
}

.txt {
    height: 100px;
    margin-top: 10px;
    padding-left: 10px;
    padding-top: 10px;
}

.time {
    color: #000000;
}

.intime {
    color: #ffffff;
}

.outtime {
    background: none;
}