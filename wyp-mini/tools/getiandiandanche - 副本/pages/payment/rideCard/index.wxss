.top {
    width: 100%;
    height: 70px;
    background: #fff;
    position: absolute;
    left: 0;
    top: 0;
}

.top .img-view {
    width: 60px;
    height: 70px;
    position: absolute;
    left: 0;
    top: 0;
}

.top image {
    width: 25px;
    height: 25px;
    position: absolute;
    left: 20px;
    top: 28px;
}

.h1-title {
    text-align: center;
    margin-top: 25px;
}

.top .my {
    position: absolute;
    top: 0px;
    left: 70px;
    height: 70px;
    box-sizing: border-box;
    padding-top: 25px;
    padding-left: 10px;
    padding-right: 10px;
}

.box {
    background: #f1f1f1;
    padding-left: 0px;
    padding-right: 0px;
    right: 0;
    bottom: 0;
    overflow: auto;
    padding-top: 70px;
}

.item-box {
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.item {
    position: relative;
}

.item .info {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 0 20rpx;
    color: #765600;
}

.item .title {
    overflow: hidden;
    margin-top: 20rpx;
}

.item .title .l {
    float: left;
}

.item .title .r {
    float: right;
}

.item .text {
    overflow: hidden;
    margin-top: 30rpx;
}

.item .text .l {
    float: left;
}

.item .text .r {
    float: right;
    text-decoration: line-through;
}

image {
    width: 100%;
    height: 234rpx;
}

.shuoming {
    text-align: center;
    color: #fccf00;
    font-size: 13px;
    background: #fff;
    padding: 20rpx 0;
}

.shouminginfo {
    font-size: 13px;
    color: #666;
    background: #fff;
    padding: 0 20rpx;
    padding-bottom: 20rpx;
}

.pay {
    text-align: center;
}

.pay .text {
    text-align: center;
    color: #666;
    font-size: 13px;
    padding: 20rpx 0;
}

.pay-btn {
    width: 80%;
    line-height: 45px;
    text-align: center;
    background: #12b7f5;
    color: #fff;
    border-radius: 6px;
    display: inline-block;
    margin-bottom: 40rpx;
}