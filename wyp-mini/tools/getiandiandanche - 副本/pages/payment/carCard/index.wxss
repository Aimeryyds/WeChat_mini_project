page {
    background: #efeff4;
}

.nav {
    width: 100%;
    height: 35px;
    display: flex;
    flex-direction: row;
    background: #000;
    margin-top: 0px;
    border-bottom: 1px solid #e4e4e4;
}

.default {
    line-height: 35px;
    text-align: center;
    flex: 1;
    color: #fff;
    font-weight: bold;
    font-size: 28rpx;
    background: #000;
}

.red {
    line-height: 35px;
    text-align: center;
    color: #fff;
    flex: 1;
    font-weight: bold;
    font-size: 28rpx;
    background: #000;
    border-bottom: 2px solid rgb(245,118,51);
}

.show {
    display: block;
    padding: 20px;
}

.hidden {
    display: none;
    padding: 20px;
}

.content {
    width: 90%;
    margin: 4px auto 0;
    position: relative;
}

.card,.cards {
    padding: 1rem;
    border-radius: 0.5rem;
    background: rgb(245,118,51);
    height: 7rem;
    color: white;
}

.card text,.cards text {
    display: block;
}

.type {
    font-size: 15px;
}

.num {
    text-align: right;
    margin-top: 45px;
    font-size: 15px;
}

.time {
    text-align: right;
    margin-top: 0.5rem;
    font-size: 14px;
    color: black;
}

.times {
    margin-top: 0.5rem;
    font-size: 0.9rem;
    color: black;
}

.txt text {
    font-size: 12px;
    color: darkgray;
    padding-left: 1rem;
    display: block;
}

.year-list {
    padding: 15px;
    overflow: hidden;
}

.placeholder {
    padding: 0 10px;
    background-color: #ffffff;
    height: 50px;
    text-align: center;
    color: #cfcfcf;
    border: solid 1px #ebebeb;
    border-radius: 6px;
}

.select {
    border: solid 1px rgb(245,118,51)!important;
    color: #666666;
}

.pl-text {
    display: block;
    font-size: 18px;
}

.sm {
    font-size: 12px;
    color: #0195ff;
    line-height: 50px;
}

.f-mar {
    margin: 5px;
    border: solid 1px #ebebeb;
    width: 45%;
    float: left;
    border-radius: 6px;
}

.pays {
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: white;
    width: 100%;
    overflow: hidden;
    height: 50px;
}

.moneys {
    float: left;
    line-height: 50px;
    margin-left: .5rem;
    font-size: 18px;
}

.buys {
    float: right;
    text-align: center;
    line-height: 38px;
    border-radius: 5px;
    background-color: rgb(245,118,51);
    color: white;
    font-size: 16px;
    padding: 0px 25px;
    margin-right: 17px;
    margin-top: 6px;
}