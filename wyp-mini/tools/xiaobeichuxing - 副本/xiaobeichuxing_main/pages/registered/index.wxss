.log-cont {
    margin: 15px;
    margin-top: 50px;
    border-top: solid 1px #e4e4e4;
}

.username,.password {
    clear: both;
    height: 45px;
    line-height: 45px;
    border-bottom: solid 1px #e4e4e4;
    font-size: 14px;
    color: #666;
}

.icon {
    display: block;
    float: left;
}

.username input,.password input {
    height: 45px;
    line-height: 45px;
    padding-left: 5px;
}

.username {
    border-top: solid 1px #e4e4e4;
}

.fot-btn {
    margin-top: 40px;
}

.section_gap {
    font-size: 13px;
    margin-top: 10px;
    height: 45px;
    line-height: 45px;
}

.loginBtn {
    margin: 10px auto 5px;
    display: block;
    font-size: 16px;
    color: white;
    background: rgb(238,89,9);
    border-radius: 10px;
    padding: 1px 0;
}

.bot-fot {
    display: flex;
}

.bot-fot view {
    flex: 1;
    text-align: center;
    font-size: 12px;
    color: #999;
}

.icon image {
    width: 25px;
    height: 25px;
    display: block;
    margin-top: 9px;
}

.con-yzm {
    position: absolute;
    top: 58px;
    right: 12PX;
    z-index: 999999;
    color: rgb(48,48,230);
}

.hide {
    display: none;
}

.show {
    display: block;
}

.con-yzm button {
    border: none;
    background: none;
    font-size: 12px;
    color: #666;
}