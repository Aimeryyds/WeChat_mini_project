page {
    overflow: hidden;
}

.log-cont {
    margin: 15px;
    margin-top: 25px;
}

.username,.password {
    clear: both;
    height: 55px;
    line-height: 55px;
    border-bottom: solid 1px #e4e4e4;
    font-size: 18px;
    color: #333;
}

.icon {
    display: block;
    float: left;
}

.username input,.password input {
    height: 55px;
    line-height: 55px;
    padding-left: 5px;
}

.username {
}

.fot-btn {
    margin-top: 40px;
}

.section_gap {
    font-size: 13px;
    margin-top: 10px;
    height: 45px;
    line-height: 45px;
}

.loginBtn {
    margin: 10px auto 5px;
    display: block;
    font-size: 16px;
    color: white;
    background: #03a9f4;
    border-radius: 20px;
    padding: 1px 0;
}

.bot-fot {
    display: flex;
    height: 40px;
    line-height: 40px;
}

.bot-fot view {
    flex: 1;
    text-align: center;
    font-size: 13px;
    color: #999;
}

.icon image {
    width: 25px;
    height: 25px;
    display: block;
    margin-top: 9px;
}

.tit {
    padding: 20px;
    font-weight: 400;
    font-size: 22px;
}

.u-tit {
    font-size: 16px;
    color: #666;
    padding-left: 5px;
}