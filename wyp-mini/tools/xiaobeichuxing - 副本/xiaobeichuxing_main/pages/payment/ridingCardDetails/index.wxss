.top {
    width: 100%;
    height: 70px;
    background: #fff;
    position: absolute;
    left: 0;
    top: 0;
}

.top .img-view {
    width: 20%;
    height: 70px;
    position: absolute;
    left: 0;
    top: 0;
}

.top image {
    width: 25px;
    height: 25px;
    position: absolute;
    left: 20px;
    top: 25px;
}

.h1-title {
    text-align: center;
    line-height: 70px;
}

.page {
    background: #f1f2f2;
    position: absolute;
    width: 100%;
    height: 100%;
}

.content {
    position: relative;
    width: 100%;
    height: 259rpx;
}

.content image {
    width: 685rpx;
    height: 259rpx;
    margin: 42rpx 33rpx 32rpx;
    display: block;
    z-index: -999;
}

.content .left {
    position: absolute;
    height: 100%;
    width: 50%;
    color: #fff;
    bottom: 0;
    left: 67rpx;
    top: 0;
    padding-top: 47rpx;
    box-sizing: border-box;
}

.down {
    line-height: 58rpx;
    color: #333;
    position: absolute;
    bottom: 13rpx;
    left: 0;
    font-size: 30rpx;
}

.content .right {
    position: absolute;
    height: 100%;
    width: 50%;
    bottom: 0;
    right: 0;
}

.area {
    font-size: 28rpx;
    font-weight: 500;
    color: #fff;
    position: absolute;
    top: 53rpx;
    right: 59rpx;
}

.discount {
    color: #fff;
    font-size: 36rpx;
    position: absolute;
    right: 59rpx;
    top: 90rpx;
    font-weight: bold;
}

.btn {
    text-align: center;
    line-height: 58rpx;
    color: #333;
    position: absolute;
    bottom: 13rpx;
    right: 56rpx;
    font-size: 30rpx;
}

.details {
    width: 686rpx;
    margin-top: 30rpx;
    margin-left: 32rpx;
}

.introduce {
    padding: 30rpx 32rpx;
    border-radius: 20rpx;
    background-color: #fff;
}

.know {
    color: #666666;
    font-size: 26rpx;
}