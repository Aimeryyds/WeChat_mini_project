page {
    background: #f2f2f2;
}

.balance {
    overflow: hidden;
    text-align: center;
}

.balance text {
    display: block;
    padding-top: 2rem;
    font-size: 18px;
}

.balance .balance-button {
    padding: 0.5rem 7rem;
    font-size: 0.9rem;
    border-radius: 0.5rem;
    margin-top: 2rem;
}

#balances {
    font-size: 22px;
    color: rgb(245,118,51);
    padding-top: 0;
    padding-bottom: 0;
    height: 4rem;
    line-height: 4rem;
}

#givebalance {
    border-bottom: 1px solid rgb(230,230,230);
}

.balance .givebalance {
    padding-top: 0;
    color: rgb(289,89,9);
    font-size: 0.8rem;
    padding-bottom: 2rem;
}

.givebalance:hover {
    color: rgb(289,89,9);
}

#balance_recharge {
    display: block;
    padding: 0.6rem 0;
    background: rgb(245,118,51);
    border-radius: 0.5rem;
    margin-top: 2rem;
    color: white;
}

.wallet-list {
    width: 707rpx;
    background: #fff;
    display: flex;
    flex-direction: column;
    margin-left: 10px;
    margin-top: 19rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.bgc {
    margin-top: 19rpx;
    height: 262rpx;
    border-radius: 10rpx;
    position: relative;
    margin-left: 10rpx;
    margin-right: 10rpx;
}

.bgc image {
    display: block;
    width: 100%;
    height: 100%;
    z-index: -999;
}

.bgc .left {
    position: absolute;
    display: flex;
    flex-direction: column;
    bottom: 0;
    width: 50%;
    text-align: center;
    top: 80rpx;
    color: #FFFFFF;
}

.bgc .right {
    position: absolute;
    bottom: 0;
    width: 50%;
    top: 89rpx;
    left: 500rpx;
}

.right .buy {
    width: 150rpx;
    height: 58rpx;
    border: 1px solid #fff;
    border-radius: 29rpx;
    color: #fff;
    text-align: center;
}

.bgc .left {
    float: left;
}

.list-nav {
    display: flex;
    height: 108rpx;
    line-height: 108rpx;
    border-bottom: solid 1px #e4e4e4;
}

.list-nav:last-child {
    border-color: #fff;
}

.list-left,.list-right {
    flex: 1;
    font-size: 14px;
}

list-left .img {
    width: 38rpx;
    height: 38rpx;
}

.list-left {
    padding-left: 3px;
}

.list-right {
    text-align: right;
    padding-right: 0px;
}

.little {
    font-size: 0.6rem;
    color: rgb(245,118,51);
}

.title1 {
    color: #333;
    font-size: 28rpx;
    margin-left: 18rpx;
}

.title2 {
    color: #999;
    font-size: 28rpx;
}

.navigator-hover {
    background: #fff;
}

.pay-btn {
    border: solid 1px #e4e4e4;
    padding: 4px 8px;
    border-radius: 5px;
    font-size: 12px;
}

.text {
    text-align: center;
    font-size: 0.8rem;
    color: gray;
    display: block;
    margin: 2rem auto;
}

.ye08 {
    padding-left: 3px;
    color: #333;
    font-size: 26px;
}

.adsize08 {
    font-size: 16px;
    color: #333;
}

.ad-r-img {
    width: 16px;
    height: 16px;
    margin-top: 36rpx;
    display: block;
    float: right;
    margin-left: 3px;
}

.ad-clsdd15 {
    font-size: 12px;
    color: #03a9f4;
}