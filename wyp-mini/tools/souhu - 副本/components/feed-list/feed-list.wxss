.ad {
    position: relative;
}

.ad::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 3.5vw;
    box-sizing: border-box;
    width: 93vw;
    height: 1rpx;
    border-bottom: 1rpx solid rgba(232,232,232,0.8);
}