.scroll-wrapper {
    height: 100%;
    -webkit-overflow-scrolling: touch;
}

.click-list-wrapper {
    height: 100%;
}

.loading {
    padding: 20rpx 0;
    text-align: center;
    font-size: 30rpx;
    color: #a4a4a4;
}

.first-loading,.fail-loading {
    height: 100%;
}

.loading-image {
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 300rpx;
    height: 60rpx;
}

.fail-image {
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 456rpx;
    height: 442rpx;
    background-size: 100% 100%;
}