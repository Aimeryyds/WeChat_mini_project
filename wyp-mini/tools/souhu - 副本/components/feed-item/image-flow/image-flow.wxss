.item {
    display: flex;
    flex-direction: column;
    padding-bottom: 20rpx;
}

.cover {
    width: 100%;
}

.title {
    font-size: 30rpx;
    padding: 20rpx;
}

.meta-info {
    display: flex;
    justify-content: space-between;
    padding: 0 20rpx;
}

.author-info {
    display: flex;
}

.author-info .avatar {
    width: 36rpx;
    height: 36rpx;
    border-radius: 100%;
    display: flex;
    margin-right: 10rpx;
}

.author-info .name {
    font-size: 24rpx;
}