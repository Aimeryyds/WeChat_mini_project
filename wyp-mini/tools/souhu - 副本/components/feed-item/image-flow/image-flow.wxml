<view class="item" wx:if="{{imageSrc}}">
    <image class="cover" mode="widthFix" src="{{'https:'+config.images[0]}}"></image>
    <text class="title">{{config.title}}</text>
    <view class="meta-info">
        <view class="author-info">
            <image class="avatar" src="{{config.authorPic}}"></image>
            <text class="name">{{config.authorName}}</text>
        </view>
    </view>
</view>
