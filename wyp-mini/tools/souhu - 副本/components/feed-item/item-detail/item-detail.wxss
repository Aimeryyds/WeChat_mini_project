.footer {
    display: flex;
    align-items: center;
    height: 28rpx;
    font-size: 24rpx;
    color: #aaaaaa;
}

.top-tag {
    margin-right: 16rpx;
    padding: 2rpx;
    border: 2rpx solid #ffaeb0;
    border-radius: 4rpx;
    line-height: 24rpx;
    color: #ff3240;
    box-sizing: border-box;
}

.author {
    max-width: 120rpx;
    margin-right: 14rpx;
    line-height: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.time {
    margin-right: 14rpx;
    line-height: 24rpx;
}

.article-pv {
    display: flex;
    align-items: center;
}

.icon-eye {
    width: 22rpx;
    height: 18rpx;
    margin-right: 4rpx;
}