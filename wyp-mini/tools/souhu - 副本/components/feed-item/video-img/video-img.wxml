<view class="feed-item-wrapper big-pic-wrapper">
    <view class="picture">
        <image class="img-wrapper" src="{{posterImage}}"></image>
        <view class="play-icon"></view>
        <view class="title">{{config.title}}</view>
    </view>
    <view class="author">
        <image class="author-avatar" src="{{authorImage}}"></image>
        <view class="author-name">{{config.authorName}}</view>
    </view>
</view>
