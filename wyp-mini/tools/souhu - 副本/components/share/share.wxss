.share-btn {
    position: fixed;
    right: 36rpx;
    bottom: 60rpx;
    z-index: 999;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 92rpx;
    height: 92rpx;
    border: solid 1rpx #FCDD9A;
    border-radius: 46rpx;
    font-size: 28rpx;
    color: #FFB619;
    background: #FFF5DE;
    padding: 0;
}

.share-btn:after {
    border: none;
}

.mask {
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 1000;
    background: rgba(0,0,0,0.8);
}

.container {
    width: 580rpx;
    border-radius: 12rpx;
    margin-bottom: 30%;
    background: white;
}

.title {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 60rpx 0;
}

.title image {
    width: 34rpx;
    height: 34rpx;
    margin-right: 10rpx;
}

.title text {
    font-size: 34rpx;
    color: #2b2b2b;
}

.content {
    border-radius: 6rpx;
    padding: 34rpx 28rpx;
    margin-bottom: 40rpx;
    margin: 0 24rpx 50rpx;
    font-size: 30rpx;
    word-break: break-all;
    background: #F0F1F2;
    color: #656566;
}

.content-title {
    font-weight: 600;
    color: #29292A;
}

.confirm-button {
    display: flex;
    align-items: center;
    justify-content: center;
    border-top: solid 1rpx #F0F1F2;
    height: 100rpx;
    font-size: 32rpx;
    color: #FFD200;
}

.confirm-button::after {
    display: none;
}