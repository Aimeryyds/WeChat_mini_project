.my-user {
    padding: 30rpx 0;
}

.my-user-logo {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    overflow: hidden;
}

.my-user-img {
    display: block;
    width: 100%;
    height: 100%;
}

.my-user-name {
    margin-left: 30rpx;
    font-size: 60rpx;
    line-height: 60rpx;
}

.my-user-real {
    margin-left: 20rpx;
    width: 62rpx;
    height: 32rpx;
    line-height: 30rpx;
    text-align: center;
    border: 1px solid #f56000;
    border-radius: 6rpx;
    color: #f56000;
    font-size: 22rpx;
}

.my-option {
    position: relative;
}

.my-option-group {
    padding: 32rpx 0;
}

.my-option .option-tips {
    z-index: 1;
    position: absolute;
    top: -9rpx;
    left: 54rpx;
    padding: 0 12rpx;
    border-radius: 18rpx;
    color: #fff;
    background-color: #F65000;
    height: 36rpx;
    line-height: 36rpx;
    font-size: 24rpx;
}

.my-option .option-icon {
    width: 74rpx;
    height: 74rpx;
    line-height: 74rpx;
    position: relative;
    color: #333;
    font-size: 50rpx;
    text-align: center;
}

.my-option .option-icon-small {
    font-size: 44rpx;
}

.my-option .option-title {
    font-size: 24rpx;
    color: #666;
}