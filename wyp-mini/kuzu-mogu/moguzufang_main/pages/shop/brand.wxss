image.banner {
    height: 320rpx;
    width: 100%;
}

.content-brand {
    position: absolute;
    width: 100%;
    top: 0;
    left: 0;
    height: 320rpx;
    background: rgba(0,0,0,0.3);
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

.content-brand .brand-page-img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin: 0 20rpx 0 40rpx;
}

.content-brand .title {
    -webkit-box-flex: 1;
    flex: 1;
}

.content-brand .title .h1 {
    font-size: 30rpx;
    font-weight: 500;
    color: #fff;
}

.content-brand .brand-page-button {
    color: #fff;
    border-radius: 30rpx;
    padding: 0 30rpx;
    white-space: nowrap;
    font-size: 24rpx;
    line-height: 60rpx;
    height: 60rpx;
    margin-right: 40rpx;
    border: 2rpx solid #fff;
    margin-top: 20rpx;
    opacity: 0.8;
}

.description-expand {
    position: fixed;
    z-index: 101;
    background: rgba(0,0,0,0.8);
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    color: #fff;
    padding: 0 40rpx;
    font-size: 30rpx;
    line-height: 1.8;
}

.description-expand .mgic-chahao {
    font-size: 38rpx;
    margin-top: 20rpx;
    text-align: center;
}

.description-expand .brand-page-title1 {
    font-size: 36rpx;
    font-weight: 900;
    text-align: center;
    margin-bottom: 20rpx;
}