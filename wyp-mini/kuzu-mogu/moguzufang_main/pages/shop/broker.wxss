image.banner {
    height: 322rpx;
    width: 100%;
}

.content-brand {
    position: absolute;
    width: 100%;
    top: 0;
    left: 0;
    height: 322rpx;
    background: rgba(0,0,0,0.3);
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

.content-brand .brand-page-img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin: 0 20rpx 0 40rpx;
}

.content-brand .title {
    -webkit-box-flex: 1;
    flex: 1;
}

.content-brand .title .h1 {
    font-size: 30rpx;
    font-weight: 500;
    color: #fff;
}

.content-brand .brand-page-button {
    color: #fff;
    border-radius: 30rpx;
    padding: 0 30rpx;
    white-space: nowrap;
    font-size: 24rpx;
    line-height: 60rpx;
    height: 60rpx;
    margin-right: 40rpx;
    border: 2rpx solid #fff;
    margin-top: 20rpx;
    opacity: 0.8;
}

.description-expand {
    position: fixed;
    z-index: 10;
    background: rgba(0,0,0,0.8);
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    color: #fff;
    padding: 0 40rpx;
    font-size: 30rpx;
    line-height: 1.8;
}

.description-expand .mgic-chahao {
    font-size: 38rpx;
    margin-top: 20rpx;
    text-align: center;
}

.description-expand .brand-page-title1 {
    font-size: 36rpx;
    font-weight: 900;
    text-align: center;
    margin-bottom: 20rpx;
}

.card {
    width: 670rpx;
    margin: -40rpx auto 20rpx;
    box-shadow: #ccc 4rpx 4rpx 20rpx;
    padding: 20rpx;
    border-radius: 5rpx;
    background: #fff;
    position: relative;
    z-index: 3;
    font-size: 28rpx;
}

.card .broker-page-house {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}

.card .broker-page-address {
    padding-top: 20rpx;
}

.card .text-gray {
    color: #646464;
}

.card .text-gray-2 {
    color: #999;
}

.footer {
    width: 100%;
    height: 108rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    background-color: #fff;
    text-align: center;
    font-size: 32rpx;
    color: #333333;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    padding: 16rpx 42rpx;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
}

.footer>view {
    height: 76rpx;
    line-height: 76rpx;
    border-radius: 44rpx;
    -webkit-box-flex: 1;
    flex: auto;
}

.footer .first {
    -webkit-box-flex: 1;
    flex: 1;
    border: 1rpx solid #999999;
    margin-right: 20rpx;
}

.footer .second {
    -webkit-box-flex: 1;
    flex: 1;
    background: linear-gradient(126deg,#ffb817 0%,#ff7000 100%);
    color: #fff;
}

.footer .disabled {
    background-color: #ddd;
    color: #999;
}