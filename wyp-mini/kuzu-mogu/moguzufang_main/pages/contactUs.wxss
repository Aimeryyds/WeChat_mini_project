.title {
    font-size: 17px;
    font-weight: bold;
    color: #333;
    padding: 15px 0;
}

.contact-block {
    width: 105px;
    height: 108px;
    background: white;
    box-shadow: 0px 1px 6px 0px rgba(184,184,184,0.5);
    border-radius: 5px;
    display: inline-block;
    margin-right: 18px;
    text-align: center;
    font-size: 12px;
    position: relative;
    text-decoration: none;
    color: #333;
}

.contact-block image {
    width: 28px;
    height: 25px;
    display: block;
    margin: 0 auto 15px;
}

.align-middle {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
}

.renter-part {
    border-bottom: 1px solid #f1f1f1;
}

.renter-part,.merchant-part {
    padding: 0 15px 25px;
}

.footer-part {
    position: fixed;
    bottom: 15px;
    left: 0;
    text-align: center;
    font-size: 12px;
    color: #4A4A4A;
    width: 100%;
}

.icon-chat {
    display: inline-block;
    width: 11px;
    height: 13px;
    background-image: url(https://assets.mgzf.com/appimg/5686925aac7530bd4703c0af7fa8d3d2.png);
    background-size: contain;
    margin-right: 5px;
}

.red-text {
    color: #FF680E;
}