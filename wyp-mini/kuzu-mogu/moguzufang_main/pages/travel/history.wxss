.empty-container {
    position: relative;
}

.empty-box {
    width: 100%;
    margin: 400rpx auto auto auto;
    text-align: center;
}

.empty-box .tips {
    color: #666;
    font-size: 30rpx;
}

.history-container {
    position: relative;
    padding: 20rpx;
}

.history-container .history-title {
    font-size: 60rpx;
    font-weight: 900;
}

.history-container .subtitle {
    font-size: 28rpx;
}

.history-ul {
    padding-left: 30rpx;
    border-left: 2rpx solid #DBDBDB;
    margin-top: 30rpx;
}

.history-ul .history-li {
    top: -30rpx;
    position: relative;
    margin-bottom: 50rpx;
}

.history-ul .history-li .title {
    line-height: 80rpx;
}

.history-ul .history-li .title ._i {
    width: 20rpx;
    height: 20rpx;
    padding: 3rpx;
    background: #fff;
    position: absolute;
    left: -42.2rpx;
    top: 24rpx;
}

.history-ul .history-li .title ._i:before {
    content: " ";
    display: block;
    height: 100%;
    border-radius: 50%;
    background: #DBDBDB;
}

.history-ul .history-li .title .date-text {
    color: #666666;
    margin-left: 30rpx;
}

.history-ul .history-li .area-house {
    color: #333;
    display: block;
}

.history-ul .history-li .area-house .price {
    color: #F65000;
    margin-top: 6rpx;
    display: block;
    font-size: 30rpx;
}

.history-ul .history-li .area-house .price .price-unit {
    font-size: 22rpx;
}

.history-ul .history-li .area-house .image-box {
    float: left;
    width: 120rpx;
    height: 120rpx;
    margin-right: 10rpx;
    background-size: cover;
}

.history-ul .history-li .area-house ._i {
    float: right;
    margin-left: 10rpx;
    margin-top: 10rpx;
}

.history-ul .history-li .area-house .area-house-title {
    font-size: 30rpx;
}

.history-ul .history-li .area-house .area-house-subtitle {
    margin-top: 6rpx;
    color: #666666;
    font-size: 24rpx;
}

.history-ul .history-li .footer {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    margin-top: 20rpx;
    -webkit-box-pack: end;
    -ms-flex-pack: end;
    justify-content: flex-end;
}

.history-ul .history-li .footer .footer-btn {
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-radius: 5rpx;
    font-size: 24rpx;
    border: 1px solid #F65000;
}

.history-ul .history-li .footer .footer-btn:first-child {
    background: #fff;
    color: #F65000;
}

.text-ellipsis {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.noMore {
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    color: #666;
    padding: 40rpx 0;
}