.loginPage {
    padding-left: 60rpx;
    padding-right: 60rpx;
}

.loginPage .text-right {
    text-align: right;
}

.loginPage .text-left {
    text-align: left;
}

.loginPage .text-dark {
    color: #333;
}

.loginPage .text-orange {
    color: #ff7000;
}

.loginPage .text-lightgray {
    color: #999;
}

.loginPage .login-form {
    margin-top: 100rpx;
}

.loginPage .login-title {
    margin-top: 66rpx;
    font-size: 48rpx;
}

.loginPage .login-subtitle {
    font-size: 28rpx;
}

.loginPage .login-form .form-item {
    margin-top: 14rpx;
    padding: 24rpx 0;
    line-height: 36rpx;
}

.loginPage .login-form .form-item .right-item {
    width: 190rpx;
    text-align: center;
    line-height: 52rpx;
    font-size: 28rpx;
}

.loginPage .login-form .form-item .item-img {
    width: 120rpx;
    height: 52rpx;
}

.loginPage .login-form .form-submit {
    margin-top: 80rpx;
}

.loginPage .login-form .form-item-desc {
    margin-top: 20rpx;
    text-align: center;
    height: 78rpx;
    line-height: 78rpx;
    color: #666;
}

.loginPage .login-form .form-item-desc .text-desc {
    font-size: 24rpx;
}

.loginPage .login-form .form-item-desc .form-line {
    display: inline-block;
    vertical-align: middle;
    width: 1rpx;
    height: 26rpx;
    margin: 0 25rpx;
}

.loginPage .login-form .form-item-desc .desc-text {
    display: inline-block;
    vertical-align: middle;
    width: 180rpx;
    text-align: right;
}

.loginPage .login-form .form-item-desc .desc-text:last-child {
    text-align: left;
}

.loginPage .login-bottom {
    position: absolute;
    left: 0;
    bottom: 10rpx;
    width: 100%;
    text-align: center;
    font-size: 20rpx;
    line-height: 28rpx;
}