page {
    background: #f8f8f8;
}

.order .room {
    margin: 0 10rpx 20rpx 10rpx;
    background: #fff;
    padding: 40rpx 20rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}

.order .room image {
    width: 218rpx;
    height: 140rpx;
    margin-right: 20rpx;
}

.order .room .h1,.order .room .h2 {
    font-size: 28rpx;
    line-height: 1.2;
}

.order .room .h2 {
    color: #e63939;
    margin-top: 40rpx;
}

.ul {
    background: #fff;
    padding: 0 30rpx;
}

.ul .li {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    line-height: 3.5;
    border-bottom: 1rpx solid #ccc;
}

.ul .li .left {
    width: 150rpx;
    color: #666;
    font-size: 24rpx;
}

.ul .li .left::before {
    content: "*";
    color: #f56c6c;
    margin-right: 5rpx;
}

.ul .li .right {
    font-size: 24rpx;
    -webkit-box-flex: 1;
    flex: 1;
    text-align: right;
}

.ul .li .right ._input {
    height: 100%;
}

.ul ._textarea {
    font-size: 24rpx;
    padding: 20rpx 5rpx;
}

._button.submit {
    background: #e6394d;
    margin: 40rpx 30rpx;
    color: #fff;
}

.dateTimePick {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.2);
}

.dateTimePick .dateTimePick-content {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 580rpx;
}

.dateTimePick .dateTimePick-title {
    line-height: 3;
    text-align: center;
    font-size: 32rpx;
    background: #f8f8f8;
}

.dateTimePick picker-view {
    height: 400rpx;
    font-size: 28rpx;
    width: 100%;
    padding: 0 10rpx;
    background: #fff;
}

.dateTimePick ._button {
    height: 90rpx;
    width: 100%;
    color: #fff;
    background: #f94f00;
}