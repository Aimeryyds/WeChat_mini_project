page {
    background-color: #fff;
}

.login-wrap {
    height: 100%;
    background-image: url("https://assets.mgzf.com/appimg/115b2005904de8db6689c61ab4e3a209.png");
    background-position: top left;
    background-repeat: no-repeat;
    background-size: 100%;
}

.login-wrap .logo {
    height: 408rpx;
    background-image: url("https://assets.mgzf.com/appimg/e46fef4aee79ace23649b1af2c902eee.png");
    background-size: cover;
}

.login-wrap .logo>view {
    padding-top: 172rpx;
    padding-left: 60rpx;
}

.login-wrap .logo text {
    color: #fff;
    font-size: 56rpx;
    vertical-align: middle;
}

.login-wrap .logo .mg-logo {
    display: inline-block;
    width: 56rpx;
    height: 56rpx;
    background-image: url("https://assets.mgzf.com/appimg/e87d4f2f3f12ba76421ff45fe98ea123.png");
    background-size: cover;
    vertical-align: middle;
    margin-right: 20rpx;
}

.login-wrap .input-wrap {
    padding: 60rpx;
}

.login-wrap .input-wrap .tip-wrap {
    position: relative;
}

.login-wrap .input-wrap .error-red {
    font-size: 24rpx;
    color: #ff4949;
    position: absolute;
    bottom: -38rpx;
}

.login-wrap .input-wrap ._button {
    outline: none;
}

.login-wrap .input-wrap .input-tel {
    font-size: 32rpx;
    padding: 20rpx 10rpx;
    margin: 40rpx 0;
    border-radius: 0rpx;
    width: 100%;
    border: none;
    outline: none;
    border-bottom: 1rpx solid #ccc;
}

.login-wrap .input-wrap .input-tel::-webkit-input-placeholder {
    color: #A9A9A9;
}

.login-wrap .input-wrap .input-tel::-moz-placeholder {
    color: #A9A9A9;
}

.login-wrap .input-wrap .input-tel:-ms-input-placeholder {
    color: #A9A9A9;
}

.login-wrap .input-wrap .input-tel::-ms-input-placeholder {
    color: #A9A9A9;
}

.login-wrap .input-wrap .input-tel::placeholder {
    color: #A9A9A9;
}

.login-wrap .input-wrap .send-message {
    position: absolute;
    right: 6px;
    bottom: 16rpx;
    border: none;
    background-color: #fff;
    padding: 0;
    cursor: pointer;
    font-size: 32rpx;
    color: #666;
    padding: 10rpx 0;
    z-index: 30;
}

.login-wrap .input-wrap .submit-btn {
    display: block;
    margin-top: 70rpx;
    width: 100%;
    height: 92rpx;
    background-color: #2e8af1;
    border: none;
    border-radius: 8rpx;
    color: #fff;
    text-align: center;
    line-height: 92rpx;
    font-size: 32rpx;
    outline: none;
    cursor: pointer;
    -webkit-appearance: none;
}

.login-wrap .input-wrap .submit-btn.submit-disabled {
    background-color: rgba(46,138,241,0.7);
}