.filter {
    top: 0;
    position: sticky;
    z-index: 1;
}

.filter.fixed {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1;
}

.filter.fixed::before {
    content: "";
    display: block;
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.2);
    z-index: 0;
}

.filter .ul {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    padding: 25rpx 0;
    font-size: 26rpx;
    border-bottom: 1rpx solid #e5e5e5;
    background: #fff;
    position: relative;
    z-index: 1;
}

.filter .ul .li {
    -webkit-box-flex: 1;
    flex: 1;
    text-align: center;
}

.filter .ul .li:after {
    content: " ";
    display: inline-block;
    vertical-align: middle;
    background: url("https://assets.mgzf.com/appimg/dc3d5a3b499474ee94bce72347c56c39.svg");
    width: 16rpx;
    height: 10rpx;
    background-size: 100%;
    background-repeat: no-repeat;
    margin-left: 10rpx;
}

.filter .ul .li.selected {
    color: #f65000;
}

.filter .ul .li.selected:after {
    background-image: url("https://assets.mgzf.com/appimg/36385b7da3252d0d7f025c9bbe5ddab0.svg");
}

.filter .ul .li.active:after {
    transform: rotate(-180deg);
}

.filter .ul .li+.li {
    border-left: 1px solid #ccc;
}

.filter .dl {
    position: absolute;
    width: 100%;
    background: #fff;
    max-height: 800rpx;
    overflow: auto;
    z-index: 1;
}

.filter .dl .dd {
    border-bottom: 1rpx solid #e5e5e5;
    line-height: 3;
    text-align: center;
    font-size: 26rpx;
}

.filter .dl .dd.selected {
    color: #f65000;
}

