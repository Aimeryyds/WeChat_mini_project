.noqa {
    width: 100%;
    height: 100%;
    text-align: center;
    overflow-x: hidden;
    overflow-y: auto;
}

.question-info {
    width: 100%;
    position: relative;
}

.moreMess {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    text-align: center;
    padding-top: 20rpx;
    color: #999;
    clear: both;
}

.moreImg {
    width: 20rpx;
    height: 20rpx;
    margin-right: 10rpx;
}

.question-item {
    margin-top: 30rpx;
    padding: 0 26rpx;
}

.qa-title {
    line-height: 40rpx;
    font-size: 28rpx;
}

.question-user {
    float: left;
    color: #0078d7;
}

.question-time {
    font-size: 26rpx;
    color: #b3b3b3;
    float: right;
}

.qa-main {
    margin-top: 16rpx;
    line-height: 36rpx;
    font-size: 28rpx;
    clear: both;
    text-align: left;
    color: #4d4d4d;
    word-break: break-all;
}

.voice-ans {
    color: #ef5045;
    margin-left: 10rpx;
}

.qa-ask {
    width: 100%;
    position: relative;
}

.ask-main {
    line-height: 36rpx;
    padding-right: 70rpx;
    margin-top: 6rpx;
    color: #999999;
    font-size: 28rpx;
    text-align: left;
    word-break: break-all;
}

.ask-image {
    width: 26rpx;
    height: 16rpx;
    line-height: 16rpx;
    position: absolute;
    padding: 10rpx;
    right: 10rpx;
    top: 0;
}

.chat-bot {
    width: 100%;
    height: 99rpx;
    border-top: 1rpx solid #d7d7d7;
    background-color: #eff0f3;
    position: fixed;
    bottom: 0;
    z-index: 10;
}

.chat-user {
    width: 90rpx;
    height: 99rpx;
    line-height: 99rpx;
    text-align: center;
    float: left;
}

.onlyMe {
    width: 64rpx;
    height: 64rpx;
    margin: 16rpx auto 0 auto;
}

.chat-input {
    width: 514rpx;
    height: 39rpx;
    border-radius: 10rpx;
    border: 2rpx solid #d4d4d4;
    background-color: #fff;
    margin-top: 13rpx;
    text-align: left;
    padding: 14rpx 0 14rpx 20rpx;
    float: left;
}

.chat-send {
    width: 64rpx;
    height: 64rpx;
    float: left;
    margin: 16rpx 0 0 30rpx;
}

.noQa-img {
    width: 80px;
    height: 45px;
    position: relative;
    top: 40%;
    left: 50%;
    margin-left: -40px;
    margin-top: -20px;
    overflow: hidden;
}

.noQa-img image {
    width: 100%;
    height: 100%;
    display: block;
}

.noppt-text {
    color: #b7b7b7;
    font-size: 24rpx;
    height: 40rpx;
    display: block;
}

.noQa-text {
    color: #b7b7b7;
    font-size: 24rpx;
    height: 40rpx;
    margin-top: -40rpx;
}

.unchat {
    height: 70rpx;
    line-height: 70rpx;
    width: 100%;
    text-align: center;
    background-color: #e6e6e6;
    color: #333;
    font-size: 22rpx;
    position: fixed;
    bottom: 100rpx;
    z-index: 10;
}