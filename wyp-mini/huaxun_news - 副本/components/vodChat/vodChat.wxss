.tright {
    text-align: right;
}

.right {
    float: right;
}

.chatMain {
    width: 100%;
    height: 100%;
}

.chat-info {
    width: 100%;
    padding-bottom: 60rpx;
    position: relative;
}

.chat-item {
    padding: 0 20rpx 0 40rpx;
    height: auto;
    clear: both;
}

.topBorder {
    height: 36rpx;
    border-left: 1px solid #e0e0e0;
}

.midBorder {
    height: 36rpx;
    line-height: 36rpx;
    padding-left: 34rpx;
    position: relative;
}

.item-icon {
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    top: 0;
    left: -17rpx;
}

.item-user {
    font-size: 28rpx;
    float: left;
}

.others {
    color: #0078d7;
}

.sysme {
    color: #999999;
}

.otherto {
    color: #0078d7;
    text-decoration: underline;
}

.item-time {
    font-size: 26rpx;
    color: #b3b3b3;
    float: right;
}

.botBorder {
    line-height: 44rpx;
    padding-left: 34rpx;
    border-left: 1px solid #e0e0e0;
    float: left;
    font-size: 28rpx;
    word-break: break-all;
    text-align: left;
    color: #4d4d4d;
}

.moreMess {
    font-size: 24rpx;
    color: #999;
    line-height: 24rpx;
    padding-top: 30rpx;
    margin-left: 40rpx;
    text-align: center;
    border-left: 1px solid #e0e0e0;
    clear: both;
}

.moreImg {
    width: 20rpx;
    height: 20rpx;
    margin-right: 10rpx;
}

.point {
    color: #0078d7;
}

.nochat {
    width: 100%;
    height: 100%;
    text-align: center;
    overflow-x: hidden;
    overflow-y: auto;
}

.noChat-img {
    width: 80px;
    height: 45px;
    position: relative;
    top: 40%;
    left: 50%;
    margin-left: -40px;
    margin-top: -20px;
    overflow: hidden;
}

.noChat-img image {
    width: 100%;
    height: 100%;
    display: block;
}

.noChat-text {
    color: #b7b7b7;
    font-size: 24rpx;
    height: 40rpx;
    margin-top: -40rpx;
}