.shade {
    background-color: #ccc;
    opacity: .6;
    position: absolute;
    display: none;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.show {
    display: block;
}

.handle-bar {
    padding: 0 15px;
    height: 80rpx;
    background-color: #eee;
}

.confirm {
    text-align: right;
}

.selector-area {
    height: 600rpx;
    width: 100%;
    background-color: #e6ebf3;
    position: absolute;
    bottom: 0;
}

.selector {
    text-align: center;
}

.picker {
    font-size: 32rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.actived {
    color: blue;
}

.area-selector {
    height: 520rpx;
}

.white-shade {
    position: absolute;
    width: 100%;
    height: 60rpx;
    background-color: #fff;
    left: 0;
    margin-top: 240rpx;
}