page {
    background: #f4f4f4;
    min-height: 100%;
}

.container {
    background: #f4f4f4;
    padding-top: 10rpx;
}

.fb-body {
    margin-top: 20rpx;
}

.fb-body .label {
    padding-top: 7rpx;
    color: #7f7f7f;
    font-size: 13px;
    padding-left: 30rpx;
    padding-right: 30rpx;
    margin-bottom: 5rpx;
}

.fb-body-content {
    padding-left: 30rpx;
    background: white;
    height: 120rpx;
}

.fb-body .content {
    color: #333;
    line-height: 40rpx;
    font-size: 28rpx;
}

.fb-body .label text {
    color: red;
}

.fb-mobile {
    margin-bottom: 10rpx;
}

.fb-mobile .label text {
    color: red;
}

.fb-mobile .label {
    padding-top: 7rpx;
    color: #7f7f7f;
    font-size: 13px;
    padding-left: 30rpx;
    padding-right: 30rpx;
    margin-bottom: 0rpx;
}

.fb-mobile .mobile-box {
    height: 74rpx;
    color: #333;
    padding-left: 30rpx;
    padding-right: 30rpx;
    font-size: 14px;
    background: #fff;
}

.fb-mobile .mobile {
    height: 74rpx;
    color: #333;
    line-height: 74rpx;
}

.fb-mobile .choice radio-group,.fb-mobile .choice checkbox-group {
    display: flex;
    justify-content: left;
    flex-wrap: wrap;
}

.fb-mobile .choice radio-group view,.choice checkbox-group view {
    width: 32%;
    margin-top: 5rpx;
    margin-bottom: 5rpx;
}

.fb-btn {
    color: #fff;
    font-family: 微软雅黑;
    margin-top: 15rpx;
    width: 95%;
    background-color: #2d7dee;
    margin-bottom: 10rpx;
}

.form-desc {
    font-size: 14px;
    width: 95%;
    margin: 10rpx auto;
    color: #7f7f7f;
    padding-left: 20rpx;
    line-height: 35rpx;
}

.choice label {
    margin-right: 10rpx;
}

.choice {
    font-size: 13px;
    background: #fff;
    padding: 17rpx 30rpx;
    color: #7f7f7f;
}

textarea {
    width: 97%;
    height: 120rpx;
}

page {
    position: relative;
    background: #f1f0f8;
}

.top {
    position: relative;
    width: 100%;
    height: 320rpx;
    margin-bottom: 20rpx;
}

.order_input {
    width: 95%;
    background: white;
    margin: 0 auto;
}

.order_item {
    display: flex;
    position: relative;
    border-bottom: 1px solid #efefef;
    padding: 20rpx 0rpx;
}

.order_title {
    color: #555;
    display: flex;
    width: 100%;
}

.order_title .title {
    width: 35%;
    text-indent: 10rpx;
    font-size: 14px;
}

.order_title .info {
    width: 100%;
}

.info .radio-group,.info .checkbox-group {
    font-size: 14px;
}

.item_radio {
    padding-top: 0rpx;
}

.item_radio .order_title .title {
    padding: 25rpx 0rpx;
}

.item_radio .info radio-group,.item_radio .info checkbox-group {
    padding-top: 20rpx;
    display: flex;
    justify-content: left;
    flex-wrap: wrap;
}

.item_radio .info radio-group view,.item_radio .info checkbox-group view {
    width: 50%;
    margin-top: 5rpx;
}

.order_content .info {
    height: 150rpx;
}

.order_content .content {
    font-size: 16px;
}

.title text {
    color: red;
}