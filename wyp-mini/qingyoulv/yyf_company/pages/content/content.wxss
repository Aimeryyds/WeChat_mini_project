@import "../../../wxParse/wxParse.wxss";

.wxParse-img {
    margin-bottom: -15rpx;
}

.container {
    width: 100%;
    background: white;
    position: relative;
}

.title {
    font-size: 16px;
    margin: 30rpx 0 0 10px;
    font-weight: bold;
}

.date {
    font-size: 12px;
    color: #999;
    margin: 15rpx 0 10rpx 10px;
}

.video {
    width: 0rpx;
    height: 0rpx;
    display: none;
}

.change {
    width: 100%;
    height: 225px;
    display: block;
}

.show {
    display: inline-block;
}

.para_div {
    height: 50rpx;
    margin: 10px 10px;
    line-height: 50rpx;
    display: flex;
    justify-content: space-between;
}

.right,.left {
    display: flex;
}

.right {
    margin-top: 3rpx;
}

.left image {
    width: 45rpx;
    height: 40rpx;
    margin-right: 5rpx;
    margin-top: 1px;
}

.right image {
    width: 35rpx;
    height: 35rpx;
    margin-right: 10rpx;
}

.r_text {
    font-size: 14px;
    color: #707070;
    margin-top: -3rpx;
    padding-top: 0px;
}

.comment_div {
    height: 80rpx;
    width: 100%;
    display: flex;
}

.left_input {
    width: 80%;
    border-bottom: 1px solid #ccc;
}

.upvote_layout {
    display: flex;
    margin-left: 25rpx;
}

.upvote_layout image {
    width: 35rpx;
    height: 35rpx;
}

.upvote_layout .r_text {
    margin-top: -1rpx;
}

.shade {
    width: 100%;
    height: 100%;
    position: fixed;
    background: #333;
    z-index: 77;
    top: 0;
    left: 0;
    opacity: 0.8;
}

.read_layout {
    display: flex;
    margin-top: 2rpx;
}

.layout {
    width: 90%;
    height: 55%;
    top: 20%;
    left: 5%;
    position: fixed;
    z-index: 99;
    background: white;
    border-radius: 10rpx;
}

.blank_div {
    width: 100%;
    height: 35rpx;
}

.star-image {
    position: absolute;
    margin-left: 100rpx;
    width: 100rpx;
    height: 100rpx;
    src: "../../resource/images/no-star.png";
}

.item {
    position: absolute;
    top: 0rpx;
    width: 100rpx;
    height: 100rpx;
}

.star_div {
    width: 100%;
    height: 130rpx;
}

.content_div {
    width: 90%;
    height: 200rpx;
    margin: 0 auto;
}

.content1 {
    width: 100%;
    background: #fafafa;
    border: 1px solid #cccccc;
    font-size: 14px;
}

.pfont {
    font-size: 14px;
    height: 30px;
    line-height: 30px;
    text-indent: 10rpx;
}

.submit_btn {
    width: 90%;
    margin: 150rpx auto;
}

.layout1 {
    width: 95%;
    margin: 10rpx auto;
}

.userinfo-avatar1 {
    width: 100rpx;
    height: 100rpx;
    border: 2px solid white;
    border-radius: 50%;
    margin: 0 auto;
}

.item1 {
    display: flex;
    width: 100%;
    padding-bottom: 15rpx;
    border-bottom: 1px solid #f0f0f0;
    margin-top: 15rpx;
}

.right1 {
    margin-left: 20rpx;
    width: 100%;
}

.right_top1 {
    display: flex;
    justify-content: space-between;
}

.right_top1 image {
    width: 40rpx;
    height: 40rpx;
}

.title1 {
    font-size: 13px;
    color: #666;
}

.nickname1 {
    text-indent: 5rpx;
}

.stars1 {
    margin-top: 10rpx;
}

.date1 {
    color: #999;
    margin-top: 10rpx;
    font-size: 13px;
}

.content2 {
    color: #666;
    font-size: 14px;
}

.audio_div {
    margin: 10rpx 10px;
    margin-top: 20rpx;
}

.hide {
    display: none;
}