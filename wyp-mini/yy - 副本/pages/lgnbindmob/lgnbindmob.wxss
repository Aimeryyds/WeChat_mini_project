.login-page {
    height: 100vh;
    background: rgba(34,34,37,1);
    font-family: PingFangSC-Medium;
}

.login-main {
    padding: 200rpx 77rpx;
}

.login-main image {
    width: 160rpx;
    height: 160rpx;
}

.login-main .title {
    color: #fff;
    font-size: 44rpx;
    padding-top: 36rpx;
    padding-bottom: 40rpx;
}

.login-main .lgnbindmob,.login-main .m-xTextbox,.login-main .m-form .form-input {
    background: rgba(34,34,37,1);
}

.login-main .m-lgnbindmob {
    padding-top: 30rpx;
}

.login-main .m-form .form-input {
    margin-left: 0;
    margin-right: 0;
    color: #666;
    font-size: 32rpx;
    border: none;
    border-bottom: 1rpx solid rgba(255,255,255,0.3);
}

.login-main .m-form .form-input .m-xTextbox {
    margin-left: 0;
    margin-right: 0;
}

.login-main .m-form .form-input .m-button {
    font-size: 30rpx;
    color: #fff;
    border-radius: 12rpx;
    background: rgba(255,255,255,0.05);
}

.login-main .m-form .opra {
    padding: 0;
    margin-top: 80rpx;
}

.login-main .m-form .opra .m-button {
    color: #333;
    font-size: 36rpx;
    font-weight: bold;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background: rgba(250,194,0,1);
    border-radius: 50rpx;
}

.login-main .m-textbox {
    color: #999;
}

.login-main .m-form .up-label {
    width: auto;
    color: #fff;
}

.login-main .m-form-current {
    color: #fff;
}

.login-main .m-form .up-message,.login-main .m-form .up-gateway {
    color: #fff;
}

.m-form .form-tip view {
    color: #fff;
}