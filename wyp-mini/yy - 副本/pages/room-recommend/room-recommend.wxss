.room-recommend-top {
    position: fixed;
    z-index: 8;
    height: 80rpx;
    width: 100%;
    background: #fff;
}

.room-recommend-bg {
    position: fixed;
    bottom: 0;
    width: 100%;
    background-color: #000;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    filter: blur(18px);
    height: 100%;
}

.room-recommend {
    position: absolute;
    left: 0;
    width: 100%;
    background: rgba(0,0,0,0.85);
    overflow-x: hidden;
}

.room-recommend__attention--title {
    width: 100%;
    position: relative;
    height: 70rpx;
}

.room-recommend__attention__txt--title {
    font-size: 13px;
    color: #999;
    line-height: 70rpx;
    position: absolute;
    width: 100%;
    padding-left: 30rpx;
    height: 100%;
    z-index: 2;
    top: 0;
    left: 0;
}

.room-recommend__attention__bg--title {
    height: 100%;
    width: 100%;
    position: absolute;
    z-index: 2;
    top: 0;
    left: 0;
}

.room-attention-item {
    padding-left: 32rpx;
    padding-right: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.room-attention-item__line {
    height: 1rpx;
    background: rgba(102,102,102,0.3);
    width: 614rpx;
    position: absolute;
    bottom: 1rpx;
    right: 0;
}

.room-attention-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 24rpx;
}

.room-recommend-avatar {
    width: 110rpx;
    height: 100rpx;
    margin-right: 24rpx;
    border-radius: 3rpx;
}

.room-attention-info__name {
    font-family: PingFangSC-Medium;
    font-size: 13px;
    color: #FFF;
    margin-bottom: 16rpx;
}

.room-attention-info__desc {
    font-family: PingFangSC-Regular;
    font-size: 13px;
    color: #999;
}

.room-attention-live {
    width: 24rpx;
    height: 26rpx;
}

.room-attention-item__left {
    display: flex;
    height: 136rpx;
    align-items: center;
}

.room-attention-item__right {
    display: flex;
    height: 136rpx;
    align-items: center;
}

.room-attention-more {
    height: 114rpx;
    text-align: center;
    box-sizing: border-box;
    padding-top: 17rpx;
}

.room-attention-more__area {
    width: 80rpx;
    margin: 0 auto;
    height: 80rpx;
}

.room-attention-more .room-attention-more__txt {
    font-family: PingFangSC-Medium;
    font-size: 13px;
    color: #E8E8E8;
    line-height: 13px;
    margin-bottom: 14rpx;
    margin-top: 20rpx;
}

.room-attention-more .room-attention-more__arrow {
    width: 24rpx;
    height: 14rpx;
    margin: 0 auto;
    display: block;
}

.room-recommend-users {
    display: flex;
    align-items: center;
}

.room-attention-user__icon {
    width: 24rpx;
    height: 24rpx;
    margin-right: 4rpx;
}

.room-attention-user__num {
    font-family: DINAlternate-Bold;
    font-size: 13px;
    color: #999;
}