.my-page {
    box-sizing: border-box;
    background: #f5f5f5;
    height: 100vh;
    position: relative;
}

.my-main {
    background-color: #fff;
}

.my-title {
    background-color: #fff;
    padding-top: 40rpx;
}

.my-head {
    width: 100%;
    height: 340rpx;
    margin-top: 90rpx;
    position: relative;
    display: flex;
    justify-content: center;
    background-color: #fff;
}

.my-head-login {
    background-color: #fff;
}

.my-head-login button {
    width: 308rpx;
    height: 78rpx;
    line-height: 78rpx;
    color: #1d1d1d;
    background-color: #ffdd00;
    border-radius: 40rpx;
}

.my-head-login button:after {
    border: none;
}

.my-head__bg {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 0;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.my-head__info {
    text-align: center;
    position: relative;
}

.my-head__avatar {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    display: block;
    margin: 60rpx auto 20rpx;
}

.my-head__nickname {
    display: block;
    font-size: 34rpx;
    color: #fff;
    font-family: 'PingFangSC-Medium';
    max-width: 500rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    vertical-align: super;
}

.my-head__yynum {
    display: block;
    font-size: 24rpx;
    line-height: 24rpx;
    color: #fff;
    font-family: 'PingFangSC-Regular';
    margin-top: 18rpx;
}

.my-list {
    width: 100%;
    background: #fff;
}

.my-item {
    padding: 0 30rpx;
    display: flex;
    align-items: center;
    height: 110rpx;
}

.my-item:first-child .my-item__right {
    border-top: 0;
}

.my-item__left {
    width: 50rpx;
    height: 50rpx;
    margin-right: 26rpx;
}

.my-item__right {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 110rpx;
    border-top: 1rpx solid #ededed;
    flex-grow: 1;
}

.my-item__right__txt {
    font-family: 'PingFangSC-Regular';
    font-size: 30rpx;
    color: #1d1d1d;
    font-weight: bold;
}

.my-item__right__arrow {
    width: 40rpx;
    height: 40rpx;
}

.contact-btn {
    background-color: #fff;
    border: 0;
}

.contact-btn:after {
    border: 0;
}

button {
    background: transparent;
}

button:after {
    outline: 0;
    border: 0;
}

.residue-amount {
    flex: 1;
    text-align: right;
    font-size: 30rpx;
    padding-right: 10rpx;
}

.my-feedback {
    text-align: center;
    color: #999;
    font-size: 22rpx;
    position: absolute;
    top: calc(100vh - 60rpx);
    width: 100%;
}