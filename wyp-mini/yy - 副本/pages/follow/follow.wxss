@import "../../wuBaseWxss/0.wxss";

@import "../../wuBaseWxss/2.wxss";

.follow-container {
    padding-top: 188rpx;
}

.follow-head {
    position: fixed;
    top: 0;
    width: 100%;
    background: #fff;
    z-index: 9;
    margin-top: 80rpx;
}

.follow-main {
    width: 750rpx;
    min-height: calc(100vh - 200rpx);
}

.clear-float:after {
    content: '';
    display: block;
    height: 0;
    clear: both;
}

.follow-nav__list {
    text-align: center;
    height: 84rpx;
    background: #fff;
    padding-top: 20rpx;
}

.follow-nav__item {
    display: inline-block;
    height: 100%;
    font-size: 28rpx;
    color: #999;
    margin-left: 80rpx;
    font-family: 'PingFangSC-Regular';
}

.follow-nav__item:first-child {
    margin-left: 0;
}

.follow-nav__select {
    font-size: 30rpx;
    color: #3a3a3a;
}

.follow-nav__select:after {
    content: '';
    display: block;
    height: 6rpx;
    width: 50rpx;
    background: #ffdd00;
    margin: 7rpx auto 0rpx;
}

.follow-nav__page {
    width: 100%;
    height: 100%;
    background: #f5f5f5;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.6);
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

.modal-content {
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    background: #f8f8f8;
}

.modal-attention-btn {
    background: #fff;
    height: 96rpx;
    line-height: 96rpx;
    color: #1d1d1d;
    font-size: 26rpx;
    font-family: 'PingFang-SC-Regular';
    font-weight: bold;
    text-align: center;
}

.login-wrapper {
    width: 100%;
    height: 100%;
    background: #f5f5f5;
}

.login-main {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.login-main image {
    display: block;
    width: 228rpx;
    height: 228rpx;
    border-radius: 50%;
    margin: 0 auto;
}

.login-main .tips {
    width: 750rpx;
    font-size: 28rpx;
    color: #999;
    text-align: center;
    padding-top: 30rpx;
    padding-bottom: 15rpx;
}

.login-main button {
    width: 308rpx;
    height: 78rpx;
    line-height: 78rpx;
    color: #1d1d1d;
    background-color: #ffdd00;
    border-radius: 40rpx;
}

.login-main button:after {
    border: none;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.live-list,.anchor-info-list {
    padding-bottom: 60rpx;
}