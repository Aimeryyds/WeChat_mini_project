.wrapper {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 290rpx;
    color: #1D1D1D;
    font-size: 26rpx;
    background: transparent;
    z-index: 9999;
    font-family: PingFangSC-Medium;
}

.inform-wrapper {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    color: #1D1D1D;
    font-size: 26rpx;
    background: transparent;
    z-index: 99;
    font-family: PingFangSC-Medium;
}

.add-miniprogram {
    position: absolute;
    top: 96rpx;
    right: 20rpx;
    padding: 0 26rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-weight: bold;
    text-align: center;
    border-radius: 40rpx;
    background: #ffdd00;
}

.add-miniprogram .tri {
    position: absolute;
    top: -16rpx;
    right: 60rpx;
    border-left: 20rpx solid transparent;
    border-right: 20rpx solid transparent;
    border-bottom: 12px solid #ffdd00;
}

.add-miniprogram .add-dot {
    width: 39rpx;
    height: 13rpx;
    margin: 0 2rpx;
}

.add-miniprogram .close-btn {
    width: 19rpx;
    height: 19rpx;
    margin-left: 14rpx;
}

.add-miniprogram .add-tips {
    display: block;
    width: 480rpx;
    height: 230rpx;
    margin: 20rpx auto 0;
}

.inform-toast {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 560rpx;
    color: #1D1D1D;
    font-size: 30rpx;
    padding-top: 180rpx;
    border-radius: 18rpx;
    transform: translate(-50%,-50%);
    background-color: #fff;
}

.inform-toast .inform-bg {
    position: absolute;
    top: -80rpx;
    width: 100%;
    height: 230rpx;
}

.inform-toast .inform-tips {
    padding: 0 60rpx;
    font-weight: bold;
    text-align: center;
}

.inform-toast .inform-bth {
    display: flex;
    align-items: center;
    padding: 60rpx 40rpx;
}

.inform-bth button {
    box-sizing: border-box;
    width: 184rpx;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 28rpx;
    font-weight: bold;
    border-radius: 36rpx;
    display: inline-block;
    background-color: #FFDD00;
}

.inform-bth .btn-off {
    background: #FFFFFF;
    border: 1rpx solid #1D1D1D;
}

.inform-toast button:after {
    outline: none;
    border: none;
}