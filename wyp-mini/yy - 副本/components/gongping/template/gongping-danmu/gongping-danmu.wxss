cover-view {
    white-space: normal;
}

.ishappyFight .gongping-mask {
    top: 126rpx;
}

.gongping {
    position: relative;
    box-sizing: border-box;
    overflow: hidden;
    width: 100%;
    height: 520rpx;
    padding-bottom: 90rpx;
    padding-top: 40rpx;
    background: transparent;
    z-index: 9;
}

.ishappyFight {
    padding-top: 126rpx;
}

.portrait-gongping {
    position: absolute;
    bottom: 90rpx;
    height: 380rpx;
    width: 520rpx;
    padding-bottom: 0;
}

.gongping-mask {
    position: absolute;
    top: 20rpx;
    right: 0;
    left: 0;
    z-index: 9;
    width: 100%;
    height: 80rpx;
    background: -webkit-linear-gradient(top,rgba(0,0,0,0.9),rgba(0,0,0,0));
}

.scroll-view {
    position: relative;
    height: 100%;
    width: 520rpx;
    box-sizing: border-box;
}

.gongping .bullet-wrapper {
    box-sizing: border-box;
    padding-left: 20rpx;
}

.bullet-wrapper .bullet-track {
    box-sizing: border-box;
    overflow: hidden;
    height: auto;
    width: 100%;
}

.portrait-gongping .bullet-track {
    position: absolute;
    bottom: 0;
    box-sizing: border-box;
    overflow: hidden;
    height: auto;
    width: 480rpx;
}

.portrait-gongping .bullet-wrapper {
    height: 100%;
}

.gongping .bullet-wrapper .bullet-text {
    color: #fff;
    font-size: 28rpx;
    font-weight: 500;
}

.gongping .bullet-wrapper .bullet-danmu {
    margin-bottom: 20rpx;
    color: #fff;
}

.gongping .bullet-wrapper .bullet-sysinfo {
    margin-bottom: 12rpx;
}

.gongping .bullet-wrapper .bullet-user {
    width: 100%;
    margin: 20rpx 0;
}

.bullet-wrapper .bullet-gift {
    margin-bottom: 12rpx;
}

.bullet-wrapper .flower_free {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    margin-left: 6rpx;
    vertical-align: middle;
}

.bullet-wrapper .bullet-gift .inner {
    display: inline-block;
    border-radius: 18rpx;
    padding: 5rpx 20rpx;
    border: 1rpx solid #fff;
    background: rgba(0,0,0,0.2);
}

.landscape-wrapper .bullet-gift .inner {
    border: none;
    background-color: #3a3b39;
}

.portrait-gongping .bullet-gift .inner {
    border: none;
}

.gongping .bullet-wrapper .bullet-gift .nick {
    vertical-align: bottom;
    line-height: 46rpx;
}

.gongping .bullet-wrapper .bullet-gift .gift {
    vertical-align: middle;
}

.gongping .bullet-wrapper .nick {
    font-size: 26rpx;
    color: #ffda81;
    font-weight: 400;
}

.nick-txt {
    font-size: 26rpx;
    color: #ffda81;
    font-weight: 400;
}

.landscape-wrapper .nick-txt {
    display: inline-block;
    vertical-align: middle;
    margin-right: 8rpx;
}

.gongping .bullet-wrapper .txt {
    display: inline-block;
    color: #fff;
    vertical-align: middle;
}

.gongping .landscape-wrapper .txt {
    display: inline;
}

.gongping .fix-img {
    display: inline-block;
    width: 1rpx;
    height: 1rpx;
    margin-left: 12rpx;
    vertical-align: top;
}

.gongping .bullet-wrapper .bullet-text.me {
    color: #7bf0d8;
}

.gongping .bullet-wrapper .bullet-text.me .nick {
    color: #ffda81;
}

.gongping .bullet-wrapper .sysinfo {
    color: #a8e0a8;
    line-height: 1.5;
    background: rgba(0,0,0,0.2);
    border-radius: 8rpx;
}

.gongping .bullet-wrapper .gift {
    display: inline-block;
    color: #7bf0d8;
    position: relative;
    vertical-align: middle;
}

.portrait-gongping .bullet-wrapper .gift {
    display: inline-block;
}

.gongping .bullet-wrapper .gift .giftImg {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

.bullet-text .nick-shadow {
    background: rgba(0,0,0,0.2);
    border-radius: 18rpx;
    padding: 13rpx 20rpx 10rpx;
}

