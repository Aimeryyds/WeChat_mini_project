.happyFight-wrapper {
    position: absolute;
    top: 0;
    width: 100%;
    z-index: 6;
}

.happyFight-main {
    display: flex;
    align-items: center;
    width: 100%;
    height: 48rpx;
    background: linear-gradient(to right,rgba(45,69,92,0.8),rgba(64,38,32,0.8));
}

.happyFight-pk {
    position: relative;
    top: -5rpx;
    width: 100%;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 20rpx;
    color: #fff;
    background: linear-gradient(to right,#2d455c 20%,#314459 50%,#543b36 60%,#583a33);
}

.anchorSide-txt,.oppositeSide-txt {
    position: relative;
    z-index: 99;
    padding: 0 16rpx;
}

.anchorSide {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
}

.anchorSide-blood {
    position: absolute;
    top: 0;
    width: 6rpx;
    height: 34rpx;
    background: #f2a603;
}

.oppositeSide {
    position: absolute;
    right: 0;
    top: 0;
    width: 100%;
    text-align: right;
}

.oppositeSide-blood {
    position: absolute;
    top: 0;
    right: 0;
    width: 6rpx;
    height: 34rpx;
    background: #0caafc;
}

.happyFight-info {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 77rpx;
}

.anchorSide-result image {
    float: left;
    width: 73rpx;
    height: 77rpx;
}

.oppositeSide-result image {
    float: right;
    width: 73rpx;
    height: 77rpx;
}

.happyFight-status {
    position: absolute;
    left: 50%;
    padding: 0 16rpx;
    transform: translateX(-50%);
}

.happyFight-status-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 214rpx;
    height: 46rpx;
}

.happyFight-status-info {
    position: relative;
    z-index: 99;
    top: -1rpx;
    display: flex;
    align-items: center;
}

.happyFight-status-img {
    width: 61rpx;
    height: 50rpx;
}

.happyFight-status-txt {
    display: inline-block;
    width: 120rpx;
    font-size: 24rpx;
    font-weight: bold;
    color: #fff;
    padding-left: 16rpx;
}

.happyFight-count-down {
    display: inline;
    color: #ffdd00;
    padding-left: 4rpx;
    letter-spacing: 5rpx;
}