@import "../../wuBaseWxss/1.wxss";

@import "../../wuBaseWxss/0.wxss";

search-bar {
    width: 100%;
    height: 100%;
}

.page-search {
    background: #fff;
}

.search-button,.search-main {
    display: none;
}

.focusSearch .search-button,.focusSearch .search-main {
    display: block;
}

.focusSearch .search-block {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 99;
    background-color: #fff;
}

.search-main {
    position: relative;
    height: calc(100vh - 180rpx);
    z-index: 99;
    background-color: #fff;
    box-sizing: border-box;
}

.search-block {
    width: 100%;
    background-color: #fff;
    z-index: 9;
}

.search-bar {
    display: flex;
    height: 60rpx;
    overflow: hidden;
    padding: 16rpx 20rpx;
}

.search-bar-input {
    position: relative;
    flex: 1;
    background: #f5f5f5;
    border-radius: 60rpx;
}

.search-bar-input .icon {
    position: absolute;
    left: 16rpx;
    top: 15rpx;
    width: 30rpx;
    height: 30rpx;
}

.search-bar-input .input {
    position: absolute;
    left: 58rpx;
    right: 48rpx;
    height: 100%;
    font-size: 30rpx;
}

.search-bar-input .close {
    position: absolute;
    right: 0;
    width: 46rpx;
    height: 100%;
}

.search-bar-input .close image {
    width: 28rpx;
    height: 28rpx;
    margin-top: 17rpx;
}

.search-bar .search-btn {
    background: none;
    line-height: 60rpx;
    color: #999;
    padding: 0 24rpx;
    font-size: 28rpx;
}

.search-bar .search-btn::after {
    border: none;
}

.search-history {
    padding-bottom: 10rpx;
    background-color: #fff;
}

.search-history .head {
    position: relative;
    font-size: 30rpx;
    line-height: 80rpx;
    padding: 0 16rpx;
}

.search-history .del {
    position: absolute;
    right: 0;
    top: 15rpx;
    width: 80rpx;
    height: 60rpx;
}

.search-history .del image {
    width: 30rpx;
    height: 30rpx;
}

.search-history .list {
    overflow: hidden;
    padding: 0 16rpx;
}

.search-history .item {
    float: left;
    padding: 0 20rpx;
    margin: 0 16rpx 24rpx 0;
    font-size: 30rpx;
    background: #f8f8f8;
    height: 54rpx;
    line-height: 54rpx;
}

.search-result .head,.search-recommend .head {
    font-size: 28rpx;
    line-height: 80rpx;
    padding: 0 16rpx;
}

.search-result-room {
    position: relative;
}

.search-result-room .more {
    width: 32rpx;
    height: 32rpx;
    position: absolute;
    right: 16rpx;
    top: 20rpx;
}

.search-result-gap {
    border-bottom: 16rpx solid #f5f5f5;
}

.search-empty {
    height: 240rpx;
    padding-top: 88rpx;
    font-size: 30rpx;
    text-align: center;
    box-sizing: border-box;
    background: #f2f3f5;
}

.search-empty .text-yellow {
    display: inline-block;
    max-width: 230rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    vertical-align: text-bottom;
    color: #fac200;
}

.search-history-list {
    border-bottom: 16rpx solid #f5f5f5;
}