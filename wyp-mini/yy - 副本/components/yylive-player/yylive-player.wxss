.yylive-player {
    position: relative;
    width: 100%;
    z-index: 9;
}

.vertical {
    position: absolute;
    top: 0;
}

.yylive-player .cover-player {
    position: absolute;
    top: 0;
    height: 100%;
    width: 100%;
    z-index: 99;
}

.tips-area {
    position: absolute;
    top: 0;
    width: 100%;
    z-index: 99;
    background-color: #1d1d1d;
}

.my-player,.player-loading {
    height: 100%;
    width: 100%;
    z-index: 9;
    background: #000;
}

.player-snap {
    display: block;
    margin: 0 auto;
}

.network-tips {
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #fff;
    font-size: 24rpx;
    text-align: center;
    line-height: 64rpx;
    white-space: nowrap;
    width: 420rpx;
    border-radius: 20rpx;
    background: rgba(0,0,0,0.6);
    z-index: 999;
}

.vertical-tips .network-tips {
    top: 250rpx;
    transform: translate(-50%,0);
}

.vertical .player-loading {
    margin-top: 200rpx;
}

.player-loading {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
}

.player-loading .tips {
    margin-top: 20rpx;
    color: #fff;
    font-size: 26rpx;
    text-align: center;
}

@-webkit-keyframes lightShine {
    0% {
        transform: translate(0,0);
        visibility: visible;
        opacity: 0;
    }

    10% {
        transform: translate(50rpx,0);
        visibility: visible;
        opacity: 1;
    }

    90% {
        transform: translate(400rpx,0);
        visibility: hidden;
        opacity: 1;
    }

    100% {
        transform: translate(480rpx,0);
        visibility: hidden;
        opacity: 0;
    }
}

@keyframes lightShine {
    0% {
        transform: translate(0,0);
        visibility: visible;
        opacity: 0;
    }

    10% {
        transform: translate(50rpx,0);
        visibility: visible;
        opacity: 1;
    }

    90% {
        transform: translate(400rpx,0);
        visibility: hidden;
        opacity: 1;
    }

    100% {
        transform: translate(480rpx,0);
        visibility: hidden;
        opacity: 0;
    }
}

.loading-container {
    color: #fff;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    background-color: #1d1d1d;
}

.loading-bg {
    display: block;
    position: absolute;
    z-index: 100;
    width: 100%;
    height: 100%;
}

.loading-inner {
    position: absolute;
    left: 50%;
    top: 100rpx;
    transform: translateX(-50%);
}

.loading-logo {
    display: block;
    position: relative;
    z-index: 102;
    width: 150rpx;
    height: 150rpx;
    margin: 0 auto 30rpx;
}

.loading-light {
    position: relative;
    width: 490rpx;
    height: 12rpx;
}

.lightshine {
    position: absolute;
    top: 0;
    left: 0;
    width: 490rpx;
    height: 12rpx;
}

.loading-light-goto {
    z-index: 105;
    position: absolute;
    left: 0;
    top: 0;
    width: 59rpx;
    height: 12rpx;
    animation: lightShine 3s cubic-bezier(0.74,0.74,0.74,0.74) infinite;
}