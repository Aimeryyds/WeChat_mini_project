page {
    background-color: #f1f0f5;
}

.container {
    background: #f1f0f5;
}

.top {
    width: 100%;
    height: auto;
}

.top-banner {
    width: 100%;
}

.top-wrap {
    width: 100%;
    display: flex;
    background: #fff;
    margin-bottom: 10px;
}

.flex-item-V {
    margin: 0 auto;
    text-align: center;
    padding: 14px 0 12px 0;
    box-sizing: border-box;
}

.flex-item-text {
    font-size: 13px;
    color: #121212;
    line-height: 24px;
}

.foot {
    width: 100%;
    color: #8f8f8f;
    font-size: 11px;
    text-align: center;
}

.contant {
    width: 100%;
    display: flex;
    background: #ffffff;
}

.nearby_left {
    width: 40%;
    margin: 0 auto;
    height: 100%;
    text-align: center;
    padding: 20px 0 12px 0;
    box-sizing: border-box;
}

.flex-item-tit {
    font-size: 14px;
    color: #121212;
}

.flex-item-des {
    font-size: 12px;
    line-height: 28px;
    color: #848484;
}

.nearby_right {
    width: 60%;
    margin: 0 auto;
    height: 100%;
    text-align: center;
    box-sizing: border-box;
}

.nearby_right_box {
    display: flex;
    margin: 0 auto;
    justify-content: center;
}

.nearby_right_text {
    padding: 20px 10px 12px 0;
}

.border_rigth {
    position: relative;
}

.border_rigth::before {
    position: absolute;
    content: "";
    height: 100%;
    width: 1px;
    border-right: 1px solid #e1e1e1;
    transform: scaleX(.5);
    bottom: 0;
    right: 0;
}

.border_bottom {
    position: relative;
}

.border_bottom::before {
    position: absolute;
    content: "";
    width: 100%;
    border-bottom: 1px solid #e1e1e1;
    transform: scaleY(.5);
    bottom: 0;
    left: 0;
}

.footer {
    position: fixed;
    bottom: 10px;
    text-align: center;
    width: 100%;
}

.innerbox {
    display: flex;
}