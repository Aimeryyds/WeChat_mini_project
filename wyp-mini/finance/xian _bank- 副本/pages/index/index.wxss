.container {
    background: #f1f0f5;
}

.top {
    width: 100%;
    height: auto;
}

.top-banner {
    width: 100%;
}

.top-wrap {
    display: flex;
    background: #fff;
    justify-content: flex-start;
}

.flex-item-V {
    width: 25%;
    height: 100%;
    text-align: center;
    padding: 12px 0 14px 0;
    box-sizing: border-box;
}

.flex-item-text {
    font-size: 13px;
    color: #4e4e4e;
}

.title {
    width: 100%;
    height: 42px;
    line-height: 42px;
    color: #121212;
    padding-left: 23px;
    position: relative;
    font-size: 14px;
    box-sizing: border-box;
    background: #ffffff;
}

.title::after {
    content: "";
    position: absolute;
    width: 3px;
    height: 15px;
    background-color: #2592ff;
    top: 14px;
    left: 13px;
}

.border_bottom {
    position: relative;
}

.border_bottom::before {
    position: absolute;
    content: "";
    width: 100%;
    border-bottom: 1px solid #e1e1e1;
    transform: scaleY(.5);
    bottom: 0;
    left: 0;
}

.con-wrap {
    display: flex;
    width: 100%;
    background-color: #ffffff;
    padding: 13px 12px;
    box-sizing: border-box;
    flex-wrap: wrap;
    position: relative;
    margin-bottom: 10px;
}

.con-item {
    width: 48%;
    text-align: center;
    background-color: #f8f8f8;
    padding: 13px;
    box-sizing: border-box;
    margin: 3px 1%;
}

.con-item-text {
    font-size: 14px;
    color: #4e4e4e;
}

.active {
    width: 100%;
    background: #ffffff;
    padding-bottom: 10px;
    box-sizing: border-box;
    margin-bottom: 10px;
}

.active-text-tit {
    font-size: 13px;
    color: #4e4e4e;
    padding-top: 8px;
    padding-left: 13px;
}

.foot {
    width: 100%;
    color: #8f8f8f;
    line-height: 14px;
    font-size: 11px;
    text-align: center;
}

swiper {
    display: block;
    height: 100px;
    background: #ffffff;
    margin-bottom: 10px;
}

.con-item-text img {
    width: 38px;
    height: 38px;
    display: inline-block;
}

.innerbox {
    display: flex;
    align-items: center;
    justify-content: space-between;
}