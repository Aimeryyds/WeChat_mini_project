#map {
    margin-bottom: 100rpx;
}

.campus-list {
    padding: 30rpx;
    font-size: 24rpx;
    line-height: 60rpx;
    color: #303030;
    border-bottom: solid 1rpx #cbc9c9;
}

.campus-list .campus-line .campus-line-left {
    vertical-align: top;
    width: 120rpx;
    display: inline-block;
    font-weight: bold;
}

.campus-list .campus-line .campus-line-right {
    margin-left: 20rpx;
    width: 550rpx;
    display: inline-block;
}