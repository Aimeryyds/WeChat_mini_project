.btn {
    width: 315rpx;
    height: 80rpx;
    margin: 20rpx;
    background: #22529f;
    color: #fff;
    text-align: center;
    border-radius: 20rpx;
    line-height: 80rpx;
    font-size: 36rpx;
    display: inline-block;
    overflow: hidden;
}

.btn-container {
    padding: 20rpx;
}

.list-container {
    margin-bottom: 24rpx;
}

.question {
    border-bottom: solid 1rpx #b8b7b7;
    font-size: 28rpx;
    line-height: 60rpx;
    color: #2252a0;
    padding-left: 40rpx;
    position: relative;
}

.question::before {
    content: '';
    width: 5rpx;
    height: 30rpx;
    background: #c30202;
    display: block;
    position: absolute;
    top: 15rpx;
    left: 20rpx;
}

.answer {
    width: 680rpx;
    margin: 0 auto;
    background: #aaa;
    margin-top: 20rpx;
    padding: 20rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    color: #fff;
    border-radius: 10rpx;
    line-height: 1.5;
}