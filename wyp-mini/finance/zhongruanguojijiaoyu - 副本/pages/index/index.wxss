.banner {
    width: 750rpx;
    height: 360rpx;
}

.slide-image {
    width: 750rpx;
    height: 360rpx;
}

.course {
    font-size: 36rpx;
    padding: 20rpx 11rpx;
}

.course .course-button {
    width: 360rpx;
    height: 100rpx;
    margin: 2rpx;
    display: inline-block;
    background-color: #a0a0a0;
    color: #fff;
    padding-left: 100rpx;
    text-align: center;
    box-sizing: border-box;
    line-height: 100rpx;
    position: relative;
}

.course .course-button .course-icon {
    width: 70rpx;
    height: 70rpx;
    position: absolute;
    left: 20rpx;
    top: 15rpx;
}

.course .course-more {
    font-size: 24rpx;
    color: #a0a0a0;
    margin-top: 35rpx;
    margin-left: 650rpx;
}

.scroll-view-teachers {
    width: 100%;
    height: 380rpx;
    white-space: nowrap;
    padding: 0 10rpx;
}

.scroll-view-teachers .scroll-view-teachers-items {
    width: 234rpx;
    height: 369rpx;
    background: #012658;
    display: inline-block;
    margin: 0 5rpx;
    overflow: hidden;
    color: #fff;
    text-align: center;
}

.scroll-view-teachers .scroll-view-teachers-items image {
    width: 100%;
    height: 270rpx;
}

.scroll-view-teachers .scroll-view-teachers-items .scroll-view-teachers-items-name {
    font-size: 28rpx;
    line-height: 1.5;
}

.scroll-view-teachers .scroll-view-teachers-items .scroll-view-teachers-items-desc {
    font-size: 20rpx;
}

.scroll-view-environment {
    width: 100%;
    height: 228rpx;
    white-space: nowrap;
    padding: 0 10rpx;
}

.scroll-view-environment .scroll-view-environment-items {
    width: 264rpx;
    height: 228rpx;
    display: inline-block;
    margin: 0 5rpx;
    overflow: hidden;
    color: #fff;
    text-align: center;
    border-radius: 20rpx;
}

.scroll-view-environment .scroll-view-environment-items image {
    width: 100%;
    height: 100%;
}