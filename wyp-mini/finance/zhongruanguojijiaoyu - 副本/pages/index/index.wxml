<swiper autoplay="{{autoplay}}" class="banner" duration="{{duration}}" indicatorDots="{{indicatorDots}}" interval="{{interval}}">
    <swiper-item wx:for="{{imgUrls}}" wx:key="*this">
        <image bindtap="navigateTo" class="slide-image" id="{{item.link}}" src="{{item.img}}"></image>
    </swiper-item>
</swiper>
<view class="course">
    <navigator class="course-button" url="../course/java/java">
        <image class="course-icon" src="../../static/images/icon-java.png"></image>
    JAVA
  </navigator>
    <navigator class="course-button" url="../course/python/python">
        <image class="course-icon" src="../../static/images/icon-python.png"></image>
    Python
  </navigator>
    <navigator class="course-button" url="../course/java/java">
        <image class="course-icon" src="../../static/images/icon-android.png"></image>
    Android
  </navigator>
    <navigator class="course-button" url="../course/java/java">
        <image class="course-icon" src="../../static/images/icon-rjcs.png"></image>
    软件测试
  </navigator>
    <navigator class="course-button" url="../course/php/php">
        <image class="course-icon" src="../../static/images/icon-php.png"></image>
