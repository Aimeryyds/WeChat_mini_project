.app-container {
    padding: 0 0 20rpx 0;
    overflow: hidden;
}

.app-line {
    width: 750rpx;
    height: 2rpx;
    background: #bfbfbf;
}

.app-title {
    font-size: 32rpx;
    width: 100%;
    color: #2f519b;
    text-align: center;
    padding: 15rpx 0;
    font-weight: bold;
    display: inline-block;
}

.app-desc {
    font-size: 24rpx;
    line-height: 44rpx;
    color: #2f519b;
    text-indent: 50rpx;
    padding: 0 50rpx;
}

.course-banner {
    width: 750rpx;
    height: 360rpx;
}

.course-title {
    font-size: 36rpx;
    color: rgb(34,82,160);
    line-height: 2;
    padding-left: 34rpx;
    position: relative;
    border-bottom: solid 1rpx rgb(184,183,183);
    margin: 20rpx 0;
}

.course-title::after {
    display: block;
    content: '';
    background: rgb(195,2,2);
    width: 6rpx;
    height: 40rpx;
    position: absolute;
    left: 14rpx;
    top: 14rpx;
}

.course-text {
    font-size: 24rpx;
    color: rgb(34,82,160);
    line-height: 2;
    padding: 0 40rpx;
}

.course-desc {
    font-size: 20rpx;
    color: #bfbfbf;
    line-height: 2;
    text-align: center;
}

.footer {
    margin-bottom: 50rpx;
}

.course-img {
    margin: 0 auto;
    display: block;
}