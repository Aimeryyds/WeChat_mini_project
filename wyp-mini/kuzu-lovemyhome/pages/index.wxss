@import "browse/browse.wxss";

.siqing-box {
    width: 580rpx;
    position: fixed;
    left: 50%;
    top: 50%;
    margin-left: -290rpx;
    margin-top: -305rpx;
    z-index: 5;
}

.siqing-banner {
    display: block;
    width: 580rpx;
    height: 610rpx;
    height: auto;
}

.siqing-colse {
    display: block;
    width: 46rpx;
    height: auto;
    margin: 30rpx auto 0 auto;
}

.fixed-point {
    width: 102rpx;
    height: 92rpx;
    position: fixed;
    right: 20rpx;
    bottom: 290rpx;
    z-index: 3;
    transform-origin: bottom center;
    animation: swing 3s linear infinite;
}

.fixed-point image {
    width: 102rpx;
    height: auto;
}

.siqing-bg {
    position: fixed;
    z-index: 4;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    opacity: 0.5;
    background: #000;
}

.saleSty,.rentSty {
    float: left;
    border-radius: 60rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    width: 120rpx;
    text-align: center;
    color: #9D9DA1;
}

.bgcolors {
    float: right;
    width: 240rpx;
    border-radius: 60rpx;
    background: #F7F7F7;
}

.active {
    color: #fff;
    background: linear-gradient(to right,#ffc20d,#ffad00);
}

@-webkit-keyframes swing {
    0% {
        transform: rotate(0deg);
    }

    20% {
        transform: rotate(15deg);
    }

    30% {
        transform: rotate(-15deg);
    }

    40% {
        transform: rotate(15deg);
    }

    50% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(0deg);
    }
}

@keyframes swing {
    0% {
        transform: rotate(0deg);
    }

    20% {
        transform: rotate(15deg);
    }

    30% {
        transform: rotate(-15deg);
    }

    40% {
        transform: rotate(15deg);
    }

    50% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(0deg);
    }
}