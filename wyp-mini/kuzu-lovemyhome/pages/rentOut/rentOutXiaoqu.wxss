page {
    background: #F7F7F7;
}

.search-wrap {
    background: #fff;
    padding-bottom: 20rpx;
}

.search-box {
    width: 90%;
    margin: 0 auto;
}

.search-inp {
    height: 80rpx;
    padding: 0 20rpx;
    background: #f9f9f9;
    position: relative;
    border-radius: 40rpx;
}

.search-box .inp {
    float: left;
    height: 80rpx;
    font-size: 28rpx;
    background: #f9f9f9;
    line-height: 80rpx;
    width: 80%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #aaa;
    padding-left: 10rpx;
}

.search-icon {
    float: left;
    width: 23rpx;
    height: 22rpx;
    margin-top: 28rpx;
}

.search-del {
    position: absolute;
    right: 0;
    top: 0;
    padding: 16rpx 26rpx 0 0;
}

.search-del image {
    width: 30rpx;
    height: 30rpx;
}

.lianxiang-box {
    width: 100%;
    position: absolute;
    top: 100rpx;
    height: calc(100% - 112rpx);
    background: #fff;
    z-index: 2;
    overflow-y: auto;
}

.lianxiang {
    height: 100%;
    background: #fff;
    padding: 0 40rpx;
    font-size: 32rpx;
}

.down-item,.history-item {
    line-height: 100rpx;
    border-bottom: 1rpx solid #eee;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 28rpx;
}

.no-data {
    font-size: 28rpx;
    color: #777;
    text-align: center;
    margin-top: calc(50% - 50rpx);
}

.no-data image {
    display: inline-block;
    width: 163rpx;
    height: 250rpx;
}

.no-data .no-text {
    display: block;
    margin-top: 40rpx;
}

.no-text text {
    display: block;
}

.history-item image {
    float: left;
    width: 28rpx;
    height: 28rpx;
    margin-right: 14rpx;
    margin-top: 36rpx;
}

.history-item text {
    float: left;
    line-height: 100rpx;
}

.search-con {
    padding: 40rpx 40rpx 0 40rpx;
    position: relative;
    font-size: 28rpx;
    line-height: 100rpx;
    background: #fff;
}

.search-con .title {
    font-size: 32rpx;
}

.empty-btn {
    font-size: 28rpx;
    line-height: 100rpx;
    color: #777;
    text-align: center;
}