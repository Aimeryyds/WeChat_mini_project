.ser-content {
    padding: 64rpx 32rpx;
}

.ser-main {
    margin-bottom: 48rpx;
}

.ser-title {
    font-size: 40rpx;
    color: #333;
    font-weight: bold;
}

.ser-title image {
    width: 64rpx;
    height: 64rpx;
    display: inline-block;
    vertical-align: middle;
    margin-right: 10rpx;
}

.ser-main text {
    display: block;
    border-bottom: 1rpx solid #F4F4F4;
    padding: 40rpx 0;
    line-height: 46rpx;
    font-size: 28rpx;
    color: #666;
    text-align: justify;
}

.ser-main text:last-child {
    border: none;
}