.mflex {
    display: flex;
}

.mfauto {
    flex: 1;
}

.mfrow {
    flex-direction: row;
}

.clearfix:after {
    display: block;
    visibility: hidden;
    clear: both;
    height: 0;
    content: ".";
}

.bothpadding {
    padding-left: 40rpx;
    padding-right: 40rpx;
}

.mbottom40 {
    margin-bottom: 40rpx;
}

.dkrecord_list_box {
    position: relative;
    padding-left: 15rpx;
}

.dkrecord_list_box:after {
    content: '';
    position: absolute;
    top: -5rpx;
    left: -10rpx;
    width: 40rpx;
    height: 32rpx;
    background: #fff;
}

.dkItem {
    padding-left: 20rpx;
    border-left: 1px solid #e5e5e5;
    position: relative;
    padding-bottom: 36rpx;
}

.quan {
    position: absolute;
    left: -18rpx;
    top: 28rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    border: 3px solid #e5e5e5;
    background: #fff;
}

.name_box {
    width: 30%;
    float: left;
    padding: 24rpx;
}

.dkItem .name,.dkItem .xiaoqu {
    color: #292b33;
    font-size: 28rpx;
    font-weight: bold;
}

.dkItem .data {
    color: #bababa;
    font-size: 24rpx;
}

.dkItem:last-child .data {
    display: inline-block;
    padding: 2rpx 10rpx;
    color: #7D8B8E;
    font-size: 24rpx;
    background: #E7F6F9;
    border-radius: 5rpx;
}

.xiaoqu_box {
    width: 50%;
    float: left;
    padding: 24rpx;
    background: #f7f7f7;
    border-radius: 8rpx;
}

.huxing {
    font-size: 26rpx;
    color: #9d9da1;
}