@import "../detail/detail.wxss";

.base-info {
    padding: 0 40rpx;
}

.type-name {
    display: flex;
    justify-content: start;
    font-size: 36rpx;
    margin-top: 40rpx;
    align-items: center;
}

.type-name view:nth-child(2) {
    font-size: 24rpx;
    padding: 5rpx;
    background: #f7f7f7;
    color: #0491FE;
    margin-left: 20rpx;
}

.which-type,.total-price {
    line-height: 80rpx;
    font-size: 24rpx;
    color: #7D7E82;
    border-bottom: 1px solid #eaeaea;
}

.total-price {
    color: #FF522F;
}

.other-info {
    overflow: hidden;
    border-bottom: 1px solid #eaeaea;
    font-size: 24rpx;
    color: #7D7E82;
    line-height: 60rpx;
}

.other-info-item {
    float: left;
    width: 50%;
}

.other-info-item text {
    color: #292b33;
    margin-left: 20rpx;
}

.housetype-wrap {
    padding-bottom: 40rpx;
}