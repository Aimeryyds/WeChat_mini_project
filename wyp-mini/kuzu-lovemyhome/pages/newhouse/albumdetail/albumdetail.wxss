.album-cover {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    bottom: 0;
    background: #000;
    z-index: 1000;
}

.album-title {
    color: #fff;
    text-align: center;
    font-size: 34rpx;
    line-height: 100rpx;
    position: relative;
}

.all_album {
    position: absolute;
    right: 40rpx;
    color: #fff;
    font-size: 28rpx;
    top: 0;
}

.album-title image {
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    top: 32rpx;
    left: 32rpx;
}

.album-loop {
    width: 100%;
    height: 377rpx;
    margin-top: 329rpx;
    position: relative;
}

.album-cover swiper {
    width: 100%;
    height: 100%;
}

.album-cover swiper swiper-item {
    width: 100%;
    height: 100%;
}

.album-cover swiper .swiper-inner {
    padding: 0;
    width: 100%;
    height: 100%;
    position: relative;
}

.swiper-inner .icon_3d {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -50rpx;
    margin-top: -50rpx;
    animation: move 5s linear 0s infinite;
}

@-webkit-keyframes move {
    0% {
        transform: rotate(0);
    }

    100% {
        transform: rotate(360deg);
    }
}

@keyframes move {
    0% {
        transform: rotate(0);
    }

    100% {
        transform: rotate(360deg);
    }
}

.album-cover swiper image {
    width: 100%;
    height: 100%;
}

.album-cover .count {
    width: 100%;
    line-height: 200rpx;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    position: absolute;
}

.cover-bottom {
    width: 100%;
    padding: 42rpx 0;
    position: absolute;
    bottom: 0;
}

.cover-bottom scroll-view {
    width: 100%;
    height: 100%;
    white-space: nowrap;
}

.cover-bottom scroll-view view {
    display: inline-block;
    font-size: 24rpx;
    padding: 8rpx 18rpx;
    border-radius: 33rpx;
    color: #fff;
    margin: 0 20rpx;
}

.cover-bottom scroll-view view.selected {
    background: linear-gradient(to right,#ffc30e,#ff9d00);
    color: #fff;
}