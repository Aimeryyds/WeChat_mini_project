.housetype-tab {
    padding: 0 40rpx;
    height: 60rpx;
    font-size: 26rpx;
    color: #292B33;
    margin-top: 27rpx;
}

.housetype-tab scroll-view {
    white-space: nowrap;
    width: 100%;
    height: 100%;
}

.housetype-tab scroll-view view {
    display: inline-block;
    padding: 10rpx 18rpx;
    line-height: 40rpx;
    background: #f7f7f7;
    height: 40rpx;
    border-radius: 30rpx;
    margin-right: 32rpx;
}

.housetype-tab scroll-view view.selected {
    color: #fff;
    background: linear-gradient(to right,#FFC30E,#FFAD00);
}

.housetype-list {
    width: 100%;
    position: fixed;
    top: 87rpx;
    bottom: 0;
}

.housetype-list scroll-view {
    width: 100%;
    height: 100%;
}

.housetype-item {
    overflow: hidden;
    padding: 28rpx 40rpx;
}

.houseimg {
    width: 210rpx;
    height: 166rpx;
    border-radius: 12rpx;
    border: 1px solid rgba(0,0,0,0.24);
    float: left;
}

.houseimg image {
    width: 100%;
    height: 100%;
    border-radius: 12rpx;
}

.houseinfo {
    float: left;
    margin-left: 24rpx;
}

.type-name {
    font-size: 32rpx;
    color: #292B33;
}

.type-name view {
    display: inline-block;
}

.type-name view:nth-child(2) {
    font-size: 24rpx;
    background: #f7f7f7;
    border-radius: 10rpx;
    padding: 2rpx 6rpx;
    margin-left: 12rpx;
    color: #0491FE;
}

.type-name view.saleout {
    color: #BABABA;
}

.house-area {
    font-size: 24rpx;
    color: #292B33;
    margin-top: 8rpx;
}

.house-aspect {
    font-size: 24rpx;
    color: #7D7E82;
    margin-top: 8rpx;
}

.house-price {
    color: #FF522F;
    font-size: 30rpx;
    margin-top: 8rpx;
}