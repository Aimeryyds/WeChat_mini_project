.newhouse-search {
    padding: 0 40rpx;
}

.input-box {
    overflow: hidden;
}

.input-box .input-wrap {
    width: 566rpx;
    height: 72rpx;
    background: rgba(247,247,247,1);
    border-radius: 36rpx;
    color: #BABABA;
    font-size: 24rpx;
    float: left;
    position: relative;
}

.input-wrap image {
    width: 33rpx;
    height: 33rpx;
    position: absolute;
    right: 20rpx;
    top: 50%;
    margin-top: -16rpx;
}

.input-box .input-wrap input {
    width: 460rpx;
    height: 100%;
    margin-left: 30rpx;
}

.input-box view {
    line-height: 72rpx;
    font-size: 30rpx;
    color: #292B33;
    float: right;
}

.hot-search {
    font-size: 32rpx;
    color: #292B33;
    margin-top: 71rpx;
    display: flex;
    margin-bottom: 24rpx;
    justify-content: space-between;
}

.hot-search image {
    width: 48rpx;
    height: 48rpx;
}

.hotkeywords {
    overflow: hidden;
}

.hotkeywords view {
    font-size: 24rpx;
    color: #292B33;
    padding: 19rpx 25rpx;
    background: #F7F7F7;
    float: left;
    border-radius: 40rpx;
    margin-right: 16rpx;
    margin-bottom: 24rpx;
}

.mind-search {
    position: fixed;
    top: 72rpx;
    width: 100%;
    bottom: 0;
    background: #fff;
}

.mind-search scroll-view {
    padding: 0 40rpx;
    height: 100%;
}

.scroll-wrap {
    width: 100%;
    height: 100%;
}

.search-empty {
    font-size: 28rpx;
    color: #333;
    text-align: center;
    line-height: 500rpx;
}

.mind-search-list {
    width: calc(100% - 80rpx);
    border-bottom: 1px solid #eee;
    font-size: 28rpx;
    overflow: hidden;
    line-height: 74rpx;
}

.mind-search-list text:nth-last-child(1) {
    float: right;
    color: #9D9DA1;
}

.mind-search-list text:nth-last-child(2) {
    color: #9D9DA1;
}

.history view {
    font-size: 28rpx;
    color: #292B33;
    margin-left: 40rpx;
    border-bottom: 1px solid #eaeaea;
    line-height: 70rpx;
}