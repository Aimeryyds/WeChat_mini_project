.chooseBox {
}

.columnBox {
    height: auto;
    display: flex;
    flex-direction: column;
    width: 100%;
    margin: 0 auto;
    text-align: center;
}

.col_fenxiang,.col_tuijian {
    width: 100%;
    margin: 0 auto;
    padding-top: 20%;
}

.col_tuijian {
    flex: 1;
}

.col_fenxiang image,.col_tuijian image {
    width: 100rpx;
    height: 80rpx;
}

.btnsty {
    width: 60%;
    height: 94rpx;
    line-height: 94rpx;
    margin: 10rpx auto;
    border-radius: 16rpx;
    font-size: 36rpx;
    color: #fff;
    background: linear-gradient(to right,#ffc30e,#ffad00);
}

.col_fenxiang text,.col_tuijian text {
    color: #BABABA;
    font-size: 26rpx;
    display: block;
    padding-bottom: 10rpx;
}