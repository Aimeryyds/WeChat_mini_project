.certificationBox {
    width: 100%;
    height: 100%;
}

.cerbanner {
    width: 100%;
    margin-bottom: 50rpx;
}

.cerbanner image {
    width: 100%;
    height: 380rpx;
    display: block;
}

.cercont {
    width: 70%;
    margin: 0 auto;
}

.cercont .tit {
    font-size: 40rpx;
    line-height: 100rpx;
    display: block;
}

.cercont .group_from {
    display: flex;
    -webkit-box-align: center;
    font-size: 30rpx;
    margin-top: 30rpx;
}

.cercont .mart {
    margin-top: 50rpx;
}

.grouplable {
    width: 100rpx;
    line-height: 70rpx;
    float: left;
}

.groupinput {
    width: calc(100% - 100rpx);
    float: left;
}

.groupinput input {
    font-size: 30rpx;
    border: 1rpx solid #eee;
    border-radius: 5rpx;
    height: 60rpx;
    padding: 8rpx;
    list-style: none;
    color: #292b33;
}

.queren {
    width: 100%;
}

.queren button {
    display: block;
    line-height: 80rpx;
    color: #fff;
    width: 50%;
    margin-top: 80rpx;
    border-radius: 13rpx;
    font-size: 30rpx;
    background: linear-gradient(to right,#ffc30e,#ffad00);
}