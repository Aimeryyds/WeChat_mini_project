<form bindsubmit="formSubmit">
    <view class="certificationBox">
        <view class="cerbanner">
            <image role="banner" src="https://res.5i5j.com/cache/weixin/common/cel_banner.jpg"></image>
        </view>
        <view class="cercont">
            <text class="tit">认证中心</text>
            <view class="group_from">
                <view class="grouplable">账号</view>
                <view class="groupinput">
                    <input bindinput="getErpName" placeholder="ERP登录名/员工编号" placeholderStyle="color:#bababa;" type="text"></input>
                </view>
            </view>
            <view class="group_from mart">
                <view class="grouplable">密码</view>
                <view class="groupinput">
                    <input bindinput="getErpPwd" placeholder="ERP密码" placeholderStyle="color:#bababa;" type="password"></input>
                </view>
            </view>
            <view class="queren">
                <button ariaDisabled="false" formType="submit" role="button">确认</button>
            </view>
        </view>
    </view>
</form>
