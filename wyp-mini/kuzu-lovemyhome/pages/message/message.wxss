.xiaoxiBox {
    padding-bottom: 70rpx;
}

.topItem {
    position: fixed;
    left: 0;
    top: 0;
    padding: 0 40rpx;
    width: calc(100% - 80rpx);
    height: 92rpx;
    line-height: 92rpx;
    background: linear-gradient(to right,#ffc20d,#ffad00);
}

.addInfo,.addBtn {
    font-size: 24rpx;
    color: #fff;
}

.addInfo {
    float: left;
}

.addBtn {
    float: right;
    margin-top: 18rpx;
}

.addBtn {
    border: 1rpx solid #fff;
    border-radius: 9rpx;
    height: 54rpx;
    width: 130rpx;
    text-align: center;
    line-height: 54rpx;
}

.xiaoxi_list_box {
    padding: 20rpx 0;
}

.listItem {
    padding: 20rpx 40rpx;
    overflow: hidden;
}

.list_head {
    float: left;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    overflow: hidden;
}

.list_head image {
    width: 100rpx;
    height: auto;
}

.list_con,.list_time {
    float: left;
}

.list_con {
    width: calc(100% - 300rpx);
    padding-right: 10rpx;
    padding-left: 30rpx;
}

.list_time {
    width: 160rpx;
    text-align: right;
}

.listInfos {
    overflow: hidden;
    margin: 10rpx auto;
}

.list_name,.list_tags {
    float: left;
}

.list_name {
    font-size: 30rpx;
    font-weight: bold;
    color: #292B33;
    margin-right: 10rpx;
}

.list_tags {
    font-size: 24rpx;
    color: #608997;
    background: #EBF5F7;
    border-radius: 5rpx;
    padding: 5rpx 10rpx;
}

.list_con_main {
    color: #7D7E82;
    font-size: 28rpx;
    justify-content: space-around;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.listDays,.listNums {
    font-size: 24rpx;
}

.listDays {
    color: #BFBFBF;
    margin-top: 10rpx;
}

.listNums {
    padding: 0 15rpx;
    border-radius: 19rpx;
    color: #fff;
    background: linear-gradient(320deg,#FC7839,#FE6B4B);
}

.noMessage {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -130rpx;
    margin-top: -243rpx;
}

.noMessage image {
    display: block;
    width: 163rpx;
    height: 250rpx;
    margin: 0 auto 20rpx auto;
}

.noText text {
    margin: 10rpx auto;
    display: block;
    text-align: center;
    color: #BABABA;
    font-size: 24rpx;
}

.mesBtn {
    margin: 40rpx auto 0 auto;
    border-radius: 15rpx;
    color: #fff;
    text-align: center;
    font-size: 26rpx;
    width: 180rpx;
    height: 72rpx;
    line-height: 72rpx;
    background: linear-gradient(to right,#ffc20d,#ffad00);
}

.yixianshi {
    margin-bottom: 60rpx;
}

.messageNumber {
    position: absolute;
    top: -3rpx;
    right: 60rpx;
    background-color: red;
    color: #fff;
    width: 40rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    border-radius: 20rpx;
}