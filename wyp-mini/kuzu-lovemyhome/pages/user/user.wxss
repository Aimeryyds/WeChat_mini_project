page {
    height: 100%;
    background: #f2f2f2;
}

.user-box {
    padding: 40rpx;
}

.logintop {
    width: 100%;
    height: 204rpx;
    position: relative;
    display: block;
}

.userbg {
    position: absolute;
    top: 0;
    left: 0;
}

.userbg image {
    width: 666rpx;
    height: 204rpx;
}

.login {
    position: absolute;
    left: 0;
    top: 0;
}

.login text {
    line-height: 76rpx;
    display: inline-block;
    font-size: 34rpx;
    color: #fff;
}

.userimg {
    width: 120rpx;
    height: 120rpx;
    border-radius: 120rpx;
    overflow: hidden;
    display: inline-block;
    margin: 40rpx;
    vertical-align: middle;
}

.userimg image {
    border-radius: 120rpx;
    width: 120rpx;
    height: 120rpx;
}

.user-item-box {
    background: #fff;
    border-radius: 16rpx;
    margin-top: 40rpx;
}

.user-item {
    height: 110rpx;
    line-height: 110rpx;
    border-bottom: 1rpx solid #eee;
    padding-left: 32rpx;
}

.user-item .icon {
    float: left;
    width: 34rpx;
    height: 34rpx;
    margin: 40rpx 30rpx 0 0;
}

.user-item .info {
    float: left;
    width: calc(100% - 96rpx);
    position: relative;
    font-size: 28rpx;
}

.user-item .arrow {
    width: 13rpx;
    height: 21rpx;
    position: absolute;
    right: 0;
    top: 44rpx;
}

.messageNumber {
    position: absolute;
    top: -3rpx;
    right: 60rpx;
    background-color: red;
    color: #fff;
    width: 40rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    border-radius: 20rpx;
}