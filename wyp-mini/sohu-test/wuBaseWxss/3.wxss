.tips-content-circle {
    position: fixed;
    width: 100%;
    height: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    top: 0;
    background: rgba(0,0,0,0.5);
    z-index: 999999;
}

.tips-content-circle .close {
    position: absolute;
    left: 50%;
    bottom: -120rpx;
    width: 98rpx;
    height: 98rpx;
    transform: translate(-50%,0);
}

.tips-content-circle .c-save {
    top: 505px;
    position: fixed;
    width: 300px;
    height: 35px;
    background-color: rgba(0,0,0,0.7);
    border-radius: 40rpx;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
    line-height: 35px;
    margin-left: -7px;
}

.tips-content-circle .circle_pic {
    width: 285px;
    height: 460px;
}

.tips-info-circle {
    width: 285px;
    height: 460px;
    margin-top: 60rpx;
    border-radius: 6rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    z-index: 9999;
}

.tip-auth {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10000;
    background-color: #fff;
    padding: 44rpx 54rpx;
    box-shadow: 0 -5rpx 20rpx rgba(0,0,0,0.2);
}

.tip-auth .tit {
    font-size: 36rpx;
    color: #333333;
}

.tip-auth .opts {
    margin-top: 44rpx;
    overflow: hidden;
}

.tip-auth .opts button {
    width: 300rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #333333;
    font-size: 40rpx;
    text-align: center;
    background-color: #ededed;
    float: left;
    border-radius: 6rpx;
}

.tip-auth .opts .confirm {
    color: #fff;
    background-color: #2cac44;
    margin-left: 40rpx;
}