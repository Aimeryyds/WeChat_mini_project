.hot-item-smallpic {
    margin: 30rpx;
    position: relative;
    width: 690rpx;
    display: block;
}

.hot-item-smallpic button {
    text-align: left;
    border-top-style: none;
    border-right-style: none;
    border-bottom-style: none;
    border-left-style: none;
    padding-left: 220rpx;
    padding-right: 0;
    border-radius: 0;
    background-color: transparent;
    overflow: visible;
}

.hot-item-smallpic .title {
    font-size: 32rpx;
    line-height: 40rpx;
    color: #333333;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    font-weight: bold;
    height: 80rpx;
}

.hot-item-smallpic .title .index.top {
    width: 50rpx;
    height: 30rpx;
    font-size: 26rpx;
    color: #fff;
    text-align: center;
    background-color: #F67258;
    border-radius: 8rpx;
    line-height: 30rpx;
    display: inline-block;
    margin-right: 15rpx;
}

.hot-item-smallpic .title .index {
    width: 50rpx;
    height: 30rpx;
    font-size: 26rpx;
    color: #fff;
    text-align: center;
    background-color: #CCCCCC;
    border-radius: 8rpx;
    line-height: 30rpx;
    display: inline-block;
    margin-right: 15rpx;
    font-weight: normal;
}

.hot-item-smallpic .news-pic {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 200rpx;
    height: 200rpx;
    z-index: 100;
}

.hot-item-smallpic .news-pic image.pic {
    width: 100%;
    height: 100%;
}

.hot-item-smallpic .news-pic image.icon-tv {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 70rpx;
    height: 70rpx;
}

.hot-item-smallpic .summary {
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #b2b2b2;
    line-height: 30rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    height: 60rpx;
}

.hot-item-smallpic .bottom {
    margin-top: 20rpx;
    overflow: hidden;
    height: 30rpx;
    line-height: 0;
}

.hot-item-smallpic .bottom .is-moment {
    font-size: 22rpx;
    color: #EE2F10;
    line-height: 1;
}

.hot-item-smallpic .bottom .moment-title {
    font-size: 22rpx;
    color: #b2b2b2;
    margin-left: 20rpx;
    line-height: 1;
}

.hot-item-smallpic.hot-tv {
    position: relative;
}

.hot-item-smallpic.hot-tv .news-pic {
    width: 100%;
    height: 388rpx;
    position: static;
}

.hot-item-smallpic.hot-tv .news-pic:after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-image: linear-gradient(180deg,#000000 0%,rgba(255,255,255,0.00) 70%);
    z-index: 1;
}

.hot-item-smallpic.hot-tv .news-pic image.icon-tv {
    z-index: 2;
}

.hot-item-smallpic.hot-tv button {
    padding: 0;
}

.hot-item-smallpic.hot-tv .title {
    position: absolute;
    left: 20rpx;
    top: 20rpx;
    color: #fff;
    z-index: 3;
}