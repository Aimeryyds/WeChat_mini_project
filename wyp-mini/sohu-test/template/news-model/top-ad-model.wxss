.top-ad-title {
    font-size: 22rpx;
    color: #9c9c9c;
    margin: 30rpx 0 0 30rpx;
}

.top-ad-list {
    display: flex;
    justify-content: center;
    margin: 30rpx;
}

.top-ad-list .top-ad-item {
    flex: 1;
    text-align: center;
}

.top-ad-list .top-ad-item .icon {
    width: 66rpx;
    height: 66rpx;
    margin: 0 auto;
}

.top-ad-list .top-ad-item .icon image {
    width: 100%;
    height: 100%;
}

.top-ad-list .top-ad-item .name {
    font-size: 22rpx;
    color: #757575;
    margin-top: 12rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}