.recommend-news-item {
    margin: 0 30rpx;
    padding-bottom: 35rpx;
    position: relative;
    border-bottom: 1rpx solid #eeeeee;
    overflow: hidden;
    height: 175rpx;
    margin-top: 30rpx;
}

.recommend-news-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
}

.recommend-news-item .pic {
    position: absolute;
    left: 0;
    top: 0;
    width: 222rpx;
    height: 171rpx;
}

.recommend-news-item .pic image {
    width: 100%;
    height: 100%;
}

.recommend-news-item .detail {
    padding-left: 245rpx;
}

.recommend-news-item .detail .title {
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-size: 34rpx;
    line-height: 40rpx;
}

.recommend-news-item .detail .source {
    font-size: 24rpx;
    color: #ccc;
    margin-top: 60rpx;
}

.recommend-news-item .detail .source .comment-count {
    margin-right: 35rpx;
}

.recommend-news-item .detail .source .pic-num {
}

.recommend-news-item .detail .source .media {
    float: right;
}