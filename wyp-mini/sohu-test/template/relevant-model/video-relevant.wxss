.video-item .news-video {
    margin: 30rpx;
    position: relative;
    height: 170rpx;
    border-bottom: 1rpx solid #eeeeee;
}

.video-item:last-child .news-video {
    border-bottom: none;
}

.video-item .news-video .pic {
    position: absolute;
    left: 0;
    top: 0;
}

.video-item .news-video .pic image {
    width: 245rpx;
    height: 138rpx;
}

.video-item .news-video .detail {
    padding-bottom: 25rpx;
    margin-left: 275rpx;
    position: relative;
    height: 100%;
    box-sizing: border-box;
}

.video-item .news-video .detail .title {
    font-size: 34rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    line-height: 40rpx;
    max-height: 77rpx;
}

.video-item .news-video .detail .source {
    font-size: 24rpx;
    color: #ccc;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 30rpx;
}

.video-item .news-video .detail .source .media {
    float: left;
}

.video-item .news-video .detail .source .times {
    float: right;
    position: absolute;
    left: 310rpx;
    bottom: 0;
    padding-left: 40rpx;
}

.video-item .news-video .detail .source .times image {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translate(0,-50%);
    width: 28rpx;
    height: 28rpx;
}