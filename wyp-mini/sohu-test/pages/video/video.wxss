.container {
    font-family: SourceHanSansCN Normal;
    overflow: hidden;
    padding-bottom: 200rpx;
}

.container .top-video {
    width: 100%;
    height: 424rpx;
    position: relative;
}

.container .top-video video {
    width: 100%;
    height: 100%;
}

.container .video-title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
    padding: 0rpx 30rpx;
    margin-top: 30rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-align: left;
    width: 100%;
    box-sizing: border-box;
    line-height: 50rpx;
}

.container .com-tit {
    font-size: 30rpx;
    font-weight: bold;
    color: #333333;
    margin-left: 30rpx;
}

.art-correlation-t {
    font-size: 30rpx;
    color: #999999;
    padding: 0 40rpx;
    margin: 0 auto;
    position: absolute;
    left: 50%;
    top: 0;
    transform: translate(-50%,0);
    background-color: #fff;
    z-index: 999;
}

.container .comment .comment-detail {
    font-size: 30rpx;
    color: #1a1a1a;
}

.container .comment .comment-detail .no-com-tips {
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 26rpx;
    color: #929292;
}

.container .video-detail {
    font-size: 24rpx;
    color: #666666;
    width: 100%;
    margin-top: 30rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    margin-bottom: 45rpx;
    position: relative;
}

.container .video-detail .media {
    float: left;
}

.container .video-detail .times {
    float: right;
    position: absolute;
    left: 625rpx;
    bottom: 0;
    padding-left: 40rpx;
}

.container .video-detail .times image {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translate(0,-50%);
    width: 28rpx;
    height: 28rpx;
}

.bg_cont {
    height: 1080rpx;
}

.bg_cont image {
    width: 100%;
}

.container .top-video .no-wifi {
    width: 100%;
    height: 100%;
    text-align: center;
}

.container .top-video .no-wifi .bg {
    width: 100%;
    height: 100%;
    position: relative;
}

.container .top-video .no-wifi .bg:after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    background-color: rgba(0,0,0,.5);
    z-index: 1;
}

.container .top-video .no-wifi .tip {
    color: #fff;
    font-size: 28rpx;
    position: absolute;
    top: 120rpx;
    left: 50%;
    transform: translate(-50%,0);
    white-space: nowrap;
    z-index: 2;
}

.container .top-video .no-wifi .opt-play {
    position: absolute;
    left: 50%;
    top: 190rpx;
    transform: translate(-50%,0);
    background-color: rgba(0,0,0,.7);
    color: #fff;
    border-radius: 40rpx;
    width: 180rpx;
    height: 80rpx;
    font-size: 26rpx;
    z-index: 2;
    line-height: 80rpx;
}

.container .top-video .no-wifi .opt-play .icon {
    width: 52rpx;
    height: 52rpx;
    margin-top: 14rpx;
    margin-left: 14rpx;
    margin-right: 14rpx;
}

button {
    border-top-style: none;
    border-right-style: none;
    border-bottom-style: none;
    border-left-style: none;
    text-align: left;
    background-color: #fff;
    overflow: visible;
    padding-left: 0;
    padding-right: 0;
    margin-left: 0;
    margin-right: 0;
    webkit-tap-highlight-color: transparent;
    font-size: 30rpx;
    line-height: 50rpx;
    word-spacing: 4rpx;
    color: #5c5c5c;
    min-height: 0rpx;
    font-family: SourceHanSansCN Normal;
}

button::after {
    border-top-style: none;
    border-right-style: none;
    border-bottom-style: none;
    border-left-style: none;
    webkit-tap-highlight-color: transparent;
}

.container .top-video .done-play {
    width: 100%;
    height: 100%;
    text-align: center;
    position: relative;
    background-color: rgba(0,0,0,0.3);
}

.container .top-video .done-play:after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    background-color: rgba(0,0,0,.9);
    z-index: 1;
}

.container .top-video .done-play .tip {
    color: #fff;
    font-size: 28rpx;
    position: absolute;
    top: 120rpx;
    left: 50%;
    transform: translate(-50%,0);
    white-space: nowrap;
    z-index: 2;
}

.container .top-video .done-play .share {
    position: absolute;
    left: 30rpx;
    bottom: 30rpx;
    z-index: 2;
    padding-left: 80rpx;
}

.container .top-video .done-play .share .txt {
    color: #fff;
    font-size: 28rpx;
    position: absolute;
    left: 0;
    top: 50%;
    transform: translate(0,-50%);
}

.container .top-video .done-play .share button {
    width: 36rpx;
    height: 36rpx;
    padding: 0;
    border: none;
    outline: none;
    text-align: left;
    border-top-style: none;
    border-right-style: none;
    border-bottom-style: none;
    border-left-style: none;
    padding-left: 0;
    padding-right: 0;
    border-radius: 0;
    background-color: transparent;
    margin-left: 15rpx;
    vertical-align: middle;
    display: inline-block;
}

.container .top-video .done-play .share .share-friend-icon {
    width: 36rpx;
    height: 36rpx;
}

.container .top-video .done-play .play-again {
    position: absolute;
    right: 30rpx;
    bottom: 30rpx;
    width: 200rpx;
    height: 50rpx;
    z-index: 2;
    background-color: #000000;
    border-radius: 30rpx;
    padding-left: 50rpx;
    line-height: 50rpx;
    box-sizing: border-box;
}

.container .top-video .done-play .play-again .icon {
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    left: 10rpx;
    top: 50%;
    transform: translate(0,-50%);
}

.container .top-video .done-play .play-again .txt {
    font-size: 28rpx;
    color: #fff;
    line-height: 50rpx;
}