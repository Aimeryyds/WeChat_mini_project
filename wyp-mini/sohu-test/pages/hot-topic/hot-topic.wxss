    text-align: center;
}

#top-bar .date-picker .date-item:nth-child(1) {
    margin-left: 0;
}

.top-bar .bd .date-picker .date-item.active {
    color: #fff;
    background-color: #f67258;
    border: 1px solid #f67258;
}

.top-bar .bd .date-picker .date-item:last-child {
    position: absolute;
    right: 0;
    top: 0;
}

