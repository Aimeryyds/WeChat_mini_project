#news-container {
    padding-bottom: 200rpx;
}

#news-container .bottom-loading {
    height: 100rpx;
    width: 100%;
    font-size: 25rpx;
    color: #737373;
    margin-top: 30rpx;
}

#news-container .bottom-loading .tip {
    margin-top: 10rpx;
    margin-bottom: 15rpx;
    font-size: 24rpx;
    color: #f0492e;
    text-align: center;
}

#news-container .bottom-loading .dot-loading {
    width: 60rpx;
    height: 60rpx;
    margin: 10rpx auto;
    overflow: hidden;
}

#news-container .bottom-loading .dot-loading .dot {
    width: 24rpx;
    height: 24rpx;
    background-color: #fac0b7;
    float: left;
    animation: active .4s infinite;
}

#news-container .bottom-loading .dot-loading .dot:nth-child(1) {
    animation-delay: 0s;
}

#news-container .bottom-loading .dot-loading .dot:nth-child(2) {
    animation-delay: 0.1s;
    margin-left: 6rpx;
}

#news-container .bottom-loading .dot-loading .dot:nth-child(4) {
    animation-delay: 0.2s;
    margin-left: 6rpx;
    margin-top: 6rpx;
}

#news-container .bottom-loading .dot-loading .dot:nth-child(3) {
    animation-delay: 0.3s;
    margin-top: 6rpx;
}

@keyframes active {
    0% {
        background-color: #ee2f10;
    }
}

@-webkit-keyframes active {
    0% {
        background-color: #ee2f10;
    }
}

