}

.top-bar .bd .subscribe {
    position: relative;
    margin-top: 20rpx;
}

.top-bar .bd .subscribe .subscribe-btn {
    position: relative;
    display: inline-block;
    color: #f67258;
    font-size: 28rpx;
    text-align: center;
    width: 120rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-top: 2rpx solid #f67258;
    border-bottom: 2rpx solid #f67258;
