}

.top-bar .bd .subscribe .subscribe-btn image.icon {
    width: 28rpx;
    height: 26rpx;
    position: absolute;
    left: 10rpx;
    top: 50%;
    transform: translate(0,-52%);
}

.top-bar .bd .subscribe .subscribe-btn.has-subscribed {
    color: #999999;
    border-top: 1px solid #aaaaaa;
    border-bottom: 1px solid #aaaaaa;
}

.top-bar .bd .subscribe .subscribe-tip {
    position: absolute;
    left: 50%;
    bottom: -74rpx;
    transform: translate(-50%,0);
    background-color: rgba(246,114,88,1);
    color: #fff;
    font-size: 28rpx;
    line-height: 40rpx;
    height: 40rpx;
    padding: 10rpx 20rpx;
    border-radius: 18rpx;
    white-space: nowrap;
    z-index: 999;
}

.top-bar .bd .subscribe .subscribe-tip:after {
    content: '';
