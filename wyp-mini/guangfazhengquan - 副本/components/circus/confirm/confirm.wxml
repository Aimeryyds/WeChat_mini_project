<view class="v-confirm" wx:if="{{_confirm.show}}">
    <view class="wrapper">
        <view class="msg">{{_confirm.msg}}</view>
        <view class="buttons c-line-top">
            <view bindtap="_on_confirm_cancel" class="button">取消</view>
            <view bindtap="_on_confirm_ok" class="button confirm c-line-left">确定</view>
        </view>
    </view>
</view>
