.v-confirm {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.3);
    z-index: 9999;
    color: #333;
}

.v-confirm .wrapper {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -140px;
    margin-top: -90px;
    width: 280px;
    height: 150px;
    background-color: #fff;
    border-radius: 5px;
    overflow: hidden;
}

.v-confirm .wrapper .msg {
    margin-top: 40px;
    width: 100%;
    text-align: center;
    line-height: 24px;
    font-size: 16px;
}

.v-confirm .wrapper .buttons {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 50px;
}

.v-confirm .wrapper .button {
    display: inline-block;
    width: 50%;
    height: 100%;
    font-size: 16px;
    text-align: center;
    line-height: 50px;
}

.v-confirm .wrapper .button.confirm {
    background-color: #00a5f6;
    color: #fff;
}