.v-network {
    position: fixed;
    top: -36px;
    z-index: 9999;
    width: 100%;
    height: 36px;
}

.v-network>.notice {
    position: absolute;
    top: 0;
    width: 100%;
    height: 36px;
}

.v-network>.notice .icon {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-top: -10px;
    width: 20px;
    height: 20px;
    background-size: cover;
}

.v-network>.notice .msg {
    position: absolute;
    left: 50%;
    line-height: 36px;
    font-size: 14px;
    color: #fff;
}

.v-network .error {
    background-color: #f70e22;
}

.v-network .error .icon {
    margin-left: -90px;
    background-image: url("data:image/png;base64,");
}

.v-network .error .msg {
    margin-left: -60px;
}

.v-network .recover {
    background-color: #51c332;
}

.v-network .recover .icon {
    margin-left: -60px;
    background-image: url("data:image/png;base64,");
}

.v-network .recover .msg {
    margin-left: -30px;
}

.v-common-detail .content {
    padding: 0 15px 20px;
    margin-top: 12px;
    text-indent: 2em;
    font-size: 16px;
    line-height: 22px;
    color: #1a1a1a;
}