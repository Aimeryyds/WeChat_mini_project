page {
    background-color: #fff;
    position: relative;
}

.group-title {
    overflow: hidden;
    font-size: 28rpx;
    line-height: 70rpx;
    border-bottom: 1px solid #eee;
    color: #999;
}

.group-title view {
    float: left;
}

.group-title .group-fz {
    margin-left: 30rpx;
}

.group-title .group-bj {
    margin-left: 204rpx;
}

.group-title .group-delete {
    margin-left: 106rpx;
}

.group-title .group-drop {
    margin-left: 106rpx;
}

.group-content {
    margin-bottom: 100rpx;
    height: 90vh;
    overflow: auto;
}

.group-content .group-mygroup {
    overflow: hidden;
    line-height: 90rpx;
    border-bottom: 1px solid #eee;
}

.group-content .group-mygroup view {
    float: left;
}

.group-content .group-mygroup .group-name {
    font-size: 34rpx;
    color: #333;
}

.group-content .group-mygroup .group-right {
    float: right;
}

.group-content .group-mygroup .group-right .group-edit {
    margin-right: 128rpx;
}

.group-content .group-mygroup .group-right .group-edit image {
    width: 32rpx;
    height: 32rpx;
}

.group-content .group-mygroup .group-right .group-delete {
    margin-right: 124rpx;
}

.group-content .group-mygroup .group-right .group-delete image {
    width: 32rpx;
    height: 34rpx;
}

.group-content .group-mygroup .group-right .group-drop {
    margin-right: 32rpx;
}

.group-content .group-mygroup .group-right .group-drop image {
    width: 38rpx;
    height: 26rpx;
}

.group-add {
    border-top: 1px solid #eee;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    line-height: 88rpx;
    color: #3f7de5;
    font-size: 32rpx;
}

.group-add .group-bottom {
    text-align: center;
}

.group-add .group-bottom image {
    width: 18rpx;
    height: 18rpx;
    margin-right: 14rpx;
    vertical-align: middle;
}

.group-add .group-bottom view {
    display: inline-block;
}

.gropu-delete {
    position: absolute;
    left: 50%;
    bottom: 50vh;
    margin-left: -24vw;
    width: 48vw;
    height: 118rpx;
    line-height: 118rpx;
    text-align: center;
    background: rgba(0,0,0,0.7);
    color: #fff;
    font-size: 32rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    z-index: 100;
}

.dialog__input {
    text-align: left;
}

.fix-iphonex-button {
    bottom: 68rpx!important;
}

.fix-iphonex-button::after {
    content: ' ';
    position: fixed;
    bottom: 0!important;
    height: 68rpx!important;
    width: 100%;
    background: #fff;
}

.fix-iphonex-add {
    bottom: 68rpx;
}

.fix-iphonex-content {
    height: 86vh;
}

.bottom {
    margin-bottom: 250rpx;
}