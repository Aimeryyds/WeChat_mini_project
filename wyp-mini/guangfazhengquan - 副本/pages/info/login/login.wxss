page {
    height: 100%;
    background-color: #fff;
    position: relative;
}

.login .w-top {
    padding: 0 30rpx;
}

.login .w-top .w-title {
    display: flex;
    align-items: center;
    overflow: hidden;
    border-bottom: 1px solid #ddd;
    position: relative;
    padding-top: 18rpx;
}

.login .w-top .w-title .w-size {
    font-size: 33rpx;
    margin-left: 48rpx;
}

.login .w-top .w-title .w-first {
    width: 32rpx;
    height: 44rpx;
    margin-right: 8rpx;
    margin-left: 10rpx;
}

.login .w-top .w-title .w-second {
    width: 40rpx;
    height: 36rpx;
    margin-left: 10rpx;
}

.login .w-top .w-title .w-third {
    width: 42rpx;
    height: 32rpx;
    margin-left: 10rpx;
}

.login .w-top .w-title .w-top {
    margin-left: 6rpx;
}

.login .w-top .w-title .w-code {
    width: 100rpx;
    height: 46rpx;
}

.login .w-top .w-title input {
    width: 450rpx;
}

.login .w-top .w-title .w-btn {
    width: 140rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 24rpx;
    color: #427dbe;
}

.login .w-top .w-title .w-phone,.login .w-top .w-title .w-text,.login .w-top .w-title .w-smstext {
    height: 116rpx;
}

.login .description {
    font-size: 24rpx;
    color: #666;
    width: 100%;
    text-align: center;
}

.login .description view {
    display: inline-block;
}

.login .description .go {
    color: #0061b3;
}

.login .w-sure {
    margin: 100rpx 30rpx 60rpx 30rpx;
    background: #0061b3;
    color: #fff;
}

.login .w-bottom {
    position: fixed;
    bottom: 70rpx;
    margin-left: 50%;
    transform: translateX(-50%);
    overflow: hidden;
    font-size: 28rpx;
    text-align: center;
    width: 100%;
}

.login .w-bottom .w-nothingaccount {
    color: #666;
}

.login .w-bottom .w-nothingaccount,.login .w-bottom .w-openaccount {
    display: inline-block;
}

.login .w-bottom .w-openaccount {
    color: #0061b3;
}

.login .w-bottom .w-openaccount image {
    margin-left: 11rpx;
    width: 12rpx;
    height: 20rpx;
    vertical-align: middle;
}

.content {
    position: absolute;
    left: 70rpx;
    top: 24rpx;
    font-size: 28rpx;
    color: #f91a1a;
}

.confirmImg {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 30rpx;
    top: 28rpx;
}