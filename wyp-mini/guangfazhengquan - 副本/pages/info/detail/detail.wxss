.disclaimer {
    margin-top: 32rpx;
    text-align: justify;
    background-color: #f9f9f9;
    font-size: 24rpx;
    color: #999;
    letter-spacing: -0.4rpx;
    line-height: 40rpx;
    padding: 24rpx 32rpx 120rpx 32rpx;
}

.disclaimer {
    padding-bottom: 32rpx;
}

.audio-disclaimer {
    padding: 0 30rpx 20rpx 30rpx;
}

.page {
    padding: 52rpx 32rpx 57rpx;
    color: #333;
}

.title-panel {
    margin-bottom: 46rpx;
    font-size: 38rpx;
    line-height: 58rpx;
    font-weight: bold;
}

.desc-panel {
    color: #999;
    font-size: 32rpx;
    margin: 24rpx 0 40rpx;
}

.desc-panel text {
    margin-right: 5px;
}

.desc-panel text:last-child {
    margin-right: 0;
}

.content-panel {
    font-size: 32rpx;
    line-height: 58rpx;
    text-align: justify;
}

.content-panel image,.content-panel img {
    width: 100%!important;
}

.risk-tip-panel {
    font-size: 24rpx;
    color: #999;
    margin-top: 62rpx;
}

.prev,.next {
    line-height: 214rpx;
}

.prev image,.next image {
    width: 48rpx;
    height: 48rpx;
}

.play image,.stop image {
    width: 188rpx;
    height: 188rpx;
}

.prev {
    margin-right: 80rpx;
}

.next {
    margin-left: 80rpx;
}

.icon-audio {
    overflow: hidden;
    width: 444rpx;
    margin-left: 50%;
    transform: translateX(-50%);
}

.icon-audio view {
    float: left;
}

.time {
    overflow: hidden;
    font-size: 24rpx;
    color: #757575;
    word-wrap: 1.94rpx;
    line-height: 28rpx;
    margin: 0 28rpx 80rpx 28rpx;
}

.start_time {
    float: left;
}

.start_max {
    float: right;
}

.desc_name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    color: #333;
    font-size: 36rpx;
    margin: 0 30rpx;
}

.desc_author {
    text-align: center;
    margin-top: 20rpx;
    margin-bottom: 82rpx;
    color: #999;
    font-size: 24rpx;
}

.desc-audio {
    text-align: center;
    margin: 60rpx 0 80rpx 0;
}

.desc-audio image {
    width: 592rpx;
    height: 592rpx;
}

.audio {
    margin: 0 30rpx;
}