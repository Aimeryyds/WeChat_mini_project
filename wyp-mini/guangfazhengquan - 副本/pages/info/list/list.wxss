.page {
    color: #555;
    background-color: #f5f5f5;
}

.page::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 200%;
    transform: scaleY(.5);
    transform-origin: 0 0;
    pointer-events: none;
    box-sizing: border-box;
    border: 0 solid #eee;
    border-top-width: 1px;
}