.v-quote-indexs {
    width: 100%;
    height: 80px;
    background-color: rgba(255,255,255,0.85);
}

.v-quote-indexs .cell {
    float: left;
    margin-top: 5px;
    width: 33.3%;
    height: 70px;
    text-align: center;
}

.v-quote-indexs .kpi-name {
    margin-top: 6px;
    font-size: 16px;
    line-height: 16px;
    color: #1a1a1a;
}

.v-quote-indexs .kpi-now {
    margin-top: 6px;
    font-size: 20px;
    line-height: 20px;
    font-weight: bold;
}

.v-quote-indexs .kpi-change-value {
    margin-top: 4px;
    font-size: 14px;
    line-height: 14px;
    font-weight: bold;
}

.v-quote-indexs .kpi-change {
    padding-right: 2px;
    display: inline-block;
}

.v-quote-indexs .kpi-rise {
    padding-left: 2px;
    display: inline-block;
}