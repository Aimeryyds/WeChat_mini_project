page {
    background-color: #79d1c3;
    color: #fff;
}

.container {
    padding: 20rpx 40rpx;
    box-sizing: border-box;
}

.oneType {
    margin-bottom: 30rpx;
}

.oneType:last-child {
    margin-bottom: 0;
}

.childlist {
    display: flex;
    flex-wrap: wrap;
}

.line {
    display: inline-block;
    width: 8rpx;
    height: 22rpx;
    background-color: #fff;
    margin-right: 10rpx;
    border-radius: 10rpx;
}

.child {
    display: flex;
    align-items: center;
    border: 1rpx solid #fff;
    border-radius: 10rpx;
    margin-right: 40rpx;
    padding: 30rpx 20rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    width: 47%;
    margin-bottom: 40rpx;
    position: relative;
    background-color: #29675c;
}

.cur_grade {
    position: absolute;
    right: 0;
    top: 10rpx;
    z-index: 9;
    background-color: red;
    color: #fff;
    font-size: 22rpx;
    padding: 2rpx 8rpx;
    border-top-left-radius: 4rpx;
    border-bottom-left-radius: 4rpx;
}

.child:nth-of-type(even) {
    margin-right: 0;
}

.ic1 {
    width: 100rpx;
    height: 100rpx;
    margin-right: 30rpx;
}

.grade_name {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    width: 180rpx;
}