page {
    height: 100%;
}

.container {
    min-height: 100%;
    background-color: #79d1c3;
}

.flex {
    display: flex;
    align-items: center;
}

.header {
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    font-size: 30rpx;
    font-weight: bold;
}

.line {
    width: 140rpx;
    height: 1px;
    background-color: #fff;
    position: relative;
}

.circle {
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    background-color: #fff;
    display: block;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}

.circle.left {
    right: 0;
}

.circle.right {
    left: 0;
}

.title {
    margin: 0 18rpx;
}

.invite_img,.invite_users {
    width: 90%;
    margin: 0 auto;
    padding: 30rpx 0;
    color: #fff;
    text-align: center;
    position: relative;
}

.numbers {
    background-color: #fff9ef;
    border-radius: 40rpx;
    box-sizing: border-box;
    padding: 14rpx 30rpx;
    display: flex;
    align-items: center;
    color: #000;
    justify-content: space-between;
    margin-top: 30rpx;
    border: 1px solid #fff;
    margin-bottom: 20rpx;
}

.user_info {
    margin-left: 20rpx;
    text-align: left;
}

.study_info {
    color: #6d6862;
}

.share_btn {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9;
    opacity: 0;
}