.d_flex {
    display: flex;
    align-items: center;
}

.container {
    background-color: #fff;
    padding: 50rpx;
}

.header {
    padding-bottom: 50rpx;
    display: flex;
    align-items: center;
}

.info_img {
    width: 140rpx;
    height: 140rpx;
    overflow: hidden;
    border-radius: 50%;
    position: relative;
}

.small-mask {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background-color: #fff;
    opacity: .6;
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: 9;
    transform: translateX(-50%) translateY(-50%);
}

.progresswrap {
    width: 500rpx;
    position: relative;
    padding: 10rpx 0;
}

.val_common {
    position: absolute;
    top: 0;
    font-size: 22rpx;
    color: #dcdcdc;
}

.now_val {
    left: 0;
}

.max_val {
    right: 0;
}

.btn-common {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: 11;
    transform: translateX(-50%) translateY(-50%);
}

.img.rotate {
    animation: rotate 3s linear infinite;
}

@keyframes rotate {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(359deg);
    }
}

.info_body {
    color: #000;
}

.cn-content {
    margin-top: 20rpx;
}

.more-btns {
    border: 1rpx solid #dcdcdc;
    width: 160rpx;
    border-radius: 30rpx;
    font-size: 24rpx;
    text-align: center;
    color: #a0a0a0;
    padding: 4rpx 0;
    float: right;
    margin-top: 20rpx;
    position: relative;
}

.another {
    margin-right: 10rpx;
}

.bottom-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #fff;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    z-index: 99;
}

.followUp {
    width: 100%;
    border: 1rpx solid #b9b9bb;
    border-radius: 60rpx;
    padding: 16rpx 0;
    text-align: center;
    color: #b9b9bb;
}

.list {
    color: #b9b9bb;
    font-size: 24rpx;
    padding-bottom: 90rpx;
}

.title {
    border-bottom: 1rpx solid #ededed;
}

.user_icon {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    overflow: hidden;
}

.praise {
    width: 40rpx;
}

.every_one {
    justify-content: space-between;
    padding: 14rpx 0;
}

.tape {
    background-color: #63D4A5;
    color: #fff;
    border-radius: 10rpx;
    font-size: 22rpx;
    padding: 10rpx 16rpx;
    box-sizing: border-box;
    justify-content: space-between;
    margin-top: 2rpx;
    position: relative;
}

.icon {
    width: 28rpx;
    height: 28rpx;
}

.time {
    flex-direction: column;
}