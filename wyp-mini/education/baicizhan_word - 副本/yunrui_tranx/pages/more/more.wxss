.header {
    background-color: #79d1c3;
    color: #fff;
    font-size: 24rpx;
    box-sizing: border-box;
    padding: 20rpx 30rpx 30rpx 30rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.user_info {
    display: flex;
    align-items: flex-end;
}

.nickName {
    width: 120rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-left: 20rpx;
}

.more_types {
    border: 1rpx solid #fff;
    border-radius: 30rpx;
    display: flex;
    align-items: center;
    padding: 4rpx 20rpx;
}

.icon {
    position: relative;
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    border-radius: 50%;
}

.small-mask {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background-color: #fff;
    opacity: .6;
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: 9;
    transform: translateX(-50%) translateY(-50%);
}

.icon-2 {
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    z-index: 11;
}

.one-list {
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #f1f1f1;
    display: flex;
    align-items: center;
    background-color: #fff;
}

.content {
    margin-left: 20rpx;
}

.heat {
    color: #9a9a9a;
    font-size: 22rpx;
}

.flex {
    display: flex;
    align-items: center;
}

.des_msg {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    background-color: #fff;
    width: 60%;
    color: #666666;
    font-weight: bold;
    font-size: 30rpx;
    z-index: 8888;
    border-radius: 30rpx;
    padding: 120rpx 90rpx 20rpx;
    box-sizing: border-box;
}

.close {
    position: absolute;
    top: -35rpx;
    right: -35rpx;
    z-index: 9999;
}

.sure_btn {
    background-color: #ff6600;
    text-align: center;
    color: #fff;
    margin-top: 140rpx;
    border-radius: 30rpx;
    font-size: 24rpx;
    padding: 12rpx 0;
    width: 100%;
    box-sizing: border-box;
}

.no_more {
    text-align: center;
    padding-top: 50rpx;
    font-size: 24rpx;
}