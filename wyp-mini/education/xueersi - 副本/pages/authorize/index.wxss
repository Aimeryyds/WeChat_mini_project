page {
    height: 100%;
    background-color: #fff;
}

.authorize-content {
    height: 100%;
}

.authorize-content .image-box {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    padding-top: 60rpx;
}

.authorize-content .image-box image {
    width: 592rpx;
    height: 656rpx;
}

.authorize-content .login-btn {
    padding: 180rpx 80rpx 0;
    position: relative;
}

.authorize-content .footer-button {
    height: 84rpx;
    width: 100%;
    background: -webkit-linear-gradient(left,#2727d6,#045bfa);
    border-radius: 50rpx;
    color: #fff;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
    font-size: 38rpx;
}

.authorize-content .opent-btn {
    height: 84rpx;
    width: 80%;
    position: absolute;
    transform: translateX(-50%);
    top: 180rpx;
    left: 50%;
    z-index: 9;
    opacity: 0;
}