page {
    background: #fff;
    height: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-pack: justify;
    justify-content: space-between;
}

.top-tips {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: #FFFAE6;
    color: #FF7925;
    font-size: 24rpx;
    line-height: 72rpx;
    height: 72rpx;
    z-index: 2;
    padding-left: 32rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

.top-tips image {
    width: 24rpx;
    height: 24rpx;
    margin-right: 16rpx;
}

.coursepay .list-scroll {
    margin-top: 96rpx;
    padding-left: 30rpx;
    padding-right: 34rpx;
    padding-bottom: 140rpx;
}

.coursepay .list-scroll-active {
    margin-top: 24rpx;
    padding-left: 30rpx;
    padding-right: 34rpx;
    padding-bottom: 140rpx;
}

.coursepay .no-course-pay {
    margin-top: 278rpx;
    font-size: 30rpx;
    text-align: center;
    color: #797979;
}

.coursepay .course-box {
    background: #fff;
    overflow: hidden;
    position: relative;
    margin-bottom: 20rpx;
    box-shadow: 0 4px 24px 0 rgba(0,0,0,0.05);
    border-radius: 8px;
    border: 1px solid rgba(151,151,151,0.1);
}

.coursepay .inner-box {
    overflow: hidden;
    position: relative;
    padding: 0 36rpx 0 80rpx;
}

.coursepay .checked {
    width: 40rpx;
    height: 100%;
    left: -55rpx;
    position: absolute;
    text-align: center;
}

.coursepay .checked image {
    width: 40rpx;
    height: 40rpx;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
}

.coursepay .checked-items {
    position: absolute;
    left: -59rpx;
    top: 50%;
    transform: translateY(-50%);
}

.coursepay .checked-items image {
    width: 40rpx;
    height: 40rpx;
}

.coursepay .delete-btn {
    position: absolute;
    bottom: 40rpx;
    right: 0;
    font-size: 28rpx;
    color: #000;
    width: 104rpx;
    height: 60rpx;
    background: #fff;
    border-radius: 30rpx;
    border: .7px solid rgba(0,0,0,0.2);
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
}

.disabledClass {
    pointer-events: none;
}

.discount-box {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
    overflow: hidden;
    font-size: 22rpx;
    border-bottom: 1px solid #f1f1f1;
    padding: 30rpx 0;
}

.discount-box .discout-style {
    padding: 2rpx 3rpx;
    border-radius: 5rpx;
    margin-right: 10rpx;
    border: 1px solid #ff6a7b;
    color: #ff6a7b;
}

.discount-box .discout-course {
    width: 300rpx;
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding-left: 10rpx;
}

.discount-box .more-course {
    margin-right: 10rpx;
    color: gray;
}

.discount-box image {
    height: 22rpx;
    width: 10rpx;
}

.discount-box .image-box {
    display: -webkit-inline-box;
    display: -webkit-inline-flex;
    display: inline-flex;
    -webkit-box-align: center;
    align-items: center;
}

.discount-left-wrap,.discount-right-wrap {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    font-size: 26rpx;
}

.total-box {
    overflow: hidden;
    position: relative;
}

.period-wrap {
    position: relative;
}

.period-wrap .period-list {
    position: relative;
}

.period-wrap .period-list+.period-list {
    border-bottom: 2rpx solid #EBECF1;
}

.pay-box {
    height: 144rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    border-top: 1px solid #EBECF1;
    overflow: hidden;
    padding: 0 40rpx;
    box-sizing: border-box;
}

.pay-box .total-class {
    height: 144rpx;
    line-height: 144rpx;
    font-size: 32rpx;
    color: #000;
    float: left;
}

.pay-box .total-class text {
    vertical-align: middle;
}

.pay-box .total-class .price {
    font-size: 40rpx;
    color: #FF6F0C;
    font-family: 'HelveticaNeue-CondensedBold,HelveticaNeue';
    font-weight: bold;
}

.pay-box .total-class .price:before {
    content: "Â¥";
    font-weight: normal;
    font-family: 'PingFangSC-Regular,PingFangSC';
    font-weight: bold;
    font-size: 41rpx;
    margin-right: 5rpx;
}

.pay-box .save-btn {
    background: #FFAA0A;
    color: #fff;
    font-size: 32rpx;
    font-weight: 600;
    font-family: PingFangSC-Medium,PingFang SC;
    width: 244rpx;
    height: 80rpx;
    border-radius: 40rpx;
    line-height: 80rpx;
    float: right;
    top: 32rpx;
    border: none;
}

.pay-box .save-btn:after {
    border: none;
}

.pay-box.iphoneX {
    height: 212rpx;
}

.blank {
    height: 50px;
}

