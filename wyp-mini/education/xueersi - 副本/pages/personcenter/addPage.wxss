@import "../../wuBaseWxss/12.wxss";

page {
    background: #eceff4;
}

.add-address {
    font-size: 32rpx;
    margin-top: 20rpx;
    background: #fff;
}

.box {
    background: #fff;
    line-height: 1;
    margin-left: 26rpx;
    margin-right: 26rpx;
}

.name {
    padding: 32rpx 0;
    overflow: hidden;
    height: 98rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #f1f1f1;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
}

.name text {
    width: 132rpx;
}

.name input {
    -webkit-box-flex: 1;
    flex: 1;
    margin-left: 30rpx;
    margin-top: -5rpx;
}

.text-style {
    font-size: 32rpx;
    margin-right: 28rpx;
}

.text-style text {
    padding-left: 50rpx;
    font-size: 32rpx;
}

.text-style text.add_placeholder {
    color: #c5c1c1;
}

.placeholderclass {
    color: #bababa;
    font-size: 32rpx;
}

.more-address {
    min-height: 60rpx;
    padding-top: 32rpx;
    padding-bottom: 32rpx;
}

.more-address textarea {
    min-height: 60rpx;
}

.default-box {
    width: 100%;
    margin-top: 20rpx;
    background: #Fff;
    box-sizing: border-box;
    padding: 26rpx 36rpx 26rpx 28rpx;
    line-height: 1;
    float: left;
}

.default-box switch {
    float: right;
}

.default-box .default-style {
    margin-top: 23rpx;
    line-height: 62rpx;
}

.line {
    height: 20rpx;
    background: #eceff4;
}

.btn-save {
    position: absolute;
    bottom: 0;
    height: 98rpx;
    width: 100%;
}