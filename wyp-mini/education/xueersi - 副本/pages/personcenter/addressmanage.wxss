@import "../../wuBaseWxss/12.wxss";

page {
    background: #eceff4;
}

.box {
    position: relative;
    margin-bottom: 100rpx;
    padding-bottom: 100rpx;
}

.box .address-box {
    position: relative;
    margin-top: 20rpx;
    background: #FFF;
    box-sizing: border-box;
    padding: 12rpx 26rpx 12rpx 26rpx;
}

.box .fl {
    float: left;
}

.box .fr {
    float: right;
}

.box .border-style {
    font-size: 34rpx;
    color: #454545;
}

.box .info {
    overflow: hidden;
}

.box .address {
    color: #454545;
    font-size: 30rpx;
    font-weight: 400;
    border-bottom: 1px solid #f1f1f1;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
}

.box .check-right {
    width: 38rpx;
    height: 38rpx;
}

.box .default-address {
    color: #454545;
    font-size: 30rpx;
    font-weight: 400;
    margin-left: 10rpx;
    vertical-align: 7rpx;
}

.box .bootom-box {
    margin-top: 20rpx;
    line-height: 1;
    overflow: hidden;
}

.box .txt {
    margin-left: 16rpx;
    line-height: 1;
    vertical-align: 7rpx;
}

.box .delete,.box .edit {
    float: right;
}

.box .delete image,.box .edit image {
    width: 38rpx;
    height: 38rpx;
    margin-right: 12rpx;
}

.box .normal-style {
    font-size: 30rpx;
    vertical-align: 7rpx;
}

.box .delete {
    margin-left: 42rpx;
}

.box .text-red {
    color: red;
}

.box .active {
    color: #3D9BFC;
}

.box .add-address {
    position: fixed;
    bottom: 0;
    width: 100%;
    font-size: 34rpx;
    border-radius: 0;
    line-height: 90rpx;
    height: 90rpx;
}

.box .add-address::after {
    border-radius: 0;
}

.box .no-address {
    background-color: #EFF1F5;
    background-size: 100% 100%;
    width: 100%;
    height: 100%;
    position: absolute;
    text-align: center;
}

.box .no-address image {
    width: 374rpx;
    height: 261rpx;
    margin-top: 202rpx;
}

.box .no-address .no-address-word {
    font-size: 26rpx;
    color: #d2d3d4;
}

.box .add button {
    background: transparent;
    color: #3d9bfc;
    border: 1px solid #3d9bfc;
    width: 232rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    margin-top: 68rpx;
}

.box.order-addr .address-box {
    padding-right: 80rpx;
}

.box.order-addr .addr-selector {
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}

.box.order-addr .addr-selector image {
    width: 40rpx;
    height: 40rpx;
}