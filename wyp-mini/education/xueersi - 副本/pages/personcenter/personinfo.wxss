page {
    background: #F4F5F6;
    height: 100%;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

view,text {
    font-family: PingFang SC;
}

view[hidden],text[hidden],cover-view[hidden] {
    display: none!important;
}

button[disabled] {
    border: 1px solid rgba(109,86,86,0);
    outline: none;
}

button {
    background-color: #4aa4fd;
    color: #fff;
}

.icon-home_classdetailpage4 {
    font-size: 26rpx;
    color: #A1A5BB;
}

.icon-home_classdetail_clo {
    font-size: 38rpx;
    color: #BABDC9;
}

.icon-home_classdetail_cal,.icon-home_classdetailpage,.icon-home_classdetailpage2,.icon-home_classdetail_coa,.icon-home_classdetail_mai {
    font-size: 28rpx;
    color: #C8CBD9;
}

.head-info {
    height: 370rpx;
    position: relative;
    color: #fff;
    background: url('https://cdninsight.speiyou.com/my_bj_3x.png');
}

.head-info .head-img {
    width: 148rpx;
    height: 148rpx;
    margin-left: 36rpx;
    margin-top: 140rpx;
    float: left;
}

.head-info .student-info {
    float: left;
    margin-top: 148rpx;
    margin-left: 30rpx;
}

.head-info .name {
    font-size: 50rpx;
}

.head-info .scope {
    font-size: 20rpx;
    width: 118rpx;
    height: 32rpx;
    border: 1px solid #fff;
    margin-left: 20rpx;
    vertical-align: 13rpx;
    border-radius: 25rpx;
    padding: 5rpx;
}

.head-info .student-num {
    font-size: 26rpx;
    font-weight: light;
    opacity: .7;
    font-weight: 300;
}

.head-info .next {
    float: right;
    margin-top: 192rpx;
}

.head-info .next .er {
    width: 44rpx;
    height: 44rpx;
    margin-right: 24rpx;
}

.head-info .next .into {
    width: 32rpx;
    height: 32rpx;
    vertical-align: 4rpx;
    margin-right: 32rpx;
}

.menu-box {
    width: 100%;
    height: 176rpx;
    border-bottom: 1px solid #c3c3c3;
}

.menu-box .menuimg {
    width: 68rpx;
    height: 68rpx;
}

.menu-box .menu-item {
    float: left;
    position: relative;
    margin: 20rpx 60rpx 34rpx 50rpx;
    text-align: center;
}

.menu-box .buy-couse-count,.menu-box .upaid-course-count {
    position: absolute;
    top: 0;
    right: 0;
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    font-size: 24rpx;
    color: #fff;
    background: #e56763;
    line-height: 30rpx;
}

.menu-box .menu-name {
    font-size: 24rpx;
}

.exit-btn {
    margin: 40rpx;
    margin-top: 70rpx;
}

.info {
    margin: 20rpx;
    color: #7a7676;
    font-size: 24rpx;
}

.my-heads {
    height: 262rpx;
    background: url('http://static-xesapi.speiyou.cn/1524726271882.png') no-repeat center center;
    background-size: 100% 100%;
    position: relative;
}

.my-heads .my-heads-card {
    position: absolute;
    bottom: -100rpx;
    left: 50%;
    z-index: 3;
    transform: translateX(-50%);
    width: 690rpx;
    height: 200rpx;
    background: #fff;
    border-radius: 30rpx;
    box-shadow: 0 0 16px 0 rgba(28,39,134,0.1);
}

.my-heads .my-heads-card .card-padding {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    padding: 40rpx 20rpx 40rpx 40rpx;
}

.my-heads .my-heads-card .card-padding image {
    height: 120rpx;
    width: 120rpx;
    border-radius: 100%;
}

.my-heads .my-heads-card .card-padding .explain {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-flex: 1;
    flex: 1;
    padding-left: 20rpx;
}

.my-heads .my-heads-card .card-padding .explain .name {
    -webkit-box-flex: 1;
    flex: 1;
    font-size: 36rpx;
    color: #2C3256;
    font-weight: bold;
}

.my-heads .my-heads-card .card-padding .explain .mun {
    font-size: 32rpx;
    color: #2C3256;
}

.label-list {
    height: 286rpx;
    background: #fff;
    border-bottom: 1rpx solid rgba(0,0,0,0.03);
    box-shadow: 0 0 4rpx 0 rgba(0,0,0,0.03);
}

.label-list .label-padding {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    padding: 140rpx 25rpx 0 25rpx;
}

.label-list .label-padding .icon-cens {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    width: 178rpx;
    position: relative;
}

.label-list .label-padding .icon-cens::after {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    content: "";
    display: block;
    height: 52rpx;
    width: 1rpx;
    background-color: rgba(0,0,0,0.1);
}

.label-list .label-padding .icon-cens:last-child::after {
    display: none;
}

.label-list .label-padding .icon-cens .icons {
    height: 54rpx;
    width: 54rpx;
    position: relative;
}

.label-list .label-padding .icon-cens .icons image {
    height: 54rpx;
    width: 54rpx;
}

.label-list .label-padding .icon-cens .icons .icon-mun {
    position: absolute;
    top: -12rpx;
    right: -12rpx;
    height: 28rpx;
    width: 28rpx;
    border-radius: 100%;
    background-color: #F43E32;
    border: 4rpx solid #fff;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    color: #fff;
    font-size: 20rpx;
}

.label-list .label-padding .icon-cens .icon-text {
    padding-top: 20rpx;
    font-size: 24rpx;
    color: #2C3256;
}

.func-list {
    margin-top: 20rpx;
    border: 1rpx solid rgba(0,0,0,0.03);
    box-shadow: 0 0 4rpx 0 rgba(0,0,0,0.03);
}

.func-list .list-block {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    height: 94rpx;
    padding: 0 50rpx;
    background: #fff;
    position: relative;
}

.func-list .list-block:first-child .content {
    border-bottom: 0.5rpx solid rgba(0,0,0,0.1);
}

.func-list .list-block:first-child image {
    width: 34rpx;
    height: 30rpx;
}

.func-list .list-block .share-button {
    position: absolute;
    top: 0;
    left: 0;
    height: 94rpx;
    width: 100%;
    opacity: 0;
    z-index: 1;
}

.func-list .list-block image {
    width: 34rpx;
    height: 36rpx;
}

.func-list .list-block .content {
    -webkit-box-flex: 1;
    flex: 1;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    height: 94rpx;
    -webkit-box-align: center;
    align-items: center;
    margin-left: 20rpx;
}

.func-list .list-block .content .text {
    -webkit-box-flex: 1;
    flex: 1;
    font-size: 32rpx;
    color: #1C234B;
}

.func-list.bom-list .list-block image {
    width: 30rpx;
    height: 35rpx;
}

.func-list.bom-list .list-block:first-child .content {
    border: none;
}

.switching-button {
    height: 88rpx;
    width: 690rpx;
    font-size: 32rpx;
    color: #1C234B;
    background-color: #fff;
    border-radius: 200rpx;
    margin: 0 auto;
    margin-top: 60rpx;
    border: 1rpx solid rgba(0,0,0,0.03);
    box-shadow: 0 0 4rpx 0 rgba(0,0,0,0.03);
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
}