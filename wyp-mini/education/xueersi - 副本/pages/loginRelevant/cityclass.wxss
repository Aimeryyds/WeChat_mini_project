@import "../../wuBaseWxss/29.wxss";

@import "../../wuBaseWxss/6.wxss";

@import "../../wuBaseWxss/9.wxss";

@import "../../wuBaseWxss/16.wxss";

.button {
    font-size: 36rpx;
    width: 566rpx;
    height: 84rpx;
    border-radius: 50rpx;
    background: -webkit-gradient(linear,left top,right top,from(#6DCAE0),to(#339EDC));
    background: -webkit-linear-gradient(left,#6DCAE0,#339EDC);
    background: linear-gradient(to right,#6DCAE0,#339EDC);
    color: #fff;
}

button[disabled] {
    border: none;
}

page {
    background-color: #fff;
    font-size: 32rpx;
    color: rgba(0,0,0,0.85);
    padding-top: 40rpx;
    box-sizing: border-box;
}

.container {
    padding: 148rpx 92rpx 0 90rpx;
    position: relative;
}

.container .title {
    font-size: 48rpx;
    color: #fff;
    padding-bottom: 80rpx;
}

.container-mes {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
    height: 48rpx;
    margin-bottom: 64rpx;
    position: relative;
}

.message {
    font-size: 40rpx;
}

.change {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    font-size: 28rpx;
    color: #82859B;
}

.change .arrow {
    height: 22rpx;
    width: 22rpx;
    margin-left: 10rpx;
}

.change text {
    font-size: 28rpx;
    color: #ADB0C1;
}

.change text.icon-home_classdetailpage4 {
    font-size: 22rpx;
    margin-left: 10rpx;
}

.holderText {
    color: #ADB0C1;
    font-size: 32rpx;
}

.completeName input {
    margin-top: 60rpx;
    padding-bottom: 40rpx;
    border-bottom: 1rpx solid #ADB0C1;
    position: relative;
    font-size: 40rpx;
    color: #fff;
}

.attentions {
    margin-top: 40rpx;
    margin-bottom: 160rpx;
    font-size: 24rpx;
    color: #ADB0C1;
}

.submit {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    margin-top: 88rpx;
}

.submit .btn {
    width: 622rpx;
    height: 92rpx;
    border-radius: 46rpx;
    font-size: 32rpx;
    color: #fff;
    background: #FFAA0A;
    opacity: .3;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
}

.submit .btn.high {
    opacity: 1;
}