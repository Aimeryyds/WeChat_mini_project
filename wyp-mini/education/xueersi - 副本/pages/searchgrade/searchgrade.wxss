page {
    background: #FFF;
}

.container {
    padding-bottom: 80rpx;
}

.attention {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    color: #2C3256;
    background-color: rgba(44,50,86,0.1);
    font-size: 30rpx;
    text-align: center;
    margin-bottom: 60rpx;
}

.grade-container {
    margin: 30rpx auto;
}

.grade {
    margin: 30rpx 0 20rpx 40rpx;
    font-weight: 500;
    font-size: 32rpx;
    color: #1C234B;
}

.gradeitem-container {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    flex-wrap: wrap;
    margin-left: 12rpx;
}

.grade-item {
    margin: 0 28rpx 20rpx 28rpx;
    width: 182rpx;
    height: 66rpx;
    line-height: 70rpx;
    text-align: center;
    border-radius: 35rpx;
    background-color: #F3F3F8;
    color: #2B3257;
    font-weight: bold;
    font-size: 30rpx;
    border: 2rpx solid #F3F3F8;
}

.checked {
    border: 2rpx solid #1082FF;
    color: #1082FF;
}