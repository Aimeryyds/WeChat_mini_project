page {
    background: #FFF;
}

.top {
    padding: 36rpx 0 20rpx 28rpx;
    color: #2C3256;
}

.top-message {
    font-size: 36rpx;
}

.top-city {
    font-size: 48rpx;
    margin: 15rpx 0;
    font-weight: 500;
}

.container {
    color: #2C3256;
    font-family: PingFang SC;
    overflow: hidden;
}

.container-city {
    position: relative;
}

.container-city-index {
    font-size: 28rpx;
    width: 720rpx;
    height: 40rpx;
    background-color: #EFEEF0;
    padding-left: 30rpx;
}

.container-cityName {
    padding: 0 80rpx 0 30rpx;
}

.container-cityName .container-city-name {
    font-size: 30rpx;
    line-height: 90rpx;
    border-bottom: 2rpx solid rgba(0,0,0,0.1);
}

.container-cityName .container-city-name .icon-duigou {
    color: #1082FE;
    font-size: 28rpx;
    margin-left: 20rpx;
}

.container-cityName:last-child .container-city-name {
    border-bottom: none;
}

.container-index {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    width: 30rpx;
    position: fixed;
    top: 50%;
    transform: translateY(-40%);
    right: 20rpx;
    font-size: 20rpx;
    color: #1082FE;
    text-align: center;
    z-index: 10;
}

.container-index-item {
    height: 50rpx;
    width: 50rpx;
}