page {
    box-sizing: border-box;
    padding: 40rpx 32rpx;
    background: #fff;
}

.note {
    color: #bbb;
    font-size: 30rpx;
}

.note-icon {
    margin-right: 14rpx;
}

.title {
    margin-top: 30rpx;
    font-size: 40rpx;
    color: #454545;
}

.path-wrap {
    margin-top: 30rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    word-break: break-all;
}

.path-text {
    font-size: 28rpx;
    color: #666;
}

.path-btn {
    -webkit-box-flex: 0;
    flex: none;
    width: 152rpx;
    height: 56rpx;
    padding: 0;
    margin-left: 52rpx;
    text-align: center;
    font-size: 28rpx;
    line-height: 56rpx;
    border-radius: 120rpx;
    font-weight: 300;
}

.select-size-title {
    margin: 35rpx 0;
    width: 100%;
    font-size: 28rpx;
    color: #333;
    text-align: center;
    font-weight: 300;
}

.size-btn-wrap {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    margin: 0 8rpx;
}

.size-btn {
    font-size: 28rpx;
    font-weight: 300;
    border-radius: 46rpx;
    letter-spacing: 0.16rpx;
}

.size-btn::after {
    border: none;
}

.qrcode-wrap {
    margin-top: 30rpx;
    width: 100%;
    text-align: center;
}

.qrcode-img {
    width: 300rpx;
    height: 300rpx;
}

.qrcode-tips {
    margin-top: 32rpx;
    font-size: 28rpx;
    color: #bbb;
    letter-spacing: 0.16rpx;
    font-weight: 300;
}

.qrcode-qrid {
    padding-top: 30rpx;
}

.qrcode-qrid .qrid-tips {
    color: #454545;
    font-size: 30rpx;
}

.qrcode-qrid .qrid-tips .code {
    font-size: 36rpx;
    color: #4aa4fd;
}

.qrcode-qrid .explain {
    color: #bbb;
    font-size: 26rpx;
}