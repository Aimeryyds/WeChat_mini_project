.loading-center .loading-mask {
    height: 100%;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #fff;
    z-index: 999;
}

@keyframes load-in {
    0%,100% {
        height: 40rpx;
        background: #eceef1;
    }

    50% {
        height: 70rpx;
        margin: -15rpx 0;
        background: #eceef1;
    }
}

@-webkit-keyframes load-in {
    0%,100% {
        height: 40rpx;
        background: #eceef1;
    }

    50% {
        height: 70rpx;
        margin: -15rpx 0;
        background: #eceef1;
    }
}

.loading-animation {
    width: 80rpx;
    height: 40rpx;
    margin: 0 auto;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    z-index: 1000;
}

.loading-animation text {
    width: 8rpx;
    height: 100%;
    border-radius: 4rpx;
    background: #eceef1;
    transform: translateZ(0);
    animation: load-in 1s ease infinite;
}

.loading-animation text:nth-child(2) {
    animation-delay: .2s;
}

.loading-animation text:nth-child(3) {
    animation-delay: .4s;
}

.loading-animation text:nth-child(4) {
    animation-delay: .6s;
}

.loading-animation text:nth-child(5) {
    animation-delay: .8s;
}