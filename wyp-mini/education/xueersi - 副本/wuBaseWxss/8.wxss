.course-info-wrap {
    position: relative;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
}

.course-info-wrap .title .course-type-icon {
    border-radius: 4rpx;
    padding: 0 9rpx;
    line-height: 32rpx;
    font-size: 22rpx;
    margin-right: 12rpx;
    vertical-align: middle;
}

.course-info-wrap .title .course-type-icon.offline {
    background: #E0F5ED;
    color: #00B36A;
    border: 1rpx solid #00B36A;
}

.course-info-wrap .title .course-type-icon.double {
    background: #DFE8FF;
    color: #2567FF;
    border: 1rpx solid #92B3FF;
}

.course-info-wrap .title .course-type-icon.online {
    background: #FCEDE9;
    color: #FF5A41;
    border: 1rpx solid #FF5A41;
}

.course-info-wrap .title .class-name {
    color: #333;
    font-size: 36rpx;
    font-weight: bold;
    vertical-align: middle;
}

.course-info-wrap .info-list {
    margin-top: 16rpx;
}

.course-info-wrap~.course-info-item,.course-info-wrap .item {
    overflow: hidden;
    color: #626B80;
    font-size: 28rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.course-info-wrap~.course-info-item .icon,.course-info-wrap .item .icon {
    margin-right: 14rpx;
    width: 24rpx;
    height: 24rpx;
    transform: translateY(50%);
    margin-top: -5rpx;
}

.course-info-wrap~.course-info-item .text-right,.course-info-wrap .item .text-right {
    -webkit-box-flex: 1;
    flex: 1;
    padding-right: 100rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}

.course-info-wrap~.course-info-item .text-right .text-right-block,.course-info-wrap .item .text-right .text-right-block {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.course-info-wrap~.course-info-item .text-right .teacher-item,.course-info-wrap .item .text-right .teacher-item {
    -webkit-box-flex: 1;
    flex: 1;
}

.course-info-wrap .price-wrap .surplus-class {
    color: #2B3257;
    font-size: 24rpx;
    margin-top: 44rpx;
}

.course-info-wrap .price-wrap .info-price {
    margin-top: 44rpx;
    font-size: 40rpx;
    color: #FF6F0C;
    font-family: HelveticaNeue-CondensedBold;
    font-weight: bold;
    margin-right: 10rpx;
    display: -webkit-inline-box;
    display: -webkit-inline-flex;
    display: inline-flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
}

