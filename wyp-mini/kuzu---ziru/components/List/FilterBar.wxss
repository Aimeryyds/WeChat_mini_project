.filter-bar-wrapper {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    height: 48px;
    line-height: 48px;
    padding: 0 12px;
}

.filter-bar-wrapper.fixed {
    position: fixed;
    top: 36px;
    left: 0;
    right: 0;
    z-index: 600;
    background-color: #fff;
}

.filter-bar-wrapper .filter-bar-item {
    -webkit-box-flex: 1;
    flex: 1 1 23%;
    min-width: 23%;
    font-size: 12px;
    text-align: center;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.filter-bar-wrapper .filter-bar-item.sort-item {
    -webkit-box-flex: 1;
    flex: 1 1 8%;
    min-width: 8%;
}

.filter-bar-wrapper .filter-bar-item.sort-item .sort-icon {
    font-size: 16px;
    color: #444;
}

.filter-bar-wrapper .filter-bar-item.active .select-icon {
    color: #ffa000;
    transform: rotate(180deg);
}

.filter-bar-wrapper .filter-bar-item .select-icon {
    color: #ccc;
    font-size: 7px;
    margin-left: 4px;
    transition: .3s;
    transform-origin: 50% 48%;
}

.filter-bar-wrapper .filter-bar-item.br1 {
    position: relative;
}

.filter-bar-wrapper .filter-bar-item.br1:before {
    content: "";
    display: block;
    width: 1px;
    height: 20px;
    background: rgba(0,0,0,.06);
    position: absolute;
    right: 0;
    top: 16px;
}

.quick-filter-padding {
    padding-left: 20px;
}

.quick-filter-wrapper {
    height: 40px;
}

.quick-filter-wrapper .quick-filter {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    flex-wrap: nowrap;
    padding-top: 1px;
}

.quick-filter-wrapper .quick-filter .place-holder {
    -webkit-box-flex: 0;
    flex: 0 0 40rpx;
    width: 40rpx;
    height: 1rpx;
}

.quick-filter-wrapper .quick-filter-item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-flex: 0;
    flex: 0 0 auto;
    padding: 6px 10px;
    margin-right: 8px;
    background: rgba(0,0,0,.03);
    font-size: 12px;
    color: rgba(0,0,0,.4);
    border-radius: 15px;
}

.quick-filter-wrapper .quick-filter-item.no-padding {
    padding: 0;
}

.quick-filter-wrapper .quick-filter-item:last-of-type {
    margin-right: 0;
}

.quick-filter-wrapper .quick-filter-item.active {
    color: #fff!important;
    background: #ff961e!important;
}

.quick-filter-wrapper .quick-filter-item .icon {
    width: 16px;
    height: 16px;
    margin-right: 2px;
}

.quick-filter-wrapper .quick-filter-item .pic {
    width: 90px;
    height: 31px;
}

.quick-filter-wrapper.fixed {
    position: fixed;
    top: 83px;
    left: 0;
    right: 0;
    z-index: 400;
    background-color: #fff;
    border-bottom: 1px solid rgba(0,0,0,.05);
}

.filter-wrapper {
    position: fixed;
    top: 83px;
    left: 0;
    right: 0;
    height: 320px;
    background-color: #fff;
    z-index: 401;
    opacity: 0;
    transition: .3s;
    transform: translate3d(0,-40%,0);
    display: none;
}

.filter-wrapper.show {
    display: block;
}

.filter-wrapper.full {
    bottom: 0;
    height: auto;
}

.filter-wrapper.active {
    opacity: 1;
    transform: translateZ(0);
}

.filter-wrapper.short {
    height: 230px;
}

.filter-wrapper .type .filter-inner {
    top: 50px;
}

.filter-wrapper .type .filter-type-tab-wrapper {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    justify-content: space-around;
    height: 50px;
}

.filter-wrapper .type .filter-type-tab {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-flex: 1;
    flex: 1;
    font-size: 14px;
    background-color: #f6f6f6;
}

.filter-wrapper .type .filter-type-tab.active {
    background-color: #fff;
}

.shadow-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 400;
    opacity: 0;
    transition: .3s;
    background-color: rgba(0,0,0,.4);
}

.shadow-wrapper.active {
    opacity: 1;
}

.location {
    display: none;
}

.location.active {
    display: block;
}

.location,.price {
    height: 100%;
}

.location-wrapper,.price-wrapper,.sort-wrapper {
    height: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    text-align: center;
}

.location-wrapper .price-block .list,.price-wrapper .price-block .list,.sort-wrapper .price-block .list {
