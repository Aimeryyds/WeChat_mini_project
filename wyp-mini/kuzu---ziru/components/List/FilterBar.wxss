.location-wrapper .location-block.block2,.location-wrapper .price-block.block2,.location-wrapper .sort-block.block2,.price-wrapper .location-block.block2,.price-wrapper .price-block.block2,.price-wrapper .sort-block.block2,.sort-wrapper .location-block.block2,.sort-wrapper .price-block.block2,.sort-wrapper .sort-block.block2 {
    background-color: #fbfbfb;
}

.location-wrapper .location-block.block3,.location-wrapper .price-block.block3,.location-wrapper .sort-block.block3,.price-wrapper .location-block.block3,.price-wrapper .price-block.block3,.price-wrapper .sort-block.block3,.sort-wrapper .location-block.block3,.sort-wrapper .price-block.block3,.sort-wrapper .sort-block.block3 {
    background-color: #f3f3f3;
}

.location-wrapper .location-block .list,.location-wrapper .price-block .list,.location-wrapper .sort-block .list,.price-wrapper .location-block .list,.price-wrapper .price-block .list,.price-wrapper .sort-block .list,.sort-wrapper .location-block .list,.sort-wrapper .price-block .list,.sort-wrapper .sort-block .list {
    position: relative;
    font-size: 14px;
    color: #666;
    margin-bottom: 10px;
    padding: 4px 8px;
    white-space: nowrap;
}

.location-wrapper .location-block .list.active,.location-wrapper .price-block .list.active,.location-wrapper .sort-block .list.active,.price-wrapper .location-block .list.active,.price-wrapper .price-block .list.active,.price-wrapper .sort-block .list.active,.sort-wrapper .location-block .list.active,.sort-wrapper .price-block .list.active,.sort-wrapper .sort-block .list.active {
    color: #ff9000;
}

.location-wrapper .location-block .list.active:after,.location-wrapper .price-block .list.active:after,.location-wrapper .sort-block .list.active:after,.price-wrapper .location-block .list.active:after,.price-wrapper .price-block .list.active:after,.price-wrapper .sort-block .list.active:after,.sort-wrapper .location-block .list.active:after,.sort-wrapper .price-block .list.active:after,.sort-wrapper .sort-block .list.active:after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: 0;
    width: 40px;
    height: 2px;
    transform: translateX(-50%);
    background-color: #ff9000;
}

.location-wrapper .location-block.active,.location-wrapper .price-block.active,.location-wrapper .sort-block.active,.price-wrapper .location-block.active,.price-wrapper .price-block.active,.price-wrapper .sort-block.active,.sort-wrapper .location-block.active,.sort-wrapper .price-block.active,.sort-wrapper .sort-block.active {
    width: auto;
    -webkit-box-flex: 1;
    flex: 1;
}

.filter-inner {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 68px;
    overflow: hidden;
}

.filter-block {
    padding: 10px 15px;
}

.filter-block .title {
    color: #444;
    font-size: 14px;
}

.filter-block .subtitle {
    color: #999;
    font-size: 12px;
}

.filter-button-group {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 400;
    padding: 14px 20px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    background-color: #fff;
    box-shadow: 0 -2px 4px 0 rgba(0,0,0,.05);
}

.filter-button-group .btn {
    width: 324rpx;
    height: 88rpx;
    line-height: 88rpx;
    background-color: #ccc;
    text-align: center;
    font-size: 15px;
    color: #fff;
    border-radius: 2px;
}

.filter-button-group .btn.s {
    width: 200rpx;
}

.filter-button-group .btn.l {
    width: 440rpx;
}