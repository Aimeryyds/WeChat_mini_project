.shadow-button {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-align: center;
    align-items: center;
    -ms-flex-pack: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    flex-direction: row;
    text-align: center;
    border-radius: 20rpx;
    font-size: 32rpx;
    background: -webkit-gradient(linear,right top,left top,from(#4b70e5),to(#617fdf));
    background: -webkit-linear-gradient(right,#4b70e5 0%,#617fdf 100%);
    background: -o-linear-gradient(right,#4b70e5 0%,#617fdf 100%);
    background: linear-gradient(270deg,#4b70e5 0%,#617fdf 100%);
    color: #ffffff;
    letter-spacing: 1.2rpx;
    z-index: 2;
}

.shadow-button-shadow {
    position: absolute;
    background: -webkit-gradient(linear,right top,left top,from(#4b70e5),to(#617fdf));
    background: -webkit-linear-gradient(right,#4b70e5 0%,#617fdf 100%);
    background: -o-linear-gradient(right,#4b70e5 0%,#617fdf 100%);
    background: linear-gradient(270deg,#4b70e5 0%,#617fdf 100%);
    width: 90%;
    height: 100%;
    top: 20rpx;
    left: 5%;
    opacity: 0.4;
    border-radius: 20rpx;
    filter: blur(12rpx);
    z-index: 1;
}