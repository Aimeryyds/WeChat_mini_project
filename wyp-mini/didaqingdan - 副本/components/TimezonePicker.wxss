picker-view-column {
    text-align: center;
}

.timezone-picker {
    position: fixed;
    left: 0;
    bottom: -100%;
    padding: 36rpx;
    width: 100%;
    box-sizing: border-box;
    z-index: 2;
    background-color: white;
}

.timezone-wrapper.show .timezone-picker {
    bottom: 0;
}

.timezone-wrapper .controller {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-pack: justify;
    justify-content: space-between;
    -ms-flex-align: center;
    align-items: center;
}

.cancel {
    color: #fd5d5f;
}

.confirm {
    color: #617fde;
}