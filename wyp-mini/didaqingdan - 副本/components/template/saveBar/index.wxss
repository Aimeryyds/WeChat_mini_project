.saveBtnWrapper {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: white;
    padding: 24rpx 40rpx;
    box-sizing: border-box;
}

.full-screen .saveBtnWrapper {
    padding-bottom: 66rpx;
}

.saveBtn {
    display: block;
    margin: 0;
    width: 100%;
    height: 96rpx;
    border-radius: 16rpx;
    font-size: 36rpx;
    font-weight: 400;
    background-color: #617fde;
    color: #fff;
}

.saveBtn.auth {
    background-color: #1aad19;
}