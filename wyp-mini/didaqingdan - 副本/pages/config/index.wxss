page {
    background-color: #ffffff;
}

view,text,picker {
    box-sizing: border-box;
}

.hide {
    display: none;
}

.section-wrapper {
    margin-bottom: 64rpx;
}

.section-wrapper:last-child {
    margin-bottom: 0;
}

.section-wrapper .title {
    font-size: 32rpx;
    display: inline-block;
    width: 100%;
    margin: 0 0 16rpx;
    padding: 0 30rpx;
    line-height: 40rpx;
    color: #888;
}

.section-wrapper .detail {
    font-size: 32rpx;
}

.section-wrapper .title.top {
    margin-top: 30rpx;
}

.section-wrapper .help {
    font-size: 24rpx;
    line-height: 36rpx;
    display: inline-block;
    width: 100%;
    padding: 16rpx 30rpx;
    color: #b5b5b5;
}

.control {
    width: 100%;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-pack: justify;
    justify-content: space-between;
    -ms-flex-align: center;
    align-items: center;
    height: 80rpx;
    padding: 0 30rpx;
    font-size: 34rpx;
}

.control .value {
    color: #888;
    display: -ms-flexbox;
    display: flex;
}

.value .arrow {
    display: inline-block;
    margin: 0 20rpx;
    color: #c7c7c7;
    position: relative;
}

.arrow .icon {
    position: absolute;
    top: 50%;
    transform: translateY(-50%) scale(0.5);
}

.timezone-control .detail {
    min-width: 160rpx;
}

.timezone-name {
    max-width: 500rpx;
    font-size: 28rpx;
    line-height: 88rpx;
    overflow: hidden;
}