.hide {
    display: none;
}

.task-list-page {
    background-color: white;
}

.header {
    height: 96rpx;
    line-height: 96rpx;
    display: -ms-flexbox;
    display: flex;
    padding: 0 0 0 36rpx;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 2rpx solid #d6d7dc;
}

.header .open-list {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-align: center;
    align-items: center;
    padding-right: 36rpx;
    height: 100%;
}

.header .project-title {
    flex: 1;
    color: #617fde;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.task-list {
    display: -ms-flexbox;
    display: flex;
    flex-flow: column;
    width: 100%;
    text-align: left;
    padding-bottom: 108rpx;
}

.full-screen .task-list {
    padding-bottom: 140rpx;
}

.task-section {
    background-color: #ecf0fb;
    padding: 0 36rpx;
    font-size: 24rpx;
    color: #041835;
    opacity: 0.38;
    height: 50rpx;
    line-height: 50rpx;
}

.full-screen .create-task-wrapper .create-body {
    height: 140rpx;
    padding-bottom: 32rpx;
}

.hide-subscribe,.subscribe-account-text {
    display: inline-block;
    vertical-align: bottom;
}

.subscribe-account-text {
    margin: 0 264rpx 0 40rpx;
    font-weight: 300;
    color: #617FDE;
}

.subscribe-account {
    padding: 10rpx 0;
    background-color: rgba(97,127,222,0.12);
}