.lc-loadingbg-wrap,.lc-wran-wrap,.lc-zwt-wrap {
    position: fixed;
    top: 0;
    height: 100%;
    z-index: 90;
    background-color: #fff;
    width: 100%;
    display: block;
    overflow: hidden;
    padding-top: 400rpx;
}

.lc-warn-image {
    width: 200rpx;
    height: 200rpx;
    display: block;
    margin: 0 auto 50rpx;
}

.lc-bk-warn-black {
    font-size: 28rpx;
    color: #c8c8c8;
    display: block;
    text-align: center;
    margin: 30rpx auto;
}

.lc-loading-image {
    width: 36rpx;
    height: 36rpx;
    display: block;
    padding: 28rpx 0;
    margin: 0 auto;
}

.lc-logo-image {
    width: 528rpx;
    height: 74rpx;
    display: block;
    margin: 0 auto;
}