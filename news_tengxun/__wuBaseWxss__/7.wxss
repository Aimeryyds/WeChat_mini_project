.lc-related-article {
    margin-bottom: 60rpx;
}

.lc-flex-col {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.lc-rla__item {
    padding: 16rpx 0;
    height: 164rpx;
    border-bottom: 2rpx solid #e4e4e4;
}

.lc-rla__item:last-child {
    border-bottom: 0;
}

.lc-rla__title {
    font-size: 38rpx;
    text-align: center;
}

.lc-rla__title_line {
    display: inline-block;
    width: 32rpx;
    height: 12rpx;
    border-radius: 7rpx;
    background-color: #d8ecff;
}

.lc-rla-item__title {
    font-size: 32rpx;
    color: #202020;
}

.lc-rla__title_box {
    flex: 1;
}

.lc-rla__img {
    width: 230rpx;
    height: 164rpx;
}