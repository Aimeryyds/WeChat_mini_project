.container {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.content-text {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    width: 100%;
    word-break: break-all;
}

.opacity {
    opacity: 0;
}

.show-all-image {
    display: inline;
    width: 44rpx;
    height: 26rpx;
}