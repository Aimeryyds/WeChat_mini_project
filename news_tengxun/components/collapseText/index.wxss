.content-text {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    width: 100%;
    word-break: break-all;
    text-align: left;
}

.opacity {
    opacity: 0;
}

.show-all-text {
    display: block;
    margin-top: 10rpx;
    color: #2883e9;
}