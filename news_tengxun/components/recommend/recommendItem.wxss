.recommend-item {
    border-top: 1rpx solid #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 24rpx 0;
    margin: 0 24rpx;
}

.recommend-item:active {
    background: #e7e7e7;
}

.recommend-item.no-border {
    border-top: none;
}

.submit-button {
    padding: 0;
    line-height: 1;
    margin-left: 0;
    margin-right: 0;
    font-size: 0rpx!important;
}

.submit-button,.submit-button:after {
    background-color: transparent;
    border: none;
}

.submit-button:after {
    padding-left: 0rpx;
    padding-right: 0rpx;
    width: 0;
    height: 0;
}

.content-box {
    flex: 1;
}

.image-box {
    border-radius: 8rpx;
    position: relative;
    background: #ececec url(http://mat1.gtimg.com/www/images/newsapp/wxapp/news/ic_default_bg.png) 50% no-repeat;
    background-size: 50rpx;
    margin-left: 28rpx;
}

.image-box,.img {
    width: 172rpx;
    height: 120rpx;
}

.title {
    font-size: 32rpx;
    line-height: 46rpx;
    color: #222;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-inline-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    max-height: 92rpx;
    text-align: left;
    width: 100%;
}

.info-box,.title.has-read {
    color: #888;
}

.info-box {
    font-size: 24rpx;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin-top: 10rpx;
}

.info {
    margin-right: 16rpx;
    white-space: nowrap;
}