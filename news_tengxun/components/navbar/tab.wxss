.tab-wrapper {
    background-color: #fff;
    left: 0;
    width: 100%;
    justify-content: center;
    border-bottom: 1rpx solid #f0f0f0;
    box-sizing: border-box;
    padding: 0 200rpx;
}

.item-wrapper,.tab-wrapper {
    display: flex;
    align-items: center;
}

.item-wrapper {
    color: #888;
    font-size: 32rpx;
    flex-direction: column;
    padding: 0 30rpx;
}

.line {
    height: 8rpx;
    width: 32rpx;
    margin-top: 5rpx;
    background: transparent;
}

.active .line {
    background: #2883e9;
}

.text {
    height: 70rpx;
    width: 66rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.active .text {
    font-weight: 700;
    color: #222;
}