@import "../../__wuBaseWxss__/0.wxss";

.news-item {
    margin: 0 24rpx;
    padding: 24rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
}

.news-item.hide-border {
    border-bottom: none;
    padding-bottom: 40rpx;
}

.small-pic-item {
    display: flex;
    justify-content: space-between;
}

.big-pic {
    width: 100%;
    height: 386rpx;
    background: hsla(0,0%,53.3%,.5);
    margin-top: 14rpx;
    overflow: hidden;
}

.big-pic,.small-pic {
    position: relative;
    border-radius: 4rpx;
    z-index: -1;
}

.small-pic {
    width: 230rpx;
    height: 160rpx;
}

.big-video-mark {
    position: absolute;
    width: 110rpx;
    height: 110rpx;
    font-size: 60rpx;
    background: rgba(0,0,0,.3);
    color: #fff;
    border-radius: 100%;
    text-align: center;
    line-height: 110rpx;
    left: 50%;
    top: 50%;
    margin-left: -55rpx;
    margin-top: -55rpx;
}

.multi-pic-mark,.video-mark,.video-time-mark {
    position: absolute;
    width: fit-content;
    font-family: PingFangSC;
    font-size: 22rpx;
    line-height: 36rpx;
    height: 36rpx;
    border-radius: 88rpx;
    font-weight: 400;
    font-style: normal;
    font-stretch: normal;
    line-height: normal;
    letter-spacing: normal;
    color: #fff;
    background: rgba(0,0,0,.3);
    vertical-align: middle;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 16rpx;
}

.video-mark {
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
}

.video-time-mark {
    right: 28rpx;
    bottom: 20rpx;
    background: rgba(0,0,0,.3);
    border-radius: 200rpx;
    height: 21px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 20rpx;
}

.video-play-mark {
    width: 30rpx;
    height: 30rpx;
    margin-top: 10rpx;
    margin-right: 2rpx;
}

.video-play-icon {
    margin-right: 12rpx;
    font-size: 30rpx;
}

.video-count {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #fff;
    letter-spacing: 0;
    text-align: left;
}

.video-count-line {
    opacity: .5;
    background: #fff;
    width: 2rpx;
    height: 20rpx;
    margin-left: 16rpx;
    margin-right: 16rpx;
}

.multi-pic-mark {
    right: 10rpx;
    bottom: 10rpx;
    padding: 0 14rpx;
}

.three-pic-cover {
    position: relative;
    display: flex;
    margin: 14rpx -3rpx 0;
}

.three-pic {
    flex: 1;
    width: 230rpx;
    height: 160rpx;
    border-radius: 6rpx;
    margin: 0 3rpx;
}

.title-cover {
    margin-top: -6rpx;
    display: flex;
    justify-content: space-between;
    width: 438rpx;
}

.icon,.title-cover {
    flex-direction: column;
}

.icon {
    width: 54rpx;
    height: 32rpx;
    border-radius: 4rpx;
    vertical-align: middle;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 8rpx;
}

.topic-icon {
    background: #ffdb02;
}

.special-icon {
    background: #2883e9;
}

.original-icon {
    background: #f04646;
}

.text {
    font-family: PingFangSC-Medium;
    font-weight: 700;
    font-size: 22rpx;
    color: #222;
    letter-spacing: 0;
    line-height: normal;
    vertical-align: middle;
    font-style: normal;
    font-stretch: normal;
    letter-spacing: normal;
}

.original-icon .text,.special-icon .text {
    color: #fff;
}

.title {
    font-family: PingFangSC;
    font-size: 36rpx;
    font-weight: 400;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.5;
    color: #222;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    word-break: break-all;
}

.desc,.title.has-read {
    color: #888;
}

.desc {
    font-family: PingFangSC;
    font-size: 24rpx;
    font-weight: 400;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.17;
    letter-spacing: normal;
    margin-top: 22rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    word-break: break-all;
}

.desc text {
    margin-right: 20rpx;
}

.big-pic-item .desc {
    margin-top: 16rpx;
}