.item-wrapper {
    margin: 0 24rpx;
    padding: 28rpx 0 30rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.comment-article-wrapper {
    background: #f7f7f7;
    border-radius: 12rpx;
    width: 702rpx;
    box-sizing: border-box;
}

.header-wrapper {
    justify-content: space-between;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #888;
    padding-bottom: 20rpx;
}

.header-wrapper,.media-wrapper {
    display: flex;
    align-items: center;
}

.media-wrapper {
    width: fit-content;
}

.media-icon {
    position: relative;
    width: 48rpx;
    height: 48rpx;
    border-radius: 100%;
    margin-right: 16rpx;
}

.media-icon.big {
    width: 60rpx;
    height: 60rpx;
}

.media-name {
    letter-spacing: 0;
    max-width: 320rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.media-name.dark {
    max-width: 520rpx;
    color: #222;
}

.pub-time {
    font-size: 24rpx;
}

.media-ext {
    color: #222;
    padding-left: 20rpx;
}

.reply-content {
    position: relative;
    font-family: PingFangSC;
    font-size: 32rpx;
    line-height: 1.5;
    letter-spacing: normal;
    color: #222;
    padding-bottom: 20rpx;
}

.reply-hot-comment {
    position: absolute;
    right: 110rpx;
    top: -55rpx;
    width: 120rpx;
    height: 90rpx;
    opacity: .4;
}

.like-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    font-family: PingFangSC;
    font-size: 28rpx;
    color: #888;
    padding-left: 8rpx;
    padding-bottom: 20rpx;
}

.like-wrapper.like-right-icon:after {
    content: "";
    position: absolute;
    right: 15rpx;
    top: 20rpx;
    border-top: 2rpx solid #888;
    border-right: 2rpx solid #888;
    width: 11rpx;
    height: 11rpx;
    transform: rotate(45deg);
}

.like-avatar-wrapper {
    height: 48rpx;
    line-height: 48rpx;
}

.like-avatar {
    width: 48rpx;
    height: 48rpx;
    border-radius: 100%;
    margin-left: -8rpx;
}

.like-avatar:first-child {
    margin-left: 0;
}

.like-avatar:last-child {
    margin-right: 12rpx;
}

.like-nick-name {
    padding-right: 12rpx;
    color: #222;
}

.comment {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #888;
    line-height: 1.57;
    padding: 20rpx;
}

.split-line {
    margin: 0 20rpx;
    border-top: 1rpx solid #e3e3e3;
}

.article-wrapper {
    display: flex;
    padding: 20rpx;
}

.img-wrapper {
    position: relative;
    font-size: 0;
    margin-right: 20rpx;
}

.img {
    width: 112rpx;
    height: 112rpx;
    border-radius: 6rpx;
}

.play-icon {
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    overflow: unset;
}

.play-icon:before {
    content: "";
    position: absolute;
    z-index: -1;
    top: -15rpx;
    left: -15rpx;
    width: 80rpx;
    height: 80rpx;
    background-color: rgba(0,0,0,.3);
    border-radius: 100%;
}

.content-wrapper {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #222;
    line-height: 48rpx;
    display: flex;
    align-items: center;
}

.nick-name {
    color: #888;
}

.bottom-wrapper {
    justify-content: space-between;
    font-family: PingFangSC;
    font-size: 24rpx;
    color: #888;
    padding-top: 28rpx;
}

.bottom-wrapper,.reply-btn-wrapper {
    display: flex;
    align-items: center;
}

.reply-btn {
    position: relative;
    color: #222;
    padding-right: 30rpx;
}

.reply-btn:after {
    content: "";
    position: absolute;
    right: 10rpx;
    top: 11rpx;
    border-top: 2rpx solid #222;
    border-right: 2rpx solid #222;
    width: 11rpx;
    height: 11rpx;
    transform: rotate(45deg);
}