.comment-bar {
    height: 100rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: 1rpx solid #eee;
    background-color: #fff;
    box-sizing: content-box;
}

.comment-bar.black {
    background-color: #1b1c20;
    border-color: #33363e;
}

.is-iphone-x {
    background-color: #fff;
    padding-bottom: 60rpx;
}

.is-iphone-x.black {
    background-color: #1b1c20;
}

.input-block {
    flex: 1;
    height: 60rpx;
    border-radius: 30rpx;
    background-color: #f7f7f7;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin: 0 30rpx;
    white-space: nowrap;
}

.black .input-block {
    background-color: #232429;
}

.input-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 18rpx;
    margin-left: 22rpx;
}

.input-text {
    font-size: 28rpx;
    color: #777;
}

.right-block {
    display: flex;
    align-items: center;
    justify-content: center;
}

.comment-icon-wrapper,.share-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 25rpx;
}

.comment-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
}

.comment-icon-text {
    font-size: 24rpx;
    color: #888;
    line-height: normal;
}

.share-icon {
    width: 42rpx;
    height: 42rpx;
}

.none_button {
    line-height: 1;
    margin-left: 0;
    font-size: 0rpx!important;
    padding: 25rpx;
}

.none_button,.none_button:after {
    background-color: transparent;
    border: none;
}

.none_button:after {
    padding-left: 0rpx;
    padding-right: 0rpx;
    width: 0;
    height: 0;
}