.title-cover {
    height: 60rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: url(https://mat1.gtimg.com/www/js/news/title-bg-white.png) 50% no-repeat;
    background-size: 176rpx 60rpx;
}

.title {
    font-size: 32rpx;
    font-weight: 700;
    line-height: 1;
    color: #222;
    margin: 0 12rpx;
}

.black {
    background: url(https://mat1.gtimg.com/www/js/news/title-bg-black.png) 50% no-repeat;
    background-color: #1b1c20;
    background-size: 176rpx 60rpx;
}

.black,.black .title {
    color: #fff;
}