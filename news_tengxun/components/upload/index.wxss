.upload-wrapper {
    display: flex;
}

.upload {
    margin: 4rpx;
    width: 215rpx;
    height: 215rpx;
    border-radius: 8rpx;
    align-items: center;
    background: url(https://mat1.gtimg.com/www/images/newsapp/wxapp/news/pages/weibo-publish/add-ic-pic-2x.png) #f7f7f7 50% no-repeat;
    background-size: 54rpx 54rpx;
    position: relative;
}

.uploadText {
    font-size: 24rpx;
    width: 210rpx;
    color: #a5a5a5;
    text-align: center;
    display: block;
    position: absolute;
    left: 50%;
    bottom: 5rpx;
    transform: translate3d(-50%,-50%,0);
}

.upload-image {
    width: 215rpx;
    height: 215rpx;
    border-radius: 8rpx;
}