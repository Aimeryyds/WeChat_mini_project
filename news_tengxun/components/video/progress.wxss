.progress-bar-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
}

.progress-bar {
    flex-grow: 1;
    padding: 25rpx 10rpx;
    margin: 0;
}

.progress-bar-icon {
    width: 50rpx;
    height: 50rpx;
    margin: 0;
    padding: 0;
    flex: 0 0 auto;
}

.play-icon {
    padding-left: 28rpx;
}

.fullscreen-icon {
    padding-right: 28rpx;
}

.play-time {
    font-size: 20rpx;
    color: #fff;
    line-height: 20rpx;
    min-width: 55rpx;
    padding: 25rpx 5rpx;
}