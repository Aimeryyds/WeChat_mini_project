.news-flash-wrap {
    padding: 5rpx 0;
    background-color: #fff;
}

.news-flash {
    padding: 16rpx;
    margin: 0 24rpx;
    height: 124rpx;
    box-sizing: border-box;
    border-radius: 8rpx;
    background-color: #f7f7f7;
}

.left,.news-flash {
    display: flex;
    justify-content: center;
    align-items: center;
}

.left {
    border-right: 1rpx solid #e6e6e6;
    flex-direction: column;
    padding-right: 20rpx;
}

.icon-cover {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 90rpx;
    height: 36rpx;
    border-radius: 4rpx;
    background-color: #f04646;
    margin-right: 7rpx;
}

.flash-icon {
    width: 26rpx;
    height: 26rpx;
}

.flash-desc {
    font-size: 24rpx;
    line-height: 24rpx;
    color: #fff;
}

.flash-desc,.time {
    font-weight: 700;
    font-style: normal;
    font-stretch: normal;
    letter-spacing: normal;
}

.time {
    font-size: 28rpx;
    line-height: .86;
    color: #f04646;
    margin-top: 16rpx;
}

.title {
    flex: 1;
    font-size: 32rpx;
    color: #222;
    line-height: 46rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal!important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    letter-spacing: normal;
    margin-left: 20rpx;
}

.arrow {
    width: 18rpx;
    height: 18rpx;
    margin-left: 30rpx;
}