<view bindtap="onTap" class="news-flash-wrap">
    <view class="news-flash">
        <view class="left">
            <view class="icon-cover">
                <image class="flash-icon" mode="aspectFill" src="http://mat1.gtimg.com/www/js/news/white-flash.png"></image>
                <view class="flash-desc">快讯</view>
            </view>
            <text class="time">{{time}}</text>
        </view>
        <view class="title">{{title}}</view>
        <image class="arrow" mode="aspectFill" src="http://mat1.gtimg.com/www/js/news/arrow-gary.png"></image>
    </view>
</view>
