.content-text {
    width: 100%;
    word-break: break-all;
    position: relative;
}

.opacity {
    opacity: 0;
}

.show-all-text {
    display: block;
    margin-top: 10rpx;
    color: #2883e9;
}

.cover {
    position: absolute;
    width: 100%;
    height: 240rpx;
    bottom: 0;
    background-image: linear-gradient(180deg,hsla(0,0%,100%,0),#fff);
}

.show-all-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #2883e9;
    font-size: 28rpx;
    line-height: 28rpx;
    height: 32rpx;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    white-space: nowrap;
}

.mask-icon {
    width: 24rpx;
    height: 24rpx;
    margin-left: 12rpx;
    transform: rotate(90deg);
}