.battle {
    width: 100%;
}

.battleTitle {
    font-size: 36rpx;
    color: #222;
    letter-spacing: 0;
    line-height: 36rpx;
}

.battleTitleSmall {
    font-size: 32rpx;
    letter-spacing: 0;
    line-height: 32rpx;
    font-weight: 700;
    text-align: center;
}

.battleNumber {
    font-size: 24rpx;
    color: #777;
    text-align: center;
    line-height: 24rpx;
    margin-top: 20rpx;
}

.optionBox {
    width: 100%;
    margin-top: 30rpx;
}

.option,.optionBox {
    display: flex;
    align-items: center;
    box-sizing: border-box;
}

.option {
    border-radius: 44rpx;
    height: 72rpx;
    flex: 1;
    justify-content: center;
}

.redOption {
    border: 2rpx solid #ff5d5d;
    color: #ff5d5d;
    margin-right: 11rpx;
}

.blueOption {
    border: 2rpx solid #2883e9;
    color: #2883e9;
    margin-left: 11rpx;
}

.option .imgIco {
    height: 44rpx;
    width: 44rpx;
    margin: 12rpx 20rpx;
}

.option .title {
    flex: 1;
    font-size: 28rpx;
    line-height: 28rpx;
    max-height: 28rpx;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    word-break: break-all;
    overflow: hidden;
    text-align: center;
}

.redOption .title {
    margin-left: 20rpx;
}

.blueOption .title {
    margin-right: 20rpx;
}

.percent {
    margin-top: 30rpx;
}

.iconBlue,.iconRed,.percent {
    display: flex;
    justify-content: center;
    align-items: center;
}

.iconBlue,.iconRed {
    font-size: 24rpx;
    color: #fff;
    width: 72rpx;
    height: 72rpx;
    background-position: 50%;
    background-repeat: no-repeat;
    background-size: contain;
}

.iconRed {
    margin-right: -4rpx;
    background-image: url(http://mat1.gtimg.com/www/js/news/battle_red.png);
}

.iconBlue {
    margin-left: -4rpx;
    background-image: url(http://mat1.gtimg.com/www/js/news/battle_blue.png);
}

.percentageRed {
    background-color: #ff5d5d;
    height: 32rpx;
}

.percentageBlue {
    background-color: #2883e9;
    height: 32rpx;
}

.percentTitle {
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: center;
    margin-top: 16rpx;
}

.titleRed {
    color: #ff5d5d;
}

.titleBlue,.titleRed {
    font-size: 28rpx;
    line-height: 28rpx;
}

.titleBlue {
    color: #2883e9;
}