.share-tab {
    height: 72rpx;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 40rpx 0 0;
}

.share-icon,.wechat-icon {
    width: 44rpx;
    height: 44rpx;
}

.share-word {
    color: #222;
    font-size: 28rpx;
    line-height: normal;
    margin-right: 18rpx;
}

.none-button {
    padding: 0;
    line-height: 1;
    width: 240rpx;
    font-size: 0rpx!important;
}

.none-button,.none-button:after {
    border: none;
    margin-left: 0;
    margin-right: 0;
}

.none-button:after {
    padding-left: 0;
    padding-right: 0;
    background-color: #fff;
    width: 0;
    height: 0;
}

.poster-wrapper {
    width: 250rpx;
    margin-left: 24rpx;
}

.share-button {
    border-radius: 40rpx;
    background-color: #f7f7f7;
    height: 72rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.theme-white .share-button {
    box-shadow: 0 2rpx 8rpx 0 rgba(0,0,0,.1);
    background-color: #fff;
}