<view class="share-tab {{themeWhite&&'theme-white'}}">
    <button class="none-button share-button" data-page-area="content" openType="share">
        <view class="share-word">分享好友</view>
        <image class="wechat-icon" src="http://mat1.gtimg.com/www/js/news/wechat-ic.png"></image>
    </button>
    <view bindtap="tapPoster" class="poster-wrapper share-button">
        <view class="share-word">分享{{shareText}}</view>
        <image class="share-icon" src="http://mat1.gtimg.com/www/js/news/pengyouquan.png"></image>
    </view>
</view>
