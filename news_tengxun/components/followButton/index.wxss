.follow-button {
    width: 150rpx;
    height: 48rpx;
    line-height: 48rpx;
    border-radius: 24rpx;
    padding: 0;
    margin: 0;
    font-size: 28rpx;
    transition: all .2s ease-out;
    display: flex;
    justify-content: center;
    align-items: center;
}

.follow-button:after {
    border: none;
}

.follow-button.loading {
    background: #f7f7f7;
}

.follow-check {
    position: relative;
    width: 16rpx;
    height: 15rpx;
    margin-right: 10rpx;
}

.follow-check:after {
    content: "";
    position: absolute;
    left: 0;
    width: 100%;
    height: 50%;
    border-radius: 1rpx;
    background: transparent;
    transform: rotate(-45deg);
}

.follow-plus {
    position: relative;
    width: 20rpx;
    height: 20rpx;
}

.follow-plus:after {
    content: "";
    position: absolute;
    left: -12rpx;
    top: 8rpx;
    width: 20rpx;
    height: 20rpx;
}

.blue.follow-button.unfollow {
    color: #fff;
    background: #2883e9;
}

.blue .follow-plus {
    border-left: 4rpx solid #fff;
}

.blue .follow-plus:after {
    border-top: 4rpx solid #fff;
}

.blue.follow-button.follow {
    color: #888;
    background: #f7f7f7;
}

.blue .follow-check:after {
    border-left: 4rpx solid #888;
    border-bottom: 4rpx solid #888;
