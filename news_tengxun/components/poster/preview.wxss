.img-view {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0,0,0,.5);
    z-index: 999;
}

.img-wrap {
    position: relative;
    width: 680rpx;
    height: 750rpx;
}

.img-wrap image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.hori-center {
    display: flex;
    justify-content: center;
}

.save-btn {
    padding: 0 40rpx;
    height: 79rpx;
    line-height: 79rpx;
    border-radius: 79rpx;
    margin: 30rpx auto 0;
    background-color: #000;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
}

.cancel-btn {
    margin-top: 30rpx;
    width: 84rpx;
    height: 84rpx;
}