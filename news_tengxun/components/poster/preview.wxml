<cover-view catchtap="closePopup" catchtouchmove="true" class="img-view">
    <cover-view class="vert-center">
        <cover-view class="img-wrap" style="width:{{config.wrapWidth}};height:{{config.wrapHeight}};">
            <cover-image src="{{imgUrl}}"></cover-image>
        </cover-view>
        <cover-view class="hori-center">
            <cover-view class="save-btn">{{tips||'保存到相册'}}</cover-view>
        </cover-view>
        <cover-view class="hori-center">
            <cover-image bindtap="closePopup" class="cancel-btn" src="http://mat1.gtimg.com/www/images/news_minipro/haibao_close.png"></cover-image>
        </cover-view>
    </cover-view>
</cover-view>
