.auth-popup-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.1);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 111;
}

.auth-popup {
    width: 560rpx;
    background: #fff;
    border-radius: 16rpx;
    padding: 52rpx 30rpx 0;
}

.auth-popup .title {
    font-size: 36rpx;
    color: #000;
    text-align: center;
}

.auth-popup .sub-title {
    margin-top: 18rpx;
    font-size: 32rpx;
    color: #888;
    text-align: center;
    line-height: 48rpx;
}

.auth-popup .sep {
    margin: 38rpx -30rpx 0;
    height: 1rpx;
    background-color: #e5e5e5;
}

.btn-group {
    overflow: hidden;
    margin: 0 -30rpx;
}

.btn-group .btn {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    width: 50%;
    float: left;
    box-sizing: border-box;
    font-size: 36rpx;
    color: #000;
}

.btn-group .btn.confirm {
    color: #2883e9;
}

.btn-group .btn:first-child {
    border-right: 1px solid #e5e5e5;
}

.btn-group button {
    background-color: transparent;
}

.btn-group button:after {
    border: none;
}