.share-canvas {
    height: 1500rpx;
}

.poster,.share-canvas {
    position: absolute;
    top: 0;
    z-index: -999;
    left: -2720rpx;
    width: 1360rpx;
}

.img-wrap {
    position: relative;
    height: 764rpx;
    overflow: hidden;
}

.img-wrap .top-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

.play-icon {
    top: 50%;
    left: 50%;
    margin-top: -110rpx;
    margin-left: -110rpx;
    width: 220rpx;
    height: 220rpx;
}

.logo,.play-icon {
    position: absolute;
    z-index: 1;
}

.logo {
    top: 48rpx;
    right: 44rpx;
    width: 336rpx;
    height: 88rpx;
}

.bottom {
    padding: 66rpx 80rpx 82rpx;
    background-color: #fbfbfb;
}

.bottom .title {
    font-size: 80rpx;
    color: #222;
    letter-spacing: 0;
    line-height: 116rpx;
    display: -webkit-box;
    vertical-align: middle;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    word-break: break-all;
    overflow: hidden;
}

.bottom .sep {
    height: 2rpx;
    background-color: #e1e1e1;
    margin: 70rpx 0 66rpx;
}

.bottom .info-bar {
    overflow: hidden;
}

.info-bar .qr {
    float: left;
    width: 220rpx;
    height: 220rpx;
    border-radius: 100%;
}

.info-bar .right {
    float: left;
    margin-left: 52rpx;
    height: 220rpx;
    display: flex;
    align-items: center;
}

.line1 {
    overflow: hidden;
}

.line1 .avatar {
    float: left;
    width: 92rpx;
    height: 92rpx;
    border-radius: 92rpx;
}

.line1 .nickname {
    color: #222;
}

.line1 .nickname,.line1 .text {
    float: left;
    margin-left: 26rpx;
    font-family: PingFangSC-Regular;
    font-size: 52rpx;
    line-height: 92rpx;
    letter-spacing: 0;
}

.line1 .text {
    color: #777;
}

.line2 {
    overflow: hidden;
    margin-top: 22rpx;
}

.line2 .text {
    float: left;
    font-size: 52rpx;
    color: #777;
    letter-spacing: 0;
}

.line2 .text:nth-child(2) {
    color: #2883e9;
    margin: 0 20rpx;
}

poster-preview {
    position: relative;
    z-index: 999;
}