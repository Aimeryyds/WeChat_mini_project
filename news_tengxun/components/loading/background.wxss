.content-container {
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.black.content-container {
    background: #1b1c20;
}

.news-loadingbg-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.news-logo-image {
    width: 528rpx;
    height: 74rpx;
    display: block;
    margin: 0 auto;
}

.loading {
    margin-bottom: 20rpx;
}

.error-wrap {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: -180rpx;
}

.image-container {
    position: relative;
}

.error-image {
    width: 160rpx;
    height: 160rpx;
}

.err-image-top {
    width: 70rpx;
    height: 42rpx;
    position: absolute;
    margin-left: -38rpx;
}

.error {
    color: #888;
    margin-top: 32rpx;
    font-size: 28rpx;
    line-height: 1.57;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.try-refresh {
    color: #fff;
    margin-top: 30rpx;
    width: fit-content;
    height: 56rpx;
    border-radius: 30rpx;
    background-color: #2883e9;
    font-size: 28rpx;
    text-align: center;
    line-height: 56rpx;
    padding: 0 44rpx;
}

.black .error {
    color: #888;
}