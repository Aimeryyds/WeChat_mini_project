.wa-upload {
    display: inline-block;
    position: relative;
}

.upload {
    position: relative;
    width: 100%;
    display: flex;
    border-radius: 2px;
}

.upload-image {
    width: 26px;
    height: 24px;
}

.wa-upload .uploading {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    line-height: 100%;
    text-align: center;
    background: rgba(0,0,0,.5);
}