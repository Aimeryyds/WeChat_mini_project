@import "../../../__wuBaseWxss__/4.wxss";

@import "../../../__wuBaseWxss__/3.wxss";

@import "../../../__wuBaseWxss__/2.wxss";

.float-share-icon {
    position: fixed;
    height: 98rpx;
    width: 98rpx;
    bottom: 42rpx;
    right: 32rpx;
}

.share-bottom-dialog {
    position: fixed;
    bottom: 0;
    width: 100%;
    background: #fcfcfc;
}

.share-content-block {
    height: 263rpx;
    flex-direction: row;
    justify-content: flex-start;
    padding-left: 20rpx;
}

.share-content-block,.share-item {
    display: flex;
    align-items: center;
}

.share-item {
    flex-direction: column;
    margin: 20rpx;
    background: none;
    padding: 0rpx;
}

.share-item:after {
    border: none;
}

.share-item-icon {
    height: 120rpx;
    width: 120rpx;
    background: #fff;
    border: 2rpx solid #f1f1f1;
    border-radius: 60rpx;
}

.share-item-text {
    margin-top: 10rpx;
    line-height: 30rpx;
    font-size: 28rpx;
    color: #849098;
}

.share-line {
    background: #f1f1f1;
    height: 3rpx;
    margin-left: 23rpx;
    margin-right: 23rpx;
}

.share-btn-block {
    height: 110rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #849098;
    font-size: 32rpx;
}

.share-box {
    width: 100%;
    height: 70rpx;
    margin: 10rpx 0 50rpx;
}

.share-box,.share-left-button {
    background-color: transparent;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.share-left-button {
    height: 100%;
    justify-content: space-between;
    padding-left: 60rpx;
    padding-right: 60rpx;
    box-sizing: no;
}

.share-left-button:after {
    border: 4rpx solid #dfdfdf;
    border-bottom-left-radius: 100rpx;
    border-bottom-right-radius: 100rpx;
    border-top-left-radius: 100rpx;
    border-top-right-radius: 100rpx;
}

.share-right-button {
    height: 100%;
    width: 200rpx;
    background-color: transparent;
    flex-direction: row;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-left: 60rpx;
    padding-right: 60rpx;
}

.share-right-button:after {
    border: 0 solid transparent;
}

.share-poster-button {
    height: 100%;
    background-color: transparent;
    flex-direction: row;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-left: 60rpx;
    padding-right: 60rpx;
    box-sizing: no;
}

.share-poster-button:after {
    border: 4rpx solid #dfdfdf;
    border-bottom-left-radius: 100rpx;
    border-bottom-right-radius: 100rpx;
    border-top-left-radius: 100rpx;
    border-top-right-radius: 100rpx;
}

.share-image {
    width: 40rpx;
    height: 40rpx;
    position: relative;
    margin-top: 0rpx;
    margin-right: 20rpx;
}

.share-image,.share-name {
    background-color: transparent;
}

.share-name {
    line-height: 28rpx;
    height: 28rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #222;
}

.shade-box {
    width: 100%;
    height: 100%;
    padding: 0;
    position: fixed;
    top: 0;
    background: rgba(0,0,0,.6);
    overflow: hidden;
    z-index: 9999;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.shade-text-box {
    width: 260rpx;
    height: 60rpx;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #fff;
    position: fixed;
    top: 50%;
    background: rgba(0,0,0,.4);
    padding: 16rpx;
    margin-left: 240rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 20rpx;
}

.shade-image-box {
    width: 680 rpx;
    height: 751rpx;
}

.shade-canvas-image-box {
    width: 1360rpx;
    height: 1502rpx;
    position: absolute;
    left: -1360rpx;
    top: 0;
}

.shade-image {
    width: 680rpx;
    height: 751rpx;
    background-color: transparent;
    position: relative;
    margin: 0 auto;
}

.save-album {
    background: #000;
    border-radius: 100rpx;
    width: 450rpx;
    height: 79rpx;
    line-height: 79rpx;
    text-align: center;
    margin-top: 33rpx;
}

.save-album-text {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #fff;
}

.cancel-button {
    width: 83rpx;
    height: 83rpx;
    position: relative;
    margin-top: 33rpx;
    background-color: transparent;
}