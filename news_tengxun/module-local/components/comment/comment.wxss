.lc-mrl24 {
    margin-left: 24rpx;
    margin-right: 24rpx;
}

.lc-comment-wrapper {
    padding-bottom: 150rpx;
}

.lc-comment__allnum {
    margin-bottom: 30rpx;
    font-size: 32rpx;
}

.lc-comment-detail {
    margin-bottom: 40rpx;
    padding-left: 24rpx;
    padding-right: 24rpx;
    border-bottom: 10rpx solid #f7f7f7;
}

.lc-comment-empty {
    display: block;
    margin-top: 50rpx;
    width: 100%;
    height: 226rpx;
    background: url(http://mat1.gtimg.com/www/images/newsapp/wxapp/news/comment_empty_icon.png) 50% no-repeat;
    background-size: 362rpx 226rpx;
}

.lc-comment-bbtn {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 0 44rpx;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;
    border-top: 1rpx solid #e1e1e1;
}

.lc-bbtn__left {
    width: 154rpx;
}

.lc-bbtn__right {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.lc-citem__header {
    margin-bottom: 10rpx;
}

.lc-comment__headimg {
    height: 60rpx;
    width: 60rpx;
    border-radius: 100%;
}

.lc-citem__header .g-d-flex {
    flex: 1;
    line-height: 60rpx;
    margin-left: 20rpx;
}

.lc-comment__nickname {
    font-size: 28rpx;
    color: #000;
}

.lc-cpraise__num {
    margin-right: 10rpx;
    font-size: 24rpx;
    color: #849098;
}

.lc-comment-item {
    margin-bottom: 30rpx;
}

.lc-comment-item:last-child .lc-citem__content {
    border-bottom: 0;
}

.lc-citem__content {
    margin-left: 80rpx;
    padding-bottom: 30rpx;
    border-bottom: 1px solid #e4e4e4;
}

.lc-citem__comment {
    margin-bottom: 15rpx;
    font-size: 32rpx;
    color: #222;
}

.lc-citem__cinfo {
    margin-bottom: 23rpx;
    line-height: 40rpx;
}

.lc-citem__time {
    margin-right: 20rpx;
    font-size: 22rpx;
    color: #848484;
}

.lc-citem__del {
    font-size: 22rpx;
    color: #2883e9;
}

.lc-citem__creply {
    padding: 17rpx 25rpx;
    background-color: #f7f7f7;
}

.lc-creply__item {
    margin-bottom: 15rpx;
    font-size: 30rpx;
    color: #222;
}

.lc-creply__grey {
    font-size: 30rpx;
    color: #849098;
    font-weight: 200;
}

.lc-creply__grey .lc-icon__rightarrow {
    margin-bottom: 8rpx;
}

.lc-comment_tbold {
    font-weight: 700;
}

.lc-comment-loadbox {
    margin: 25rpx auto;
    width: 220rpx;
    height: 40rpx;
    color: silver;
    line-height: 40rpx;
    font-size: 30rpx;
    text-align: center;
}

.lc-icon.icon-xwlike {
    font-size: 30rpx;
    color: #a1a7ae;
    margin-bottom: 8rpx;
}

.lc-icon.lc-xwliked {
    color: #0081e8;
}