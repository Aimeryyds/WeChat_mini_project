.ci-content {
    margin-top: 1rpx;
    color: #222;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    margin-bottom: 15rpx;
}

.ci-content.line-limit {
    -webkit-line-clamp: 3;
}

.ci-show-all-text {
    display: block;
    margin-top: 10rpx;
    color: #2883e9;
}