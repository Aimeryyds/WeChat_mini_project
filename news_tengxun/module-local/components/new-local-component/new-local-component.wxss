@import "../../../__wuBaseWxss__/9.wxss";

@import "../../../__wuBaseWxss__/6.wxss";

@import "../../../__wuBaseWxss__/2.wxss";

@import "../../../__wuBaseWxss__/3.wxss";

.content-wrapper {
    background: #fff;
}

.local-container {
    height: 100%!important;
}

.g-fontfamily,.local-component {
    height: 100%;
}

.kb-bottom-lod-wrap {
    min-height: 450rpx;
}

.bottom-loading-wrap {
    height: 56px;
}

.lc-header {
    position: relative;
    height: 444rpx;
    font-size: 0;
}

.lc-header-img,.lc-header-video {
    width: 100%;
    height: 444rpx;
}

.lc-img-item {
    width: 100%;
    height: 100%;
}

.lc-video-cover {
    height: 100%;
}

.lc-video-cover .lc-location {
    position: absolute;
    bottom: 44rpx;
}

.lc-header-cover {
    position: absolute;
    bottom: 0;
    width: 100%;
    color: #fff;
    z-index: 91;
}

.lc-video-mask {
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0;
    z-index: 100;
}

.lc-location .lc-videoinfo {
    padding-top: 20rpx;
}

.lc-location .lc-videoinfo,.lc-video-mask .lc-videoinfo {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.lc-video-mask .lc-videoinfo {
    padding-left: 24rpx;
    padding-top: 100rpx;
    color: #fff;
}

.lc-switch-btn {
    background: none;
    border: none;
    color: #fff;
}

.lc-location {
    padding-left: 24rpx;
}

.lc-city-img {
    display: inline-block;
    width: 40rpx;
}

.lc-img-author {
    position: absolute;
    bottom: 18rpx;
    left: 24rpx;
    color: #fff;
}

.lc-videoinfo {
    opacity: .6;
}

.lc-focus-txt {
    margin-left: 16rpx;
}

.lc-weather-icon {
    width: 38rpx;
    height: 28rpx;
    margin-right: 8rpx;
    display: inline-block;
}

.lc-weishi-icon {
    width: 22rpx;
    height: 24rpx;
    opacity: 1;
    margin: 0 10rpx;
}

.lc-weishi-author__wrapper {
    padding-top: 10rpx;
}

.lc-carinfo {
    padding-top: 28rpx;
}

.lc-sayhi {
    z-index: 999;
}

.lc-sayhi,.lc-sayhi-emos {
    position: absolute;
    bottom: 24rpx;
    right: 24rpx;
}

.lc-sayhi-emos {
    opacity: 0;
    z-index: 92;
}

.lc-sayhi-emos.none {
    display: none;
}

.lc-opacity-1 {
    opacity: 1;
}

.lc-sayhi-btn {
    display: flex;
    height: 60rpx;
    font-size: 0;
    opacity: .9;
    background-color: #fff;
    border-radius: 37rpx;
    align-items: center;
}

.lc-sayhi-emo {
    width: 60rpx;
    height: 60rpx;
}

.lc-sayhi-txt {
    padding-right: 15rpx;
    font-size: 28rpx;
    color: #000;
}

.lc-emo {
    margin-left: 15rpx;
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
}

.lc-city-title {
    color: #686868;
}

.lc-cbox {
    font-weight: 500;
    color: #333;
}

.lc-city-comment {
    margin: 30rpx 25rpx 10rpx;
    padding: 24rpx;
    background-color: #f8f8f8;
}

.lc-userinfo {
    display: inline-flex;
    align-items: center;
    flex: 1;
}

.lc-userinfo-pic {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.lc-userinfo-name {
    margin-right: 10rpx;
    max-width: 200rpx;
}

.lc-cbox-btn {
    display: inline-block;
    border-radius: 50rpx;
    background-color: #2883e9;
    color: #fff;
}

.lc-sayhi-list {
    position: absolute;
    max-height: 180rpx;
    right: 24rpx;
    bottom: 90rpx;
    text-align: right;
    overflow: hidden;
    z-index: 92;
}

.lc-sayhi-item {
    display: inline-flex;
    opacity: .9;
    margin-bottom: 20rpx;
    position: relative;
    height: 40rpx;
    align-items: center;
}

.lc-sayhi-item .emo-icon {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    left: 0;
    z-index: 92;
}

.lc-sayhi-item .emo-nickname {
    display: flex;
    font-size: 18rpx;
    margin-left: 10rpx;
    background: #fff;
    border-radius: 20rpx;
}

.emo-nickname-value {
    height: 36rpx;
    line-height: 36rpx;
    text-indent: 4rpx;
}

.emo-left-placeholder {
    width: 40rpx;
}

.emo-right-placeholder {
    width: 10rpx;
}

.ag-tab-box {
    margin-bottom: 20rpx;
    height: 76rpx;
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    background-color: #fff;
    border-bottom: 1rpx solid #e7ebee;
}

.ag-tab-fixed-placeholder {
    height: 77rpx;
}

.ag-tab-fixed {
    position: fixed;
    top: 0;
    transform: translateZ(0);
    z-index: 99;
}

.ag-tab-sticky {
    position: sticky;
    top: 0;
    z-index: 96;
}

.ag-tab-item {
    display: inline-block;
    margin-right: 80rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 32rpx;
    text-align: left;
}

.ag-tab-item:first-child {
    margin-left: 24rpx;
}

.ag-tab-item:last-child {
    margin-right: 24rpx;
}

.ag-tab-item.active {
    color: #2883e9;
    border-bottom: 6rpx solid #2883e9;
}

.icon-xwclose {
    font-size: 24rpx;
    color: #849098;
}

.icon-xwimages {
    font-size: 24rpx;
    color: #fff;
    margin-right: 6rpx;
}

.video-style .icon-xwplay {
    font-size: 30rpx;
    color: #fff;
    margin-right: 4rpx;
}

.lc-act .submitButton {
    line-height: normal;
}