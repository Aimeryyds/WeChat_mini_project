@import "../../../__wuBaseWxss__/7.wxss";

page {
    background-color: #f5f5f5;
}

Button:after {
    border: 0;
}

.lc-wrapper {
    padding: 25rpx 25rpx 10rpx;
    background-color: #f5f5f5;
}

.lc-signup {
    margin-bottom: 40rpx;
    width: 100%;
    min-height: 580rpx;
    background-color: #fff;
    background: url(http://mat1.gtimg.com/bbs/community/h5/images/lc-signup-succ-bg.png) 50% no-repeat;
    background-size: 700rpx 580rpx;
}

.lc-title {
    padding: 0 30rpx;
    display: flex;
    height: 138rpx;
    font-weight: 700;
    font-size: 32rpx;
    color: #202020;
    align-items: center;
}

.lc-line {
    margin: 0 auto;
    width: 640rpx;
    height: 4rpx;
    background: url(http://mat1.gtimg.com/bbs/community/h5/images/lc-line.png) 50% no-repeat;
    background-size: 640rpx 4rpx;
}

.lc-msg-image {
    margin: 54rpx auto 45rpx;
    width: 192rpx;
    height: 92rpx;
    background: url(http://mat1.gtimg.com/bbs/community/h5/images/lc-msg.png) 50% no-repeat;
    background-size: 192rpx 92rpx;
}

.lc-signup__status {
    margin-bottom: 20rpx;
    text-align: center;
    font-size: 32rpx;
    color: #4184f9;
}

.lc-signup__tips {
    margin-bottom: 52rpx;
    text-align: center;
    font-size: 24rpx;
    color: silver;
}

.lc-signup-userinfo {
    padding: 0 30rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    font-size: 32rpx;
    color: #000;
}

.lc-fixed-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    background-color: #fff;
    border-top: 1rpx solid #f5f5f5;
}

.share-image {
    position: relative;
    margin-top: 0rpx;
}

.lc-btn,.share-image {
    background-color: transparent;
}

.lc-btn {
    width: 50%;
    padding: 0;
    border: 0;
}

.share-image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.share-name {
    font-size: 32rpx;
}

.lc-related-article {
    padding-top: 40rpx;
    margin-bottom: 140rpx;
    background-color: #fff;
}

.lc-related-act {
    background: #fff;
    margin: 0;
    padding: 0 28rpx 28rpx;
}

.lc-related-title {
    padding-top: 40rpx;
}

.lc-rla__title_box {
    margin-right: 20rpx;
}

.lc-act-more {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: #e1ecff;
    border-radius: 8rpx;
    color: #4184f9;
    font-size: 30rpx;
}

.base-line2 {
    display: -webkit-box;
    overflow: hidden;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}