@import "../../../__wuBaseWxss__/9.wxss";

.register-container {
    padding: 32rpx 30rpx;
}

.main-title {
    font-size: 28rpx;
    color: #000;
    line-height: 1;
    margin-bottom: 27rpx;
}

.main-title .title-tip {
    display: inline-block;
    font-size: 28rpx;
    color: #7f7f7f;
    margin-left: 8px;
}

.lc-btn {
    padding: 0;
    text-align: left;
    background-color: transparent;
    border: 0;
}

.lc-btn:after {
    border: none;
}

.lc-form__content {
    padding: 0 25rpx;
    margin-bottom: 28rpx;
    font-size: 30rpx;
    border-radius: 1px;
    background-color: #f8f8f8;
}

.lc-form__item {
    border-bottom: 2rpx solid #e7ebee;
}

.lc-form__item:last-child {
    border-bottom: 0;
}

.lc-form__submit {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 1px;
    background-color: #377df8;
    color: #fff;
    font-size: 32rpx;
}

.lc-form__default_line {
    display: block;
    height: 99rpx;
    line-height: 99rpx;
    font-size: 30rpx;
}

.lc-form__placeholder {
    color: silver;
}