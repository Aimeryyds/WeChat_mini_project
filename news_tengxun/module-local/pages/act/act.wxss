Button:after {
    border: 0;
}

.lc-clr2f80f3 {
    color: #2f80f3;
}

.lc-clr848e98 {
    color: #848e98;
}

.lc-line {
    border: 1rpx solid #e7ebee;
}

.lc-wrapper {
    font-size: 0;
}

.lc-headimg {
    width: 100%;
    height: 420rpx;
}

.lc-info {
    margin: 30rpx 24rpx 20rpx;
}

.lc-title {
    margin-bottom: 38rpx;
    font-size: 40rpx;
    font-weight: 500;
    color: #222;
}

.lc-focus {
    margin-bottom: 20rpx;
    font-size: 28rpx;
    color: #686868;
}

.lc-info-item {
    font-size: 28rpx;
    color: #333;
    border-top: 1rpx solid #e7ebee;
    padding: 20rpx 0;
    display: table;
    width: 100%;
}

.lc-info-item text {
    display: table-cell;
    padding-right: 10px;
}

.lc-info-item .l-cell {
    width: 20%;
}

.lc-info-item .r-cell {
    width: 80%;
}

.lc-info-item:last-child {
    border-bottom: 1rpx solid #e7ebee;
}

.lc-act-author {
    padding: 36rpx 24rpx;
    border-top: 10rpx solid #f3f6f8;
    border-bottom: 10rpx solid #f3f6f8;
}

.lc-author__img {
    margin-right: 21rpx;
    width: 110rpx;
    height: 110rpx;
    border-radius: 100%;
}

.lc-author__info {
    padding-top: 9rpx;
    display: inline-block;
    align-items: center;
    flex: 1;
}

.lc-author__desc {
    line-height: 2.08;
    font-size: 24rpx;
    color: #222;
}

.lc-author__box {
    line-height: 1.67;
}

.lc-author__name {
    max-width: 200rpx;
    margin-right: 20rpx;
    font-size: 30rpx;
    color: #222;
}

.lc-hline {
    margin-left: 18rpx;
    margin-right: 18rpx;
    display: inline-block;
    width: 2rpx;
    height: 17rpx;
    background-color: #bcc6ce;
}

.lc-tab-nav {
    margin-bottom: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #e7ebee;
}

.lc-tab {
    width: 33.33%;
    text-align: center;
    font-size: 30rpx;
    color: #333;
}

.lc-tab.active {
    color: #2f80f3;
}

.lc-tab-active__line {
    margin: 0 auto;
    height: 4rpx;
    width: 60rpx;
    background-color: #2f80f3;
}

.lc-content__article,.lc-content__intro {
    margin-bottom: 60rpx;
    margin-left: 24rpx;
    margin-right: 24rpx;
}

.lc-article__text {
    margin-bottom: 50rpx;
    line-height: 59rpx;
    font-size: 34rpx;
    color: #333;
}

.lc-content__article .ql-align-center {
    text-align: center;
}

.lc-article__text .strong {
    font-weight: 600;
}

.lc-article__text .ql-size-huge {
    font-size: 38rpx;
}

.lc-article__text .ql-size-large {
    font-size: 36rpx;
}

.lc-article__text .emotion {
    width: 52rpx;
    height: 52rpx;
}

.lc-article__img {
    margin: 28rpx 0;
    width: 100%;
}

.lc-article__img.emotion {
    margin: 28rpx 0;
    width: 52rpx;
    height: 52rpx;
}

.lc-intro__title {
    margin-bottom: 33rpx;
    padding-left: 12rpx;
    font-size: 38rpx;
    line-height: 35rpx;
    color: #222;
    border-left: 5rpx solid #4a90e2;
    font-weight: 700;
}

.lc-article__tips {
    margin-bottom: 60rpx;
    line-height: 1.14;
    font-size: 28rpx;
    color: #333;
}

.lc-article__disclaimer {
    margin-bottom: 60rpx;
    line-height: 1.76;
    font-size: 24rpx;
    text-align: center;
    color: #9b9b9b;
}

.lc-line5,.lc-share-box {
    margin-bottom: 60rpx;
}

.lc-line5 {
    height: 10rpx;
    width: 100%;
    background-color: #f3f6f8;
}

.lc-related-more {
    margin: 20rpx auto 60rpx;
    width: 700rpx;
    height: 80rpx;
    line-height: 80rpx;
    opacity: .8;
    border-radius: 8rpx;
    text-align: center;
    font-size: 30rpx;
    color: #4184f9;
    background-color: #e1ecff;
}

.lc-comment-bbtn {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;
    border-top: 1rpx solid #e1e1e1;
}

.lc-bbtn__left {
    width: 154rpx;
}

.lc-bbtn__right {
    flex: 1;
    text-align: right;
}

.lc-write {
    font-size: 34rpx;
    margin-right: 10rpx;
}

.lc-apply {
    height: 100rpx;
    line-height: 100rpx;
    margin-right: 0;
    width: 200rpx;
    text-align: center;
    border: none;
    border-radius: 0;
    background-color: #2883e9;
    color: #fff;
    margin-left: 44rpx;
}

.lc-invate {
    background-color: transparent;
    border: 0;
    position: absolute;
    left: 50%;
    transform: translate(-50%);
}

.lc-invate .lc-label {
    height: 100rpx;
    line-height: 100rpx;
}

.lc-comment {
    margin-left: 44rpx;
}

.lc-invate .lc-icon {
    margin-right: 10rpx;
}

.lc-comment-bbtn-patch {
    padding: 0 18.5rpx;
}

.lc-icon__btn {
    box-sizing: border-box;
    padding: 23.4rpx 12rpx 0;
    flex-grow: 1;
    flex-shrink: 0;
    flex-direction: column;
    background: none;
}

.lc-icon__btn .lc-icon__btn-txt {
    font-size: 18rpx;
    line-height: 42rpx;
}

.lc-apply__wrapper {
    flex-grow: 4;
    flex-shrink: 1;
    justify-content: flex-start;
    padding-top: 18rpx;
}

.lc-icon__btn-apply {
    height: 72rpx;
    width: 100%;
    border-radius: 39rpx;
    background-color: #4a90e2;
    color: #fff;
    margin-top: -7rpx;
}

.lc-icon__btn-apply__hover {
    background-color: #3670b4;
}

.levitateBtn {
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    background: #2883e9;
    opacity: .9;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #fff;
    letter-spacing: 0;
    border-radius: 0rpx 35rpx 35rpx 0rpx;
    padding-right: 30rpx;
    padding-left: 30rpx;
    position: fixed;
    bottom: 180rpx;
    display: flex;
    align-items: center;
}

.levitateBtn .back-home {
    display: inline-block;
    margin-right: 9rpx;
}