.kb-bg {
    background-color: #fff;
    min-height: 100%;
}

.base-right {
    float: right;
    display: inline-flex;
    direction: row;
    align-items: center;
    height: 94rpx;
}

.city-box {
    background: #fff;
    padding-top: 10px;
    margin-left: 0rpx;
    margin-right: 0rpx;
    padding-bottom: 20rpx;
}

.select_citys-box {
    background: #f5f5f5;
    padding: 0rpx 60rpx 64rpx 0rpx;
}

.city_button-box {
    display: inline-block;
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 0rpx;
    margin-right: 60rpx;
    margin-top: 44rpx;
    background: #fff;
    border: 0 solid #d4d4d4;
    border-radius: 2px;
}

.city-locat-icon {
    width: 26rpx;
    height: 35rpx;
    margin-right: 20rpx;
    margin-top: 10rpx;
    margin-left: 28rpx;
    display: inline-block;
    color: #2883e9;
}

.city-name {
    font-size: 32rpx;
    color: #2883e9;
}

.city-name-text {
    font-size: 32rpx;
    color: #000;
    display: inline-block;
    vertical-align: middle;
    margin-left: 16rpx;
    margin-right: 16rpx;
}

.city-arrow,.city-arrow-special {
    width: 34rpx;
    height: 34rpx;
}

.city-arrow-special {
    float: right;
    color: #c5c5c5;
}

.city-grey-txt {
    background: #f5f5f5;
}

.allcity-grey-txt,.city-grey-txt {
    font-size: 32rpx;
    color: #222;
    padding: 20rpx 0rpx 20rpx 30rpx;
    font-weight: 700;
}

.select_citys-txt {
    font-size: 32rpx;
    color: #222;
    padding: 28rpx 20rpx 20rpx 0rpx;
    font-weight: 700;
    margin-left: 28rpx;
}

.city-item {
    font-size: 34rpx;
    margin-left: 90rpx;
    padding: 0rpx 30rpx 0rpx 0;
    border: none;
    text-align: left;
    background-color: #fff;
    border-radius: 0rpx;
}

.city-item:after {
    border: 0 solid transparent;
    border-bottom: 1rpx solid #e4e4e4;
    border-bottom-left-radius: 0rpx;
    border-bottom-right-radius: 0rpx;
}

.city-order-txt {
    color: #2883e9;
}

.city-order-last-txt,.city-order-txt {
    margin-left: 6rpx;
    font-size: 28rpx;
    vertical-align: top;
}

.city-order-last-txt {
    color: #999;
}

.arrow-down {
    transform: rotate(90deg);
}

.arrow-up {
    transform: rotate(-90deg);
}

.city-provice {
    margin-left: 30rpx;
}

.scroll-city-list {
    padding-bottom: 60rpx;
    background: #fff;
}

.city-now {
    color: #b2b2b2;
}

.city-provin-check {
    float: right;
    margin-right: 30rpx;
    color: #888;
    top: 30rpx;
    font-size: 28rpx;
}

.selected_container {
    vertical-align: middle;
    margin-left: 28rpx;
}

.city_close {
    background-color: #fff;
    background: #fff url(http://mat1.gtimg.com/www/images/newsapp/wxapp/news/circle_close) 50% no-repeat;
    height: 50rpx;
    width: 50rpx;
    background-size: 100% 100%;
    border-radius: 25rpx;
    display: inline-block;
    position: absolute;
    margin-left: -16rpx;
    margin-top: -16rpx;
}