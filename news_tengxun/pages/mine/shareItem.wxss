@import "../../__wuBaseWxss__/0.wxss";

.item-wrapper {
    color: #222;
    padding: 24rpx 0;
    margin: 0 24rpx;
    border-top: 1rpx solid #f0f0f0;
}

.user-wrapper {
    display: flex;
    height: 48rpx;
    margin-bottom: 16rpx;
}

.avatar {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.nick-name {
    align-items: center;
    font-weight: 500;
}

.nick-name,.share-info {
    font-size: 32rpx;
}

.share-info-blue {
    color: #2883e9;
}

.article-wrapper {
    display: flex;
    margin-top: 20rpx;
    background-color: #f7f7f7;
    padding: 20rpx;
    border-radius: 8rpx;
}

.img-wrapper {
    position: relative;
    font-size: 0;
    margin-right: 20rpx;
    align-items: center;
}

.img {
    width: 112rpx;
    height: 112rpx;
    border-radius: 6rpx;
}

.play-icon {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 80rpx;
    height: 80rpx;
    font-size: 60rpx;
    background-color: rgba(0,0,0,.3);
    color: #fff;
    border-radius: 100%;
    text-align: center;
    line-height: 80rpx;
}

.content-wrapper {
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    line-height: 1.5;
    color: #222;
    display: flex;
    align-items: center;
}