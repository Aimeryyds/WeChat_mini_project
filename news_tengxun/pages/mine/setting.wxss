.page-wrapper {
    font-family: PingFangSC;
    font-size: 28rpx;
    line-height: 1.71;
    color: #888;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
}

.image {
    margin-top: -100rpx;
    margin-bottom: 36rpx;
    width: 180rpx;
    height: 152rpx;
}

.setting-wrapper {
    border-top: 1rpx solid #f0f0f0;
    padding: 0 24rpx;
    height: 100%;
}

.setting-item {
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1rpx solid #f0f0f0;
    margin: 0;
    padding: 0;
    background-color: #fff;
    border-radius: 0;
}

.setting-item:after {
    border: 0;
}

.setting-item .item-image {
    height: 36rpx;
    width: 36rpx;
    margin: 0 28rpx;
    flex: 0 0 auto;
}

.setting-wrapper .setting-item:nth-child(2) .item-image {
    width: 32rpx!important;
}

.setting-item .item-des-wrapper {
    flex-grow: 1;
    padding: 20rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.item-des-wrapper .des-title {
    color: #222;
    font-size: 32rpx;
    line-height: 38rpx;
}

.item-des-wrapper .des-des {
    color: #888;
    font-size: 24rpx;
}

.item-switch {
    flex-grow: 0;
    padding: 30rpx 0;
}