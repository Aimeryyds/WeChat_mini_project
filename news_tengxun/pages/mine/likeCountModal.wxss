.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.5);
    overflow: hidden;
    z-index: 2;
}

.modal-dialog {
    height: 320rpx;
    width: 540rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background: #fff;
    border-radius: 16rpx;
}

.modal-content {
    height: 140rpx;
    margin-top: 80rpx;
    color: #222;
}

.modal-content,.modal-footer {
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    text-align: center;
    line-height: 36rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.modal-footer {
    height: 86rpx;
    border-top: 1px solid #dedede;
    color: #2883e9;
}

.like-icon {
    height: 156rpx;
    width: 170rpx;
    position: absolute;
    left: 185rpx;
    top: -75rpx;
}