.fans-item-wrapper {
    border-top: 1rpx solid #f0f0f0;
    padding: 0 24rpx;
    width: 750rpx;
    box-sizing: border-box;
}

.fans-item-wrapper,.media-wrapper {
    display: flex;
    align-items: center;
}

.media-wrapper {
    height: 149rpx;
    width: 550rpx;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
}

.name-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 0 24rpx;
    font-family: PingFangSC;
    width: 450rpx;
    box-sizing: border-box;
}

.name {
    font-size: 32rpx;
    line-height: 50rpx;
    color: #222;
}

.description,.name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.description {
    font-family: PingFangSC;
    font-size: 24rpx;
    line-height: 40rpx;
    color: #888;
}

.topic-icon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 12rpx;
}

.read-count {
    padding-right: 20rpx;
}