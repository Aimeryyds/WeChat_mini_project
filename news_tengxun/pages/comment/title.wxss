.title {
    font-family: PingFangSC;
    font-size: 44rpx;
    font-weight: 700;
    color: #222;
    line-height: 1.45;
    text-align: justify;
    margin: 40rpx 24rpx 20rpx;
}

.media-wrapper {
    margin-bottom: 40rpx;
    height: 48rpx;
    align-items: center;
    margin-right: 24rpx;
    margin-left: 30rpx;
}

.media-box,.media-wrapper {
    display: flex;
}

.media-icon {
    border-radius: 50%;
    width: 48rpx;
    height: 48rpx;
    overflow: hidden;
    margin: 0 10rpx;
}

.media-icon image {
    height: 100%;
    width: 100%;
    display: block;
}

.media-name {
    line-height: 48rpx;
    font-family: PingFangSC;
    font-size: 28rpx;
    color: #222;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 310rpx;
}

.time {
    font-size: 24rpx;
    color: #777;
    width: auto;
    text-align: left;
    line-height: 54rpx;
    margin: 0 20rpx;
}

.origin-button,.time {
    display: flex;
}

.origin-button {
    width: 150rpx;
    border-radius: 24rpx;
    padding: 0;
    border-style: hidden;
    font-size: 28rpx;
    transition: all .2s ease-out;
    vertical-align: middle;
    justify-content: center;
    align-items: center;
    align-self: flex-end;
    margin: 0 0 0 auto;
    background-color: #2883e9;
    color: #fff;
}

.all-comment,.origin-button {
    height: 48rpx;
    line-height: 48rpx;
}

.all-comment {
    text-align: center;
    font-size: 32rpx;
    font-weight: 700;
    color: #222;
    margin-top: 72rpx;
}