.normal-comment-wrapper {
    height: 100%;
}

.comment-title {
    padding: 36rpx 0 24rpx;
}

.comment-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
}

.recommend-wrapper {
    padding-bottom: 100rpx;
}

.recommend-wrapper.is-iphone-x {
    padding-bottom: 160rpx;
}

.go-home-wrapper {
    margin: 0 auto;
    height: 260rpx;
}

.go-home-btn,.go-home-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
}

.go-home-btn {
    width: fit-content;
    height: 72rpx;
    border-radius: 36rpx;
    background-color: #f0f7ff;
    font-size: 28rpx;
    color: #2883e9;
    padding: 0 36rpx;
}

.go-home-btn-icon {
    width: 24rpx;
    height: 24rpx;
    margin-left: 12rpx;
}