.container {
    height: 100%;
    width: 100%;
}

.header-box {
    position: relative;
    width: 100%;
    background: #12264d;
}

.topic-title {
    padding: 40rpx 24rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-family: PingFangSC-Medium;
    font-size: 40rpx;
    color: #fff;
    letter-spacing: 0;
    text-align: left;
    line-height: 56rpx;
}

.topic-image {
    width: 26rpx;
    height: 30rpx;
}

.topic-name {
    font-family: PingFangSC-Medium;
    line-height: 56rpx;
    color: #fff;
    letter-spacing: 0;
    text-align: left;
    font-size: 40rpx;
    display: inline;
}

.desc-cover {
    justify-content: space-between;
    margin-bottom: 30rpx;
    margin-top: 44rpx;
    height: 48rpx;
    padding: 0 24rpx;
}

.desc-cover,.header-desc {
    display: flex;
    align-items: center;
}

.header-desc {
    height: 30rpx;
}

.header-desc text {
    padding-right: 28rpx;
    font-size: 24rpx;
    color: #fff;
    letter-spacing: 0;
    text-align: left;
}

.topic-battle {
    padding: 30rpx 24rpx;
    border-bottom: 10rpx solid #f7f7f7;
}

.description-cover {
    border-top-left-radius: 18rpx;
    border-top-right-radius: 18rpx;
    background: #fff;
}

.description {
    font-size: 28rpx;
    line-height: 44rpx;
    padding: 32rpx 24rpx 16rpx;
    color: #777;
    width: 100%;
    box-sizing: border-box;
}

.description-image {
    width: 44rpx;
    height: 26rpx;
}

.scroll-con {
    width: 100%;
    background: #fff;
}

.nav-fixed {
    width: 100%;
    flex-direction: row;
    justify-content: center;
    align-items: flex-start;
    border-bottom: 2rpx solid #e3e3e3;
    padding-top: 20rpx;
}

.nav-fixed,.nav-text-cover {
    display: flex;
}

.nav-text-cover {
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    margin: 0 72rpx;
}

.nav-text {
    font-size: 32rpx;
    font-style: normal;
    font-stretch: normal;
    line-height: 1;
    letter-spacing: normal;
    color: #222;
}

.active .nav-text {
    font-weight: 700;
}

.active .yellow-line {
    background: #ffdb02;
}

.yellow-line {
    background: #fff;
    width: 32rpx;
    height: 8rpx;
    margin-top: 24rpx;
}

.btn-pub {
    width: 140rpx;
    height: 140rpx;
    background: url(https://mat1.gtimg.com/www/images/xw/inews/min/publish-ic-3x.png) 50% no-repeat;
    background-size: 140rpx 140rpx;
    border-radius: 120rpx;
    position: fixed;
    bottom: 90rpx;
    right: 40rpx;
}

.split-line {
    height: 10rpx;
    background: #f7f7f7;
}