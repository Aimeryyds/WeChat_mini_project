.modal {
    border-top: 1rpx solid rgba(0,0,0,.1);
    font-size: 36rpx;
    padding: 0 42rpx;
    position: relative;
}

.topic-name {
    color: #2883e9;
    line-height: 1.44;
    font-size: 36rpx;
    margin-top: 28rpx;
}

.text-area {
    margin-top: 10rpx;
    line-height: 1.44;
    width: 666rpx;
    color: #222;
    height: 312rpx;
}

.text-area.ios {
    margin-left: -7rpx;
}

.img-box {
    display: flex;
    align-content: flex-start;
    flex-wrap: wrap;
}

.img-box .img {
    margin: 4rpx;
    align-items: center;
    background-size: 54rpx 54rpx;
    position: relative;
}

.img-box .img,.img .item-img {
    width: 215rpx;
    height: 215rpx;
    border-radius: 8rpx;
}

.img .item-close {
    width: 52rpx;
    height: 52rpx;
    background: url(https://mat1.gtimg.com/www/images/newsapp/wxapp/news/pages/weibo-publish/publish-ic-delete-2x.png) no-repeat 0 100%;
    background-size: 40rpx 40rpx;
    position: absolute;
    right: 0;
    top: 0;
}

.pub-box {
    width: 750rpx;
    height: 100rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    border-top: 1rpx solid #eee;
    transition: all .2s ease-in-out;
    background: #fff;
}

.pub-box.on {
    transition: all 50ms ease-in-out;
    padding-bottom: 0;
}

.pub-box.out {
    transition: all .2s ease-in-out;
}

.pub-box.out.iphonex {
    padding-bottom: 30rpx;
}

.pub-box .fixed-box {
    width: 100%;
    height: 100rpx;
    position: relative;
}

.fixed-box .btn {
    width: 150rpx;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 36rpx;
    color: #fff;
    background-color: #2883e9;
    font-size: 28rpx;
    text-align: center;
    position: absolute;
    right: 24rpx;
    top: 22rpx;
}

button.btn:after {
    border: none;
}

.fixed-box .btn.out {
    background-color: #f7f7f7;
    color: #888;
}