@import "../../__wuBaseWxss__/0.wxss";

.span {
    display: inline;
    font-size: 26rpx;
    line-height: 34rpx;
}

.opt-bar {
    justify-content: flex-end;
    margin-top: 20rpx;
}

.opt-bar,.opt-item {
    display: flex;
}

.opt-item {
    justify-content: space-between;
    color: #999;
}

.opt-item .text {
    display: inline-block;
    position: relative;
    top: -1rpx;
}

.opt-item:not(:first-child) {
    margin-left: 40rpx;
}

.num {
    margin-left: 12rpx;
}

.num,.num-hb {
    font-size: 24rpx;
    line-height: 34rpx;
    background-color: transparent;
    color: #999;
    padding: 0;
}

.num,.num-hb,.num.share {
    align-items: center;
}

.num.share {
    margin-left: 0;
    padding-left: 2rpx;
}

.gen-poster .span,.share .span {
    margin-right: 12rpx;
}

.share:after,button.gen-poster:after {
    border: none;
    background-color: transparent;
}

.submitButton {
    position: relative;
    display: block;
    margin-left: 0;
    margin-right: 0;
    padding-left: 0;
    padding-right: 0;
    box-sizing: border-box;
    font-size: 0;
    text-align: left;
    text-decoration: none;
    line-height: 2.55555556;
    border-radius: 0;
    -webkit-tap-highlight-color: transparent;
    overflow: hidden;
    color: #000;
    background-color: transparent;
}

.submitButton:after {
    border: none;
}