@import "../../__wuBaseWxss__/0.wxss";

.share_container {
    height: 96rpx;
    justify-content: space-between;
}

.share_container,.share_item_container {
    display: flex;
    align-items: center;
}

.share_item_container {
    background-color: transparent;
    padding: 0rpx;
    margin: 0rpx;
    border-radius: 0rpx;
    height: 100%;
}

.share_item_container.comment {
    padding-left: 12rpx;
    padding-right: 30rpx;
}

.share_item_container.weixin {
    padding: 0 30rpx;
}

.share_item_container.pengyouquan {
    padding-left: 30rpx;
    padding-right: 12rpx;
}

.item_image {
    font-size: 36rpx;
    line-height: 36rpx;
    padding: 2rpx;
}

.item_image,.item_text {
    color: #555;
    display: inline-block;
}

.item_text {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    letter-spacing: 0;
    line-height: 24rpx;
    padding-left: 12rpx;
}

button:after {
    border: 0;
}