.title-wrapper {
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #222;
    letter-spacing: 0;
    line-height: 52rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.has-read .title-wrapper {
    color: #888;
}

.small-screen .title-wrapper {
    font-size: 40rpx;
}

.exclusive {
    color: #fff;
    background-color: #f04646;
    font-family: PingFangSC-Medium;
    font-size: 22rpx;
    line-height: 32rpx;
    width: 60rpx;
    display: inline-block;
    margin-right: 16rpx;
    border-radius: 4rpx;
    letter-spacing: 0;
    text-align: center;
    height: 32rpx;
    top: -5rpx;
    position: relative;
}

.intro {
    font-family: PingFangSC-Regular;
    color: #888;
    font-size: 32rpx;
    line-height: 44rpx;
    letter-spacing: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    margin-top: 12rpx;
}

.small-screen .intro {
    font-size: 34rpx;
}

.image-wrapper {
    position: relative;
    display: flex;
    margin-top: 20rpx;
}

.image {
    position: relative;
    width: 230rpx;
    height: 160rpx;
    margin-left: 6rpx;
    border-radius: 6rpx;
}

.image:first-child {
    margin-left: 0;
}

.mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 6rpx;
    background-color: rgba(0,0,0,.02);
}

.image-count {
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    color: #fff;
    letter-spacing: 0;
    line-height: normal;
    text-align: center;
    background: rgba(0,0,0,.4);
    border-radius: 88rpx;
    width: 70rpx;
    height: 36rpx;
    position: absolute;
    right: 10rpx;
    bottom: 10rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}