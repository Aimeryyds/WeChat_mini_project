.media-wrapper {
    display: flex;
    align-items: center;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #888;
    letter-spacing: 0;
}

.media-icon {
    position: relative;
    width: 44rpx;
    height: 44rpx;
    margin-right: 10rpx;
}

.mask,.media-icon {
    border-radius: 100%;
}

.mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,.02);
}

.media-name {
    max-width: 420rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.pub-time {
    padding-left: 10rpx;
}