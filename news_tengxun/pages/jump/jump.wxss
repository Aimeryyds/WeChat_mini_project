.tab-wrapper {
    border-bottom: 2rpx solid #e7e7e7;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1;
}

.tab-item-wrapper,.tab-wrapper {
    display: flex;
    justify-content: center;
    background-color: #fff;
}

.tab-item {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.tab-name {
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #777;
    line-height: 70rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    height: 100%;
}

.tab-name.active {
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #222;
}

.tab-line {
    background: transparent;
    width: 32rpx;
    height: 8rpx;
}

.tab-line.active {
    background: #2883e9;
}

.swiper-container {
    height: 100%;
}

.test-btn {
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    background: #2883e9;
    opacity: .7;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    border-radius: 10rpx;
    color: #fff;
    padding-left: 10rpx;
    padding-right: 10rpx;
    letter-spacing: 0;
    position: fixed;
    bottom: 120rpx;
}