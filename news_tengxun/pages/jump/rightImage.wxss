@import "../../__wuBaseWxss__/0.wxss";

.title-wrapper {
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #222;
    letter-spacing: 0;
    line-height: 52rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.has-read .title-wrapper {
    color: #888;
}

.small-screen .title-wrapper {
    font-size: 40rpx;
}

.exclusive {
    color: #fff;
    background-color: #f04646;
    font-family: PingFangSC-Medium;
    font-size: 22rpx;
    line-height: 32rpx;
    width: 60rpx;
    display: inline-block;
    margin-right: 16rpx;
    border-radius: 4rpx;
    letter-spacing: 0;
    text-align: center;
    height: 32rpx;
    top: -5rpx;
    position: relative;
}

.intro-wrapper {
    display: flex;
    justify-content: space-between;
    padding-top: 6rpx;
}

.intro-wrapper .text {
    padding-right: 28rpx;
}

.intro-wrapper .intro {
    font-family: PingFangSC-Regular;
    letter-spacing: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    color: #888;
    font-size: 32rpx;
    line-height: 44rpx;
}

.small-screen .intro-wrapper .intro {
    font-size: 34rpx;
}

.intro-wrapper .title {
    font-family: PingFangSC-Regular;
    letter-spacing: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    color: #222;
    font-size: 36rpx;
    line-height: 52rpx;
}

.has-read .intro-wrapper .title {
    color: #888;
}

.small-screen .intro-wrapper .title {
    font-size: 40rpx;
}

.image {
    width: 230rpx;
    height: 160rpx;
    position: relative;
    flex: 0 0 auto;
}

.image,.mask {
    border-radius: 6rpx;
}

.mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,.02);
}

.video-duration {
    position: absolute;
    background: rgba(0,0,0,.4);
    border-radius: 88rpx;
    width: 100rpx;
    height: 36rpx;
    right: 10rpx;
    bottom: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    line-height: 20rpx;
    color: #fff;
}

.paly-icon {
    margin-right: 6rpx;
}