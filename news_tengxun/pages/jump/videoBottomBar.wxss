@import "../../__wuBaseWxss__/0.wxss";

.bottom-wrap-video-image {
    position: relative;
    height: 74rpx;
    line-height: 74rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 15rpx 40rpx 15rpx 22rpx;
}

.bottom-video-content {
    display: inline-flex;
    align-items: center;
}

.video-bottom-head-image-box {
    width: 28px;
    height: 28px;
    border-radius: 100%;
    margin-right: 18rpx;
    border: 1px solid #e6e6e6;
}

.video-bottom-head-image {
    width: 28px;
    height: 28px;
    border-radius: 100%;
    margin-right: 18rpx;
}

.chlname {
    font-size: 30rpx;
    color: #222;
    line-height: 32rpx;
    word-break: break-all;
    display: inline-block;
    max-width: 270rpx;
    vertical-align: top;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.video-interestTap-style-box {
    background: transparent;
    height: 21px;
    display: inline-flex;
    flex-direction: row;
    align-items: center;
}

.video-interestTap-style-comment {
    margin-left: 30rpx;
    font-size: 40rpx;
    color: #484848;
}

.video-interestTap-style-comment-text {
    font-family: PingFangSC-Regular;
    margin-left: 9rpx;
    font-size: 22rpx;
    color: #292929;
    letter-spacing: 0;
    text-align: left;
}

.video-interestTap-style-line {
    background: #e1e1e1;
    margin-left: 40rpx;
    width: 3rpx;
    height: 32rpx;
}

.video-interestTap-style-share {
    width: 50rpx;
    height: 50rpx;
    margin-left: 40rpx;
    background: url(http://mat1.gtimg.com/www/images/newsapp/wxapp/news/xcx_video_weixin.png) no-repeat 50%;
    background-size: 50rpx 50rpx;
}

.video-interestTap-style-share:after {
    border: 0 solid transparent;
}

.video-interestTap-style-no {
    margin-left: 40rpx;
    background: red;
    background: url(http://mat1.gtimg.com/www/images/newsapp/wxapp/news/xcx_video_pyq.png) no-repeat 50%;
    background-size: 50rpx 50rpx;
    width: 50rpx;
    height: 50rpx;
}