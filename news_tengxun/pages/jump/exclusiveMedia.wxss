.exclusive-item {
    height: 340rpx;
    width: 260rpx;
    border-radius: 6rpx;
    border: 2rpx solid #ededed;
    background-color: #fff;
    margin-left: 24rpx;
    position: relative;
}

.exclusive-item .head {
    width: 80rpx;
    height: 80rpx;
    margin: 30rpx auto 0;
}

.exclusive-item .head .head-img {
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
}

.exclusive-item .title {
    font-size: 32rpx;
    line-height: 1.5;
    color: #222;
    margin-top: 15rpx;
    -webkit-line-clamp: 1;
}

.exclusive-item .desc,.exclusive-item .title {
    font-family: PingFangSC;
    text-align: center;
    font-weight: 400;
    font-style: normal;
    font-stretch: normal;
    letter-spacing: normal;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    word-wrap: break-word;
}

.exclusive-item .desc {
    width: 220rpx;
    margin: 14rpx auto 0;
    font-size: 24rpx;
    line-height: 32rpx;
    color: #888;
    -webkit-line-clamp: 2;
}

.exclusive-item .bottom {
    width: 150rpx;
    height: 48rpx;
    position: absolute;
    left: 50%;
    bottom: 30rpx;
    transform: translate3d(-50%,0,0);
}

.exclusive-item .button {
    width: 150rpx;
    height: 48rpx;
    line-height: 48rpx;
    border-radius: 40rpx;
    background-color: #2883e9;
    font-size: 28rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.exclusive-item .button.follow {
    background-color: #b6b6b6;
}

.button-icon {
    height: 20rpx;
    width: 20rpx;
    margin-right: 10rpx;
}

.check-mark {
    position: relative;
    width: 16rpx;
    height: 15rpx;
    margin-right: 10rpx;
}

.check-mark:after {
    content: "";
    position: absolute;
    left: 0;
    width: 100%;
    height: 50%;
    border-radius: 1rpx;
    border: 4rpx solid #fff;
    border-top: none;
    border-right: none;
    background: transparent;
    transform: rotate(-45deg);
}