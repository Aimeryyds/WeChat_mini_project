@import "../../__wuBaseWxss__/0.wxss";

.form-button {
    background: #fff;
    padding: 0;
    margin: 0;
    text-align: unset;
    position: unset;
    line-height: unset;
    border-radius: 0;
    overflow: unset;
}

.form-button:after {
    border: none;
}

.fold-hotspot-wrapper {
    overflow: hidden;
    padding-left: 24rpx;
    padding-right: 10rpx;
    height: 96rpx;
}

.left {
    float: left;
    overflow: hidden;
}

.hot-spot-icon {
    float: left;
    height: 36rpx;
    width: 36rpx;
    margin-top: 30rpx;
}

.desc {
    float: left;
    height: 96rpx;
    line-height: 96rpx;
    width: 128rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 700;
    color: #222;
    margin-left: 12rpx;
}

.swiper-wrap {
    height: 96rpx;
    padding-left: 188rpx;
}

.item-wrap {
    height: 96rpx;
}

.item-text {
    line-height: 96rpx;
    font-size: 32rpx;
    color: #222;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.hotspot-wrapper {
    padding-bottom: 32rpx;
    overflow: hidden;
    position: relative;
}

.hotspot-title-wrapper {
    justify-content: space-between;
    padding: 0 36rpx 0 24rpx;
    height: 100rpx;
}

.hotspot-title-wrapper,.title-left {
    display: flex;
    align-items: center;
}

.left-icon {
    font-size: 24rpx;
    color: #fff;
    margin-right: 11rpx;
    line-height: 36rpx;
    text-align: center;
    background-color: #f04646;
    width: 36rpx;
    height: 36rpx;
    border-radius: 100%;
}

.title-text {
    font-size: 32rpx;
    font-weight: 700;
    color: #222;
}

.title-right {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
}

.right-arrow {
    width: 24rpx;
    height: 24rpx;
    margin-left: 16rpx;
}

.hotspot-item-wrapper {
    display: flex;
    height: 360rpx;
    background-color: #fff;
    padding-left: 10rpx;
    padding-right: 25rpx;
    box-sizing: border-box;
}

.hotspot-item {
    padding-left: 15rpx;
}