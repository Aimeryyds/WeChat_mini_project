.none-image-wrapper {
    padding: 20rpx 24rpx;
}

.source-wrapper {
    font-size: 28rpx;
    line-height: 56rpx;
    color: #849098;
    word-break: break-all;
    max-width: 300rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.is-top {
    color: #f04646;
    margin-right: 18rpx;
}

.title-wrapper {
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #222;
    letter-spacing: 0;
    line-height: 52rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.has-read .title-wrapper {
    color: #888;
}

.small-screen .title-wrapper {
    font-size: 40rpx;
}