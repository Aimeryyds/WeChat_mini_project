@import "../../__wuBaseWxss__/0.wxss";

.item-wrapper {
    position: relative;
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    justify-content: flex-end;
    font-weight: 700;
    overflow: hidden;
}

.bg-image,.item-wrapper {
    width: 640rpx;
    height: 360rpx;
    border-radius: 12rpx;
}

.bg-image {
    position: absolute;
    top: 0rpx;
    left: 0rpx;
}

.image-mask {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: linear-gradient(transparent,rgba(0,0,0,.4));
}

.date-wrap {
    position: absolute;
    top: 20rpx;
    left: 20rpx;
    color: #fff;
    width: 68rpx;
    height: 68rpx;
    border: 1px solid #fff;
    box-sizing: border-box;
    background-color: rgba(0,0,0,.2);
}

.date-wrap .day {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 40rpx;
    font-weight: 700;
    color: #fff;
    text-align: center;
}

.date-wrap .line {
    width: 48rpx;
    height: 1rpx;
    background-color: #fff;
    margin: 0 auto;
}

.date-wrap .weekday {
    font-size: 12rpx;
    color: #fff;
    text-align: center;
}

.video-icon {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-100%);
    width: 76rpx;
    height: 76rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 38rpx;
    background-color: rgba(0,0,0,.3);
    color: #fff;
    border-radius: 100%;
}

.special-label {
    font-family: PingFangSC-Medium;
    color: #fff;
    background-color: #2883e9;
    font-size: 22rpx;
    line-height: 32rpx;
    width: 60rpx;
    height: 32rpx;
    border-radius: 4rpx;
    text-align: center;
    position: relative;
    top: -4rpx;
    margin-left: 20rpx;
}

.zwb-icon {
    width: 142rpx;
    height: 42rpx;
    position: relative;
    top: 5rpx;
}

.split-line {
    display: inline-block;
    margin: 0 18rpx;
    height: 32rpx;
    width: 1rpx;
    background-color: #fff;
    vertical-align: top;
    position: relative;
    top: 16rpx;
}

.title-wrapper {
    position: relative;
    line-height: 48rpx;
    min-height: 40rpx;
    max-height: 120rpx;
    line-height: 40rpx;
    margin: 0 20rpx;
    width: 600rpx;
    color: #fff;
    font-size: 32rpx;
    text-shadow: 0 1px 1px rgba(0,0,0,.5);
    -webkit-line-clamp: 2;
    display: -webkit-box;
    white-space: pre-wrap;
}

.bottom-wrapper {
    padding-top: 10rpx;
    padding-bottom: 30rpx;
    word-break: break-all;
    line-height: 26rpx;
    max-width: 250rpx;
    vertical-align: top;
    color: #fff;
    font-size: 22rpx;
    opacity: .6;
}

.comment,.pub-time {
    margin-left: 20rpx;
    display: inline-block;
}