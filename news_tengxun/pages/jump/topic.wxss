.topicContainer {
    flex-direction: column;
    align-items: flex-start;
    padding: 30rpx 24rpx;
}

.topicContainer,.topicTitle {
    display: flex;
    justify-content: flex-start;
}

.topicTitle {
    flex-direction: row;
    align-items: center;
    margin-bottom: 30rpx;
}

.imageStyle {
    width: 26rpx;
    height: 30rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.topicTextBackground {
    font-family: PingFangSC-Medium;
    font-size: 22rpx;
    color: #525048;
    line-height: normal;
    background: #ffdb02;
    border-radius: 2rpx;
    width: 60rpx;
    height: 36rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.topicName {
    font-size: 32rpx;
    line-height: 52rpx;
    color: #111;
    letter-spacing: 0;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.topicPeople {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #999;
    text-align: left;
    padding-left: 20rpx;
}

.blackLine {
    border-bottom: 2rpx solid #f0f0f0;
    margin-top: 20rpx;
    width: 100%;
}

.imageListView {
    width: 100%;
    padding-left: 16rpx;
}

.headListView,.imageListView {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.headView {
    border-radius: 100%;
}

.headView,.imageBorder {
    width: 48rpx;
    height: 48rpx;
}

.imageBorder {
    border-radius: 100%;
    border: 4rpx solid transparent;
    filter: brightness(98%);
    margin-left: -16rpx;
}

.yellowBorder {
    border: 4rpx solid #ffdb02!important;
}

.HeadView_container {
    display: flex;
    position: relative;
    filter: brightness(98%);
}

.topicBattle {
    width: 100%;
    margin-bottom: 20rpx;
}

.swiper {
    width: 100%;
    height: 152rpx;
    border-top: 2rpx solid #f0f0f0;
    margin-top: 30rpx;
    padding-top: 20rpx;
    box-sizing: border-box;
}

.topicDesc {
    font-size: 28rpx;
    color: #222;
    letter-spacing: 0;
    line-height: 44rpx;
    max-height: 132rpx;
    text-align: left;
    max-width: 702rpx;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    text-overflow: ellipsis;
    box-sizing: content-box;
}