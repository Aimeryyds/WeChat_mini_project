.wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 80rpx;
    background-color: #e9f3ff;
    padding: 0 24rpx;
    box-sizing: border-box;
    transition: height .2s linear 0s;
    overflow: hidden;
}

.wrapper.hide-banners {
    height: 0rpx;
}

.words {
    font-size: 32rpx;
    line-height: 44rpx;
    color: #2883e9;
    flex: 1;
}