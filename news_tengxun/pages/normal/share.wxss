.cover {
    height: 100%;
    position: relative;
    overflow: hidden;
}

.scroll-view {
    position: absolute;
    top: 0;
    left: 0;
    height: calc(100% + 160rpx);
}

.title-wrapper {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: url(https://mat1.gtimg.com/www/js/news/title-bg-white.png) 50% no-repeat;
    background-size: 176rpx 60rpx;
    height: 116rpx;
    margin-top: 40rpx;
}

.title {
    font-size: 32rpx;
    font-weight: 700;
    line-height: 1;
    color: #222;
    margin: 0 12rpx;
}

.more-comment-btn-wrapper {
    margin-top: 20rpx;
}

.more-comment-btn,.more-comment-btn-wrapper {
    display: flex;
    justify-content: center;
}

.more-comment-btn {
    width: fit-content;
    min-width: 420rpx;
    height: 72rpx;
    border-radius: 36rpx;
    background-color: #f7f7f7;
    align-items: center;
    font-size: 28rpx;
    color: #222;
    padding: 0 36rpx;
}

.more-comment-btn .icon {
    width: 24rpx;
    height: 24rpx;
    margin-left: 12rpx;
}

.no-comment {
    margin: 120rpx 0 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.recommend-list {
    display: block;
    padding-top: 60rpx;
}

.go-home-btn-wrapper {
    padding-top: 70rpx;
    padding-bottom: 250rpx;
    display: flex;
    justify-content: center;
}

.go-home-btn-wrapper.enable-share-circle {
    padding-bottom: 470rpx;
}

.go-home-btn-wrapper .is-iphone-x {
    padding-bottom: 60rpx;
}

.fixed-btn-wrapper {
    position: fixed;
    bottom: 96rpx;
    right: 148rpx;
    z-index: 1;
}

.fixed-btn-wrapper.enable-share-circle {
    bottom: 290rpx;
}

.fixed-share-button {
    position: absolute;
    bottom: 140rpx;
}

.is-iphone-x .fixed-share-button {
    bottom: 200rpx;
}

.pub-comment-btn {
    position: absolute;
    bottom: 0;
    width: 108rpx;
    height: 108rpx;
    box-shadow: 0 0 0 1rpx rgba(0,0,0,.05),0 4rpx 12rpx 0 rgba(0,0,0,.2);
    background-color: #2883e9;
    border-radius: 100%;
    font-size: 24rpx;
    line-height: 32rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.is-iphone-x .pub-comment-btn {
    bottom: 60rpx;
}

.launch-app-btn {
    position: absolute;
    bottom: 0;
    width: 108rpx;
    height: 108rpx;
    box-shadow: 0 0 0 1rpx rgba(0,0,0,.05),0 4rpx 12rpx 0 rgba(0,0,0,.2);
    background-color: #2883e9;
    border-radius: 100%;
    padding: 0;
    text-align: left;
    font-size: 24rpx;
    line-height: 32rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.is-iphone-x .launch-app-btn {
    bottom: 60rpx;
}

.social-bar-wrapper {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1;
}

.blue-button,.social-bar-wrapper {
    display: flex;
    justify-content: center;
    box-sizing: border-box;
}

.blue-button {
    width: fit-content;
    min-width: 420rpx;
    height: 72rpx;
    border-radius: 36rpx;
    background-color: #f0f7ff;
    align-items: center;
    font-size: 28rpx;
    color: #2883e9;
    padding: 0 36rpx;
    white-space: nowrap;
}

.blue-button .icon {
    width: 24rpx;
    height: 24rpx;
    margin-left: 12rpx;
}

.blue-button .icon.top {
    transform: rotate(270deg);
}

.blue-button .icon.bottom {
    transform: rotate(90deg);
}

.blue-button .icon.left {
    transform: rotate(.5turn);
}