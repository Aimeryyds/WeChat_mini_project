.recommend-btn {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 56rpx;
    border-radius: 28rpx;
    background-color: #2883e9;
    font-family: PingFangSC;
    font-size: 28rpx;
    font-weight: 400;
    font-style: normal;
    font-stretch: normal;
    line-height: 56rpx;
    letter-spacing: normal;
    color: #fff;
    padding: 0 30rpx 0 32rpx;
    white-space: nowrap;
}

.recommended {
    background-color: #e4f1ff;
    color: #2883e9;
}

.recommend-icon {
    width: 28rpx;
    height: 28rpx;
    margin-left: 10rpx;
}

.recommended .recommend-btn {
    background-color: #2883e9;
}