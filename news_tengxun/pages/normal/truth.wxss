.truth-wrapper {
    margin: 50rpx 30rpx 80rpx;
    border: 1rpx solid #ececec;
    box-shadow: 0 4rpx 6rpx 0 rgba(0,0,0,.03);
}

.truth-title {
    display: flex;
    align-items: center;
    margin-top: 32rpx;
    margin-bottom: 26rpx;
}

.blue-bar {
    height: 28rpx;
    width: 4rpx;
    border-radius: 3rpx;
    background-color: #2883e9;
    margin-left: -2rpx;
}

.truth-text {
    font-size: 36rpx;
    font-weight: 500;
    color: #2d3445;
    position: relative;
    padding-left: 28rpx;
}

.truth-text:after {
    content: "";
    position: absolute;
    top: 4rpx;
    right: -28rpx;
    width: 20rpx;
    height: 20rpx;
    background: url(http://mat1.gtimg.com/www/images/news_minipro/blue-plus.png) 50% no-repeat;
    background-size: 20rpx;
}

.truth-content.fold {
    overflow: hidden;
    height: 150rpx;
}

.h2 {
    color: #2d3445;
    font-size: 36rpx;
    line-height: 1.33;
    letter-spacing: 0.52rpx;
    padding: 0rpx 30rpx 12rpx;
}

.text {
    font-size: 32rpx;
    color: #848e98;
    letter-spacing: 0.12rpx;
    line-height: 1.5;
    padding: 0 30rpx;
}

.fold-wrapper {
    margin: 30rpx 30rpx 0;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    font-weight: 500;
    color: #2d3445;
    border-top: 1rpx solid #ededed;
}

.img {
    height: 20rpx;
    width: 20rpx;
    margin-right: 10rpx;
}

.img.fold {
    transform: rotate(180deg);
}