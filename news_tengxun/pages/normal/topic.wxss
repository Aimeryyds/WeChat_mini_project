.topic-wrapper {
    color: #737373;
    background: #f8f8f8;
    width: 690rpx;
    margin: 40rpx 30rpx;
    padding: 24rpx;
    border-radius: 12rpx;
    box-sizing: border-box;
}

.module-title {
    font-size: 24rpx;
    line-height: 1;
}

.split-line {
    background: #ededed;
    height: 1rpx;
    margin: 20rpx 0;
}

.title-wrapper {
    display: flex;
    align-items: center;
    height: 88rpx;
}

.img {
    width: 88rpx;
    height: 88rpx;
    border-radius: 6rpx;
    overflow: hidden;
    position: relative;
}

.img:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    background-blend-mode: overlay;
    background-image: linear-gradient(180deg,rgba(255,87,0,.28),rgba(255,87,0,.28));
}

.title-read {
    display: flex;
    flex-direction: column;
    width: 422rpx;
    padding: 0 18rpx;
    box-sizing: border-box;
}

.title {
    font-family: PingFangSC;
    font-size: 28rpx;
    font-weight: 700;
    color: #222;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.read-count {
    font-size: 24rpx;
}

.nav-btn {
    background: #0080ff;
    border-radius: 27rpx;
    width: 132rpx;
    height: 54rpx;
    color: #fff;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.desc-wrapper {
    color: #737373;
    font-size: 28rpx;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    margin-top: 14rpx;
}

.desc-wrapper.desc {
    font-size: 32rpx;
    line-height: 44rpx;
    color: #222;
}

.media {
    color: #222;
    font-weight: 700;
}

.vote-wrapper {
    margin-top: 18rpx;
}

.vote-btn,.vote-wrapper {
    display: flex;
    justify-content: center;
}

.vote-btn {
    width: 312rpx;
    height: 70rpx;
    align-items: center;
    border-radius: 35rpx;
    font-size: 28rpx;
}

.vote-text {
    width: 250rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    text-align: center;
}

.vote-red {
    color: #ff6062;
    border: 2rpx solid #ff6062;
    margin-right: 9rpx;
}

.vote-blue {
    color: #2882e9;
    border: 2rpx solid #2882e9;
    margin-left: 9rpx;
}