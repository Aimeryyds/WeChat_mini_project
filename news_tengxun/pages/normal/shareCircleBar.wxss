.bar-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    height: 130rpx;
    width: 750rpx;
    background: #fff;
    padding: 0 20rpx;
    margin: 0;
    overflow: unset;
    border-top: 2rpx solid #eee;
    border-radius: 0;
}

.bar-wrapper:after {
    border: none;
}

.is-iphone-x {
    background: #fff;
    padding-bottom: 60rpx;
}

.social-info-wrapper {
    display: flex;
    align-items: center;
    flex: 1;
    height: 100%;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 100%;
}

.social-info {
    flex: 1;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 0 20rpx;
    height: 100%;
    box-sizing: border-box;
    text-align: left;
}

.nick-name-wrapper,.social-info {
    display: flex;
}

.nick-name-wrapper {
    font-family: PingFangSC;
    font-size: 0;
    font-weight: 400;
    font-style: normal;
    font-stretch: normal;
    letter-spacing: normal;
    line-height: normal;
    color: #222;
    width: 100%;
    align-items: center;
}

.nick-name {
    font-weight: 700;
    padding-right: 10rpx;
    -webkit-line-clamp: 1;
    overflow: hidden;
    max-height: 38rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    white-space: break-all;
    vertical-align: middle;
    margin-bottom: 1.8rpx;
}

.for-you,.nick-name {
    font-size: 32rpx;
    line-height: 40rpx;
    word-break: break-all;
}

.for-you {
    white-space: nowrap;
    vertical-align: baseline;
    margin-right: 7rpx;
}

.right-arrow {
    height: 20rpx;
    width: 20rpx;
    margin-top: 3rpx;
    white-space: nowrap;
}

.group-wrapper {
    font-family: PingFangSC;
    font-size: 24rpx;
    font-weight: 400;
    font-style: normal;
    font-stretch: normal;
    letter-spacing: normal;
    color: #777;
    line-height: 30rpx;
    padding-top: 12rpx;
    white-space: break-all;
    width: 100%;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
}

.danmu-container {
    position: absolute;
    top: -140rpx;
    left: 0;
    height: 140rpx;
    width: 100%;
    padding-left: 20rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.animation-comment {
    position: absolute;
    opacity: 0;
    max-width: 637rpx;
    top: 160rpx;
}

.animation-comment-collapse {
    max-width: 536rpx;
}

.animation {
    animation: run-comment 3s linear 0s 1;
}

@-webkit-keyframes run-comment {
    0% {
        top: 140rpx;
        opacity: 1;
    }

    11.11% {
        top: 70rpx;
        opacity: 1;
    }

    44.44% {
        top: 70rpx;
        opacity: 1;
    }

    55.55% {
        top: 0rpx;
        opacity: 1;
    }

    88.88% {
        top: 0rpx;
        opacity: 1;
    }

    to {
        top: -70rpx;
        opacity: .4;
    }
}

@keyframes run-comment {
    0% {
        top: 140rpx;
        opacity: 1;
    }

    11.11% {
        top: 70rpx;
        opacity: 1;
    }

    44.44% {
        top: 70rpx;
        opacity: 1;
    }

    55.55% {
        top: 0rpx;
        opacity: 1;
    }

    88.88% {
        top: 0rpx;
        opacity: 1;
    }

    to {
        top: -70rpx;
        opacity: .4;
    }
}

.comment-item-wrapper {
    display: flex;
    align-items: center;
    height: 60rpx;
    border-radius: 30rpx;
    background-color: rgba(68,68,68,.9);
    color: #fff;
    font-size: 28rpx;
    line-height: 1.5;
    padding-right: 20rpx;
    width: fit-content;
}

.comment-item-avatar {
    width: 48rpx;
    height: 48rpx;
    border-radius: 100%;
    margin: 6rpx 15rpx 6rpx 6rpx;
    flex: 0 0 auto;
}

.contain-thank-text-image {
    display: flex;
    align-items: center;
}

.white-heart-in-thanks {
    width: 28rpx;
    height: 28rpx;
    margin-left: 14rpx;
}