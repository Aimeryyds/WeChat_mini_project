.share {
    width: 108rpx;
    height: 108rpx;
    box-shadow: 0 0 0 1rpx rgba(0,0,0,.05),0 4rpx 12rpx 0 rgba(0,0,0,.2);
    background-color: #fff;
    border-radius: 54rpx;
    transition: height .2s linear 0s;
    overflow: hidden;
}

.share-mini {
    justify-content: center;
}

.share-long,.share-mini {
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
}

.share-long {
    box-sizing: border-box;
    justify-content: space-between;
}

.close-icon {
    width: 16rpx;
    height: 16rpx;
    padding-bottom: 40rpx;
}

.share-icon {
    padding-top: 40rpx;
}

.share-icon,.wechat-icon {
    width: 56rpx;
    height: 56rpx;
    margin-bottom: 4rpx;
}

.arrow-icon {
    width: 44rpx;
    height: 40rpx;
}

.share-word {
    color: #222;
    font-size: 24rpx;
    line-height: 32rpx;
}

.none_button {
    padding: 0;
    line-height: 1;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.none_button,.none_button:after {
    border: none;
    background-color: transparent;
}

.none_button:after {
    padding-left: 0rpx;
    padding-right: 0rpx;
    margin-left: 0;
    margin-right: 0;
    width: 0rpx;
    height: 0rpx;
}

.share-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    width: 100%;
}