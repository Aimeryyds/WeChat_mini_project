.container {
    font-family: PingFangSC;
}

.container,.title {
    letter-spacing: normal;
}

.title {
    font-size: 44rpx;
    font-weight: 700;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.45;
    text-align: justify;
    word-break: normal;
    color: #222;
    margin: 40rpx 24rpx 0;
}

.media-card {
    justify-content: space-between;
    height: 48rpx;
    line-height: 48rpx;
    margin: 20rpx 24rpx 0;
}

.media,.media-card {
    display: flex;
    align-items: center;
}

.avator {
    width: 48rpx;
    height: 48rpx;
    background-color: rgba(0,0,0,.03);
    border-radius: 100%;
    margin-right: 10rpx;
}

.nick {
    font-size: 28rpx;
    line-height: 28rpx;
    color: #222;
    justify-items: center;
    margin-right: 20rpx;
    flex: 1 0 auto;
    max-width: 330rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.timestamp {
    font-size: 24rpx;
    line-height: 24rpx;
    color: #777;
}

.summary {
    color: #848e98;
    text-justify: inter-ideograph;
    font-size: 36rpx;
    line-height: 1.67;
    margin: 58rpx 30rpx 48rpx;
    text-align: justify;
}

.bottom-split-container,.top-split-container {
    display: flex;
    align-items: center;
}

.intro-content,.top-split-container {
    margin-top: 20rpx;
}

.summary-split-circle {
    height: 7rpx;
    width: 7rpx;
    background: #fff;
    border: 5rpx solid #e4e4e4;
    border-radius: 50%;
}

.summary-split-line {
    width: 120rpx;
    height: 2rpx;
    border-radius: 1rpx;
    background-color: #e4e4e4;
    margin: 0 8rpx;
}

.bottom-split-container {
    margin-top: 20rpx;
    justify-content: flex-end;
}

.content {
    margin: 58rpx 0 48rpx;
}

.text {
    font-size: 36rpx;
    color: #222;
    letter-spacing: normal;
    line-height: 1.67;
    margin: 40rpx 30rpx 0;
    text-indent: 0rpx;
    padding-left: 0rpx;
    text-align: justify;
    word-break: normal;
}

.link {
    padding-bottom: 4rpx;
    margin-right: 20rpx;
    border-bottom: 2rpx solid #2883e9;
}

.img-box {
    margin-top: 40rpx;
    position: relative;
    background: #eaeaea url(http://mat1.gtimg.com/www/images/newsapp/wxapp/news/ic_default_bg.png) 50% no-repeat;
    background-size: 100rpx;
}

.img {
    width: 100%;
    height: 100%;
}

.img-desc {
    font-size: 32rpx;
    line-height: 1.63;
    color: grey;
    margin: 20rpx 30rpx 0;
    word-break: normal;
}

.img-desc-image {
    width: 20rpx;
    height: 20rpx;
}

.gif-hold {
    position: absolute;
    top: 0;
    left: 0;
}

.gif-bottom {
    position: absolute;
    right: 0;
    bottom: 0;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 28rpx;
    color: #fff;
}

.gif-text {
    background: rgba(0,0,0,.4);
}

.gif-size,.gif-text {
    display: inline-block;
    padding: 0 10rpx;
}

.gif-size {
    background: #05c;
}

.live-video-box {
    font-size: 30rpx;
    color: #848e98;
    letter-spacing: normal;
    line-height: 1.67;
    margin: 50rpx 30rpx;
    text-indent: 0rpx;
    padding-left: 0rpx;
    text-align: justify;
    word-break: normal;
}

.video-box {
    margin: 50rpx 0 58rpx;
}

.video-desc {
    font-size: 32rpx;
    line-height: 1.63;
    color: grey;
    margin: 20rpx 30rpx 0;
    word-break: normal;
}

.video-desc-image {
    width: 22rpx;
    height: 24rpx;
    margin-right: 8rpx;
}

.focus {
    margin: 0 30rpx;
    padding: 40rpx 0;
    font-size: 36rpx;
    font-weight: 700;
    line-height: 1.67;
    color: #222;
    border-bottom: 2rpx solid #f0f0f0;
}

.main-point-container {
    margin: 30rpx 30rpx 0;
    position: relative;
    text-align: justify;
    word-break: normal;
}

.serial-number {
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    border-radius: 42rpx;
    background: #2883e9;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
    line-height: 32rpx;
    margin-right: 20rpx;
    position: relative;
    top: -1rpx;
}

.main-point {
    font-size: 32rpx;
    color: #222;
    line-height: 1.63;
}

.split-line,.split-line-top {
    margin: 40rpx 30rpx 0;
    border-bottom: 2rpx solid #f0f0f0;
}

.strong {
    font-weight: 700;
}

.strong-border {
    display: flex;
    flex-direction: row;
    margin-top: 40rpx;
}

.strong-title {
    font-size: 40rpx;
    font-weight: 700;
    line-height: 1.6;
    color: #222;
    letter-spacing: normal;
    margin: 0 30rpx 0 20rpx;
    flex: 1;
}

.blue-bar {
    width: 10rpx;
    height: 36rpx;
    border-radius: 3rpx;
    background-color: #2883e9;
    margin-top: 15rpx;
}

.strong-title-container {
    font-weight: 700;
    margin: 40rpx 30rpx 0;
}

.intro,.strong-title-container {
    font-size: 36rpx;
    color: #222;
    line-height: 1.67;
}

.intro {
    letter-spacing: normal;
    margin: 0 30rpx;
}

.album-desc {
    font-size: 32rpx;
    line-height: 1.63;
    color: #222;
    margin: 20rpx 30rpx 0;
    word-break: normal;
    font-family: PingFangSC;
    font-weight: 700;
}

.three-line {
    width: 24rpx;
    height: 23rpx;
    display: inline-block;
    margin-right: 6rpx;
}

.album-more {
    width: 16rpx;
    height: 24rpx;
    display: inline-block;
}