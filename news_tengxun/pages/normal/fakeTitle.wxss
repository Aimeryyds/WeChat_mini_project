.container {
    font-family: PingFangSC;
    letter-spacing: normal;
    border-top: 20rpx solid #f7f7f7;
    padding-bottom: 40rpx;
}

.is-iphone-x.container {
    padding-bottom: 60rpx;
}

.title-cover {
    margin: 32rpx 24rpx 0;
    vertical-align: middle;
}

.next-tips-cover {
    height: 40rpx;
    line-height: 60rpx;
    display: inline;
    vertical-align: top;
}

.next-tips {
    border-radius: 4rpx;
    background-color: #2883e9;
    height: 36rpx;
    line-height: 36rpx;
    font-size: 24rpx;
    color: #fff;
    padding: 0 6rpx;
    margin-right: 10rpx;
    margin-bottom: 14rpx;
}

.next-tips,.title {
    font-weight: 700;
    display: inline;
    vertical-align: middle;
}

.title {
    font-size: 40rpx;
    font-style: normal;
    font-stretch: normal;
    line-height: 60rpx;
    letter-spacing: normal;
    color: #222;
}

.content {
    margin: 10rpx 24rpx;
}

.text {
    font-size: 32rpx;
    text-align: justify;
    color: #222;
    letter-spacing: 0;
    line-height: 1.67;
}

.img {
    width: 100%;
    height: 100%;
    margin-top: 20rpx;
}

.content-cover {
    width: 100%;
    height: 70rpx;
    overflow: hidden;
    position: relative;
}

.mask {
    background: linear-gradient(180deg,hsla(0,0%,100%,0),#fff);
    position: absolute;
    width: 100%;
    height: 80rpx;
    bottom: 0rpx;
    left: 0;
    right: 0;
    z-index: 10;
}

.mask-words {
    font-size: 28rpx;
    line-height: 28rpx;
    color: #2883e9;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 320rpx;
    height: 64rpx;
    border-radius: 32rpx;
    background-color: #e9f3ff;
    margin: 20rpx auto 0;
    white-space: nowrap;
}

.mask-icon {
    width: 24rpx;
    height: 24rpx;
    margin-left: 12rpx;
    transform: rotate(270deg);
}