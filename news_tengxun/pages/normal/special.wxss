.special-wrapper {
    width: 690rpx;
    height: 124rpx;
    background: #f8f8f8;
    border-radius: 12rpx;
    margin: 40rpx 30rpx;
    padding: 22rpx 24rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.content {
    font-size: 32rpx;
    color: #222;
    line-height: 1.38;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    padding-right: 4rpx;
    vertical-align: middle;
}

.special-label {
    color: #0080ff;
    display: inline;
    font-weight: 700;
}

.split-dot {
    width: 4rpx;
    height: 4rpx;
    margin: 10rpx;
    border-radius: 100%;
    background: #222;
    display: inline-block;
}

.desc {
    display: inline;
}

.right-arrow {
    width: 14rpx;
    height: 22rpx;
    display: inline-block;
    margin-left: 10rpx;
}