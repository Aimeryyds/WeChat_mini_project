@import "../../__wuBaseWxss__/0.wxss";

.bottom-wrapper {
    color: #888;
    margin: 0 24rpx 32rpx;
    justify-content: space-between;
}

.bottom-wrapper,.btn-wrapper,.media-wrapper {
    display: flex;
}

.media-icon {
    flex: 0 0 auto;
    width: 44rpx;
    height: 44rpx;
    border-radius: 100%;
    margin-right: 12rpx;
}

.media-name {
    flex: 1 0 auto;
    font-size: 32rpx;
    max-width: 320rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.comment-wrapper {
    display: flex;
    align-items: center;
    padding: 0 22rpx;
}

.comment-icon {
    flex: 0 0 auto;
    font-size: 36rpx;
}

.comment-count {
    flex: 1 0 auto;
    font-size: 24rpx;
    padding-left: 10rpx;
}

.share-btn {
    margin: 0;
    padding: 0 22rpx;
    height: 44rpx;
    line-height: 44rpx;
    background: unset;
}

.share-btn:after {
    border: 0 solid transparent;
}

.poster-btn {
    padding: 0 22rpx;
    margin-right: -22rpx;
}

.poster-btn,.poster-btn-img,.share-btn-img {
    width: 44rpx;
    height: 44rpx;
}