.video-page,page {
    background: #1b1c20;
}

.video-page {
    height: 100%;
}

.card-box {
    position: relative;
}

.card-wrapper {
    background: #1b1c20;
    display: flex;
    flex-direction: column;
}

.card-cover {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(27,28,32,.7);
    z-index: 0;
    opacity: 0;
}

.title {
    font-family: PingFangSC;
    font-size: 36rpx;
    color: #fff;
    padding: 20rpx 24rpx;
}

.recommend-for-you {
    margin: 30rpx 0rpx;
}

.more-btn-wrapper {
    display: flex;
    justify-content: center;
    align-item: center;
    padding: 20rpx 0;
}

.more-btn {
    background: #1e2732;
    color: #2883e9;
    height: 72rpx;
    width: 546rpx;
    text-align: center;
    line-height: 72rpx;
    font-size: 28rpx;
    font-family: PingFangSC;
    border-radius: 72rpx;
}

.more-btn-icon {
    font-size: 24rpx;
    transform: rotate(90deg);
    display: inline-block;
}

.play-next-toast {
    position: absolute;
    bottom: 84rpx;
    left: 50%;
    transform: translateX(-50%);
    height: 72rpx;
    width: 320rpx;
    border-radius: 72rpx;
    background: #383838;
    color: #fff;
    z-index: -1;
}

.download-botton {
    height: 72rpx;
    width: 100%;
    background: transparent;
    border: none;
    padding: 0;
    text-align: left;
    line-height: 1;
    border-radius: 0;
}

.download-botton:after {
    border: none;
    background-color: transparent;
    width: 0;
    height: 0;
    padding-left: 0;
    padding-right: 0;
    margin-left: 0;
    margin-right: 0;
}

.download-bar {
    background: #2883e9;
    height: 72rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    color: #fff;
}

.slider {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    margin: 0;
    padding: 0;
    z-index: 10;
}

.loading-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #1b1c20;
    height: 160rpx;
    width: 750rpx;
}

.loading-wrapper.has-fixlist {
    padding-bottom: 250rpx;
}