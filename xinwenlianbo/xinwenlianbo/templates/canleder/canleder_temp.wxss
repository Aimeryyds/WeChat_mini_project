.rili {
    height: 102rpx;
    width: 656rpx;
    background-color: #f8453c;
    font-size: 28rpx;
    text-align: center;
    line-height: 32rpx;
    border-left: 14rpx solid #e93027;
    border-radius: 0 6rpx 6rpx 0;
}

.rili .rilibox {
    display: block;
    height: 102rpx;
}

.rili .rilibox .yesterday {
    float: left;
    font-size: 20rpx;
    padding: 0 6rpx;
    background-color: rgba(0,153,255,1);
    border-radius: 8rpx;
    color: #fff;
}

.rili .rilibox .monthDate {
    overflow: hidden;
    float: left;
}

.rili .rilibox .monthDate view {
    float: left;
}

.rili .rilibox .time {
    font-size: 72rpx;
    line-height: 72rpx;
    color: #fff;
    height: 72rpx;
    margin-top: 18rpx;
    font-weight: normal;
    margin-left: 25rpx;
}

.rili .rilibox .danwei {
    font-size: 30rpx;
    line-height: 30rpx;
    color: #fff;
    height: 30rpx;
    margin-top: 56rpx;
    font-weight: normal;
    margin-left: 8rpx;
}

.rili .rilibox .weeknongli {
    overflow: hidden;
    float: right;
    margin-right: 25rpx;
}

.rili .rilibox .weeknongli .year {
    font-size: 24rpx;
    color: #fff;
    margin-top: 20rpx;
    text-align: right;
}

.rili .rilibox .weekbox {
    float: right;
    display: block;
    overflow: hidden;
}

.rili .rilibox .weekbox view {
    float: left;
    font-size: 24rpx;
    color: #fff;
}

.rili .rilibox .weekbox .week {
    margin-right: 24rpx;
}