.view_video_share {
    position: fixed;
    z-index: 2;
    bottom: 0;
    clear: both;
    width: 100%;
    border: 1px solid #ddd;
    margin-top: 20px;
    font-size: 30rpx;
    height: 110rpx;
    background: #fff;
    color: #4262ab;
    box-shadow: 0 0 30rpx #ddd;
}

.view_video_share_img {
    padding-top: 32rpx;
    padding-right: 20rpx;
    width: 44rpx;
    height: 44rpx;
    float: right;
}

.view_video_share_text {
    line-height: 110rpx;
    font-family: PingFangSC-Semibold;
    font-weight: bold;
    float: right;
    right: 30rpx;
}

.button {
    position: absolute;
    right: 140rpx;
    display: inline-block;
    padding: 0;
    box-sizing: border-box;
    font-size: 30rpx;
    text-align: center;
    text-decoration: none;
    line-height: 110rpx;
    font-family: PingFangSC-Semibold;
    font-weight: bold;
    -webkit-tap-highlight-color: transparent;
    overflow: hidden;
    color: #4262ab;
    background-color: #fff;
    border-color: #fff;
}

.button::after {
    border: none;
}

.view_video_share_shadow {
    width: 100%;
    height: 6px;
    position: absolute;
    top: -6px;
    left: 0;
}

.backhome {
    position: fixed;
    left: 0;
    bottom: 160rpx;
    z-index: 999;
    width: 160rpx;
    height: 70rpx;
}

.backhome image {
    width: 160rpx;
    height: 70rpx;
}

.viewShoucang {
    padding-top: 28rpx;
    padding-right: 58rpx;
    height: 50rpx;
    width: 50rpx;
    float: right;
}

.viewShoucang_img {
    height: 50rpx;
    width: 100%;
}