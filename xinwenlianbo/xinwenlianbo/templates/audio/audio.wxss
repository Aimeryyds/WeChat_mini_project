.audio_box {
    width: 100%;
    height: 240rpx;
}

.audiobox {
    border-left: 0rpx!important;
    border-right: 0rpx!important;
}

.song-control {
    padding-top: 75rpx;
    height: 238rpx;
    box-sizing: border-box;
    border-top: 1px solid #f0f0f0;
    border-bottom: 1px solid #f0f0f0;
}

.song-control .progress {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.slider_bg {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.pass_time {
    height: 85rpx;
    margin-right: 30rpx;
    line-height: 86rpx;
    color: #808080;
    font-size: 24rpx;
}

.total_time {
    height: 86rpx;
    margin-left: 30rpx;
    line-height: 86rpx;
    color: #808080;
    font-size: 24rpx;
}

.play {
    border: 1rpx solid #aaa;
    border-radius: 55%;
    margin-top: 1rpx;
    margin-left: 0rpx;
    margin-right: 15rpx;
    width: 70rpx;
    height: 70rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.play.pause {
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.time_view {
    width: 600rpx;
    height: 40rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-left: 75rpx;
    font-size: 36rpx;
    margin-top: 30rpx;
    color: #999;
}

#marginbottom {
    margin-bottom: 100rpx;
}