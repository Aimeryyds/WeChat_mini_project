@import "../../templates/audio/audio.wxss";

.hide {
    display: none;
}

.show {
    display: block;
}

.audiobox {
    z-index: 5;
    position: fixed;
    bottom: 1rpx;
    height: 100rpx;
    border: 1rpx solid #ddd;
    border-bottom: 0rpx;
    width: 100%;
    background: #fff;
}

.yskp {
    padding-top: 19rpx;
}

.wushujubox {
    position: fixed;
    left: 0;
    top: 50%;
    margin-top: -300rpx;
    width: 100%;
    text-align: center;
    color: #666666;
    font-size: 36rpx;
    line-height: 40rpx;
}

.wushujubox .img {
    width: 300rpx;
    height: 300rpx;
    margin: 0 auto;
    margin-bottom: 20rpx;
}

.wushujubox .img>image {
    width: 100%;
    height: 100%;
}