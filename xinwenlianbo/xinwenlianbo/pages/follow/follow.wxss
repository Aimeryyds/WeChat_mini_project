@import "../../templates/audio/audio.wxss";

.hide {
    display: none;
}

.show {
    display: block;
}

.audiobox {
    z-index: 5;
    position: fixed;
    bottom: 103rpx;
    height: 100rpx;
    border: 1rpx solid #ddd;
    border-bottom: 0rpx;
    width: 100%;
    background: #fff;
}

.exceed {
    padding: 0 20rpx;
    font-size: 24rpx;
    color: #fff;
    background-color: #ee2b3d;
    line-height: 60rpx;
}

.closeexceed {
    background: url(data:image/png;base64,) no-repeat;
    background-size: 100%;
    width: 36rpx;
    height: 36rpx;
    float: right;
    margin-top: 16rpx;
}

.content {
}

.tip {
    width: 100%;
    height: 124px;
    position: fixed;
    z-index: 100;
}

.tip image {
    width: 100%;
    height: 124px;
}

.content .dibu {
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 9;
    width: 100%;
    background-color: #fff;
    overflow: hidden;
    box-sizing: border-box;
    border-top: 1rpx solid #dddddd;
    box-shadow: 0px -2px 5px 0px #f3f5f8;
}

.content .dibu .biaoqian {
    height: 54px;
}

.content .dibu .biaoqian view {
    font-size: 28rpx;
    line-height: 54px;
    color: #333333;
    text-align: center;
}

.content .dibu .biaoqian .right text {
    margin-left: 20rpx;
}

.content .ul {
    overflow: hidden;
    font-size: 30rpx;
    line-height: 60rpx;
    padding-left: 40rpx;
}

.content .ul .li {
    float: left;
    padding: 24rpx 0rpx;
    width: 100%;
    box-sizing: border-box;
    border-bottom: 1px solid #e2e8f3;
    color: #467af0;
}

.content .ul .li:last-of-type {
    border-bottom: none;
}

.content .ul .li .left {
    float: left;
    width: 85rpx;
    color: #dddddd;
    padding-left: 5rpx;
}

.content .ul .li .right {
    float: left;
    width: 620rpx;
}

.content .ul .li .key {
    float: left;
    padding: 0 18rpx;
    border: 2rpx solid #e6e7f3;
    border-radius: 15rpx;
}

.content .ul .li .follow {
    float: right;
    color: #467af0;
    padding-left: 32rpx;
    margin-right: 80rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 21rpx 21rpx;
    background-position: left center;
}

.content .ul .li.cancelfollow .right .key {
    background-color: #6992e6;
    color: #fff;
}

.content .ul .li.cancelfollow .follow {
    color: #b5b5b5;
    background: none;
}