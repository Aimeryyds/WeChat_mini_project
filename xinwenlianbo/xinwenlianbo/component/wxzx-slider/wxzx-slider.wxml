<view bindtap="sliderTap" class="slider slider__bg" style="width: {{orientation=='landscape'?width:strokeWidth+clickEnlargeSize}}rpx; height: {{orientation=='landscape'?strokeWidth+clickEnlargeSize:width}}rpx; border-radius: {{radius}}rpx;">
    <wxzx-progress activeColor="{{bufferColor}}" backgroundColor="{{backgroundColor}}" class="slider__progress" orientation="{{orientation}}" percent="{{percent}}" portraitOrientation="{{portraitOrientation}}" radius="{{radius}}" strokeWidth="{{strokeWidth}}" style="top: {{orientation=='landscape'?clickEnlargeSize/2:0}}rpx; left: {{orientation=='landscape'?0:clickEnlargeSize/2}}rpx;" width="{{width}}"></wxzx-progress>
    <view class="slider__line" style="width: {{orientation=='landscape'?value/max*width:strokeWidth}}rpx; height: {{orientation=='landscape'?strokeWidth:value/max*width}}rpx; top: {{portraitOrientation=='bottom'&&orientation=='portrait'?(1-value/max)*width:clickEnlargeSize/2}}rpx; left: {{orientation=='landscape'?0:clickEnlargeSize/2}}rpx; border-radius: {{radius}}rpx; {{orientation=='landscape'?activeLineColor[1]?'background-image: linear-gradient(to right, '+activeLineColor[0]+', '+activeLineColor[1]+');':'background-color:'+activeColor+';':activeLineColor[1]?'background-image: linear-gradient(to top, '+activeLineColor[0]+', '+activeLineColor[1]+');':'background-color:'+activeColor+';'}}"></view>
    <view bindtouchcancel="sliderCancel" bindtouchend="sliderEnd" bindtouchmove="sliderChange" bindtouchstart="sliderStart" class="block__bg" style="width: {{strokeWidth+clickEnlargeSize}}rpx; height: {{strokeWidth+clickEnlargeSize}}rpx; left: {{orientation=='landscape'?-( (strokeWidth+clickEnlargeSize)/2 )+value/max*width:0}}rpx; top: {{orientation=='landscape'?0:(1-value/max)*width-(strokeWidth+clickEnlargeSize)/2}}rpx;">
        <image src="{{blockSrc}}" style="width: {{blockImageWidth}}rpx; height: {{blockImageHeight}}rpx;" wx:if="{{blockSrc!=null&&!isCustom}}"></image>
        <view class="block" style="width: {{blockSize}}rpx; height: {{blockSize}}rpx; background-color: {{blockColor}}; border-radius: {{blockSize/2}}rpx;" wx:if="{{blockSrc==null&&!isCustom}}"></view>
        <slot wx:if="{{isCustom}}"></slot>
    </view>
</view>
