.search-rank .search-rank-banner {
    width: 100%;
    position: relative;
    margin-top: -50rpx;
    color: #222;
}

.search-rank .search-rank-item {
    position: relative;
}

.search-rank .search-rank-item .search-rank-num {
    width: 10.7%;
    font-weight: bold;
    text-align: center;
    display: inline-block;
    font-size: 32rpx;
    line-height: 1.38;
}

.search-rank .search-rank-item .search-rank-name {
    width: 85.3%;
    display: inline-block;
    font-size: 32rpx;
    line-height: 46rpx;
    padding: 27rpx 0;
    box-shadow: inset 0 -1rpx 0 0 #e8e8e8;
}

.search-rank .search-rank-item .tag {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 8%;
    margin: auto;
}

.search-rank .strong {
    color: #f85959;
}

.search-rank .tips {
    display: block;
    font-size: 28rpx;
    text-align: center;
    color: #999;
    padding: 40rpx 60rpx;
}