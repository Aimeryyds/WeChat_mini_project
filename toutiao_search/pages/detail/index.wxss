.canvas-container {
    z-index: 9999;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100vh;
    background: rgba(0,0,0,0.5);
}

.canvas-container .canvas {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    width: 92vw;
    height: 108vw;
}

.canvas-container .tips {
    display: inline-table;
    padding: 20rpx 30rpx;
    color: #fff;
    font-size: 34rpx;
    background: rgba(0,0,0,0.8);
    text-align: center;
    position: absolute;
    left: 50%;
    bottom: 18vw;
    margin: auto;
    line-height: 48rpx;
    border-radius: 44rpx;
    transform: translate(-50%);
}