.bottom-tap {
    z-index: 999;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 100%;
    height: 90rpx;
    box-shadow: 0 -5rpx 10rpx 0 rgba(0,0,0,0.05);
    font-weight: 400;
    background-color: #fff;
    text-align: center;
}

.bottom-tap .share-friend {
    display: inline-block;
    width: 50%;
    color: #505050;
    border-radius: 0;
    border-color: transparent;
    background-color: #fff;
    font-size: 32rpx;
    line-height: 90rpx;
}

.bottom-tap .share-friend::before {
    content: '';
    display: inline-block;
    width: 44rpx;
    height: 44rpx;
    margin-right: 14rpx;
    background: url('data:image/png;base64,') no-repeat center;
    background-size: contain;
    vertical-align: middle;
    line-height: 0;
}

.bottom-tap .share-friend::after {
    border: none;
}

.bottom-tap .share-image {
    vertical-align: top;
    display: inline-block;
    width: 50%;
    height: 90rpx;
    line-height: 90rpx;
    color: #505050;
    position: relative;
    font-size: 32rpx;
}

.bottom-tap .share-image::before {
    content: '';
    display: inline-block;
    width: 44rpx;
    height: 44rpx;
    margin-right: 14rpx;
    background: url('data:image/png;base64,') no-repeat center;
    margin-top: -2rpx;
    background-size: contain;
    vertical-align: middle;
    line-height: 0;
}

.bottom-tap .split-line {
    position: absolute;
    width: 1rpx;
    height: 30rpx;
    left: 0;
    right: 0;
    margin: auto;
    top: 30rpx;
    background: rgba(0,0,0,0.3);
}

.iPhoneX {
    height: 156rpx;
}